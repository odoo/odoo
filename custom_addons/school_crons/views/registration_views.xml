<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--    search settings     -->
    <record id="view_search_registrations" model="ir.ui.view">
        <field name="name">registration.search.view</field>
            <field name="model">school.registration</field>
            <field name="arch" type="xml">
                <search string="Search Course">
                    <field name="student_id"/>
                    <filter string="name" name="student_name_filter" domain="[('student_id.name', '=', 'name')]"/>
<!--                    <field name="batch_id"/>-->
<!--                    <group string="Group By">-->
<!--                        <filter name="no_of_year" string="Years" context="{'group_by': 'no_of_year'}"/>-->
<!--                        <filter name="group_ids" context="{'group_by': 'no_of_year'}"/>-->
<!--                    </group>-->
<!--                    <group string="Group By">-->
<!--                        <filter name="total_seats" string="Student" context="{'group_by': 'total_seats'}"/>-->
<!--                        <filter name="no_of_year" string="No of year" context="{'group_by': 'no_of_year'}"/>-->
<!--                        <filter name="start_year" string="Start Year" context="{'group_by': 'start_year'}"/>-->
<!--                        <filter name="end_year" string="End Year" context="{'group_by': 'end_year'}"/>-->
<!--                    </group>-->
                </search>
            </field>
        </record>

    <!-- Registration Tree View -->
    <record id="registration_tree_view" model="ir.ui.view">
        <field name="name">registration.tree.view</field>
        <field name="model">school.registration</field>
        <field name="arch" type="xml">
            <tree string="Registration Information">
                <field name="sequence" widget="handle"/>
                <field name="rollno"/>
                <field name="student_id"/>
                <field name="admission_date"/>
                <field name="batch_id"/>
            </tree>
        </field>
    </record>

    <!-- Sales Orders Kanban View  -->
    <record model="ir.ui.view" id="view_registration_kanban">
            <field name="name">school.crons.kanban.view</field>
            <field name="model">school.registration</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="student_id"/>
                    <field name="rollno"/>
                    <field name="admission_date"/>
                    <field name="batch_id"/>
                    <field name="course_select"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><span><t t-esc="record.student_id.name"/></span></strong>
                                    </div>
                                    <strong><field name="student_id"/></strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><t t-esc="record.rollno.value" widget="label_selection"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right text-muted">
                                        <span><strong><t t-esc="record.admission_date.value" widget="label_selection"/></strong></span>
                                    </div>
                                    <div class="oe_kanban_middle text-muted mb16">
                                        <span><t t-esc="record.batch_id.value" widget="label_selection"/>
                                            <t t-esc="record.course_select.value" widget="label_selection"/></span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    <!-- Registration form view -->
    <record id="registration_form_view" model="ir.ui.view">
        <field name="name">registration.form.view</field>
        <field name="model">school.registration</field>
        <field name="arch" type="xml">
            <form string="Registration">
<!--                <header>-->
<!--                    <button class="oe_highlight" name="button_done" states="draft" string="Done" type="object"/>-->
<!--                    <button class="oe_highlight" name="button_reset" states="done,cancel" string="Reset to Draft" type="object"/>-->
<!--                    <button name="button_cancel" states="draft,done" string="Cancel" type="object"/>-->
<!--                    <field name="state" statusbar_visible="draft,done" widget="statusbar"/>-->
<!--                </header>-->
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="get_registrations" type="object" class="oe_stat_button" icon="fa-globe icon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">All</span>
                                <span class="o_stat_text">Course</span>
                            </div>
                        </button>
                        <button name="get_batch" type="object" class="oe_stat_button" icon="fa-globe icon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">All</span>
                                <span class="o_stat_text">Batches</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="rollno"/>
                            <field name="admission_date"/>
                        </group>
                        <group>
                            <field name="batch_id"/>
                            <field name="course_id" widget="many2many_tags">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Course Information">
                            <group id='course_selection' string="Select Course" >
                            <field name="course_select"/>
                            <field name="total_seats" attrs="{'invisible':[('course_select', '=', 'course_select')]}"/>
                            <field name="remaining_seats" widget="progressbar" attrs="{'invisible':[('course_select', '=', 'course_select')]}"/>
                        </group>
<!--                            <field name="course_select"/>-->
<!--                            <field name="total_seats"/>-->
<!--                            <field name="remaining_seats"/>-->
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!--    Code Generator for Account-->
    <record id="school_registration_roll_no" model="ir.sequence">
        <field name="name">Roll No</field>
        <field name="code">school.registration</field>
        <field name="active">TRUE</field>
        <field name="prefix">RN</field>
        <field name="padding">3</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- Registration Menu Action -->
    <record id="registration_menu_action" model="ir.actions.act_window">
        <field name="name">registration</field>
        <field name="res_model">school.registration</field>
        <field name="view_mode">tree,form,search,kanban</field>
        <field name="help" type="html">
<!--            <p class="o_view_nocontent_smiling_face">Add Registrations</p>-->
            <p class="o_view_nocontent_empty_folder">Add Registrations</p>
        </field>
    </record>

    <!-- Menu items -->
    <menuitem id="task_menu" name="school cron"/>
    <menuitem action="registration_menu_action" id="school_registration_menu" name="Registration" parent="task_menu" sequence="5"/>
</odoo>