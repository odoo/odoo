<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="register_redirect_wizard_form_action_menu" model="ir.ui.view">
            <field name="name">school.add.student.wizard.form</field>
            <field name="model">school.add.student</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="course_ids"/>
                            <field name="student_ids"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Enter Courses object" name="enter_course_button" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="course_redirect_wizard_action_menu" model="ir.actions.act_window">
            <field name="name">Add Student</field>
            <field name="res_model">school.add.student</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

<!--        for contextual menu (action)-->
        <record id="course_redirect_wizard_action_context" model="ir.actions.act_window">
            <field name="name">open course context m2m</field>
            <field name="res_model">school.add.student</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_school_course"/>
        </record>

    </data>
</odoo>
