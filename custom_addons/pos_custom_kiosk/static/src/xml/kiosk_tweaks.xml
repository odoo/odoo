<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- Add Button to Welcome Screen -->
    <t t-name="pos_custom_kiosk.WelcomeScreen" t-inherit="point_of_sale.WelcomeScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('welcome-screen-content')]" position="inside">
            <div class="button back-to-website" t-on-click="() => this.goBackToWebsite()">
                <i class="fa fa-home"/> Back to Website
            </div>
        </xpath>
    </t>

    <!-- Add Button to Ticket Screen (after order) -->
    <t t-name="pos_custom_kiosk.TicketScreen" t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
         <xpath expr="//div[hasclass('controls')]" position="inside">
            <div class="button back-to-website" t-on-click="() => this.goBackToWebsite()">
                <i class="fa fa-home"/> Finish &amp; Return Home
            </div>
        </xpath>
    </t>

</templates>
