<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_daily_summary_tree" model="ir.ui.view">
            <field name="name">daily.summary.tree</field>
            <field name="model">daily.summary</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Daily Summaries">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="state"/>
                    <field name="reviewed"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_daily_summary_form" model="ir.ui.view">
            <field name="name">daily.summary.form</field>
            <field name="model">daily.summary</field>
            <field name="arch" type="xml">
                <form string="Daily Work Summary">
                    <header>
                        <button name="action_submit" string="Submit for Review" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_review" string="Mark as Reviewed" type="object" class="oe_highlight" invisible="state != 'submitted'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Summary Title"/>
                            <h1><field name="name" placeholder="Enter a descriptive title..."/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" string="Summary Date"/>
                                <field name="employee_id" string="Employee Name"/>
                            </group>
                            <group>
                                <field name="reviewed" string="Review Status" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Work Summary">
                                <field name="work_description" placeholder="Describe your daily work activities here..."/>
                            </page>
                            <page string="Reviews" invisible="state == 'draft'">
                                <field name="review_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_daily_summary" model="ir.actions.act_window">
            <field name="name">Daily Summaries</field>
            <field name="res_model">daily.summary</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first daily summary
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_daily_summary_root"
                  name="Daily Summary"
                  sequence="10"
                  groups="base.group_user"
                  action="action_daily_summary"/>
    </data>
</odoo>
