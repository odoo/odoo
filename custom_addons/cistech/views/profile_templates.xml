<odoo>
    <!-- Custom User Profile Template with simpler t-call syntax -->
    <template id="custom_user_profile" name="Custom User Profile">
        <t t-name="cistech.custom_user_profile">
            <t t-call="website.layout">
                <div class="container mt-5 o_custom_profile_page">
                    <!-- User Info -->
                    <div class="row text-center">
                        <div class="col-md-12">
                            <div class="profile-avatar mb-3">
                                <img src="/web/static/img/user_placeholder.png" class="rounded-circle" width="120" height="120" alt="Профиль"/>
                            </div>
                            <h2 t-esc="user.name" class="mt-3">Nickname</h2>
                            <p><i class="fa fa-envelope me-2"></i> <span t-esc="user.email or 'Не указан'"/></p>
                            <p><i class="fa fa-phone me-2"></i> <span t-esc="user.phone or 'Не указан'"/></p>
                            <p><i class="fa fa-map-marker me-2"></i> <span t-esc="user.partner_id.contact_address or 'Адрес не указан'"/></p>
                            <a href="/profile/edit" class="btn btn-primary mt-3"><i class="fa fa-edit me-1"></i> Редактировать профиль</a>
                        </div>
                    </div>

                    <!-- Navigation Buttons -->
                    <div class="button-group-container mt-5">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <a href="/user/orders/status" class="btn btn-warning w-100">
                                    <i class="fa fa-truck me-2"></i> Статус заказов
                                </a>
                            </div>
                            <div class="col-md-4 text-center">
                                <a href="/user/orders/history" class="btn btn-warning w-100">
                                    <i class="fa fa-history me-2"></i> История заказов
                                </a>
                            </div>
                            <div class="col-md-4 text-center">
                                <a href="/user/orders/returns" class="btn btn-warning w-100">
                                    <i class="fa fa-undo me-2"></i> Возвраты
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="button-group-container mt-4">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <button class="btn btn-warning w-100">
                                    <i class="fa fa-wallet me-2"></i> Кошелек
                                </button>
                            </div>
                            <div class="col-md-4 text-center">
                                <a href="/shop/checkout" class="btn btn-warning w-100">
                                    <i class="fa fa-shipping-fast me-2"></i> Адрес доставки
                                </a>
                            </div>
                            <div class="col-md-4 text-center">
                                <button class="btn btn-warning w-100">
                                    <i class="fa fa-dollar-sign me-2"></i> Изменить валюту
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="button-group-container mt-4">
                        <div class="row">
                            <div class="col-md-6 text-center">
                                <a href="/seller_reg" class="btn btn-warning w-100">
                                    <i class="fa fa-store me-2"></i> Открыть магазин
                                </a>
                            </div>
                            <div class="col-md-6 text-center">
                                <button class="btn btn-warning w-100">
                                    <i class="fa fa-file-invoice-dollar me-2"></i> Бухгалтерия и налоги
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="edit_user_profile" name="Edit User Profile">
        <t t-call="website.layout">
            <div class="container mt-5 o_custom_profile_page">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white">
                                <h2 class="mb-0"><i class="fa fa-user-edit me-2"></i> Редактирование профиля</h2>
                            </div>
                            <div class="card-body">
                                <form method="post" action="/profile/save">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />

                                    <div class="mb-3">
                                        <label for="name" class="form-label">Имя</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                            <input type="text" id="name" name="name" class="form-control" t-att-value="user.name" />
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                            <input type="email" id="email" name="email" class="form-control" t-att-value="user.email" />
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="phone" class="form-label">Телефон</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                            <input type="text" id="phone" name="phone" class="form-control" t-att-value="user.phone" />
                                        </div>
                                    </div>

                                    <!-- Password Change Fields -->
                                    <div class="mt-4 mb-2">
                                        <h5><i class="fa fa-lock me-2"></i> Изменить пароль</h5>
                                    </div>
                                    <div class="mb-3">
                                        <label for="new_password" class="form-label">Новый пароль</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fa fa-key"></i></span>
                                            <input type="password" id="new_password" name="new_password" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="confirm_password" class="form-label">Подтвердите пароль</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fa fa-check"></i></span>
                                            <input type="password" id="confirm_password" name="confirm_password" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex mt-4">
                                        <button type="submit" class="btn btn-success me-2"><i class="fa fa-save me-1"></i> Сохранить</button>
                                        <a href="/profile" class="btn btn-secondary"><i class="fa fa-times me-1"></i> Отмена</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <template id="user_order_status" name="Order Status">
        <t t-call="website.layout">
            <div class="container mt-5 o_custom_profile_page">
                <div class="d-flex align-items-center mb-4">
                    <a href="/profile" class="btn btn-secondary me-3"><i class="fa fa-arrow-left"></i></a>
                    <h3 class="mb-0"><i class="fa fa-truck me-2"></i> Статус заказов</h3>
                </div>
                
                <div t-if="not orders" class="alert alert-info">
                    <i class="fa fa-info-circle me-2"></i> У вас пока нет активных заказов.
                </div>
                
                <div class="row" t-foreach="orders" t-as="order">
                    <div class="col-md-12 mb-3">
                        <div class="card shadow-sm p-3 d-flex flex-row align-items-center">
                            <img t-att-src="order.image_url" class="img-thumbnail rounded me-3" style="width: 100px; height: 100px; object-fit: contain;" />
                            <div class="flex-grow-1">
                                <h5 t-esc="order.name">Product Name</h5>
                                <p class="mb-1"><strong>Количество:</strong> <t t-esc="order.quantity" /></p>
                                <p class="mb-0"><strong>Статус:</strong> <span class="badge bg-info" t-esc="order.status">Pending Shipment</span></p>
                            </div>
                            <div class="order-actions">
                                <button class="btn btn-sm btn-outline-primary"><i class="fa fa-eye"></i> Детали</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <template id="user_order_history" name="Order History">
        <t t-call="website.layout">
            <div class="container mt-5 o_custom_profile_page">
                <div class="d-flex align-items-center mb-4">
                    <a href="/profile" class="btn btn-secondary me-3"><i class="fa fa-arrow-left"></i></a>
                    <h3 class="mb-0"><i class="fa fa-history me-2"></i> История заказов</h3>
                </div>
                
                <div t-if="not orders" class="alert alert-info">
                    <i class="fa fa-info-circle me-2"></i> У вас пока нет завершенных заказов.
                </div>
                
                <div class="row" t-foreach="orders" t-as="order">
                    <div class="col-md-12 mb-3">
                        <div class="card shadow-sm p-3 d-flex flex-row align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <img t-att-src="order.image_url" class="img-thumbnail rounded me-3" style="width: 100px; height: 100px; object-fit: contain;" />
                                <div>
                                    <h5 t-esc="order.name">Product Name</h5>
                                    <p class="mb-1"><strong>Количество:</strong> <t t-esc="order.quantity" /></p>
                                    <p class="mb-0"><strong>Статус:</strong> <span class="badge bg-success" t-esc="order.status">Delivered</span></p>
                                </div>
                            </div>
                            <div class="text-end">
                                <p class="mb-1"><strong>Дата:</strong> <t t-esc="order.date_order" /></p>
                                <p class="mb-1"><strong>Время:</strong> <t t-esc="order.time_order" /></p>
                                <button class="btn btn-sm btn-outline-primary mt-2"><i class="fa fa-redo"></i> Повторить заказ</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <template id="user_order_returns" name="Returns">
        <t t-call="website.layout">
            <div class="container mt-5 o_custom_profile_page">
                <div class="d-flex align-items-center mb-4">
                    <a href="/profile" class="btn btn-secondary me-3"><i class="fa fa-arrow-left"></i></a>
                    <h3 class="mb-0"><i class="fa fa-undo me-2"></i> Возвраты</h3>
                </div>
                
                <div t-if="not returns" class="alert alert-info">
                    <i class="fa fa-info-circle me-2"></i> У вас пока нет возвратов.
                </div>
                
                <div class="row" t-foreach="returns" t-as="ret">
                    <div class="col-md-12 mb-3">
                        <div class="card shadow-sm p-3 d-flex flex-row align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <img t-att-src="ret.image_url" class="img-thumbnail rounded me-3" style="width: 100px; height: 100px; object-fit: contain;" />
                                <div>
                                    <h5 t-esc="ret.name">Product Name</h5>
                                    <p class="mb-1"><strong>Количество:</strong> <t t-esc="ret.quantity" /></p>
                                    <p class="mb-0"><strong>Статус:</strong> <span class="badge bg-warning" t-esc="ret.status">Return Requested</span></p>
                                </div>
                            </div>
                            <div class="text-end">
                                <p class="mb-1"><strong>Дата:</strong> <t t-esc="ret.date_return" /></p>
                                <p class="mb-1"><strong>Время:</strong> <t t-esc="ret.time_return" /></p>
                                <button class="btn btn-sm btn-outline-primary mt-2"><i class="fa fa-eye"></i> Детали возврата</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo> 