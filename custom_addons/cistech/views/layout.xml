<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Мобильная навигация - используем более точный XPath -->
    <template id="website_layout_mobile_nav" inherit_id="website.layout" name="Mobile Navigation">
        <xpath expr="//div[@id='wrapwrap']/footer" position="before">
            <nav class="o_mobile_bottom_nav d-lg-none" style="z-index: 1000; position: fixed; bottom: 0; left: 0; right: 0; background-color: white; padding: 10px 0; border-top: 1px solid #e0e0e0;">
                <div class="container d-flex justify-content-around">
                    <a href="/shop" class="text-center">
                        <i class="fa fa-home d-block" style="color: #ff7404; font-size: 1.5rem;"></i>
                        <span>Магазин</span>
                    </a>
                    <a href="/shop/cart" class="text-center position-relative">
                        <i class="fa fa-shopping-cart d-block" style="color: #ff7404; font-size: 1.5rem;"></i>
                        <span>Корзина</span>
                        <span t-if="website_sale_order and website_sale_order.cart_quantity" 
                              class="badge rounded-pill bg-primary" 
                              style="position: absolute; top: 0; right: 0; transform: translate(50%, -50%);">
                            <t t-esc="website_sale_order.cart_quantity"/>
                        </span>
                    </a>
                    <a href="/profile" class="text-center">
                        <i class="fa fa-user d-block" style="color: #ff7404; font-size: 1.5rem;"></i>
                        <span>Профиль</span>
                    </a>
                </div>
            </nav>
        </xpath>
    </template>

    <!-- Иконки для навигации - убираем d-none классы, чтобы иконки отображались -->
    <template id="header_navbar_icons" inherit_id="website.navbar_nav" name="Header Navbar Icons">
        <xpath expr="." position="inside">
            <li class="nav-item">
                <a href="/shop" class="nav-link">
                    <i class="fa fa-home" style="color: #ff7404; font-size: 20px;"></i>
                </a>
            </li>
            <li class="nav-item">
                <a href="/profile" class="nav-link">
                    <i class="fa fa-user" style="color: #ff7404; font-size: 20px;"></i>
                </a>
            </li>
            <li class="nav-item">
                <a href="/shop/cart" class="nav-link position-relative">
                    <i class="fa fa-shopping-cart" style="color: #ff7404; font-size: 20px;"></i>
                    <span t-if="website_sale_order and website_sale_order.cart_quantity" 
                          class="badge rounded-pill bg-primary" 
                          style="position: absolute; top: 0; right: 0;">
                        <t t-esc="website_sale_order.cart_quantity"/>
                    </span>
                </a>
            </li>
        </xpath>
    </template>
</odoo> 