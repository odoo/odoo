<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Custom Model Form View -->
    <record id="view_cistech_custom_model_form" model="ir.ui.view">
        <field name="name">cistech.custom.model.form</field>
        <field name="model">cistech.custom.model</field>
        <field name="arch" type="xml">
            <form string="Custom Model">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Custom Model Tree View -->
    <record id="view_cistech_custom_model_tree" model="ir.ui.view">
        <field name="name">cistech.custom.model.tree</field>
        <field name="model">cistech.custom.model</field>
        <field name="arch" type="xml">
            <tree string="Custom Models">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Custom Model Search View -->
    <record id="view_cistech_custom_model_search" model="ir.ui.view">
        <field name="name">cistech.custom.model.search</field>
        <field name="model">cistech.custom.model</field>
        <field name="arch" type="xml">
            <search string="Search Custom Models">
                <field name="name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Custom Model Action -->
    <record id="action_cistech_custom_model" model="ir.actions.act_window">
        <field name="name">Custom Models</field>
        <field name="res_model">cistech.custom.model</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_cistech_custom_model_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first custom model!
            </p>
        </field>
    </record>

    <!-- Custom Model Menu -->
    <menuitem id="menu_cistech_custom_model"
              name="Custom Models"
              action="action_cistech_custom_model"
              parent="cistech.seller_root"
              sequence="100"/>
</odoo> 