<odoo>
    <data>
        <record id="product_template_form_inherit_extension" model="ir.ui.view">
            <field name="name">product.template.inherit.extension</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_general']" position="inside">
                    <field name="item_category" placeholder='Categoría'/>
                    <field name="item_brand" placeholder='Marca del producto'/>
                    <field name="item_model" placeholder='Modelo'/>
                    <field name="item_description" placeholder='Descripción del producto...'/>
                    <field name="item_stock" placeholder='Stock disponible'/>
                    <field name="item_amount" placeholder='Cantidad esperada'/>
                    <field name="item_delivery_lead" placeholder='Días de entrega'/>
                </xpath>
                <xpath expr="//button[@name='action_update_quantity_on_hand']" position="before">
                    <button string="Guardar" type="object" name="action_save_product" class="btn-primary"/>
                </xpath>
                <xpath expr="//button[@name='action_update_quantity_on_hand']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>      
            </field>
            
        </record>
        <record id="product_kanban_view_inherit_add_item_description" model="ir.ui.view">
            <field name="name">product.kanban.view.inherit.add.item.description</field>
            <field name="model">product.template</field> <field name="inherit_id" ref="product.product_template_kanban_view"/> <field name="arch" type="xml">
                <xpath expr="//span[field[@name='list_price']]" position="after">
                    <div class="mt-2"> 
                        <field name="item_description" class="o_text_overflow"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
