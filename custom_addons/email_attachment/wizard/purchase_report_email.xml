<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_inherit_purchase_email_report" model="ir.ui.view">
            <field name="name">purchase report inherit for email</field>
            <field name="model">report.stock.inventory.wizard</field>
            <field name="inherit_id" ref="qweb_report.report_stock_inventory_wizard_action_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//group//group[@name='product_ids']" position="after">
                    <field name="partner_id" widget="many2many_tags" options="{'no_quick_create':True}"/>
                </xpath>
                <xpath expr="//footer//button[@name='print_report']" position="after">
                    <button name="send_email" type="object" class="btn btn-info" string="Send Email"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
