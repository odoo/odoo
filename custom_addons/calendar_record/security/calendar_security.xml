<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_calendar_record" model="ir.module.category">
            <field name="name">calendar rule</field>
            <field name="description">Category for calendar record</field>
            <field name="sequence">45</field>
        </record>

        <record id="module_category_calendar_record_nedit" model="ir.module.category">
            <field name="name">calendar nedit</field>
            <field name="description">Category for calendar record nedit</field>
            <field name="sequence">46</field>
        </record>

        <record id="group_calendar_record_employee" model="res.groups">
            <field name="name">calendar record employee</field>
            <field name="category_id" ref="module_category_calendar_record"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_calendar_record_own_user" model="res.groups">
            <field name="name">calendar record Own user</field>
            <field name="category_id" ref="module_category_calendar_record_nedit"/>
            <field name="implied_ids" eval="[(4, ref('group_calendar_record_employee'))]"/>
        </record>

        <record id="group_calendar_record_admin" model="res.groups">
            <field name="name">calendar record admin</field>
            <field name="category_id" ref="module_category_calendar_record"/>
            <field eval="[(4,ref('group_calendar_record_employee'))]" name="implied_ids"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <function model="ir.model.data" name="write">
            <function model="ir.model.data" name="search">
                <value eval="[('module', '=', 'calendar'), ('name', '=', 'calendar_event_rule_employee')]"/>
            </function>
            <value eval="{'noupdate': False}"/>
        </function>

        <record id="calendar_event_rule_employee" model="ir.rule">
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="name">All Calendar Event for employees</field>
            <field name="domain_force">[('partner_ids', 'in', user.partner_id.id)]</field>
            <field eval="[(4,ref('calendar_record.group_calendar_record_employee'))]" name="groups"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- set the no update to True again -->
        <function model="ir.model.data" name="write">
            <function model="ir.model.data" name="search">
                <value eval="[('module', '=', 'calendar'), ('name', '=', 'calendar_event_rule_employee')]"/>
            </function>
            <value eval="{'noupdate': True}"/>
        </function>

        <record id="calendar_event_rule_own_editing" model="ir.rule">
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="name">own editable meeting</field>
            <field name="domain_force">[('create_uid', '=', user.id),('partner_ids', 'in', user.partner_id.id)]</field>
            <field eval="[(4,ref('calendar_record.group_calendar_record_own_user'))]" name="groups"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

         <record id="calendar_event_rule_admin" model="ir.rule">
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="name">All Calendar Event for admin</field>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field eval="[(4,ref('calendar_record.group_calendar_record_admin'))]" name="groups"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>


    </data>
</odoo>
