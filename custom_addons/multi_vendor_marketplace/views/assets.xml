<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define a standalone asset bundle for seller profile CSS -->
    <template id="seller_profile_assets" name="Seller Profile Assets">
        <link rel="stylesheet" href="/multi_vendor_marketplace/static/src/css/seller_profile.css"/>
    </template>
    
    <!-- Add CSS to website layout -->
    <template id="layout_assets_seller_profile" inherit_id="website.layout">
        <xpath expr="//head" position="inside">
            <link rel="stylesheet" href="/multi_vendor_marketplace/static/src/css/seller_profile.css"/>
            <link rel="stylesheet" href="/multi_vendor_marketplace/static/src/css/mobile_nav.css"/>
            <!-- Add our clean variant styling with highest priority -->
            <link rel="stylesheet" href="/multi_vendor_marketplace/static/src/css/product_variant_overlay.css"/>
            <link rel="stylesheet" href="/multi_vendor_marketplace/static/src/css/clean_variants.css"/>
        </xpath>
    </template>
    
    <!-- Add our custom JavaScript -->
    <template id="product_variants_assets" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/multi_vendor_marketplace/static/src/js/product_variants.js"></script>
        </xpath>
    </template>
</odoo>