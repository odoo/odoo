<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Template for for seller registration-->
    <template id="multi_vendor_marketplace.fields" name="seller reg">
        <div class="mb-3 field-name">
            <label for="name">ФИО</label>
            <input type="text" name="name" id="name"
                   class="form-control form-control-sm"
                   placeholder="Введите ФИО"
                   required="required"/>
        </div>
        <div class="mb-3 field-phone">
            <label for="phone">Телефон</label>
            <input type="text" name="phone" id="phone"
                   class="form-control form-control-sm"
                   placeholder="Введите номер телефона"
                   required="required"/>
        </div>
        <div class="mb-3 field-country">
            <label for="country">Страна</label>
            <select name="country" id="country" class="form-control s_website_form_input" required="required">
                <option value="kg">Кыргызстан</option>
                <option value="az">Азербайджан</option>
                <option value="am">Армения</option>
                <option value="by">Беларусь</option>
                <option value="kz">Казахстан</option>
                <option value="md">Молдова</option>
                <option value="ru">Россия</option>
                <option value="tj">Таджикистан</option>
                <option value="uz">Узбекистан</option>
                <option value="cn">Китай</option>
            </select>
        </div>
    </template>
    <template id="mark" name="Sign up login">
        <t t-call="web.login_layout">
            <form class="oe_signup_form" role="form" method="post" t-if="not message">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <t t-call="multi_vendor_marketplace.fields"/>
                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>
                <input type="hidden" name="redirect" t-att-value="redirect"/>
                <input type="hidden" name="token" t-att-value="token"/>
                <div class="text-center oe_login_buttons d-grid pt-3">
                    <button id="yayay" class="btn btn-primary">ОТКРЫТЬ МАГАЗИН</button>
                </div>
            </form>
        </t>
    </template>
</odoo>
