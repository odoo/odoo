<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- First template to add necessary placeholders for compatibility -->
    <template id="placeholder_for_terms" name="Placeholder for Terms and Share" inherit_id="website_sale.product" active="True" priority="5">
        <xpath expr="//section[@id='product_detail']" position="inside">
            <!-- Add placeholder div for other templates to target -->
            <div id="o_product_terms_and_share" class="d-none"/>
        </xpath>
    </template>
    
    <!-- Complete redesign of product page to match the provided design -->
    <template id="cistech_product_detail" name="Cistech Product Detail" inherit_id="website_sale.product" priority="10">
        <xpath expr="//section[@id='product_detail']" position="replace">
            <section class="container cistech-product-detail py-4" id="product_detail">
                <!-- Store Header with navigation -->
                <div class="text-center mb-4">
                    <a t-att-href="'/'" class="text-decoration-none">
                        <div class="mb-2">
                            <span class="small text-muted">https://cistech.store</span>
                        </div>
                        <h2 class="mb-3" style="color: #333; font-weight: bold;">CISTECH</h2>
                    </a>
                    <div class="mb-4">
                        <span class="mx-2">О нас</span>
                        <span class="mx-2">Избранное</span>
                        <span class="mx-2">Настройки</span>
                    </div>
                    
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <button class="btn btn-light rounded-pill px-4 me-2" style="background-color: #e0e0e0;">Каталог</button>
                        <div class="position-relative d-flex align-items-center flex-grow-1 mx-2" style="max-width: 400px;">
                            <input type="text" class="form-control rounded-pill" style="height: 40px; border: 1px solid #ccc;"/>
                            <button class="btn position-absolute end-0 me-1" style="width: 30px; height: 30px; border-radius: 50%; background: #ccc; top: 5px;">
                                <i class="fa fa-search" style="color: #fff;"></i>
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Product Main Content -->
                <div>
                    <h3 class="mb-4">Наименование товара</h3>
                    
                    <div class="row">
                        <!-- Product Images - Left Side -->
                        <div class="col-md-5">
                            <div class="cistech-product-image mb-3">
                                <div class="main-image border rounded" style="height: 320px; display: flex; align-items: center; justify-content: center;">
                                    <div t-if="product.image_1920" class="text-center">
                                        <img t-att-src="image_data_uri(product.image_1920)" class="img-fluid" style="max-height: 300px;" t-att-alt="product.name"/>
                                    </div>
                                    <div t-else="" class="text-center text-muted">
                                        <div>Фото и / или видео</div>
                                    </div>
                                </div>
                                
                                <!-- Thumbnail Gallery -->
                                <div class="d-flex mt-2 justify-content-between">
                                    <div class="border" style="width: 60px; height: 60px;"></div>
                                    <div class="border" style="width: 60px; height: 60px;"></div>
                                    <div class="border" style="width: 60px; height: 60px;"></div>
                                    <div class="border" style="width: 60px; height: 60px;"></div>
                                </div>
                            </div>
                            
                            <!-- Technical Specifications -->
                            <div class="mt-4">
                                <h5 class="mb-3">Технические характеристики</h5>
                                <table class="table table-striped">
                                    <tr>
                                        <td style="width: 30%;">Модель</td>
                                        <td>xxx</td>
                                    </tr>
                                    <tr>
                                        <td>Размер</td>
                                        <td>xxx</td>
                                    </tr>
                                    <tr>
                                        <td>Вес и так далее</td>
                                        <td>xxx</td>
                                    </tr>
                                </table>
                            </div>
                            
                            <!-- Lower Image Placeholder -->
                            <div class="text-center mt-4 py-4 bg-light" style="border-radius: 5px;">
                                <div class="mb-2">
                                    <i class="fa fa-camera" style="font-size: 24px; color: #777;"></i>
                                </div>
                                <p class="text-muted">Здесь будут картинки / видео</p>
                            </div>
                            
                            <!-- Store Link -->
                            <div class="text-center mt-3">
                                <a href="#" class="btn btn-secondary rounded-pill px-4 py-2">Перейти в магазин</a>
                            </div>
                        </div>
                        
                        <!-- Product Info - Right Side -->
                        <div class="col-md-7">
                            <!-- Seller Information -->
                            <div class="mb-4">
                                <table class="table table-borderless">
                                    <tr>
                                        <td style="width: 40%;">Название организации:</td>
                                        <td t-esc="product.seller_id.name or 'Название компании'"></td>
                                    </tr>
                                    <tr>
                                        <td>Место отправки:</td>
                                        <td>Москва</td>
                                    </tr>
                                    <tr>
                                        <td>Оплата:</td>
                                        <td>mbank | перевод | наличный расчет</td>
                                    </tr>
                                    <tr>
                                        <td>Следующее:</td>
                                        <td>сегодня до 19:00</td>
                                    </tr>
                                    <tr>
                                        <td>С доставкой:</td>
                                        <td>завтра до обеда + 200 сом</td>
                                    </tr>
                                    <tr>
                                        <td>На складе осталось:</td>
                                        <td>xxx штук</td>
                                    </tr>
                                </table>
                            </div>
                            
                            <!-- Price and Action Buttons -->
                            <div>
                                <h2 class="text-end mb-4">Цена</h2>
                                
                                <form t-if="product._is_add_to_cart_possible()" action="/shop/cart/update" method="POST" class="mb-4">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="product_id" t-att-value="product_variant.id"/>
                                    <input type="hidden" name="add_qty" value="1"/>
                                    
                                    <div class="d-grid gap-3 cistech-action-buttons">
                                        <button type="submit" name="express" value="1" class="btn btn-success btn-lg">
                                            Купить сейчас
                                        </button>
                                        <button type="submit" class="btn btn-success btn-lg">
                                            В корзину
                                        </button>
                                        <a href="#" class="btn btn-success btn-lg">
                                            <div>Связаться с магазином</div>
                                            <small>(viber ww whatsapp / calls)</small>
                                        </a>
                                    </div>
                                </form>
                                <p t-else="" class="alert alert-warning">Товар недоступен для покупки.</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Related Products -->
                    <div class="mt-5">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="border rounded p-3 text-center">
                                    <div>Другие товары продавца</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border rounded p-3 text-center">
                                    <div>Другие товары продавца</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border rounded p-3 text-center">
                                    <div>Другие товары продавца</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border rounded p-3 text-center">
                                    <div>Другие товары продавца</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <style>
                    /* Custom styles for Cistech layout */
                    .cistech-product-detail .btn-success {
                        background-color: #00A86B !important;
                        border-color: #00A86B !important;
                    }
                    
                    .cistech-product-detail .table-striped > tbody > tr:nth-of-type(odd) > * {
                        background-color: rgba(0, 0, 0, 0.02);
                    }
                    
                    .cistech-product-detail .btn-secondary {
                        background-color: #888;
                        border-color: #888;
                    }
                </style>
            </section>
        </xpath>
    </template>
</odoo> 