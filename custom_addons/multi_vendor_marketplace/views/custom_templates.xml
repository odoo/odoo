    <!-- Hide empty cart message - More aggressive approach -->
    <template id="hide_empty_cart_message" inherit_id="website_sale.cart">
        <xpath expr="//div[hasclass('oe_cart')]" position="before">
            <style>
                /* Super aggressive CSS to hide the cart empty message */
                .js_cart_lines.alert,
                .js_cart_lines.alert-info,
                div.js_cart_lines,
                div[class*="js_cart_lines"],
                div[class*="alert-info"],
                div:contains("Your cart is empty"),
                div:contains("Ваша корзина пуста"),
                .js_cart_lines {
                    display: none !important;
                    visibility: hidden !important;
                    height: 0 !important;
                    padding: 0 !important;
                    margin: 0 !important;
                    border: none !important;
                    overflow: hidden !important;
                }
            </style>
            <script type="text/javascript">
                // JavaScript to aggressively hide the cart empty message
                document.addEventListener('DOMContentLoaded', function() {
                    function hideEmptyCartMessage() {
                        // Find all possible empty cart messages
                        var messages = document.querySelectorAll('.js_cart_lines, .alert-info, .oe_cart > div.alert');
                        if (messages) {
                            messages.forEach(function(msg) {
                                var text = msg.textContent.toLowerCase();
                                if (text.includes('empty') || text.includes('пуст')) {
                                    msg.style.display = 'none';
                                    msg.style.visibility = 'hidden';
                                    msg.style.height = '0';
                                    msg.style.padding = '0';
                                    msg.style.margin = '0';
                                    msg.style.border = 'none';
                                }
                            });
                        }
                    }
                    
                    // Run immediately and after a short delay
                    hideEmptyCartMessage();
                    setTimeout(hideEmptyCartMessage, 100);
                    setTimeout(hideEmptyCartMessage, 500);
                });
            </script>
        </xpath>
    </template>

