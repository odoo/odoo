<odoo>
    <record id="pos_config_view_form_delivery" model="ir.ui.view">
        <field name="name">pos.config.form.delivery</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[hasclass('o_settings_container')][last()]" position="after">
                <h2>Online Orders &amp; Delivery</h2>

                <!-- Delivery / Virtual POS -->
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_delivery_config"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_delivery_config"/>
                            <div class="text-muted">
                                Dedicated POS for online / aggregator orders.
                                Session is auto-opened and cannot be closed manually.
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Physical POS -->
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="accept_remote_orders"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="accept_remote_orders"/>
                            <div class="text-muted">
                                Allow this physical POS to receive and print
                                online / aggregator orders.
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
