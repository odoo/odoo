<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="group_employee_portal_user" model="res.groups">
            <field name="name">Employee Portal User</field>
            
        </record>
        <record id="group_employee_portal_manager" model="res.groups">
            <field name="name">Employee Portal Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_employee_portal_user'))]"/>
        </record>

        <!-- Board posts: employees can see their company posts -->
        <record id="rule_employee_board_post_user" model="ir.rule">
            <field name="name">Employee Board Post User</field>
            <field name="model_id" ref="model_employee_board_post"/>
            <field name="groups" eval="[(4, ref('group_employee_portal_user'))]"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
        </record>
        <record id="rule_employee_board_post_manager" model="ir.rule">
            <field name="name">Employee Board Post Manager</field>
            <field name="model_id" ref="model_employee_board_post"/>
            <field name="groups" eval="[(4, ref('group_employee_portal_manager'))]"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
        </record>

        <!-- Tasks: users see only their own tasks; managers see all in company -->
        <record id="rule_employee_task_user" model="ir.rule">
            <field name="name">Employee Task User</field>
            <field name="model_id" ref="model_employee_task"/>
            <field name="groups" eval="[(4, ref('group_employee_portal_user'))]"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        </record>

        <record id="rule_employee_task_manager" model="ir.rule">
            <field name="name">Employee Task Manager</field>
            <field name="model_id" ref="model_employee_task"/>
            <field name="groups" eval="[(4, ref('group_employee_portal_manager'))]"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
        </record>

        <record id="employee_portal_privilege" model="res.groups.privilege">
            <field name="name">Employee Portal</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <record id="group_employee_portal_user" model="res.groups">
            <field name="name">Employee Portal User</field>
            <field name="privilege_id" ref="employee_portal_privilege"/>
        </record>

        <record id="group_employee_portal_manager" model="res.groups">
            <field name="name">Employee Portal Manager</field>
            <field name="privilege_id" ref="employee_portal_privilege"/>
            <field name="implied_ids" eval="[(4, ref('group_employee_portal_user'))]"/>
        </record>

    </data>
</odoo>
