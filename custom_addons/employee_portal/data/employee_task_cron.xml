<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- 日次でタスク生成を実行するcron。model.cron_generate_tasks() を呼び出す -->
        <record id="ir_cron_employee_task_generate" model="ir.cron">
            <field name="name">従業員タスク生成</field>
            <field name="model_id" ref="model_employee_task"/>
            <field name="state">code</field>
            <field name="code">model.cron_generate_tasks()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
