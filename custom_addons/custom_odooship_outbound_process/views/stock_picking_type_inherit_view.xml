<?xml version="1.0" encoding="utf-8"?>
<!-- Inherit the stock.picking.type form view to add the Process Type field -->
<odoo>
    <record id="view_picking_type_form_inherit_process_type" model="ir.ui.view">
        <field name="name">stock.picking.type.form.inherit.process.type</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_backorder']" position="after">
                <field name="picking_process_type"/>
            </xpath>
        </field>
    </record>
</odoo>

