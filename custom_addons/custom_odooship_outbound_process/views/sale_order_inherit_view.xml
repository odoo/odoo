<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_serial_line_id" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.serial.line.id</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delivery_status']" position="after">
                <field name="message_code"/>
                <field name="docs"/>
                <field name="items"/>
                <field name="shipmentid"/>
            </xpath>
            <xpath expr="//field[@name='source_id']" position="after">
                <field name="discrete_pick"/>
                <field name="automation_manual_order"/>
                <field name="slsu"/>
                <field name="is_international"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="serial_number"/>
                <field name="line_item_id"/>
                <field name="packed_qty"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form" position="inside">
                <field name="serial_number"/>
                <field name="line_item_id"/>
                <field name="packed_qty"/>
            </xpath>
        </field>
    </record>
</odoo>
