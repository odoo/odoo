<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Custom Pack App Wizard for Outbound process-->
    <record id="view_custom_pack_app_wizard_form" model="ir.ui.view">
        <field name="name">custom.pack.app.wizard.form</field>
        <field name="model">custom.pack.app.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Packing Details">
                <sheet>
                    <group>
                        <group>
                            <field name="pc_container_code_ids"
                                   widget="many2many_tags"
                                   placeholder="Scan tote barcode(s)…"
                                   options="{'no_create': True}"
                                   required="1"/>
                            <field name="scanned_sku"
                                   nolabel="0"
                                   placeholder="Scan SKU barcode…"
                                   class="oe_inline"
                                   options="{'no_create': True}"/>
                            <field name="warehouse_id"
                                   options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="line_count" invisible="1"/>
                            <field name="updated_line_count" invisible="1"/>
                        </group>
                        <group>
                            <field name="site_code_id"
                                   readonly="1"
                                   options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="pack_bench_id"
                                   readonly="1"
                                   options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="tenant_code_id"
                                   readonly="1"
                                   options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="show_package_box_in_lines" invisible="True"/>
                            <field name="next_package_number" invisible="True"/>
                            <field name="confirm_increment" invisible="1"/>
                            <field name="total_line_items" readonly="1"/>
                        </group>
                    </group>
                    <group>
                    </group>
                    <group>
                        <group>
                            <field name="picking_ids"
                                   force_save="1"
                                   readonly="1"
                                   options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}"
                                   widget="many2many_tags"/>
                            <field name="sale_order_ids" widget="many2many_tags" readonly="1"/>
                        </group>
                        <group>
                            <button name="increment_package_number"
                                    type="object"
                                    string="Add New Package"
                                    invisible="show_package_box_in_lines == True"
                                    class="btn-primary"/>
                            <!--                                    confirm="Are you sure you want to add a new package number?"/>-->
                        </group>
                    </group>
                    <group>
                        <field name="message_text"
                               readonly="1"
                               role="alert"
                               widget="text"
                               class="alert alert-warning text-center fw-bold blink"
                               style="white-space: pre-wrap; text-align: center; font-weight: bold;"
                               modifiers="{'invisible': [['show_message', '=', False]]}"/>
                    </group>

                    <group>
                        <field name="line_ids" delete="False">
                            <tree editable="bottom">
                                <field name="scanned" readonly="1" force_save="1"/>
                                <field name="available_product_ids" column_invisible="True"/>
                                <field name="line_added" column_invisible="True" force_save="1"/>
                                <field name="product_id"
                                       options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                                <field name="default_code" readonly="1"/>
                                <field name="show_serial_number" column_invisible="True" force_save="1"/>
                                <field name="api_payload_success" column_invisible="True" force_save="1"/>
                                <field name="serial_number"/>
                                <field name="picking_id"
                                       force_save="1"
                                       options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}"
                                       readonly="1"/>
                                <field name="package_box_type_id"/>
                                <field name="weight"/>
                                <field name="product_package_number"
                                       column_invisible="parent.show_package_box_in_lines == True"/>
                                <field name="current_state" column_invisible="True"/>
                                <field name="sale_order_id"
                                       force_save="1"
                                       options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}"
                                       readonly="1"/>
                                <field name="tenant_code_id"
                                       force_save="1"
                                       options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}"
                                       readonly="1"/>
                                <field name="site_code_id" force_save="1" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="available_quantity" force_save="1"/>
                                <field name="remaining_quantity" column_invisible="False" force_save="1"/>
                                <field name="incoterm_location" column_invisible="True" force_save="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Pack"
                            context="{'form_view_ref': 'view_custom_pack_app_wizard_form'}"
                            type="object"
                            name="pack_products"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
