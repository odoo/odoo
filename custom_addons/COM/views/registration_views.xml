    <!-- Registration Menu Action -->
    <record id="registration_menu_action" model="ir.actions.act_window">
        <field name="name">registration</field>
        <field name="res_model">task.registration</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
<!--            <p class="o_view_nocontent_smiling_face">Add Registrations</p>-->
            <p class="o_view_nocontent_empty_folder">Add Registrations</p>
        </field>
    </record>

    <!-- Menu items -->
    <menuitem id="task_menu" name="task"/>
    <menuitem action="registration_menu_action" id="task_registration_menu" name="Registration" parent="task_menu" sequence="5"/>
</odoo>