<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- course Tree View -->
    <record id="batch_tree_view" model="ir.ui.view">
        <field name="name">batch.tree.view</field>
        <field name="model">com.batch</field>
        <field name="arch" type="xml">
            <tree string="Batch Information">
                <field name="name"/>
                <field name="total_seats"/>
<!--                <field name="remaining_seat"/>-->
            </tree>
        </field>
    </record>

    <!-- course form view -->
    <record id="batch_form_view" model="ir.ui.view">
        <field name="name">batch.form.view</field>
        <field name="model">com.batch</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="total_seats"/>
                            <field name="search"/>
                            <field name="read"/>
                            <field name="domain"/>
                            <field name="browse"/>
                        </group>
                        <group>
<!--                            <field name="remaining_seat" readonly="0"/>-->
<!--                            <field name="no_of_course"/>-->
                        </group>
                    </group>
<!--                    <notebook>-->
<!--                        <page string="course">-->
<!--                            <field name="course_batch_id" widget="many2many_tags">-->
<!--                                <tree>-->
<!--                                    <field name="name"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course Menu Action -->
    <record id="batch_menu_action" model="ir.actions.act_window">
        <field name="name">Batch</field>
        <field name="res_model">com.batch</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Add Batch</p>
        </field>
    </record>

    <!-- Menu items -->
    <menuitem id="com_menu" name="COM"/>
    <menuitem action="batch_menu_action" id="com_batch_menu" name="Batch" parent="com_menu" sequence="1"/>
</odoo>