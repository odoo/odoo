    <record id="view_partner_student_form" model="ir.ui.view">
        <field name="name">res.partner.student.inherit.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//group//field[@name='vat']" position="before">
                <field name="is_student"/>
            </xpath>
        </field>
    </record>

    <!-- student tree view-->
    <record id="view_partner_student_tree" model="ir.ui.view">
        <field name="name">res.partner.student.inherit.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="is_student" string="Student"/>
            </field>
        </field>
    </record>

    <!-- contact form-->
    <record model="ir.actions.act_window" id="registration_student_action">
            <field name="name">task.student.registration.inherit</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu items -->
    <menuitem id="task_menu" name="task"/>
    <menuitem action="registration_student_action" id="student_registration_menu" name="Student" parent="task_menu" sequence="6"/>
</odoo>