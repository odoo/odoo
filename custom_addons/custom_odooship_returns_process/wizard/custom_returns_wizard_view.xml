<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_returns_scan_wizard_form" model="ir.ui.view">
        <field name="name">returns.scan.wizard.form</field>
        <field name="model">returns.scan.wizard</field>
        <field name="arch" type="xml">
            <form string="Returns Scan Wizard">
                <group>
                    <group>
                        <field name="picking_id"/>
                        <field name="scan_product_barcode" placeholder="Scan product barcode"/>
                    </group>
                    <group>
                        <field name="tenant_code_id"/>
                        <field name="site_code_id"/>
                    </group>
                </group>
                <field name="line_ids">
                    <tree editable="bottom">
                        <field name="line_number"/>
                        <field name="product_id"/>
                        <field name="name"/>
                        <field name="qty"/>
                        <field name="product_grade"/>
                        <field name="sellable_non_sellable"/>
                        <field name="grade_reason_id"/>
                        <field name="summary"/>
                        <field name="remaining_qty"/>
                        <field name="scanned"/>
                    </tree>
                </field>
                <footer>
                    <button name="button_validate_and_send"
                            string="Send and Validate"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>