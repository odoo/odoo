<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_custom_grade_message_configuration_tree" model="ir.ui.view">
        <field name="name">grade.message.configuration.tree</field>
        <field name="model">grade.message.configuration</field>
        <field name="arch" type="xml">
            <tree string="Grade Message Configurations">
                <field name="product_grade"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_custom_grade_message_configuration_form" model="ir.ui.view">
        <field name="name">grade.message.configuration.form</field>
        <field name="model">grade.message.configuration</field>
        <field name="arch" type="xml">
            <form string="Grade Message Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="product_grade"/>
                        </group>
                        <group>

                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_custom_grade_message_configuration" model="ir.actions.act_window">
        <field name="name">Grade Message Configurations</field>
        <field name="res_model">grade.message.configuration</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define unique message codes with descriptions.
            </p>
        </field>
    </record>
<!--    menuitem to configure Grade messages-->
    <menuitem id="menu_grade_message_configure"
              name="Grade Message Configuration"
              action="action_custom_grade_message_configuration"
              parent="stock.menu_stock_config_settings"
              groups="custom_odooship_decanting_process.group_shiperoo_admin,custom_odooship_decanting_process.group_shiperoo_supervisor"
              sequence="110"/>
</odoo>

