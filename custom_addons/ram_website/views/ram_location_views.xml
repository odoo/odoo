<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ram_location_tree" model="ir.ui.view">
        <field name="name">ram.website.location.tree</field>
        <field name="model">ram.website.location</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_published"/>
                <field name="phone"/>
                <field name="opening_hours"/>
                <field name="website_id"/>
            </list>
        </field>
    </record>

    <record id="view_ram_location_form" model="ir.ui.view">
        <field name="name">ram.website.location.form</field>
        <field name="model">ram.website.location</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="website_publish_button" type="object" class="oe_stat_button" icon="fa-globe">
                        <field name="is_published" widget="website_publish_button"/>
                    </button>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Location name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="website_id"/>
                            <field name="phone"/>
                            <field name="opening_hours"/>
                        </group>
                        <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="google_maps_url"/>
                        </group>
                    </group>
                    <group>
                        <field name="address" placeholder="Full address..." nolabel="1"/>
                    </group>
                    <group>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_1920'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
