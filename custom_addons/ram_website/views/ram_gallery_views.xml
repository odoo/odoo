<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ram_gallery_kanban" model="ir.ui.view">
        <field name="name">ram.website.gallery.image.kanban</field>
        <field name="model">ram.website.gallery.image</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="is_published"/>
                <field name="image_1920"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click o_kanban_record d-flex">
                            <div class="o_kanban_image me-2">
                                <field name="image_1920" widget="image" options="{'zoom': true, 'preview_image': 'image_1920'}"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="text-muted">
                                    <field name="website_id"/>
                                </div>
                                <div>
                                    <field name="is_published" widget="boolean_toggle"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_ram_gallery_tree" model="ir.ui.view">
        <field name="name">ram.website.gallery.image.tree</field>
        <field name="model">ram.website.gallery.image</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="caption"/>
                <field name="is_published"/>
                <field name="website_id"/>
            </list>
        </field>
    </record>

    <record id="view_ram_gallery_form" model="ir.ui.view">
        <field name="name">ram.website.gallery.image.form</field>
        <field name="model">ram.website.gallery.image</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="website_publish_button" type="object" class="oe_stat_button" icon="fa-globe">
                        <field name="is_published" widget="website_publish_button"/>
                    </button>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Gallery image title"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="website_id"/>
                            <field name="caption"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group>
                        <field name="image_1920" widget="image" options="{'preview_image': 'image_1920'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
