<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view -->
    <record id="view_stock_assigned_manual_moves_tree" model="ir.ui.view">
        <field name="name">stock.assigned.manual.moves.tree</field>
        <field name="model">stock.assigned.manual.moves</field>
        <field name="arch" type="xml">
            <tree>
                <field name="origin"/>
                <field name="name"/>
                <field name="complete_name"/>
                <field name="location_name"/>
                <field name="quantity"/>
                <field name="default_code"/>
                <field name="description"/>
                <field name="carton_height"/>
                <field name="carton_length"/>
                <field name="carton_width"/>
                <field name="weight"/>
                <field name="state"/>
                <field name="site_code"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_stock_assigned_manual_moves" model="ir.actions.act_window">
        <field name="name">Assigned Manual Moves</field>
        <field name="res_model">stock.assigned.manual.moves</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No data yet.</p>
        </field>
    </record>

    <!-- Menu item under Inventory â†’ Configuration -->
    <menuitem id="menu_stock_assigned_manual_moves"
              name="Assigned Manual Moves"
              parent="custom_odooship_decanting_process.menu_package_configuration"
              action="action_stock_assigned_manual_moves"
              sequence="99"/>
</odoo>
