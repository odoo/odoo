<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- department Tree View -->
    <record id="department_tree_view" model="ir.ui.view">
        <field name="name">department.tree.view</field>
        <field name="model">rfp.department</field>
        <field name="arch" type="xml">
            <tree string="department Information">
                <field name="name"/>
                <field name="cources_ids">
                    <field name="name"/>
                </field>
                <field name="faculty_ids">
                    <field name="name"/>
                </field>
                <field name="about"/>
            </tree>
        </field>
    </record>

    <!-- department form view -->
    <record id="department_form_view" model="ir.ui.view">
        <field name="name">department.form.view</field>
        <field name="model">rfp.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="about"/>
                            <field name="course_subject" widget="many2many_tags"/>
                        </group>
                        <group>
                            <notebook>
                                <page string="Faculty">
                                    <field name="faculty_ids" widget="many2many_tags">
                                        <tree>
                                            <field name="name"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                        <notebook>
                            <page string="Courses">
                                <field name="cources_ids" widget="many2many_tags">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- department Menu Action -->
    <record id="department_menu_action" model="ir.actions.act_window">
        <field name="name">department</field>
        <field name="res_model">rfp.department</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[]</field> -->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Add department</p>
        </field>
    </record>

    <!-- Menu items -->
    <menuitem id="rfp_menu" name="rfp"/>
    <menuitem action="department_menu_action" id="rfp_department_menu" name="Department" parent="rfp_menu" sequence="1"/>
</odoo>