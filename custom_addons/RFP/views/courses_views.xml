<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- courses Tree View -->
    <record id="courses_tree_view" model="ir.ui.view">
        <field name="name">courses.tree.view</field>
        <field name="model">rfp.courses</field>
        <field name="arch" type="xml">
            <tree string="Courses Information">
                <field name="name"/>
                <field name="department_id">
                        <field name="name"/>
                </field>
                <field name="about"/>
            </tree>
        </field>
    </record>

    <!-- courses form view -->
    <record id="courses_form_view" model="ir.ui.view">
        <field name="name">courses.form.view</field>
        <field name="model">rfp.courses</field>
        <field name="arch" type="xml">
            <form string="Courses">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="about"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Department">
                            <field name="department_id">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Subject">
                            <field name="subject_ids" widget="many2many_tags">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course Menu Action -->
    <record id="courses_menu_action" model="ir.actions.act_window">
        <field name="name">courses</field>
        <field name="res_model">rfp.courses</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[]</field> -->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Add Course</p>
        </field>
    </record>

    <!-- Menu items -->
    <menuitem id="rfp_menu" name="rfp"/>
    <menuitem action="courses_menu_action" id="rfp_courses_menu" name="Courses" parent="rfp_menu" sequence="2"/>
</odoo>