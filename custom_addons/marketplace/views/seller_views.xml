<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_marketplace_seller_list" model="ir.ui.view">
        <field name="name">marketplace.seller.list</field>
        <field name="model">marketplace.seller</field>
        <field name="arch" type="xml">
            <list string="Sellers">
                <field name="name"/>
                <field name="phone"/>
                <field name="is_approved"/>
            </list>
        </field>
    </record>

    <record id="view_marketplace_seller_form" model="ir.ui.view">
        <field name="name">marketplace.seller.form</field>
        <field name="model">marketplace.seller</field>
        <field name="arch" type="xml">
            <form string="Sellers">
                <sheet>
                    <group>
                        <group name="name_group" string="Name">
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group name="address_group" string="Address">
                            <field name="street"/>
                            <field name="city"/>
                            <field name="zip"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>



    <record id="action_marketplace_seller" model="ir.actions.act_window">
        <field name="name">Sellers</field>
        <field name="res_model">marketplace.seller</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new seller.
            </p>
        </field>
    </record>


    <record id="view_marketplace_seller_readonly_list" model="ir.ui.view">
        <field name="name">marketplace.seller.readonly.list</field>
        <field name="model">marketplace.seller</field>
        <field name="arch" type="xml">
            <list string="Sellers" create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="phone"/>
                <field name="is_approved"/>
            </list>
        </field>
    </record>


    <record id="view_marketplace_seller_readonly_form" model="ir.ui.view">
        <field name="name">marketplace.seller.readonly.form</field>
        <field name="model">marketplace.seller</field>
        <field name="arch" type="xml">
            <form string="Sellers">
                <sheet>
                    <group>
                        <group name="name_group" string="Name">
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group name="address_group" string="Address">
                            <field name="street"/>
                            <field name="city"/>
                            <field name="zip"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <record id="action_marketplace_readonly_seller" model="ir.actions.act_window">
        <field name="name">View Sellers</field>
        <field name="res_model">marketplace.seller</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to view seller details.
            </p>
        </field>
    </record>
</odoo>