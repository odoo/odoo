<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_whatsapp" model="ir.ui.view">
        <field name="name">account.move.form.inherit.whatsapp</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_invoice_sent']" position="after">
                <button name="action_send_whatsapp"
                        string="Send by WhatsApp"
                        type="object"
                        class="btn btn-secondary"
                        icon="fa fa-whatsapp"/>
            </xpath>
        </field>
    </record>
</odoo>