<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_ram_webiste" model="ir.ui.view">
        <field name="name">product.template.form.ram.webiste</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="website_publish_button" type="object" class="oe_stat_button" icon="fa-globe" groups="base.group_user">
                    <field name="is_published" widget="website_publish_button"/>
                </button>
            </xpath>
            <xpath expr="//group[@name='extra_info']" position="inside">
                <separator string="RAM Website Visibility" colspan="2"/>
                <field name="ram_available_on_website_menu"/>
                <field name="ram_is_recommended" invisible="not ram_available_on_website_menu"/>
                <field name="ram_spice_level" invisible="not ram_available_on_website_menu"/>
            </xpath>
        </field>
    </record>
</odoo>
