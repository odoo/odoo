<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Location (update these fields with the real data from the restaurant) -->
        <record id="ram_location_main" model="ram.website.location">
            <field name="sequence">10</field>
            <field name="name">Indian Restaurant RAM</field>
            <field name="address">Nishikasai, Tokyo, Japan</field>
            <field name="opening_hours">Open daily: 11:00 AM â€“ 10:30 PM</field>
            <field name="phone">+81 00-0000-0000</field>
            <field name="is_published">True</field>
            <field name="image_1920" type="base64" file="ram_webiste/static/src/img/ram_location.svg"/>
        </record>

        <!-- Starter Reviews (replace with real reviews or use Google Reviews sync) -->
        <record id="ram_review_1" model="ram.website.review">
            <field name="sequence">10</field>
            <field name="author_name">Happy Customer</field>
            <field name="rating">5</field>
            <field name="content">Delicious curry and friendly service. The spice balance is perfect.</field>
            <field name="source">manual</field>
            <field name="is_published">True</field>
        </record>
        <record id="ram_review_2" model="ram.website.review">
            <field name="sequence">20</field>
            <field name="author_name">Local Foodie</field>
            <field name="rating">5</field>
            <field name="content">Great naan, great portions, and the menu has something for everyone.</field>
            <field name="source">manual</field>
            <field name="is_published">True</field>
        </record>
        <record id="ram_review_3" model="ram.website.review">
            <field name="sequence">30</field>
            <field name="author_name">Spice Lover</field>
            <field name="rating">4</field>
            <field name="content">Authentic flavors and a cozy vibe. Try the chef recommendations!</field>
            <field name="source">manual</field>
            <field name="is_published">True</field>
        </record>

        <!-- Starter Gallery -->
        <record id="ram_gallery_1" model="ram.website.gallery.image">
            <field name="sequence">10</field>
            <field name="name">Food</field>
            <field name="caption">Replace with your best dish photo</field>
            <field name="is_published">True</field>
            <field name="image_1920" type="base64" file="ram_webiste/static/src/img/ram_gallery_1.svg"/>
        </record>
        <record id="ram_gallery_2" model="ram.website.gallery.image">
            <field name="sequence">20</field>
            <field name="name">Interior</field>
            <field name="caption">Replace with an interior photo</field>
            <field name="is_published">True</field>
            <field name="image_1920" type="base64" file="ram_webiste/static/src/img/ram_gallery_2.svg"/>
        </record>
        <record id="ram_gallery_3" model="ram.website.gallery.image">
            <field name="sequence">30</field>
            <field name="name">Takeout</field>
            <field name="caption">Replace with a takeout / promo photo</field>
            <field name="is_published">True</field>
            <field name="image_1920" type="base64" file="ram_webiste/static/src/img/ram_gallery_3.svg"/>
        </record>
    </data>
</odoo>

