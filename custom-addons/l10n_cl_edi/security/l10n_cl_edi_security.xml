<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="l10n_cl_certificate_comp_rule" model="ir.rule">
            <field name="name">Certificate multi-company</field>
            <field name="model_id" ref="model_l10n_cl_certificate"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

         <record id="l10n_cl_dte_caf_comp_rule" model="ir.rule">
            <field name="name">Dte Caf multi-company</field>
            <field name="model_id" ref="model_l10n_cl_dte_caf"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>
    </data>
</odoo>
