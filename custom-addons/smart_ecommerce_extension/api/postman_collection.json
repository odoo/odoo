        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/products?page=1&limit=20&sort=newest",
              "host": ["{{base_url}}"],
              "path": ["products"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "20"},
                {"key": "category_id", "value": "", "disabled": true},
                {"key": "search", "value": "", "disabled": true},
                {"key": "brand", "value": "", "disabled": true},
                {"key": "min_price", "value": "", "disabled": true},
                {"key": "max_price", "value": "", "disabled": true},
                {"key": "availability", "value": "", "disabled": true},
                {"key": "sort", "value": "newest"}
              ]
