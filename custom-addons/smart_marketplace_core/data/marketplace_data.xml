<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Document Types -->
        <record id="doc_type_id" model="marketplace.seller.document.type">
            <field name="name">National ID</field>
            <field name="sequence">10</field>
            <field name="required">True</field>
            <field name="description">Copy of National ID card</field>
        </record>

        <record id="doc_type_company" model="marketplace.seller.document.type">
            <field name="name">Company Registration</field>
            <field name="sequence">20</field>
            <field name="required">False</field>
            <field name="description">Company registration certificate (if applicable)</field>
        </record>

        <record id="doc_type_bank" model="marketplace.seller.document.type">
            <field name="name">Bank Account Details</field>
            <field name="sequence">30</field>
            <field name="required">True</field>
            <field name="description">Bank account statement or IBAN certificate</field>
        </record>
    </data>
</odoo>

