<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Demo data for Estate Properties -->
        
        <!-- Big Villa -->
        <record id="estate_property_big_villa" model="estate.property">
            <field name="name">Big Villa</field>
            <field name="state">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability">2020-02-02</field>
            <field name="expected_price">1600000</field>
            <field name="selling_price">0.0</field>
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="garage">True</field>
            <field name="garden">True</field>
            <field name="garden_area">100000</field>
            <field name="garden_orientation">south</field>
            <field name="property_type_id" ref="estate_property_type_residential"/>
        </record>
        
        <!-- Trailer home -->
        <record id="estate_property_trailer_home" model="estate.property">
            <field name="name">Trailer home</field>
            <field name="state">cancelled</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="garden">True</field>
            <field name="garden_area">0</field>
            <field name="garden_orientation">north</field>
            <!-- Убедитесь, что это тот же ID что в CSV -->
            <field name="property_type_id" ref="estate_property_type_residential"/>
        </record>
        
        <!-- Modern Apartment with inline offers using Command -->
        <record id="estate_property_modern_apartment" model="estate.property">
            <field name="name">Modern Apartment</field>
            <field name="state">new</field>
            <field name="description">A beautiful modern apartment in the city center with stunning views</field>
            <field name="postcode">90210</field>
            <field name="date_availability" eval="(datetime.now() + timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="expected_price">500000</field>
            <field name="bedrooms">3</field>
            <field name="living_area">120</field>
            <field name="facades">2</field>
            <field name="garage">True</field>
            <field name="garden">False</field>
            <field name="garden_area">0</field>
            <field name="garden_orientation">north</field>
            <field name="property_type_id" ref="estate_property_type_residential"/>
            
            <!-- Create offers directly using Command.create -->
            <field name="offer_ids" eval="[
                Command.create({
                    'price': 450000,
                    'validity': 7,
                    'partner_id': ref('base.res_partner_1'),
                    'create_date': (datetime.now() - timedelta(days=6)).strftime('%Y-%m-%d %H:%M:%S'),
                }),
                Command.create({
                    'price': 480000,
                    'validity': 10,
                    'partner_id': ref('base.res_partner_2'),
                    'create_date': (datetime.now() - timedelta(days=4)).strftime('%Y-%m-%d %H:%M:%S'),
                }),
                Command.create({
                    'price': 490000,
                    'validity': 14,
                    'partner_id': ref('base.res_partner_10'),
                    'create_date': (datetime.now() - timedelta(days=2)).strftime('%Y-%m-%d %H:%M:%S'),
                }),
            ]"/>
        </record>
    </data>
</odoo>