<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.l10n.fr.reports</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="account_reports.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//block[@id='default_accounts']//setting[1]" position="after">
          <setting invisible="country_code != 'FR'" string="Post difference from rounding tax closing entries in:">
            <div class="content-group">
                <div class="row mt8">
                    <label for="l10n_fr_rounding_difference_profit_account_id" class="col-lg-4 o_light_label"/>
                    <field name="l10n_fr_rounding_difference_profit_account_id"/>
                </div>
                <div class="row mt8">
                    <label for="l10n_fr_rounding_difference_loss_account_id" class="col-lg-4 o_light_label"/>
                    <field name="l10n_fr_rounding_difference_loss_account_id"/>
                </div>
              </div>
          </setting>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
