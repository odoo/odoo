<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to generate payouts monthly -->
        <record id="ir_cron_generate_payouts" model="ir.cron">
            <field name="name">Generate Marketplace Payouts</field>
            <field name="model_id" ref="model_marketplace_payout_batch"/>
            <field name="state">code</field>
            <field name="code">model.cron_generate_payouts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>

