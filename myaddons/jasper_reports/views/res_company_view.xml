<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="jasper_company_view_inherit" model="ir.ui.view">
        <field name="name">jasper.company.view.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Jasper Configuration">
                    <group>
                        <field name="java_path" placeholder="your java path downloaded from http://www.serpentcs.com/"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
