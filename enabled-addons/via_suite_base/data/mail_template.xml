<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--
            Customized Email Templates for ViaSuite

            These templates provide ViaSuite-branded email layouts.
        -->

        <!-- Base Email Layout Template -->
        <record id="mail_template_viasuite_base" model="mail.template">
            <field name="name">ViaSuite: Base Email Layout</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_from">no-reply@viafronteira.com</field>
            <field name="body_html" type="html">
                <![CDATA[
<!DOCTYPE html>
<html style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 14px; margin: 0;">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>ViaSuite</title>
    <style>
        body {
            background-color: #f6f6f6;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            -webkit-font-smoothing: antialiased;
            font-size: 14px;
            line-height: 1.4;
            margin: 0;
            padding: 0;
            -ms-text-size-adjust: 100%;
            -webkit-text-size-adjust: 100%;
        }
        .container {
            display: block;
            margin: 0 auto !important;
            max-width: 600px;
            padding: 10px;
            width: 600px;
        }
        .content {
            box-sizing: border-box;
            display: block;
            margin: 0 auto;
            max-width: 600px;
            padding: 10px;
        }
        .main {
            background: #ffffff;
            border-radius: 8px;
            width: 100%;
        }
        .wrapper {
            box-sizing: border-box;
            padding: 20px;
        }
        .header {
            background: linear-gradient(135deg, #002147 0%, #003d7a 100%);
            padding: 30px 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }
        .header h1 {
            color: #ffffff;
            font-size: 28px;
            font-weight: 300;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 2px;
        }
        .footer {
            background: #f6f6f6;
            border-top: 3px solid #FF730E;
            padding: 20px;
            text-align: center;
            border-radius: 0 0 8px 8px;
        }
        .footer p {
            color: #666;
            font-size: 12px;
            margin: 5px 0;
        }
        .footer a {
            color: #FF730E;
            text-decoration: none;
        }
        .btn {
            display: inline-block;
            padding: 12px 24px;
            background-color: #FF730E;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            font-weight: bold;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="content">
            <div class="main">
                <div class="header">
                    <h1>ViaSuite</h1>
                </div>
                <div class="wrapper">
                    ${object.body_html or ''}
                </div>
                <div class="footer">
                    <p><strong>ViaFronteira, LLC</strong></p>
                    <p>Retail Management Solutions</p>
                    <p><a href="https://www.viafronteira.com">www.viafronteira.com</a></p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
]]>
            </field>
        </record>

    </data>
</odoo>