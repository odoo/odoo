<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Enable Authorization Bearer header for OIDC (Keycloak) -->
        <record id="param_auth_oauth_authorization_header" model="ir.config_parameter">
            <field name="key">auth_oauth.authorization_header</field>
            <field name="value">True</field>
        </record>

        <!-- Allow user creation via OAuth sign-in -->
        <record id="param_auth_signup_allow_uninvited" model="ir.config_parameter">
            <field name="key">auth_signup.allow_uninvited</field>
            <field name="value">True</field>
        </record>

        <!-- Force OAuth only by disabling password reset -->
        <record id="param_auth_signup_reset_password" model="ir.config_parameter">
            <field name="key">auth_signup.reset_password</field>
            <field name="value">False</field>
        </record>
    </data>
</odoo>