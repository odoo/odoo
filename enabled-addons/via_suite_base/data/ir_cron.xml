<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--
            Scheduled Cleanup Jobs for ViaSuite

            1. Cleanup Expired Sessions (Daily at 3 AM)
            2. Cleanup Old Audit Logs (Weekly on Sunday at 2 AM)
            3. Cleanup Orphan Attachments (Weekly on Sunday at 4 AM)
        -->

        <!-- Cleanup Expired Sessions -->
        <record id="ir_cron_cleanup_expired_sessions" model="ir.cron">
            <field name="name">ViaSuite: Cleanup Expired Sessions</field>
            <field name="model_id" ref="model_ir_sessions"/>
            <field name="state">code</field>
            <field name="code">
                from odoo.addons.via_suite_base.utils.cleanup import cron_cleanup_expired_sessions
                cron_cleanup_expired_sessions(env)
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=3, minute=0, second=0)"/>
            <field name="priority">10</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cleanup Old Audit Logs -->
        <record id="ir_cron_cleanup_old_audit_logs" model="ir.cron">
            <field name="name">ViaSuite: Cleanup Old Audit Logs</field>
            <field name="model_id" ref="model_via_suite_login_audit"/>
            <field name="state">code</field>
            <field name="code">
                from odoo.addons.via_suite_base.utils.cleanup import cron_cleanup_old_audit_logs
                cron_cleanup_old_audit_logs(env)
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=(6 - DateTime.now().weekday() + 7) % 7)).replace(hour=2, minute=0, second=0)"/>
            <field name="priority">10</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cleanup Orphan Attachments -->
        <record id="ir_cron_cleanup_orphan_attachments" model="ir.cron">
            <field name="name">ViaSuite: Cleanup Orphan Attachments</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="state">code</field>
            <field name="code">
                from odoo.addons.via_suite_base.utils.cleanup import cron_cleanup_orphan_attachments
                cron_cleanup_orphan_attachments(env)
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=(6 - DateTime.now().weekday() + 7) % 7)).replace(hour=4, minute=0, second=0)"/>
            <field name="priority">10</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>