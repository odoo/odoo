<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--
            Web Client Templates for ViaSuite Branding

            Customizes the web interface with ViaSuite logos and branding.
            TEMPLATES ARE CURRENTLY DISABLED (active="False") TO DEBUG BLANK SCREEN ISSUE.
        -->

        <!-- Override Page Title -->
        <template id="webclient_bootstrap" inherit_id="web.layout" active="False">
            <xpath expr="//title" position="replace">
                <title>ViaSuite</title>
            </xpath>
        </template>

        <!-- Override Favicon and Icons -->
        <template id="web_icon" inherit_id="web.layout" active="False">
            <xpath expr="//link[@rel='shortcut icon']" position="replace">
                <link rel="shortcut icon" href="/via_suite_base/static/src/img/favicon.ico" type="image/x-icon"/>
                <link rel="icon" type="image/png" sizes="32x32" href="/via_suite_base/static/src/img/favicon-32x32.png"/>
                <link rel="icon" type="image/png" sizes="16x16" href="/via_suite_base/static/src/img/favicon-16x16.png"/>
                <link rel="apple-touch-icon" sizes="180x180" href="/via_suite_base/static/src/img/apple-touch-icon.png"/>
            </xpath>
        </template>

        <!-- Add PWA Manifest and Meta Tags -->
        <template id="pwa_manifest" inherit_id="web.layout" active="False">
            <xpath expr="//head" position="inside">
                <!-- PWA Manifest -->
                <link rel="manifest" href="/via_suite_base/static/src/manifest.json"/>

                <!-- Theme Color -->
                <meta name="theme-color" content="#002147"/>

                <!-- Apple Web App -->
                <meta name="apple-mobile-web-app-capable" content="yes"/>
                <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent"/>
                <meta name="apple-mobile-web-app-title" content="ViaSuite"/>

                <!-- Application Name -->
                <meta name="application-name" content="ViaSuite"/>

                <!-- Description -->
                <meta name="description" content="ViaSuite - Retail Management Solution by ViaFronteira, LLC"/>
            </xpath>
        </template>

    </data>
</odoo>