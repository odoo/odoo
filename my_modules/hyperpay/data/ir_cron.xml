<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="cron_pending_transactions" model="ir.cron">
            <field name="name">Send Pending transactions</field>
            <field name="model_id" ref="model_payment_transaction"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.send_pending()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
            <field name="nextcall" eval="(datetime.utcnow() + timedelta(days=0)).strftime('%Y-%m-%d 00:01:00')"/>
        </record>
    </data>
</odoo>