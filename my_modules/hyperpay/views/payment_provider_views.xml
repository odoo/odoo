<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form_hyperpay" model="ir.ui.view">
        <field name="name">Hyperpay Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group name="hyperpay_credentials"
                       invisible="code != 'hyperpay'">
                    <field name="hyperpay_key_id"
                           string="Entity Id"
                           required="code == 'hyperpay' and state != 'disabled'"/>
                    <field name="hyperpay_key_secret"
                           string="Auth Secret"
                           required="code == 'hyperpay' and state != 'disabled'"
                           password="True"/>
                </group>
            </group>
            <field name="allow_tokenization" position="after">
                <div invisible="code != 'hyperpay' or not allow_tokenization" colspan="2">
                    <a href="https://www.odoo.com/documentation/17.0/applications/finance/payment_providers/hyperpay.html#payment-providers-hyperpay-recurring-payments"
                       class="btn btn-link"
                       role="button"
                       target="new"
                    >
                        <i class="oi oi-fw o_button_icon oi-arrow-right"/>
                        Enable recurring payments on Hyperpay
                    </a>
                </div>
            </field>
        </field>
    </record>

</odoo>
