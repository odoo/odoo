<odoo>

    <record id="owl_todo_tree_view" model="ir.ui.view">
        <field name="name">owl.todo.view</field>
        <field name="model">owl.todo.list</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color"/>
                <field name="completed"/>
            </tree>
        </field>
    </record>

    <record id="owl_todo_form_view" model="ir.ui.view">
        <field name="name">owl.todo.view</field>
        <field name="model">owl.todo.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color"/>
                        <field name="completed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="owl_todo_list_action_views" model="ir.actions.act_window">
        <field name="name">Todo List</field>
        <field name="res_model">owl.todo.list</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="owl_todo_list_action_views_js" model="ir.actions.client">
        <field name="name">Todo List OWL</field>
        <field name="tag">owl_todo_list_action_views_js</field>
        <field name="params" eval="&quot;{ 'default_active_id': 'mail.box_inbox' }&quot;"/>
    </record>

    <menuitem id="owl_todo_list_menu" name="OWL" sequence="10">
        <menuitem id="owl_todo_list_submenu" action="owl_todo_list_action_views" name="Todo List"/>
        <menuitem id="owl_todo_list_submenu_js" action="owl_todo_list_action_views_js" name="Todo List OWL"/>
    </menuitem>

</odoo>
