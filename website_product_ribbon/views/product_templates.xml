<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<!-- Layout and common templates -->

<template id="optima_assets_frontend" inherit_id="website.assets_frontend" name="optima">
  <xpath expr="." position="inside">
      <link rel='stylesheet' href='/website_product_ribbon/static/src/css/optima_website.css'/>
  </xpath>
</template>

<template id="optima_product_images" inherit_id="website_sale.product" name="Optima Product Images">
  <xpath expr="//div[@class='col-sm-7 col-md-7 col-lg-7']/span[@t-field='product.image']" position="before">
   <t t-foreach="product.website_style_ids" t-as="styl">
     <div t-att-id="styl.shape.css" t-attf-style="background:##{styl.bg_color};
            color:##{styl.bg_color}; 
            width:#{styl.width}px; 
            height:#{styl.height}px; 
            position: absolute !important;
            top: #{styl.top}%;
            left: #{styl.left}%;
            ">
       <div id="optima_promo_text" t-attf-style="color:##{styl.text_color}; font-size: #{styl.font_size}px; top: #{styl.text_top}px; font-weight: #{styl.font_weight};"> 
		<p><t t-esc="styl.msg"/></p>
       </div>
     </div>
   </t>
  </xpath>
</template>

<template id="optima_product_styles" inherit_id="website_sale.products_item" name="Optima Product Styles">
  <xpath expr="//div[@class='ribbon-wrapper']" position="replace">
   <t t-foreach="product.website_style_ids" t-as="styl">
     <div t-att-id="styl.shape.css" t-attf-style="background:##{styl.bg_color};
            color:##{styl.bg_color}; 
            width:#{styl.width}px; 
            height:#{styl.height}px; 
            position: absolute !important;
            top: #{styl.top}%;
	    left: #{styl.left}%;
            ">
       <div id="optima_promo_text" t-attf-style="color:##{styl.text_color}; font-size: #{styl.font_size}px; top: #{styl.text_top}px; font-weight: #{styl.font_weight};"> 
		<p><t t-esc="styl.msg"/></p>
	</div>
     </div>
   </t>
  </xpath>
</template>
</data>
</openerp>
