                                </tree>
                            </field>
                        </page>
                        <page string="Asignados Externos">
                            <field class="lh-lg w-100" colspan="2" name="usuario_externo_ids" nolabel="1" context="{'actual_evaluacion_id': active_id}" options="{'link':false}">
