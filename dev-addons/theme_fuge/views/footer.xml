                                        © 2023 FugeStore. All rights reserved.
                                        Design by
                                        <a href="#">Cybrosys</a>

                                    </div>
                                    <t id="language_selector_call"
                                       t-call="portal.language_selector">
                                        <t t-set="_div_classes"
                                           t-value="(_div_classes or '') + ' dropup'"/>
                                    </t>

                                </div>
                            </div>
                        </div>
                    </div>

                </section>
                <!-- Footer section ends here -->
            </footer>
