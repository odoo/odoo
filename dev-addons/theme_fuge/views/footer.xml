                                                                <a href="#">
                                                                    <span class="fab fa-cc-mastercard"
                                                                          style="font-size: 34px;margin: 0 14px 0px 0;color: #acb2b7"/>
                                                                </a>
                                                                <a href="#">
                                                                    <span class="fab fa-cc-paypal"
                                                                          style="font-size: 34px;margin: 0 14px 0px 0;color: #acb2b7"/>
                                                                </a>
                                                                <a href="#">
                                                                    <span class="fab fa-cc-amex"
                                                                          style="font-size: 34px;margin: 0 14px 0px 0;color: #acb2b7"/>
