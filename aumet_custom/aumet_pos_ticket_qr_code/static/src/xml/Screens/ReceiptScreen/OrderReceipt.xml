<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-esc='receipt.name']" position="before">
            <t t-if="env.pos.config.allow_qr_code_receipt">
                <img class="pos-receipt-logo" t-att-src="receipt.order_qr_code" alt="Logo"/>
            </t>
        </xpath>
    </t>
</templates>
