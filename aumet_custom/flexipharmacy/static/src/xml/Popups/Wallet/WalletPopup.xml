<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="WalletPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup">
                    <header class="title drag-handle">
                        <t t-esc="props.title"/>
                    </header>
                    <div class="div">
                        <h4 align="center"><t t-esc="props.customer"/></h4>
                        <input type="text" t-model="state.WalletAmount" t-ref="wallet_amount" placeholder="Enter Amount"
                               id="points" name="points" t-on-keydown="onInputKeyDownNumberVlidation"/>
                    </div>
                    <footer class="footer">
                        <div class="button confirm" t-on-click="confirm">
                            <t t-esc="props.confirmText"/>
                        </div>
                        <div class="button cancel" t-on-click="cancel">
                            <t t-esc="props.cancelText"/>
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
