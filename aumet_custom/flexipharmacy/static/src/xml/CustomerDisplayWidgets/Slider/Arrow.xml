<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="Arrow" owl="1">
        <div class="arrow" t-attf-style="{{direction}}">
            <div class="button">
                <i t-if="props.direction == 'right'" class="fa fa-chevron-right" aria-hidden="true"></i>
                <i t-if="props.direction == 'left'" class="fa fa-chevron-left" aria-hidden="true"></i>
            </div>
        </div>
    </t>
</templates>
