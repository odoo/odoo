<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_aumet_marketplace_form" model="ir.ui.view">
        <field name="name">aumet.marketplace.form</field>
        <field name="model">aumet.marketplace</field>
        <field name="arch" type="xml">
            <form string="Marketplace">
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="base_url"/>
                            <field name="api_key" password="True"/>
                        </group>
                    </group>
                    <separator string="Description"/>
                    <field name="description"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>