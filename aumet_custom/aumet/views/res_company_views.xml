<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_aumet_mp" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.aumet_mp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="is_in_marketplace"/>
                <field name="marketplace_id" attrs="{'required': [('is_in_marketplace', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
