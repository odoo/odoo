<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopee_order_tree" model="ir.ui.view">
            <field name="name">shopee.order.tree</field>
            <field name="model">shopee.order</field>
            <field name="arch" type="xml">
                <tree string="Shopee Order">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="view_shopee_order_form" model="ir.ui.view">
            <field name="name">shopee.order.form</field>
            <field name="model">shopee.order</field>
            <field name="arch" type="xml">
                <form string="Shopee Order">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_jys_shopee_order" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">shopee.order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>