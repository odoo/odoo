<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_order_view_form" model="ir.ui.view">
        <field name="name">pos.order.form.inherit.pos.event</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <button name="action_stock_picking" position="before">
                <button name="action_view_attendee_list" type="object"
                        class="oe_stat_button" icon="fa-users" attrs="{'invisible': [('attendee_count', '=', 0)]}">
                    <field name="attendee_count" widget="statinfo" string="Attendees"/>
                </button>
            </button>
        </field>
    </record>
</odoo>
