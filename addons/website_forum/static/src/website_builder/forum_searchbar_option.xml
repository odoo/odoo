<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-inherit="website.SearchbarOption" t-inherit-mode="extension">
    <xpath expr="//BuilderSelect[@id=&quot;'scope_opt'&quot;]" position="inside">
        <!-- Using /website/search/forums as result because the current forum
         search results page cannot be used across several forums -->
        <BuilderSelectItem dataAttributeActionValue="'forums'" actionValue="'/website/search/forums'" id="'search_forums_opt'">
            Forums
        </BuilderSelectItem>
    </xpath>
</t>

</templates>
