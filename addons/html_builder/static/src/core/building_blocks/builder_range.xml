<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.BuilderRange">
    <BuilderComponent>
        <div
            t-attf-class="o-hb-range d-flex flex-row flex-nowrap align-items-center {{ this.props.withNumberInput ? 'me-2' : '' }}"
            t-att-data-action-id="this.info.actionId"
            t-att-data-action-param="this.info.actionParam"
            t-att-data-action-value="this.info.actionValue"
            t-att-data-class-action="this.info.classAction"
            t-att-data-style-action="this.info.styleAction"
            t-att-data-style-action-value="this.info.styleActionValue"
            t-att-data-attribute-action="this.info.attributeAction"
            t-att-data-attribute-action-value="this.info.attributeActionValue">
            <input
                type="range"
                class="o-hb-rangeInput"
                t-ref="inputRefRange"
                t-att-class="this.className"
                t-att-min="this.min"
                t-att-max="this.max"
                t-att-step="this.props.step"
                t-att-value="this.inputValueRange"
                t-on-change="this.onChangeRange"
                t-on-input="this.onInputRange"
                t-on-keydown="this.onKeydownRange"/>
            <output t-if="this.props.displayRangeValue" t-out="this.displayValueRange" class="ms-1" />
        </div>
        <BuilderNumberInputBase
            t-if="this.props.withNumberInput"
            t-props="this.textInputBaseProps"
            inputRef="this.inputRefNumber"
            value="this.displayValueNumber"
            classes="'o-hb-input-field-number justify-content-end'"
            inputClasses="'o-hb-input-number text-end'"
            commit="this.commit"
            preview="this.preview"
            clampValue.bind="this.clampValue"
            onKeydown.bind="this.onKeydownNumber"
            selectTextOnFocus="true">
            <span class="o-hb-input-field-unit" t-out="this.props.unit"/>
        </BuilderNumberInputBase>
    </BuilderComponent>
</t>

</templates>
