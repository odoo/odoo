<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.BuilderOverlayPanel">
    <t t-if="props.rowWrapper">
        <BuilderRow label="props.label">
            <button type="button" t-ref="openButton" class="o-hb-btn btn w-100" t-att-class="props.class + (props.textContent ? '' : ' fa ' + props.icon)" t-on-click="openOverlay" t-out="props.textContent"></button>
        </BuilderRow>
    </t>
    <t t-else="">
        <button type="button" t-ref="openButton" class="o-hb-btn btn" t-att-class="props.class + (props.textContent ? '' : ' fa ' + props.icon)" t-on-click="openOverlay" t-out="props.textContent"></button>
    </t>

    <div class="options-container options-container-overlay mb-1 position-absolute d-none" t-ref="overlayPanel" t-on-click="onBackdropClick">
        <div class="hb-overlay-panel" t-att-class="{'h-100': props.fullHeight, 'hb-overlay-panel-dark': props.darkVersion}">
            <div class="hb-overlay-panel-top d-flex flex-column" t-att-class="props.fullHeight ? 'h-100' : 'pb-3'">
                <div class="hb-overlay-panel-header d-flex align-items-center justify-content-between">
                    <div class="hb-overlay-panel-label d-flex flex-grow-1 align-items-center p-2">
                        <div class="pe-1" t-on-click="closeOverlay" t-on-keyup="onKeyUp" role="button" tabindex="0" >
                            <i class="oi oi-chevron-left me-1" role="presentation"/>
                            <t style="font-weight: bold;" t-out="state.block + ' / ' + props.label"/>
                        </div>
                    </div>
                </div>
                <t t-slot="default"/>
            </div>
        </div>
    </div>
    
</t>

</templates>
