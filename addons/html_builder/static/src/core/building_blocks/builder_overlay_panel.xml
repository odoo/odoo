<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.BuilderOverlayPanel">
    <t t-if="props.withRow">
        <BuilderRow label="props.label">
            <button type="button" class="o-hb-btn btn fa w-100" t-att-class="props.class + ' ' + props.icon" t-on-click="openOverlay"></button>
        </BuilderRow>
    </t>
    <t t-else="">
        <button type="button" class="o-hb-btn btn fa w-100" t-att-class="props.class + ' ' + props.icon" t-on-click="openOverlay"></button>
    </t>

    <div class="hb-overlay-panel" t-att-class="props.fullHeight ? 'h-100' : ''" t-ref="overlayPanel">
        <div class="hb-overlay-panel-top d-flex flex-column" t-att-class="props.fullHeight ? 'h-100' : 'pb-3'">
            <div class="hb-overlay-panel-header d-flex align-items-center justify-content-between mb-2">
                <div class="hb-overlay-panel-label d-flex flex-grow-1 align-items-center p-2">
                    <div class="pe-1" t-on-click="closeOverlay" t-on-keyup="onKeyUp" role="button" tabindex="0" >
                        <i class="oi oi-chevron-left me-1" role="presentation"/>
                        <t style="font-weight: bold;" t-out="state.block + ' / ' + props.label"/>
                    </div>
                </div>
            </div>
            <t t-slot="default"/>
        </div>
    </div>
</t>

</templates>
