<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.BuilderTextInputBase">
    <div class="d-flex flex-row flex-nowrap w-100 align-items-center"
        t-attf-class="{{ this.props.classes + ( this.props.prefix ? ' o-hb-input-base' : '' ) }}"
        t-att-data-action-id="this.info.actionId"
        t-att-data-action-param="this.info.actionParam"
        t-att-data-action-value="this.info.actionValue"
        t-att-data-class-action="this.info.classAction"
        t-att-data-style-action="this.info.styleAction"
        t-att-data-style-action-value="this.info.styleActionValue"
        t-att-data-attribute-action="this.info.attributeAction"
        t-att-data-attribute-action-value="this.info.attributeActionValue">
        <span t-if="this.props.prefix" class="o-hb-input-prefix" t-out="this.props.prefix"/>
        <i t-if="this.props.prefixIcon" role="img" t-att-class="'o-hb-input-prefix ' + this.props.prefixIcon"/> 
        <input
            t-ref="inputRef"
            type="text"
            autocomplete="chrome-off"
            t-attf-class="{{ this.props.inputClasses + ( this.props.prefix ? ' o-hb-input-transparent ' : ' o-hb-input-base ' ) }}"
            t-att-placeholder="this.props.placeholder"
            t-att-data-tooltip="this.props.tooltip"
            t-att-aria-label="this.props.tooltip"
            t-att-title="this.props.title"
            t-on-change="this.onChange"
            t-on-input="this.onInput"
            t-on-focus="this.onFocus"
            t-on-keydown="this.onKeydown"
            t-att-value="this.state.value"
            t-att-style="this.props.style"
        />
        <t t-slot="default"/>
    </div>
</t>

</templates>
