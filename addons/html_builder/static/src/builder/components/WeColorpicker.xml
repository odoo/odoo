<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.WeColorpicker">
    <div>
        <ColorSelector
            type="'background'"
            getSelectedColors='() => this.currentColors'
            getUsedCustomColors='() => []'
            applyColor='this.applyColor.commit'
            applyColorPreview='this.applyColor.preview'
            applyColorResetPreview='this.applyColor.revert'
            focusEditable='() => this.env.editor.shared.selection.focusEditable()'>
            <div class="o_we_color_preview" t-ref="colorButton" />
        </ColorSelector>
    </div>
</t>

</templates>
