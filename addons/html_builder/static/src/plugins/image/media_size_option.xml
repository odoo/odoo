<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.MediaSizeOption">
    <BuilderRow label.translate="Size">
        <div>
            <BuilderRange
                action="'mediaSizeSlider'"
                min="5"
                max="100"
                step="1"
                unit="'%'"
                className="'flex-grow-1'"
            />
        </div>
        <div style="width: 45%;">
            <BuilderNumberInput
                action="'mediaSizeText'"
                placeholder.translate="auto"
                default="null"
                unit="'%'"
                min="5"
                max="100"
            />
        </div>
        <BuilderButton
            title.translate="Reset to Automatic"
            preview="false"
            action="'resetMediaSize'"
            className="'flex-grow-0'"
            >
            <i class="oi oi-close" />
        </BuilderButton>
    </BuilderRow>
</t>

</templates>
