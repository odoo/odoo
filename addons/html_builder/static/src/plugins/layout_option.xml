<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.LayoutOption">
    <BuilderRow label.translate="Layout">
       <BuilderButtonGroup>
            <BuilderButton action="'setGridLayout'" id="'grid'">Grid</BuilderButton>
            <BuilderButton action="'setColumnLayout'" id="'column'">Column</BuilderButton>
        </BuilderButtonGroup>
        <t t-if="isActiveItem('column')">
            <BuilderSelect action="'changeColumnCount'" >
               <t t-foreach="[1, 2, 3, 4, 5, 6]" t-as="column" t-key="column_index">
                    <BuilderSelectItem actionValue="column" t-esc="column"/>
                </t>
                <BuilderSelectItem t-if="this.state.isCustomColumn" actionValue="'custom'">Custom</BuilderSelectItem>
            </BuilderSelect>
        </t>
    </BuilderRow>
    <t t-if="isActiveItem('grid')">
        <AddElementOption />
        <SpacingOption />
    </t>
    <t t-else="">
        <BuilderContext applyTo="'.row'">
            <t t-call="html_builder.VerticalAlignmentOption">
                <t t-set="level" t-value="1"/>
            </t>
        </BuilderContext>
    </t>
</t>

</templates>
