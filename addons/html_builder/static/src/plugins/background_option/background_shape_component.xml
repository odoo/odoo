<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.BackgroundShapeComponent">
    <header class="o_pager_nav d-flex flex-column flex-wrap flex-shrink-0 mh-100">
        <div class="d-flex align-items-center">
            <button class="o_pager_nav_angle fa fa-angle-left btn btn-secondary bg-transparent border-0" t-on-click="closeComponent"/>
            <h5 class="mb-0 text-white">Background Shapes</h5>
        </div>
        <div class="d-flex">
            <button type="button" class="p-0 text-uppercase active" t-on-click="() => this.scrollToShapes('basic')">
                <span class="w-100">Basic</span>
            </button>
            <button type="button" class="p-0 text-uppercase" t-on-click="() => this.scrollToShapes('linear')">
                <span class="w-100">Linear</span>
            </button>
            <button type="button" class="p-0 text-uppercase" t-on-click="() => this.scrollToShapes('creative')">
                <span class="w-100">Creative</span>
            </button>
        </div>
    </header>
    <div class="o_pager_container">
        <div t-ref="basic">
            <t t-call="html_builder.shapeCategory">
                <t t-set="categoryShapes" t-value="basicShapes"/>
            </t>
        </div>
        <div t-ref="linear">
            <t t-call="html_builder.shapeCategory">
                <t t-set="categoryShapes" t-value="linearShapes"/>
            </t>
        </div>
        <div t-ref="creative">
            <t t-call="html_builder.shapeCategory">
                <t t-set="categoryShapes" t-value="creativeShapes"/>
            </t>
        </div>
    </div>
</t>

<!-- TODO: improve the style of the shapes-->
<t t-name="html_builder.shapeCategory">
    <t t-foreach="categoryShapes" t-as="categoryShape" t-key="categoryShape_index">
        <span t-out="categoryShape.name"/>
        <div class="builder_select_page">
            <t t-foreach="categoryShape.shapes" t-as="shape" t-key="shape_index">
                <div class="button_shape" t-on-click="closeComponent">
                    <BuilderButton style="''" action="'applyShape'" actionValue="shape.shapeUrl">
                        <div>
                            <div class="o_we_shape" t-attf-style="background-image: {{this.props.getShapeStyleUrl(shape.shapeUrl)}};"/>
                            <span t-if="shape.animated" class="o_we_shape_animated_label">A<span>nimated</span></span>
                        </div>
                    </BuilderButton>
                </div>
            </t>
        </div>
    </t>
</t>

</templates>
