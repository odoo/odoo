<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.LayoutOption">
    <BuilderRow label.translate="Layout">
       <BuilderButtonGroup>
            <BuilderButton action="'setGridLayout'" id="'grid'">Grid</BuilderButton>
            <BuilderButton action="'setColumnLayout'" id="'column'">Column</BuilderButton>
        </BuilderButtonGroup>
        <SelectNumberColumn  t-if="isActiveItem('column')"/>
    </BuilderRow>
    <t t-if="isActiveItem('grid')">
        <AddElementOption level="1" applyTo="'.o_grid_mode'"/>
        <SpacingOption level="1" applyTo="'.o_grid_mode'"/>
    </t>
    <t t-if="isActiveItem('column')">
        <BuilderContext applyTo="'.row'">
            <t t-call="html_builder.VerticalAlignmentOption">
                <t t-set="level" t-value="1"/>
            </t>
        </BuilderContext>
    </t>
</t>

<t t-name="html_builder.LayoutGridOption">
    <AddElementOption applyTo="'.o_grid_mode'"/>
    <SpacingOption applyTo="'.o_grid_mode'"/>
</t>

<t t-name="html_builder.LayoutColumnOption">
    <BuilderRow label.translate="Columns">
        <SelectNumberColumn/>
    </BuilderRow>
</t>

</templates>
