<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.WebsiteBuilder">
    <div class="d-flex h-100 w-100" t-ref="container">
        <div class="o_website_preview flex-grow-1" t-att-class="{ 'o_is_mobile': this.state.isMobile }">
            <div class="o_iframe_container">
                <iframe t-att-src="initialUrl" class="h-100 w-100" t-ref="iframe" t-on-load="onIframeLoad"/>
                <div t-if="this.state.isMobile" class="o_mobile_preview_layout">
                    <img alt="phone" src="/html_builder/static/src/img/phone.png"/>
                </div>
            </div>
        </div>
        <div  t-attf-style="width:{{state.isEditing ? 288 : 0}}px" class="o-website-snippetsmenu border-start border-dark">
            <LazyComponent  t-if="state.isEditing" Component="'website.SnippetsMenu'" props="menuProps" bundle="'website.assets_builder'"/>
        </div>
    </div>
</t>

</templates>
