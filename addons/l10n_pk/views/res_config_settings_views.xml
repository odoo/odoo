<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_l10n_pk" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.l10n_pk</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <div id="pakistan_integration_section">
                    <block title="Pakistan Integration" id="pakistan_localization" invisible="country_code != 'PK'">
                        <setting name="electronic_invoices_pk"
                                 help="Connect to FBR (Federal Bureau of Revenue) to submit invoices on posting."
                                 company_dependent="1">
                            <field name="module_l10n_pk_edi"/>
                        </setting>
                    </block>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
