<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Mercado Pago Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group attrs="{'invisible': [('code', '!=', 'mercado_pago')]}">
                    <field name="mercado_pago_access_token"
                           string="Access Token"
                           attrs="{'required': [('code', '=', 'mercado_pago'), ('state', '!=', 'disabled')]}"
                           password="True"/>
                </group>
            </group>
            <group name="provider_config" position="inside">
                <group string="Notifications" name="payment_notifications" attrs="{'invisible': [('code', '!=', 'mercado_pago')]}">
                    <field name="mercadopago_use_ipn"
                    string="Use IPN"
                    widget="boolean_toggle"/>
                    <field name="mercadopago_autoreturn"
                    string="Autoreturn"
                    widget="boolean_toggle"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
