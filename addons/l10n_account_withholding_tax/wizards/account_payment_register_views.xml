<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <group name="group1" position="inside">
                <field name="apply_withhold_tax"/>
                <field name="withhold_tax_id" invisible="not apply_withhold_tax"/>
                <field name="withhold_base_amount" invisible="not apply_withhold_tax"/>
                <field name="withhold_tax_amount" invisible="not apply_withhold_tax"/>
            </group>
            <xpath expr="//group[@name='group2']/label[@for='amount']" position="replace">
                <label for="amount">Amount After Tax</label>
            </xpath>
        </field>
    </record>
</odoo>
