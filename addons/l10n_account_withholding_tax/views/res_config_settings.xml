<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="default_accounts" position="inside">
                <setting string="Withholding:" company_dependent="1">
                    <div class="content-group">
                        <div class="row mt8">
                            <label for="withholding_tax_base_account_id" class="col-lg-5 o_light_label"/>
                            <field name="withholding_tax_base_account_id"/>
                        </div>
                    </div>
                </setting>
            </block>
        </field>
    </record>
</odoo>
