<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_l10n_account_withholding_tax']" position="replace">
                <field name="withhold_applicable"/>
            </xpath>
            <xpath expr="//setting[@name='withholding_tax']/div[hasclass('content-group')]"
                   position="replace">
                <div class="content-group" invisible="not withhold_applicable">
                    <div class="content-group">
                        <div class="row mt8">
                            <label for="withhold_applicable_on" class="col-lg-5 o_light_label"/>
                            <field name="withhold_applicable_on"/>
                        </div>
                    </div>
                    <div class="content-group">
                        <div class="row mt8">
                            <label for="withholding_journal_id" class="col-lg-5 o_light_label"/>
                            <field name="withholding_journal_id"/>
                        </div>
                    </div>
                    <div class="content-group">
                        <div class="row mt8">
                            <label for="withholding_tax_control_account_id" class="col-lg-5 o_light_label"/>
                            <field name="withholding_tax_control_account_id"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
