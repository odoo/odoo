<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_city_view_form_inherit_l10n_br" model="ir.ui.view">
            <field name="name">res.city.view.form.inherit.l10n_br</field>
            <field name="model">res.city</field>
            <field name="inherit_id" ref="base_address_extended.res_city_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='city_data']" position="after">
                    <group invisible="country_code != 'BR'">
                        <field name="l10n_br_zip_range_ids"/>
                        <field name="l10n_br_zip_ranges"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
