<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="res_groups_privilege_sales" model="res.groups.privilege">
            <field name="name">Sales</field>
            <field name="sequence">1</field>
            <field name="category_id" ref="base.module_category_sales" />
        </record>

        <record id="group_sale_salesman" model="res.groups">
            <field name="name">User: Own Documents Only</field>
            <field name="sequence">10</field>
            <field name="privilege_id" ref="res_groups_privilege_sales" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
            <field name="comment">The user will have access to their own data in the sales application.</field>
        </record>

        <record id="group_sale_salesman_team" model="res.groups">
            <field name="name">User: Team Documents</field>
            <field name="sequence">15</field>
            <field name="privilege_id" ref="res_groups_privilege_sales" />
            <field name="implied_ids" eval="[(4, ref('group_sale_salesman'))]" />
            <field name="comment">The user will have access to records of their team members in the sales application.</field>
        </record>

        <record id="group_sale_salesman_all_leads" model="res.groups">
            <field name="name">User: All Documents</field>
            <field name="sequence">20</field>
            <field name="privilege_id" ref="res_groups_privilege_sales" />
            <field name="implied_ids" eval="[(4, ref('group_sale_salesman_team'))]" />
            <field name="comment">The user will have access to all records of everyone in the sales application.</field>
        </record>

        <record id="group_sale_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="sequence">30</field>
            <field name="privilege_id" ref="res_groups_privilege_sales" />
            <field name="implied_ids"
                eval="[
                    (4, ref('group_sale_salesman_all_leads')),
                    (4, ref('mail.group_mail_canned_response_admin'))
                ]" />
            <field name="user_ids"
                eval="[
                    (4, ref('base.user_root')),
                    (4, ref('base.user_admin'))
                ]" />
            <field name="comment">the user will have an access to the sales configuration as well as statistic reports.</field>
        </record>

    </data>

    <data noupdate="1">

        <record id="crm_rule_personal_salesteam" model="ir.rule">
            <field name="name">Personal Salesteam</field>
            <field name="model_id" ref="model_crm_team" />
            <field name="domain_force">[('id', 'in', user.crm_team_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        </record>

        <record id="crm_rule_team_salesteam" model="ir.rule">
            <field name="name">Team Salesteam</field>
            <field name="model_id" ref="model_crm_team" />
            <field name="domain_force">[('id', 'in', user.crm_team_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_team'))]" />
        </record>

        <record id="crm_rule_all_salesteam" model="ir.rule">
            <field name="name">All Salesteam</field>
            <field name="model_id" ref="model_crm_team" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]" />
        </record>

        <record id="sale_team_comp_rule" model="ir.rule">
            <field name="name">Sales Team multi-company</field>
            <field name="model_id" ref="model_crm_team" />
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>

    </data>

</odoo>