<odoo>
  <data>
    <record id="stock_location_form_stock_transport" model="ir.ui.view">
        <field name="name">stock.location.form.inherit.stock.transport</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='return_location']" position="after">
                <field name="is_a_dock"/>
            </xpath>
        </field>
    </record>

    <record id="stock_location_tree_stock_transport" model="ir.ui.view">
        <field name="name">stock.location.tree.inherit.stock.transport</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_empty']" position="after">
                <field name="is_a_dock"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
