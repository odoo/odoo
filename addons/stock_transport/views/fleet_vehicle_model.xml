<odoo>
  <data>
    <record id="fleet_vehicle_model_category_view_tree_stock_transport" model="ir.ui.view">
        <field name="name">fleet.vehicle.model.category.view.tree.inherit.stock.transport</field>
        <field name="model">fleet.vehicle.model.category</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_category_view_tree"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                        <field name="max_weight" optional="show"/>
                        <field name="max_volume" optional="show"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="fleet_vehicle_model_category_view_form_stock_transport" model="ir.ui.view">
        <field name="name">fleet.vehicle.model.category.view.form.inherit.stock.transport</field>
        <field name="model">fleet.vehicle.model.category</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_category_view_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                        <field name="max_weight" optional="show"/>
                        <field name="max_volume" optional="show"/>
                </xpath>
            </data>
        </field>
    </record>
  </data>
</odoo>
