<?xml version="1.0" encoding="UTF-8"?>

<templates id="template">
    <t t-name="PlannerLauncher">
       <li class="oe_topbar_item o_planner_systray">
            <div class="o_planner_progress">
                <span class="fa fa-question-circle pull-left" style="color:white;"/>
                <div class="progress">
                    <div class="progress-bar" t-attf-style="width:0%;">
                    </div>
                </div>
            </div>
        </li>
    </t>

    <t t-name="PlannerDialog">
        <div id="PlannerDialog" tabindex="-1">
            <div class="row dropdown o_planner_menu">
                <a class="col-xs-12 btn btn-default" data-toggle="dropdown" href="#" aria-expanded="false">Steps  <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel"/>
            </div>
            <div class="row o_planner_header">
                <div class="col-xs-4">
                    <button class='fa fa-square-o btn btn-primary mark_as_done'>
                        <i/>
                        <span>Mark As Done</span>
                    </button>
                </div>
                <div class="col-xs-4 text-center"><span class="help-block span-next o_planner_title"/></div>
                <div class="col-xs-4">
                    <a class="pull-right btn btn-next">
                        Next step
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </div>
            <div class="row o_content_page"/>
        </div>
    </t>

    <t t-name="PlannerMenu">
        <li t-foreach="orphan_pages" t-as="orphan_page">
            <a t-att-href="'#' + menu_item_page_map[orphan_page]"><span class="fa fa-fw"/><t t-esc="orphan_page"/></a>
        </li>
        <t t-foreach="menu_categories" t-as="menu_category">
            <h4><i t-att-class="'fa ' + menu_category.classes"/><t t-esc="menu_category.name"/></h4>
            <li t-foreach="menu_category.menu_items" t-as="menu_item">
                <a t-att-href="'#' + menu_item_page_map[menu_item]"><span class="fa fa-fw"/><t t-esc="menu_item"/></a>
            </li>
        </t>
    </t>

</templates>
