<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.proxy.user</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='peppol']" position="after">
                <block title="PDP" id="pdp" invisible="country_code != 'FR'">
                    <div id="l10n_fr_pdp" class="col-12 o_setting_box">
                        <div class="o_setting_right_pane border-0">

                            <div invisible="l10n_fr_pdp_proxy_state != 'receiver'">
                                You are sending and receiving your e-invoices via Odoo with this ID <field name="l10n_fr_pdp_edi_identification" class="oe_inline o_form_label" readonly="1"/>.
                            </div>
                            <div invisible="l10n_fr_pdp_proxy_state != 'receiver'" class="mt-4">
                                <div class="row" name="pdp_journal_config">
                                    <label string="Incoming Invoices Journal"
                                           for="l10n_fr_pdp_purchase_journal_id"
                                           class="col-lg-3"/>
                                    <field name="l10n_fr_pdp_purchase_journal_id"
                                           required="l10n_fr_pdp_proxy_state == 'receiver'"/>
                                </div>
                                <div class="row" name="pdp_contact_email">
                                    <label string="Contact Email"
                                           for="l10n_fr_pdp_contact_email"
                                           class="col-lg-3"/>
                                    <field name="l10n_fr_pdp_contact_email"
                                           required="l10n_fr_pdp_proxy_state == 'receiver'"/>
                                </div>
                            </div>

                            <div invisible="l10n_fr_pdp_proxy_state != 'pending'">
                                Waiting to activate this ID <field name="l10n_fr_pdp_edi_identification" class="oe_inline o_form_label" readonly="1"/>.
                            </div>
                            <!-- Info in case of rejected. -->
                            <div invisible="l10n_fr_pdp_proxy_state != 'rejected'">
                                You registration has been rejected, the reason has been sent to you via email.
                                Please contact our support if you need further assistance.
                            </div>

                            <div class="d-flex gap-1 action_buttons mt-2">
                                <button name="button_update_pdp_user_data"
                                        type="object"
                                        class="btn btn-primary me-1"
                                        string="Update contact details"
                                        invisible="l10n_fr_pdp_proxy_state != 'receiver'"/>
                                <button name="button_deregister_pdp_participant"
                                        type="object"
                                        string="Deregister"
                                        confirm="This will delete your PDP registration."
                                        class="btn btn-secondary me-1"
                                        invisible="l10n_fr_pdp_proxy_state not in ('pending', 'receiver')"/>
                            </div>

                            <div class="d-flex gap-1 action_buttons" colspan="3">
                                <!-- Not yet registered on PDP -->
                                <div invisible="l10n_fr_pdp_proxy_state in ('pending', 'receiver')">
                                    <div class="text-muted">
                                        Allow sending and receiving invoices through the PDP network
                                    </div>
                                    <button name="action_open_pdp_form"
                                            type="object"
                                            string="Start sending via PDP"
                                            class="oe_highlight mt-2"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
