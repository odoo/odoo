<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Employee Contract -->

        <record id="hr_contract.hr_contract_admin" model="hr.contract">
            <field name="struct_id" ref="hr_payroll.structure_001"/>
        </record>

        <record id="hr_contract.hr_contract_qdp" model="hr.contract">
            <field name="struct_id" ref="hr_payroll.structure_002"/>
        </record>

        <!-- ++++++++++++++ June ++++++++++++++ -->

        <!-- Payslip batch -->
        <record id="hr_payslip_batch" model="hr.payslip.run">
            <field name="name" eval="time.strftime('June %Y')"/>
            <field name="date_start" eval="time.strftime('%Y-6-1')"/>
