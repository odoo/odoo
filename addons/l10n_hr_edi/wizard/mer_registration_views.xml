<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mer_registration_form" model="ir.ui.view">
        <field name="name">mojeracun.registration.form</field>
        <field name="model">mojeracun.registration</field>
        <field name="groups_id" eval="[Command.link(ref('account.group_account_manager'))]"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="mojeracun_registration" invisible="l10n_hr_mer_proxy_state not in ('not_registered', 'in_verification')">
                        <div colspan="2" class="text-muted mb-3" invisible="l10n_hr_mer_proxy_state != 'not_registered'">
                            Send invoices and receive bills automatically over eRacun with the MojEracun service provider.
                            Requires registration on https://portal.moj-eracun.hr/.
                        </div>

                        <!-- business fields -->
                        <field name="mer_username"
                               string="Username"
                               invisible="l10n_hr_mer_proxy_state != 'not_registered'"/>
                        <field name="mer_password"
                               string="Password"
                               invisible="l10n_hr_mer_proxy_state != 'not_registered'"/>
                        <field name="mer_company_id"
                               string="Company ID (OIB or GIN)"
                               invisible="l10n_hr_mer_proxy_state != 'not_registered'"/>
                        <field name="mer_company_bu"
                               string="Company Business Unit (PJ)"
                               invisible="l10n_hr_mer_proxy_state != 'not_registered'"/>
                        <field name="mer_software_id"
                               string="Business Software (ERP) ID"
                               invisible="l10n_hr_mer_proxy_state != 'not_registered'"/>
                    </group>

                    <!-- edi mode info -->
                    <div colspan="2" class="row" invisible="l10n_hr_mer_proxy_state != 'not_registered'">
                        <div class="text-muted col" invisible="edi_mode != 'prod'">
                            By clicking the button below I accept that Odoo may process my e-invoices.
                        </div>
                        <div class="text-muted col" invisible="edi_mode != 'test'">
                            Test mode allows sending e-invoices through the demo segment of MojEracun network.
                            By clicking the button below I accept that Odoo may process my e-invoices.
                        </div>
                    </div>
                </sheet>

                <footer>
                    <div name="mojeracun_activate" invisible="l10n_hr_mer_proxy_state != 'not_registered'">
                        <button string="Activate MojEracun"
                                name="button_mojeracun_registration_activate"
                                type="object"
                                class="btn-primary"
                                data-hotkey="q"
                                invisible="edi_mode != 'prod'"/>
                        <button string="Activate MojEracun (Test)"
                                name="button_mojeracun_registration_activate"
                                type="object"
                                class="btn-primary"
                                data-hotkey="q"
                                invisible="edi_mode != 'test'"/>
                    </div>
                    <button name="button_deregister_mojeracun_participant"
                            string="Cancel Registration"
                            type="object"
                            class="btn-secondary"
                            data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
