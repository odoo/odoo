<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_journal_dashboard_kanban_view" model="ir.ui.view">
            <field name="name">account.journal.dashboard.kanban</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view" />
            <field name="arch" type="xml">            
                <xpath expr="//kanban" position="inside">
                    <field name="l10n_hr_is_mer_journal"/>
                    <field name="l10n_hr_mer_connection_state"/>
                </xpath>

                <xpath expr="//t[@id='account.JournalBodySalePurchase']//div" position="inside">
                    <t t-if="record.l10n_hr_mer_connection_state and record.l10n_hr_mer_connection_state.raw_value == 'active'">
                        <t t-if="journal_type == 'sale'">
                            <div class="w-100">
                                <a type="object" name="l10n_hr_mer_get_message_status" groups="account.group_account_invoice">Fetch status for MojEracun invoices</a>
                            </div>
                        </t>
                        <t t-elif="journal_type == 'purchase'">
                            <t t-if="record.l10n_hr_is_mer_journal.raw_value">
                                <div class="w-100">
                                    <a type="object" name="l10n_hr_mer_get_new_documents" groups="account.group_account_invoice">Fetch new invoices from MojEracun</a>
                                    <span> </span>
                                    <span groups="base.group_no_one">
                                        <a type="object" name="l10n_hr_mer_get_new_documents_all" groups="account.group_account_manager">(Fetch all)</a>
                                    </span>
                                </div>
                            </t>
                        </t>
                    </t>
                </xpath>
            </field>
        </record>

        <record id="view_account_journal_form_inherit" model="ir.ui.view">
            <field name="name">account.journal.form.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='bank_account_number']" position="before">
                    <group name="l10n_hr_fiscalization_group" string="Fiscalization (HR)" invisible="type not in ['sale']">
                        <field name="l10n_hr_business_premises_label"/>
                        <field name="l10n_hr_issuing_device_label"/>
                        <field name="l10n_hr_business_premises_label_refund" invisible="not refund_sequence"/>
                        <field name="l10n_hr_issuing_device_label_refund" invisible="not refund_sequence"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>