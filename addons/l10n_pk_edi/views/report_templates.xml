<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Support for custom footer (Striped PDF Template) -->
    <template id="external_layout_striped_inherit_l10n_pk_edi" inherit_id="web.external_layout_striped">
        <xpath expr="//div[hasclass('o_footer_content')]" position="attributes">
            <attribute name="t-if">not custom_footer</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_footer_content')]" position="after">
            <div t-if="custom_footer">
                <t t-out="custom_footer"/>
            </div>
        </xpath>
    </template>

