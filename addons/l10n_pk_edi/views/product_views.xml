<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit_l10n_pk_edi" model="ir.ui.view">
        <field name="name">product.template.form.inherit.l10n_pk_edi</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="E-Invoice" invisible="'PK' not in fiscal_country_codes">
                    <group>
                        <group>
                            <field name="l10n_pk_edi_hs_code" string="HS Code"/>
                            <field name="l10n_pk_edi_uom_code" string="Unit of Measure"/>
                        </group>
                        <group>
                            <field name="l10n_pk_edi_transaction_type" string="Transaction Type"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
