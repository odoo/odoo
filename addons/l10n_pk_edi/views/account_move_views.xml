<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_l10n_pk_edi" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n_pk_edi</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <div
                    role="alert"
                    class="alert alert-danger"
                    invisible="not l10n_pk_edi_status_message or l10n_pk_edi_status in (False, 'sent')"
                >
                    <i role="img" class="fa fa-warning"/>
                    <span class="mx-1">E-Invoicing</span>
                    <field name="l10n_pk_edi_status_message"/>
                </div>
            </xpath>
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="l10n_pk_edi_status" invisible="l10n_pk_edi_status == False"/>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page
                    string="E-Invoicing"
                    invisible="(
                        country_code != 'PK'
                        or move_type not in ('out_invoice', 'out_refund')
                    )"
                >
                    <group>
                        <group>
                            <field name="l10n_pk_edi_reference"/>
                            <field name="l10n_pk_edi_attachment_id"/>
                        </group>
                        <group>
                            <field name="l10n_pk_edi_refund_reason" invisible="move_type != 'out_refund'"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
