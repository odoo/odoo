<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_l10n_pk_edi" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.l10n_pk_edi</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <block id="pakistan_localization" title="Pakistan Electronic Invoicing" invisible="country_code != 'PK'">
                    <setting
                        company_dependent="1"
                        string="Enable Electronic Invoicing"
                        help="Connect to FBR (Federal Bureau of Revenue) to submit invoices on posting."
                    >
                        <field name="l10n_pk_edi_enable"/>
                        <group>
                            <field name="l10n_pk_edi_auth_token" password="True"/>
                            <field name="l10n_pk_edi_test_environment" string="Test Environment"/>
                        </group>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>

</odoo>
