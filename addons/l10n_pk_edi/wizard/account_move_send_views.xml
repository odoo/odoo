<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record model='ir.ui.view' id='account_move_send_inherit_l10n_pk_edi'>
        <field name='name'>account.move.send.form.inherit.l10n_pk_edi</field>
        <field name='model'>account.move.send</field>
        <field name='inherit_id' ref='account.account_move_send_form'/>
        <field name='arch' type='xml'>
            <xpath expr='//div[@name="warnings"]' position='inside'>
                <field
                    name="l10n_pk_edi_error_message"
                    class="o_field_html"
                    widget="actionable_errors"
                />
            </xpath>
            <xpath expr='//div[@name="option_send_mail"]' position='after'>
                <field name='l10n_pk_edi_enable_send' invisible='1'/>
                <field name='l10n_pk_edi_readonly_send' invisible='1'/>
                <div>
                    <div invisible='not l10n_pk_edi_enable_send'>
                        <field 
                            name='l10n_pk_edi_checkbox_send'
                            readonly='l10n_pk_edi_readonly_send'
                        />
                        <b><label for='l10n_pk_edi_checkbox_send'/></b>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
