<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_debit_note_inherit_l10n_pk_edi" model="ir.ui.view">
        <field name="name">view.account.debit.note.inherit.l10n.pk.edi</field>
        <field name="inherit_id" ref="account_debit_note.view_account_debit_note"/>
        <field name="model">account.debit.note</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_type']" position="after">
                <field name="country_code" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='reason']" position="attributes">
                <attribute name='required'>country_code == 'PK'</attribute>
            </xpath>
        </field>
    </record>

</odoo>
