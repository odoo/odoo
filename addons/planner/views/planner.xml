<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="assets_backend" name="planner assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/planner/static/src/js/planner_backend.js"></script>
        </xpath>
    </template>
    <template id="assets_common" name="planner assets" inherit_id="web.assets_common">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/planner/static/src/less/planner.less"/>
            <script type="text/javascript" src="/planner/static/src/js/planner.js"></script>
        </xpath>
    </template>
</odoo>
