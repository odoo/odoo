<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- After installation of the module, open the related menu -->
        <record id="action_client_hr_recruitment" model="ir.actions.client">
            <field name="name">Open Recruitment Menu</field>
            <field name="tag">reload</field>
            <field name="params" eval="{'menu_id': ref('menu_hr_recruitment_recruitment')}"/>
        </record>
        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="action_client_hr_recruitment"/>
            <field name="state">open</field>
        </record>
    </data>
    <data>
        <record id="view_hr_apll_config_settings" model="ir.ui.view">
            <field name="name">hr settings for recruitment</field>
            <field name="model">hr.config.settings</field>
            <field name="inherit_id" ref="hr.view_human_resources_configuration"/>
            <field name="arch" type="xml">
                <div name="recruitment" position="inside">
                    <div>
                        <field name="module_document" class="oe_inline"/>
                        <label for="module_document"/>
                    </div>
                </div>
            </field>
        </record>
    </data>
</openerp>
