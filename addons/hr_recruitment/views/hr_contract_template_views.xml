<?xml version="1.0"?>
<odoo>
    <record id="hr_contract_template_form_view" model="ir.ui.view">
        <field name="name">hr.contract.template.form.inherit</field>
        <field name="model">hr.version</field>
        <field name="inherit_id" ref="hr.hr_contract_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='top_info_left']/field[@name='job_id']" position="attributes">
                <attribute name="groups">hr.group_hr_manager,hr_recruitment.group_hr_recruitment_user</attribute>
            </xpath>
            <xpath expr="//group[@name='top_info_left']/field[@name='department_id']" position="attributes">
                <attribute name="groups">hr.group_hr_manager,hr_recruitment.group_hr_recruitment_user</attribute>
            </xpath>
            <xpath expr="//page[@name='other']" position="attributes">
                <attribute name="groups">hr.group_hr_manager,hr_recruitment.group_hr_recruitment_user</attribute>
            </xpath>
            <xpath expr="//chatter" position="attributes">
                <attribute name="groups">hr.group_hr_manager,hr_recruitment.group_hr_recruitment_user</attribute>
            </xpath>
        </field>
    </record>
</odoo>
