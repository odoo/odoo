<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="task_type_edit_inherit_sale_project" model="ir.ui.view">
        <field name="name">project.task.type.form.inherit.sale_project</field>
        <field name="model">project.task.type</field>
        <field name="inherit_id" ref="project.task_type_edit"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='rating_active']" position="attributes">
                <attribute name="invisible">not show_rating_active</attribute>
            </xpath>
            <xpath expr="//div[hasclass('o_customer_rating')]" position="attributes">
                <attribute name="invisible">not show_rating_active</attribute>
            </xpath>
            <xpath expr="//field[@name='rating_status_period']" position="attributes">
                <attribute name="invisible" add="not show_rating_active" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='rating_template_id']" position="attributes">
                <attribute name="invisible" add="not show_rating_active" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='auto_validation_state']" position="attributes">
                <attribute name="invisible" add="not show_rating_active" separator="or"/>
            </xpath>
        </field>
    </record>
</odoo>
