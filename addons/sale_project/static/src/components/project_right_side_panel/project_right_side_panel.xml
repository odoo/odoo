<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sale_project.ProjectRightSidePanel" t-inherit="project.ProjectRightSidePanel" t-inherit-mode="extension" owl="1">
        <xpath expr="//ProjectRightSidePanelSection[@name=&quot;'profitability'&quot;]" position="before">
            <ProjectRightSidePanelSection
                name="'sales'"
                show="state.data.sale_items and state.data.sale_items.total &gt; 0"
            >
                <t t-set-slot="title" owl="1">
                    Sales
                </t>
                <table class="w-100 table-striped">
                    <thead>
                        <tr>
                            <th style="width: 40%">Sales Order Items</th>
                            <th style="width: 20%; text-align: right;">Sold</th>
                            <th style="width: 20%; text-align: right;">Delivered</th>
                            <th style="width: 20%; text-align: right;">Invoiced</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="state.data.sale_items.data" t-as="sale_item" t-key="sale_item.id">
                            <t t-set="uom_name" t-value="sale_item.product_uom and sale_item.product_uom[1]"/>
                            <td>
                                <t t-set="sol_name" t-value="sale_item.display_name"/>
                                <a t-if="sale_item.action" class="o_rightpanel_button"
                                    t-on-click="() => this.onProjectActionClick(sale_item.action)"
                                >
                                    <t t-esc="sol_name"/>
                                </a>
                                <t t-else="" t-esc="sol_name"/>
                            </td>
                            <td align="right"><t t-esc="formatValue(sale_item.product_uom_qty, uom_name)"/> <t t-esc="uom_name"/></td>
                            <td align="right"><t t-esc="formatValue(sale_item.qty_delivered, uom_name)"/> <t t-esc="uom_name"/></td>
                            <td align="right"><t t-esc="formatValue(sale_item.qty_invoiced, uom_name)"/> <t t-esc="uom_name"/></td>
                        </tr>
                        <tr class="o_rightpanel_nohover" t-if="state.data.sale_items.total &gt; state.data.sale_items.data.length">
                            <td>
                                <a class="o_rightpanel_button text-bold" t-on-click="onLoadSalesOrderLinesClick">
                                    Load more
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </ProjectRightSidePanelSection>
        </xpath>
    </t>

</templates>
