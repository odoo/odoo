<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sale_project.ProjectRightSidePanel" t-inherit="project.ProjectRightSidePanel" t-inherit-mode="extension">
        <xpath expr="//ProjectProfitability" position="replace">
            <ProjectProfitability
                t-if="this.showProjectProfitability"
                data="this.state.data.profitability_items"
                labels="this.state.data.profitability_labels"
                formatMonetary="this.formatMonetary.bind(this)"
                onProjectActionClick="this.onProjectActionClick.bind(this)"
                onClick="(params) => this.onProjectActionClick(params)"
                projectId="this.projectId"
                context="this.context"
            />
        </xpath>
    </t>
</templates>
