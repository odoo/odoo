<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_form_inherit_l10n_kh_pos" model="ir.ui.view">
        <field name="name">res.company.form.inherit.l10n.kh.pos</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="country_code" invisible="1"/>
                <field name="name_khmer" invisible="country_code != 'KH'"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="before">
                <field name="address_khmer" invisible="country_code != 'KH'"/>
            </xpath>
        </field>
    </record>
</odoo>
