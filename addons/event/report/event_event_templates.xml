<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="event_report_template_foldable_badge">
    <div class="o_event_foldable_badge_container">
        <div class="row">
            <!-- Front -->
            <div class="page p-1 col-6 o_event_foldable_badge_top">
                <div class="oe_structure"/>
            </div>
            <!-- Back -->
            <div class="page col-6 o_event_foldable_badge_top o_event_foldable_badge_ticket pt-4">
                <div class="oe_structure"/>
                <div class="o_event_foldable_badge_ticket_wrapper p-2">
                    <div class="o_event_foldable_badge_ticket_wrapper_top">
                        <h5 class="o_event_foldable_badge_event_name font-weight-bold text-center" t-field="event.name"/>
                        <div t-if="event.address_id" class="o_event_foldable_badge_font_faded o_event_foldable_badge_font_small font-weight-bold"
                            t-esc="event.address_id.contact_address.replace('\n', ' ')"/>
                        <div class="row col-12 m-0 p-0 mt-4">
                            <div class="col-6 p-0">
                                <div class="o_event_foldable_badge_font_faded o_event_foldable_badge_small_caps font-weight-bold">Start</div>
                                <div itemprop="startDate" t-esc="event.date_begin.date()"
                                    class="font-weight-bold"/>
                                <div itemprop="startDateTime" t-esc="event.date_begin"
                                    t-options='{"widget": "datetime", "time_only": True, "hide_seconds": True}'/>
                            </div>
                            <div class="col-6 text-right p-0">
                                <div class="o_event_foldable_badge_font_faded o_event_foldable_badge_small_caps font-weight-bold">End</div>
                                <div itemprop="endDate" t-esc="event.date_end.date()"
                                    class="font-weight-bold"/>
                                <div itemprop="endDateTime" t-esc="event.date_end"
                                    t-options='{"widget": "datetime", "time_only": True, "hide_seconds": True}'/>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="text-center">
                            <h2 t-if="attendee" t-field="attendee.name"/>
                            <h2 t-elif="not attendee"><span>Attendee Name</span></h2>
                            <t t-set="first_ticket" t-value="event.event_ticket_ids[0] if event.event_ticket_ids else None"/>
                            <div t-if="attendee" class="o_event_foldable_badge_font_faded" t-field="attendee.event_ticket_id"/>
                            <div t-elif="first_ticket" t-esc="first_ticket.name"
                                class="o_event_foldable_badge_font_faded"/>
                        </div>
                    </div>
                    <div class="o_event_foldable_badge_barcode mt-2">
                        <div class="o_event_foldable_badge_barcode_container">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Inner left -->
            <div class="page o_event_foldable_badge_bottom o_event_foldable_badge_left p-1 col-6 overflow-hidden">
                <div class="oe_structure"/>
                <div t-field="event.ticket_extra_instructions" class="pr-1"></div>
            </div>
            <!-- Inner right -->
            <div class="page o_event_foldable_badge_bottom o_event_foldable_badge_right col-6 text-center">
                <div class="oe_structure"/>
                <div class="h-50 col-12 row m-0">
                    <div class="col-6 h-100 p-0">
                        <div class="o_event_foldable_badge_step font-weight-bold">1</div>
                        <img src="/event/static/src/img/how_to_fold_1.png" class="w-100 h-100" alt="How to Fold (1)"/>
                    </div>
                    <div class="col-6 h-100 p-0">
                        <div class="o_event_foldable_badge_step font-weight-bold">2</div>
                        <img src="/event/static/src/img/how_to_fold_2.png" class="w-100 h-100" alt="How to Fold (2)"/>
                    </div>
                </div>
                <div class="h-50 col-12 row m-0">
                    <div class="col-6 h-100 p-0">
                        <div class="o_event_foldable_badge_step font-weight-bold">3</div>
                        <img src="/event/static/src/img/how_to_fold_3.png" class="w-100 h-100" alt="How to Fold (3)"/>
                    </div>
                    <div class="col-6 h-100 p-0">
                        <div class="o_event_foldable_badge_step font-weight-bold">4</div>
                        <img src="/event/static/src/img/how_to_fold_4.png" class="w-100 h-100" alt="How to Fold (4)"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</template>

<template id="event_registration_report_template_foldable_badge">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="attendee">
            <t t-set="event" t-value="attendee.event_id.with_context(tz=attendee.event_id.date_tz)"/>
            <t t-call="event.event_report_template_foldable_badge"/>
        </t>
    </t>
</template>

<template id="event_event_report_template_foldable_badge">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="event">
            <t t-set="event" t-value="event.with_context(tz=event.date_tz)"/>
            <t t-call="event.event_report_template_foldable_badge"/>
        </t>
    </t>
</template>

<template id="event_report_template_a4_ticket">
    <div class="o_event_a4_ticket_container page">
        <div class="o_event_a4_ticket_body">
            <div class="o_event_a4_ticket_wrapper">
                <div class="o_event_a4_ticket_details row">
                    <div class="col-10">
                        <div class="row">
                            <div class="col-8">
                                <h4 class="o_event_a4_ticket_event_name font-weight-bold" t-field="event.name"/>
                                <div t-if="event.address_id" class="o_event_a4_ticket_font_faded font-weight-bold"
                                    t-esc="event.address_id.contact_address.replace('\n', ' ')"/>
                                <span itemprop="startDate" t-esc="event.date_begin.date()"
                                    class="font-weight-bold"/>
                                <span itemprop="startDateTime" t-esc="event.date_begin"
                                    t-options='{"widget": "datetime", "time_only": True, "hide_seconds": True}'/>
                                <span class="fa fa-arrow-right o_event_a4_ticket_font_faded px-2"/>
                                <span itemprop="endDate" t-esc="event.date_end.date()"
                                    class="font-weight-bold"/>
                                <span itemprop="endDateTime" t-esc="event.date_end"
                                    t-options='{"widget": "datetime", "time_only": True, "hide_seconds": True}'/>
                                <br/>
                                <br/>
                                <h5 t-if="attendee" t-field="attendee.name"></h5>
                                <h5 t-elif="not attendee"><span>Attendee Name</span></h5>
                                <t t-set="first_ticket" t-value="event.event_ticket_ids[0] if event.event_ticket_ids else None"/>
                                <div t-if="attendee" class="o_event_a4_ticket_font_faded" t-field="attendee.event_ticket_id"/>
                                <div t-elif="first_ticket" t-esc="first_ticket.name"
                                    class="o_event_a4_ticket_font_faded"/>
                            </div>
                            <div class="col-4 o_event_a4_ticket_side_info">
                                <span t-if="event.organizer_id.image_128">
                                    <img t-att-src="image_data_uri(event.organizer_id.image_128)" class="o_event_a4_ticket_event_logo mb-2"/>
                                </span>
                                <div t-if="attendee and attendee.partner_id" class="mb-2">
                                    <div class="o_event_a4_ticket_font_faded o_event_a4_ticket_small_caps font-weight-bold">Booked By</div>
                                    <div class="o_event_a4_ticket_small" t-field="attendee.partner_id"/>
                                </div>
                            </div>
                        </div>
                        <div class="row pt-5">
                            <div class="col-4">
                                <div class="o_event_a4_ticket_font_faded o_event_a4_ticket_small_caps font-weight-bold">Organizer</div>
                                <div class="o_event_a4_ticket_small" t-field="event.organizer_id"/>
                            </div>
                            <div class="col-4" t-if="event.organizer_id.email">
                                <div class="o_event_a4_ticket_font_faded o_event_a4_ticket_small_caps font-weight-bold">Contact</div>
                                <div class="o_event_a4_ticket_small" t-field="event.organizer_id.email"/>
                            </div>
                            <div class="col-4" t-if="event.organizer_id.website">
                                <div class="o_event_a4_ticket_font_faded o_event_a4_ticket_small_caps font-weight-bold">More Info</div>
                                <div class="o_event_a4_ticket_small" t-field="event.organizer_id.website"/>
                            </div>
                        </div>
                    </div>
                    <div class="o_event_a4_ticket_barcode col-2">
                        <div class="o_event_a4_ticket_barcode_container">
                        </div>
                    </div>
                </div>
            </div>
            <div class="page oe_structure"/>
            <div t-field="event.ticket_extra_instructions" class="o_event_a4_extra_instructions px-2 pt-2"></div>
        </div>
        <div class="o_event_a4_ticket_footer">
            <div class="o_event_a4_ticket_powered_by font-weight-bold text-white text-right">
                <span>Event organized by </span>
                <span t-esc="event.organizer_id.name"/>
                <span> and Powered by Odoo</span>
            </div>
        </div>
    </div>
</template>

<template id="event_registration_report_template_a4_ticket">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="attendee">
            <t t-set="event" t-value="attendee.event_id.with_context(tz=attendee.event_id.date_tz)"/>
            <t t-call="event.event_report_template_a4_ticket"/>
        </t>
    </t>
</template>

<template id="event_event_report_template_a4_ticket">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="event">
            <t t-set="event" t-value="event.with_context(tz=event.date_tz)"/>
            <t t-call="event.event_report_template_a4_ticket"/>
        </t>
    </t>
</template>

</odoo>
