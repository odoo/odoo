<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="event_report_template_badge_common">
        <div class="article">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div t-field="event.badge_header">
                            <div class="row">
                                <img class="img img-responsive" src="/logo.png"/>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body" contenteditable="False">
                        <div class="row text-center mb32">
                            <h1 t-field="event.name"/>
                        </div>
                        <div class="row">
                            <div class="col-xs-offset-1 col-xs-1">
                                <i class="fa fa-map-marker fa-3x" aria-hidden="true"></i>
                            </div>
                            <div class="col-xs-4">
                                <div t-field="event.address_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            </div>
                            <div class="col-xs-offset-1 col-xs-1">
                                <i class="fa fa-calendar fa-3x" aria-hidden="true"/>
                            </div>
                            <div class="col-xs-4">
                                <div>
                                    <strong>From:</strong>
                                    <span itemprop="startDate" t-field="event.date_begin" t-options="{&quot;hide_seconds&quot;: True}"/>
                                </div>
                                <div>
                                    <strong>To:</strong>
                                    <span itemprop="endDate" t-field="event.date_end" t-options="{&quot;hide_seconds&quot;: True}"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt32">
                            <div class="col-xs-offset-1 col-xs-1 mt32">
                                <i class="fa fa-user fa-3x" aria-hidden="true"/>
                            </div>
                            <t t-if="attendee">
                                <div class="col-xs-4 mt32" id="o_event_attendee_name">
                                    <h3 t-field="attendee.name" class="mb0 mt0"/>
                                </div>
                            </t>
                            <t t-else="not attendee">
                                <div class="col-xs-4 mt32" id="o_event_attendee_name_edit">
                                    <h3 class="mb0 mt0">Attendee Name</h3>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div t-field="event.badge_footer">
                            <div class="row">
                                <div class="col-xs-offset-2 col-xs-10">
                                    <strong> Terms and conditions </strong>
                                    <ul>
                                        <li>Please print this ticket in A4 page and bring with you to the event.</li>
                                        <li>We expect participants to come 30 minutes before the event.</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <!-- template use to render a Registration Badge event.registration -->
    <template id="event_registration_report_template_badge">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="res">
                <t t-set="event" t-value="res.event_id"/>
                <t t-set="attendee" t-value="res"/>
                <t t-call="event.event_report_template_badge_common"/>
            </t>
        </t>
    </template>
    
    <!-- template use to edit Event Badget (allow to set the HTML badge fields) event.event-->
    <template id="event_event_report_template_badge">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="res">
                <t t-set="event" t-value="res"/>
                <t t-set="attendee" t-value="False"/>
                <t t-call="event.event_report_template_badge_common"/>
            </t>
        </t>
    </template>
</odoo>
