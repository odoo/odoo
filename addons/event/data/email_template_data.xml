                        <li>Attendee: <t t-esc="record.name"/></li>
                    </ul>
                    <p style="font-size:16px;">
                        See you soon,
                    </p>
                    <p style="font-size:16px; margin-bottom: 30px">
                        <i>
                           -- <br/>
                        <t t-if="record.event_id.organizer_id" t-esc="record.event_id.organizer_id.name"/>
