	<!-- OPTION TEMPLATE FOR CHECKBOX -->
	<t t-name="website.form.editor.template.option.checkbox">
		<div>
			<div class="checkbox">
				<label t-att-for="id">
					<input type="checkbox" t-att-id="id" t-att-name="id" t-att-value="value" />
					<span class="option"><t t-raw="label" /></span>
				</label>
			</div>
		</div>
	</t>
	<!-- OPTION TEMPLATE FOR CHECKBOX -->
	<t t-name="website.form.editor.template.option.radio">
		<div>
			<div class="radio">
				<label t-att-for="id">
					<input type="radio" t-att-id="id" t-att-name="id_label" t-att-value="value" />
					<span class="option"><t t-raw="label" /></span>
				</label>
			</div>
		</div>
	</t>
		
		<!-- OPTION TEMPLATE FOR SELECT -->
	<t t-name="website.form.editor.template.option.select">
			<option t-att-value="value"><t t-raw="label" /></option>
	</t>		
	
		<!-- OPTION TEMPLATE FOR SEARCH -->
	<t t-name="website.form.editor.template.option.search">
			<option t-att-value="value"><t t-raw="label" /></option>
	</t>
	
		<!-- OPTION TEMPLATE FOR OPTION WIZARD -->
	<t t-name="webiste.form.editor.wizard.option.template">
		<tr class="last">
			<td contenteditable="true" class="option-label">New Option Label</td>
			<td contenteditable="true" class="option-value">New Option Value</td>
			<td>
				<input type="button" class="btn btn-default form-editor-add" value="+" />
			</td>
		</tr>
	</t>


