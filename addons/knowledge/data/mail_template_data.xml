<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">
    <template id="knowledge_article_mail_invite">
<table border="0" cellpadding="0" style="background-color: white; padding: 0px; border-collapse:separate;">
    <tr><td valign="top">
        <div style="margin: 0px; padding: 0px; font-size: 13px;">
            <p style="margin: 0px; padding: 0px; font-size: 13px;">
                <p>Dear <t t-out="recipient.name"/>,</p>
                <t t-out="user.name  or ''"></t> invited you to access <t t-out="record.name"></t>.<br/><br/>
            </p>
        </div>
    </td></tr>
    <tr><td valign="top">
        <div style="margin: 16px 0px 16px 0px; padding: 8px 16px 8px 16px; background-color: #F1F1F1;">
            <p style="margin: 16px 0px 16px 0px; text-align: center;">
                <a t-att-href="link"
                    style="background-color:#875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                    Go to Article
                </a>
            </p>
        </div>
    </td></tr>
</table>
    </template>
</data>
