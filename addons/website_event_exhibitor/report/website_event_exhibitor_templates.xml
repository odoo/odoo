<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="event_report_template_a4_ticket_inherit_exhibitor" inherit_id="event.event_report_template_a4_ticket">
        <xpath expr="//div[hasclass('o_event_a4_ticket_powered_by')]" position="before">
            <div class="o_event_a4_ticket_sponsors_container text-center mb-4">
                <t t-foreach="event.sponsor_ids.filtered(lambda sponsor: sponsor.image_128)[:10]" t-as="sponsor">
                    <div class="o_event_a4_ticket_sponsor_card d-inline-block">
                        <div class="h-100 p-2 pb-0">
                            <span t-field="sponsor.image_128"
                                t-options='{"widget": "image", "class": "img img-fluid"}'/>
                        </div>
                    </div>
                </t>
            </div>
        </xpath>
    </template>
</odoo>
