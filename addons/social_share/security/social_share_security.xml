<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_social_share">
            <field name="name">Social Share</field>
            <field name="description">Helps you manage social post campaigns.</field>
            <field name="sequence">18</field>
        </record>

        <record id="group_social_share_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_social_share"/>
        </record>

        <record id="group_social_share_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_social_share"/>
            <field name="implied_ids" eval="[(4, ref('group_social_share_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
