<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Q-Commerce Senkronizasyon Logu -->
        <record id="view_qcommerce_sync_log_tree" model="ir.ui.view">
            <field name="name">qcommerce.sync.log.tree</field>
            <field name="model">qcommerce.sync.log</field>
            <field name="arch" type="xml">
                <list string="Senkronizasyon Logları"
                    colors="red:status=='error';green:status=='success'">
                    <field name="name" />
                    <field name="operation_type" />
                    <field name="status" />
                    <field name="records_processed" />
                    <field name="records_created" />
                    <field name="records_failed" />
                    <field name="duration_seconds" />
                    <field name="start_date" />
                </list>
            </field>
        </record>

        <record id="view_qcommerce_sync_log_form" model="ir.ui.view">
            <field name="name">qcommerce.sync.log.form</field>
            <field name="model">qcommerce.sync.log</field>
            <field name="arch" type="xml">
                <form string="Senkronizasyon Logu" create="False" edit="False">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="oe_inline" />
                            </h1>
                        </div>
                        <group>
                            <group string="İşlem Detayları">
                                <field name="channel_id" />
                                <field name="operation_type" />
                                <field name="status" widget="badge" />
                            </group>
                            <group string="Zaman">
                                <field name="start_date" />
                                <field name="end_date" />
                                <field name="duration_seconds" />
                            </group>
                        </group>
                        <group string="Sonuçlar">
                            <field name="records_processed" />
                            <field name="records_created" />
                            <field name="records_updated" />
                            <field name="records_failed" />
                        </group>
                        <group string="Hata" attrs="{'invisible': [('status', '!=', 'error')]}">
                            <field name="error_message" nolabel="1" />
                            <field name="error_details" nolabel="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
