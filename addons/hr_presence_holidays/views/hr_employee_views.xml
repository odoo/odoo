<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_view_kanban" model="ir.ui.view">
        <field name="name">hr.employee.view.kanban</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_presence.hr_employee_view_kanban"/>
        <field name="groups_id" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_set_present']" position="after">
                <button name="action_open_leave_request" type="object" attrs="{'invisible': [('hr_presence_state', '=', 'absent')]}" class="btn btn-primary btn-sm mt8">Time Off</button>
            </xpath>
        </field>
    </record>

</odoo>
