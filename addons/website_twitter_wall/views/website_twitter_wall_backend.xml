<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem name="Marketing" id="base.marketing_menu" sequence="85" groups="base.group_user"/>
    <menuitem id="menu_twitter_wall" parent="base.marketing_menu" name="Twitter Wall"/>

    <!-- TWITTER.AGENT Views -->
    <record id="view_twitter_wall_walls_tree" model="ir.ui.view">
        <field name="name">twitter.agent.tree</field>
        <field name="model">twitter.agent</field>
        <field name="arch" type="xml">
            <tree string="Walls">
                <field name="name" />
                <field name="description" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_twitter_wall_walls_form" model="ir.ui.view">
        <field name="name">twitter.agent.form</field>
        <field name="model">twitter.agent</field>
        <field name="arch" type="xml">
            <form string="Walls">
                <header>
                    <field name="state" widget="statusbar" clickable="True"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_left oe_avatar" />
                    <div class="oe_right oe_button_box" name="buttons">
                        <button class="oe_inline oe_stat_button" name="open_website_url"
                                type="object" icon="fa-globe">
                            <field name="website_published" widget="website_button"/>
                        </button>
                    </div>
                    <div class="oe_title oe_left">
                        <div class="oe_edit_only">
                            <label for="name" string="Name"/>
                        </div>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                        <field name="tweetus_ids" widget="many2many_tags" placeholder="Tweet Us Hashtag"/>
                    </div>
                    <group>
                        <field name="total_views" readonly="1" />
                        <field name="website_url"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_twitter_wall_walls" model="ir.actions.act_window">
        <field name="name">Walls</field>
        <field name="res_model">twitter.agent</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="action_twitter_wall_walls" id="menu_twitter_wall_walls" parent="menu_twitter_wall" sequence="1"/>

    <!-- TWITTER.TWEET Views -->
    <record id="view_twitter_wall_tweets_tree" model="ir.ui.view">
        <field name="name">twitter.tweet.tree</field>
        <field name="model">twitter.tweet</field>
        <field name="arch" type="xml">
            <tree string="Tweets" create="false" edit="false">
                <field name="tweet_id"/>
                <field name="agent_id" string="Wall" />
            </tree>
        </field>
    </record>

    <record id="view_twitter_wall_tweets_form" model="ir.ui.view">
        <field name="name">twitter.tweet.form</field>
        <field name="model">twitter.tweet</field>
        <field name="arch" type="xml">
            <form string="Tweets" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="tweet_id" />
                        <field name="agent_id" string="Wall" />
                        <field name="html_description" />
                        <field name="comment" string="Comment" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_twitter_wall_tweets" model="ir.actions.act_window">
        <field name="name">Tweets</field>
        <field name="res_model">twitter.tweet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="action_twitter_wall_tweets" id="menu_twitter_wall_tweets" parent="menu_twitter_wall" sequence="2"/>

    <!-- TWITTER.HASHTAG Views -->
    <record id="view_twitter_wall_hashtag_tree" model="ir.ui.view">
        <field name="name">twitter.hashtag.tree</field>
        <field name="model">twitter.hashtag</field>
        <field name="arch" type="xml">
            <tree string="Hashtags">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_twitter_wall_hashtag_form" model="ir.ui.view">
        <field name="name">twitter.hashtag.form</field>
        <field name="model">twitter.hashtag</field>
        <field name="arch" type="xml">
            <form string="Hashtag">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_twitter_wall_hashtag" model="ir.actions.act_window">
        <field name="name">Hashtags</field>
        <field name="res_model">twitter.hashtag</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="action_twitter_wall_hashtag" id="menu_twitter_wall_hashtag" parent="menu_twitter_wall" sequence="3"/>
</odoo>
