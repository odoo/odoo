<t t-name="hr_timesheet.FrequencyViewer">
    <div class="p-4">
        <h3 class="mb-4">Suggestion Frequency Stats</h3>

        <t t-foreach="Object.keys(this.freq)" t-as="row" t-key="row_index">
            <div class="card mb-3 shadow-sm">
                <div class="card-header fw-bold">
                    <t t-esc="row"/>
                </div>

                <table class="table table-sm mb-0">
                    <thead>
                        <tr>
                            <th>Project</th>
                            <th>Task</th>
                            <th>Billable</th>
                            <th>Freq</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="getRowStats(row)" t-as="stat" t-key="stat_index">
                            <tr>
                                <td><t t-esc="stat.project_id?.display_name || unmatched"/></td>
                                <td><t t-esc="stat.task_id?.display_name || unmatched"/></td>
                                <td><t t-esc="stat.billable"/></td>
                                <td><t t-esc="stat.count"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </div>
</t>
