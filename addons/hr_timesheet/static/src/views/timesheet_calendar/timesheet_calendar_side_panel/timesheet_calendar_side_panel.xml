<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="hr_timesheet.TimesheetCalendarSidePanel" t-inherit="hr_timesheet.TimesheetCalendarMyTimesheetsSidePanel" t-inherit-mode="primary">
        <xpath expr="//div[hasclass('btn-group')]/button[1]" position="attributes">
            <attribute name="data-tooltip">Filter by specific employees to view only their timesheets</attribute>
        </xpath>
        <xpath expr="//div[hasclass('btn-group')]/button[2]" position="attributes">
            <attribute name="data-tooltip">Click on a day or select a range of days to generate timesheets for the selected employees on the chosen dates</attribute>
        </xpath>
    </t>
</templates>
