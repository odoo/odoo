<odoo>
    <template id="report_timesheet">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="show_task" t-value="bool(docs.mapped('task_id'))"/>
                <t t-set="show_project" t-value="len(docs.mapped('project_id')) > 1"/>
                <t t-set="same_project" t-value="len(docs.mapped('project_id')) == 1"/>
                <t t-if="same_project" t-set="project_name" t-value="docs.mapped('project_id')[0].name"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-md-12">
                            <h2>
                                <span>Timesheet Entries<t t-if="same_project">
                                    for the <t t-esc="project_name"/> Project
                                    </t>
                                </span>
                            </h2>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Responsible</th>
                                        <th>Description</th>
                                        <th><span>Project</span></th>
                                        <th t-if="show_task">Task</th>
                                        <th class="text-right">Time</th>
                                    </tr>
                               </thead>
                               <tbody>
                                    <t t-foreach="docs" t-as="l">
                                        <tr>
                                            <td>
                                               <span t-field="l.date"/>
                                            </td>
                                            <td>
                                               <span t-field="l.user_id.partner_id.name"/>
                                            </td>
                                            <td >
                                                <span t-field="l.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <td>
                                                <span t-field="l.project_id.name"/>
                                            </td>
                                            <td t-if="show_task">
                                                <t t-if="l.task_id"><span t-field="l.task_id.name"/></t>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="l.unit_amount" t-options="{'widget': 'float_time'}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td />
                                        <td />
                                        <td />
                                        <td t-if="show_task"/>
                                        <td class="text-right"><strong>Total</strong></td>
                                        <t t-set="total_value" t-value="sum(docs.mapped('unit_amount'))" />
                                        <t t-set="sign" t-value="'-' if total_value &lt; 0 else ''"/>
                                        <td class="text-right"><strong t-esc="sign + '%s:%02.0f' % tuple(int(round(x)) for x in divmod(abs(total_value)*60,60))"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

    <report id="timesheet_report"
            model="account.analytic.line"
            string="Timesheet Entries"
            report_type="qweb-pdf"
            name="hr_timesheet.report_timesheet"
            file="report_timesheet"
    />
</odoo>
