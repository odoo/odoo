<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- inherit get state button on project -->
        <record id="project_view_rating" model="ir.ui.view">
            <field name="name">project.view.rating</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                     <button name="action_view_rating"
                         context="{'res_model': 'project.task'}"
                         class="oe_stat_button"
                         type="object"
                         icon="fa-smile-o">
                         <field string="% Happy on task" name="percentage_satisfaction_task" widget="statinfo"/>
                     </button>
                </xpath>
            </field>
        </record>

        <!-- inherit project.task.type form view to add email template for task -->
        <record id="project_task_type_inherit" model="ir.ui.view">
            <field name="name">project.task.type.inherit</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_edit"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sequence']" position="after">
                     <field name="template_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_rating_project_kanban_inherited" model="ir.ui.view">
            <field name="name">rating.project.project.kanban.inherited</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
                <field name="use_tasks" position="after">
                    <field name="percentage_satisfaction_project" invisible="1"/>
                    <field name="is_visible_happy_customer" invisible="1"/>
                </field>
                <xpath expr="//div[contains(@class, 'oe_kanban_project_list')]" position="after">
                    <div class="row oe_margin_top_8 oe_kanban_project_list">
                        <a t-if="record.is_visible_happy_customer.raw_value" name="action_view_rating" type="object">
                            <img t-if="record.percentage_satisfaction_project.raw_value &gt;= 0 and record.percentage_satisfaction_project.raw_value &lt;= 30" class="rating" src="rating/static/src/img/rating_0.png" style="width:10%;height:10%"></img>
                            <img t-if="record.percentage_satisfaction_project.raw_value &gt; 30 and record.percentage_satisfaction_project.raw_value &lt;= 69" class="rating" src="rating/static/src/img/rating_5.png" style="width:10%;height:10%"></img>
                            <img t-if="record.percentage_satisfaction_project.raw_value &gt;= 70" class="rating" src="rating/static/src/img/rating_10.png" style="width:10%;height:10%"></img>
                            <img t-if="record.percentage_satisfaction_project.raw_value &lt; 0" class="rating" src="rating/static/src/img/rating_-1.png" style="width:10%;height:10%"></img>
                            <t t-if="record.percentage_satisfaction_project.raw_value &gt;= 0">
                                <t t-raw="record.percentage_satisfaction_project.raw_value"/> %
                            </t>
                            <t t-if="record.percentage_satisfaction_project.raw_value &lt; 0">
                                No one has voted yet
                            </t>
                        </a>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
