<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fleet_vehicle_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(maintenance.hr_equipment_action)d"
                    context="{'search_default_vehicle_id': id,
                              'default_equipment_assign_to': 'vehicle',
                              'default_vehicle_id': id}"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-cubes">
                    <field name="equipment_count" widget="statinfo" string="Equipment Assigned"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
