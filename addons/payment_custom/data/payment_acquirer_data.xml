<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment.payment_acquirer_transfer" model="payment.acquirer">
        <field name="provider">custom</field>
        <field name="redirect_form_view_id" ref="redirect_form"/>
        <!-- Clear the default value before recomputing the pending_msg -->
        <field name="pending_msg" eval="False"/>
        <field name="custom_mode">wire_transfer</field>
    </record>

    <function model="payment.acquirer"
              name="_transfer_ensure_pending_msg_is_set"
              eval="[[ref('payment.payment_acquirer_transfer')]]"/>

</odoo>
