<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="calendar.Many2ManyAttendeeExpandable" t-inherit="web.Many2ManyTagsAvatarField" t-inherit-mode="primary">
        <xpath expr="//div[hasclass('many2many_tags_avatar_field_container')]" position="attributes">
            <attribute name="class" remove="mw-100" add="w-100 align-items-start" separator=" "/>
        </xpath>
        <xpath expr="//TagsList" position="before">
            <t t-if="this.tags.length gt 5">
                <div class="d-flex w-100">
                    <div class="flex-grow-1">
                        <strong><t t-out="this.attendeesCount"/> attendees</strong>
                        <br/><t t-out="this.acceptedCount"/> accepted
                        <br/><t t-out="this.declinedCount"/> declined
                        <br/><t t-out="this.uncertainCount"/> uncertain
                    </div>
                    <i role="button" t-on-click="this.onExpanderClick" t-att-class="this.state.expanded ? 'oi oi-chevron-up' : 'oi oi-chevron-down'"></i>
                </div>
            </t>
        </xpath>
        <xpath expr="//TagsList" position="replace">
            <t t-if="!this.state.expanded and this.tags.length > 10"> </t>
            <t t-else="">$0</t>
        </xpath>
    </t>

</templates>
