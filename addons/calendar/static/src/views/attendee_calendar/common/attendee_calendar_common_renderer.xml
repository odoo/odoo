<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="calendar.AttendeeCalendarCommonRenderer.event">
            <span t-if="!this.isTimeHidden and this.isMonth" class="d-none d-lg-inline fc-time fw-normal" t-esc="this.startTime" />
            <div t-attf-class="o_event_title text-truncate">
                <i t-if="this.isAlone" class="fa fa-exclamation-circle align-self-top me-1" data-tooltip="You're alone in this meeting"/>
                <span t-esc="this.title" t-attf-class="#{(this.attendeeStatus == 'accepted' || this.rawRecord.is_highlighted)  ? 'fw-bolder' : ''}"/>
                    <t t-if="!this.isAllDay and !this.isMonth and !this.isSmall">
                        <t t-if="24 > this.duration and this.duration > 0.5">
                            <br/><span class="fw-normal mt-1"><t t-esc="this.startTime"/> - <t t-esc="this.endTime"/></span>
                        </t>
                        <t t-else="">
                            , <t t-esc="this.startTime"/>
                        </t>
                    </t>
            </div>
    </t>
</templates>
