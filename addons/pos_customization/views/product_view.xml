<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_pos_custom" model="ir.ui.view">
        <field name="name">product.template.form.pos.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <!-- make public_description visible as well -->
            <xpath expr="//group[@name='public_description']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <!-- pos_description below public_descripiton in UI  -->
            <xpath expr="//group[@name='public_description']" position="inside">
                <group name="alternative_name" string="Alternative Name">
                    <field name="alternative_name" nolabel="1" placeholder="Enter alternative name here"/>
                </group>
               <group string="POS Alternative Products" name="pos_alternative_products_group">
                    <field name="pos_alternative_product_ids" widget="many2many_tags"
                       domain="[('id', '!=', id), ('available_in_pos', '=', True)]"
                       invisible="not available_in_pos"
                       placeholder="Select POS alternative products here"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
