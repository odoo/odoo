<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_move_revaluation_view_form" model="ir.ui.view">
        <field name="name">stock.move.revaluation.view.form</field>
        <field name="model">stock.move.revaluation</field>
        <field name="arch" type="xml">
            <form string="Adjust Valuation">
                <sheet>
                <field name="move_id" invisible="1"/>
                <group>
                    <group>
                        <field name="current_value"/>
                        <field name="new_value"/>
                        <field name="description"/>
                    </group>
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="stock_move_revaluation_action" model="ir.actions.act_window">
        <field name="name">Adjust Valuation</field>
        <field name="res_model">stock.move.revaluation</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
