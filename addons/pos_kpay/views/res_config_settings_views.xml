<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_kpay</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_terminals_section']" position="inside">
                <setting id="kpay_payment_terminal_setting" title="The transactions are processed by KPay. Set the IP address of the terminal on the related payment method." string="KPay" help="Accept payments with a KPay payment terminal">
                    <field name="module_pos_kpay"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
