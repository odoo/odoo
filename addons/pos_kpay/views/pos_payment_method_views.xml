<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.pos_kpay</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="kpay_terminal_ip_address"
                    invisible="use_payment_terminal != 'kpay'"
                    required="use_payment_terminal == 'kpay'"/>
                <field name="kpay_app_id"
                    invisible="use_payment_terminal != 'kpay'"
                    required="use_payment_terminal == 'kpay'"/>
                <field name="kpay_app_secret" password="True"
                    invisible="use_payment_terminal != 'kpay'"
                    required="use_payment_terminal == 'kpay'"/>
                <field name="kpay_payment_type" invisible="use_payment_terminal != 'kpay'" placeholder="If not set, all payment types will be used."/>
            </xpath>
        </field>
    </record>
</odoo>
