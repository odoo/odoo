<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_aggregator_config_tree" model="ir.ui.view">
        <field name="name">pos.aggregator.config.tree</field>
        <field name="model">pos.aggregator.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="provider"/>
                <field name="active"/>
                <field name="webhook_url" widget="url"/>
            </list>
        </field>
    </record>

    <record id="view_pos_aggregator_config_form" model="ir.ui.view">
        <field name="name">pos.aggregator.config.form</field>
        <field name="model">pos.aggregator.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Uber Eats Main Store"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Provider">
                            <field name="provider"/>
                            <field name="active"/>
                        </group>
                        <group string="Configuration">
                            <field name="store_id"/>
                            <field name="client_id"/>
                            <field name="client_secret" password="True"/>
                        </group>
                    </group>
                    <group string="Integration Details">
                        <field name="webhook_url" widget="url" readonly="1"/>
                        <p class="text-muted">
                            Copy this URL to your Uber Eats Developer Dashboard.
                        </p>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_aggregator_config" model="ir.actions.act_window">
        <field name="name">Aggregator Integrations</field>
        <field name="res_model">pos.aggregator.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_pos_aggregator_config"
              name="Aggregator Integrations"
              parent="point_of_sale.menu_point_config_product"
              action="action_pos_aggregator_config"
              sequence="100"/>
</odoo>
