<?xml version="1.0"?>
<odoo>
    <record id="hr_recruitment_post_job_form" model="ir.ui.view">
        <field name="name">hr.recruitment.post.job.form</field>
        <field name="model">hr.recruitment.post.job</field>
        <field name="inherit_id" ref="hr_recruitment_integration.hr_recruitment_post_job_form"/>
        <field name="arch" type="xml">
            <field name="job_apply_mail" position="replace">
                <field name="apply_method" widget="radio"/>
                <field name="job_apply_mail" invisible="apply_method == 'redirect'"/>
            </field>
        </field>
    </record>
</odoo>
