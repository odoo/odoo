<openerp>
    <data>
        <record id="acquirer_form_mpesa" model="ir.ui.view">
            <field name="name">acquirer.form.mpesa</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer_display"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'mpesa')]}">
                            <group>
                                <field name="mpesa_option" attrs="{'required': [('provider', '=', 'mpesa')]}"/>
                            </group>
			    <group>
                                <field name="rcpt_msisdn" attrs="{'invisible': [('mpesa_option', '!=', 'send_money')], 
                                      'required': [('mpesa_option', '=', 'send_money')]}"/>
                                <field name="till_number" attrs="{'invisible': [('mpesa_option', '!=', 'lipa_na_mpesa')],
                                      'required': [('mpesa_option', '=', 'lipa_na_mpesa')]}"/>
                                <field name="paybill_number" attrs="{'invisible': [('mpesa_option', '!=', 'paybill')],
                                      'required': ['&amp;',('mpesa_option', '=', 'paybill'), ('provider', '=', 'mpesa')]}"/>
                            </group>
                    </group>
                </xpath>
            </field>
        </record>
        <!-- MPESA message Action-->
        <record id="mpesa_message_action" model="ir.actions.act_window">
         <field name="name">MPESA Messages</field>
         <field name="res_model">mpesa.message</field>
         <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="mpesa_message_menu" parent="payment.root_payment_menu" action="mpesa_message_action"/>

<!-- mpesa_message Tree view-->
        <record id="mpesa_message_tree" model="ir.ui.view">
         <field name="name">mpesa.message.tree</field>
         <field name="model">mpesa.message</field>
         <field name="arch" type="xml">
           <tree>
                 <field name="name"/>
                 <field name="phone"/>
                 <field name="time"/>
                 <field name="amount"/>
                 <field name="bal"/>
           </tree>
         </field>
        </record>

<!-- mpesa_message form view-->
        <record id="mpesa_message_form" model="ir.ui.view">
         <field name="name">mpesa.message.form</field>
         <field name="model">mpesa.message</field>
         <field name="arch" type="xml">
           <form>
	     <sheet>
	       <group>
		<group>
                 <field name="code"/>
                 <field name="phone"/>
                 <field name="time"/>
		</group>
		<group>
                 <field name="name"/>
                 <field name="amount"/>
                 <field name="bal"/>
		</group>
	       </group>
	       <notebook>
		  <page string="MPESA Message">
                     <field name="msg"/>
		  </page>
	       </notebook>
	     </sheet>
	      <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread" options="{&quot;thread_level&quot;: 1}" placeholder="Send a message to the gro     	   up"/>
             </div>
           </form>
         </field>
        </record>
    </data>
</openerp>
