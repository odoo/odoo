<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="l10n_in_external_layout_boxed" inherit_id="report.external_layout_boxed">
        <xpath expr="//li[@t-if='company.vat']" position="replace">
            <li t-if="company.x_gstin">GSTIN: <span t-field="company.x_gstin"/></li>
        </xpath>
    </template>

    <template id="l10n_in_external_layout_standard" inherit_id="report.external_layout_standard">
        <xpath expr="//div[contains(@class, 'footer')]//li[@t-if='company.vat']" position="replace">
            <li t-if="company.x_gstin">GSTIN: <span t-field="company.x_gstin"/></li>
        </xpath>
    </template>

    <template id="l10n_in_external_layout_clean" inherit_id="report.external_layout_clean">
        <xpath expr="//li[@t-if='company.vat']" position="replace">
            <li t-if="company.x_gstin">GSTIN: <span t-field="company.x_gstin"/></li>
        </xpath>
    </template>

    <template id="l10n_in_external_layout_background" inherit_id="report.external_layout_background">
        <xpath expr="//li[@t-if='company.vat']" position="replace">
            <li t-if="company.x_gstin"><i class="fa fa-building-o"/> GSTIN: <span t-field="company.x_gstin"/></li>
        </xpath>
    </template>

</odoo>
