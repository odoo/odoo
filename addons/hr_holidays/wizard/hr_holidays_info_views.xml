<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_holidays_info_view_approve_form" model="ir.ui.view">
        <field name="name">hr.holidays.info.approve.form</field>
        <field name="model">hr.holidays.info</field>
        <field name="arch" type="xml">
            <form>
                <p>
                    You can approve the holidays by clicking on Approve button.
                </p>
                <footer>
                    <button name="action_approve" string="Approve" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_holidays_info_view_refuse_form" model="ir.ui.view">
        <field name="name">hr.holidays.info.refuse.form</field>
        <field name="model">hr.holidays.info</field>
        <field name="arch" type="xml">
            <form>
                <p>
                    You can refuse the holidays by clicking on Refuse button.
                </p>
                <footer>
                    <button name="action_refuse" string="Refuse" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
