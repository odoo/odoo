<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="main_menu.NavBar.AppsMenu" t-inherit="web.NavBar.AppsMenu" t-inherit-mode="extension">
        <xpath expr="//Dropdown" position="attributes">
            <attribute name="disabled">true</attribute>
            <attribute name="t-on-click">onClickMenu</attribute>
        </xpath>
    </t>
    <t t-name="main_menu.NavBar.AppsMenu.Sidebar" t-inherit="web.NavBar.AppsMenu.Sidebar" t-inherit-mode="extension">
        <xpath expr="//a" position="attributes">
            <attribute name="t-on-click.prevent">onClickMenu</attribute>
        </xpath>
    </t>
</templates>
