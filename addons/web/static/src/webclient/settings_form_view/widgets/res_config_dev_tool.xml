<?xml version="1.0" encoding="utf-8"?>
<template>
    <div t-name='res_config_dev_tool'>
        <div id="developer_tool">
            <SettingsBlock title.translate="Developer Tools">
                <Setting addLabel="false">
                        <button t-if="!isDebug" class="d-block btn btn-link p-0 fw-normal" t-on-click="() => this.activateDebug(1)">Activate the developer mode</button>
                        <button t-if="!isAssets" class="d-block btn btn-link p-0 fw-normal" t-on-click="() => this.activateDebug('assets')">Activate the developer mode (with assets)</button>
                        <button t-if="!isTests" class="d-block btn btn-link p-0 fw-normal" t-on-click="() => this.activateDebug('assets,tests')">Activate the developer mode (with tests assets)</button>
                        <button t-if="isDebug" class="d-block btn btn-link p-0 fw-normal" t-on-click="() => this.activateDebug(0)">Deactivate the developer mode</button>
                        <button t-if="isDebug and !isDemoDataActive" t-on-click.prevent="onClickForceDemo" class="o_web_settings_force_demo btn btn-link p-0 fw-normal">Load demo data</button>
                </Setting>
            </SettingsBlock>
        </div>
    </div>
</template>
