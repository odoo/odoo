<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web.SettingsBlock">
        <h2 t-if="this.props.title" t-ref="settingsContainerTitle"><HighlightText originalText="this.props.title"/></h2>
        <h3 t-if="this.props.tip" class="o_setting_tip text-muted" t-ref="settingsContainerTip"><HighlightText originalText="this.props.tip"/></h3>
        <div class="row mt16 o_settings_container" t-att-class="this.props.class" t-ref="settingsContainer">
            <t t-slot="default"/>
        </div>
    </t>
</templates>
