<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="web.ResUserGroupIdsPrivilegeField">
    <div class="d-flex justify-content-between w-100" t-att-class="{'o_is_implied': this.isImplied, 'o_is_disjoint': this.isDisjoint}">
        <SelectionField t-if="this.type == 'selection'" t-props="this.props" placeholder="this.impliedGroupDisplayName"/>
        <BooleanField t-else="" t-props="this.props"/>
        <button t-if="this.isDebug" t-att-class="this.infoButtonClassnames" type="button" t-on-click="this.onClickInfoButton" tabindex="-1"/>
    </div>
</t>

</templates>
