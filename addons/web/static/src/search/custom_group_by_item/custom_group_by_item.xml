<templates xml:space="preserve">

    <t t-name="web.CustomGroupByItem" owl="1">
        <AccordionItem class="'o_add_custom_group_menu'" description="'Add Custom Group'">
            <div class="px-3 py-2">
                <select class="o_input" t-model="state.fieldName">
                    <option t-foreach="props.fields" t-as="field" t-key="field.name"
                    t-att-value="field.name"
                    t-out="field.string"
                    />
                </select>
            </div>
            <div class="px-3 py-2">
                <button class="btn btn-primary w-100"
                    t-on-click="() => props.onAddCustomGroup(state.fieldName)"
                    >
                    Apply
                </button>
            </div>
        </AccordionItem>
    </t>

</templates>
