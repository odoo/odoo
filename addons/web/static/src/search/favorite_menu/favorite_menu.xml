<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.FavoriteMenu" owl="1">
        <Dropdown class="btn-group o_favorite_menu"
            togglerClass="'o_dropdown_toggler btn btn-secondary'"
            t-on-dropdown-item-selected="onFavoriteSelected"
            >
            <t t-set-slot="toggler">
                <i class="mr-1" t-att-class="icon"/>
                <span class="o_dropdown_title">Favorites</span>
            </t>
            <t t-set="currentGroup" t-value="null"/>
            <t t-foreach="items" t-as="item" t-key="item.id or item.key">
                <t t-if="currentGroup !== null and currentGroup !== item.groupNumber">
                    <li role="separator" class="dropdown-divider"/>
                </t>
                <t t-if="item.type ==='favorite'">
                    <DropdownItem class="o_menu_item dropdown-item"
                        t-att-class="{ active: item.isActive }"
                        payload="{ itemId: item.id }"
                        parentClosingMode="'none'"
                        >
                        <t t-esc="item.description"/>
                        <i class="o_icon_right fa fa-trash-o"
                            title="Delete item"
                            t-on-click.stop="openConfirmationDialog(item.id)"
                            />
                    </DropdownItem>
                </t>
                <t t-else="">
                    <li>
                        <t t-component="item.Component" t-on-dropdown-item-selected.stop=""/>
                    </li>
                </t>
                <t t-set="currentGroup" t-value="item.groupNumber"/>
            </t>
        </Dropdown>
    </t>

</templates>
