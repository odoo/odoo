<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<t t-name="web.SearchPanel">
    <t t-if="this.env.isSmall">
        <t t-call="web.SearchPanel.Small" />
    </t>
    <t t-else="">
        <t t-if="this.state.sidebarExpanded" t-call="web.SearchPanel.Regular" />
        <t t-else="" t-call="web.SearchPanel.Sidebar" />
    </t>
</t>

<t t-name="web.SearchPanel.Sidebar">
    <div class="bg-view h-100 o_search_panel_sidebar cursor-pointer d-print-none" t-on-click="this.toggleSidebar">
        <t t-set="categories" t-value="this.getCategorySelection()" />
        <t t-set="filters" t-value="this.getFilterSelection()" />
        <div class="d-flex">
            <button class="btn btn-light btn-sm m-2 p-1 py-2">
                <i class="oi oi-panel-right fa-flip-horizontal"/>
            </button>
            <div class="o_search_panel_current_selection text-truncate mx-auto">
                <t t-if="!this.categories.length and !this.filters.length">
                    All
                </t>
                <t t-else="">
                    <t t-foreach="this.categories" t-as="category" t-key="this.category_index">
                        <span class="o_search_panel_category mb-2">
                            <i t-if="this.category.icon"
                                t-attf-class="o_search_panel_section_icon fa {{ category.icon }} fa-rotate-90 mb-2"
                                t-att-style="category.color and ('color: ' + category.color)"
                            />
                            <t t-esc="this.category.values.join(' / ')" />
                        </span>
                    </t>
                    <t t-foreach="this.filters" t-as="filter" t-key="this.filter_index">
                        <span class="o_search_panel_filter mb-2">
                            <i t-if="this.filter.icon"
                                t-attf-class="o_search_panel_section_icon fa {{ filter.icon }} fa-rotate-90 mb-2"
                                t-att-style="filter.color and ('color: ' + filter.color)"
                            />
                            <t t-esc="this.filter.values.join(', ')" />
                        </span>
                    </t>
                </t>
            </div>
        </div>
    </div>
</t>

<t t-name="web.SearchPanelContent">
    <div class="o_search_panel flex-grow-0 flex-shrink-0 h-100 pb-5 bg-view overflow-auto position-relative"
         t-att-class="this.env.searchModel.searchPanelInfo.className"
         t-attf-class="#{this.env.isSmall ? 'px-3' : 'pe-1 ps-3'}"
         t-ref="root">
        <button t-if="!this.env.isSmall" class="btn btn-light btn-sm end-0 m-2 position-absolute px-2 py-1 top-0 z-1" t-on-click="this.toggleSidebar">
            <i class="oi oi-panel-right fa-flip-horizontal"/>
        </button>
        <div t-if="!this.sections or this.sections.length === 0" class="o_search_panel_empty_state me-3">
            <button class="btn mt-2 w-100 overflow-visible">
                <div class="d-flex align-items-center me-2 ms-auto">All</div>
            </button>
        </div>
        <section t-foreach="this.sections" t-as="section" t-key="this.section.id"
            t-attf-class="o_search_panel_section o_search_panel_{{ section.type }}"
            >
            <header class="o_search_panel_section_header pt-4 pb-2 text-uppercase cursor-default">
                <i t-attf-class="fa {{ section.icon }} o_search_panel_section_icon {{!section.color &amp;&amp; section.type == 'filter' ? 'text-warning' : !section.color ? 'text-primary': ''}} me-2"
                    t-att-style="section.color and ('color: ' + section.color)"
                />
                <b t-esc="this.section.description"/>
            </header>
            <t t-call="web.SearchPanel.Section"/>
        </section>
    </div>
    <div class="h-100">
        <span class="o_search_panel_resize" t-on-click.stop.prevent="" t-on-pointerdown.stop.prevent="this._onStartResize"/>
    </div>
</t>

<t t-name="web.SearchPanel.Section">
    <div t-if="this.section.errorMsg" class="alert alert-warning">
        <span><t t-esc="this.section.errorMsg"/></span>
    </div>
    <ul t-else="" class="list-group d-block o_search_panel_field px-2 px-md-0">
        <t t-if="this.section.type === 'category'" t-call="{{ this.constructor.subTemplates.category }}">
            <t t-set="values" t-value="this.section.rootIds"/>
        </t>
        <t t-elif="this.section.groups">
            <li
                t-foreach="this.section.sortedGroupIds" t-as="groupId" t-key="this.groupId"
                class="o_search_panel_filter_group list-group-item p-0 border-0"
                t-att-class="groupId_last? 'mb-0' : 'mb-3'"
                >
                <!-- TODO: this is a workaround for issue https://github.com/odoo/owl/issues/695 (remove when solved) -->
                <t t-set="_section" t-value="this.section"/>
                <t t-set="group" t-value="this.section.groups.get(this.groupId)"/>
                <header class="o_search_panel_group_header pb-1">
                    <div class="form-check w-100">
                        <!-- TODO: "indeterminate" could not be set in the template and had to be set in
                            JS manually. See https://github.com/odoo/owl/issues/713 (adapt when solved)
                        -->
                        <input type="checkbox"
                            class="form-check-input"
                            t-attf-id="{{ section.id }}_input_{{ groupId }})"
                            t-on-click="() => this.toggleFilterGroup(section.id, group)"
                        />
                        <label
                            t-attf-for="{{ section.id }}_input_{{ groupId }})"
                            class="o_search_panel_label form-check-label d-flex align-items-center justify-content-between w-100 cursor-pointer"
                            t-att-class="{ o_with_counters: group.enableCounters }"
                            t-att-title="group.tooltip or false"
                            >
                            <span class="o_search_panel_label_title text-truncate"
                                  t-attf-class="{{ group.color_index ? 'o_tag o_badge badge rounded-pill o_tag_color_' + group.color_index : ''}}">
                                <t t-esc="this.group.name"/>
                            </span>
                        </label>
                    </div>
                </header>
                <ul class="list-group d-block">
                    <t t-call="{{ this.constructor.subTemplates.filtersGroup }}">
                        <t t-set="values" t-value="this.group.values"/>
                        <t t-set="isChildList" t-value="true"/>
                        <!-- TODO: this is a workaround for issue https://github.com/odoo/owl/issues/695 (remove when solved) -->
                        <t t-set="section" t-value="this._section"/>
                    </t>
                </ul>
            </li>
            <ul t-if="this.section.groups.get(false)" class="list-group d-block">
                <t t-call="{{ this.constructor.subTemplates.filtersGroup }}">
                    <t t-set="group" t-value="this.section.groups.get(false)"/>
                    <t t-set="values" t-value="this.group.values"/>
                    <!-- TODO: this is a workaround for issue https://github.com/odoo/owl/issues/695 (remove when solved) -->
                    <t t-set="section" t-value="this.section"/>
                </t>
            </ul>
        </t>
        <t t-else="" t-call="{{ this.constructor.subTemplates.filtersGroup }}">
            <t t-set="values" t-value="this.section.values"/>
        </t>
    </ul>
</t>

<t t-name="web.SearchPanel.Regular" t-inherit="web.SearchPanelContent" t-inherit-mode="primary"/>

<t t-name="web.SearchPanel.Small">
    <div
        class="o_search_panel w-100 overflow-visible"
        t-ref="root"
        >
        <div class="d-flex overflow-auto align-items-center px-2 border-top">
            <div t-if="!this.sections or this.sections.length === 0" class="o_search_panel_empty_state me-3">
                <button class="btn w-100">
                    <div class="d-flex align-items-center me-2 ms-auto">All</div>
                </button>
            </div>
            <Dropdown t-foreach="this.sections" t-as="section" t-key="this.section.id" state="this.getDropdownState(section.id)" menuClass="'my-2 mx-1'" onOpened.bind="this.updateGroupHeadersChecked">
                <span class="btn btn-secondary my-2 mx-1 o-dropdown-caret">
                    <i t-attf-class="fa {{ section.icon }} o_search_panel_section_icon {{!section.color &amp;&amp; section.type == 'filter' ? 'text-warning' : !section.color ? 'text-primary': ''}} me-2"
                        t-att-style="section.color and ('color: ' + section.color)"
                    />
                    <b class="pe-2" t-if="this.section.type !== 'category' || !this.state.active[this.section.id]" t-esc="this.section.description"/>
                    <b class="pe-2" t-else="" t-esc="this.section.values.get(this.section.activeValueId)['display_name']"/>
                </span>
                <t t-set-slot="content">
                    <div t-attf-class="o_search_panel_{{ section.type }}" class="o_search_panel_section">
                        <t t-call="web.SearchPanel.Section"/>
                    </div>
                    <div t-if="this.section.type !== 'category' and this.hasSelection(this.section.id)" class="text-end">
                        <a href="#" title="Clear All" class="btn btn-link text-nowrap text-uppercase" t-on-click="() => this.clearSelection(section.id)">CLEAR ALL</a>
                    </div>
                </t>
            </Dropdown>
            <a href="#" t-if="this.hasSelection()" title="Clear All" class="btn btn-link text-nowrap text-uppercase" t-on-click="() => this.clearSelection()">CLEAR ALL</a>
        </div>
    </div>
</t>

<t t-name="web.SearchPanel.Category">
    <t t-foreach="this.values" t-as="valueId" t-key="this.valueId">
        <t t-set="value" t-value="this.section.values.get(this.valueId)"/>
        <li class="o_search_panel_category_value list-group-item py-1 cursor-pointer border-0 pe-0"
            t-att-class="isChildList ? this.env.isSmall ? '' : 'o_treeEntry' : 'ps-0'"
            >
            <header
                class="list-group-item list-group-item-action d-flex align-items-center px-0 py-lg-0 border-0"
                t-att-class="{'active text-black fw-bold': this.state.active[this.section.id] === valueId}"
                t-on-click="() => this.toggleCategory(this.section, value)"
                >
                <div
                    class="o_search_panel_label d-flex align-items-center overflow-hidden w-100 cursor-pointer mb-0"
                    t-att-class="{'o_with_counters': this.section.enableCounters }"
                    t-att-data-tooltip="value.display_name"
                    >
                    <button class="o_toggle_fold btn p-0 px-1 flex-shrink-0 text-center">
                        <i
                            t-if="this.value.childrenIds.length"
                            class="fa"
                            t-att-class="{
                                'fa-caret-down' : this.state.expanded[this.section.id][valueId],
                                'fa-caret-right':  !this.state.expanded[this.section.id][valueId]
                            }"
                            />
                    </button>
                    <span
                        class="o_search_panel_label_title text-truncate"
                        t-att-class="{'fw-bold' : value.bold}"
                        t-esc="this.value.display_name"
                        />
                </div>
                <small t-if="this.section.enableCounters and this.value.__count gt 0"
                    class="o_search_panel_counter text-muted mx-2 fw-bold"
                    t-esc="this.value.__count"
                />
            </header>
            <ul t-if="this.value.childrenIds.length and this.state.expanded[this.section.id][this.valueId]"
                class="list-group d-block"
                >
                <t t-call="{{ this.constructor.subTemplates.category }}">
                    <t t-set="values" t-value="this.value.childrenIds"/>
                    <t t-set="isChildList" t-value="true"/>
                </t>
            </ul>
        </li>
    </t>
</t>

<t t-name="web.SearchPanel.FiltersGroup">
    <li t-foreach="[...this.values.keys()]" t-as="valueId" t-key="this.valueId"
        class="o_search_panel_filter_value list-group-item p-0 mb-1 border-0 cursor-pointer"
        t-att-class="{ 'ps-2' : this.isChildList }"
        >
        <t t-set="value" t-value="this.values.get(this.valueId)"/>
        <div class="form-check w-100">
            <input type="checkbox"
                t-attf-id="{{ this.section.id }}_input_{{ valueId }}"
                t-att-checked="this.state.active[this.section.id][valueId]"
                class="form-check-input"
                t-on-click="ev => this.toggleFilterValue(this.section.id, valueId, ev)"
            />
            <label class="o_search_panel_label form-check-label d-flex align-items-center justify-content-between w-100 cursor-pointer"
                t-attf-for="{{ this.section.id }}_input_{{ valueId }}"
                t-att-title="(this.group and this.group.tooltip) or false">
                <span class="o_search_panel_label_title text-truncate" t-esc="this.value.display_name"/>
                <span t-if="this.section.enableCounters and this.value.__count gt 0"
                    class="o_search_panel_counter text-muted mx-2 small"
                    t-esc="this.value.__count"
                />
            </label>
        </div>
    </li>
</t>

</templates>
