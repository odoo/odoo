<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.CustomGroupByItem" owl="1">
        <Dropdown tag="'li'" class="o_add_custom_group_menu o_dropdown_inline" t-on-dropdown-item-selected.capture="onApply">
            <t t-set-slot="toggler">
                Add Custom Group
            </t>
            <li>
                <select class="w-auto o_input" t-model="state.fieldName">
                    <option t-foreach="props.fields" t-as="field" t-key="field.name" t-att-value="field.name" t-esc="field.string" />
                </select>
            </li>
            <DropdownItem class="btn btn-primary">
                <span>Apply</span>
            </DropdownItem>
        </Dropdown>
    </t>

</templates>
