<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.SearchBar.Toggler">
        <button t-if="this.props.isSmall" t-attf-class="btn btn-secondary {{ this.props.showSearchBar ? 'active' : '' }}" t-on-click="this.props.toggleSearchBar">
            <i class="fa fa-fw fa-search"/>
        </button>
    </t>

    <t t-name="web.SearchBar.Toggler.Offline">
        <button t-if="this.props.isSmall" t-att-disabled="this.isDisabled" t-attf-class="btn btn-secondary {{ this.props.showSearchBar ? 'active' : '' }}" t-on-click="this.props.toggleSearchBar" data-available-offline="">
            <i class="fa fa-fw fa-search"/>
        </button>
    </t>

</templates>
