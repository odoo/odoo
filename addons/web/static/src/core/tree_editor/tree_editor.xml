<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="web.TreeEditor">
        <div class="o_tree_editor w-100" aria-atomic="true" t-att-class="this.className">
            <div t-attf-class="o_tree_editor_node d-flex flex-column #{this.props.readonly ? (this.props.isSubTree ? 'gap-0' : 'gap-2') : 'gap-1'}">
                <t t-set="ancestors" t-value="[]"/>
                <t t-set="node" t-value="this.tree" />
                <div class="o_tree_editor_row o_tree_editor_connector d-flex align-items-center flex-wrap" t-att-class="{'ps-4': this.props.isSubTree}">
                    <div class="d-flex flex-grow-1 align-items-center">
                        <t t-if="this.node.children.length">
                            <span t-if="!this.props.isSubTree">Match</span>
                            <t t-call="web.TreeEditor.connector.value" />
                            <span t-if="this.props.isSubTree">of:</span>
                            <span t-else="">of the following rules:</span>
                        </t>
                        <t t-elif="this.node.value === '|' ? this.node.negate : !this.node.negate">
                            <span><span t-if="!this.props.isSubTree">Match </span><strong>all records</strong></span>
                        </t>
                        <t t-else="">
                            <span><span t-if="!this.props.isSubTree">Match </span><strong>no records</strong></span>
                        </t>
                    </div>
                    <t t-slot="default"/>
                </div>
                <t t-if="this.node.children.length" t-call="web.TreeEditor.connector.children" />
                <t t-if="!this.props.readonly">
                    <div class="o_tree_editor_row d-flex align-items-center" t-att-class="{ 'ps-4': this.addPadding || this.props.isSubTree }">
                        <button class="btn btn-link btn-link-inline" t-on-click="() => this.addNewCondition(node)">New Rule</button>
                    </div>
                </t>
            </div>
        </div>
    </t>

    <t t-name="web.TreeEditor.controls">
        <div class="o_tree_editor_node_control_panel d-flex" role="toolbar" aria-label="Domain node">
            <t t-if="this.node.type !== 'connector'">
                <button
                    t-if="this.ancestors.length === 1"
                    class="btn px-2 fs-4"
                    data-tooltip="Add nested rule"
                    aria-label="Add nested rule"
                    t-on-click="() => this.addNewConnector(this.parent, this.node)"
                    t-on-mouseenter="(ev) => this.highlightNode(ev.target, true)"
                    t-on-mouseleave="(ev) => this.highlightNode(ev.target, false)"
                >
                    <i class="fa fa-sitemap" />
                </button>
                <button
                    t-else=""
                    class="btn px-2 fs-4"
                    data-tooltip="Add rule"
                    aria-label="Add rule"
                    t-on-click="() => this.addNewCondition(this.parent, this.node)"
                    t-on-mouseenter="(ev) => this.highlightNode(ev.target, true)"
                    t-on-mouseleave="(ev) => this.highlightNode(ev.target, false)"
                >
                    <i class="fa fa-plus" />
                </button>
            </t>
            <button
                class="btn btn-link px-2 text-danger fs-4"
                data-tooltip="Delete rule"
                aria-label="Delete rule"
                t-on-click="() => this.delete(this.ancestors, this.node)"
                t-on-mouseenter="(ev) => this.highlightNode(ev.target, true)"
                t-on-mouseleave="(ev) => this.highlightNode(ev.target, false)"
            >
                <i class="fa fa-trash" />
            </button>
        </div>
    </t>

    <t t-name="web.TreeEditor.connector.value">
        <t t-set="title">
            <t t-if="this.node.value === '|'">
                <t t-if="this.node.negate">none</t>
                <t t-else="">any</t>
            </t>
            <t t-else="">
                <t t-if="this.node.negate">not all</t>
                <t t-else="">all</t>
            </t>
        </t>
        <t t-if="this.props.readonly">
            <div class="o_tree_editor_connector_value px-1">
                <strong class="text-primary" t-esc="this.title"/>
            </div>
        </t>
        <t t-else="">
            <div class="o_tree_editor_connector_value px-1" aria-atomic="true">
                <button class="btn o-dropdown o-dropdown-caret p-0 opacity-75" t-on-click="() => this.updateConnector(this.node)">
                    <strong class="text-primary" t-esc="this.title"/>
                </button>
            </div>
        </t>
    </t>

    <t t-name="web.TreeEditor.connector.children">
        <t t-foreach="this.node.children" t-as="child" t-key="this.child.type + '_' + this.child_index">
            <div class="o_tree_editor_node" t-att-class="{ 'ps-4': addPadding || this.props.isSubTree }">
                <t t-call="web.TreeEditor.{{ child.type }}">
                    <t t-set="ancestors" t-value="[...this.ancestors, this.node]" />
                    <t t-set="parent" t-value="this.node" />
                    <t t-set="node" t-value="this.child" />
                </t>
            </div>
        </t>
    </t>

    <t t-name="web.TreeEditor.connector">
        <div class="o_tree_editor_row o_tree_editor_connector d-flex align-items-center">
            <div class="d-flex flex-grow-1">
                <t t-call="web.TreeEditor.connector.value" />
                <span>of:</span>
            </div>
            <t t-if="!this.props.readonly">
                <t t-call="web.TreeEditor.controls" />
            </t>
        </div>
        <t t-call="web.TreeEditor.connector.children">
            <t t-set="addPadding" t-value="true" />
        </t>
    </t>

    <t t-name="web.TreeEditor.condition">
        <div class="o_tree_editor_row d-flex align-items-center">
            <t t-if="this.props.readonly">
                <t t-call="web.TreeEditor.condition:readonly" />
            </t>
            <t t-else="">
                <t t-call="web.TreeEditor.condition:editable" />
                <t t-call="web.TreeEditor.controls" />
            </t>
        </div>
        <t t-if="this.isTree(this.node.value)">
            <TreeEditor t-props="this.props"
                update="(value) => this.updateLeafValue(this.node, value)"
                slots="{}"
                isSubTree="true"
                tree="this.node.value"
                resModel="this.getResModel(this.node)"
            />
        </t>
    </t>

    <t t-name="web.TreeEditor.condition:readonly">
        <t t-set="description" t-value="this.getConditionDescription(this.node)" />
        <div class="o_tree_editor_condition d-flex gap-1 px-2 border bg-100">
            <div class="fw-bolder text-nowrap" t-esc="this.description.pathDescription" />
            <div class="fst-italic text-nowrap" t-esc="this.description.operatorDescription" />
            <t t-if="this.description.valueDescription">
                <t t-set="values" t-value="this.description.valueDescription.values" />
                <t t-set="join" t-value="this.description.valueDescription.join" />
                <t t-set="addParenthesis" t-value="this.description.valueDescription.addParenthesis" />
                <t t-if="this.addParenthesis">( </t>
                <t t-foreach="this.values" t-as="val" t-key="this.val_index">
                    <span class="text-primary fw-bolder"><t t-esc="this.val" /></span>
                    <t t-if="!this.val_last"> <t t-esc="this.join" /> </t>
                </t>
                <t t-if="this.addParenthesis"> )</t>
            </t>
        </div>
    </t>

    <t t-name="web.TreeEditor.Editor">
        <t t-if="!this.info.isSupported(this.value)">
            <div t-attf-class="o_tree_editor_editor #{_classes}">
                <div class="o_input d-flex align-items-center">
                    <span class="flex-grow-1 text-truncate" t-esc="this.info.stringify(this.value)" />
                    <i role="alert" class="fa fa-exclamation-triangle text-warning mx-2" t-att-data-tooltip="(typeof info.message === 'function') ? info.message(value) : info.message" />
                    <i class="fa fa-times" data-tooltip="Clear" t-on-click="() => update(info.defaultValue())" />
                </div>
            </div>
        </t>
        <t t-elif="this.info.component">
            <div t-attf-class="o_tree_editor_editor #{_classes}">
                <t t-component="this.info.component" t-props="this.info.extractProps({ update: this.update, value: this.value, displayPlaceholder: this.displayPlaceholder })" />
            </div>
        </t>
    </t>

    <t t-name="web.TreeEditor.condition:editable">
        <div class="o_tree_editor_condition d-flex flex-grow-1 align-items-end gap-2">
            <t t-call="web.TreeEditor.Editor">
                <t t-set="_classes" t-value="'col col-md-4 pe-0'" />
                <t t-set="info" t-value="this.getPathEditorInfo()" />
                <t t-set="value" t-value="this.node.path" />
                <t t-set="update" t-value="(path) => this.updatePath(this.node, path)" />
            </t>
            <t t-call="web.TreeEditor.Editor">
                <t t-set="_classes" t-value="'col col-md-2 px-3'" />
                <t t-set="info" t-value="this.getOperatorEditorInfo(this.node)" />
                <t t-set="value" t-value="[this.node.operator, this.node.negate]" />
                <t t-set="update" t-value="(operator, negate) => this.updateLeafOperator(this.node, operator, negate)" />
            </t>
            <t t-call="web.TreeEditor.Editor">
                <t t-set="_classes" t-value="'col ps-0 overflow-hidden'" />
                <t t-set="info" t-value="this.getValueEditorInfo(this.node)" />
                <t t-set="value" t-value="this.node.value" />
                <t t-set="update" t-value="(value) => this.updateLeafValue(this.node, value)" />
            </t>
        </div>
    </t>

    <t t-name="web.TreeEditor.complex_condition">
        <div class="o_tree_editor_row d-flex align-items-center">
            <div class="o_tree_editor_complex_condition flex-grow-1">
                <input class="o_input w-100" t-att-value="this.node.value" t-att-readonly="this.props.readonly or !this.isDebugMode" t-on-change="(ev) => this.updateComplexCondition(this.node, ev.target.value)" />
            </div>
            <t t-call="web.TreeEditor.controls" />
        </div>
    </t>


</templates>
