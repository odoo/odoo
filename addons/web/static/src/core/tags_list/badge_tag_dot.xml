<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web.BadgeTagDot" t-inherit="web.BadgeTag">
        <xpath expr="//t[@t-slot='default']" position="replace">
            <t t-set-slot="default">
                <div class="o_tag_badge_text o_badge_text o_tag_color_basic fw-bold">
                    <i t-if="dotColor" class="fa fa-circle me-1" t-attf-style="color:{{dotColor}};"/>
                    <t t-esc="this.props.text"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
