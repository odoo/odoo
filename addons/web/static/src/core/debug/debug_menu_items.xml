<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.DebugMenu.SetDefaultDialog">
        <Dialog title.translate="Set Default Values">
            <table style="width: 100%">
                <tr>
                    <td>
                        <label for="formview_default_fields"
                            class="oe_label oe_align_right">
                            Default:
                        </label>
                    </td>
                    <td class="oe_form_required">
                        <select id="formview_default_fields" class="o_input" t-model="this.state.fieldToSet">
                            <option value=""/>
                            <option t-foreach="this.defaultFields" t-as="field" t-att-value="field.name" t-key="this.field.name">
                                <t t-esc="this.field.string"/> = <t t-esc="this.field.displayed"/>
                            </option>
                        </select>
                    </td>
                </tr>
                <tr t-if="this.conditions.length">
                    <td>
                        <label for="formview_default_conditions"
                            class="oe_label oe_align_right">
                            Condition:
                        </label>
                    </td>
                    <td>
                        <select id="formview_default_conditions" class="o_input" t-model="this.state.condition">
                            <option value=""/>
                            <option t-foreach="this.conditions" t-as="cond" t-att-value="cond.name + '=' + cond.value" t-key="this.cond.name">
                                <t t-esc="this.cond.string"/>=<t t-esc="this.cond.displayed"/>
                            </option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="radio" id="formview_default_self"
                            value="self" name="scope" t-model="this.state.scope"/>
                        <label for="formview_default_self" class="oe_label"
                            style="display: inline;">
                            Only you
                        </label>
                        <br/>
                        <input type="radio" id="formview_default_all"
                            value="all" name="scope" t-model="this.state.scope"/>
                        <label for="formview_default_all" class="oe_label"
                            style="display: inline;">
                            All users
                        </label>
                    </td>
                </tr>
            </table>
            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="this.props.close">Close</button>
                <button class="btn btn-secondary" t-on-click="this.saveDefault">Save default</button>
            </t>
        </Dialog>
    </t>

    <t t-name="web.DebugMenu.GetMetadataDialog">
        <Dialog title.translate="Metadata">
            <table class="table table-sm table-striped">
                <tr>
                    <th>ID:</th>
                    <td><t t-esc="this.state.id"/></td>
                </tr>
                <tr>
                    <th>XML ID:</th>
                    <td>
                        <t t-if='this.state.xmlids.length > 1'>
                            <t t-foreach="this.state.xmlids" t-as="imd" t-key="this.imd['xmlid']">
                                <div
                                    t-att-class='&quot;p-0 " + (imd["xmlid"] === this.state.xmlid ? "fw-bolder " : "") + (imd["noupdate"] === true ? "fst-italic " : "")'
                                    t-esc="this.imd['xmlid']" />
                            </t>
                        </t>
                        <t t-elif="this.state.xmlid" t-esc="this.state.xmlid"/>
                        <t t-else="">
                            / <a t-on-click="this.onClickCreateXmlid"> (create)</a>
                        </t>
                    </td>
                </tr>
                <tr>
                    <th>No Update:</th>
                    <td>
                        <t t-esc="this.state.noupdate"/>
                        <t t-if="this.state.xmlid">
                            <a t-on-click="this.toggleNoupdate"> (change)</a>
                        </t>
                    </td>
                </tr>
                <tr>
                    <th>Creation User:</th>
                    <td><t t-esc="this.state.creator"/></td>
                </tr>
                <tr>
                    <th>Creation Date:</th>
                    <td><t t-esc="this.state.createDate"/></td>
                </tr>
                <tr>
                    <th>Latest Modification by:</th>
                    <td><t t-esc="this.state.lastModifiedBy"/></td>
                </tr>
                <tr>
                    <th>Latest Modification Date:</th>
                    <td><t t-esc="this.state.writeDate"/></td>
                </tr>
            </table>
        </Dialog>
    </t>

    <t t-name="web.DebugMenu.GetViewDialog">
        <Dialog title.translate="Computed Arch">
            <pre t-esc="this.props.arch"/>
            <t t-set-slot="footer">
                <button class="btn btn-primary o-default-button" t-on-click="() => this.props.close()">Close</button>
            </t>
        </Dialog>
    </t>
</templates>
