<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.WarningDialog">
        <Dialog title="this.title" size="'sm'" contentClass="'o_error_dialog'">
            <div role="alert">
                <p t-esc="this.message" class="text-prewrap mb-0"/>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary o-default-button" t-on-click="this.props.close" data-available-offline="">Close</button>
            </t>
        </Dialog>
    </t>

    <t t-name="web.RedirectWarningDialog">
        <Dialog title="this.title" size="'xl'" contentClass="'o_error_dialog'">
            <div role="alert">
                <p t-esc="this.message" class="text-prewrap"/>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="this.onClick" t-esc="this.buttonText"/>
                <button class="btn btn-secondary" t-on-click="this.props.close" data-available-offline="">Close</button>
            </t>
        </Dialog>
    </t>

    <t t-name="web.Error504Dialog">
        <Dialog title.translate="Request timeout" size="'xl'" contentClass="'o_error_dialog'">
            <div role="alert">
                <p class="text-prewrap">
                    The operation was interrupted. This usually means that the current operation is taking too much time.
                </p>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary o-default-button" t-on-click="this.props.close" data-available-offline="">Close</button>
            </t>
        </Dialog>
    </t>

    <t t-name="web.SessionExpiredDialog">
        <Dialog title.translate="Odoo Session Expired" size="'xl'" contentClass="'o_error_dialog'">
            <div role="alert">
                <p class="text-prewrap">
                    Your Odoo session expired. The current page is about to be refreshed.
                </p>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary o-default-button" t-on-click="this.onClick" data-available-offline="">Close</button>
            </t>
        </Dialog>
    </t>

    <t t-name="web.ErrorDialog">
        <Dialog title.translate="Oops!" size="this.state.showTraceback ? 'lg' : 'sm'" contentClass="'o_error_dialog'">
            <div role="alert">
                <p>
                    Something went wrong... If you really are stuck, share the report with your friendly support service
                </p>
                <details t-on-toggle="() => { this.state.showTraceback = !this.state.showTraceback }">
                    <summary t-esc="this.state.showTraceback ? this.constructor.hideTracebackButtonText : this.constructor.showTracebackButtonText" class="mb-1 link-info"/>
                    <div class="text-bg-100 clearfix mt-2 position-relative o_error_detail pb-2">
                        <button class="btn position-absolute top-0 end-0 pt-2 btn-link link-body-emphasis" t-ref="copyButton" t-on-click="this.onClickClipboard" data-available-offline="">
                            <span class="fa fa-clipboard"/>
                        </button>
                        <div class="ps-1 pt-1 ps-md-3 pt-md-3">
                            <p class="m-0"><b t-esc="this.title or this.constructor.title"></b></p>
                            <p class="d-block small text-info" t-if="this.contextDetails" t-esc="this.contextDetails"/>
                            <code t-if="this.props.name" t-esc="this.props.name"></code>
                            <code class="d-block" t-if="this.props.message" t-esc="this.props.message"/>
                            <pre class="border-0 m-0 p-0 mt-3 smaller" t-esc="this.traceback or this.props.traceback"/>
                        </div>
                    </div>
                </details>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary o-default-button" t-on-click="this.props.close" data-available-offline="">Close</button>
            </t>
        </Dialog>
    </t>

</templates>
