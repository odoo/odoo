<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web.DefaultFooter">
        <span>
            <span class="fw-bolder text-primary">TIP</span>
            â€” search for
            <t t-foreach="this.items" t-as="item" t-key="item_index">
                <t t-if="item.separator">
                    <t t-out="item.separator" />
                </t>
                <t t-else="">
                    <span
                        class="o_namespace btn-link text-primary cursor-pointer"
                        t-on-click="() => this.onClick(item.namespace)"
                    >
                        <span t-out="item.namespace" class="fw-bolder text-primary"/>
                        <t t-out="item.name"/>
                    </span>
                </t>
            </t>
        </span>
    </t>

    <t t-name="web.DefaultCommandItem">
        <div class="o_command_default d-flex align-items-center justify-content-between px-4 py-2 cursor-pointer">
            <t t-slot="name"/>
            <t t-slot="focusMessage"/>
        </div>
    </t>

    <t t-name="web.HotkeyCommandItem">
        <div class="o_command_hotkey d-flex align-items-center justify-content-between px-4 py-2 cursor-pointer">
        <t t-slot="name"/>
            <small class="o_command_focus text-muted">
                <t t-foreach="getKeysToPress(props)" t-as="key" t-key="key_index">
                    <kbd t-out="key" />
                    <t t-if="!key_last" t-translation="off"> + </t>
                </t>
            </small>
        </div>
    </t>

</templates>
