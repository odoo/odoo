<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="web.DefaultFooter" owl="1">
    <span>
      <span class="fw-bolder text-primary">TIP</span> â€” search for
      <t t-foreach="this.elements" t-as="element" t-key="this.element.namespace">
          <t t-if="!(this.element_first || this.element_last)">, </t>
          <t t-if="this.element_last and !this.element_first"> and </t>
          <span class="o_namespace btn-link text-primary cursor-pointer" t-on-click="() => this.onClick(element.namespace)">
              <span t-out="this.element.namespace" class="fw-bolder text-primary"/><t t-out="this.element.name"/>
          </span>
      </t>
    </span>
  </t>

  <t t-name="web.DefaultCommandItem">
    <div class="o_command_default d-flex align-items-center justify-content-between px-4 py-2 cursor-pointer">
      <t t-slot="name"/>
      <t t-slot="focusMessage"/>
    </div>
  </t>

  <t t-name="web.HotkeyCommandItem">
    <div class="o_command_hotkey d-flex align-items-center justify-content-between px-4 py-2 cursor-pointer">
      <t t-slot="name"/>
      <span>
        <t t-foreach="this.getKeysToPress(this.props)" t-as="key" t-key="this.key_index">
          <kbd t-out="this.key" class="d-inline-block px-3 py-1" />
          <span t-if="!this.key_last"> + </span>
        </t>
      </span>
    </div>
  </t>

</templates>
