<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.Pager">
        <nav class="o_pager d-flex gap-2 h-100" aria-label="Pager">
            <span t-if="!this.env.isSmall" class="o_pager_counter align-self-center" t-on-click.stop="">
                <t t-if="this.state.isEditing">
                    <input type="text" class="o_pager_value o_input d-inline-block w-auto text-end mb-n1" size="7" t-ref="autofocus" t-att-value="this.value" t-on-blur="this.onInputBlur" t-on-change="this.onInputChange" t-on-keydown.stop="this.onInputKeydown" />
                </t>
                <t t-else="">
                    <span class="o_pager_value d-inline-block border-bottom border-transparent mb-n1" t-esc="this.value" t-on-click="this.onValueClick" />
                </t>
                <span> / </span>
                <t t-if="this.props.updateTotal">
                    <span class="o_pager_limit o_pager_limit_fetch" t-att-class="{ 'disabled': this.state.isDisabled }" t-on-click.stop="this.updateTotal"><t t-esc="this.props.total"/>+</span>
                </t>
                <t t-else="">
                    <span class="o_pager_limit" t-esc="this.props.total"/>
                </t>
            </span>
            <span class="btn-group d-print-none" aria-atomic="true">
                <!-- accesskeys not wanted in X2Many widgets -->
                <button type="button" class="btn btn-secondary o_pager_previous px-2 rounded-start" aria-label="Previous" tabindex="-1"
                    data-tooltip="Previous" t-att-data-hotkey="this.props.withAccessKey ? 'p' : false" data-available-offline=""
                    t-att-disabled="this.state.isDisabled or this.isSinglePage"  t-on-click.stop="() => this.navigate(-1)">
                    <i class="oi oi-chevron-left"/>
                </button>
                <button type="button" class="btn btn-secondary o_pager_next px-2 rounded-end" aria-label="Next" tabindex="-1"
                    data-tooltip="Next" t-att-data-hotkey="this.props.withAccessKey ? 'n' : false" data-available-offline=""
                    t-att-disabled="this.state.isDisabled or this.isSinglePage" t-on-click.stop="() => this.navigate(1)">
                    <i class="oi oi-chevron-right"/>
                </button>
            </span>
        </nav>
    </t>

</templates>
