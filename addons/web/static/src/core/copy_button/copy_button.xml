<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.CopyButton">
        <button
            type="button"
            class="text-nowrap"
            t-ref="button"
            t-att-disabled="this.props.disabled"
            t-attf-class="btn o_clipboard_button {{ this.props.className || '' }}"
            t-on-click.stop="this.onClick"
        >
            <span class="mx-1" t-attf-class="fa {{ this.props.icon || 'fa-clipboard' }}"/>
            <span t-if="this.props.copyText" t-esc="this.props.copyText"/>
        </button>
    </t>

</templates>
