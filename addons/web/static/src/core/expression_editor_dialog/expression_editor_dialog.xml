<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="web.ExpressionEditorDialog">
        <Dialog title.translate="Edit Condition" size="'xl'">
            <ExpressionEditor t-props="this.expressionEditorProps" />
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="this.onConfirm" t-ref="confirm">Confirm</button>
                <button class="btn btn-secondary" t-on-click="this.onDiscard">Discard</button>
            </t>
        </Dialog>
    </t>

</templates>
