<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.FieldMany2one" owl="1">
        <t t-if="props.mode === 'edit'">
            <span class="o-field">
                <t t-esc="data" />
            </span>
        </t>
        <t t-else="">
            <span class="o-field">
                <t t-esc="data" />
            </span>
        </t>
    </t>

    <t t-name="web.FieldMany2ManyTags" owl="1">
        <div class="o_field_many2manytags">
            <t t-foreach="data" t-as="tag" t-key="tag.id">
                <div class="badge badge-pill" t-attf-class="o_tag_color_{{ tag.data.color }}">
                    <t t-esc="tag.data.display_name" />
                </div>
            </t>
        </div>
    </t>

    <t t-name="web.FieldKanbanMany2ManyTags" owl="1">
        <div class="o_field_many2manytags o_kanban_tags">
            <t t-foreach="data" t-as="tag" t-key="tag.id">
                <span class="o_tag" t-attf-class="o_tag_color_{{ tag.data.color }}">
                    <span />
                    <t t-esc="tag.data.display_name" />
                </span>
            </t>
        </div>
    </t>

    <t t-name="web.FieldX2Many" owl="1">
        <div t-attf-class="o_field_x2many o_field_x2many_{{viewType}}">
            <t t-if="Renderer" t-component="Renderer" t-props="rendererProps"/>
        </div>
    </t>

</templates>
