<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.FieldMany2one" owl="1">
        <t t-if="props.mode === 'edit'">
            <span class="o-field">
                <t t-esc="data" />
            </span>
        </t>
        <t t-else="">
            <span class="o-field">
                <t t-esc="data" />
            </span>
        </t>
    </t>

    <t t-name="web.FieldMany2ManyTags" owl="1">
        <div class="o_field_widget o_field_many2manytags">
            <t t-foreach="data" t-as="tag" t-key="tag.id">
                <div class="badge badge-pill" t-attf-class="o_tag_color_{{ tag.data.color }}">
                    <t t-esc="tag.data.display_name" />
                </div>
            </t>
        </div>
    </t>

    <t t-name="web.FieldX2Many" owl="1" >
        <div>
            <t t-if="Renderer" t-component="Renderer" model="model" info="archInfo" fields="fields" record="record" openRecord="openRecord"/>
            <t t-else="">
                One2Many
            </t>
        </div>
    </t>

</templates>
