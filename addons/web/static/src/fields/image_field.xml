<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.ImageField" owl="1">
        <div class="o_field_image" aria-atomic="true">
            <t t-if="!props.readonly">
                <FileUploader
                    acceptedFileExtensions="props.acceptedFileExtensions"
                    fileUploadStyle="sizeStyle"
                    onUploaded="(info) => onFileUploaded(info)"
                    onRemove="() => onFileRemove()"
                    type="'image'"
                />
            </t>
            <img
                class="img img-fluid"
                alt="Binary file"
                t-att-src="url"
                t-att-border="props.readonly ? 0 : 1"
                t-att-name="props.name"
                t-att-height="props.height"
                t-att-width="props.width"
                t-att-style="sizeStyle"
                t-on-error="onLoadFailed"
            />
        </div>
    </t>

</templates>
