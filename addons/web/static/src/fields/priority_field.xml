<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.PriorityField" owl="1">
        <div class="o-priority-field o_priority o_field_widget" role="radiogroup" name="priority" aria-label="Priority">
            <t t-set="values" t-value="selection" />
            <t t-foreach="values" t-as="value" t-key="value">
                <t t-if="!value_first">
                    <t t-if="props.record.activeFields[props.name].readonly">
                        <span
                            class="o_priority_star fa"
                            role="radio"
                            t-att-class="value_index lte index ? 'fa-star' : 'fa-star-o'"
                            t-att-tabindex="value lte state.index ? 0 : -1"
                            t-att-data-tooltip="values[value]"
                            t-att-aria-checked="value_index lte index"
                            t-att-aria-label="values[value]"
                        />
                    </t>
                    <t t-else="">
                        <a
                            href="#"
                            class="o_priority_star fa"
                            role="radio"
                            t-att-class="value_index lte index ? 'fa-star' : 'fa-star-o'"
                            t-att-tabindex="value lte state.index ? 0 : -1"
                            t-att-data-tooltip="values[value]"
                            t-att-aria-checked="value_index lte index"
                            t-att-aria-label="values[value]"
                            t-on-click="onStarClicked(value)"
                            t-on-mouseenter="() => state.index = value_index"
                            t-on-mouseleave="() => state.index = -1"
                        />
                    </t>
                </t>
            </t>
        </div>
    </t>

</templates>
