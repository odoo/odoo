<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.PercentageField" owl="1">
        <t t-if="props.readonly">
            <span t-esc="props.formatValue(props.value)"/>
        </t>
        <t t-else="">
            <div class="d-flex">
                <input
                    t-attf-class="o_input"
                    type="text"
                    inputmode="numeric"
                    t-att-value="props.value * 100"
                    t-on-change="onChange"
                />
                <span>%</span>
            </div>
        </t>
    </t>


</templates>
