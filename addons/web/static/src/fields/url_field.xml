<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.UrlField" owl="1">
        <t t-if="props.readonly">
            <a class="o_url_field o_field_widget o_form_uri" t-att-href="formattedHref" t-esc="props.text || formattedValue" target="_blank"/>
        </t>
        <t t-else="">
            <input
                class="o_url_field o_input"
                type="text"
                t-att-value="props.value or ''"
                t-att-placeholder="props.placeholder"
                t-att-required="props.required"
                t-on-change="onChange"
            />
        </t>
    </t>

</templates>
