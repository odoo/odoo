<templates>
    <t t-name="LoadAce">
        <script type="text/javascript" src="/web/static/src/js/load_ace.js"></script>
        <script>odoo.web_next_define = 'ace/ace';</script>
        <script type="text/javascript" src="/web/static/lib/ace/ace.js" />
        <t t-if="mode == 'mode_python'">
            <script>odoo.web_next_define = 'ace/mode_python';</script>
            <script type="text/javascript" src="/web/static/lib/ace/mode-python.js" />
        </t>
        <t t-if="mode == 'mode_xml'">
            <script>odoo.web_next_define = 'ace/mode_xml';</script>
            <script type="text/javascript" src="/web/static/lib/ace/mode-xml.js" />
        </t>
        <script>odoo.web_next_define = 'ace/theme_monokai';</script>
        <script type="text/javascript" src="/web/static/lib/ace/theme-monokai.js" />
    </t>
</templates>
