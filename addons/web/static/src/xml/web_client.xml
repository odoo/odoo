<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="web.WebClient" owl="1">
        <t t-set="renderingInfo" t-value="renderingInfo || rState || {}"/>
        <t t-set='dialog' t-value='renderingInfo.dialog' />
        <t t-set="main" t-value="renderingInfo.main"/>
        <body class="o_web_client" t-att-class="bodyClass"
              t-on-push-state="_onPushState"
              t-on-set-title-part="_onSetTitlePart"
              t-on-warning="_onDisplayWarning"
              t-on-breadcrumb-clicked.stop="_onBreadcrumbClicked"
              t-on-execute-action.stop="_onExecuteAction"
              t-on-open-menu="_onOpenMenu">
            <Menu t-if="!renderingInfo.fullscreen" t-ref="menu"
                menus="menus"
                menuID="renderingInfo.menuID"/>
            <ComponentAdapter Component="LoadingWidget" widgetArgs="[]"/>

            <div class="o_action_manager">
                <!-- fixme: class below totally ignored -->
                <ActionAdapter t-if="main" class="o_action" t-ref="currentMainComponent"
                        t-key="main.controller.jsID"
                        Component="main.controller.Component"
                        action="main.action"
                        options="main.controller.options"
                        reload="main.reload"/>
            </div>
            <DialogAction t-if='dialog' t-key="dialog.controller.jsID"
                contentClass="dialog.controller.className"
                target="'.o_dialogs'"
                stopClicks="false"
                title="dialog.action.name"
                t-on-dialog-closed="_onDialogClosed">
                <ActionAdapter class="o_action" t-key="dialog.controller.jsID"
                    t-ref="currentDialogComponent"
                    Component="dialog.controller.Component"
                    action="dialog.action"
                    options="dialog.controller.options"
                    inDialog=""/>
            </DialogAction>
            <div class="o_dialogs"/>
        </body>
    </t>

</templates>