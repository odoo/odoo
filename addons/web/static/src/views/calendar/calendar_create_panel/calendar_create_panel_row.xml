<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="my_module.CalendarSuperQuickPanelFieldRow">
        <div class="o_csqp_field mb-2">
            <label class="o_csqp_label fw-bold">
                <t t-esc="props.fieldInfo.string || props.fieldName"/>
            </label>
            <div t-if="isMany2One" class="o_csqp_input_wrapper mt-1">
                <Many2XAutocomplete t-props="many2XProps"/>
            </div>

            <div t-elif="isBoolean" class="form-check o_csqp_input_wrapper mt-1">
                <input type="checkbox"
                       class="form-check-input"
                       t-model.bool="props.value"
                       t-att-placeholder="props.fieldInfo.attrs.placeholder"
                       t-on-change="onInputChange"/>
            </div>

            <div t-elif="isFloat" class="o_csqp_input_wrapper mt-1">
                <input type="number"
                       step="0.01"
                       class="form-control"
                       t-model.number="props.value"
                       t-att-placeholder="props.fieldInfo.attrs.placeholder"
                       t-on-change="onInputChange"/>
            </div>

            <div t-elif="isInteger" class="o_csqp_input_wrapper mt-1">
                <input type="number"
                       step="1"
                       class="form-control"
                       t-model.number="props.value"
                       t-att-placeholder="props.fieldInfo.attrs.placeholder"
                       t-on-change="onInputChange"/>
            </div>

            <div t-else="" class="o_csqp_input_wrapper mt-1">
                <input type="text"
                       class="form-control"
                       t-model="props.value"
                       t-att-placeholder="props.fieldInfo.attrs.placeholder"
                       t-on-change="onInputChange"/>
            </div>
        </div>
    </t>

</templates>
