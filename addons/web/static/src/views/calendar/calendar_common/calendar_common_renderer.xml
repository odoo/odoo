<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.CalendarCommonRenderer">
        <div class="o_calendar_widget" t-ref="fullCalendar" />
    </t>

    <t t-name="web.CalendarCommonRenderer.event">
        <div class="fc-content">
            <t t-if="!isTimeHidden">
                <span class="fc-time" t-esc="startTime" />
                <t> </t>
            </t>
            <div class="o_event_title" t-esc="title"/>
        </div>
    </t>

    <t t-name="web.CalendarCommonRendererHeader">
        <span class="o_cw_day_name" t-esc="weekday"/> <span t-if="scale != 'month'" class="o_cw_day_number" t-esc="day"/>
    </t>

</templates>
