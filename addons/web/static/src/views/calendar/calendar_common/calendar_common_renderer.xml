<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.CalendarCommonRenderer">
        <div class="o_calendar_widget" t-att-class="{ o_multi_create_mode: this.props.model.hasMultiCreate, 'o_calendar_current': !this.props.isDisabled }" t-ref="fullCalendar" />
    </t>

    <t t-name="web.CalendarCommonRenderer.event">
            <t t-if="!this.isTimeHidden">
                <span class="d-none d-lg-inline fc-time" t-esc="this.startTime" />
                <t> </t>
            </t>
            <div class="o_event_title">
                <i area-hidden="true" t-if="this.titleIcon" t-attf-class="me-2 {{this.titleIcon}}"/>
                <t t-out="this.title"/>
            </div>
    </t>

    <t t-name="web.CalendarCommonRendererHeader">
        <span class="o_cw_day_name" t-esc="this.scale == 'day' ? this.weekdayLong : this.weekdayShort "/> <span t-if="this.scale != 'month'" class="fc-day-number o_cw_day_number" t-esc="this.day"/>
    </t>

</templates>
