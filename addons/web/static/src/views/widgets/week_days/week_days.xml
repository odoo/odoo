<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.WeekDays">
        <div class="o_recurrent_weekdays border mt-2 mb-2">
            <table class="table table-responsive mb-0">
                <tr>
                    <t t-foreach="this.weekdays" t-as="day" t-key="day">
                        <th class="text-center border fw-bold">
                            <div class="o_recurrent_weekday_label" t-att-data-tooltip="this.props.record.fields[day].string">
                                <t t-esc="this.props.record.fields[day].string" />
                            </div>
                        </th>
                    </t>
                </tr>
                <tr>
                    <t t-foreach="this.weekdays" t-as="day" t-key="day">
                        <td>
                            <CheckBox
                                disabled="this.props.readonly"
                                value="this.data[day]"
                                className="'o_recurrent_weekday_checkbox text-center'"
                                onChange="(checked) => this.onChange(day, checked)"
                            />
                        </td>
                    </t>
                </tr>
            </table>
        </div>
    </t>

</templates>
