<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.ListRenderer" owl="1">
        <div class="o_list_renderer table-responsive">
            <table t-attf-class="o_list_table table table-sm table-hover table-striped {{props.list.isGrouped ? 'o_list_table_grouped' : 'o_list_table_ungrouped'}}" t-ref="table">
                <thead>
                    <tr>
                        <th t-if="props.hasSelectors" class="o_list_record_selector" t-on-click.stop="toggleSelection">
                            <CheckBox disabled="!!props.list.editedRecord" value="selectAll" onChange.bind="toggleSelection"/>
                        </th>
                        <t t-foreach="state.columns" t-as="column" t-key="getColumnKey(column, column_index)">
                            <th t-if="column.type === 'field'" t-att-class="getColumnClass(column)" t-on-click="() => this.onClickSortColumn(column)">
                                <t t-if="column.hasLabel" t-esc="column.label"/>
                            </th>
                            <th t-else=""></th>
                        </t>
                        <th t-if="props.activeActions and props.activeActions.onDelete" class="o_list_remove_header"/>
                    </tr>
                </thead>
                <tbody class="ui-sortable">
                    <t t-call="web.ListRenderer.Rows">
                        <t t-set="list" t-value="props.list"/>
                    </t>
                    <tr t-if="props.activeActions">
                        <td/>
                        <td t-if="props.activeActions.canCreate"
                            t-att-colspan="state.columns.length + 1"
                            class="o_field_x2many_list_row_add"
                            >
                            <t t-foreach="creates" t-as="create" t-key="create_index">
                                <a href="#" role="button" t-att-class="create_index !== 0 ? 'ml16' : ''" t-on-click.stop.prevent="() => props.onAdd(create.context)">
                                    <t t-esc="create.description"/>
                                </a>
                            </t>
                        </td>
                    </tr>
                </tbody>
                <tfoot t-on-click="unselectRow">
                    <tr>
                        <td t-if="props.hasSelectors"/>
                        <t t-foreach="state.columns" t-as="column" t-key="getColumnKey(column, column_index)">
                            <t t-set="aggregate" t-value="aggregates[column.name]"/>
                            <td t-if="aggregate" class="o_list_number" t-att-data-tooltip="aggregate.help">
                                <t t-esc="aggregate.value"/>
                            </td>
                            <td t-else=""/>
                        </t>
                        <td t-if="props.activeActions and props.activeActions.onDelete"/>
                    </tr>
                </tfoot>
                <Dropdown t-if="getOptionalFields.length" class="'o_optional_columns_dropdown'" position="'bottom-end'">
                    <t t-set-slot="toggler">
                        <i class="oi oi-settings--adjust"/>
                    </t>
                    <t t-foreach="getOptionalFields" t-as="field" t-key="field_index">
                        <CheckBoxDropdownItem
                            parentClosingMode="'none'"
                            onSelected="() => this.toggleOptionalField(field.name)"
                            value="field.value"
                            >
                            <t t-esc="field.string"/> <t t-if="env.debug" t-esc="' (' + field.name + ')'" />
                        </CheckBoxDropdownItem>
                    </t>
                </Dropdown>
            </table>
        </div>
    </t>

    <t t-name="web.ListRenderer.Rows" owl="1">
        <t t-if="!list.isGrouped">
            <t t-foreach="list.records" t-as="record" t-key="record.id">
                <t t-call="web.ListRenderer.RecordRow"/>
            </t>
            <t t-if="!props.list.isGrouped">
                <tr t-foreach="getEmptyRowIds" t-as="emptyRowId" t-key="emptyRowId">
                    <td t-att-colspan="state.columns.length + 1">&#8203;</td>
                </tr>
            </t>
        </t>
        <t t-else="">
            <t t-foreach="list.groups" t-as="group" t-key="group.id">
                <t t-call="web.ListRenderer.GroupRow"/>
                <t t-if="!group.isFolded">
                    <t t-call="web.ListRenderer.Rows">
                        <t t-set="list" t-value="group.list"/>
                    </t>
                </t>
            </t>
        </t>
    </t>

    <t t-name="web.ListRenderer.GroupRow" owl="1">
        <tr t-attf-class="{{group.count > 0 ? 'o_group_has_content' : ''}} o_group_header {{!group.isFolded ? 'o_group_open' : ''}}" t-on-click="() => this.toggleGroup(group)">
            <th class="o_group_name" t-att-colspan="getGroupNameCellColSpan(group)">
                <span t-attf-class="fa {{group.isLoaded ? 'fa-caret-down' : 'fa-caret-right'}}"
                    t-attf-style="padding-left: {{2 + getGroupLevel(group) * 20}}px; padding-right: 5px"/>
                <t t-esc="group.displayName"/> (<t t-esc="group.count"/>)
                <div t-if="(groupByButtons[group.groupByField.name] and !group.isFolded)" class="o_group_buttons">
                    <t t-foreach="groupByButtons[group.groupByField.name]" t-as="button" t-key="button.id">
                        <t t-if="button.clickParams.type === 'edit'">
                            <button t-att-title="button.title" class="btn" t-on-click="() => this.editGroupRecord(group)">
                                <i t-attf-class="fa fa-fw {{button.icon}} o_button_icon"/>
                            </button>
                        </t>
                        <t t-else="">
                            <ViewButton
                                classes="button.classes"
                                clickParams="button.clickParams"
                                icon="button.icon"
                                record="group.record"
                                string="button.string"
                                title="button.title"/>
                        </t>
                    </t>
                </div>
            </th>
            <td t-foreach="getAggregateColumns(group)" t-as="column" t-key="getColumnKey(column, column_index)" class="o_list_number">
                <t t-esc="group.aggregates[column.name]"/>
            </td>
            <t t-set="groupPagerColspan" t-value="getGroupPagerCellColspan(group)"/>
            <th t-if="groupPagerColspan > 0" t-att-colspan="groupPagerColspan"/>
        </tr>
    </t>

    <t t-name="web.ListRenderer.RecordRow" owl="1">
        <tr class="o_data_row" t-att-class="getRowClass(record)" t-att-data-id="record.id">
            <td t-if="props.hasSelectors" class="o_list_record_selector" t-on-click.stop="() => this.toggleRecordSelection(record)">
                <CheckBox disabled="!!props.list.editedRecord" value="record.selected" onChange.bind="() => this.toggleRecordSelection(record)" />
            </td>
            <t t-foreach="state.columns" t-as="column" t-key="getColumnKey(column, column_index)">
                <t t-if="column.type === 'field'">
                    <td class="o_data_cell" t-att-class="getCellClass(column)" t-att-title="getCellTitle(column, record)" t-on-click="() => this.onCellClicked(record, column)">
                        <Field t-if="!evalModifier(column.modifiers.invisible, record)" name="column.name" record="record" type="column.widget" />
                    </td>
                </t>
                <t t-if="column.type === 'button_group'">
                    <td class="o_data_cell" t-att-class="getCellClass(column)" t-on-click="(ev) => this.onButtonCellClicked(record, column, ev)">
                        <t t-foreach="column.buttons" t-as="button" t-key="button.id">
                            <ViewButton t-if="!evalModifier(button.modifiers.invisible, record)"
                                classes="button.classes"
                                clickParams="button.clickParams"
                                defaultRank="button.defaultRank"
                                icon="button.icon"
                                record="record"
                                string="button.string"
                                title="button.title"/>
                        </t>
                    </td>
                </t>
            </t>
            <td t-if="props.activeActions and props.activeActions.onDelete" class="o_list_record_remove" t-on-click="() => props.activeActions.onDelete(record)">
                <button class="fa fa-trash-o" name="delete" aria-label="Delete row 1"/>
            </td>
        </tr>
    </t>
</templates>
