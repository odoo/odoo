<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="web.ListRenderer" owl="1">
    <div class="o_list_view">
      <div class="table-responsive">
        <table class="o_list_table table table-sm table-hover table-striped o_list_table_ungrouped">
          <thead>
            <tr>
              <th class="o_list_record_selector"><CheckBox /></th>
              <t t-foreach="columns" t-as="header" t-key="header.name">
                <th class="o_column_sortable"><t t-esc="header.string"/></th>
              </t>
            </tr>
          </thead>
          <tbody class="ui-sortable">
            <tr t-foreach="record.data" t-as="record" t-key="record.id" class="o_data_row">
              <td class="o_list_record_selector"><CheckBox /></td>
              <t t-foreach="columns" t-as="column" t-key="column_index">
                <td class="o_data_cell" t-on-click="openRecord(record)">
                  <Field name="column.name" record="record" readonly="1" type="column.widget"/>
                </td>
              </t>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </t>
</templates>
