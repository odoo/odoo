<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.AnimatedNumber">
        <div class="o_animated_number ms-2 text-900 text-nowrap cursor-default" t-att-class="this.state.value !== this.props.value ? this.props.animationClass : ''" t-att-data-tooltip="this.props.title">
            <t t-slot="prefix"/>
            <b t-esc="this.format(this.state.value)" />
            <sup
                t-if="this.props.currencies?.length > 1"
                class="p-1 fw-bolder text-info"
                t-on-mouseover.stop="this.openMultiCurrencyPopover"
                t-on-touchstart.stop="this.openMultiCurrencyPopover"
            >?</sup>
        </div>
    </t>

</templates>
