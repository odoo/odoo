<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web.Setting">
        <div t-att-class="this.classNames" t-att-id="this.props.id">
            <div class="o_setting_left_pane" t-att-data-tooltip="this.props.title" data-tooltip-delay="800">
                <t t-if="this.props.fieldName and this.fieldType==='boolean'">
                    <t t-slot="fieldSlot"/>
                </t>
            </div>
            <div class="o_setting_right_pane" t-att-data-tooltip="this.props.title" data-tooltip-delay="800">
                <FormLabel t-if="this.props.fieldName and this.props.addLabel" notMuttedLabel="this.notMuttedLabel" fieldName="this.props.fieldName" id="this.props.fieldId" string="this.labelString" record="this.props.record" fieldInfo="this.props.fieldInfo"/>
                <t t-if="this.labelString and !this.props.fieldName and this.props.addLabel">
                    <span class="o_form_label"><t t-esc="this.labelString"/></span>
                </t>
                <t t-if="this.labelString and this.props.info">
                    <span class="fa fa-info-circle" t-att-title="this.props.info"/>
                </t>
                <t t-if="this.labelString and this.props.documentation">
                    <DocumentationLink path="this.props.documentation" icon="'fa-question-circle'"/>
                </t>
                <t t-if="this.displayCompanyDependentIcon">
                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."/>
                </t>
                <t t-if="this.labelString and this.props.help">
                    <div class="text-muted"><t t-esc="this.props.help"/></div>
                </t>
                <div class="mt16">
                    <t t-if="this.props.fieldName and this.fieldType!=='boolean'">
                        <t t-slot="fieldSlot"/>
                    </t>
                    <t t-slot="default"/>
                </div>
            </div>
        </div>
    </t>
</templates>
