<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="web.FormLabel">
        <label class="o_form_label" t-att-for="props.id" t-att-class="className" >
            <t t-out="props.string"/>
            <sup
                t-if="hasTooltip"
                class="d-print-none text-info p-1"
                data-tooltip-template="web.FieldTooltip"
                data-tooltip-touch-tap-to-show="true"
                t-att-data-tooltip-info="tooltipInfo"
                t-translation="off"
            >?</sup>
        </label>
    </t>

</templates>
