<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.PivotView.Buttons">
        <div class="o_pivot_buttons d-flex d-print-none gap-1 mt-2 mx-3 mb-3">
            <div class="btn-group" role="toolbar" aria-label="Main actions">
                <ReportViewMeasures
                    measures="this.model.metaData.measures"
                    activeMeasures="this.model.metaData.activeMeasures"
                    onMeasureSelected.bind="this.onMeasureSelected"
                />
            </div>
            <div class="btn-group" role="toolbar" aria-label="Pivot settings">
                <t t-set="noDataDisplayed" t-value="!this.model.hasData() || !this.model.metaData.activeMeasures.length"/>
                <button class="btn btn-secondary fa fa-exchange o_pivot_flip_button" t-on-click="this.onFlipButtonClicked" data-tooltip="Flip axis" aria-label="Flip axis" t-attf-disabled="{{noDataDisplayed ? 'disabled' : false}}"/>
                <button class="btn btn-secondary fa fa-arrows o_pivot_expand_button" t-on-click="this.onExpandButtonClicked" data-tooltip="Expand all" aria-label="Expand all" t-attf-disabled="{{noDataDisplayed ? 'disabled' : false}}"/>
                <button class="btn btn-secondary fa fa-download o_pivot_download" t-on-click="this.onDownloadButtonClicked" data-tooltip="Download xlsx" aria-label="Download xlsx" t-attf-disabled="{{noDataDisplayed ? 'disabled' : false}}"/>
            </div>
        </div>
    </t>

    <t t-name="web.PivotView">
        <div t-att-class="this.props.className" t-ref="root">
            <Layout className="this.model.useSampleModel ? 'o_view_sample_data' : ''" display="this.props.display">
                <t t-set-slot="control-panel-additional-actions">
                    <CogMenu/>
                </t>
                <t t-set-slot="control-panel-actions">
                    <SearchBar toggler="this.searchBarToggler"/>
                </t>
                <t t-set-slot="control-panel-navigation-additional">
                    <t t-component="this.searchBarToggler.component" t-props="this.searchBarToggler.props"/>
                </t>
                <t t-if="this.model.isReady and this.displayNoContent">
                    <ActionHelper noContentHelp="this.props.info.noContentHelp"/>
                </t>
                <t t-if="this.model.isReady" t-component="this.props.Renderer" model="this.model" buttonTemplate="this.props.buttonTemplate"/>
            </Layout>
        </div>
    </t>

</templates>
