<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="web.FormViewDialogBody" owl="1">
    <FormRenderer class="o_form_view" record="record" fields="archInfo.fields" archInfo="archInfo"/>
  </t>

  <t t-name="web.FormViewDialogFooter" owl="1">
    <t t-foreach="buttons" t-as="button" t-key="button.text">
        <button t-attf-class="btn {{button.className}}" t-on-click="() => this.buttonClick(button.onClick, button.close)" t-att-data-hotkey="button.hotkey">
          <t t-esc="button.text"/>
        </button>
    </t>
  </t>

</templates>
