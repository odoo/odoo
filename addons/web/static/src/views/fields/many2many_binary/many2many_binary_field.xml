<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.Many2ManyBinaryField">
        <div t-attf-class="oe_fileupload {{this.props.className ? this.props.className : ''}}" aria-atomic="true">
            <div class="o_attachments">
                <t t-foreach="this.files" t-as="file" t-key="this.file_index">
                   <t t-call="web.Many2ManyBinaryField.attachment_preview"/>
                </t>
            </div>
            <div t-if="!this.props.readonly &amp;&amp; (!this.props.numberOfFiles or this.files.length &lt; this.props.numberOfFiles)"
                 class="oe_add">
                <FileInput
                    acceptedFileExtensions="this.props.acceptedFileExtensions"
                    multiUpload="true"
                    onUpload.bind="this.onFileUploaded"
                    resModel="this.props.record.resModel"
                    resId="this.props.record.resId or 0"
                >
                    <button class="btn btn-secondary o_attach" data-tooltip="Attach">
                        <span class="fa fa-paperclip" aria-label="Attach"/> <t t-esc="this.uploadText"/>
                    </button>
                </FileInput>
            </div>
        </div>
    </t>

<t t-name="web.Many2ManyBinaryField.attachment_preview">
    <t t-set="editable" t-value="!this.props.readonly"/>
    <div t-attf-class="o_attachment o_attachment_many2many #{ editable ? 'o_attachment_editable' : '' } #{this.upload ? 'o_attachment_uploading' : ''}" t-att-title="this.file.name">
        <div class="o_attachment_wrap">
            <t t-set="ext" t-value="this.getExtension(this.file)"/>
            <t t-set="url" t-value="this.getUrl(this.file.id)"/>
            <div class="o_image_box float-start" t-att-data-tooltip="'Download ' + this.file.name">
                <a t-att-href="url" aria-label="Download" download="">
                    <img t-if="this.isImage(this.file)" class="o_preview_image o_hover object-fit-cover rounded align-baseline"
                        t-attf-src="/web/image/{{ this.file.id }}" onerror="this.src = '/web/static/img/mimetypes/image.svg'"/>
                    <span t-else="" class="o_image o_preview_image o_hover" t-att-data-mimetype="this.file.mimetype" t-att-data-ext="ext" role="img"/>
                </a>
            </div>

            <div class="caption">
                <a class="ml4" t-att-data-tooltip="'Download ' + this.file.name" t-att-href="url" download=""><t t-esc='this.file.name'/></a>
            </div>
            <div class="caption small">
                <a class="ml4 small text-uppercase" t-att-href="url" download=""><b><t t-esc='this.ext'/></b></a>
                <div t-if="this.editable" class="progress o_attachment_progress_bar">
                    <div class="progress-bar progress-bar-striped active" style="width: 100%">Uploading</div>
                </div>
            </div>

            <div class="o_attachment_uploaded"><i class="text-success fa fa-check" role="img" aria-label="Uploaded" title="Uploaded"/></div>
            <div t-if="this.editable" class="o_attachment_delete" t-on-click.stop="() => this.onFileRemove(this.file.id)"><span role="img" aria-label="Delete" title="Delete">Ã—</span></div>
        </div>
    </div>
</t>

</templates>
