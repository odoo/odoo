<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.FieldTooltip">

        <p t-if="this.field.help" class="o-tooltip--help" role="tooltip">
            <t t-esc="this.field.help"/>
        </p>

        <ul class="o-tooltip--technical" t-if="this.debug" role="tooltip">
            <li data-item="label" t-if="this.field and this.field.label">
                <span class="o-tooltip--technical--title">Label:</span>
                <t t-esc="this.field.label"/>
            </li>
            <li data-item="field" t-if="this.field and this.field.name">
                <span class="o-tooltip--technical--title">Field:</span>
                <t t-esc="this.field.name"/>
            </li>
            <li data-item="object" t-if="this.resModel">
                <span class="o-tooltip--technical--title">Model:</span>
                <t t-esc="this.resModel"/>
            </li>
            <t t-if="this.field">
                <li t-if="this.field.type" data-item="type" >
                    <span class="o-tooltip--technical--title">Type:</span>
                    <t t-esc="this.field.type"/>
                </li>
                <li t-if="this.field.model_field" data-item="model_field">
                    <span class="o-tooltip--technical--title">Model field:</span>
                    <t t-esc="this.field.model_field"/>
                </li>
                <li t-if="this.field.widget" data-item="widget">
                    <span class="o-tooltip--technical--title">Widget:</span>
                    <t t-if="this.field.widgetDescription" t-esc="this.field.widgetDescription"/>
                    <t t-if="this.field.widget">
                        (<t t-esc="this.field.widget"/>)
                    </t>
                </li>
                <li t-if="this.field.context" data-item="context">
                    <span class="o-tooltip--technical--title">Context:</span>
                    <t t-esc="this.field.context"/>
                </li>
                <li t-if="this.field.domain" data-item="domain">
                    <span class="o-tooltip--technical--title">Domain:</span>
                    <t t-esc="this.field.domain.length === 0 ? '[]' : this.field.domain"/>
                </li>
                <li t-if="this.field.invisible" data-item="invisible">
                    <span class="o-tooltip--technical--title">Invisible:</span>
                    <t t-esc="this.field.invisible"/>
                </li>
                <li t-if="this.field.column_invisible" data-item="column_invisible">
                    <span class="o-tooltip--technical--title">Column invisible:</span>
                    <t t-esc="this.field.column_invisible"/>
                </li>
                <li t-if="this.field.required" data-item="required">
                    <span class="o-tooltip--technical--title">Required:</span>
                    <t t-esc="this.field.required"/>
                </li>
                <li t-if="this.field.readonly" data-item="readonly">
                    <span class="o-tooltip--technical--title">Readonly:</span>
                    <t t-esc="this.field.readonly"/>
                </li>
                <li t-if="this.field.default" data-item="default">
                    <span class="o-tooltip--technical--title">Default:</span>
                    <t t-esc="this.field.default"/>
                </li>
                <li t-if="this.field.changeDefault" data-item="changeDefault">
                    <span class="o-tooltip--technical--title">Change default:</span>
                    Yes
                </li>
                <li t-if="this.field.relation" data-item="relation">
                    <span class="o-tooltip--technical--title">Relation:</span>
                    <t t-esc="this.field.relation"/>
                </li>
                <li t-if="this.field.selection" data-item="selection">
                    <span class="o-tooltip--technical--title">Selection:</span>
                    <ul class="o-tooltip--technical">
                        <li t-foreach="this.field.selection" t-as="option" t-key="option_index">
                            [<t t-esc="option[0]"/>]
                            <t t-if="option[1]"> - </t>
                            <t t-esc="option[1]"/>
                        </li>
                    </ul>
                </li>
            </t>
        </ul>
    </t>

</templates>
