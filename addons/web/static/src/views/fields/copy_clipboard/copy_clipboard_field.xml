<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.CopyClipboardField">
        <div class="d-grid rounded-2 overflow-hidden">
            <Field t-props="this.fieldProps"/>
            <CopyButton className="this.copyButtonClassName" content="this.props.record.data[this.props.name]" icon="this.copyButtonIcon" successText="this.successText"/>
        </div>
    </t>

    <t t-name="web.CopyClipboardButtonField">
        <CopyButton t-if="this.props.record.data[this.props.name]" className="this.copyButtonClassName" content="this.props.record.data[this.props.name]" copyText="this.copyText" disabled="this.disabled" successText="this.successText"/>
    </t>

</templates>
