<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.Many2ManyCheckboxesField">
        <div aria-atomic="true">
            <t t-foreach="this.items" t-as="item" t-key="item[0]">
                <div>
                    <CheckBox
                        value="this.isSelected(item)"
                        disabled="this.props.readonly"
                        onChange="(ev) => this.onChange(item[0], item[1], ev)"
                    >
                        <t t-esc="item[1]" />
                    </CheckBox>
                </div>
            </t>
        </div>
    </t>

</templates>
