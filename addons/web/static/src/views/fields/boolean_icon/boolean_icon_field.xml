<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.BooleanIconField">
        <button t-attf-class="btn btn-sm btn-{{this.props.record.data[this.props.name] ? 'primary' : 'outline-secondary'}} mx-2 py-1 fa {{this.props.icon}}" t-att-data-tooltip="this.props.label" t-on-click.prevent.stop="this.update" />
    </t>

</templates>
