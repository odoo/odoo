<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.ColorField">
        <div class="o_field_color d-flex" t-att-class="{ 'o_field_cursor_disabled': this.props.readonly }" t-attf-style="background: #{this.color or 'url(/web/static/img/transparent.png)'}">
            <input t-on-click.stop="" class="w-100 h-100 opacity-0" type="color" t-att-value="this.color" t-att-disabled="this.props.readonly" t-on-input="(ev) => this.color = ev.target.value" t-on-change="this.onChange" />
        </div>
    </t>

</templates>
