<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.BinaryField">
        <t t-if="!this.props.readonly">
            <t t-if="this.props.record.data[this.props.name]">
                <div class="w-100 d-inline-flex gap-1">
                    <FileUploader
                        acceptedFileExtensions="this.props.acceptedFileExtensions"
                        allowedMIMETypes="this.props.allowedMIMETypes"
                        onUploaded.bind="this.update"
                    >
                        <t name="download" t-if="this.props.record.resId and !this.props.record.dirty">
                            <button
                                class="btn btn-link btn-sm lh-1 fa fa-download o_download_file_button"
                                data-tooltip="Download"
                                aria-label="Download"
                                t-on-click="this.onFileDownload"
                            >
                            </button>
                        </t>
                        <t t-set-slot="toggler">
                            <span t-if="!this.fileName" class="btn btn-primary o_select_file_button py-0">
                                Replace current file
                            </span>
                            <t t-else="">
                                <input  type="text" class="o_input" t-att-value="this.fileName" readonly="readonly" />
                                <button
                                    class="btn btn-link btn-sm lh-1 fa fa-pencil o_select_file_button"
                                    data-tooltip="Edit"
                                    aria-label="Edit"
                                >
                                </button>
                            </t>
                        </t>
                        <button
                            class="btn btn-link btn-sm lh-1 fa fa-trash o_clear_file_button"
                            data-tooltip="Clear"
                            aria-label="Clear"
                            t-on-click="() => this.update({})"
                        >
                        </button>
                    </FileUploader>
                </div>
            </t>
            <t t-else="">
                <label class="o_select_file_button btn btn-primary">
                    <FileUploader
                        acceptedFileExtensions="this.props.acceptedFileExtensions"
                        allowedMIMETypes="this.props.allowedMIMETypes"
                        onUploaded.bind="this.update"
                    >
                        <t t-set-slot="toggler">
                            Upload your file
                        </t>
                    </FileUploader>
                </label>
            </t>
        </t>
        <t t-elif="this.props.record.resId and this.props.record.data[this.props.name]">
            <a class="o_form_uri" href="#" t-on-click.prevent="this.onFileDownload">
                <span class="fa fa-download me-2" />
                <t t-if="this.fileName" t-esc="this.fileName" />
            </a>
        </t>
    </t>

    <t t-name="web.ListBinaryField" t-inherit="web.BinaryField">
        <xpath expr="//label[hasclass('o_select_file_button')]" position="replace">
            <label class="o_select_file_button btn btn-sm btn-link p-0">
                <FileUploader
                    acceptedFileExtensions="this.props.acceptedFileExtensions"
                    onUploaded.bind="this.update"
                >
                    <t t-set-slot="toggler">
                        <i class="fa fa-upload fa-fw"/> Upload your file
                    </t>
                </FileUploader>
            </label>
        </xpath>
    </t>

</templates>
