<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.ListBadgeSelectionField" t-inherit="web.BadgeSelectionField" t-inherit-mode="primary">
        <xpath expr="//t[@t-if='this.props.readonly']/span[@t-esc='this.string']" position="attributes">
            <attribute name="class">badge rounded-pill</attribute>
            <attribute name="t-att-class">this.getBadgeClassNames()</attribute>
        </xpath>
        <!-- TODO will need to manually remove this.option[1] here -->
        <xpath expr="//t[@t-if='this.props.readonly']/following-sibling::t[@t-else='']//span[@t-esc='option[1]']" position="attributes">
            <attribute name="class" separator=" " add="badge rounded-pill"/>
            <attribute name="t-att-class">this.getBadgeClassNames(option)</attribute>
        </xpath>
    </t>

</templates>
