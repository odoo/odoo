<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.EmailField">
        <t t-if="this.props.readonly">
            <div class="d-grid">
                <a class="o_form_uri o_text_overflow" t-on-click.stop="" t-att-href="this.props.record.data[this.props.name] ? 'mailto:'+this.props.record.data[this.props.name] : undefined" t-esc="this.props.record.data[this.props.name] || ''"/>
            </div>
        </t>
        <t t-else="">
            <div class="d-inline-flex w-100">
                <input
                    class="o_input"
                    t-att-id="this.props.id"
                    type="email"
                    autocomplete="off"
                    t-att-placeholder="this.props.placeholder"
                    t-att-required="this.props.required"
                    t-ref="input"
                />
            </div>
        </t>
    </t>

    <t t-name="web.FormEmailField" t-inherit="web.EmailField" t-inherit-mode="primary">
        <xpath expr="//input" position="after">
            <a
                t-if="this.props.record.data[this.props.name]"
                t-att-href="'mailto:'+this.props.record.data[this.props.name]"
                class="ms-3 d-inline-flex align-items-center"
                target="_blank"
            >
                <i class="fa fa-envelope" data-tooltip="Send Email" aria-label="Send Email"></i>
            </a>
        </xpath>
    </t>

</templates>
