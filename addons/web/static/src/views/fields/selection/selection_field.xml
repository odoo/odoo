<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.SelectionField">
        <t t-if="this.props.readonly">
            <span t-esc="this.string" t-att-raw-value="this.value" />
        </t>
        <t t-else="">
            <SelectMenu autoSort="false" class="'border-0'" menuClass="'o_field_selection_menu w-auto'" value="this.value" choices="this.choices" onSelect.bind="this.onChange" placeholder="this.props.placeholder" id="this.props.id" searchable="!this.isBottomSheet" />
        </t>
    </t>

</templates>
