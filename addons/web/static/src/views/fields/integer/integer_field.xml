<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="web.IntegerField">
        <span t-if="this.props.readonly" t-esc="this.formattedValue" />
        <input 
            t-else="" 
            t-ref="numpadDecimal" 
            t-on-focusin="this.onFocusIn" 
            t-on-focusout="this.onFocusOut" 
            t-att-id="this.props.id" 
            t-att-min="this.props.min"
            t-att-max="this.props.max"
            t-att-type="this.props.inputType" 
            inputmode="numeric" 
            class="o_input" 
            autocomplete="off"
            t-att-step="this.props.step" />
    </t>

</templates>
