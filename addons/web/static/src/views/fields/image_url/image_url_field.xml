<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.ImageUrlField">
        <img
            t-if="this.props.record.data[this.props.name]"
            class="img img-fluid"
            alt="Image"
            t-att-src="this.state.src"
            t-att-border="this.props.readonly ? 0 : 1"
            t-att-name="this.props.name"
            t-att-height="this.props.height"
            t-att-width="this.props.width"
            t-att-style="this.sizeStyle"
            t-on-error="this.onLoadFailed"
        />
    </t>

</templates>
