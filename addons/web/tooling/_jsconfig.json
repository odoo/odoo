{
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": "${configDir}",
        "target": "ES2022",
        "noEmit": true,
        "disableSizeLimit": true,
        "typeRoots": [
            "*/static/src/@types",
            "mail/static/src/js/tooling/types",
            "web/tooling/types",
            "../node_modules/@odoo/o-spreadsheet/dist"
        ]
    },
    "include": ["**/*.js", "**/*.ts"],
    "exclude": [
        "**/node_modules",
        "**/lib/ace",
        "**/lib/bootstrap",
        "**/lib/Chart",
        "**/lib/chartjs-adapter-luxon",
        "**/lib/fullcalendar",
        "**/lib/jquery",
        "**/lib/luxon",
        "**/lib/odoo_ui_icons",
        "**/lib/owl",
        "**/lib/pdfjs",
        "**/lib/popper",
        "**/lib/qunit",
        "**/lib/signature_pad",
        "**/lib/stacktracejs",
        "**/lib/zxing-library",
        "**/l10n*",
        "spreadsheet/static/src/o_spreadsheet/o_spreadsheet.js"
    ]
}
