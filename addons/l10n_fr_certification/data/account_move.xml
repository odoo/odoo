<odoo>
    <record model="ir.actions.server" id="action_check_hash_integrity">
        <field name="name">Account Move: Check Moves Hash Chain</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="type">ir.actions.server</field>
        <field name="code">
            if object:
                action = object.client_check_hash_integrity()
        </field>
    </record>

    <record model="ir.values" id="check_hash_integrity">
        <field name="name">Check Moves Hash Chain</field>
        <field name="model_id" ref="account.model_account_move" />
        <field name="model">account.move</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.server,' +str(ref('action_check_hash_integrity'))"/>
        <field name="key">action</field>
    </record>

</odoo>