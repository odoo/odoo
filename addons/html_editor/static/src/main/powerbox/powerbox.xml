<templates xml:space="preserve">
    <t t-name="html_editor.Powerbox">
        <div t-ref="root" class="o-we-powerbox py-2 bg-white overflow-auto my-1" style="width:300px;max-height:40vh;" t-on-mousedown.stop="" t-on-scroll="onScroll" >
            <t t-foreach="commands" t-as="command" t-key="command_index">
                <t t-if="showCategories and command.category !== lastCategory">
                    <div class="o-we-category mx-3 my-1 text-uppercase"><t t-esc="command.categoryName"/></div></t>
                    <t t-set="lastCategory" t-value="command.category">
                </t>
                <div class="o-we-command d-flex align-items-center px-3 py-2 cursor-pointer"
                    t-att-class="{active: command_index === currentIndex}"
                    t-on-mouseenter="() => this.onMouseEnter(command_index)"
                    t-on-click="() => this.props.applyCommand(command)">
                    <div class="border rounded">
                        <i class="o-we-command-img d-flex align-items-center justify-content-center fa" t-att-class="command.fontawesome"/>
                    </div>
                    <div class="ms-3">
                        <div class="o-we-command-name" t-esc="command.name"/>
                        <div class="o-we-command-description" t-esc="command.description"/>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>
