<templates xml:space="preserve">
    <t t-name="html_editor.Toolbar">
        <div class="o-we-toolbar"
            t-att-class="props.class + ' ' + (props.useDefaultClasses ? 'm-0 d-flex bg-white align-items-center' : '')">
            <t t-foreach="this.getFilteredButtonGroups()" t-as="buttonGroup" t-key="buttonGroup.id">
                <span class="o-we-toolbar-vertical-seperator"></span>
                <div class="btn-group" t-att-name="buttonGroup.id">
                    <t t-foreach="buttonGroup.buttons" t-as="button" t-key="button.id">
                        <t t-if="button.state.isAvailable">
                            <t t-if="button.Component">
                                <t t-component="button.Component" t-props="button.props"/>
                            </t>
                            <button t-else=""
                                class="btn btn-light"
                                t-att-class=" {
                                    active: button.state.isActive,
                                    disabled: !button.state.isEnabled
                                }"
                                t-att-title="button.name"
                                t-att-name="button.id"
                                t-on-click="() => button.action(this.props.toolbar.dispatch)"
                            >
                                <span t-if="button.icon" class="fa fa-fw" t-att-class="button.icon"/>
                                <span t-if="button.text" t-esc="button.text"/>
                            </button>
                        </t>
                    </t>
                </div>
            </t>
        </div>
    </t>
</templates>
