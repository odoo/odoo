<templates xml:space="preserve">
    <t t-name="html_editor.FontSizeSelector">
        <Dropdown state="this.dropdown" menuClass="'o_font_size_selector_menu'" menuRef="this.menuRef">
            <button class="btn btn-light" t-att-title="this.props.title" name="font_size_selector" t-att-disabled="this.props.isDisabled">
                <iframe t-ref="iframeContent" style="width: 4ch; height:100%;"/>
            </button>
            <t t-set-slot="content">
                <div data-prevent-closing-overlay="true">
                    <t t-foreach="this.items" t-as="item" t-key="item_index">
                        <DropdownItem onSelected="() => this.onSelected(item)" t-on-pointerdown.prevent="() => {}">
                            <t t-out="item.name"/>
                        </DropdownItem>
                    </t>
                </div>
            </t>
        </Dropdown>
    </t>
</templates>
