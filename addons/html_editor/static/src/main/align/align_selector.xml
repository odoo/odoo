<templates xml:space="preserve">
    <t t-name="html_editor.AlignSelector">
        <Dropdown menuClass="'o-we-toolbar-dropdown'" bottomSheet="false" menuRef="menuRef">
            <button class="btn btn-light" t-att-title="props.title" name="text_align">
                <span class="px-1 d-flex align-items-center">
                    <i t-att-class="`fa fa-align-${state.displayName}`"/>
                </span>
            </button>
            <t t-set-slot="content">
                <div data-prevent-closing-overlay="true" class="d-flex justify-content-center align-item-center">
                    <t t-foreach="items" t-as="item" t-key="item_index">
                        <DropdownItem
                            tag="'button'"
                            attrs="{ title: item.description }"
                            class="{['dropdown-item_active_noarrow btn btn-light fa fa-align-'+item.mode]: true, active: item.mode === state.displayName }"
                            closingMode="'none'"
                            onSelected="() => this.onSelected(item)"
                        />
                    </t>
                </div>
            </t>
        </Dropdown>
    </t>
</templates>
