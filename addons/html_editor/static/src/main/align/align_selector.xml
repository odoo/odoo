<templates xml:space="preserve">
    <t t-name="html_editor.AlignSelector">
        <Dropdown menuClass="'o-we-toolbar-dropdown'" bottomSheet="false" menuRef="this.menuRef">
            <button class="btn btn-light" t-att-title="this.props.title" name="text_align">
                <span class="px-1 d-flex align-items-center">
                    <i t-att-class="`fa fa-align-${state.displayName}`"/>
                </span>
            </button>
            <t t-set-slot="content">
                <div data-prevent-closing-overlay="true">
                    <t t-foreach="this.items" t-as="item" t-key="item_index">
                        <button
                            t-att-title="item.description"
                            t-attf-class="btn btn-light fa fa-align-{{item.icon}}"
                            t-att-class="{ active: item.icon === this.state.displayName }"
                            t-on-click="() => this.onSelected(item)"
                            t-on-pointerdown.prevent="() => {}"
                        />
                    </t>
                </div>
            </t>
        </Dropdown>
    </t>
</templates>
