<templates id="template" xml:space="preserve">

<t t-name="html_editor.ChatGPTTranslateDialog">
    <Dialog size="'lg'" title.translate="Translate with AI">
        <div t-if="this.state.translationInProgress" class="d-flex">
            <img src="/web/static/img/spin.svg" alt="Loading..." class="me-2"
                style="filter:invert(1); opacity: 0.5; width: 30px; height: 30px;" />
            <p class="m-0 text-muted align-self-center">
                <em>Translating...</em>
            </p>
        </div>
        <t t-else="">
            <t t-set="message" t-value="this.state.messages[0]" />
            <div t-att-data-message-id="message.id"
                t-att-class="message.isError ? 'o-message-error border-danger bg-danger p-2' : ''"
                class="o-chatgpt-translated">
                <t t-out="this.formatContent(message.text)" />
            </div>
        </t>

        <!-- FOOTER -->
        <t t-set-slot="footer">
            <button class="btn btn-primary" t-on-click="this._confirm"
                t-att-disabled="this.state.translationInProgress || this.state.messages[0].isError">Insert</button>
            <button class="btn btn-secondary" t-on-click="this._cancel">Discard</button>
        </t>
    </Dialog>
</t>
</templates>
