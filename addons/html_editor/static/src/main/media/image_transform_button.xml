<templates xml:space="preserve">
    <t t-name="html_editor.ImageTransformButton">
        <button class="btn btn-light" t-att-class="{active: this.state.active, disabled: this.props.isDisabled}" t-att-title="this.state.active ? this.props.activeTitle : this.props.title" t-att-name="this.props.id" t-on-click="this.onButtonClick">
            <span class="fa fa-fw" t-att-class="this.props.icon"/>
        </button>
    </t>
</templates>
