<templates xml:space="preserve">
    <t t-name="html_editor.Wysiwyg">
        <div class="o-wysiwyg d-flex flex-column p-0" t-att-class="this.props.class" t-att-style="this.props.style">
            <LocalOverlayContainer localOverlay="this.overlayRef" identifier="this.env.localOverlayContainerKey"/>
            <div class="flex-grow-1" t-att-class="{'overflow-auto': !this.props.iframe}">
                <t t-if="this.props.iframe">
                    <iframe t-ref="content" class="w-100 h-100" t-att-data-class="this.props.contentClass" t-on-blur="this.props.onBlur"/>
                </t>
                <t t-else="">
                    <div t-att-class="this.props.contentClass" t-ref="content" t-on-blur="this.props.onBlur" contenteditable="true"/>
                </t>
            </div>
        </div>
    </t>
</templates>
