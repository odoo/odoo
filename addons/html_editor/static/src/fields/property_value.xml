<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">
    <t t-inherit="web.PropertyValue" t-inherit-mode="extension">
        <xpath expr="//t[@t-elif=&quot;props.type === 'text'&quot;]" position="before">
            <t t-elif="this.props.type === 'html'">
                <HtmlViewer
                    t-if="this.props.readonly"
                    config="this.getReadonlyConfig()"
                    migrateHTML="false"/>
                <Wysiwyg
                    t-else=""
                    config="this.getConfig()"
                    onLoad.bind="this.onEditorLoad"
                    onBlur.bind="this.onEditorBlur"
                    t-key="this.htmlState.key"/>
            </t>
        </xpath>
    </t>
</templates>
