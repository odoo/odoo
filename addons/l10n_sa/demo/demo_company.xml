<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base.partner_demo_company_sa" model="res.partner" forcecreate="1">
        <field name="name">My Saudi Arabia Company</field>
        <field name="email">info@yourcompany.com</field>
        <field name="phone">+966 51 234 5678</field>
        <field name="street">Prince Mohammed Bin Abdulaziz St</field>
        <field name="street2">Ar Rawdah</field>
        <field name="city">Jeddah</field>
        <field name="state_id" ref="base.state_sa_002"/>
        <field name="zip">23432</field>
        <field name="country_id" ref="base.sa"/>
        <field name="vat">399999999900003</field>
        <field name="is_company" eval="True"/>
        <field name="website">https://www.MySaudiCompany.odoo.com</field>
        <field name="is_company" eval="True"/>
    </record>

    <record id="base.demo_company_sa" model="res.company" forcecreate="1">
        <field name="name">My Saudi Arabia Company</field>
        <field name="vat">399999999900003</field>
        <field name="partner_id" ref="base.partner_demo_company_sa"/>
        <field name="paperformat_id" ref="l10n_sa.paperformat_l10n_sa_a4"></field>
        <field name="company_details">
<![CDATA[
<p>My Saudi Company<br>
Prince Mohammed Bin Abdulaziz St<br/>
Ar Rawdah MAK 23432<br/>
1234 1234<br/>
Saudi Arabia<br/><br/>
VAT Number: 399999999900003<br/>
Other ID: 3999999999</p>
]]>
        </field>
    </record>

    <function model="res.company" name="_onchange_country_id">
        <value eval="[ref('base.demo_company_sa')]"/>
    </function>

    <function model="res.users" name="write">
        <value eval="[ref('base.user_root'), ref('base.user_admin'), ref('base.user_demo')]"/>
        <value eval="{'company_ids': [(4, ref('base.demo_company_sa'))]}"/>
    </function>

    <function model="account.chart.template" name="try_loading">
        <value eval="[]"/>
        <value>sa</value>
        <value model="res.company" eval="obj().env.ref('base.demo_company_sa')"/>
        <value name="install_demo" eval="True"/>
    </function>
</odoo>
