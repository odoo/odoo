<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Allow access to certificates of current company/companies -->
    <record id="l10n_es_sii_digital_certificate" model="ir.rule">
        <field name="name">Spanish SII Digital Certificate</field>
        <field name="model_id" ref="model_l10n_es_edi_sii_certificate"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
