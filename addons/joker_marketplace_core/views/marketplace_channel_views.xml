<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Marketplace Channel List View -->
        <record id="marketplace_channel_tree" model="ir.ui.view">
            <field name="name">marketplace.channel.tree</field>
            <field name="model">marketplace.channel</field>
            <field name="arch" type="xml">
                <list string="Pazaryeri Kanalları">
                    <field name="name" />
                    <field name="channel_type" />
                    <field name="active" />
                    <field name="last_sync_status" />
                    <field name="total_products" />
                    <field name="total_orders" />
                    <field name="pending_orders" />
                </list>
            </field>
        </record>

        <!-- Marketplace Channel Form View -->
        <record id="marketplace_channel_form" model="ir.ui.view">
            <field name="name">marketplace.channel.form</field>
            <field name="model">marketplace.channel</field>
            <field name="arch" type="xml">
                <form string="Pazaryeri Kanalı">
                    <header>
                        <button name="action_test_connection" type="object"
                            string="Bağlantıyı Test Et" class="oe_highlight" />
                        <button name="action_sync_now" type="object" string="Şimdi Senkronize Et"
                            class="oe_highlight" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(marketplace_product_action)d" type="action"
                                class="oe_stat_button" icon="fa-cube">
                                <field string="Ürünler" name="total_products" widget="statinfo" />
                            </button>
                            <button name="%(marketplace_order_action)d" type="action"
                                class="oe_stat_button" icon="fa-shopping-cart">
                                <field string="Siparişler" name="total_orders" widget="statinfo" />
                            </button>
                            <button name="%(marketplace_order_action)d" type="action"
                                class="oe_stat_button" icon="fa-clock-o">
                                <field string="Beklemede" name="pending_orders" widget="statinfo" />
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Kanal Adı" />
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="channel_type" required="1" />
                                <field name="active" widget="boolean_toggle" />
                                <field name="company_id" options="{'no_create': True}" />
                                <field name="warehouse_id" options="{'no_create': True}" />
                            </group>
                            <group>
                                <field name="sync_interval" />
                                <field name="last_sync" />
                                <field name="last_sync_status" />
                            </group>
                        </group>

                        <notebook>
                            <page string="API Kimlik Bilgileri" name="credentials">
                                <group>
                                    <field name="api_key" widget="password" />
                                    <field name="api_secret" widget="password" />
                                    <field name="merchant_id" />
                                    <field name="shop_id" />
                                </group>
                            </page>

                            <page string="Özellikler" name="features">
                                <group>
                                    <field name="supports_inventory" />
                                    <field name="supports_orders" />
                                    <field name="supports_pricing" />
                                    <field name="supports_returns" />
                                </group>
                                <group string="Otomatik Akışlar">
                                    <field name="auto_confirm_orders" />
                                    <field name="auto_create_picking" />
                                    <field name="auto_create_invoice" />
                                </group>
                            </page>

                            <page string="Kategori Eşleştirmesi" name="categories">
                                <field name="category_mapping" widget="ace"
                                    options="{'mode': 'json'}" />
                            </page>

                            <page string="Senkronizasyon Logları" name="logs">
                                <field name="sync_log_ids" nolabel="1">
                                    <list string="Sync Logs">
                                        <field name="operation" />
                                        <field name="status" />
                                        <field name="start_time" />
                                        <field name="duration" />
                                        <field name="records_processed" />
                                    </list>
                                </field>
                            </page>
                        </notebook>

                        <div attrs="{'invisible': [('last_error', '=', False)]}">
                            <group>
                                <label for="last_error" />
                                <field name="last_error" widget="text" nolabel="1" />
                            </group>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread" />
                        <field name="activity_ids" widget="mail_activity" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Marketplace Channel Kanban View -->
        <record id="marketplace_channel_kanban" model="ir.ui.view">
            <field name="name">marketplace.channel.kanban</field>
            <field name="model">marketplace.channel</field>
            <field name="arch" type="xml">
                <kanban string="Pazaryeri Kanalları">
                    <field name="name" />
                    <field name="channel_type" />
                    <field name="active" />
                    <field name="last_sync_status" />
                    <field name="total_products" />
                    <field name="total_orders" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <h4>
                                        <field name="name" />
                                    </h4>
                                    <p>
                                        <strong>
                                            <field name="channel_type" />
                                        </strong>
                                    </p>
                                    <ul>
                                        <li>Ürünler: <field name="total_products" /></li>
                                        <li>Siparişler: <field name="total_orders" /></li>
                                    </ul>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="oe_tag"
                                            t-att-class="record.last_sync_status.raw_value == 'success' and 'oe_tag_success' or 'oe_tag_danger'">
                                            <field name="last_sync_status" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="marketplace_channel_action" model="ir.actions.act_window">
            <field name="name">Pazaryeri Kanalları</field>
            <field name="res_model">marketplace.channel</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Yeni pazaryeri kanalı oluşturun.
                </p>
            </field>
        </record>

    </data>
</odoo>
