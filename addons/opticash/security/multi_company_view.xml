<?xml version="1.0" ?>
<odoo>
  <data noupdate="1">
    <record id="optesis_cash" model="ir.rule">
        <field name="name">Optesis Cash</field>
        <field name="model_id" ref="opticash.model_optesis_cash"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="optesis_cash_line" model="ir.rule">
        <field name="name">Optesiss cash line</field>
        <field name="model_id" ref="opticash.model_optesis_cash_line"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="account_payment_line" model="ir.rule">
        <field name="name">Account Payment Line</field>
        <field name="model_id" ref="opticash.model_account_payment_line"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

  </data>
</odoo>
