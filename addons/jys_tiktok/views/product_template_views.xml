<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product template -->
        <record id="jys_product_template_form_inherit" model="ir.ui.view">
            <field name="name">jys.tiktok.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_tiktok"/>
                        <label for="is_tiktok"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="jys_product_template_only_form_inherit" model="ir.ui.view">
            <field name="name">jys.tiktok.product.template.only.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="%(action_tiktok_add_product)d" type="action" string="Add Product to Tiktok" invisible="is_tiktok == False"/>
                    <button name="%(action_tiktok_update_product)d" type="action" string="Update Product to Tiktok" invisible="is_tiktok == False"/>

                    <div style="clear: both;"/>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="tiktok_sku"/>
                </xpath>
                <xpath expr="//page[@name='general_information']" position="after">
                    <page string="Tiktok" invisible="is_tiktok == False">
                        <separator string="Items"/>
                        <field name="tiktok_product_ids" nolabel="1" readonly="0">
                            <tree editable="bottom">
                                <field name="shop_id"/>
                                <!-- <field name="name"/> -->
                                <field name="item_id"/>
                                <field name="price"/>
                            </tree>
                        </field>

                        <!-- <field name="tiktok_product_image_ids" nolabel="1" string="Images">
                            <tree string="Images" editable="bottom">
                                <field name="image" widget="image" nolabel="1"/>
                            </tree>
                        </field> -->
                        <!-- <separator string="Upload Image"/> -->

                        <separator string="Image"/>
                        <button name="action_open_delete_confirmation_wizard" type="object" string="Delete All Image" class="oe_highlight tiktok-button-delete" invisible="not tiktok_product_image_ids"/>

                        <field name="tiktok_product_image_ids" widget="kanban" string="Images">
                            <kanban create="0">
                                <field name="image"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="o_kanban_image" style="width: 300px; height: 300px; border: 0px solid white; display: flex; align-items: center; justify-content: center;">
                                            <img alt="Image" t-att-src="kanban_image('tiktok.product.image', 'image', record.id.raw_value)" style="width: 100%; height: 100%"/>
                                        </div>
                                        <button name="unlink" type="object" class="fa fa-trash"/>
                                    </t>
                                </templates>
                            </kanban>
                            <form string="Upload Image">
                                <sheet>
                                    <group>
                                        <field name="image" widget="image"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                        <field name="upload_product_tt_image_ids" widget="many2many_binary" string="Images" nolabel="1" context="{'upload_tiktok_image': True}"/>

                    </page>
                </xpath>
            </field>
        </record>

        <record id="jys_product_template_kanban_inherit" model="ir.ui.view">
            <field name="name">jys.tiktok.product.template.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_properties']" position="after">
                    <field name="is_tiktok" invisible="1"/>
                    <div style="display: inline-block; float:right">
                        <img src="/jys_tiktok/static/img/tiktok_logo.png" alt="Tiktok" style="width: 24px; height: 24px; display:flex; flex-direction: row-reverse" invisible="is_tiktok == False"/>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Product variant -->
        <record id="view_tiktok_product_product_form" model="ir.ui.view">
            <field name="name">tiktok.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//field[@name='default_code']" position="after">
                    <field name="variation_sku"/>
                </xpath> -->
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_sync_tiktok"/>
                        <label for="is_sync_tiktok"/>
                    </div>
                </xpath>
                <xpath expr="//page[@name='sales']" position="after">
                    <page name="tiktok_variations" string="Tiktok" invisible="is_tiktok == False">
                        <separator string="SKU"/>
                        <group>
                            <field name="tiktok_variation_sku" required="is_tiktok == True"/>
                        </group>

                        <separator string="PRODUCT ID"/>
                        <field name="tiktok_product_variant_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="shop_id"/>
                                <field name="variation_id"/>
                                <!-- <field name="price_after_tax" readonly="1"/> -->
                                <field name="price" readonly="1"/>
                                <!-- <field name="tax_amount" readonly="1"/> -->
                            </tree>
                        </field>

                        <separator string="Image"/>
                        <button name="action_open_delete_confirmation_wizard" type="object" string="Delete All Image" class="oe_highlight tiktok-button-delete" invisible="not tiktok_product_var_image_ids"/>

                        <field name="tiktok_product_var_image_ids" widget="kanban" string="Images">
                            <kanban create="0">
                                <field name="image"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="o_kanban_image" style="width: 300px; height: 300px; border: 0px solid white; display: flex; align-items: center; justify-content: center;">
                                            <img alt="Image" t-att-src="kanban_image('tiktok.product.image.variant', 'image', record.id.raw_value)" style="width: 100%; height: 100%"/>
                                        </div>
                                        <button name="unlink" type="object" class="fa fa-trash"/>
                                    </t>
                                </templates>
                            </kanban>
                            <form string="Upload Image">
                                <sheet>
                                    <group>
                                        <field name="image" widget="image"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                        <field name="upload_product_var_tt_image_ids" widget="many2many_binary" string="Images" nolabel="1" context="{'upload_tiktok_image': True}"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="jys_product_product_kanban_inherit" model="ir.ui.view">
            <field name="name">jys.tiktok.product.product.kanban</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='tags']" position="after">
                    <field name="is_sync_tiktok" invisible="1"/>
                    <div style="display: inline-block; float:right">
                        <img src="/jys_tiktok/static/img/tiktok_logo.png" alt="Tiktok" style="width: 24px; height: 24px; display:flex; flex-direction: row-reverse" invisible="is_sync_tiktok == False"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>