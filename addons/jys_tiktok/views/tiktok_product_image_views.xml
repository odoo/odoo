<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tiktok_product_image_tree" model="ir.ui.view">
            <field name="name">tiktok.product.image.tree</field>
            <field name="model">tiktok.product.image</field>
            <field name="arch" type="xml">
                <tree string="Tiktok Product Image" create="0">
                    <field name="name"/>
                    <field name="product_tmpl_id"/>
                </tree>
            </field>
        </record>

        <record id="view_tiktok_product_image_form" model="ir.ui.view">
            <field name="name">tiktok.product.image.form</field>
            <field name="model">tiktok.product.image</field>
            <field name="arch" type="xml">
                <form string="Tiktok Product Image" create="0" edit="0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group><field name="uri"/></group>

                        <separator string="Images"/>
                        <field name="image_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="image"/>
                                <field name="uri"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_jys_tiktok_product_image" model="ir.actions.act_window">
            <field name="name">Product Image</field>
            <field name="res_model">tiktok.product.image</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>