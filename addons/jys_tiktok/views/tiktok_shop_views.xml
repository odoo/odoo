<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tiktok_shop_tree" model="ir.ui.view">
            <field name="name">tiktok.shop.tree</field>
            <field name="model">tiktok.shop</field>
            <field name="arch" type="xml">
                <tree string="Tiktok Shop">
                    <header>
                        <button name="action_authorize_shop_tiktok" string="Authorize TikTok Shop" class="btn-primary ms-1" type="object" display="always"/>
                    </header>
                    <field name="name"/>
                    <field name="shop_id"/>
                </tree>
            </field>
        </record>

        <record id="view_tiktok_shop_form" model="ir.ui.view">
            <field name="name">tiktok.shop.form</field>
            <field name="model">tiktok.shop</field>
            <field name="arch" type="xml">
                <form string="TikTok Shop">
                    <header>
                        <!-- <button name="action_authorize_shop_tiktok" string="Authorize Shop" type="object" class="btn-primary"/> -->
                        <button name="action_get_token_tiktok" string="Get Token" type="object" class="btn-primary"/>
                        <button name="action_get_access_token_tiktok" string="Get Access Token" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="shop_id" required="0"/>
                            <!-- <field name="employee_id" required="0"/>  -->
                            <!-- <field name="time_code" required="0"/> -->
                            <field name="sales_fee" required="0"/>
                            <field name="flat_fee" required="0"/>
                            <field name="partner_id" required="0"/> 
                            <!-- <field name="partner_invoice_id" required="0"/>  -->
                            <field name="setting_shop_id" required="0"/>
                            <field name="fulfillment" required="0"/>  
                            <field name="tiktok_commission_product_id" required="0"/>
                            <field name="start_date" required="0"/>     
                        </group>
                        <separator string="Journal and Payment"/>
                        <group>
                            <field name="payment_journal_id" required="0"/>
                            <field name="payment_method_id" required="0"/>
                        </group>
                        <separator string="TikTok Access"/>
                        <group>
                            <field name="tiktok_chiper" required="0" readonly="0"/>                          
                            <field name="tiktok_token" required="0" readonly="1"/>
                            <field name="tiktok_refresh" required="0" readonly="1"/>
                            <field name="tiktok_code" required="0"/>                             
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        
        <record id="action_jys_tiktok_shop" model="ir.actions.act_window">
            <field name="name">Tiktok Shop</field>
            <field name="res_model">tiktok.shop</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
    </data>
</odoo>