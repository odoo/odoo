<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tiktok_attribute_tree" model="ir.ui.view">
            <field name="name">tiktok.attribute.tree</field>
            <field name="model">tiktok.attribute</field>
            <field name="arch" type="xml">
                <tree string="Tiktok Attribute" create="0">
                    <field name="name"/>
                    <field name="attribute_id"/>
                    <field name="attribute_type"/>
                    <field name="is_customizable"/>
                    <field name="is_multiple_selection"/>
                    <field name="is_requried"/>
                </tree>
            </field>
        </record>

        <record id="view_tiktok_attribute_form" model="ir.ui.view">
            <field name="name">tiktok.attribute.form</field>
            <field name="model">tiktok.attribute</field>
            <field name="arch" type="xml">
                <form string="Tiktok Attribute" create="0" edit="0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group col="4" colspan="2">
                            <field name="attribute_id" readonly="1"/>
                            <field name="attribute_type" readonly="1"/>
                            <field name="is_customizable" readonly="1"/>
                            <field name="is_multiple_selection" readonly="1"/>
                            <field name="is_requried" readonly="1"/>
                        </group>
                        <separator string="Values"/>
                        <field name="value_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="value_id"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tiktok_attribute_value_tree" model="ir.ui.view">
            <field name="name">tiktok.attribute.value.tree</field>
            <field name="model">tiktok.attribute.value</field>
            <field name="arch" type="xml">
                <tree string="Tiktok Attribute Value" create="0">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_tiktok_attribute_value_form" model="ir.ui.view">
            <field name="name">tiktok.attribute.value.form</field>
            <field name="model">tiktok.attribute.value</field>
            <field name="arch" type="xml">
                <form string="Tiktok Attribute Value" create="0" edit="0">
                    <sheet>
                        <group col="4" colspan="2">
                            <field name="name" readonly="1"/>
                            <field name="value_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_jys_tiktok_attribute" model="ir.actions.act_window">
            <field name="name">Attributes</field>
            <field name="res_model">tiktok.attribute</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>