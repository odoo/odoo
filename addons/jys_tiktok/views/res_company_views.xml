<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_jys_tiktok_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='branches']" position="after">
                    <page string="Tiktok" name="page_tiktok">
                        <separator string="API Settings"/>
                        
                        <group>
                            <field name="tiktok_api_domain"/>
                            <field name="tiktok_client_id"/>
                            <field name="tiktok_client_secret"/>
                            <field name="tiktok_access_token"/>
                            <field name="tiktok_url"/>
                            <field name="tiktok_state"/>
                        </group>
                        
                        <separator string="URL"/>
                        
                        <group>
                            <field name="tiktok_url"/>
                        </group>
                        
                        <separator string="Other Config"/>
                        
                        <group>
                            <field name="tiktok_logistic_product_id"/>
                            <field name="tiktok_commission_product_id"/>
                        </group>
                        
                        <separator string="Shops"/>
                        <field name="tiktok_shop_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="shop_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>