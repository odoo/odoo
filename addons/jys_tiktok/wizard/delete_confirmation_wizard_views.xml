<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_delete_confirmation_wizard" model="ir.ui.view">
            <field name="name">delete.confirmation.wizard.form</field>
            <field name="model">delete.confirmation.wizard</field>
            <field name="arch" type="xml">
                <form string="Delete Confirmation">
                    <p><b>Are you sure you want to delete all images?</b></p>
                    <footer>
                        <button name="action_confirm_delete" string="Confirm" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_delete_confirmation_wizard" model="ir.actions.act_window">
            <field name="name">Delete Confirmation</field>
            <field name="res_model">delete.confirmation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
