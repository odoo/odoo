<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="sale_report_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='row mt-4 mb-4']" position="after">
            <div t-if="doc.test" class="row mt-4 mb-4" id="test_inherit">
                <div class="col-auto col-3 mw-100 mb-2">
                    <strong>Test:</strong>
                    <p class="m-0" t-field="doc.test"/>
                </div>
            </div>
        </xpath>
    </template>

</odoo>