<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sms_recipient_view_list" model="ir.ui.view">
        <field name="name">sms_recipient.list</field>
        <field name="model">sms.recipient</field>
        <field name="arch" type="xml">
            <tree string="Recipients" editable="bottom">
                <field name="partner_id"/>
                <field name="number"/>
            </tree>
        </field>
    </record>

    <record id="send_sms_view_form" model="ir.ui.view">
        <field name="name">sms_send_sms.form</field>
        <field name="model">sms.compose.message</field>
        <field name="arch" type="xml">
            <form string="Send an SMS">
                <sheet>
                    <group>
                        <field name="composition_mode" invisible="1"/>
                        <field name="use_active_domain" invisible="1"/>
                        <field name="model" invisible="1"/>

                        <!-- Various warnings -->
                        <div colspan="2" class="oe_form_box_info bg-info oe_text_center mb-3"
                                attrs="{'invisible': [('composition_mode', '=', 'comment')]}">
                            <p attrs="{'invisible': [('use_active_domain', '=', False)]}">
                                <strong>
                                    All records matching your current search filter will receive a SMS,
                                    not only the ids selected in the list view.
                                </strong><br />
                                The SMS will be sent for all the records selected in the list.<br />
                                Confirming this wizard will probably take a few minutes blocking your browser.
                            </p>
                            <p attrs="{'invisible': [('use_active_domain', '=', True)]}">
                                <strong>Only records checked in list view will be used.</strong><br />
                                The SMS will be sent for all the records selected in the list.
                            </p>
                            <p class="mt8">
                                <span attrs="{'invisible': [('use_active_domain', '=', True)]}">
                                    If you want to send it for all the records matching your search criterion, check this box :
                                </span>
                                <span attrs="{'invisible': [('use_active_domain', '=', False)]}">
                                    If you want to use only selected records please uncheck this selection box :
                                </span>
                                <field class="oe_inline" name="use_active_domain"/>
                            </p>
                        </div>
                        <label for="recipient_ids" string="Recipients"/>
                        <div>
                            <span attrs="{'invisible': [('composition_mode', '!=', 'mass_sms')]}">
                                <strong>SMS mass mailing</strong> on
                                <span attrs="{'invisible': [('use_active_domain', '=', True)]}">the selected records</span>
                                <span attrs="{'invisible': [('use_active_domain', '=', False)]}">the current search filter</span>.
                            </span>
                            <field name="recipient_ids" attrs="{'invisible': [('composition_mode', '!=', 'comment')]}"/>
                        </div>

                        <field name="content" widget="sms_widget"/>
                    </group>
                    <group>
                        <group>
                            <field name="template_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Send SMS" type="object" class="oe_highlight" name="action_send_sms"/>
                    <button string="Close" class="oe_link" special="cancel" />
                    <button icon="fa-lg fa-save" type="object" name="save_as_template" string="Save as new template"
                        class="float-right btn-secondary" help="Save as a new template"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="send_sms_form_action" model="ir.actions.act_window">
        <field name="name">Send SMS Text Message</field>
        <field name="res_model">sms.compose.message</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
