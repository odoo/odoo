<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="spreadsheet.DefaultDateValue">
        <Dropdown>
            <input class="o_input w-100 o-date-filter-input" readonly="true" t-att-value="this.currentFormattedValue"/>
            <t t-set-slot="content">
                <t t-foreach="this.dateOptions" t-as="option" t-key="option.id">
                    <DropdownItem class="{ 'selected': option.id === this.props.value }"
                                  attrs="{ 'data-id': option.id }"
                                  onSelected="() => this.props.update(option.id)">
                        <span t-esc="option.label"/>
                    </DropdownItem>
                    <div class="dropdown-divider" t-if="option.separator"/>
                </t>
            </t>
        </Dropdown>
    </t>
</templates>
