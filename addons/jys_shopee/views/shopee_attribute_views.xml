<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopee_attribute_tree" model="ir.ui.view">
            <field name="name">shopee.attribute.tree</field>
            <field name="model">shopee.attribute</field>
            <field name="arch" type="xml">
                <tree string="Shopee Attribute" create="0">
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="attribute_id"/>
                    <field name="attribute_type"/>
                    <field name="input_type"/>
                    <field name="is_mandatory"/>
                </tree>
            </field>
        </record>

        <record id="view_shopee_attribute_form" model="ir.ui.view">
            <field name="name">shopee.attribute.form</field>
            <field name="model">shopee.attribute</field>
            <field name="arch" type="xml">
                <form string="Shopee Attribute" create="0" edit="0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group col="4" colspan="2">
                            <field name="category_id" readonly="1"/>
                            <field name="attribute_type" readonly="1"/>
                            <field name="input_type" readonly="1"/>
                            <field name="attribute_id" readonly="1"/>
                            <field name="is_mandatory" readonly="1"/>
                        </group>
                        <separator string="Values"/>
                        <field name="value_ids" nolabel="1" readonly="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_shopee_attribute_value_tree" model="ir.ui.view">
            <field name="name">shopee.attribute.value.tree</field>
            <field name="model">shopee.attribute.value</field>
            <field name="arch" type="xml">
                <tree string="Shopee Attribute Value" create="0">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_shopee_attribute_value_form" model="ir.ui.view">
            <field name="name">shopee.attribute.value.form</field>
            <field name="model">shopee.attribute.value</field>
            <field name="arch" type="xml">
                <form string="Shopee Attribute Value" create="0" edit="0">
                    <sheet>
                        <group col="4" colspan="2">
                            <field name="name" readonly="1"/>
                            <field name="attribute_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_jys_shopee_attribute" model="ir.actions.act_window">
            <field name="name">Attributes</field>
            <field name="res_model">shopee.attribute</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>