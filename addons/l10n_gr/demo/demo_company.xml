<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base.partner_demo_company_gr" model="res.partner" forcecreate="1">
        <field name="name">GR Company</field>
        <field name="vat">GR92303501</field>
        <field name="street">a</field>
        <field name="city">Κως</field>
        <field name="country_id" ref="base.gr"/>

        <field name="zip">85300</field>
        <field name="phone">+30 691 234 5678</field>
        <field name="email">info@company.grexample.com</field>
        <field name="website">www.grexample.com</field>
    </record>

    <record id="base.demo_company_gr" model="res.company" forcecreate="1">
        <field name="name">GR Company</field>
        <field name="partner_id" ref="base.partner_demo_company_gr"/>
    </record>

    <record id="base.demo_bank_gr" model="res.partner.bank" forcecreate="1">
        <field name="acc_number">GR1001055277221929455669483</field>
        <field name="partner_id" ref="base.partner_demo_company_gr"/>
        <field name="company_id" ref="base.demo_company_gr"/>
    </record>

    <function model="res.company" name="_onchange_country_id">
        <value eval="[ref('base.demo_company_gr')]"/>
    </function>

    <function model="res.users" name="write">
        <value eval="[ref('base.user_root'), ref('base.user_admin'), ref('base.user_demo')]"/>
        <value eval="{'company_ids': [(4, ref('base.demo_company_gr'))]}"/>
    </function>

    <function model="account.chart.template" name="try_loading">
        <value eval="[]"/>
        <value>gr</value>
        <value model="res.company" eval="obj().env.ref('base.demo_company_gr')"/>
        <value name="install_demo" eval="True"/>
    </function>
</odoo>
