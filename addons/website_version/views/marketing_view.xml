<?xml version="1.0"?>
<openerp>
    <data>

        <record id="action_experiment" model="ir.actions.act_window">
            <field name="name">Experiments</field>
            <field name="res_model">website_version.experiment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{}</field>
        </record>
        
        <record model="ir.ui.view" id="view_experiment_kanban">
            <field name="name">Experiment Kanban</field>
            <field name="model">website_version.experiment</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" string="Experiments" class="oe_background_grey">
                    <field name="name"/>
                    <field name="website_id"/>
                    <field name="experiment_snapshot_ids"/>
                    <field name="color"/>
                    <field name="message_follower_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                          <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click_edit oe_semantic_html_override oe_kanban_card">
                            <div class="oe_dropdown_kanban">

                              <!-- dropdown menu -->
                              <span class="oe_dropdown_toggle">
                                <span class="oe_e">Ã­</span>
                                <ul class="oe_dropdown_menu">
                                  <li><a type="delete">Delete</a></li>
                                  <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                              </span>
                            </div>
                            <!-- kanban note -->
                            <div class="oe_kanban_content">
                              <!-- title -->
                              <field name="name"/>
                            </div>
                            <div class="oe_clear"></div>
                            <div> <field name="version_number"/> version </div>
                            <div class="oe_right">
                              <t t-foreach="record.message_follower_ids.raw_value" t-as="follower">
                                <img t-att-src="kanban_image('res.partner', 'image_small', follower)" width="24" height="24" class="oe_kanban_avatar" t-att-data-member_id="follower"/>
                              </t>
                            </div>
                            <div class="oe_clear"></div>
                          </div>
                        </t> 
                    </templates>
                </kanban>
            </field>
        </record>
        
        <record model="ir.ui.view" id="experiment_form_view">
            <field name="name">experiment.form</field>
            <field name="model">website_version.experiment</field> 
            <field name="arch" type="xml">
                <form string="Experiment Form">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,running,done" clickable="True"/>
                    </header>
                    <sheet string="Exp">
                        <h1><field name="name"/></h1>
                        <group col="4">
                            <field name="website_id"/>
                        </group>
                        <notebook colspan="4">
                            <page string="Snapshots in experiment" colspan="4" >
                                <field name="experiment_snapshot_ids" colspan="4" context="{'website_id': website_id}">
                                    <tree string="PPP" editable="bottom"> 
                                        <field name="snapshot_id" domain="[('website_id','=',context.get('website_id'))]" colspan="4"/>
                                        <field name="frequency" colspan="4"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="experiment_tree_view">
            <field name="name">experiment.tree</field>
            <field name="model">website_version.experiment</field> 
            <field name="arch" type="xml">
                <tree string="Experiment tree">
                    <field name="name" />
                    <field name="state"/>
                    <field name="sequence" widget="handle"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="experiment_snapshot_form_view">
            <field name="name">experiment_snapshot.form</field>
            <field name="model">website_version.experiment_snapshot</field> 
            <field name="arch" type="xml">
                <form string="Experiment_page Form">
                    <notebook colspan="4">
                        <page string="Features" colspan="4" >
                            <field name="snapshot_id" domain="[('website_id','=',context.get('website_id'))]" colspan="4"/>
                            <field name="frequency"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
            
        <record id="action_snapshot" model="ir.actions.act_window">
            <field name="name">Versions</field>
            <field name="res_model">website_version.snapshot</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="snapshot_form_view">
            <field name="name">snapshot.form</field>
            <field name="model">website_version.snapshot</field> 
            <field name="arch" type="xml">
                <form string="Snapshot Form">
                    <group colspan="4">
                        <field name="name" colspan="4" />
                        <field name="website_id" colspan="4" />
                        <field name="create_date" colspan="4"/>
                    </group>
                    <group colspan="4">
                        <field name="view_ids" widget="handle" colspan="4"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="snapshot_tree_view">
            <field name="name">snapshot.tree</field>
            <field name="model">website_version.snapshot</field> 
            <field name="arch" type="xml">
                <tree string="Snapshot tree">
                    <field name="name" />
                    <field name="create_date" />
                </tree>
            </field>
        </record>

        <record id="action_website_view" model="ir.actions.act_window">
            <field name="name">Website Domain</field>
            <field name="res_model">website</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="website" id="website_menu" sequence="10" parent="base.marketing_menu" />
        <menuitem action="action_website_view" id="menu_website_view" parent="website_menu"/>
        <menuitem action="action_snapshot" id="menu_action_snapshot" parent="website_menu" groups="base.group_no_one"/>
        <menuitem action="action_experiment" id="menu_action_experiment" parent="website_menu"/>

    </data>
</openerp>
