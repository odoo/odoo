<?xml version='1.0' encoding='utf-8' ?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">ECPay Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form" />
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'ecpay')]}">
                    <field name="ecpay_merchant_id"
                           string="Merchant ID"
                           attrs="{'required': [('code', '=', 'ecpay'), ('state', '!=', 'disabled')]}"/>
                    <field name="ecpay_hash_key"
                           string="Secure Hash Secret"
                           attrs="{'required': [('code', '=', 'ecpay'), ('state', '!=', 'disabled')]}"
                           password="True"/>
                    <field name="ecpay_hash_iv"
                           string="Secure Hash IV"
                           attrs="{'required': [('code', '=', 'ecpay'), ('state', '!=', 'disabled')]}"
                           password="True"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
