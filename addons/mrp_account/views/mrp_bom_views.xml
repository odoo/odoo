<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_update_product_cost_from_bom" model="ir.actions.server">
        <field name="name">Update Product Cost from BoM</field>
        <field name="model_id" ref="mrp_account.model_mrp_bom"/>
        <field name="binding_model_id" ref="mrp_account.model_mrp_bom"/>
        <field name="binding_view_types">list,kanban</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                records.action_update_product_cost_from_bom()
        </field>
    </record>

    <record id="mrp_bom_tree_view" model="ir.ui.view">
        <field name="name">mrp.bom.view.tree.inherit.mrp.account</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="currency_id" column_invisible="True"/>
                <field name="unit_cost" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
