<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="assets_website_url">
            <script type="text/javascript" src="/website_url/static/src/js/website_url.js"/>
            <script type="text/javascript" src="/website_url/static/src/js/ZeroClipboard.min.js"/>
        </template>

        <template id="assets_nvd3">
            <link href="/web_graph/static/src/css/nv.d3.css" rel="stylesheet" type="text/css"></link>
            <script src="/web_graph/static/lib/nvd3/d3.v3.js"></script>
            <script src="/web_graph/static/lib/nvd3/nv.d3.js"></script>
        </template>

        <template id="create_shorten_url">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="text-center">URL Shortener</h2>
                        <h3 class="text-muted text-center">Get analytics with short URLs</h3>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Link to shorten</label>
                            <div class="input-group">
                                <input type="text" id="url" class="form-control input"  required="True" placeholder="e.g. http://www.odoo.com"/>

                                <span class="input-group-btn">
                                    <button class="btn btn-primary" data-clipboard-target="url" id="btn_shorten_url">Get short link</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Campaign</label>
                            <select class="form-control" id="campaign-select">
                                <option>No campaign attached</option>

                                <t t-foreach="campaigns" t-as="campaign">
                                    <option t-att-id="campaign.id"><t t-esc="campaign.name"/></option>
                                </t>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Channel</label>
                            <select class="form-control" id="channel-select">
                                <option>No channel attached</option>

                                <t t-foreach="channels" t-as="channel">
                                    <option t-att-id="channel.id"><t t-esc="channel.name"/></option>
                                </t>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Source</label>
                            <select class="form-control" id="source-select">
                                <option>No source attached</option>

                                <t t-foreach="sources" t-as="source">
                                    <option t-att-id="source.id"><t t-esc="source.name"/></option>
                                </t>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <h2>Recently used links</h2>
                    </div>
                </div>

                <div id="recent_links"></div>
            </div>
        </template>

        <template id="graphs">
            <t t-call="website.layout">
                <t t-set="head">
                    <t t-call-assets="website_url.assets_website_url"/>
                    <t t-call-assets="website_url.assets_nvd3"/>
                </t>
                <div class="container">
                <div class="row">
                <!-- Tabs -->
                <ul class="nav nav-tabs hidden-print">
                    <li class="active">
                        <a href="#all_chart" data-toggle="tab">All</a>
                    </li>
                    <li>
                        <a href="#hour_chart" data-toggle="tab">Last Hour</a>
                    </li>
                    <li>
                        <a href="#today_chart" data-toggle="tab">Today</a>
                    </li>
                    <li>
                        <a href="#week_chart" data-toggle="tab">Week</a>
                    </li>
                    <li>
                        <a href="#month_chart" data-toggle="tab">Month</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="all_chart">
                        <svg style="height:20em"></svg>
                    </div>
                    <div class="tab-pane" id="hour_chart">
                        <svg style="height:20em"></svg>
                    </div>
                    <div class="tab-pane" id="today_chart">
                        <svg style="height:20em"></svg>
                    </div>
                    <div class="tab-pane" id="week_chart">
                        <svg style="height:20em"></svg>
                    </div>
                    <div class="tab-pane" id="month_chart">
                        <svg style="height:20em"></svg>
                    </div>
                  </div>
                </div>
                <div class="row">
                <div id="pie_chart">
                    <svg style="height:20em"></svg>
                  </div>
                </div>
              </div>
            </t>
        </template>

        <template id="page_shorten_url">
            <t t-call="website.layout">
                <t t-set="head">
                    <t t-call-assets="website_url.assets_website_url"/>
                </t>
                <t t-call="website_url.create_shorten_url"/>
            </t>
        </template>

    </data>
</openerp>

