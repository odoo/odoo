<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.actions.act_window" id="action_view_click_statistics">
            <field name="name">Statistics of Clicks</field>
            <field name="res_model">website.alias.click</field>
            <field name="view_mode">graph</field>
            <field name="domain">[('alias_id', 'IN', ids)]</field>
        </record>

        <!-- Website alias views -->
        <record id="view_website_alias_form" model="ir.ui.view">
            <field name="name">website.alias.form</field>
            <field name="model">website.alias</field>
            <field name="arch" type="xml">
                <form string="Website Alias">
                    <sheet>
                        <div class="oe_button_box pull-right">
                            <button type="object" icon="fa-sign-out" name="action_visit_page"
                                string="Visit Page" class="oe_stat_button"/>

                            <button type="object" class="oe_stat_button" name="action_view_statistics" icon="fa-bar-chart">
                                <field name="count" string="Clicks" widget="statinfo"/>
                            </button>

                        </div>
                        <group>
                            <field name="title"/>
                            <field name="url"/>
                            <field name="short_url"/>
                            <!-- <field name="code" class="oe_read_only" /> -->
                        </group>

                        <group>
                            <field name="campaign_id"/>
                            <field name="medium_id"/>
                            <field name="source_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_website_alias_form_stats" model="ir.ui.view">
            <field name="name">website.alias.my.form</field>
            <field name="model">website.alias</field>
            <field name="arch" type="xml">
                <form string="Website Alias Graph">
                    <sheet>
                        <field name="alias_click_ids">
                            <graph>
                                <field name="alias_id"/>
                                <field name="ip"/>
                                <field name="country_id"/>
                            </graph>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_website_alias_stats">
            <field name="name">website.alias.form.graph.action</field>
            <field name="res_model">website.alias</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_website_alias_form_stats"/>
        </record>

        <record id="view_website_alias_tree" model="ir.ui.view">
            <field name="name">website.alias.tree</field>
            <field name="model">website.alias</field>
            <field name="arch" type="xml">
                <tree string="Website Alias">
                    <field name="create_date"/>
                    <field name="url"/>
                    <field name="short_url"/>
                    <field name="count"/>
                </tree>
            </field>
        </record>

        <record id="view_website_alias_graph" model="ir.ui.view" >
            <field name="name">website.alias.graph</field>
            <field name="model">website.alias</field>
            <field name="arch" type="xml">
                <graph string="Website Alias"  type="bar">
                    <field name="url" type="row"/>
                    <field name="count" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Action for website alias-->
        <record model="ir.actions.act_window" id="action_website_alias">
            <field name="name">Link Tracker</field>
            <field name="res_model">website.alias</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
        </record>

        <!-- Website alias click views -->
        <record id="view_website_alias_click_form" model="ir.ui.view">
            <field name="name">website.alias.click.form</field>
            <field name="model">website.alias.click</field>
            <field name="arch" type="xml">
                <form string="Website Alias Click">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="alias_id"/>
                            <field name="ip"/>
                            <field name="country_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_website_alias_click_tree" model="ir.ui.view">
            <field name="name">website.alias.click.tree</field>
            <field name="model">website.alias.click</field>
            <field name="arch" type="xml">
                <tree string="Website Alias Click">
                    <field name="alias_id"/>
                    <field name="ip"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="view_website_alias_click_graph" model="ir.ui.view" >
            <field name="name">website.alias.click.graph</field>
            <field name="model">website.alias.click</field>
            <field name="arch" type="xml">
                <graph string="Website Alias Click">
                    <field name="alias_id"/>
                    <field name="ip"/>
                    <field name="country_id"/>
                </graph>
            </field>
        </record>

        <!-- Action for website alias click-->
        <record model="ir.actions.act_window" id="action_website_alias_click">
            <field name="name">Tracked Links</field>
            <field name="res_model">website.alias.click</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph,tree,form</field>
        </record>

        <menuitem id="menu_url_shortener_main" name="Link Tracker" parent="base.marketing_menu"/>
        <menuitem id="menu_url_shortener_alias" name="Tracked Links" parent="menu_url_shortener_main" action="action_website_alias"/>
        <menuitem id="menu_url_shortener_click" name="Tracked Links" parent="base.marketing_reporting_menu" action="action_website_alias_click"/>
    </data>
</openerp>
