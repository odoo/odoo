<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="website_url.RecentLink">
        <div class="row mb16">
            <div class="col-sm-1 col-xs-2 text-center">
                <h4><t t-esc="widget.link_obj.count"/></h4>
                <p class="text-muted" style="margin-top: -5px;">clicks</p>
            </div>
            <div class="col-sm-7 col-xs-7">
                
                <h4>
                    <img t-att-src="widget.link_obj.icon_src"/> 
                    <t t-esc="widget.link_obj.title"/>
                </h4>
                <p class="text-muted" style="margin-top: -5px;">
                    <t t-esc="widget.link_obj.host"/>
                    <span class="label label-success"><t t-esc="widget.link_obj.campaign_id.name"/></span> 
                    <span class="label label-success"><t t-esc="widget.link_obj.medium_id.name"/></span>
                    <span class="label label-success"><t t-esc="widget.link_obj.source_id.name"/></span>
                </p>
            </div>

            <div class="col-sm-4 col-xs-2">
                <button class="btn btn-info btn_shorten_url_clipboard mt8" t-att-data-clipboard-text="widget.link_obj.short_url">Copy</button>
                <a t-att-href="widget.link_obj.stats_url" class="btn btn-warning mt8">Stats</a>
            </div>
        </div>
    </t>
</templates>