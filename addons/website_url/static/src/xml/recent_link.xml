<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="website_url.RecentLink">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row" style="margin-bottom: 20px;">
                    <div class="col-sm-1">
                        <h3><t t-esc="widget.link_obj.count"/>
                        <small>clicks</small></h3>
                    </div>
                    <div class="col-sm-7">
                        <h4><t t-esc="widget.link_obj.url"/> 
                        <small><span t-field="widget.link_obj.write_date" t-field-options='{"format": "d MMMM yyyy"}'/></small></h4>
                        <span class="label label-success"><t t-esc="widget.link_obj.campaign_id.name"/></span> 
                        <span class="label label-success"><t t-esc="widget.link_obj.medium_id.name"/></span>
                        <span class="label label-success"><t t-esc="widget.link_obj.source_id.name"/></span>
                        <a href="#">View stats</a> | 
                        <a class="archive" href="#">Archive</a>
                    </div>
                    <div class="col-sm-4">
                        <h2> </h2>
                        <!-- <button class="btn btn-primary">Copy to clipboard</button> -->
                        <button class="btn btn-primary btn_shorten_url_clipboard" t-att-data-clipboard-text="widget.link_obj.short_url">Copy link to clipboard</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>