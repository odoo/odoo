<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_orgnumber" model="ir.ui.view">
        <field name="name">res.partner.form.orgnumber</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                    <field name="orgnumber"
                    	attrs="{'invisible': [('is_company','=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="res_partner_orgnumber_search" model="ir.ui.view">
        <field name="name">res.partner.search.orgnumber</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
              <field name="name" position="after">
                <field name="orgnumber" filter_domain="['|','|',('display_name','ilike',self),('ref','=',self),('orgnumber','ilike',self)]"/>
              </field>
        </field>
    </record>
</odoo>