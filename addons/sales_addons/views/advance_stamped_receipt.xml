<?xml	version="1.0"?>
<openerp>
    <data>
	<!--	Action to open Advance Stamped receipt	-->
	<record id="action_sale_adv_stamp_receipt" model="ir.actions.act_window">
            <field name="name">Advance Stamped Receipt</field>
            <field name="res_model">sales.adv.stamp.receipt</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
	
	<!--    Menuitem for Advanced Stamped Receipt    -->
        <menuitem id="menu_sale_adv_receipt" 
            parent="sales_team.menu_sales"
	    name="Advance Stamped Receipt"
	    sequence="15"
	    action="action_sale_adv_stamp_receipt"/>

	<!--    Form View    -->
	<record	id="view_sale_adv_stamp_receipt_form" model="ir.ui.view">
	    <field name="name">sales.adv.stamp.receipt.form</field>
	    <field name="model">sales.adv.stamp.receipt</field>
	    <field name="arch" type="xml">
		<form string="Advance Stamped Receipt">
		    <group col="4">
			<field name="contact"/>
			<field name="fax"/>
			<field name="date"/>
			<field name="name"/>
			<field name="amount"/>
			<field name="bill_no"/>
			<field name="bill_date"/>
			<field name="product_id"/>
		    </group>
		</form>
	    </field>
	</record>

	<!--    Tree View    -->
	<record	id="view_sale_adv_stamp_receipt_tree" model="ir.ui.view">
	    <field name="name">sales.adv.stamp.receipt.tree</field>
	    <field name="model">sales.adv.stamp.receipt</field>
	    <field name="arch" type="xml">
		<tree string="Advance Stamped Receipt">
	            <field name="contact"/>
		    <field name="fax"/>
		    <field name="date"/>
		    <field name="name"/>
		    <field name="amount"/>
		    <field name="bill_no"/>
		    <field name="bill_date"/>
		    <field name="product_id"/>
		</tree>
	    </field>
	</record>

    </data>
</openerp>
    		

