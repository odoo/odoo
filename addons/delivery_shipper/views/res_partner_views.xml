<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_delivery_shipper" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.delivery.shipper</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='zip']" position="after">
                <field name="district_id" placeholder="District"/>
                <field name="area_id" placeholder="Area"/>
            </xpath>
        </field>
    </record>
</odoo>
