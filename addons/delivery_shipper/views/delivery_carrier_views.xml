<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">delivery.carrier.form.inherit.delivery.shipper</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='title']" position="after">
                <div colspan="2" class="alert alert-warning" invisible="delivery_type != 'shipper' or prod_environment" role="status">
                    <p class="mb-0">
                        <i class="fa fa-exclamation-triangle"/> In <b>Test Environment</b>, sandbox URL will be used and please 
                        provide the appropriate API key listed on the Shipper's sandbox dashboard
                    </p>
                </div>
            </xpath>
            <page name="destination" position="before">
                <page string="Shipper Configuration" name="shipper_configuration" invisible="delivery_type != 'shipper'">
                    <group>
                        <group string="Integration">
                            <field name="shipper_api_key" required="delivery_type == 'shipper'"/>
                            <field name="shipper_3pl_partner"/>
                            <field name="shipper_origin_address" context="{'show_address': 1}"/>
                        </group>
                        <group string="Options">
                            <field name="shipper_default_package_type_id" string="Default Package Type"/>
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
