<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- Daily cron: check active schedules and generate due reports -->
    <record id="ir_cron_report_scheduler" model="ir.cron">
        <field name="name">GPCB: Generate Scheduled Reports</field>
        <field name="model_id" ref="model_gpcb_report_schedule"/>
        <field name="state">code</field>
        <field name="code">model._cron_generate_reports()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
    </record>

</odoo>
