<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_report_so_pos_order_graph" model="ir.ui.view">
            <field name="name">report.so.pos.order.graph</field>
            <field name="model">report.so.pos.order</field>
            <field name="arch" type="xml">
                <graph string="Sale and Pos Analysis" type="pivot">
                    <field name="date" interval="day" type="row"/>
                    <field name="nbr" type="row"/>
                    <field name="total_discount" type="row"/>
                    <field name="product_qty" type="measure"/>
                    <field name="price_total" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="view_report_so_pos_order_search" model="ir.ui.view">
            <field name="name">report.so.pos.order.search</field>
            <field name="model">report.so.pos.order</field>
            <field name="arch" type="xml">
                <search string="Sale and Pos Analysis">
                    <field name="date"/>
                    <filter string="This Year" name="year" domain="[('date','&lt;=', time.strftime('%%Y-%%m-%%d')),('date','&gt;=',time.strftime('%%Y-01-01'))]" help="POS ordered created during current year"/>
                    <filter name="Quotations" domain="[('state','in',('draft','sent'))]"/>
                    <filter name="Sales" string="Sales" domain="[('state','not in',('draft','sent','cancel','invoiced'))]"/>
                    <filter string="Invoiced" domain="[('state','in',('invoiced','progress'))]"/>
                    <filter string="Not Invoiced" domain="[('state','in',('paid','manual'))]"/>
                    <separator/>
                    <filter string="Picked" domain="[('picked','=',True)]"/>
                    <separator/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="product_id"/>
                    <field name="warehouse_id"/>
                    <field name="categ_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Salesperson" name="User" context="{'group_by':'user_id'}"/>
                        <filter string="Customer" context="{'group_by':'partner_id'}"/>
                        <filter string="Sales Channel" context="{'group_by':'type'}"/>
                        <filter string="Product" context="{'group_by':'product_id'}"/>
                        <filter string="Product Category" name="Category" context="{'group_by':'categ_id'}"/>
                        <filter string="Warehouse" context="{'group_by': 'warehouse_id'}"/>
                        <filter string="Order Month" context="{'group_by':'date:month'}" help="Month of order date"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_report_so_pos_order_all" model="ir.actions.act_window">
            <field name="name">Orders Analysis</field>
            <field name="res_model">report.so.pos.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph</field>
            <field name="search_view_id" ref="view_report_so_pos_order_search"/>
            <field name="context">{'search_default_year':1, 'group_by':['type','product_id']}</field>
        </record>

        <menuitem action="action_report_so_pos_order_all" id="menu_report_so_pos_order_all" parent="menu_point_rep" sequence="4"/>
    </data>
</openerp>
