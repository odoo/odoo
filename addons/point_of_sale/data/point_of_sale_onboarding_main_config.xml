    </record>

    <function model="ir.model.data" name="_update_xmlids">
        <value model="base" eval="[{
                'xml_id': 'point_of_sale.payment_method',
                'record': obj().env.ref('point_of_sale.pos_config_main')._get_payment_method('cash'),
                'noupdate': True,
