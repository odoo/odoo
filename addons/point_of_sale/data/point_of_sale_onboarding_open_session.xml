<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Open Session -->

    <function model="ir.model.data" name="_update_xmlids">
        <value model="base" eval="[{
                'xml_id': 'point_of_sale.pos_open_session_1',
                'record': obj().env.ref('point_of_sale.pos_config_main').current_session_id,
                'noupdate': True,
                }]" />
    </function>

    <record id="pos_open_order_1" model="pos.order" forcecreate="False">
        <field name="session_id" ref="pos_open_session_1" />
        <field name="company_id" ref="base.main_company" />
        <field name="name">Shop/00001</field>
        <field name="state">draft</field>
        <field name="amount_total">0.90</field>
        <field name="amount_tax">0.0</field>
        <field name="amount_paid">0.0</field>
        <field name="amount_return">0.0</field>
        <field name="pos_reference">Order 00001-001-0000</field>
    </record>

    <record id="pos_orderline_1" model="pos.order.line" forcecreate="False">
        <field name="name">Orderline 1</field>
        <field name="product_id" ref="led_lamp" />
        <field name="price_subtotal">0.90</field>
        <field name="price_subtotal_incl">0.90</field>
        <field name="price_unit">0.90</field>
        <field name="order_id" ref="pos_open_order_1" />
        <field name="full_product_name">LED Lamp</field>
    </record>
</odoo>
