<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_make_invoice" model="ir.ui.view">
        <field name="name">Invoice Orders</field>
        <field name="model">pos.make.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice POS Orders">
                <group>
                    <field name="pos_order_ids" invisible="1"/>
                    <field name="count" invisible="count == 0"/>
                    <field name="consolidated_billing" invisible="count == 1"/>
                </group>
                <footer>
                    <button name="create_invoices" type="object"
                        id="create_invoice"
                        string="Create                                         "
                        class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
