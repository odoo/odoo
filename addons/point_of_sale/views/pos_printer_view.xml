<odoo>
    <record id="view_pos_printer_form" model="ir.ui.view">
        <field name="name">Printers</field>
        <field name="model">pos.printer</field>
        <field name="arch" type="xml">
            <form string="POS Printer">
                <sheet>
                    <div class="d-flex justify-content-between pb-3">
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" placeholder="e.g. Kitchen Printer" class="oe_inline"/></h1>
                        </div>
                        <widget name="point_of_sale_test_epos"/>
                    </div>
                    <group>
                        <group>
                            <field name="use_type" widget="radio" options="{'horizontal': True}" class="pb-1"/>
                            <field name="printer_type" widget="radio" options="{'horizontal': True}" class="pb-1" invisible="True" />  <!-- Invisble to be overrided -->
                            <field name="printer_ip" invisible="printer_type != 'epson_epos'" placeholder="10.100.50.87" required="printer_type == 'epson_epos'"/>
                            <field name="use_lna"/>
                            <field name="product_categories_ids" invisible="use_type != 'preparation'" widget="many2many_tags" required="use_type == 'preparation'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_printer_form" model="ir.actions.act_window">
        <field name="name">Printers</field>
        <field name="res_model">pos.printer</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new printer
            </p><p>
            Printers are typically used by restaurants and bars to print the
            orders at the kitchen/bar, the bills or the receipts for the customers.
            </p>
        </field>
    </record>

    <record id="view_pos_printer" model="ir.ui.view">
        <field name="name">Printers</field>
        <field name="model">pos.printer</field>
        <field name="arch" type="xml">
            <list string="Printers">
                <field name="name"/>
                <field name="use_type"/>
                <field name="printer_type"/>
            </list>
        </field>
    </record>
    <record model="ir.ui.view" id="view_pos_printer_kanban">
        <field name="name">pos.printer.kanban</field>
        <field name="model">pos.printer</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="1" sample="1">
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card p-2">
                            <div class="d-flex align-items-center mb-3">
                                <field name="name" class="fw-bold fs-4"/>
                                <field name="printer_ip" invisible="1"/>
                                <widget name="point_of_sale_test_epos" class="ms-auto"/>
                            </div>
                            <div class="row g-1">
                                <div class="col-4 fw-semibold text-dark">
                                    Use Type:
                                </div>
                                <div class="col-8 text-muted">
                                    <field name="use_type"/>
                                </div>
                                <div class="col-4 fw-semibold text-dark" invisible="printer_type != 'epson_epos'">
                                    Use LNA:
                                </div>
                                <div class="col-8 text-muted" invisible="printer_type != 'epson_epos'">
                                    <field name="use_lna"/>
                                </div>
                                <div class="col-4 fw-semibold text-dark" invisible="use_type != 'preparation'">
                                    Categories:
                                </div>
                                <div class="col-8" invisible="use_type != 'preparation'">
                                    <t t-if="record.product_categories_ids.raw_value.length">
                                        <field name="product_categories_ids" widget="many2many_tags" class="text-muted"/>
                                    </t>
                                    <t t-else="">
                                        <span class="text-muted">No Categories</span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <menuitem
        name="Printers"
        id="point_of_sale.menu_pos_printers"
        parent="point_of_sale.menu_point_config_product"
        action="action_pos_printer_form"
        sequence="3" />
</odoo>
