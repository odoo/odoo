<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_payment">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="order_id">
            <t t-call="report.internal_layout">
                <div class="page">
                    <h2>Today's Payments</h2>
                    <div class="row mt32 mb32">
                        <div class="col-xs-3">
                            <strong>Company</strong>:
                            <br/>
                            <span t-field="res_company.name"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Print date</strong>:
                            <br/>
                            <t t-esc="time.strftime('%Y-%m-%d')"/>
                        </div>
                    </div>
                    <table class="table table-condensed" t-if="pos_payments[order_id]">
                        <thead>
                            <tr>
                                <td>
                                    <strong>Product</strong>
                                </td>
                                <td class="text-center">
                                    <strong>Qty</strong>
                                </td>
                                <td class="text-center">
                                    <strong>Disc.(%)</strong>
                                </td>
                                <td class="text-right">
                                    <strong>Unit Price</strong>
                                </td>
                                <td class="text-right">
                                    <strong>Total</strong>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="pos_payments[order_id]['lines']" t-as="line">
                                <td>
                                    <t t-if="line['code']">
                                        <span t-esc="line['code']"/>
                                    </t>
                                    <t t-if="line['name']">
                                        <span t-esc="line['name']"/>
                                    </t>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line['qty']"/>
                                    <t t-if="line['uom']">
                                        <span t-esc="line['uom']"/>
                                    </t>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line['discount']"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line['price_unit']"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line['total']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row" t-if="pos_payments[order_id]['total']">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td>
                                        <strong>Net Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="pos_payments[order_id]['total']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>
