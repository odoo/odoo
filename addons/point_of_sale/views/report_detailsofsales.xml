<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_detailsofsales">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2>Details of Sales</h2>

                <div class="row mt32">
                    <div class="col-xs-3">
                        <strong>Company</strong>:<br/>
                        <span t-esc="res_company.name"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Users</strong>:<br/>
                        <span t-esc="user_names or 'All'"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Print Date</strong>:<br/>
                        <span t-esc="time.strftime('%Y-%m-%d')"/>
                    </div>
                </div>
                <div class="row mb32">
                    <div class="col-xs-3">
                        <strong>Start Period</strong>:<br/>
                        <span t-esc="pos_data['date_start']"/> 
                    </div>
                    <div class="col-xs-3">
                        <strong>End Period</strong>:<br/>
                        <span t-esc="pos_data['date_end']"/> 
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <th><strong>Date</strong></th>
                        <th><strong>Order</strong></th>
                        <th><strong>Product</strong></th>
                        <th class="text-right"><strong>Price</strong></th>
                        <th class="text-center"><strong>Qty</strong></th>
                        <th class="text-center"><strong>Disc(%)</strong></th>
                        <th class="text-center"><strong>Invoiced</strong></th>
                    </thead>
                    <tbody>
                        <tr t-foreach="pos_data['pos_lines']" t-as="line_ids">
                            <td>
                                <span t-esc="line_ids['date_order']"/>
                            </td>
                            <td>
                                <span t-esc="line_ids['pos_name']"/>
                            </td>
                            <td>
                                <t t-if="line_ids['code']">
                                    [<span t-esc="line_ids['code']"/>]
                                </t>
                                <span t-esc="line_ids['name']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="line_ids['price_unit']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-center">
                                <span t-esc="line_ids['qty']"/>
                                <span t-esc="line_ids['uom']"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="line_ids['discount']"/>
                            </td>
                            <td class="text-center">
                                <t t-if="line_ids['invoice']">
                                    <span t-esc="line_ids['invoice'].number or line_ids['invoice'] and 'Draft' or ''"/>
                                </t>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <table class="table table-condensed">
                    <tr t-if="pos_data['taxes']"><td colspan="2"><strong>Taxes</strong></td></tr>
                    <tr t-foreach="pos_data['taxes']" t-as="tax">
                        <td><span t-esc="tax['name']"/></td>
                        <td class="text-right">
                            <strong t-esc="tax['amount']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                        </td>
                    </tr>
                    <tr t-if="pos_data['payments']">
                        <td colspan="2"><strong>Payment</strong></td>
                    </tr>
                    <tr t-foreach="pos_data['payments'].keys()" t-as="name">
                        <td><span t-esc="name"/></td>
                        <td class="text-right">
                            <strong t-esc="pos_data['payments'][name]" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2"><strong>Summary</strong></td>
                    </tr>
                    <tr>
                        <td><strong>Qty of product</strong></td>
                        <td class="text-right">
                            <strong t-esc="pos_data['total_qty']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Total invoiced</strong></td>
                        <td class="text-right">
                            <strong t-esc="pos_data['total_invoice']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Total discount</strong></td>
                        <td class="text-right">
                            <strong t-esc="pos_data['total_discount']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Total paid</strong></td>
                        <td class="text-right">
                            <strong t-esc="pos_data['total']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                        </td>
                    </tr>
                </table>
            </div>
        </t>
    </t>
</template>
</odoo>