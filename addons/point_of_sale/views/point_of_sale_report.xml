                    <field name="date_order" widget="date"/>
                    <field name="qty"/>
                    <field name="amount"/>
                    <field name="user_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_report_sales_by_user_pos_month_tree" model="ir.ui.view">
        <field name="name">report.sales.by.user.pos.month.tree</field>
        <field name="model">report.sales.by.user.pos.month</field>
        <field name="arch" type="xml">
            <tree string="POS">
                <field name="date_order" widget="date"/>
                <field name="qty"/>
                <field name="amount"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record id="view_report_sales_by_user_pos_month_calendar" model="ir.ui.view">
        <field name="name">report.sales.by.user.pos.month.calendar</field>
        <field name="model">report.sales.by.user.pos.month</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <calendar color="user_id" date_start="date_order" string="POS Report">
                <field name="qty"/>
                <field name="amount" />
            </calendar>
        </field>
     </record>

    <record id="view_report_sales_by_user_pos_month_graph" model="ir.ui.view">
        <field name="name">report.sales.by.user.pos.month.graph</field>
        <field name="model">report.sales.by.user.pos.month</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <graph  type="bar" string="Sales by User">
                <field name="user_id" />
                <field name="amount"/>
            </graph>
        </field>
     </record>

     <record id="action_report_sales_by_user_pos_month" model="ir.actions.act_window">
        <field name="name">Sales by User Monthly</field>
        <field name="res_model">report.sales.by.user.pos.month</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,calendar,form,graph</field>
        <field name="domain">[('date_order','like',time.strftime('%Y-%m'))]</field>
    </record>
</odoo>
