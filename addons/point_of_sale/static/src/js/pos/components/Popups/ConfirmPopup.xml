<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.ConfirmPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup popup-confirm">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <main class="body">
                        <t t-esc=" props.body" />
                    </main>
                    <footer class="footer">
                        <div class="button confirm" t-on-click="props.respondWith(true)">
                            <t t-esc="props.confirmText" />
                        </div>
                        <div t-if="!props.hideCancel" class="button cancel" t-on-click="props.respondWith(false)">
                            <t t-esc="props.cancelText" />
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
