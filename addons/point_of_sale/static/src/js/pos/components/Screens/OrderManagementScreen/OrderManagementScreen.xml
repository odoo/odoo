<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.OrderManagementScreen" owl="1">
        <div class="order-management-screen screen">
            <div t-if="!env.isMobile" class="screen-full-width">
                <div class="leftpane">
                    <t t-set="_order" t-value="getActiveOrder()" />
                    <OrderDetails order="_order" />
                    <div class="pads">
                        <div class="control-buttons">
                            <InvoiceButton activeOrder="_order" />
                            <ReprintReceiptButton activeOrder="_order" />
                        </div>
                        <div class="subpads">
                            <ActionpadWidget client="selectedClient" />
                            <NumpadWidget />
                        </div>
                    </div>
                </div>
                <div class="rightpane">
                    <div class="flex-container">
                        <OrderManagementControlPanel />
                        <OrderList orders="env.model.orderFetcher.ordersToShow" />
                    </div>
                </div>
            </div>
            <MobileOrderManagementScreen t-else="" basicSearchBar="props.basicSearchBar" />
        </div>
    </t>

</templates>
