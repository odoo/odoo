<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.Dialog.header" t-inherit="web.Dialog.header" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_expand_button')]" position="attributes" >
            <attribute name="t-if">false</attribute>
        </xpath>
        <xpath expr="//h4[hasclass('modal-title')]" position="replace" >
        <!-- <div style="
            display: flex;
            flex-direction: column !important;
            align-items: start !important;
        "> -->
        <div class="d-flex flex-column align-items-start">
            <h4 class="modal-title text-break flex-grow-1" t-esc="props.title"/>
            <span class="sub-title" t-esc="props.subtitle"/>
        </div>
        </xpath>
    </t>
</templates>
