<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.CashMovePopup">
        <Dialog header="false" size="'sm'">
            <div class="input-amount d-flex mb-2">
                <div class="d-flex border">
                    <div class="col btn py-3 fw-bolder border-end" t-on-click="toggleSign">+/-</div>
                    <div class="input-group">
                        <Input tModel="[state, 'amount']"
                        icon="{type: 'string', value: pos.currency.symbol}"
                        iconOnLeftSide="pos.currency.position === 'before'"
                        isValid.bind="env.utils.isValidFloat"
                        autofocus="true"
                        getRef="(ref) => this.inputRef = ref"
                        noBorder="true"/>
                    </div>
                </div>
                <button class="icon fa fa-money fa-lg btn btn-secondary ms-1" t-on-click="openDetailsPopup" />
            </div>

            <div class="form-floating">
                <textarea class="form-control reason" placeholder="Leave a reason here" name="reason" id="reason" t-model="state.reason" style="height:100px;" />
                <label for="reason">Reason</label>
            </div>
            <t t-set-slot="footer">
                <button class="button confirm btn btn-lg lh-lg btn-primary"
                    t-on-click="confirm"
                    t-att-disabled="!env.utils.isValidFloat(state.amount) || !state.reason">
                    Confirm
                </button>
                <button class="button cancel btn btn-lg lh-lg btn-secondary" t-on-click="props.close">
                    Discard
                </button>
            </t>
        </Dialog>
    </t>

</templates>
