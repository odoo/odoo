<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.NumberPopup" owl="1">
        <div class="popup popup-number w-auto" t-att-class="{ 'popup-password': props.isPassword }" t-if="!isMobile()">
            <div class="modal-header drag-handle">
                <h4 class="modal-title title"><t t-esc="props.title" /></h4>
                <span t-if="props.subtitle" class="subtitle p-1"><t t-esc="props.subtitle"/></span>
            </div>
            <div class="input-symbol pt-3">
                <div class="popup-input value active form-control form-control-lg w-75 mx-auto">
                    <span class="input-value" t-att-class="{ 'highlight': state.toStartOver }"><t t-esc="inputBuffer"/></span>
                    <span t-if="props.inputSuffix"><t t-esc="props.inputSuffix" /></span>
                </div>
            </div>
            <div class="popup-numpad px-5 my-3">
                <!-- FIXME POSREF do we really need to hardcode all of these? -->                                             
                <div class="row">
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('1')">1</button>
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('2')">2</button>
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('3')">3</button>
                    <t t-if="!props.isPassword and props.cheap">
                        <button class="mode-button add btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('+1')">+1</button>
                    </t>
                    <t t-if="!props.isPassword and !props.cheap">
                        <button class="mode-button add btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('+10')">+10</button>
                    </t>
                </div>
                <div class="row">
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('4')">4</button>
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('5')">5</button>
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('6')">6</button>
                    <t t-if="!props.isPassword and props.cheap">
                        <button class="mode-button add btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('+2')">+2</button>
                    </t>
                    <t t-if="!props.isPassword and !props.cheap">
                        <button class="mode-button add btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('+20')">+20</button>
                    </t>
                </div>
                <div class="row">
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('7')">7</button>
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('8')">8</button>
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('9')">9</button>
                    <button t-if="!props.isPassword" class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('-')">-</button>
                </div>
                <div class="row">
                    <button class="col-3 input-button numpad-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('Delete')">C</button>
                    <button class="col-3 input-button number-char btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('0')">0</button>
                    <button t-if="!props.isPassword" class="col-3 input-button number-char dot btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput(decimalSeparator)">
                        <t t-esc="decimalSeparator" /></button>
                    <button class="col-3 input-button numpad-backspace btn btn-secondary p-0 rounded-circle m-1 fw-bolder" t-on-mousedown.prevent="() => this.sendInput('Backspace')">
                        <img style="pointer-events: none;"
                                src="/point_of_sale/static/src/img/backspace.png" width="24"
                                height="21" alt="Backspace" />
                    </button>
                </div>
            </div>
            <footer class="footer centered modal-footer justify-content-center">
                <button class="button confirm highlight btn btn-lg btn-primary" t-on-mousedown.prevent="confirm">
                        <span><t t-esc="props.confirmText" /></span>
                        <span t-if="props.getInputBufferReminder(state.buffer)" class="input-buffer-reminder small">
                            (<t t-esc="props.getInputBufferReminder(state.buffer)" />)
                        </span>
                </button>
                <button class="button cancel btn btn-lg btn-secondary" t-on-mousedown.prevent="cancel">
                    <t t-esc="props.cancelText" />
                </button>
            </footer>
        </div>
        <div class="popup" t-att-class="{ 'popup-password': props.isPassword }" t-else="">
            <header class="title drag-handle">
                <t t-esc="props.title" />
            </header>
            <main>
                <input type="text" t-model="state.payload" t-ref="input" class="value payment-input-number" inputmode="decimal">
            </main>
            <footer class="footer centered modal-footer">
                <button class="button confirm highlight btn btn-lg btn-primary" t-on-mousedown.prevent="confirm">
                    <t t-esc="props.confirmText" />
                </button>
                <button class="button cancel btn btn-lg btn-secondary" t-on-mousedown.prevent="cancel">
                    <t t-esc="props.cancelText" />
                </button>
            </footer>
        </div>
    </t>

</templates>
