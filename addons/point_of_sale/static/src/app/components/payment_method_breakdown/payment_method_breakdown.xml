<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.PaymentMethodBreakdown">
        <AccordionItem disabled="props.transactions.length === 0">
            <t t-set-slot="header">
                <div class="name-amount d-flex justify-content-between w-100">
                    <span t-out="props.title"/>
                    <span>
                        <span class="cash-sign me-1" t-out="props.total_amount &lt; 0 ? '-' : '+'" />
                        <t t-out="env.utils.formatCurrency(Math.abs(props.total_amount))"/>
                    </span>
                </div>
            </t>
            <t t-set-slot="content">
                <div class="border-start small text-muted d-flex flex-column ps-2 ms-1">
                    <div t-foreach="props.transactions" t-as="payment" t-key="payment.id" class="d-flex justify-content-between">
                        <span t-out="payment.name"/>
                        <span>
                            <span class="cash-sign me-1" t-out="payment.amount &lt; 0 ? '-' : '+'" />
                            <t t-out="env.utils.formatCurrency(Math.abs(payment.amount))"/>
                        </span>
                    </div>
                </div>
            </t>
        </AccordionItem>
    </t>
</templates>
