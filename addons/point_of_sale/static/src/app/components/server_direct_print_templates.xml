<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.ServerDirectPrintLayout">
        <PrintRequestInfo Version="3.00">
            <!-- multiple receipts can be printed at the same time by adding multiple <ePOSPrint> sections -->
            <ePOSPrint>
                <Parameter>
                    <!-- "devid" should match the Device ID set in its TM-i Settings - Device Admin - Printer - Device ID -->
                    <devid>local_printer</devid>
                    <timeout>20000</timeout>
                    <!-- the unique job id goes below -->
                    <printjobid></printjobid>
                </Parameter>
                <PrintData>
                    <epos-print xmlns="http://www.epson-pos.com/schemas/2011/03/epos-print">
                        <!-- the receipt goes here as <image width=x height=y align=center> image data </image> -->
                    </epos-print>
                </PrintData>
            </ePOSPrint>
        </PrintRequestInfo>
    </t>
</templates>
