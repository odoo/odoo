<templates>
    <t t-name="point_of_sale.Loader">
        <div class="pos-loader" t-att-style="this.props.loader.isShown ? '' : 'opacity: 0'">
            <CriticalPOSError t-if="this.props.loader.error" error="this.props.loader.error"/>
            <div class="loader-feedback">
                <!-- spinner from https://loading.io/css/ -->
                <div t-if="!this.props.loader.error" class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
            </div>
        </div>
    </t>
</templates>
