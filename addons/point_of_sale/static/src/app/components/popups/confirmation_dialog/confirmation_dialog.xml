<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="point_of_sale.ConfirmationDialog" t-inherit="web.ConfirmationDialog" t-inherit-mode="extension">
    <xpath expr="//Dialog" position="attributes">
      <attribute name="contentClass">'o_confirmation_dialog ' + (props.contentClass || '')</attribute>
    </xpath>
    <xpath expr="//t[@t-set-slot='footer']" position="inside">
      <button t-if="this.props.showReloadButton" class="btn btn-secondary" t-on-click="this._reloadData">
        Reload Data
      </button>
    </xpath>
  </t>
  <t t-name="point_of_sale.AlertDialog" t-inherit="web.AlertDialog" t-inherit-mode="extension">
    <xpath expr="//Dialog" position="attributes">
      <attribute name="size">'md'</attribute>
      <attribute name="contentClass">'o_alert_dialog ' + (props.contentClass || '')</attribute>
    </xpath>
    <xpath expr="//t[@t-set-slot='footer']" position="inside">
      <button t-if="this.props.showReloadButton" class="btn btn-secondary" t-on-click="this._reloadData">
        Reload Data
      </button>
    </xpath>
  </t>
</templates>
