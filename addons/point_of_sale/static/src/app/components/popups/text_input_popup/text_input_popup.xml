<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.TextInputPopup">
        <Dialog size="this.props.size" title="this.props.title">
            <t t-foreach="this.props.buttons" t-as="button" t-key="button_index" id="buttons">
                <button t-on-click="() => this.buttonClick(button)"
                    type="button"
                    class="btn me-2 mb-2 toggle-button "
                    t-attf-class="{{button.class || 'btn-secondary'}}">
                    <t t-esc="button.label"/>
                </button>
            </t>
            <textarea t-att-rows="this.props.rows" class="form-control form-control-lg mx-auto" type="text" t-model="this.state.inputValue" t-ref="input" t-att-placeholder="this.props.placeholder" t-on-keydown="this.onKeydown" />
            <t t-set-slot="footer">
                <button class="btn btn-primary btn-lg lh-lg" t-on-click="this.confirm">Apply</button>
                <button class="btn btn-secondary btn-lg lh-lg" t-on-click="this.close">Discard</button>
            </t>
        </Dialog>
    </t>

</templates>
