<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.CategorySelector">
        <div t-attf-class="{{props.class}}">
            <t t-foreach="props.categories" t-as="category" t-key="category.id">
                <button t-on-click="() => props.onClick(category.id)" t-attf-class="o_colorlist_item_color_{{!category.isSelected and !category.isChildren ? 'transparent_': ''}}{{category.color or 'none'}} {{!category.isSelected ? 'border-0': ''}}" class="category-button col btn btn-light align-items-stretch" t-att-style="`${category.isSelected ? ' border-color: #714b67;' : '' };`">
                    <img t-if="category.imgSrc" t-att-src="category.imgSrc" style="height: 3rem;" alt="Category" />
                    <span t-if="category.name" class="text-wrap-categ text-center fs-5"  t-esc="category.name" />
                </button>
            </t>
        </div>
    </t>
</templates>
