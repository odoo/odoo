<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.TipCell">
        <div class="tip-cell" t-on-click.stop="this.editTip">
            <t t-if="this.state.isEditing">
                <input type="text" name="tip-amount" t-ref="autofocus" t-model="this.orderUiState.inputTipAmount" t-on-blur="this.onBlur" t-on-keydown="this.onKeydown" />
            </t>
            <div t-else="">
                <t t-esc="this.tipAmountStr"></t>
            </div>
        </div>
    </t>

</templates>
