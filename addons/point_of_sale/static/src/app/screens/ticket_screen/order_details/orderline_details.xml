<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.OrderlineDetails">
        <li class="orderline w-100 m-0 py-2 px-3 lh-sm cursor-pointer" 
            t-on-click="() => this.props.onClickOrderline(props.line)" 
            t-att-class="{ 
                            'selected': props.isSelected,
                            'ps-3': this.props.line.isPartOfCombo()
                        }">
            <span class="product-name d-inline-block flex-grow-1 fw-bolder text-truncate">
                <t t-esc="productName" />
            </span>
            <span class="price fw-bolder float-end">
                <t t-esc="totalPrice" />
            </span>
            <ul class="info-list">
                <li class="info ms-2">
                    <strong>
                        <t t-esc="quantity" />
                    </strong>
                    <span><t t-esc="pricePerUnit" /></span>
                </li>
                <t t-if="customerNote">
                    <li class="info orderline-note p-2 my-1 rounded text-bg-warning text-warning bg-opacity-25 text-break">
                        <i class="fa fa-sticky-note me-1" role="img" aria-label="Customer Note" title="Customer Note"/>
                        <t t-esc="customerNote" />
                    </li>
                </t>
                <t t-if="props.line.comboParent" t-call="point_of_sale.ComboParentName"/>
                <t t-if="hasRefundedQty()">
                    <li class="info refund-note mt-1">
                        <strong>
                            <t t-esc="getFormattedRefundedQty()" />
                        </strong>
                        <span> Refunded</span>
                    </li>
                </t>
                <t t-if="hasToRefundQty()">
                    <li class="info to-refund-highlight refund-note mt-1 fw-bold text-primary">
                        <t t-set="_destinationOrderUid" t-value="getToRefundDetail().destinationOrderUid"/>
                        <t t-if="_destinationOrderUid">
                            <t t-esc="getRefundingMessage()" />
                            <span t-esc="_destinationOrderUid" class="order-link text-decoration-underline cursor-pointer" t-on-click.stop="() => this.props.onClickRefundOrderUid(_destinationOrderUid)" />
                        </t>
                        <t t-else="">
                            <t t-esc="getToRefundMessage()" />
                        </t>
                    </li>
                </t>
            </ul>
        </li>
    </t>

</templates>
