<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.PartnerList">
        <Dialog bodyClass="'partner-list overflow-y-auto p-0'" contentClass="'h-100'">
            <t t-set-slot="header">
                <button t-if="!ui.isSmall and this.pos.cashier._role !== 'minimal'" class="btn btn-primary btn-lg lh-lg me-2" role="img" aria-label="Add a customer"
                        t-on-click="() => this.editPartner()"
                        title="Add a customer">
                Create 
                </button>
                <span class="modal-title fs-4">Choose customer</span>
                <Input tModel="[state, 'query']"
                    class="'ms-auto'"
                    isSmall="ui.isSmall"
                    placeholder.translate="Search Customers..."
                    icon="{type: 'fa', value: 'fa-search'}"
                    autofocus="true"
                    debounceMillis="100" />
            </t>
            <table class="table table-hover">
                <tbody>
                    <t t-foreach="getPartners()" t-as="partner" t-key="partner.id">
                        <PartnerLine
                                close="props.close"
                                partner="partner"
                                isSelected="props.partner?.id === partner.id"
                                isBalanceDisplayed="isBalanceDisplayed"
                                onClickEdit.bind="(p) => this.editPartner(p)"
                                onClickUnselect.bind="() => this.clickPartner()"
                                onClickOrders.bind="(p) => this.goToOrders(p)"
                                onClickPartner.bind="clickPartner"/>
                    </t>
                </tbody>
            </table>
            <div t-if="state.query" class="search-more-button d-flex justify-content-center my-2">
                <button class="btn btn-lg btn-primary" t-on-click="onEnter">Search more</button>
            </div>
            <t t-set-slot="footer">
                <div class="d-flex flex-row gap-2 w-100">
                    <button t-if="ui.isSmall and this.pos.cashier._role !== 'minimal'" class="btn btn-primary btn-lg lh-lg w-50" role="img" aria-label="Add a customer"
                        t-on-click="() => this.editPartner()"
                        title="Add a customer">
                    New 
                    </button>
                    <button class="btn btn-secondary btn-lg lh-lg o-default-button w-50" t-on-click="() => this.clickPartner(this.props.partner)">Discard</button>
                </div>
            </t>
        </Dialog>
    </t>

</templates>
