<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.OrderSummary">
        <div class="summary clearfix w-100 py-2 px-3 bg-200 bg-opacity-50 text-end fw-bolder">
            <t t-set="_total" t-value="getTotal()" />
            <t t-set="_tax" t-value="getTax()" />
            <div class="line">
                <div class="entry total fs-2 lh-sm">
                    Total:
                    <span class="value">
                        <t t-esc="_total" />
                    </span>
                    <div t-if="_tax.hasTax" class="subentry fs-6 text-muted">
                        Taxes:
                        <span class="value">
                            <t t-esc="_tax.displayAmount" />
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
