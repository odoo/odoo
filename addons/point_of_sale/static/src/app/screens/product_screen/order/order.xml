<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.OrderWidget">
        <div class="order-container w-100 h-100 overflow-y-auto bg-view" t-ref="scrollable">
            <div class="order d-flex flex-column h-100 text-start">
                <t t-if="orderlinesArray.length === 0" >
                    <div class="order-empty d-flex flex-column align-items-center justify-content-center h-100 bg-100 text-muted">
                        <i class="fa fa-4x fa-shopping-cart" role="img" aria-label="Shopping cart"
                           title="Shopping cart"/>
                        <h3 class="mt-2">This order is empty</h3>
                    </div>
                </t>
                <t t-else="">
                    <ul class="orderlines flex-grow-1 overflow-auto">
                        <t t-foreach="orderlinesArray" t-as="orderline" t-key="orderline.id">
                            <Orderline
                                editPackLotLines.bind="editPackLotLines"
                                selectLine.bind="selectLine"
                                line="orderline" />
                        </t>
                    </ul>
                    <OrderSummary order="order" />
                </t>
            </div>
        </div>
    </t>

</templates>
