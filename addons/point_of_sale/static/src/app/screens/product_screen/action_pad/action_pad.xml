<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.ActionpadWidget">
        <div class="actionpad d-flex flex-column" t-att-class="{'gap-2': this.showFastPaymentMethods || this.ui.isSmall}">
            <div t-if="this.ui.isSmall" class="d-flex gap-2">
                <BackButton t-if="!this.props.showActionButton and this.pos.showBackButton()" onClick="() => this.pos.onClickBackButton()"/>
                <t t-if="this.props.onClickMore">
                    <SelectPartnerButton partner="this.props.partner"/>
                    <button t-if="this.pos.config.use_presets and this.currentOrder"
                        class="btn btn-secondary btn-lg flex-shrink-0 border-0"
                        t-attf-class="{{`o_colorlist_item_color_${currentOrder.preset_id?.color}`}}"
                        t-on-click="() => this.pos.selectPreset()">
                        <span t-if="this.currentOrder.preset_id?.name" t-esc="this.currentOrder.preset_id?.name" />
                        <span t-else="">Preset</span>
                    </button>
                    <button class="button mobile-more-button btn btn-secondary btn-lg ms-auto" t-on-click="this.props.onClickMore">
                        <i class="oi oi-fw oi-ellipsis-v" aria-hidden="true" />
                    </button>
                </t>
            </div>
            <t t-if="this.props.showActionButton">
                <div class="mw-100 container validation" t-att-class="{'p-0': !this.showFastPaymentMethods}">
                    <div class="gap-2" t-attf-class="{{this.showFastPaymentMethods ? 'row' : 'd-flex'}}">
                        <BackButton t-if="this.pos.showBackButton() and !this.pos.config.module_pos_restaurant" class="{'col-3': this.showFastPaymentMethods}" onClick="() => this.pos.onClickBackButton()"/>
                        <button class="pay pay-order-button button btn btn-primary btn-lg py-3 d-flex align-items-center justify-content-center flex-fill"
                            t-att-class="{'col-3': this.showFastPaymentMethods}" t-on-click="this.props.actionToTrigger" t-out="this.props.actionName" />
                        <t t-if="this.showFastPaymentMethods" t-foreach="this.pos.config.fast_payment_method_ids" t-as="paymentMethod" t-key="paymentMethod.id">
                            <button class="fast-pay-button col-3 button btn btn-secondary btn-lg py-3 d-flex align-items-center justify-content-center flex-fill"
                                t-on-click="() => this.props.fastValidate(paymentMethod)"
                                t-out="paymentMethod.name"
                            />
                        </t>
                    </div>
                </div>
            </t>
        </div>
    </t>

</templates>
