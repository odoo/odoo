<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.CategoryButton">
        <button class="category-button btn btn-light" t-on-click="() => this.props.switchCategory(props.category.id)">
            <div class="category-img">
                <img t-att-src="imageUrl" alt="Category" />
            </div>
            <div class="category-name mt-2 fw-bolder">
                <t t-esc="props.category.name" />
            </div>
        </button>
    </t>

</templates>
