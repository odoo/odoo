<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.ControlButtonPopup">
        <Dialog bodyClass="'d-flex flex-column'" footer="false" title="''">
            <!-- When one of the buttons is clicked, close this popup. -->
            <div class="control-buttons d-flex flex-column p-2" t-on-click="props.close">
                <t t-foreach="props.controlButtons" t-as="cb" t-key="cb.name">
                    <t t-component="cb.component" t-key="cb.name"/>
                </t>
            </div>
        </Dialog>
    </t>
</templates>
