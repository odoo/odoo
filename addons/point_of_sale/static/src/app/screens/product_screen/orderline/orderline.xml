<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.Orderline">
        <li t-on-click="selectLine" class="orderline w-100 m-0 py-2 px-3 lh-sm cursor-pointer transition-base" t-att-class="addedClasses">
            <span class="product-name d-inline-block flex-grow-1 fw-bolder text-truncate">
                <t t-esc="props.line.get_full_product_name()"/>
                <t t-if="props.line.get_product().tracking!=='none' and (pos.picking_type.use_create_lots || pos.picking_type.use_existing_lots)">
                    <t t-if="props.line.has_valid_product_lot()">
                        <i  t-on-click.stop="lotIconClicked"
                            class="oe_link_icon fa fa-list oe_icon line-lot-icon ms-1 text-success"
                            aria-label="Valid product lot"
                            role="img"
                            title="Valid product lot"
                        />
                    </t>
                    <t t-else="">
                        <i  t-on-click.stop="lotIconClicked"
                            class="oe_link_icon fa fa-list oe_icon line-lot-icon ms-1 text-danger"
                            aria-label="Invalid product lot"
                            role="img"
                            title="Invalid product lot"
                        />
                    </t>
                </t>
            </span>
            <span class="price fw-bolder float-end">
                <t t-esc="env.utils.formatCurrency(props.line.get_display_price())"/>
            </span>
            <ul class="info-list text-dark">
                <t t-if="props.line.get_quantity_str() !== '1' || props.line.selected ">
                    <li class="info ms-2">
                        <em class="fst-normal fw-bolder">
                            <t t-esc="props.line.get_quantity_str()" />
                        </em>
                        <span> </span><t t-esc="props.line.get_unit().name" />
                        at
                        <t t-if="props.line.display_discount_policy() == 'without_discount' and
                            env.utils.roundCurrency(props.line.get_unit_display_price()) lt env.utils.roundCurrency(props.line.get_taxed_lst_unit_price())">
                            <s>
                                <t t-esc="env.utils.formatCurrency(props.line.get_taxed_lst_unit_price())" />
                            </s>
                            <t t-esc="env.utils.formatCurrency(props.line.get_unit_display_price())" />
                        </t>
                        <t t-else="">
                            <t t-esc="env.utils.formatCurrency(props.line.get_unit_display_price())" />
                        </t>
                        /
                        <t t-esc="props.line.get_unit().name" />
                    </li>
                </t>
                <t t-if="props.line.get_discount_str() !== '0'">
                    <li class="info ms-2">
                        With a
                        <em>
                            <t t-esc="props.line.get_discount_str()" />%
                        </em>
                        discount
                    </li>
                </t>
                <t t-if="customerNote">
                    <li class="info orderline-note p-2 my-1 rounded text-bg-warning text-warning bg-opacity-25 text-break">
                        <i class="fa fa-sticky-note me-1" role="img" aria-label="Customer Note" title="Customer Note"/>
                        <t t-esc="customerNote" />
                    </li>
                </t>
                <t t-if="props.line.comboParent" t-call="point_of_sale.ComboParentName"/>
            </ul>
            <t t-if="props.line.pack_lot_lines">
                <ul class="info-list ms-2">
                    <t t-foreach="props.line.get_lot_lines()" t-as="lot" t-key="lot.cid">
                        <li>
                            SN <t t-esc="lot.lot_name"/>
                        </li>
                    </t>
                </ul>
            </t>
        </li>
    </t>

    <t t-name="point_of_sale.ComboParentName" owl="1">
        <li class="info ms-2 combo-parent-name">
            <i class="fa fa-th-large me-2" role="img" aria-label="Combo" title="Combo"/>
            <t t-esc="props.line.comboParent.get_full_product_name()" />
        </li>
    </t>
</templates>
