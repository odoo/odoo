<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.SelectionPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup popup-selection">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <div class="selection scrollable-y">
                        <t t-foreach="props.list" t-as="item" t-key="item.id">
                            <div class="selection-item" t-att-class="{ selected: item.isSelected }"
                                t-on-click="props.respondWith([true, item])">
                                <t t-esc="item.label" />
                            </div>
                        </t>
                    </div>
                    <footer class="footer">
                        <div class="button cancel" t-on-click="props.respondWith([false])">
                            <t t-esc="props.cancelText" />
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
