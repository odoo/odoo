<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.ErrorBarcodePopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup popup-barcode">
                    <header class="title drag-handle">
                        <span>Unknown Barcode</span>
                        <br />
                        <span class="barcode">
                            <t t-esc="props.code" />
                        </span>
                    </header>
                    <main class="body">
                        <t t-esc="errorMessage" />
                    </main>
                    <footer class="footer">
                        <div class="button cancel" t-on-click="props.respondWith(true)">
                            Ok
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
