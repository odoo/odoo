<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderWidget" owl="1">
        <div class="order-container">
            <div t-ref="scrollable" class="order-scroller touch-scrollable">
                <div class="order">
                    <t t-if="orderlinesArray.length === 0" >
                        <div class='order-empty'>
                            <i class='fa fa-shopping-cart' role="img" aria-label="Shopping cart" title="Shopping cart"/>
                            <h1>Your shopping cart is empty</h1>
                        </div>
                    </t>
                    <t t-else="">
                        <ul class="orderlines">
                            <t t-foreach="orderlinesArray" t-as="orderline">
                                <Orderline
                                    line="orderline"
                                    pos="pos"
                                    t-key="orderline.id"
                                    t-on-select-line="selectLine"
                                    t-on-show-product-lot="showProductLot"
                                />
                            </t>
                        </ul>
                        <OrderSummary order="order" pos="pos" />
                    </t>
                </div>
            </div>
        </div>
    </t>

</templates>