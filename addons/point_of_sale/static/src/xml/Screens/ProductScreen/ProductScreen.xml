<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductScreen" owl="1">
        <div class="product-screen screen" t-att-class="{ oe_hidden: !props.isShown }">
            <div class="leftpane">
                <div class="window">
                    <div class="subwindow">
                        <div class="subwindow-container">
                            <div class="subwindow-container-fix">
                                <OrderWidget order="currentOrder" />
                            </div>
                        </div>
                    </div>

                    <div class="subwindow collapsed">
                        <div class="subwindow-container">
                            <div class="subwindow-container-fix pads">
                                <div class="control-buttons">
                                    <t t-foreach="controlButtons" t-as="cb" t-key="cb.name">
                                        <t t-component="cb.component" t-key="cb.name" />
                                    </t>
                                </div>
                                <ActionpadWidget />
                                <NumpadWidget />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="rightpane">
                <ProductsWidget t-on-click-product="clickProduct" selectedCategoryId="props.selectedCategoryId" />
            </div>
        </div>
    </t>

</templates>
