<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="point_of_sale.company_info_receipt">
            <table class="w-100 text-small mt-2">
                <tbody name="company_info">
                    <tr>
                        <td class="text-start" t-out="company['name']" />
                        <td t-if="config.get('phone')" class="text-end">
                            Tel. <t t-out="config['phone']" />
                        </td>
                    </tr>
                    <tr>
                        <td t-if="config.get('address')" class="text-start" t-out="config['receipt_address']" />
                    </tr>
                    <tr>
                        <td t-if="config.get('email')" class="text-start" t-out="config['email']">
                        </td>
                        <td t-if="config.get('website')" class="text-end" t-out="config['website']" />
                    </tr>
                    <tr>
                        <td class="text-start" t-out="company['name']" />
                        <td t-if="company.get('phone')" class="text-end">
                            Tel. <t t-out="company['phone']" />
                        </td>
                    </tr>
                    <tr>
                        <td class="text-start" t-if="company.get('vat') and extra_data.get('vat_label')" name="company_info_vat">
                            <t t-out="extra_data['vat_label']" />: <t t-out="company['vat']" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </template>

