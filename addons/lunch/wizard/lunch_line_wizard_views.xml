<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

        <record id="view_lunch_order_line_temp" model="ir.ui.view">
              <field name="name">view.lunch.order.line.temp</field>
              <field name="model">lunch.order.line.temp</field>
              <field name="arch" type="xml">
                <form>
                    <field name="currency_id" invisible="1"/>
                    <field name="quantity" invisible="1"/>
                    <field name="product_id" invisible="1"/>
                    <field name="product_category" invisible="1"/>
                    <h2 class="d-flex">
                        <div class="flex-grow-1 pr-5"><field name="product_name"/></div>
                        <div class="flex-grow-0"><field name="price_total" widget="monetary"/></div>
                    </h2>
                    <group>
                        <field name="available_toppings" invisible="1"/>
                        <field name="topping_ids" attrs="{'invisible': [('available_toppings', '=', False)]}" widget="many2many_checkboxes"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                    <footer>
                        <button name="add_to_cart" string="Add To Cart"  type="object" class="oe_highlight"/>
                        <button string="Discard" special="cancel"/>
                    </footer>
                </form>
              </field>
        </record>

</data>
</odoo>
