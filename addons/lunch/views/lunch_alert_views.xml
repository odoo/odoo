<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lunch_alert_view_search" model="ir.ui.view">
        <field name="name">lunch.alert.search</field>
        <field name="model">lunch.alert</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="message"/>
                <filter name="inactive" string="Currently inactive" domain="[('available_today','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="lunch_alert_view_tree" model="ir.ui.view">
        <field name="name">lunch.alert.tree</field>
        <field name="model">lunch.alert</field>
        <field name="arch" type="xml">
            <tree>
                <field name="message"/>
                <field name="recurrency"/>
                <field name='recurrency_from' widget='float_time'/>
                <field name='recurrency_to' widget='float_time'/>
            </tree>
        </field>
    </record>

    <record id="lunch_alert_view_form" model="ir.ui.view">
        <field name="name">lunch.alert.form</field>
        <field name="model">lunch.alert</field>
        <field name="arch" type="xml">
            <form string="alert form">
                <sheet>
                    <group>
                        <field name="recurrency"/>
                        <field name="recurrency_date" attrs="{'invisible': [('recurrency', '!=', 'once')]}"/>
                        <field name="recurrency_monday" attrs="{'invisible': [('recurrency', '!=', 'reccurent')]}"/>
                        <field name="recurrency_tuesday" attrs="{'invisible': [('recurrency', '!=', 'reccurent')]}"/>
                        <field name="recurrency_wednesday" attrs="{'invisible': [('recurrency', '!=', 'reccurent')]}"/>
                        <field name="recurrency_thursday" attrs="{'invisible': [('recurrency', '!=', 'reccurent')]}"/>
                        <field name="recurrency_friday" attrs="{'invisible': [('recurrency', '!=', 'reccurent')]}"/>
                        <field name="recurrency_saturday" attrs="{'invisible': [('recurrency', '!=', 'reccurent')]}"/>
                        <field name="recurrency_sunday" attrs="{'invisible': [('recurrency', '!=', 'reccurent')]}"/>
                        <field name="recurrency_from" widget="float_time"/>
                        <field name="recurrency_to" widget="float_time"/>
                    </group>
                    <label for='message'/>
                    <field name="message"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lunch_alert_action" model="ir.actions.act_window">
        <field name="name">Lunch Alerts</field>
        <field name="res_model">lunch.alert</field>
        <field name="search_view_id" ref="lunch_alert_view_search"/>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="lunch_alert_view_tree"/>
    </record>
</odoo>
