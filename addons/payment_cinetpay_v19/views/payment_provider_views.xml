<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form_cinetpay" model="ir.ui.view">
        <field name="name">CinetPay Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="before">
                <div name="cinetpay_onboarding_group" invisible="code != 'cinetpay' or cinetpay_site_id or cinetpay_apikey">
                    <button string="Connecter CinetPay" type="object" name="action_start_cinetpay_onboarding" class="btn-primary" colspan="2" invisible="state == 'enabled'"/>
                </div>
            </group>
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'cinetpay'" name="cinetpay_credentials">
                    <field name="cinetpay_site_id" required="code == 'cinetpay' and state != 'disabled'"/>
                    <field name="cinetpay_apikey" required="code == 'cinetpay' and state != 'disabled'" password="True"/>
                </group>
                <div name="cinetpay_keys_link" invisible="code != 'cinetpay' or (cinetpay_site_id and cinetpay_apikey)">
                    <a class="btn btn-link" role="button" href="https://www.cinetpay.com/" target="_blank">
                        Obtenir vos identifiants CinetPay
                    </a>
                </div>
            </group>
        </field>
    </record>

</odoo>