                model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_intracommunity"/>
            <field name="tax_src_id" ref="sales_vat24_goods"/>
            <field name="tax_dest_id" ref="sales_vat_ic_goods"/>
