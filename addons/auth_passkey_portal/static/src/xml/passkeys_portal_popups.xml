<templates>
    <t t-name="auth_passkey_portal.create">
        <form string="Key Create">
            <div class="form-floating mb-2">
                <input type="text" class="form-control" name="keyname" required="required" placeholder="Passkey Name" id="portal_passkey_name"/>
                <label for="portal_passkey_name">Passkey Name</label>
            </div>
        </form>
    </t>
    <t t-name="auth_passkey_portal.rename">
        <form string="Key Rename">
            <div class="form-floating mb-2">
                <input type="text" class="form-control" name="keyname" required="required" t-attf-value="{{oldname}}" t-attf-placeholder="{{oldname}}" id="portal_passkey_rename"/>
                <label for="portal_passkey_rename">Passkey new name</label>
            </div>
        </form>
    </t>
</templates>
