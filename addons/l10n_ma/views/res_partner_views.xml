<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.l10n_ma</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="company_registry" string="ICE" invisible="country_code != 'MA'"></field>
            </xpath>
            <xpath expr="//span[hasclass('o_company_id_label')]" position="replace">
                <span invisible="country_code == 'MA'">Company Registry</span>
                <span invisible="country_code != 'MA'">ICE</span>
            </xpath>
        </field>
    </record>
</odoo>
