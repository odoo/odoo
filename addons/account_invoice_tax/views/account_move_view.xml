<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="amount_by_group" position="before">
                <button name="%(account_invoice_tax.action_view_account_invoice_tax)d" type="action" string="+ Add taxes" class="oe_right oe_link oe_edit_only" attrs="{'invisible': [('type', 'not in', ('in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}" colspan="2" context="{'type': type}"/>
            </field>
        </field>
    </record>

</odoo>
