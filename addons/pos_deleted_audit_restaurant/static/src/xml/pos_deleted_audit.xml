<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PosDeletedJustificationPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-textinput">
                <p class="title"><t t-esc="widget.options.title || ''"/></p>
                <t t-if="widget.justifications && widget.justifications.length">
                    <div class="pos-justification-list">
                        <t t-foreach="widget.justifications" t-as="justification">
                            <div class="selection-item pos-justification-item"
                                 t-att-data-value="justification.name">
                                <t t-esc="justification.name"/>
                            </div>
                        </t>
                    </div>
                </t>
                <textarea rows="8" cols="40"><t t-esc="widget.options.value"/></textarea>
                <div class="footer">
                    <div class="button confirm">Ok</div>
                    <div class="button cancel">Cancel</div>
                </div>
            </div>
        </div>
    </t>
</templates>
