<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record model="ir.rule" id="account_move_mrp_landed_costs">
        <field name="name">MRP Manager Bills with Landed Costs</field>
        <field name="model_id" ref="stock_landed_costs.model_account_move"/>
        <field name="domain_force">['&amp;', ('move_type', '=', 'in_invoice'), ('landed_costs_ids', '!=', False)]</field>
        <field name="groups" eval="[(4, ref('mrp.group_mrp_manager'))]"/>
        <field name="perm_read"   eval="1"/>
        <field name="perm_write"  eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record model="ir.rule" id="account_move_mrp_other">
        <field name="name">MRP Manager Other Account Moves</field>
        <field name="model_id" ref="stock_landed_costs.model_account_move"/>
        <field name="domain_force">['|', ('move_type', '!=', 'in_invoice'), ('landed_costs_ids', '=', False)]</field>
        <field name="groups" eval="[(4, ref('mrp.group_mrp_manager'))]"/>
        <field name="perm_read"   eval="0"/>
        <field name="perm_write"  eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>
