<?xml version="1.0"?>
<odoo>
    <record id="digest_test_view_form" model="ir.ui.view">
        <field name="name">digest.test.view.form</field>
        <field name="model">digest.test</field>
        <field name="arch" type="xml">
            <form string="Send a Sample Digest">
                <group>
                    <field name="user_ids" options="{'no_create': True}" widget="many2many_tags_avatar" placeholder="Select Recipients..."/>
                </group>
                <footer>
                    <button string="Send Digest" name="send_mail_test" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
