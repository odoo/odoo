<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="digest_digest_default" model="digest.digest">
            <field name="name">Weekly Stats in Odoo</field>
            <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/>
            <field name="next_run_date" eval="(DateTime.now() + timedelta(days=7)).strftime('%Y-%m-%d')"/>
            <field name="kpi_res_users_connected">True</field>
            <field name="kpi_mail_message_total">True</field>
        </record>
    </data>

    <data>
        <record id="digest_tip_0" model="digest.tip">
            <field name="group_id" ref='base.group_system'/>
            <field name="sequence">30</field>
            <field name="tip_description" type="html">
                <tr>
                    <td>
                        <b class="font-16" style="font-size: 20px;line-height: 30px">Reach your full potential with Odoo</b>
                        <p class="font-12" style="color:#888888;font-size: 15px; line-height: 25px; margin:0;">Take a look at our <a href="https://www.odoo.com/page/tour" target="_blank" style="color:#875a7b; font-weight: bold;">apps videos</a> and discover new tools to work better and faster.</p>
                    </td>
                </tr>
            </field>
        </record>
        <record id="digest_tip_1" model="digest.tip">
            <!-- <field name="group_id" ref='base.group_system'/> TO DO : add Administration/Settings group -->
            <field name="sequence">5</field>
            <field name="tip_description" type="html">
                <tr>
                    <td>
                        <b class="font-16" style="font-size: 20px;line-height: 30px">Invite Team members</b>
                        <p class="font-12" style="color:#888888;font-size: 15px; line-height: 25px; margin:0;">Go to your general settings to invite new users to the database.</p>
                         <img src="https://www.odoo.com/digest/static/src/img/tips-digest-invite-team.jpg" style="max-width: 580px" width="100%" />
                    </td>
                </tr>
            </field>
        </record>
        <record id="digest_tip_3" model="digest.tip">
            <!-- <field name="group_id" ref='base.group_system'/> TO DO : add User Types/Internal Users -->
            <field name="sequence">10</field>
            <field name="tip_description" type="html">
                <tr>
                    <td>
                        <b class="font-16" style="font-size: 20px;line-height: 30px">Want to learn more about Odoo?</b>
                        <p class="font-12" style="color:#888888;font-size: 15px; line-height: 25px; margin:0;">Go to our <a href="https://www.odoo.com/elearning" target="_blank" style="color:#875A7B; font-weight: bold;">eLearning Platform</a>.</p>
                    </td>
                </tr>
            </field>
        </record>
        <record id="digest_tip_4" model="digest.tip">
            <!-- <field name="group_id" ref='base.group_system'/> TO DO : add User Types/Internal Users -->
            <field name="sequence">20</field>
            <field name="tip_description" type="html">
                <tr>
                    <td>
                        <b class="font-16" style="font-size: 20px;line-height: 30px">Don't miss a thing</b>
                        <p class="font-12" style="color:#888888;font-size: 15px; line-height: 25px; margin:0;">Change your browser settings to allow push notifications from Odoo.</p>
                         <img src="https://www.odoo.com/digest/static/src/img/tips-digest-browser-notifications.jpg" style="max-width: 580px" width="100%"/>
                    </td>
                </tr>
            </field>
        </record>

    </data>
</odoo>
