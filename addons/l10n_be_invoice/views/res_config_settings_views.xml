<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n_be_invoice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_be.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='struct_comm']/div[hasclass('o_setting_right_pane')]" position="inside">
                <div class="content-group">
                    <field name="out_inv_comm_type" invisible="1"/>
                    <field name="out_inv_comm_algorithm" class="o_light_label mt16" widget="radio"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
