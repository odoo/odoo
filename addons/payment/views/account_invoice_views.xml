<?xml version="1.0"?>
<odoo>
    <data>
        <record id="account_invoice_view_form_inherit_payment" model="ir.ui.view">
                <field name="name">account.invoice.form.view.inherit.payment</field>
                <field name="model">account.invoice</field>
                <field name="inherit_id" ref="account.invoice_form"/>
                <field name="arch" type="xml">
                    <xpath expr='//field[@name="amount_total"]' position="after">
                        <field name="payment_acquirer_id" readonly="1" attrs="{'invisible': [('payment_acquirer_id', '=', False)]}"/>
                        <field name="payment_tx_id" readonly="1" attrs="{'invisible': [('payment_tx_id', '=', False)]}"/>
                    </xpath>
                </field>
        </record>
    </data>
</odoo>
