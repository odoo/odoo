<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Add creditcard to res.partner -->
        <record id="view_partners_form_payment_defaultcreditcard" model="ir.ui.view">
                <field name="name">view.res.partner.form.payment.defaultcreditcard</field>
                <field name="model">res.partner</field>
                <field name="inherit_id" ref="base.view_partner_form"/>
                <field name="arch" type="xml">
                    <div name="button_box" position="inside">
                        <button type="action"
                            class="oe_stat_button"
                            name="%(payment.payment_method_act)d"
                            groups="base.group_sale_salesman"
                            icon="fa-credit-card"
                            context="{'search_default_partner_id': active_id}">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value"><field name="payment_method_count"/></span>
                                <span class="o_stat_text">Payment Method</span>
                            </div>
                        </button>
                    </div>
                </field>
        </record>
    </data>
</openerp>
