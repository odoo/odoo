<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_account_payment_form_inherit_payment" model="ir.ui.view">
            <field name="name">view.account.payment.form.inherit.payment</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='post']" position="attributes">
                    <attribute name="invisible">['|', ('state', '!=', 'draft'), ('payment_transaction_capture', '=', True)]</attribute>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button type="object" name="action_capture"
                            attrs="{'invisible':['|', '|', ('payment_transaction_id','=',False), ('payment_transaction_capture', '=', False), ('state', '!=', 'draft')]}"
                            string="Capture Transaction" class="oe_highlight"/>
                    <button type="object" name="action_void"
                            attrs="{'invisible':['|', '|', ('payment_transaction_id','=',False), ('payment_transaction_capture', '=', False), ('state', '!=', 'draft')]}"
                            string="Void Transaction"/>
                </xpath>
                <xpath expr='//group[2]' position="inside">
                    <field name="payment_transaction_capture" invisible="1"/>
                    <field name="payment_transaction_pending" invisible="1"/>
                    <label for="payment_transaction_id"/>
                    <div class="o_row">
                        <field name="payment_transaction_id"/>
                        <div class="o_field_many2manytags"
                             attrs="{'invisible':['|', ('state', '!=', 'draft'), ('payment_transaction_capture','=', False)]}">
                            <span class="badge dropdown o_tag_color_1">
                                <span class="o_badge_text">Capture allowed from <field name="payment_transaction_acquirer_name"/></span>
                            </span>
                        </div>
                        <div class="o_field_many2manytags"
                             attrs="{'invisible':['|', '|', ('state', '!=', 'draft'), ('payment_transaction_capture','=', True), ('payment_transaction_pending','=', False)]}">
                            <span class="badge dropdown o_tag_color_1">
                                <span class="o_badge_text">Pending from <field name="payment_transaction_acquirer_name"/></span>
                            </span>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
