<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <template id="web_rtl.layout" inherit_id="web.layout" name="RTL Layout">
            <xpath expr="//html/head/t" position="after">
                <link t-if="web_lang_dir == 'rtl'" href="/web_rtl/static/src/css/bootstrap-rtl.min.css" rel="stylesheet"/>
                <link t-if="web_lang_dir == 'rtl'" href="/web_rtl/static/src/css/rtl.css" rel="stylesheet"/>
                
            </xpath>
            <xpath expr="//html" position="before">
                <t t-set="body_classname" t-value="web_lang_dir"/>
            </xpath>
            
            
        </template>
    </data>
</openerp>