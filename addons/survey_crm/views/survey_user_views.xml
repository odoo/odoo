<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<data>

    <record id="survey_user_input_view_form" model="ir.ui.view">
        <field name="name">survey.user_input.view.form.inherit.survey.crm</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_redirect_to_attempts']" position="after">
                <button class="oe_stat_button"
                        icon="fa-star"
                        invisible="not lead_id"
                        name="action_redirect_lead"
                        type="object">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Lead</span>
                        </div>
                </button>
            </xpath>
        </field>
    </record>

</data>
</odoo>
