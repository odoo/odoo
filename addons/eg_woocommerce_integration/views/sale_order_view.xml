<odoo>
    <record id="sale_order_form_view_for_woo_integration_pro" model="ir.ui.view">
        <field name="name">sale.order.form.view.for.woo.integration.pro</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button type="action" string="Update Woo Sale Order"
                        name="%(eg_woocommerce_integration.launch_set_woocommerce_state_order)d"
                        class="oe_highlight" attrs="{'invisible': [('instance_id', 'in', [False, ''])]}"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="before">
                <field name="instance_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
