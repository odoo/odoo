<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- CSS Style Bundle -->
        <template id="assets_frontend" inherit_id="website.assets_frontend" name="Website Rating Project Issue Assets">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/website_rating_project_issue/static/src/css/website_rating_project_issue.css"/>
                <script type="text/javascript" src="/website_rating_project_issue/static/src/js/website_rating_project_issue.js"/>
                <script type="text/javascript" src="/web/static/src/js/framework/formats.js"/>
            </xpath>
        </template>

        <!-- Layout add footer -->
        <template id="header_footer_custom" inherit_id="website.footer_default" name="Project Issue Rating Footer Link">
            <xpath expr="//ul[@id='products']" position="inside">
                <li><a href="/project/rating/">Project Customer Satisfaction</a></li>
            </xpath>
        </template>

        <!-- Page : List of project -->
        <template id="index" name="Project Issue Rating List">
            <t t-call="website.layout">
                <t t-set="additional_title">Project Satisfaction</t>
                <div id="wrap">
                    <div class="oe_structure"/>
                    <div class="container oe_website_rating_project">
                        <div class="row text-center">
                            <h2>Projects</h2>
                        </div>
                        <div class="oe_structure"/>
                        <div class="row">
                            <t t-if="not projects">
                                <div class="mt64 text-center">
                                    Publish the project to view the ratings.
                                </div>
                            </t>
                            <t t-foreach="projects" t-as="project">
                                <div t-if="project.percentage_satisfaction_project != -1" class="col-sm-6 col-xs-4 col-md-4 col-lg-4">
                                    <div class="thumbnail">
                                        <div>
                                            <div class="caption">
                                                <span class="label label-default pull-right"><t t-esc="project.privacy_visibility"/></span>
                                                <h4><t t-esc="project.name"/></h4>
                                                <p t-if="project.date"  class="text-muted">
                                                    <i class="fa fa-calendar"/> End date : <t t-esc="project.date"/>
                                                </p>
                                                <p t-if="project.alias_name and project.alias_domain"  class="text-muted">
                                                    <i class="fa fa-envelope"/> Email : <t t-esc="project.alias_name"/>@<t t-esc="project.alias_domain"/>
                                                </p>
                                                <div class="row">
                                                    <div t-if="project.use_tasks" class="col-md-6 text-center">
                                                        <h2><t t-esc="len(project.task_ids)"/></h2>
                                                        <p><t t-esc="project.label_tasks"/></p>
                                                    </div>
                                                    <div t-if="project.use_issues" class="col-md-6 text-center">
                                                        <h2><t t-esc="len(project.issue_ids)"/></h2>
                                                        <p><t t-esc="project.label_issues"/></p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="caption">
                                                <p>
                                                    <a t-att-href="'/project/rating/%s' % project.id" class="btn btn-primary btn-lg btn-block">
                                                        <i class="fa fa-arrow-circle-right "/> See the feedbacks
                                                    </a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="oe_structure"/>
              </div>
            </t>
        </template>

        <!-- Page : Rating of a particular project -->
        <template id="project_rating_data" name="Project Issue Rating Page">
            <div class="progress o-rating-progress">
                <div class="progress-bar progress-bar-success" t-attf-style="width: #{stats['percentage_happy']}%;" title="Happy">
                    <t t-esc="stats['percentage_happy']"/>%
                </div>
                <div class="progress-bar progress-bar-warning" t-attf-style="width: #{stats['percentage_avg']}%;" title="Average">
                    <t t-esc="stats['percentage_avg']"/>%
                </div>
                <div class="progress-bar progress-bar-danger" t-attf-style="width: #{stats['percentage_unhappy']}%;" title="Bad">
                    <t t-esc="stats['percentage_unhappy']"/>%
                </div>
            </div>
        </template>
        <!-- Top rated partner details view -->
        <template id="project_rating_data_top_partner">
            <t t-foreach="topdata['partner_rating']" t-as='partner'>
                <div class="row mt8" t-if="partner['15 days']['total']" title="Top 5 partner ratings of last 15 days.">
                    <div class="col-sm-1">
                        <img t-if="partner['rated_partner_id'].image" class="o-top-partner-image" t-attf-src="data:image/png;base64,#{partner['rated_partner_id'].image}"/>
                        <img  t-if="not partner['rated_partner_id'].image" class="o-top-partner-image" src='/web/static/src/img/placeholder.png'/>
                    </div>
                    <div class="col-sm-4">
                        <span class="ml8" t-esc="partner['rated_partner_id'].name"/>
                    </div>
                    <div class="col-sm-5">
                         <span t-if="partner['15 days']['happy']">
                            <img title="happy" class="o-top-rating-image" src='/rating/static/src/img/rating_10.png'/>
                            <span class="o-rating-count" t-esc="partner['15 days']['happy']"/>
                        </span>
                        <span t-if="partner['15 days']['avg']">
                            <img title="average" class="o-top-rating-image" src='/rating/static/src/img/rating_5.png'/>
                            <span class="o-rating-count" t-esc="partner['15 days']['avg']"/>
                        </span>
                        <span t-if="partner['15 days']['unhappy']">
                            <img title="unhappy"  class="o-top-rating-image" src='/rating/static/src/img/rating_1.png'/>
                            <span class="o-rating-count" t-esc="partner['15 days']['unhappy']"/>
                        </span>
                    </div>
                    <div class="col-sm-1">
                        <strong class="pull-right"><t t-esc="partner['15 days']['%']"/>%</strong>
                    </div>
                </div>
            </t>
        </template>

        <!-- Rating detail popover -->
        <template id="rating_popover">
            <div t-attf-id="rating_#{rating.id}" class="container hidden">
                <div class="row">
                    <div class="col-md-2">
                        <img t-if="rating.partner_id.image" class="o-top-partner-image" t-attf-src="data:image/png;base64,#{rating.partner_id.image}"/>
                        <img  t-if="not rating.partner_id.image" class="o-top-partner-image" src='/web/static/src/img/placeholder.png'/>
                    </div>
                    <div class="col-md-10">
                        <div class="mt4">
                            <strong><t t-esc="rating.rated_partner_id.name"/></strong> - <span class="rating-timeduration"><t t-esc="rating.create_date"/></span>
                        </div>
                        <strong>Rated by: </strong><t t-esc="rating.partner_id.name" />
                    </div>
                </div>
                <div class="row o-top-partner-feedback" t-if="rating.feedback">
                    <div class="col-md-12">
                        <t t-esc="rating.feedback" />
                    </div>
                </div>
            </div>
        </template>

        <template id="project_data_satisfaction">
            <h3 class="page-header"><t t-esc="type"/></h3>
            <div class="row">
                <div class="col-md-8">
                    <t t-foreach="topdata['ratings']" t-as="rating">
                        <img t-attf-src='/rating/static/src/img/rating_#{int(rating.rating)}.png' class="mt4 o-rating-image" t-att-data-id="rating.id" t-att-data-rating-date="rating.write_date"/>
                        <t t-call="website_rating_project_issue.rating_popover"/>
                    </t>
                </div>

                <div class="col-md-4 o-vertical_separator">
                    <div>
                        <h5>Last 7 days</h5>
                        <t t-set="stats" t-value="topdata['statistic']['week']"/>
                        <t t-call="website_rating_project_issue.project_rating_data"/>
                    </div>
                    <div>
                        <h5>Last 30 days</h5>
                        <t t-set="stats" t-value="topdata['statistic']['1 month']"/>
                        <t t-call="website_rating_project_issue.project_rating_data"/>
                    </div>
                    <div>
                        <h5>Last 3 months</h5>
                        <t t-set="stats" t-value="topdata['statistic']['3 month']"/>
                        <t t-call="website_rating_project_issue.project_rating_data"/>
                    </div>
                    <div>
                        <t t-call="website_rating_project_issue.project_rating_data_top_partner"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="project_rating_page" name="Project Issue Rating Page">
            <t t-call="website.layout">
                 <div id="wrap">
                    <div class="oe_structure"/>
                    <div class="container oe_website_rating_project">
                        <h1 t-esc="project.name" class="text-center"/>
                        <div class="row mb32">
                            <div id="website_published_button" class="" groups="project.group_project_manager">
                                <t t-call="website.publish_management">
                                  <t t-set="object" t-value="project"/>
                                  <t t-set="publish_edit" t-value="True"/>
                                  <t t-set="action" t-value="'project.open_view_project_all'"/>
                                </t>
                            </div>
                            <div>
                                <t t-set="type" t-value="'Customer Ratings for Tasks'"/>
                                <t t-set="topdata" t-value="partner_task_rating"/>
                                <t t-if="project.use_tasks">
                                    <t t-call="website_rating_project_issue.project_data_satisfaction"/>
                                </t>
                                <t t-set="type" t-value="'Customer Ratings for Issues'"/>
                                <t t-set="topdata" t-value="partner_issue_rating"/>
                                <t t-if="project.use_issues">
                                    <t t-call="website_rating_project_issue.project_data_satisfaction"/>
                                </t>
                            </div>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

    </data>
</odoo>
