<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="myinvois_document_status_update_form" model="ir.ui.view">
        <field name="name">myinvois.document.status.update.wizard.form</field>
        <field name="model">myinvois.document.status.update.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="document_id"/>
                            <field name="new_status"/>
                            <field name="reason"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Update Document" name="button_request_update" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
