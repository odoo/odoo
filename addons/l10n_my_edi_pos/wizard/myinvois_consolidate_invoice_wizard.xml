<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="myinvois_consolidate_invoice_wizard_form" model="ir.ui.view">
        <field name="name">myinvois.consolidate.invoice.wizard.form</field>
        <field name="model">myinvois.consolidate.invoice.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Create Consolidated Invoices" name="button_consolidate_orders" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
