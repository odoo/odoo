<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tax report -->
    <record id="l10n_bg_tax_report" model="account.tax.report">
        <field name="name">Отчет на данъчните приходи</field>
        <field name="country_id" ref="base.bg"/>
    </record>

    <!-- Section A: Data on value added tax charged -->
    <record id="l10n_bg_tax_report_a" model="account.tax.report.line">
        <field name="name">Раздел А: Данни за начислен данък върху добавената стойност</field>
        <field name="report_id" ref="l10n_bg_tax_report"/>
        <field name="sequence">1</field>
        <field name="formula">None</field>
    </record>
        <!-- Total amount of the tax bases for VAT taxation (amount from class 11 to class 16) -->
        <record id="l10n_bg_tax_report_01" model="account.tax.report.line">
            <field name="name">[01] Общ размер на данъчните основи за облагане с ДДС (сума от кл.11 до кл.16)</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_01</field>
            <field name="formula">BG_TR_11 + BG_TR_12 + BG_TR_13 + BG_TR_14 + BG_TR_15 + BG_TR_16</field>
        </record>

        <!-- Tax base subject to taxation at a rate of 20%: -->
        <record id="l10n_bg_tax_report_a_1" model="account.tax.report.line">
            <field name="name">Данъчна основа, подлежаща на облагане със ставка 20%:</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="formula">None</field>
        </record>
            <!-- - tax base of taxable supplies, incl. deliveries under the conditions of distance sales with a place of performance on the territory of the country -->
            <record id="l10n_bg_tax_report_11" model="account.tax.report.line">
                <field name="name">[11] - данъчна основа на облагаемите доставки, вкл. доставките при условията на дистанционни продажби с място на изпълнение на територията на страната</field>
                <field name="report_id" ref="l10n_bg_tax_report"/>
                <field name="parent_id" ref="l10n_bg_tax_report_a_1"/>
                <field name="sequence">1</field>
                <field name="code">BG_TR_11</field>
                <field name="tag_name">11</field>
            </record>

            <!-- - tax base of VAT and tax base of received supplies under Article 82, paragraphs 2-6 of the VAT Act -->
            <record id="l10n_bg_tax_report_12" model="account.tax.report.line">
                <field name="name">[12] - данъчна основа на ВОП и данъчна основа на получени доставки по чл.82, ал.2-6 от ЗДДС</field>
                <field name="report_id" ref="l10n_bg_tax_report"/>
                <field name="parent_id" ref="l10n_bg_tax_report_a_1"/>
                <field name="sequence">1</field>
                <field name="code">BG_TR_12</field>
                <field name="tag_name">12</field>
            </record>
        <!-- Tax base subject to taxation at a rate of 20%: [END] -->

        <!-- Tax base of taxable supplies at a rate of 9% -->
        <record id="l10n_bg_tax_report_13" model="account.tax.report.line">
            <field name="name">[13] Данъчна основа на облагаемите доставки със ставка 9%</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_13</field>
            <field name="tag_name">13</field>
        </record>

        <!-- Tax base subject to 0% tax: -->
        <record id="l10n_bg_tax_report_a_2" model="account.tax.report.line">
            <field name="name">Данъчна основа, подлежаща на облагане със ставка 0%:</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="formula">None</field>
        </record>
            <!-- - tax base for supplies under Chapter Three of the VAT Act -->
            <record id="l10n_bg_tax_report_14" model="account.tax.report.line">
                <field name="name">[14] - данъчна основа за доставки по глава трета от ЗДДС</field>
                <field name="report_id" ref="l10n_bg_tax_report"/>
                <field name="parent_id" ref="l10n_bg_tax_report_a_2"/>
                <field name="sequence">1</field>
                <field name="code">BG_TR_14</field>
                <field name="tag_name">14</field>
            </record>

            <!-- - tax base of AEO of goods -->
            <record id="l10n_bg_tax_report_15" model="account.tax.report.line">
                <field name="name">[15] - данъчна основа на ВОД на стоки</field>
                <field name="report_id" ref="l10n_bg_tax_report"/>
                <field name="parent_id" ref="l10n_bg_tax_report_a_2"/>
                <field name="sequence">1</field>
                <field name="code">BG_TR_15</field>
                <field name="tag_name">15</field>
            </record>

            <!-- - tax base of supplies under Articles 140, 146 and 173 of the VAT Act -->
            <record id="l10n_bg_tax_report_16" model="account.tax.report.line">
                <field name="name">[16] - данъчна основа на доставки по чл.140, 146 и чл.173 ЗДДС</field>
                <field name="report_id" ref="l10n_bg_tax_report"/>
                <field name="parent_id" ref="l10n_bg_tax_report_a_2"/>
                <field name="sequence">1</field>
                <field name="code">BG_TR_16</field>
                <field name="tag_name">16</field>
            </record>
        <!-- Tax base subject to 0% tax: [END]-->

        <!-- Tax base for supplies of services under Article 21, paragraph 2 with a place of performance on the territory of another member state -->
        <record id="l10n_bg_tax_report_17" model="account.tax.report.line">
            <field name="name">[17] Данъчна основа на доставки на услуги по чл.21, ал.2 с място на изпълнение на територията на друга страна членка</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_17</field>
            <field name="tag_name">17</field>
        </record>

        <!-- Tax base of supplies under Article 69, paragraph 2 of the VAT Act, incl. deliveries on the basis of distance selling with a place of performance in the territory of another Member State, as well as deliveries as an intermediary in a tripartite -->
        <record id="l10n_bg_tax_report_18" model="account.tax.report.line">
            <field name="name">[18] Данъчна основа на доставки по чл.69, ал.2 ЗДДС, вкл. доставките при условията на дистанционни продажби с място на изпълнение на територията на друга държава членка, както и на доставки като посредник в тристранна</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_18</field>
            <field name="tag_name">18</field>
        </record>

        <!-- Tax base of exempt supplies and exempt VOP -->
        <record id="l10n_bg_tax_report_19" model="account.tax.report.line">
            <field name="name">[19] Данъчна основа на освободените доставки и освободените ВОП</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_19</field>
            <field name="tag_name">19</field>
        </record>

        <!-- All VAT charged (amount from class 21 to class 24) -->
        <record id="l10n_bg_tax_report_20" model="account.tax.report.line">
            <field name="name">[20] Всичко начислен ДДС (сума от кл.21 до кл.24)</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_20</field>
            <field name="formula">BG_TR_21 + BG_TR_22 + BG_TR_23 + BG_TR_24</field>
        </record>

        <!-- VAT charged -->
        <record id="l10n_bg_tax_report_21" model="account.tax.report.line">
            <field name="name">[21] Начислен ДДС</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_21</field>
            <field name="tag_name">21</field>
        </record>

        <!-- VAT charged for VAT and for received deliveries under Art. 82, para 2-6 -->
        <record id="l10n_bg_tax_report_22" model="account.tax.report.line">
            <field name="name">[22] Начислен ДДС за ВОП и за получени доставки по чл. 82, ал.2-6</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_22</field>
            <field name="tag_name">22</field>
        </record>

        <!-- Tax charged on supplies of goods and services for personal use -->
        <record id="l10n_bg_tax_report_23" model="account.tax.report.line">
            <field name="name">[23] Начислен данък за доставки на стоки и услуги за лични нужди</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_23</field>
            <field name="tag_name">23</field>
        </record>

        <!-- VAT charged (9%) -->
        <record id="l10n_bg_tax_report_24" model="account.tax.report.line">
            <field name="name">[24] Начислен ДДС (9%)</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_a"/>
            <field name="sequence">1</field>
            <field name="code">BG_TR_24</field>
            <field name="tag_name">24</field>
        </record>
    <!-- Section A: Data on value added tax charged [END] -->

    <!-- Section B: Data on the exercised right to a tax credit -->
    <record id="l10n_bg_tax_report_b" model="account.tax.report.line">
        <field name="name">Раздел Б: Данни за упражнено право на данъчен кредит</field>
        <field name="report_id" ref="l10n_bg_tax_report"/>
        <field name="sequence">2</field>
        <field name="formula">None</field>
    </record>
        <!-- Tax base and tax on the received deliveries, VAT, the received deliveries under art. 82, para. 2-6 of the VAT Act and imports without the right to a tax credit or without tax -->
        <record id="l10n_bg_tax_report_30" model="account.tax.report.line">
            <field name="name">[30] Данъчна основа и данък на получените доставки, ВОП, получените доставки по чл.82, ал. 2-6 от ЗДДС и вноса без право на данъчен кредит или без данък</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_b"/>
            <field name="sequence">2</field>
            <field name="code">BG_TR_30</field>
            <field name="tag_name">30</field>
        </record>

        <!-- Tax base of the received deliveries, VAT, the received deliveries under art. 82, para 2-6 of the VATA, the import, as well as the tax base of the received deliveries, used for making deliveries under art. 69, para 2 of the VATA -->
        <record id="l10n_bg_tax_report_b_2" model="account.tax.report.line">
            <field name="name">Данъчна основа на получените доставки, ВОП, получените доставки по чл.82, ал.2-6 от ЗДДС, вноса, както и данъчната основа на получени доставки, използвани за извършване на доставки по чл.69, ал.2 ЗДДС</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_b"/>
            <field name="sequence">2</field>
            <field name="formula">None</field>
        </record>
            <!-- - entitled to a full tax credit -->
            <record id="l10n_bg_tax_report_31" model="account.tax.report.line">
                <field name="name">[31] - с право на пълен данъчен кредит</field>
                <field name="report_id" ref="l10n_bg_tax_report"/>
                <field name="parent_id" ref="l10n_bg_tax_report_b_2"/>
                <field name="sequence">2</field>
                <field name="code">BG_TR_31</field>
                <field name="tag_name">31</field>
            </record>

            <!-- - with the right to a partial tax credit -->
            <record id="l10n_bg_tax_report_32" model="account.tax.report.line">
                <field name="name">[32] - с право на частичен данъчен кредит</field>
                <field name="report_id" ref="l10n_bg_tax_report"/>
                <field name="parent_id" ref="l10n_bg_tax_report_b_2"/>
                <field name="sequence">2</field>
                <field name="code">BG_TR_32</field>
                <field name="tag_name">32</field>
            </record>

        <!-- Coefficient under Article 73, paragraph 5 of the VAT Act -->
        <record id="l10n_bg_tax_report_33" model="account.tax.report.line">
            <field name="name">[33] Коефициент по чл.73, ал.5 ЗДДС</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_b"/>
            <field name="sequence">2</field>
            <field name="code">BG_TR_33</field>
            <field name="tag_name">33</field>
        </record>

        <!-- VAT eligible for a full tax credit -->
        <record id="l10n_bg_tax_report_41" model="account.tax.report.line">
            <field name="name">[41] ДДС с право на пълен данъчен кредит</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_b"/>
            <field name="sequence">2</field>
            <field name="code">BG_TR_41</field>
            <field name="tag_name">41</field>
        </record>

        <!-- VAT with the right to a partial tax credit -->
        <record id="l10n_bg_tax_report_42" model="account.tax.report.line">
            <field name="name">[42] ДДС с право на частичен даннъчен кредит</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_b"/>
            <field name="sequence">2</field>
            <field name="code">BG_TR_42</field>
            <field name="tag_name">42</field>
        </record>

        <!-- Annual adjustment under Article 73, paragraph 8 (+ / -) -->
        <record id="l10n_bg_tax_report_43" model="account.tax.report.line">
            <field name="name">[43] Годишна корекция по чл.73, ал.8 (+ / -)</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_b"/>
            <field name="sequence">2</field>
            <field name="code">BG_TR_43</field>
            <field name="tag_name">43</field>
        </record>

        <!-- Total tax credit (41 + 42 x class 33 + 43) -->
        <record id="l10n_bg_tax_report_40" model="account.tax.report.line">
            <field name="name">[40] Общо данъчен кредит (41 + 42 х кл.33 + 43)</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_b"/>
            <field name="sequence">2</field>
            <field name="code">BG_TR_40</field>
            <field name="formula">BG_TR_41 + (BG_TR_42 * BG_TR_33) + BG_TR_43</field>
        </record>
    <!-- Section B: Data on the exercised right to a tax credit [END] -->

    <!-- Section B: Result for the period -->
    <record id="l10n_bg_tax_report_c" model="account.tax.report.line">
        <field name="name">Раздел В: Резултат за периода</field>
        <field name="report_id" ref="l10n_bg_tax_report"/>
        <field name="sequence">3</field>
        <field name="formula">None</field>
    </record>
        <!-- VAT to be paid (class 20 - class 40)> = 0 -->
        <record id="l10n_bg_tax_report_50" model="account.tax.report.line">
            <field name="name">[50] ДДС за внасяне (кл.20 - кл.40) >= 0</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_c"/>
            <field name="sequence">3</field>
            <field name="code">BG_TR_50</field>
            <field name="formula">((BG_TR_20 - BG_TR_40) >= 0) and (BG_TR_20 - BG_TR_40) or 0</field>
        </record>

        <!-- VAT for refund (class 20 - class 40) <0 -->
        <record id="l10n_bg_tax_report_60" model="account.tax.report.line">
            <field name="name">[60] ДДС за възстановяване (кл.20 - кл.40) &lt; 0</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_c"/>
            <field name="sequence">3</field>
            <field name="code">BG_TR_60</field>
            <field name="formula">((0 > (BG_TR_20 - BG_TR_40)) and (BG_TR_20 - BG_TR_40)) or 0</field>
        </record>
    <!-- Section B: Result for the period [END] -->

    <!-- Section D: VAT to be paid -->
    <record id="l10n_bg_tax_report_d" model="account.tax.report.line">
        <field name="name">Раздел Г: ДДС за внасяне</field>
        <field name="report_id" ref="l10n_bg_tax_report"/>
        <field name="sequence">4</field>
        <field name="formula">None</field>
    </record>
        <!-- Tax to be paid from class 50, deducted by the order of art. 92, para 1 of the VAT Act -->
        <record id="l10n_bg_tax_report_70" model="account.tax.report.line">
            <field name="name">[70] Данък за внасяне от кл.50, приспаднат по реда на чл.92, ал.1 ЗДДС</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_d"/>
            <field name="sequence">4</field>
            <field name="code">BG_TR_70</field>
            <field name="tag_name">70</field>
        </record>

        <!-- Tax to be paid from class 50, paid effectively -->
        <record id="l10n_bg_tax_report_71" model="account.tax.report.line">
            <field name="name">[71] Данък за внасяне от кл.50, внесен ефективно</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_d"/>
            <field name="sequence">4</field>
            <field name="code">BG_TR_71</field>
            <field name="tag_name">71</field>
        </record>
    <!-- Section D: VAT to be paid [END] -->

    <!-- Section E: VAT refundable -->
    <record id="l10n_bg_tax_report_e" model="account.tax.report.line">
        <field name="name">Раздел Д: ДДС, подлежащ на възстановяване</field>
        <field name="report_id" ref="l10n_bg_tax_report"/>
        <field name="sequence">5</field>
        <field name="formula">None</field>
    </record>
        <!-- According to Article 92, paragraph 1 of the VAT Act within 30 days of the submission of this declaration -->
        <record id="l10n_bg_tax_report_80" model="account.tax.report.line">
            <field name="name">[80] Съгласно чл.92, ал.1 ЗДДС в 30-дневен срок от подаването на тази декларация</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_e"/>
            <field name="sequence">5</field>
            <field name="code">BG_TR_80</field>
            <field name="tag_name">80</field>
        </record>

        <!-- According to Article 92, paragraph 3 of the VAT Act within 30 days of the submission of this declaration -->
        <record id="l10n_bg_tax_report_81" model="account.tax.report.line">
            <field name="name">[81] Съгласно чл.92, ал.3 ЗДДС в 30-дневен срок от подаването на тази декларация</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_e"/>
            <field name="sequence">5</field>
            <field name="code">BG_TR_81</field>
            <field name="tag_name">81</field>
        </record>

        <!-- According to Article 92, paragraph 1 of the VAT Act within 30 days of the submission of this declaration -->
        <record id="l10n_bg_tax_report_82" model="account.tax.report.line">
            <field name="name">[82] Съгласно чл.92, ал.4 ЗДДС в 30-дневен срок от подаването на тази декларация</field>
            <field name="report_id" ref="l10n_bg_tax_report"/>
            <field name="parent_id" ref="l10n_bg_tax_report_e"/>
            <field name="sequence">5</field>
            <field name="code">BG_TR_82</field>
            <field name="tag_name">82</field>
        </record>
    <!-- Section E: VAT refundable [END] -->
</odoo>
