<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_coupon.ProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('control-buttons')]" position="inside">
            <PromoCodeButton activeOrder="props.activeOrder" t-if="env.model.config.use_coupon_programs" />
            <ResetProgramsButton activeOrder="props.activeOrder" t-if="env.model.config.use_coupon_programs" />
        </xpath>
        <xpath expr="//OrderSummary" position="after">
            <ActivePrograms t-if="env.model.config.use_coupon_programs" activeOrder="props.activeOrder" />
        </xpath>
    </t>

</templates>
