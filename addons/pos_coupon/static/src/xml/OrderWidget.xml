<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_coupon.OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension" owl="2">
        <xpath expr="//OrderSummary" position="after">
            <div class="active-programs">
                <div t-if="show">
                    <div class="title">Active Programs</div>
                    <t t-foreach="withRewardsPromoPrograms" t-as="program" t-key="program.id">
                        <div>
                            <t t-esc="program.name"/>
                            <span t-if="program.promo_code !== false">
                                (<t t-esc="program.promo_code"/>)
                            </span>
                        </div>
                    </t>
                    <t t-foreach="withRewardsBookedCoupons" t-as="coupon" t-key="coupon.coupon_code">
                        <div>
                            <t t-esc="coupon.program_name"/> (<t t-esc="coupon.coupon_code"/>)
                        </div>
                    </t>
                    <t t-foreach="onNextOrderPromoPrograms" t-as="program" t-key="program.id">
                        <div style="font-style: italic;">
                            <t t-esc="program.name"/>
                            <span t-if="program.promo_code !== false">
                                (<t t-esc="program.promo_code"/>)
                            </span>
                        </div>
                    </t>
                </div>
            </div>
        </xpath>
    </t>

</templates>
