<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Ensure we can't unlink a PO from itself (i.e. confusing behavior) -->
    <t t-name="purchase_alternative.AltPOsListRenderer.RecordRow" t-inherit="web.ListRenderer.RecordRow" t-inherit-mode="primary">
        <xpath expr="//t[@t-if='this.displayOptionalFields or this.props.list.isGrouped or this.hasX2ManyAction']" position="attributes">
            <attribute name="t-if">(this.displayOptionalFields or this.hasX2ManyAction) and !this.isCurrentRecord(this.record)</attribute>
        </xpath>
    </t>

</templates>
