<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">Asiapay Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form" />
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'asiapay')]}">
                    <field name="asiapay_merchant_id" password="True" />
                    <field name="asiapay_currency_id" password="True" />
                    <field name="asiapay_secure_hash" password="True" />
                    <field name="asiapay_secure_hash_function" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
