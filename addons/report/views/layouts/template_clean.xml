<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_template_clean">
        <div class="header o_clean_header">
            <div class="row">
                <div class="col-xs-6">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"/>
                    <img src="/report/static/src/img/logo_sample.png" alt="Logo" t-if="not company.logo"/>
                </div>
                <div class="col-xs-5 col-xs-offset-1" name="company_address">
                    <ul class="list-unstyled">
                        <strong><li t-if="company.name"><span t-field="company.name"/></li></strong>
                        <li t-if="company.vat">VAT: <span t-field="company.vat"/></li>
                        <li t-if="company.phone">Tel: <span t-field="company.phone"/></li>
                        <li t-if="company.fax">Fax: <span t-field="company.fax"/></li>
                        <li t-if="company.email"><span t-field="company.email"/></li>
                        <li t-if="company.website"><span t-field="company.website"/></li>
                    </ul>
                </div>
            </div>
        </div>

        <t t-raw="0" />

        <div class="footer o_clean_footer">
            <div class="row mt8">
                <div class="col-xs-3">
                    <span t-field="company.rml_footer"/>
                </div>
                <div class="col-xs-4 text-right">
                    <span class="company_address" t-field="company.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                </div>
                <div class="col-xs-4">
                    <h4 class="mt0 mb0 text-uppercase" t-field="company.rml_header1"/>
                </div>
                <div class="col-xs-1">
                    <ul class="list-inline pagenumber pull-right text-center">
                        <li><strong><span class="page"/></strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </template>
</odoo>
