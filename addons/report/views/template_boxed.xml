<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- NOBOXED HEADER -->
    <template id="o_boxed_template_header">
        <div class="header">
            <div class="row o_boxed_header">
                <div class="col-xs-3">
                    <img src="/report/static/src/img/logo.jpg"/>
                    <!-- <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"/> -->
                </div>
                <div class="col-xs-9 text-right">
                    <div class="row">
                        <div class="col-xs-12"><h4 class="mt0 mb8" t-field="company.rml_header1"/></div>
                        <div class="col-xs-12" name="company_address">
                            <span class="company_address" t-field="company.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <!-- NOBOXED FOOTER -->
    <template id="o_boxed_template_footer">
        <div class="footer o_boxed_footer row">
            <div class="col-xs-12 text-center">
                <ul t-if="not company.custom_footer" class="list-inline">
                    <li t-if="company.phone">Tel <span t-field="company.phone"/></li>
                    <li t-if="company.fax">Fax <span t-field="company.fax"/></li>
                    <li t-if="company.email"><span t-field="company.email"/></li>
                    <li t-if="company.website"><span t-field="company.website"/></li>
                </ul>

                <ul t-if="not company.custom_footer" class="list-inline" name="financial_infos">
                    <li t-if="company.vat">TIN: <span t-field="company.vat"/></li>
                </ul>

                <t t-if="company.custom_footer">
                    <div class="col-xs-12 text-center">
                        <span t-raw="company.rml_footer"/>
                    </div>
                </t>

                <ul class="list-inline">
                    <li>Page:</li>
                    <li><span class="page"/></li>
                    <li>of</li>
                    <li><span class="topage"/></li>
                </ul>
            </div>
        </div>      
    </template>
</odoo>
