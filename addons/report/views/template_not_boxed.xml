<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- NOBOXED HEADER -->
    <template id="o_noboxed_template_header">
        <div class="header">
            <div class="row o_noboxed_header">
                <div class="col-xs-3 mb8">
                    <!-- <img src="/report/static/src/img/logo.jpg"/> -->
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"/>
                </div>
                <div class="col-xs-9 mb8">
                    <div class="row">
                        <div class="col-xs-12"><h4 class="mt0 mb8" t-field="company.rml_header1"/></div>
                        <div class="col-xs-12" name="company_address">
                            <span class="company_address" t-field="company.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <!-- NOBOXED FOOTER -->
    <template id="o_noboxed_template_footer">
        <div class="footer o_noboxed_footer row">
            <div class="col-xs-12 text-center">
                <ul t-if="not company.custom_footer" class="list-inline">
                    <li t-if="company.phone"><i class="fa fa-phone"></i> <span t-field="company.phone"/></li>
                    <li t-if="company.fax"><i class="fa fa-fax"></i> <span t-field="company.fax"/></li>
                    <li t-if="company.email"><i class="fa fa-at"></i> <span t-field="company.email"/></li>
                    <li t-if="company.website"><i class="fa fa-globe"></i> <span t-field="company.website"/></li>
                </ul>

                <ul t-if="not company.custom_footer" class="list-inline text-center" name="financial_infos">
                    <li t-if="company.vat"><small>TIN: <span t-field="company.vat"/></small></li>
                </ul>

                <t t-if="company.custom_footer">
                    <div class="col-xs-12 text-center">
                        <span t-raw="company.rml_footer"/>
                    </div>
                </t>

                <ul class="list-inline">
                    <li>Page:</li>
                    <li><span class="page"/></li>
                    <li>of</li>
                    <li><span class="topage"/></li>
                </ul>
            </div>
        </div>      
    </template>
</odoo>