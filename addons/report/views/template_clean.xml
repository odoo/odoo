<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- NOBOXED HEADER -->
    <template id="o_clean_template_header">
        <div class="header o_clean_header row">
            <div class="col-xs-6">
                <img src="/report/static/src/img/logo_sample.png" alt="#"/>
                <!-- <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"/> -->
            </div>
            <div class="col-xs-5 col-xs-offset-1" name="company_address">
                <ul class="list-unstyled">
                    <strong><li t-if="company.name"><span t-field="company.name"/></li></strong>
                    <li t-if="company.phone">Tel <span t-field="company.phone"/></li>
                    <li t-if="company.fax">Fax <span t-field="company.fax"/></li>
                    <li t-if="company.email"><span t-field="company.email"/></li>
                    <li t-if="company.website"><span t-field="company.website"/></li>
                </ul>
            </div>
        </div>
    </template>
    <!-- NOBOXED FOOTER -->
    <template id="o_clean_template_footer">
        <div class="footer o_clean_footer row">
            <div class="col-xs-3">
                <ul t-if="not company.custom_footer" name="financial_infos" class="list-unstyled mt4">
                    <li t-if="company.vat">TIN: <span t-field="company.vat"/></li>
                </ul>
            </div>
            <div class="col-xs-4 text-right">
                <ul t-if="not company.custom_footer" class="list-inline mt4 mb0">
                    <li>
                        <span class="company_address" t-field="company.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                    </li>
                </ul>

                <t t-if="company.custom_footer">
                    <div class="col-xs-12 text-center">
                        <span t-raw="company.rml_footer"/>
                    </div>
                </t>
            </div>
            <div class="col-xs-4">
                <h4 class="mt4 mb0 text-uppercase" t-field="company.rml_header1"/>
            </div>
            <div class="col-xs-1">
                <ul class="list-inline pagenumber pull-right text-center mt16">
                    <li><strong><span class="page"/></strong></li>
                </ul>
            </div>
        </div>      
    </template>
</odoo>
