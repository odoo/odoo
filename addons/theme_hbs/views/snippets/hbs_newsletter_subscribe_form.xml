<odoo>
    <data>
        <template id="hbs_newsletter_subscribe_form" inherit_id="website_mass_mailing.s_newsletter_subscribe_form">
            <xpath expr="//div[contains(@class, 'js_subscribe_wrap')]" position="replace">
                <div class="js_subscribe_wrap">
                    <div class="input-group">
                        <input type="email" name="email" class="js_subscribe_value form-control" placeholder="Enter your e-mail address"/>
                        <a role="button" href="#" class="btn btn-primary js_subscribe_btn o_submit">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
