<?xml version="1.0" encoding="UTF-8" ?>
<!-- Save and Discard Button-->
<templates>
    <t
            t-name="web_save_discard_button.FormStatusIndicator"
            t-inherit="web.FormStatusIndicator"
            t-inherit-mode="extension"
            owl="1"
    >
        <xpath expr="//button[(hasclass('o_form_button_save'))]" position="replace">
            <button type="button"
                    class="btn btn-outline-success px-2 py-2 lh-sm o_form_button_save ms-2"
                    data-hotkey="s"
                    t-on-click.stop="save"
                    data-tooltip="Save manually"
                    aria-label="Save manually"
                    t-ref="save">
                Save
            </button>
        </xpath>
        <xpath expr="//button[(hasclass('o_form_button_cancel'))]" position="replace">
            <button type="button"
                    class="btn btn-outline-danger px-2 py-2 lh-sm o_form_button_cancel ms-2"
                    data-hotkey="j"
                    t-on-click.stop="discard"
                    data-tooltip="Discard changes"
                    aria-label="Discard changes">
                Cancel
            </button>
        </xpath>
    </t>
</templates>


