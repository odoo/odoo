<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base.partner_demo_company_lk" model="res.partner" forcecreate="1">
        <field name="name">LK Company</field>
        <field name="vat">123456789-7000</field>
        <field name="street">No. 123, Galle Road</field>
        <field name="city">Colombo</field>
        <field name="country_id" ref="base.lk" />
        <field name="zip">00100</field>
        <field name="phone">+94 11 234 5678</field>
        <field name="email">info@company.lkexample.com</field>
        <field name="website">www.lkexample.com</field>
    </record>

    <record id="base.demo_company_lk" model="res.company" forcecreate="1">
        <field name="name">LK Company</field>
        <field name="partner_id" ref="base.partner_demo_company_lk" />
    </record>

    <function model="res.company" name="_onchange_country_id">
        <value eval="[ref('base.demo_company_lk')]" />
    </function>

    <function model="res.users" name="write">
        <value eval="[ref('base.user_root'), ref('base.user_admin'), ref('base.user_demo')]" />
        <value eval="{'company_ids': [(Command.link(ref('base.demo_company_lk')))]}" />
    </function>

    <function model="account.chart.template" name="try_loading">
        <value eval="[]" />
        <value>lk</value>
        <value model="res.company" eval="obj().env.ref('base.demo_company_lk')" />
        <value name="install_demo" eval="True" />
    </function>
</odoo>
