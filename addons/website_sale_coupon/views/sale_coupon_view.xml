<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record model="ir.ui.view" id="coupon_program_form_view">
            <field name="name">Sale Coupon Program</field>
            <field name="model">sale.couponprogram</field>
            <field name="arch" type="xml">
                <form string="Coupon Program">
                    <header>
                        <button name="action_opened" type="object"
                                string="Open Program"
                                states="draft" class="oe_highlight"/>
                        <button name="action_closed" type="object"
                                string="Close Program"
                                states="draft,opened"/>
                        <button type="object" name="open_generate_coupon_wizard"
                                string="Generate Coupon"
                                attrs="{'invisible': [('program_type', '!=', 'generated_coupon')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,opened,closed" statusbar_colors='"waiting_date":"blue"}'/>
                    </header>
                     <sheet>
                        <div class="oe_left" style="width: 350px;">
                            <label class="oe_edit_only" for="name" string="Program Name"/>
                            <h1><field name="name" class="oe_title" placeholder="Promotion Rule Name..." height="20px"/></h1>
                        </div>
                        <div class="oe_right oe_button_box" style="width: 300px;">
                            <button class="oe_stat_button" type="object" icon="fa-xing" attrs="{'invisible': [('program_type', '!=', 'generated_coupon')]}" name="action_view_coupons">
                                <field name="count_coupons" string="Coupons" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" icon="fa-strikethrough"    name="action_view_order">
                                <field name="count_sale_order" string="Sales" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                    <field name="program_type" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="program_code" attrs="{'invisible': [('program_type', '!=', 'public_unique_code')]}"/>
                            </group>
                            <group>
                                    <field name="active"/>
                                    <field name="program_sequence"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Conditions" name="condition">
                                <group style="width: 450px;">
                                    <field name="purchase_type"/>
                                    <label string="Amount" for="minimum_amount" attrs="{'invisible': [('purchase_type', '!=', 'amount')]}" />
                                    <div attrs="{'invisible': [('purchase_type', '!=', 'amount')]}">
                                        <field name="minimum_amount" class="oe_inline"/>
                                        <field name="currency_id" class="oe_inline"/>
                                        <field name="applicability_tax" class="oe_inline"/>
                                     </div>
                                    <field name="product_id" attrs="{'invisible': [('purchase_type', '!=', 'product')]}" placeholder="Select product"/>
                                    <field name="product_category_id" attrs="{'invisible': [('purchase_type', '!=', 'category')]}" placeholder="Select product category"/>
                                    <label string="Quantity" for="product_quantity" attrs="{'invisible': [('purchase_type', '=', 'amount')]}"/>
                                    <div attrs="{'invisible': [('purchase_type', '=', 'amount')]}">
                                        <field name="product_quantity" class="oe_inline"/>
                                        <field name="product_uom_name" class="oe_inline"/>
                                    </div>
                                    <field name="nbr_uses_public_unique_code" attrs="{'invisible': [('program_type', '!=', 'public_unique_code')]}"/>
                                    <label for="validity_duration" string="Validity Duration"/>
                                    <div>
                                       <!--  <field name="validity_duration" class="oe_inline" attrs="{'invisible': [('program_type', '=', 'public_unique_code')]}" />
                                        <field name="validity_type" class="oe_inline" attrs="{'invisible': [('program_type', '=', 'public_unique_code')]}"/> -->
                                        <field name="date_from" class="oe_inline" placeholder="From"/>
                                         <label string=" To " class="oe_inline"/>
                                        <field name="date_to" class="oe_inline" placeholder="To"/>
                                    </div>
                                 
                                    <field name="partner_id" placeholder="Select customer"></field>
                                    <field name="company_id" placeholder="Select company" groups="base.group_multi_company"></field>
                                </group>
                            </page>
                            <page string="Rewards" name="rewards">
                                <group style="width: 450px;">
                                    <field name="reward_type"/>
                                    <field name="reward_product_product_id" attrs="{'invisible': [('reward_type', '!=', 'product')]}" placeholder="Select reward product"/>
                                    <label string="Quantity" for="reward_quantity" attrs="{'invisible': [('reward_type', '!=', 'product')]}"/>
                                    <div attrs="{'invisible': [('reward_type', '!=', 'product')]}">
                                        <field name="reward_quantity" class="oe_inline"/>
                                        <field name="reward_product_uom_name" placeholder="Select unit of measure" class="oe_inline"/>
                                    </div>
                                    <field name="reward_discount_type" attrs="{'invisible': [('reward_type', '!=', 'discount')]}"/>
                                    <label string="Percentage" for="reward_discount_percentage" attrs="{'invisible': ['|', ('reward_discount_type', '!=', 'percentage'), ('reward_type', '!=', 'discount')]}"/>
                                    <div attrs="{'invisible': ['|', ('reward_discount_type', '!=', 'percentage'), ('reward_type', '!=', 'discount')]}">
                                        <field name="reward_discount_percentage" attrs="{'invisible': ['|', ('reward_discount_type', '!=', 'percentage'), ('reward_type', '!=', 'discount')]}" class="oe_inline"/>
                                        <field name="reward_discount_on_product_uom_name" attrs="{'invisible': ['|', ('reward_discount_on', '!=', 'specific_product'), ('reward_type', '!=', 'discount')]}" class="oe_inline"/>
                                    </div>
                                     <label string="Amount" for="reward_discount_amount" attrs="{'invisible': ['|',('reward_discount_type', '!=', 'amount'),('reward_type', '!=', 'discount')]}" />
                                    <div attrs="{'invisible': ['|',('reward_discount_type', '!=', 'amount'),('reward_type', '!=', 'discount')]}">
                                        <field name="reward_discount_amount" class="oe_inline"/>
                                        <field name="reward_currency_id" class="oe_inline"/>
                                        <field name="reward_tax" class="oe_inline"/>
                                    </div>
                                    <field name="reward_discount_on" attrs="{'invisible':
                                        ['|', ('reward_discount_type', '!=', 'percentage'),('reward_type', '!=', 'discount')]}" widget="radio"/>
                                    <field name="reward_discount_on_product_id" attrs="{'invisible': ['|', ('reward_discount_on', '!=', 'specific_product'), ('reward_type', '!=', 'discount')]}" placeholder="Select product"/>
                                    <field name="reward_partial_use" attrs="{'invisible': ['|','|',('reward_discount_type', '!=', 'amount'),('reward_type', '!=', 'discount'), ('program_type', '!=', 'generated_coupon')]}" widget="radio"/>
                                    <field name="reward_gift_program_id" attrs="{'invisible': [('reward_type', '!=', 'coupon')]}" options="{'no_create': True}" placeholder="Select program"/>
                                </group>
                            </page>
                    </notebook>
                 </sheet>
            </form>
        </field>
    </record>

    <record id="coupon_program_tree_view" model="ir.ui.view">
        <field name="name">Sale Coupon Program tree view</field>
        <field name="model">sale.couponprogram</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="program_type"/>
                <field name="state"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="coupon_tree_view" model="ir.ui.view">
        <field name="name">coupon.tree.view</field>
        <field name="model">sale.coupon</field>
        <field name="arch" type="xml">
            <tree string="Coupons" create="false" edit="false">
                <field name="coupon_code"/>
                <field name="used_by_partner_id"/>
                <field name="expiration_date"/>
                <field name="nbr_used"/>
                <field name="reward_name"/>
                <field name="used_in_order_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="coupon_form_view" model="ir.ui.view">
        <field name="name">coupon.form.view</field>
        <field name="model">sale.coupon</field>
        <field name="arch" type="xml">
            <form string="Coupons" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="coupon_code"/>
                        <field name="state"/>
                        <field name="nbr_used"/>
                        <field name="reward_name"/>
                        <field name="used_in_order_id"/>
                        <field name="used_by_partner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="wizard_form_view" model="ir.ui.view">
        <field name="name">wizard.form.coupon</field>
        <field name="model">sale.manual.coupon</field>
        <field name="arch" type="xml">
            <form string="Generate Coupons">
                <group style="width: 250px">
                    <field name="nbr_coupons"/>
                </group>
                <footer>
                    <button name="generate_coupon" type="object" string="Generate" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_view_to_get_coupon" model="ir.ui.view">
        <field name="name">wizard.form.get.coupon</field>
        <field name="model">sale.get.coupon</field>
        <field name="arch" type="xml">
            <form string="Apply coupon">
                <group style="width: 400px">
                    <field name="textbox_coupon_code"/>
                </group>
                <footer>
                    <button name="process_coupon" string="Apply Coupon" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_coupon_tree" model="ir.actions.act_window">
        <field name="context">{}</field><!-- force empty -->
        <field name="name">Coupons</field>
        <field name="res_model">sale.coupon</field>
        <field name="view_id" ref="coupon_tree_view"/>
    </record>

    <record id="action_sale_coupon_configuration" model="ir.actions.act_window">
        <field name="name">Sale Coupon Program</field>
        <field name="res_model">sale.couponprogram</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a new type of coupon.
            </p>
            <p>
                Use coupon to allow your customer to buy a service and subscribe to this service later from your shop.
            </p>
        </field>
    </record>
        <menuitem id="base.menu_sales_config" parent="base.menu_base_config" sequence="1" name="Sales"/>
        <menuitem action="action_sale_coupon_configuration" id="base.menu_coupon_type_config" parent="base.menu_sales_config"/>
  </data>
</odoo>
