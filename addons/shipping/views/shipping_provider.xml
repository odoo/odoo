        <!-- Top menu item -->

        <!-- menu categories -->

        <menuitem name="Shipping" id="root_shipping_menu" parent="base.menu_administration"/>

        <!-- actions -->

        <menuitem name="Shipping Provider" id="shipping.menu_1_list" parent="root_shipping_menu"
