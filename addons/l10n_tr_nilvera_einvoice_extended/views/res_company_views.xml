<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_l10n_tr_nilvera_extended" model="ir.ui.view">
        <field name="name">res.company.form.inherit.l10n_tr_nilvera_extended</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="l10n_tr_tax_office_id" string="Tax Office" invisible="country_code != 'TR'"/>
            </xpath>
        </field>
    </record>
</odoo>
