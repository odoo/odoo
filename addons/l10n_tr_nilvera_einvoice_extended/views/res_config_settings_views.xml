<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_l10n_tr_nilvera_extended" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n_tr_nilvera_extended</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_tr_nilvera.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='l10n_tr_nilvera_settings']/div/div[hasclass('o_setting_right_pane')]" position="inside">
                <div class="row" groups="base.group_no_one">
                    <label string="Export Alias" for="l10n_tr_nilvera_export_alias" class="col-lg-3 o_light_label"/>
                    <field name="l10n_tr_nilvera_export_alias"/>
                </div>
                <div class="alert alert-warning o_setting_box" groups="base.group_no_one" role="alert">
                    <p>
                        <span class="fw-bold">Warning:</span> Changing the Export Alias will cause issues for export invoice scenario.
                    </p>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
