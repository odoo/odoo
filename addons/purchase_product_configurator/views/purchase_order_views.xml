<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_view_form" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.purchase.product.configurator</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_id']" position="after">
                <field name="product_template_attribute_value_ids" invisible="1"/>
                <field name="product_no_variant_attribute_value_ids" invisible="1"/>
                <field name="is_configurable_product" invisible="1"/>
                <field name="product_template_id"
                    string="Product"
                    attrs="{
                        'readonly': [('state', 'in', ('purchase', 'to approve','done', 'cancel'))],
                        'required': [('display_type', '=', False)],
                    }"
                    options="{'no_open': True}"
                    context="{'partner_id': parent.partner_id}"
                    widget="pol_product_many2one"/>
                <field name="product_custom_attribute_value_ids" invisible="1" >
                    <tree>
                        <field name="custom_product_template_attribute_value_id" />
                        <field name="custom_value" />
                    </tree>
                </field>
            </xpath>
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="optional">hide</attribute>
                <attribute name="string">Product Variant</attribute>
            </xpath>
        </field>
    </record>

</odoo>
