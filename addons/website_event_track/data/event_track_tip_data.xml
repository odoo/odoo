<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="web.tip" id="event_track_tip_1">
        <field name="description">Switch to the calendar view to see the availability of each room.</field>
        <field name="action_id" ref="action_event_track_from_event"/>
        <field name="model">event.track</field>
        <field name="mode">kanban</field>
        <field name="trigger_selector">.o_kanban_record:visible</field>
        <field name="highlight_selector">button[data-view-type=calendar]</field>
        <field name="end_event">mousedown</field>
        <field name="placement">bottom</field>
    </record>
</odoo>
