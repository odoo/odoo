<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Stages -->
    <record id="project_project_stage_0" model="project.project.stage">
        <field name="sequence">10</field>
        <field name="name">To Do</field>
    </record>

    <record id="project_project_stage_1" model="project.project.stage">
        <field name="sequence">15</field>
        <field name="name">In Progress</field>
    </record>

    <record id="project_project_stage_2" model="project.project.stage">
        <field name="sequence">20</field>
        <field name="name">Done</field>
        <field name="fold" eval="True"/>
    </record>

    <record id="project_project_stage_3" model="project.project.stage">
        <field name="sequence">25</field>
        <field name="name">Cancelled</field>
        <field name="fold" eval="True"/>
    </record>

        <!-- Project Stages  For Main company-->
    <record id="project_project_main_stage_0" model="project.project.stage">
        <field name="sequence">30</field>
        <field name="name">Specification</field>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <record id="project_project_main_stage_1" model="project.project.stage">
        <field name="sequence">35</field>
        <field name="name">Development</field>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <record id="project_project_main_stage_2" model="project.project.stage">
        <field name="sequence">40</field>
        <field name="name">Deployed</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="fold" eval="True"/>
    </record>
</odoo>
