<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="portal_projects" model="portal.entry">
        <field name="name">Projects</field>
        <field name="description">Follow the evolution of your projects</field>
        <field name="url">/my/projects</field>
        <field name="image" type="base64" file="web/static/img/folder.svg"/>
        <field name="placeholder_count">project_count</field>
        <field name="category">service_category</field>
        <field name="sequence" eval="90"/>
    </record>

    <record id="portal_tasks" model="portal.entry">
        <field name="name">Tasks</field>
        <field name="description">Follow and comments tasks of your projects</field>
        <field name="url">/my/tasks</field>
        <field name="image" type="base64" file="project/static/src/img/tasks.svg"/>
        <field name="placeholder_count">task_count</field>
        <field name="category">service_category</field>
        <field name="sequence" eval="100"/>
    </record>
</odoo>
