<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="day_of_week_widget">
        <table class="o_dow_widget">
            <thead>
                <tr>
                    <th t-foreach="widget.labels" t-as="label">
                        <t t-esc="label"/>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="o_dow_days" />
            </tbody>
        </table>
    </t>

    <div t-name="project.ProjectTaskAction" class="o_project_action"></div>

    <div t-name="project.ControlPanel" t-inherit="web.ControlPanel" t-inherit-mode="primary" owl="1">
        <xpath expr="//ol[hasclass('breadcrumb')]" position="inside">
            <li t-if="show_project_update" class="o_project_updates_breadcrumb">Hello World</li>
        </xpath>
    </div>

    <div t-name="project.ProjectUpdateWidget" owl="1" t-on-click="_onClickStatus">
        <span class="color o_status"><t t-esc="status" /></span>
        <span class="status">Project status : <t t-esc="name" /></span>
    </div>

    <div t-name="project.ProjectUpdateWidget" owl="1" t-on-click="_onClickStatus">
        <span class="color o_status"><t t-esc="status" /></span>
        <span class="status">Project status : <t t-esc="name" /></span>
    </div>
</templates>
