<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="project.ProjectKanbanView.Buttons" t-inherit="web.KanbanView.Buttons" t-inherit-mode="primary">
        <button class="btn btn-primary o-kanban-button-new" position="attributes">
            <attribute name="t-if">env.searchModel._context.render_project_templates</attribute>
        </button>
        <button class="btn btn-primary o-kanban-button-new" position="after">
            <ProjectTemplateDropdown t-if="!env.inDialog and canCreate and !env.searchModel._context.render_project_templates"
                onCreate="() => this.createRecord()"
                newButtonClasses="'btn btn-primary o-kanban-button-new'"
                context="props.context"
                isDisabled="isNewButtonDisabled"
            />
        </button>
    </t>
</templates>
