<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="project.ProjectListView.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="primary">
        <button class="btn btn-primary o_list_button_add" position="attributes">
            <attribute name="t-if">env.searchModel._context.render_project_templates</attribute>
        </button>
        <button class="btn btn-primary o_list_button_add" position="after">
            <ProjectTemplateDropdown t-if="!env.inDialog and !editedRecord and activeActions.create and !env.searchModel._context.render_project_templates"
                onCreate="() => this.onClickCreate()"
                newButtonClasses="'btn btn-primary o_list_button_add'"
                context="props.context"
            />
        </button>
    </t>
</templates>
