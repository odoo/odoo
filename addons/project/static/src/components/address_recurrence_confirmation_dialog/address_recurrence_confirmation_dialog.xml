<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="project.AddressRecurrenceConfirmationDialog" t-inherit="web.ConfirmationDialog" t-inherit-mode="primary" owl="1">
        <xpath expr="//Dialog" position="attributes">
            <attribute name="title">title</attribute>
        </xpath>
        <xpath expr="//t[@t-set-slot='footer']" position="before">
            <div>
                <p t-esc="question"/>
                <div>
                    <input type="radio"
                           class="form-check-input o_radio_input me-2"
                           name="recurrenceUpdate" value="this" checked="1"
                           t-on-change="() => props.onChangeRecurrenceUpdate('this')"
                    />
                    <label for="this" t-esc="thisLabel"/>
                </div>
                <div>
                    <input type="radio"
                           class="form-check-input o_radio_input me-2"
                           name="recurrenceUpdate" value="future"
                           t-on-change="() => props.onChangeRecurrenceUpdate('future')"
                    />
                    <label for="future" t-esc="futureLabel"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//button[@t-on-click='_confirm']" position="attributes">
            <attribute name="t-esc">title</attribute>
        </xpath>
    </t>

</templates>
