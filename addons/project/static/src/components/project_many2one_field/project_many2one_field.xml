<templates>

    <t t-name="project.ProjectMany2OneField">
        <div class="d-flex align-items-center gap-1">
            <t t-set="isPrivateTask" t-value="props.readonly and !props.record.data.project_id"/>
            <Many2One t-if="!isPrivateTask" t-props="m2oProps"/>
            <span
                t-if="isPrivateTask and !props.record.data.is_template"
                class="text-danger fst-italic text-muted"
                t-out="labelRegularTask"
            />
            <span
                t-if="isPrivateTask and props.record.data.is_template"
                class="text-muted"
                t-out="labelTemplateTask"
            />
        </div>
    </t>

</templates>
