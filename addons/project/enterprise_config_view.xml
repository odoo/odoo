<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_enterprise_config_settings" model="ir.ui.view">
        <field name="name">project enterprise settings</field>
        <field name="model">project.config.settings</field>
        <field name="inherit_id" ref="project.view_config_settings"/>
        <field name="priority" eval="32"/>
        <field name="arch" type="xml">
            <group name="project_management" position="after">
                <group>
                    <field name="module_project_timesheet_synchro" class="oe_inline" widget="upgrade_boolean"/>
                    <field name="module_project_forecast" class="oe_inline" widget="upgrade_boolean"/>
                    <field name="module_web_gantt" class="oe_inline" widget="upgrade_boolean"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
