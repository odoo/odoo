<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="assets_backend" name="project assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/project/static/src/css/project.css"/>
                <script type="text/javascript" src="/project/static/src/js/project.js"></script>
                <script type="text/javascript" src="/project/static/src/js/project_task_kanban_examples.js"></script>
                <script type="text/javascript" src="/project/static/src/js/tour.js"></script>
                <link rel="stylesheet" type="text/scss" href="/project/static/src/scss/project_dashboard.scss"/>
            </xpath>
        </template>

        <template id="assets_frontend" inherit_id="web.assets_frontend" name="Rating Project Assets">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/scss" href="/project/static/src/scss/portal_rating.scss"/>
                <link rel="stylesheet" type="text/css" href="/project/static/src/css/project_portal.css"/>
                <script type="text/javascript" src="/project/static/src/js/portal_rating.js"/>
            </xpath>
        </template>

        <template id="assets_common" inherit_id="web.assets_common" name="Project Common Assets">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/project/static/src/js/tour_portal.js"></script>
            </xpath>
        </template>

        <template id="assets_public_project" name="Project Portal Assets">
            <link rel="stylesheet" type="text/css" href="/project/static/src/css/project_portal.css"/>

            <script type="text/javascript" src="/project/static/src/js/portal_abstract_controller.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_basic_fields.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_chatter.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_field_many2one.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_kanban_model.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_mail_basic_view.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_mail_thread.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_tour_manager.js"></script>

            <script type="text/javascript" src="/project/static/src/js/portal_webclient_view.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_kanban.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_form.js"></script>
            <script type="text/javascript" src="/project/static/src/js/portal_project.js"></script>
        </template>

        <template id="qunit_suite" name="project_test" inherit_id="web.qunit_suite">
             <xpath expr="//t[@t-set='head']" position="inside">
                 <script type="text/javascript" src="/project/static/tests/project_tests.js"></script>
            </xpath>
        </template>
</odoo>
