<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_update_view_form" model="ir.ui.view">
        <field name="name">project.update.view.form</field>
        <field name="model">project.task.type</field>
        <field name="arch" type="xml">
            <form string="Project Update" delete="0">
                <div class="row">
                    <div class>
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="o_text_overflow" placeholder="Project Update Title"/>
                            </h1>
                        </div>
                        <group>
                            <field name="status" widget="many2one_status" options="{'no_open': True,'no_create': True}"/>
                            <field name="progress" widget="progressbar"/>
                        </group>
                        <field name="description"/>
                    </div>
                    <div>
                        About this project
                        <field name="project">
                            <form>
                                <field name="name"/>
                                <field name="manager_id" widget="many2one_avatar_user"/>
                                <span class="fa fa-calendar-o"></span><field name="date_deadline" widget="many2one_avatar_user"/> 
                            </form>
                        </field>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="open_project_update_form" model="ir.actions.act_window">
        <field name="name">Project Update</field>
        <field name="res_model">project.task.type</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="task_type_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new project update for followers
            </p><p>
            Post updates about the project, it's current status and some notes to
            keep the followers up-to-date !
            </p>
        </field>
    </record>
</odoo>