<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ThreadPreview" t-inherit-mode="extension">
        <xpath expr="//*[hasclass('o_ThreadPreview_messageBody')]" position="replace">
            <t t-if="thread.lastMessage and thread.lastMessage.ratingVal">
                Rating: <t t-esc="thread.lastMessage.ratingVal"/>.
            </t>
            <t t-else="">$0</t>
        </xpath>
    </t>
</templates>
