<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_invoice_form_l10n_sg" model="ir.ui.view">
            <field name="name">l10n_sg.invoice.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fiscal_position_id']" position="after">
                    <field name="l10n_sg_permit_number" attrs="{'invisible': [('country_code', '!=', 'SG')]}"/>
                    <field name="l10n_sg_permit_number_date" attrs="{'invisible': [('country_code', '!=', 'SG')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
