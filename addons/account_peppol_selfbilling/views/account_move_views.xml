<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form_inherit_self_billing" model="ir.ui.view">
        <field name="name">account.move.form.inherit.self.billing</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="can_send_as_self_invoice" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_invoice_sent'][hasclass('oe_highlight')]" position="attributes">
                <attribute name="invisible" add="not can_send_as_self_invoice" separator=" and "/>
            </xpath>
            <xpath expr="//button[@name='action_invoice_sent'][not(hasclass('oe_highlight'))]" position="attributes">
                <attribute name="invisible" add="not can_send_as_self_invoice" separator=" and "/>
            </xpath>
        </field>
    </record>
</odoo>
