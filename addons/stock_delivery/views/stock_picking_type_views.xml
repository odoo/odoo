<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_picking_type_form_delivery">
        <field name="name">stock.picking.type.list.delivery</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence_code']" position="after">
                <field name="print_label" invisible="code not in ['internal', 'outgoing']"/>
            </xpath>
            <field name="auto_print_reception_report_labels" position="after">
                <div colspan="2" class="alert alert-warning" role="alert">
                    <a type="action" name="%(open_shipping_labels_report)d" string="Carrier Labels"/>
                    and <a type="action" name="%(open_export_docs_report)d" string="Export Documents"/>
                    are uploaded to the chatter when the picking is validated. If you want to
                    print them automatically on validation, you need to configure a printer on the
                    report form.
                </div>
                <field name="auto_print_carrier_labels" string="Carrier Labels" invisible="code == 'incoming'"/>
                <field name="auto_print_export_documents" string="Export Documents" invisible="code == 'incoming'"/>
            </field>
        </field>
    </record>

</odoo>
