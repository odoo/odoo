<?xml version="1.0" encoding="utf-8"?>
<templates>

    <div t-name="account.TaxGroupCustomField" owl="1">
        <table class="o_inner_group oe_subtotal_footer border-0 my-O"  style="min-width: 100%;">
            <tbody>
                <t t-foreach="taxGroups.value" t-as="taxGroup">
                    <tr>
                        <td class="o_td_label o_tax_group_name">
                            <label class="o_form_label" t-esc="taxGroup.tax_group_name"/>
                        </td>
                        <td class="o_tax_group_editable" t-att-data-tax-group-id="taxGroup.tax_group_id">
                            <TaxGroupComponent taxGroup="taxGroup" record="record" displayEditWidget="displayEditWidget" t-on-change-tax-group="_onChangeTaxValueByTaxGroup"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </div>

    <div t-name="account.TaxGroupComponent" owl="1">
        <t t-if="props.displayEditWidget">
            <t t-if="['edit', 'disable'].includes(state.value)">
                <span class="o_tax_group_edit_input">
                    <input type="text" t-ref="taxValueInput" class="o_field_float o_field_number o_input" t-att-disabled="state.value === 'disable'" t-on-blur.prevent="_onChangeTaxValue()"/>
                </span>
            </t>
            <t t-else="">
                <span class="o_tax_group_edit" t-on-click.prevent="setState('edit')">
                    <i class="fa fa-pencil"></i>
                    <span class="o_tax_group_amount_value">
                        <t t-esc="props.taxGroup.formated_tax_group_amount"/>
                    </span>
                </span>
            </t>
        </t>
        <t t-else="">
            <span class="o_tax_group_amount_value">
                <t t-esc="props.taxGroup.formated_tax_group_amount"/>
            </span>
        </t>
    </div>

</templates>
