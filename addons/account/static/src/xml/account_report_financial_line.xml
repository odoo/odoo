<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="footNoteTextarea">
        <div class="mt32 mb32">
            <label t-att-for="'footnote' + footNoteSeqNum"><t t-esc="footNoteSeqNum"/></label>
            <textarea t-att-name="'footnote' + footNoteSeqNum" rows='4' class="form-control" placeholder="Insert foot note here"></textarea>
            <button class="btn btn-primary saveFootNote">Save</button>
        </div>
    </t>
    <t t-name="supFootNoteSeqNum">
         <sup><b class='oe-account-footnote-sup'><a t-att-href="'#footnote'+footNoteSeqNum"><t t-esc="footNoteSeqNum"/></a></b></sup>
    </t>
    <t t-name="savedFootNote">
        <p class="footnote" t-att-id="'footnote'+num">
            <span class='text'><t t-raw="num+'. '+note"/></span>
            <span class='footnoteIcons'><i class="fa fa-pencil-square"></i><i class="fa fa-trash-o"></i> </span>
        </p>
    </t>
    <t t-name="foldable">
        <span t-att-class="'oe-account-foldable ' + lineId + ' oe-account-caret-icon'"><i class="fa fa-caret-down"></i></span>
    </t>
    <t t-name="unfoldable">
        <span t-att-class="'oe-account-unfoldable ' + lineId + ' oe-account-caret-icon'"><i class="fa fa-caret-right"></i></span>
    </t>
    <t t-name="pencilIcon">
        <span class="pencilIcon"><i class="fa fa-pencil-square"></i></span>
    </t>
    <t t-name="addSummary">
        <div class="alert alert-info alert-dismissible addSummary" role="alert">
            <span><input type='text' class="form-control" name='summary' placeholder='Click to add a summary' /></span>
        </div>
    </t>
    <t t-name="editSummary">
        <label for="summary">Edit summary :</label>
        <textarea name="summary" rows='4' class="form-control"></textarea>
        <button class="btn btn-primary saveSummary">Save</button>
    </t>
    <t t-name="savedSummary">
        <div class="alert alert-info alert-dismissible oe-account-saved-summary" role="alert">
            <button type="button" class="close closeSummary"><span aria-hidden="true">&amp;times;</span><span class="sr-only">Close</span></button>
            <button type="button" class="close"><i style="font-size: 16px;" class="fa fa-pencil"></i> </button>
            <span><t t-raw="summary" /></span>
        </div>
    </t>
    <t t-name="fiscalYearAlert">
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&amp;times;</span><span class="sr-only">Close</span></button>
            <strong>Warning!</strong> No fiscal year was found. Using the current civil year.
        </div>
    </t>
    <t t-name="editContent"><t t-if="num > 0"><t t-esc="num" />. </t><textarea t-att-name="edit" rows='4' class="form-control"><t t-esc="text" /></textarea><button class="btn btn-primary saveContent">Save</button></t>
    <t t-name="report_financial_line">
        <t t-set="column" t-value="0" />
        <tr t-att-class="l.type + ' ' + l.id">
            <td>
                <a t-if="l.type != 'account_id' &amp; l.type != 'tax_id' &amp; l.type != 'move_line_id'"><span t-att-class="l.type + ' ' + l.id + ' oe-account-domain-line'"><t t-esc="l.name"/></span></a>
                <div class="dropdown" t-if="l.type == 'account_id' || l.type == 'move_line_id'">
                    <a data-toggle="dropdown">
                        <span t-att-class="l.type + ' ' + l.id + ' oe-account-domain-line'"><t t-esc="l.name"></t></span><span class="caret"></span>
                    </a>
                    <t t-if="l.footnotes[column] != undefined">
                        <t t-set='footNoteSeqNum' t-value="l.footnotes[column]" />
                        <t t-call="supFootNoteSeqNum" />
                    </t>
                    <ul class="dropdown-menu domainDropdowm" role="menu" aria-labelledby="dLabel">
                        <li role="presentation" t-if="l.type == 'account_id'"><a role="menuitem" tabindex="-1" class="oe-account-to-graph">Graph</a></li>
                        <li role="presentation" t-if="l.type == 'account_id'"><a role="menuitem" tabindex="-1" class="oe-account-to-amls">Account Move Lines</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" class="oe-account-add-footnote">Add Footnote</a></li>
                        <li role="presentation" t-if="l.type == 'tax_id'"><a role="menuitem" tabindex="-1" class="oe-account-to-net">See net move lines</a></li>
                        <li role="presentation" t-if="l.type == 'tax_id'"><a role="menuitem" tabindex="-1" class="oe-account-to-tax">See tax move lines</a></li>
                        <li role="presentation" t-if="l.type == 'move_line_id'"><a role="menuitem" tabindex="-1" t-att-class="'oe-account-to-move-line ' + l.move_id">See journal entries</a></li>
                    </ul>
                </div>
            </td>
            <t t-foreach="l.columns" t-as="c">
                <t t-set="column" t-value="column + 1" />
                <td class="text-right" style="white-space: nowrap;">
                    <t t-if="typeof c == 'string' || typeof c == 'number'"><span style="font-style: italic;">
			<span style="color: black;"><i class="fa fa-pencil-square"></i></span>
                        <t t-raw="c"/>
                        <t t-if="l.footnotes[column] != undefined">
                            <t t-set='footNoteSeqNum' t-value="l.footnotes[column]" />
                            <t t-call="supFootNoteSeqNum" />
                        </t>
                    </span></t>
                    <t t-if="typeof c != 'string' &amp; typeof c != 'number'"><span t-att-style="c[1] + 'font-style: italic;'">
			<span style="color: black;"><i class="fa fa-pencil-square"></i></span>
                        <t t-raw="c[0]"/>
                        <t t-if="l.footnotes[column] != undefined">
                            <t t-set='footNoteSeqNum' t-value="l.footnotes[column]" />
                            <t t-call="supFootNoteSeqNum" />
                        </t>
                    </span></t>
                </td>
            </t>
        </tr>
    </t>
</templates>
