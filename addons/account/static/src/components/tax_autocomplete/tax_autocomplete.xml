<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account.TaxAutoComplete" t-inherit="web.AutoComplete">
        <xpath expr="//t[@t-out='this.option.label']" position="replace">
            <t t-if="this.option.data.record.tax_scope">
                <div class="tax_autocomplete_grid">
                    <div t-out="this.option.label"/>
                    <div t-esc="this.option.data.record.tax_scope" class="text-muted"/>
                </div>
            </t>
            <t t-else="">
                <span t-out="this.option.label"/>
            </t>
        </xpath>
    </t>
</templates>
