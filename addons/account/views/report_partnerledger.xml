<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_partnerledger">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2>Partner Ledger</h2>

                <div class="row">
                    <div class="col-xs-3">
                        <strong>Journals:</strong>
                        <p t-esc="', '.join([ lt or '' for lt in get_journal(data) ])"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Partner's</strong>
                        <p t-esc="get_partners()"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Filter By:</strong>
                        <p>
                            <span t-if="data['filters'] == 'filter_no'">Not filtered</span>
                            <span t-if="data['filters'] == 'filter_date'">Filtered by date</span>
                            <p t-if="data['filters'] == 'filter_date'">
                                Date from : <span t-esc="data['date_from']"/><br />
                                Date to : <span t-esc="data['date_to']"/>
                            </p>
                            <span t-if="data['filters'] == 'unreconciled'">Filtered by Unreconciled Entries</span>
                        </p>
                    </div>
                    <div class="col-xs-3">
                        <strong>Target Moves:</strong>
                        <p t-esc="get_target_move(data)"/>
                    </div>
                </div>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>JRNL</th>
                            <th>Ref</th>
                            <th>Account</th>
                            <th>Entry Label</th>
                            <th>Debit</th>
                            <th>Credit</th>
                            <th>Balance</th>
                            <th t-if="data['amount_currency']">Currency</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="partners" t-as="partner">
                            <tr>
                                <td colspan="5">
                                    <strong t-esc="partner.ref"/>
                                    - <strong t-esc="partner.name"/>
                                </td>
                                <td class="text-right">
                                    <strong t-esc="sum_debit_partner(partner)"/>
                                </td>
                                <td class="text-right">
                                    <strong t-esc="sum_credit_partner(partner)"/>
                                </td>
                                <td class="text-right">
                                    <strong t-esc="sum_balance_partner(partner)" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                                </td> 
                            </tr>
                            <tr t-if="data['initial_balance']">
                                <td colspan="5">Initial Balance</td>
                                <td class="text-right">
                                    <span t-esc="get_intial_balance(partner)[0][0]"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="get_intial_balance(partner)[0][1]"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="get_intial_balance(partner)[0][2]" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                                </td>
                            </tr>
                            <tr t-foreach="lines(partner)" t-as="line">
                                <td>
                                    <span t-esc="line['date']"/>
                                </td>
                                <td>
                                    <span t-esc="line['code']"/>
                                </td>
                                <td>
                                    <span t-esc="line['move_name']"/>
                                </td>
                                <td>
                                    <span t-esc="line['a_code']"/>
                                </td>
                                <td>
                                    <span t-esc="line['ref']"/>-<span t-esc="line['name']"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line['debit']"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line['credit']"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line['progress']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                                </td>
                                <td t-if="data['amount_currency']">
                                    <span t-esc="line['amount_currency']"/>&amp;nbsp;<span t-esc="line['currency_code']"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
</odoo>
