<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_agedpartnerbalance">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2>Aged Trial Balance</h2>

                <div class="row mt32">
                    <div class="col-xs-3">
                        <strong>Start Date:</strong>
                        <p t-esc="data['date_from']"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Period Length (days)</strong>
                        <p t-esc="data['period_length']"/>
                    </div>
                </div>
                <div class="row mb32">
                    <div class="col-xs-3">
                        <strong>Partner's:</strong>
                        <p>
                            <span t-if="data['result_selection'] == 'customer'">Receivable Accounts</span>
                            <span t-if="data['result_selection'] == 'supplier'">Payable Accounts</span>
                            <span t-if="data['result_selection'] == 'customer_supplier'">Receivable and Payable Accounts</span>
                        </p>
                    </div>
                    <div class="col-xs-3">
                        <strong>Analysis Direction:</strong>
                        <p t-esc="data['direction_selection']"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Target Moves:</strong>
                        <p t-esc="get_target_move(data)"/>
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Partners</th>
                            <th class="text-right">
                                <span t-if="data['direction_selection'] == 'future'">Due</span>
                                <span t-if="data['direction_selection'] != 'future'">Not due</span>
                            </th>
                            <th class="text-right"><span t-esc="data['4']['name']"/></th>
                            <th class="text-right"><span t-esc="data['3']['name']"/></th>
                            <th class="text-right"><span t-esc="data['2']['name']"/></th>
                            <th class="text-right"><span t-esc="data['1']['name']"/></th>
                            <th class="text-right"><span t-esc="data['0']['name']"/></th>
                            <th class="text-right">Total</th>
                        </tr>
                        <tr t-if="get_lines(data) or get_lines_with_out_partner(data)">
                            <th>Account Total</th>
                            <th class="text-right"><span t-esc="get_direction(6)" t-esc-options='{"display_currency": "res_company.currency_id"}'/></th>
                            <th class="text-right"><span t-esc="get_for_period(4)" t-esc-options='{"display_currency": "res_company.currency_id"}'/></th>
                            <th class="text-right"><span t-esc="get_for_period(3)" t-esc-options='{"display_currency": "res_company.currency_id"}'/></th>
                            <th class="text-right"><span t-esc="get_for_period(2)" t-esc-options='{"display_currency": "res_company.currency_id"}'/></th>
                            <th class="text-right"><span t-esc="get_for_period(1)" t-esc-options='{"display_currency": "res_company.currency_id"}'/></th>
                            <th class="text-right"><span t-esc="get_for_period(0)" t-esc-options='{"display_currency": "res_company.currency_id"}'/></th>
                            <th class="text-right"><span t-esc="get_for_period(5)" t-esc-options='{"display_currency": "res_company.currency_id"}'/></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="get_lines(data)" t-as="partner">
                            <td>
                                <span t-esc="partner['name']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="partner['direction']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="partner['4']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="partner['3']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="partner['2']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="partner['1']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="partner['0']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="partner['total']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                        </tr>
                        <tr t-foreach="get_lines_with_out_partner(data)" t-as="not_partner">
                            <td>
                                <span t-esc="not_partner['name']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="not_partner['direction']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="not_partner['4']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="not_partner['3']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="not_partner['2']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="not_partner['1']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="not_partner['0']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-esc="not_partner['total']" t-esc-options='{"display_currency": "res_company.currency_id"}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
</odoo>
