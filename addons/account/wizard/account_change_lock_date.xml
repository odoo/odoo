<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_change_lock_date" model="ir.ui.view">
            <field name="name">account.change.lock.date.form</field>
            <field name="model">account.change.lock.date</field>
            <field name="arch" type="xml">
                <form string="Change the lock date">
                    <group col="4">
                        <field name="period_lock_date"/>
                        <field name="fy_lock_date"/>
                    </group>
                    <footer>
                        <button string="Change" name="change_lock_date" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_view_account_change_lock_date" model="ir.actions.act_window">
            <field name="name">Change the lock dates</field>
            <field name="res_model">account.change.lock.date</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_account_change_lock_date"/>
            <field name="target">new</field>
        </record>

        <menuitem action="action_view_account_change_lock_date" id="menu_action_change_lock_date" parent="account.menu_finance_entries" sequence="30"/>
    </data>
</openerp>
