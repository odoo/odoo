<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="web.tip" id="account_tip_1">
            <field name="title"><![CDATA[<b>Reconciliation on bank statement</b>]]></field>
            <field name="description">Click here to automatically reconcile your bank statement with the related entries. Do it later by using the "Periodic Processing" menu.</field>
            <field name="model">account.bank.statement</field>
            <field name="mode">form</field>
            <field name="trigger_selector">header button#reconcile_statement:visible</field>
            <field name="highlight_selector">header button#reconcile_statement</field>
            <field name="placement">bottom</field>
        </record>

        <record model="web.tip" id="account_tip_2">
            <field name="title"><![CDATA[<b>Generate a PDF file</b>]]></field>
            <field name="description">Click here to generate a PDF file of your financial reports (like Balance Sheet, Profit <![CDATA[&amp;]]> Loss, Ledgers, etc...)</field>
            <field name="model">account.bank.statement</field>
            <field name="mode">form</field>
            <field name="trigger_selector">header button#close_statement:visible</field>
            <field name="highlight_selector">.oe_secondary_menus_container a[data-menu='227']</field>
            <field name="placement">right</field>
        </record>
    </data>
</openerp>