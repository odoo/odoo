    <t t-name="purchase.DatetimePlaceholderField" t-inherit="web.DateTimeField" t-inherit-mode="primary">

        <xpath expr="//t[@t-if='props.readonly']" position="attributes">
            <attribute name="t-if">!props</attribute>
