<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="track_po_line_template">
        <div>
            <strong>The ordered quantity has been updated.</strong>
            <ul>
                <li><t t-esc="line.order_id.product_id.display_name"/>:</li>
                <li>Ordered Quantity:<t t-esc="line.product_qty" /> -&gt; <t t-esc="float(product_qty)"/></li>
                <t t-if='line.order_id.product_id.type in ("consu", "product")'>
                    <li>Received Quantity:<t t-esc="line.qty_received" /></li>
                </t>
                <li>Billed Quantity: <t t-esc="line.qty_invoiced"/></li>
            </ul>
        </div>
    </template>
</odoo>
