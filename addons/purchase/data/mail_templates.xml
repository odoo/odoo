<?xml version="1.0" encoding="utf-8"?>
<odoo><data noupdate="1">

    <template id="track_po_line_template">
        <div>
            <strong>The ordered quantity has been updated.</strong>
            <ul>
                <li><span t-field="line.product_id.display_name"/>:</li>
                Ordered Quantity: <span t-field="line.product_qty" /> -&gt; <t t-out="float(product_qty)" t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/><br/>
                <t t-if='line.order_id.product_id.type in ("consu", "product")'>
                    Received Quantity: <span t-field="line.qty_received" /><br/>
                </t>
                Billed Quantity: <span t-field="line.qty_invoiced"/>
            </ul>
        </div>
    </template>

    <template id="track_po_line_qty_received_template">
        <div>
            <strong>The received quantity has been updated.</strong>
            <ul>
                <li><span t-field="line.product_id.display_name"/>:</li>
                Received Quantity: <span t-field="line.qty_received" /> -&gt; <t t-out="float(qty_received)" t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/><br/>
            </ul>
        </div>
    </template>

</data></odoo>
