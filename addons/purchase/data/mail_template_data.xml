<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--Email template -->
        <record id="email_template_edi_purchase" model="mail.template">
            <field name="name">RFQ - Send by Email</field>
            <field name="email_from">${object.create_uid.name} ${('&lt;%s&gt;' % ((object.create_uid.email) if object.create_uid.email else '')|safe)}</field>
            <field name="subject">${object.company_id.name} Order (Ref ${object.name or 'n/a' })</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="report_purchase_quotation"/>
            <field name="report_name">RFQ_${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="xml">
<p>Dear
    <t t-esc="record.partner_id.child_ids[0].name if (record and record.partner_id.is_company and record.partner_id.child_ids) else record.partner_id.name"/>
,</p><p>
Here is, in attachment, a <t t-esc="record.state in ('draft', 'sent') and 'request for quotation' or 'purchase order confirmation'"/> <strong t-esc="record.name"/>
<t t-if="record.partner_ref">
    with reference: <t t-esc="record.partner_ref"/>
</t>
<t t-if="record.origin">
    (RFQ origin: <t t-esc="record.origin"/>)
</t>
amounting in <strong t-esc="'%s %s' % (record.amount_total, record.currency_id.name)"/>
from <t t-esc="record.company_id.name"/>.
</p>

<p>Do not hesitate to contact us, further you have any question.</p>
<p>Best regards,</p>
<p style="color:#888888;">
<t t-if="record.user_id and record.user_id.signature" t-raw="record.user_id.signature"/>
</p>
</field>
        </record>


        <!--Email template -->
        <record id="email_template_edi_purchase_done" model="mail.template">
            <field name="name">Purchase Order - Send by Email</field>
            <field name="email_from">${object.create_uid.name} ${('&lt;%s&gt;' % ((object.create_uid.email) if object.create_uid.email else '')|safe)}</field>
            <field name="subject">${object.company_id.name} Order (Ref ${object.name or 'n/a' })</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="action_report_purchase_order"/>
            <field name="report_name">PO_${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="xml">
<p>Dear <t t-esc="record.partner_id.name"/>
    <t t-if="record.partner_id.parent_id">
        (<i t-esc="record.partner_id.parent_id.name"/>)
    </t>
,</p><p>
Please find in attachment a <strong t-esc="'%s %s' % (record.state in ('draft', 'sent') and 'request for quotation' or 'purchase order confirmation', record.name)"/>
<t t-if="record.partner_ref">
    with reference: <t t-esc="record.partner_ref"/>
</t>
<t t-if="record.origin">
    (RFQ origin: <t t-esc="record.origin"/>)
</t>
amounting <strong t-esc="'%s %s' % (record.amount_total, record.currency_id.name)"/>
from <t t-esc="record.company_id.name"/>.
</p>

<p>You can reply to this email if you have any questions.</p>
<p>Thank you,</p>
</field>
        </record>


        <!--Default Notification Email template for invoices-->
        <record id="purchase.mail_template_data_notification_email_purchase_order" model="mail.template">
            <field name="name">Purchase Order Notification Email</field>
            <field name="subject">${object.subject}</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="xml">
              <html>
                <head></head>
                <body style="margin: 0; padding: 0;">
                <table border="0" width="100%" cellpadding="0" bgcolor="#ededed" style="padding: 20px; background-color: #ededed" summary="o_mail_notification">
                    <tbody>

                      <!-- HEADER -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#875A7B" style="min-width: 590px; background-color: rgb(135,90,123); padding: 20px;">
                            <tr>
                              <td valign="middle">
                                  <span style="font-size:20px; color:white; font-weight: bold;" t-esc="record.record_name"/>
                              </td>
                              <td valign="middle" align="right">
                                  <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="user.company_id.name">
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>

                      <!-- CONTENT -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#ffffff" style="min-width: 590px; background-color: rgb(255, 255, 255); padding: 20px;">
                            <tbody>
                              <td valign="top" style="font-family:Arial,Helvetica,sans-serif; color: #555; font-size: 14px;">
                                <t t-raw="record.body or safe"/>
                              </td>
                            </tbody>
                          </table>
                        </td>
                      </tr>

                      <!-- FOOTER -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#875A7B" style="min-width: 590px; background-color: rgb(135,90,123); padding: 20px;">
                            <tr>
                              <td valign="middle" align="left" style="color: #fff; padding-top: 10px; padding-bottom: 10px; font-size: 12px;">
                                <t t-esc="user.company_id.name"/><br/>
                                <t t-esc="user.company_id.phone or ''"/>
                              </td>
                              <td valign="middle" align="right" style="color: #fff; padding-top: 10px; padding-bottom: 10px; font-size: 12px;">
                                <a t-if="user.company_id.email" t-attf-href="mailto:#{user.company_id.email}" style="text-decoration:none; color: white;" t-esc="user.company_id.email"/><br/>
                                <a t-if="user.company_id.website" t-att-href="user.company_id.website" style="text-decoration:none; color: white;" t-esc="user.company_id.website"/>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                      <tr>
                        <td align="center">
                            Powered by <a href="https://www.odoo.com">Odoo</a>.
                        </td>
                      </tr>
                    </tbody>
                </table>
                </body>
                </html>
            </field>
        </record>






    </data>
</odoo>
