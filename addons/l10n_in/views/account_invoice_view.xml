<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="l10n_in_invoice_form_view_inherit" model="ir.ui.view">
        <field name="name">l10n_in.invoice.form.view.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="comment" position="before">
                <group><field name="amount_total_words"/></group>
            </field>
        </field>
    </record>

    <record id="l10n_in_invoice_supplier_form_inherit" model="ir.ui.view">
        <field name="name">l10n_in.invoice.supplier.form.view.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <field name="comment" position="before">
                <group><field name="amount_total_words"/></group>
            </field>
        </field>
    </record>

</odoo>
