<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form_inherit_l10n_in" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.l10n.in</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='loss_account_id']" position="after">
                <field name="l10n_in_import_export" attrs="{'invisible': [('type', 'not in', ['sale', 'purchase'])]}"/>
            </xpath>
            <field name="company_id" position="after">
                <field name="l10n_in_unit_id" domain="[('company_l10n_in_unit_id', '=', company_id)]" options="{'no_create': True}" groups="l10n_in.group_multi_operating_unit"/>
            </field>
        </field>
    </record>

    <record id="view_account_journal_tree_inherit_l10n_in" model="ir.ui.view">
        <field name="name">account.journal.tree.inherit.l10n_in</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_tree"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="l10n_in_unit_id" groups="l10n_in.group_multi_operating_unit"/>
            </field>
        </field>
    </record>
</odoo>
