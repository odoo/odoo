<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_partner_city_form" model="ir.ui.view">
        <field name="name">view_partner_city_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_address_format']//field[@name='city']" position="before">
                <field name="country_enforce_cities" invisible="1"/>
                <field name="city_id" class="o_address_city"
                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)], 'invisible': [('country_enforce_cities', '=', False)]}"/>
            </xpath>
            <xpath expr="//div[@class='o_address_format']//field[@name='city']" position="attributes">
                <attribute name="attrs">{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)], 'invisible': [('country_enforce_cities', '!=', False)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_partner_address_city_form" model="ir.ui.view">
        <field name="name">view_partner_address_city_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_address_form"/>
        <field name="arch" type="xml">
           <xpath expr="//div[@class='o_address_format']//field[@name='city']" position="before">
                <field name="country_enforce_cities" invisible="1"/>
                <field name="city_id" class="o_address_city"
                    attrs="{'invisible': [('country_enforce_cities', '=', False)]}"/>
           </xpath>
           <xpath expr="//div[@class='o_address_format']//field[@name='city']" position="attributes">
                <attribute name="attrs">{'invisible': [('country_enforce_cities', '!=', False)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
