<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="delivery.locationSelector.dialog">
        <Dialog
            title="this.title"
            bodyClass="'d-flex flex-column p-0 px-md-3'"
            contentClass="'o_location_selector h-100 overflow-hidden'"
        >
            <!-- Mobile view -->
            <t t-if="this.state.isSmall">
                <!-- Search bar -->
                <t t-call="delivery.locationSelector.searchbar"/>

                <!-- "List view / Map view" navigation -->
                <div class="nav nav-tabs">
                    <button
                        class="o_location_selector_mobile_tab btn flex-grow-1 border-0 rounded-0 py-3 bg-transparent"
                        t-att-class="{'border-bottom active': this.state.viewMode === 'list'}"
                        t-on-click="() => this.state.viewMode = 'list'"
                        t-out="this.listViewButtonLabel"
                    />
                    <button
                        class="o_location_selector_mobile_tab btn flex-grow-1 border-0 rounded-0 py-3 bg-transparent"
                        t-att-class="{'border-bottom border-primary fw-bold active' : this.state.viewMode === 'map'}"
                        t-on-click="() => this.state.viewMode = 'map'"
                        t-out="this.mapViewButtonLabel"
                    />
                </div>

                <!-- Component -->
                <div class="flex-grow-1 overflow-x-auto">
                    <t
                        t-if="this.locations.length"
                        t-component="this.mobileComponent"
                        locations="this.locations"
                        selectedLocationId="this.state.selectedLocationId.toString()"
                        setSelectedLocation.bind="this.setSelectedLocation"
                        validateSelection.bind="this.validateSelection"
                    />
                    <t t-else="">
                        <p t-if="this.state.error" class="p-3 fw-bold" t-out="this.errorMessage"/>
                        <div t-else="" class="position-absolute start-50 top-50 translate-middle">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden" t-out="this.loadingMessage"/>
                            </div>
                        </div>
                    </t>
                </div>
            </t>

            <!-- Desktop view -->
            <div t-else="" class="d-flex h-100 mx-0 mx-md-n3 overflow-hidden">

                <!-- List view -->
                <section
                    id="location_selector_list_view"
                    class="o_location_selector_view col-md-4 d-flex flex-grow-1 flex-column"
                >

                    <!-- Search bar -->
                    <t t-call="delivery.locationSelector.searchbar">
                        <t t-set="wrapClass" t-value="'d-flex'"/>
                    </t>

                    <!-- List group -->
                    <LocationList
                        t-if="this.locations.length"
                        locations="this.locations"
                        selectedLocationId="this.state.selectedLocationId.toString()"
                        setSelectedLocation.bind="this.setSelectedLocation"
                        validateSelection.bind="this.validateSelection"
                    />
                    <t t-else="">
                        <p t-if="this.state.error" class="p-3 fw-bold" t-out="this.errorMessage"/>
                        <div t-else="" class="position-absolute start-50 top-50 translate-middle">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden" t-out="this.loadingMessage"/>
                            </div>
                        </div>
                    </t>
                </section>

                <!-- Map view -->
                <section class="o_location_selector_view col-md-8 d-flex flex-grow-1 border-start">
                    <MapContainer
                        locations="this.locations"
                        selectedLocationId="this.state.selectedLocationId.toString()"
                        setSelectedLocation.bind="this.setSelectedLocation"
                        validateSelection.bind="this.validateSelection"
                    />
                </section>
            </div>

            <!-- Validation button in mobile view -->
            <t t-if="this.state.isSmall" t-set-slot="footer">
                <div class="w-100 m-0 border-top p-3">
                    <button
                        type="button"
                        id="submit_location_small"
                        class="btn btn-primary w-100"
                        t-att-disabled="!this.state.selectedLocationId"
                        t-on-click="this.validateSelection"
                        t-out="this.validationButtonLabel"
                    />
                </div>
            </t>
        </Dialog>
    </t>

    <t t-name="delivery.locationSelector.searchbar">
        <div role="search" class="input-group p-3 border-bottom" t-att-class="wrapClass">
            <input
                id="o_location_selector_search"
                class="search-query form-control oe_search_box border-0 text-bg-light"
                t-model.lazy="this.state.zipCode"
                t-att-placeholder="this.postalCodePlaceholder"
            />
            <button
                t-on-click="this.debouncedSearchButton"
                aria-label="Search"
                title="Search"
                class="btn btn-light"
            >
                <i class="oi oi-search"/>
            </button>
        </div>
    </t>
</templates>
