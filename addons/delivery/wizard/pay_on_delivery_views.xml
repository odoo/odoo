<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pay_on_delivery_form" model="ir.ui.view">
        <field name="name">pay.on.delivery</field>
        <field name="model">pay.on.delivery</field>
        <field name="arch" type="xml">
            <form string="Pay on Delivery">
                <t invisible="order_ids.length != 1">
                    A payment of <field name="amount_on_delivery"/> must be collected.
                </t>
                <t invisible="order_ids.length == 1">
                    A payment of <field name="amount_on_delivery"/> must be collected for
                    the delivery of <field name="next_order_id"/>.
                </t>
                <footer>
                    <button
                        name="action_confirm_next_payment"
                        type="object"
                        string="Confirm Payment"
                        class="btn btn-primary"
                        data-hotkey="q"
                    />
                    <button special="cancel" string="Cancel" data-hotkey="x"/>
                </footer>
                <field name="currency_id" invisible="1"/>
            </form>
        </field>
    </record>

</odoo>
