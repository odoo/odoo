<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="delivery_note_form_view" model="ir.ui.view">
        <field name="name">delivery.note.form</field>
        <field name="model">delivery.note</field>
        <field name="arch" type="xml">
            <form string="Delivery Note">
                <sheet>
                    <field name="note_line_ids" class="mx-n3 o_delivery_note_line_table"/>
                    <group>
                        <group name="tracking_details">
                            <field name="carrier_id"/>
                            <field name="carrier_tracking_ref"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button
                        string="Confirm Shipment"
                        name="delivery_note_confirm"
                        type="object"
                        class="btn-primary"
                    />
                    <button
                        string="Discard"
                        name="delivery_note_cancel"
                        type="object"
                        class="btn-secondary"
                    />
                </footer>
            </form>
        </field>
    </record>

</odoo>
