<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base.partner_demo_company_uz" model="res.partner" forcecreate="1">
        <field name="name">UZ Company</field>
        <field name="vat">203456789</field>
        <field name="street">Office 402</field>
        <field name="street2">Street 15</field>
        <field name="city">Mirzo-Ulugbek District</field>
        <field name="state_id" ref="base.state_uz_tk"/>
        <field name="country_id" ref="base.uz"/>
        <field name="zip">100123</field>
        <field name="phone">+998 123 123 1234</field>
        <field name="email">info@company.uzexample.com</field>
        <field name="website">www.uzexample.com</field>
        <field name="is_company" eval="True"/>
    </record>

    <record id="base.demo_company_uz" model="res.company" forcecreate="1">
        <field name="name">UZ Company</field>
        <field name="partner_id" ref="base.partner_demo_company_uz" />
    </record>

    <function model="res.company" name="_onchange_country_id">
        <value eval="[ref('base.demo_company_uz')]" />
    </function>

    <function model="res.users" name="write">
        <value eval="[ref('base.user_root'), ref('base.user_admin'), ref('base.user_demo')]" />
        <value eval="{'company_ids': [(Command.link(ref('base.demo_company_uz')))]}" />
    </function>

    <function model="account.chart.template" name="try_loading">
        <value eval="[]" />
        <value>uz</value>
        <value model="res.company" eval="obj().env.ref('base.demo_company_uz')" />
        <value name="install_demo" eval="True" />
    </function>
</odoo>
