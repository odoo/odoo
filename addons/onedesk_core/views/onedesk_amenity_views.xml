<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue list Amenity -->
    <record id="view_onedesk_amenity_list" model="ir.ui.view">
        <field name="name">onedesk.amenity.list</field>
        <field name="model">onedesk.amenity</field>
        <field name="arch" type="xml">
            <list string="Équipements">
                <field name="name"/>
                <field name="category"/>
                <field name="icon"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire Amenity -->
    <record id="view_onedesk_amenity_form" model="ir.ui.view">
        <field name="name">onedesk.amenity.form</field>
        <field name="model">onedesk.amenity</field>
        <field name="arch" type="xml">
            <form string="Équipement">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="icon"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue search Amenity -->
    <record id="view_onedesk_amenity_search" model="ir.ui.view">
        <field name="name">onedesk.amenity.search</field>
        <field name="model">onedesk.amenity</field>
        <field name="arch" type="xml">
            <search string="Recherche Équipements">
                <field name="name"/>
                <field name="category"/>
                <separator/>
                <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactifs" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Catégorie" name="group_category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Amenity -->
    <record id="action_onedesk_amenity" model="ir.actions.act_window">
        <field name="name">Équipements</field>
        <field name="res_model">onedesk.amenity</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
