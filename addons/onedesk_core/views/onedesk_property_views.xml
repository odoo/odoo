<odoo>
    <!-- Liste des propriétés -->
    <record id="view_property_list" model="ir.ui.view">
        <field name="name">onedesk.property.list</field>
        <field name="model">onedesk.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="address"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <!-- Formulaire -->
    <record id="view_property_form" model="ir.ui.view">
        <field name="name">onedesk.property.form</field>
        <field name="model">onedesk.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir la vue -->
    <record id="action_onedesk_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">onedesk.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu principal -->
    <menuitem id="menu_onedesk_root" name="OneDesk" sequence="10"
              web_icon="onedesk_core/static/description/icon.png"/>

    <!-- Sous-menu -->
    <menuitem id="menu_onedesk_property" name="Properties"
              parent="menu_onedesk_root"
              action="action_onedesk_property"/>

    <record id="view_property_calendar" model="ir.ui.view">
    <field name="name">property.calendar</field>
    <field name="model">onedesk.property</field>
    <field name="arch" type="xml">
        <calendar string="Calendrier des propriétés" date_start="date_start" date_stop="date_stop" color="user_id">
            <field name="name"/>
        </calendar>
    </field>
</record>

</odoo>
