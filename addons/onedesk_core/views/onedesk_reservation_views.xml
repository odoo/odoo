<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue list (tree → list pour Odoo 19) -->
    <record id="view_reservation_list" model="ir.ui.view">
        <field name="name">onedesk.reservation.list</field>
        <field name="model">onedesk.reservation</field>
        <field name="arch" type="xml">
            <list string="Réservations" multi_edit="1" sample="1"
                  decoration-success="state=='confirmed'"
                  decoration-info="state=='checked_in'"
                  decoration-muted="state in ['cancelled', 'no_show']">
                <field name="name"/>
                <field name="property_id"/>
                <field name="unit_id"/>
                <field name="partner_id" widget="many2one_avatar"/>
                <field name="start_date" widget="date"/>
                <field name="end_date" widget="date"/>
                <field name="nights"/>
                <field name="guest_count" optional="hide"/>
                <field name="state" widget="badge" decoration-success="state=='confirmed'" decoration-info="state=='checked_in'" decoration-warning="state=='draft'" decoration-danger="state=='cancelled'"/>
                <field name="total_price" widget="monetary" sum="Total"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="payment_status" widget="badge" optional="show" decoration-success="payment_status=='paid'" decoration-warning="payment_status=='pending'"/>
                <field name="source_platform" optional="hide"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Vue Kanban (Pipeline) -->
    <record id="view_reservation_kanban" model="ir.ui.view">
        <field name="name">onedesk.reservation.kanban</field>
        <field name="model">onedesk.reservation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="unit_id"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_price"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="activity_state"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="unit_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="partner_id" widget="many2one_avatar"/>
                                    <span><i class="fa fa-calendar"/> <field name="start_date" widget="date"/> → <field name="end_date" widget="date"/></span><br/>
                                    <span><i class="fa fa-moon-o"/> <field name="nights"/> nuit(s)</span><br/>
                                    <strong><field name="total_price" widget="monetary"/></strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="source_platform" widget="label" options="{'classes': {'airbnb': 'danger', 'booking': 'info', 'direct': 'success'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue formulaire enrichie -->
    <record id="view_reservation_form" model="ir.ui.view">
        <field name="name">onedesk.reservation.form</field>
        <field name="model">onedesk.reservation</field>
        <field name="arch" type="xml">
            <form string="Réservation">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_check_in" string="Check-in" type="object" class="oe_highlight"
                            invisible="state != 'confirmed'"/>
                    <button name="action_check_out" string="Check-out" type="object" class="oe_highlight"
                            invisible="state != 'checked_in'"/>
                    <button name="action_cancel" string="Annuler" type="object"
                            invisible="state in ['cancelled', 'checked_out', 'no_show']"/>
                    <button name="action_set_no_show" string="No-show" type="object"
                            invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,checked_in,checked_out"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_onedesk_task)d" type="action" class="oe_stat_button" icon="fa-tasks"
                                context="{'default_reservation_id': id}">
                            <field name="task_count" widget="statinfo" string="Tâches"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="ex: RES-00001"/></h1>
                    </div>

                    <group>
                        <group string="Logement">
                            <field name="property_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="unit_id" domain="[('property_id', '=', property_id)]" options="{'no_create_edit': True}"/>
                            <field name="confirmation_code"/>
                        </group>
                        <group string="Client">
                            <field name="partner_id"/>
                            <field name="guest_name"/>
                            <field name="guest_email" widget="email"/>
                            <field name="guest_phone" widget="phone"/>
                        </group>
                    </group>

                    <group>
                        <group string="Dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="nights" readonly="1"/>
                            <field name="actual_checkin_date" readonly="1" invisible="not actual_checkin_date"/>
                            <field name="actual_checkout_date" readonly="1" invisible="not actual_checkout_date"/>
                        </group>
                        <group string="Invités">
                            <field name="guest_count"/>
                            <field name="adults"/>
                            <field name="children"/>
                            <field name="infants"/>
                            <field name="pets"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Finances" name="finances">
                            <group>
                                <group string="Prix">
                                    <field name="currency_id"/>
                                    <field name="base_price"/>
                                    <field name="cleaning_fee"/>
                                    <field name="service_fee"/>
                                    <field name="extra_fee"/>
                                    <field name="tax_amount"/>
                                    <label for="total_price" class="fw-bold"/>
                                    <div class="fw-bold text-success">
                                        <field name="total_price" widget="monetary"/>
                                    </div>
                                </group>
                                <group string="Paiement">
                                    <field name="payment_status"/>
                                    <field name="payment_method"/>
                                    <field name="security_deposit"/>
                                    <field name="commission_rate"/>
                                    <field name="commission_amount"/>
                                </group>
                            </group>
                        </page>

                        <page string="Plateforme" name="platform">
                            <group>
                                <field name="source_platform"/>
                                <field name="booking_channel"/>
                                <field name="external_id"/>
                                <field name="integration_id"/>
                            </group>
                        </page>

                        <page string="Communication" name="communication">
                            <group>
                                <field name="check_in_instructions" widget="html"/>
                                <field name="special_requests"/>
                            </group>
                        </page>

                        <page string="Évaluations" name="reviews">
                            <group>
                                <field name="guest_rating"/>
                                <field name="host_rating"/>
                                <field name="review_text"/>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="guest_notes" placeholder="Notes visibles pour le client..."/>
                            <field name="internal_notes" placeholder="Notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_reservation_search" model="ir.ui.view">
        <field name="name">onedesk.reservation.search</field>
        <field name="model">onedesk.reservation</field>
        <field name="arch" type="xml">
            <search string="Recherche Réservations">
                <field name="name"/>
                <field name="unit_id"/>
                <field name="property_id"/>
                <field name="partner_id"/>
            </search>
        </field>
    </record>

    <!-- Vue Calendrier -->
    <record id="view_reservation_calendar" model="ir.ui.view">
        <field name="name">onedesk.reservation.calendar</field>
        <field name="model">onedesk.reservation</field>
        <field name="arch" type="xml">
            <calendar string="Réservations" date_start="start_date" date_stop="end_date" color="unit_id" mode="month">
                <field name="name"/>
                <field name="unit_id"/>
                <field name="partner_id"/>
                <field name="total_price"/>
            </calendar>
        </field>
    </record>

    <!-- Vue Graphique (Pivot & Graph) -->
    <record id="view_reservation_pivot" model="ir.ui.view">
        <field name="name">onedesk.reservation.pivot</field>
        <field name="model">onedesk.reservation</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Réservations" sample="1">
                <field name="property_id" type="row"/>
                <field name="start_date" interval="month" type="col"/>
                <field name="total_price" type="measure"/>
                <field name="nights" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_reservation_graph" model="ir.ui.view">
        <field name="name">onedesk.reservation.graph</field>
        <field name="model">onedesk.reservation</field>
        <field name="arch" type="xml">
            <graph string="Statistiques Réservations" sample="1">
                <field name="start_date" interval="month"/>
                <field name="total_price" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_reservations" model="ir.actions.act_window">
        <field name="name">Réservations</field>
        <field name="res_model">onedesk.reservation</field>
        <field name="view_mode">kanban,list,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première réservation !
            </p>
            <p>
                Gérez toutes vos réservations en un seul endroit.
            </p>
        </field>
    </record>

</odoo>
