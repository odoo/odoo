<odoo>
    <!-- Liste des tâches -->
    <record id="view_onedesk_task_list" model="ir.ui.view">
        <field name="name">onedesk.task.list</field>
        <field name="model">onedesk.task</field>
        <field name="arch" type="xml">
            <list string="Tâches du personnel">
                <field name="name"/>
                <field name="task_type"/>
                <field name="assigned_to"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="status"/>
                <field name="reservation_id"/>
            </list>
        </field>
    </record>

    <!-- Formulaire des tâches -->
    <record id="view_onedesk_task_form" model="ir.ui.view">
        <field name="name">onedesk.task.form</field>
        <field name="model">onedesk.task</field>
        <field name="arch" type="xml">
            <form string="Tâche du personnel">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="task_type"/>
                        <field name="assigned_to"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="status"/>
                        <field name="reservation_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour accéder aux tâches -->
    <record id="action_onedesk_task" model="ir.actions.act_window">
        <field name="name">Tâches</field>
        <field name="res_model">onedesk.task</field>
        <field name="view_mode">list,form,calendar</field>
    </record>

    <!-- Sous-menu sous OneDesk -->
    <menuitem id="menu_onedesk_task"
              name="Tâches"
              parent="menu_onedesk_root"
              action="action_onedesk_task"/>

    <!-- Vue calendrier -->
    <record id="view_onedesk_task_calendar" model="ir.ui.view">
        <field name="name">onedesk.task.calendar</field>
        <field name="model">onedesk.task</field>
        <field name="arch" type="xml">
            <calendar string="Tâches du personnel" date_start="date_start" date_stop="date_end">
                <field name="name"/>
                <field name="assigned_to"/>
            </calendar>
        </field>
    </record>
</odoo>
