<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_pos_alipay" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.alipay</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="alipay_client_id"
                    invisible="use_payment_terminal != 'alipay'"
                    required="use_payment_terminal == 'alipay'"/>
                <field name="alipay_location"
                    invisible="use_payment_terminal != 'alipay'"
                    required="use_payment_terminal == 'alipay'"/>
                <field name="alipay_private_key" password="True"
                    invisible="use_payment_terminal != 'alipay'"
                    required="use_payment_terminal == 'alipay'"/>
            </xpath>
        </field>
    </record>
</odoo>
