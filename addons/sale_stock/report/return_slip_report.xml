<odoo>
    <template id="report_return_slip_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="picking">
                <div class="page">
                    <t t-call="web.external_layout">
                        <t t-set="picking" t-value="picking.with_context(lang=picking._get_report_lang())"/>
                        <div class="oe_structure"/>
                        <div>
                            <img
                                t-if="picking.company_id.logo"
                                t-att-src="image_data_uri(picking.company_id.logo)"
                                style="height:30%; padding-top: 4pt; padding-bottom: 2pt"
                            />
                        </div>
                        <div class="row mt-3">
                            <div class="col-8">
                                <h2>RETURN OF <t t-out="picking.name"/></h2>
                                <p>
                                    Please put this document inside your return parcel.<br/>
                                </p>
                                <p class="mt-4 mb-0 fw-bold">Your parcel must be sent to this address:</p>
                                <div
                                    t-out="wh_address_id"
                                    t-options='{
                                        "widget": "contact",
                                        "fields": ["address", "name", "phone"],
                                        "no_marker": True,
                                        "phone_icons": True,
                                    }'
                                />
                            </div>
                            <div class="col-4 text-center mt-1">
                                <div
                                    t-field="picking.name"
                                    t-options="{
                                        'widget': 'barcode',
                                        'width': 200,
                                        'height': 40,
                                        'humanreadable': 1,
                                    }"
                                />
                            </div>
                        </div>

                        <!-- Return reason -->
                        <div class="row mt-4">
                            <div class="col-8">
                                <strong>Return reason</strong>
                                <div t-out="return_reason.name"/>
                            </div>
                            <div class="col-4 text-center mt-1">
                                <t
                                    t-set="return_barcode"
                                    t-value="'OBTRETU:%s' % (return_reason.id)"
                                />
                                <div
                                    t-out="return_barcode"
                                    t-options="{
                                        'widget': 'barcode',
                                        'width': 200,
                                        'height': 40,
                                    }"
                                />
                            </div>
                        </div>

                        <!-- Product list -->
                        <div class="mt-4">
                            <strong>Returned products</strong>
                            <t t-set="return_products" t-value="return_product_qty_by_delivery[picking.id]"/>
                            <div
                                t-foreach="picking.move_ids.filtered(
                                    lambda move: move.product_id.id in return_products.keys()
                                )"
                                t-as="move"
                                class="d-flex mt-2 align-items-center"
                            >
                                <img
                                    t-att-src="(
                                        move.product_id.image_128 and image_data_uri(move.product_id.image_128)
                                        or '/web/static/img/placeholder.png'
                                    )"
                                    style="width: 64px; height: 64px; object-fit: contain;"
                                />
                                <div class="flex-grow-1 ms-2">
                                    <strong t-out="move.product_id.with_context(display_default_code=False).display_name"/>
                                    <br/>
                                    Quantity:
                                    <span
                                        t-out="return_products[move.product_id.id]"
                                    /><br/>
                                    <t t-if="move.lot_ids">
                                        Lot/Serial Number:
                                        <span t-out="', '.join(move.lot_ids.mapped('name'))"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_return_slip" model="ir.actions.report">
        <field name="name">Return Label</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sale_stock.report_return_slip_document</field>
        <field name="report_file">sale_stock.report_return_slip_document</field>
        <field name="print_report_name">'Return - %s' % (object.name)</field>
        <field name="binding_model_id" eval="False"/> <!-- Don't display it under Print menu -->
        <field name="binding_type">report</field>
    </record>
</odoo>
