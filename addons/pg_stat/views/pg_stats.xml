<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="pg_stats_tree">
        <field name="name">pg.stats.tree</field>
        <field name="model">pg.stats</field>
        <field name="arch" type="xml">
            <tree string="PG Stats">
                <field name="tablename" optional="hide"/>
                <field name="attname"/>
                <field name="inherited" optional="hide"/>
                <field name="null_frac"/>
                <field name="avg_width"/>
                <field name="n_distinct"/>
                <field name="most_common_freqs"/>
                <field name="correlation"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="pg_stats_search">
        <field name="name">pg.stats.search</field>
        <field name="model">pg.stats</field>
        <field name="arch" type="xml">
            <search string="PG Stats">
                <field name="tablename"/>
                <field name="attname"/>
                <group expand="0" string="Group By">
                    <filter string="Table Name" name="group_by_tablename" domain="[]" context="{'group_by': 'tablename'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pg_stats_action">
        <field name="name">PG Stats</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pg.stats</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_by_tablename': 1}</field>
    </record>
</odoo>
