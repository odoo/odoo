<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">delivery.carrier</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='toggle_prod_environment']" position="attributes">
                <attribute name="invisible" add="delivery_type == 'gelato'" separator=" or "/>
            </xpath>
            <xpath expr="//button[@name='toggle_debug']" position="attributes">
                <attribute name="invisible" add="delivery_type == 'gelato'" separator=" or "/>
            </xpath>
        </field>
    </record>

</odoo>