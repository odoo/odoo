<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.gelato</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='gelato_connector']" position="inside">
                <div>
                    <div>
                        <label for="gelato_api_key" class="o_light_label mr8"/>
                        <field name="gelato_api_key" password="True"/>
                    </div>
                    <div>
                        <label for="gelato_webhook_secret" class="o_light_label mr8"/>
                        <field name="gelato_webhook_secret"/>
                    </div>
                    <div class="mt8">
                        <button name="%(delivery.action_delivery_carrier_form)d" icon="oi-arrow-right" type="action" string="Manage delivery methods" class="btn-link" context="{'search_default_delivery_type': 'gelato'}"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
