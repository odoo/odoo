<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_custom_form" model="ir.ui.view">
            <field name="name">sale.order.custom.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='partner_details']/field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="context">
                        {
                            'default_type':'invoice', 'show_address': False, 'show_vat': False, 'default_parent_id': partner_id
                        }
                    </attribute>
                </xpath>

                <xpath expr="//group[@name='partner_details']/field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="context">
                        {
                            'default_type':'delivery', 'show_address': False, 'show_vat': False, 'default_parent_id': partner_id
                        }
                    </attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>