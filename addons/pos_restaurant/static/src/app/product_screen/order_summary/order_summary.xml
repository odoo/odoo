<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_restaurant.OrderSummary" t-inherit="point_of_sale.OrderSummary" t-inherit-mode="extension">
        <xpath expr="//OrderWidget/t[@t-set-slot='details']" position="inside">
            <t t-set="table" t-value="pos.config.module_pos_restaurant and pos.models['restaurant.table'].get(pos.get_order().tableId)" />
            <button t-if="table and !pos.tableHasOrders(table)" class="btn btn-primary py-2 rounded-0" style="border:none; font-size: 20px;" t-on-click="releaseTable">Release table</button>
        </xpath>
    </t>
</templates>
