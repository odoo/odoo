<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_restaurant.OrderCourse">
        <div t-att-class="{'mb-1' : this.course.isEmpty()}">
            <div class="order-course-name p-2 text-truncate d-flex"
                 t-att-class="{
                  'o_colorlist_item_color_10' : this.course.isSelected(),
                  'bg-secondary': !this.course.isSelected(),
                  'cursor-pointer': !this.course.fired}"
                 t-on-click="(event) => this.clickCourse(event, this.course)">
                <span class="fw-bolder" t-out="this.course.name"/>
                <span t-if="this.course.fired" class="rounded text-bg-info fs-6 px-2 ms-auto">Fired</span>
            </div>
            <t t-foreach="this.comboSortedLines" t-as="line" t-key="line_index">
                <t t-slot="default" line="line" />
            </t>
        </div>
    </t>
</templates>
