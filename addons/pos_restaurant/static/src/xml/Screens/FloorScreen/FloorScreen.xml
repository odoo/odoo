<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="FloorScreen" owl="1">
        <div class="floor-screen screen">
            <div class="screen-content-flexbox">
                <t t-if="env.pos.floors.length > 1">
                    <div class="floor-selector">
                        <t t-foreach="env.pos.floors" t-as="floor" t-key="floor.id">
                            <span class="button button-floor" t-att-class="{ active: floor.id === state.selectedFloorId }" t-on-click="selectFloor(floor)">
                                <t t-esc="floor.name" />
                            </span>
                        </t>
                    </div>
                </t>
                <div t-if="env.isMobile and !isFloorEmpty" class="buttons" t-attf-style="background: {{state.floorBackground}};">
                    <t t-if="state.view === 'floor-map' and !('ontouchstart' in window)">
                        <span class="button" t-on-click="scaleIn">
                            <i class="fa fa-minus" role="img" aria-label="Zoom in" title="Zoom in" />
                        </span>
                        <span class="button" t-on-click="scaleOut">
                            <i class="fa fa-plus" role="img" aria-label="Zoom out" title="Zoom out" />
                        </span>
                    </t>
                    <span class="button" t-on-click="state.view='list'">
                        <i class="fa fa-list-ul" role="img" aria-label="Floor list" title="Floor list" />
                    </span>
                    <span class="button" t-on-click="state.view='floor-map'">
                        <i class="fa fa-map" role="img" aria-label="Floor map" title="Floor map" />
                    </span>
                </div>
                <div t-if="state.view === 'list'" class="floor-list" t-attf-style="background: {{state.floorBackground}};">
                    <t t-foreach="activeTables" t-as="table" t-key="table.id">
                        <div class="floor-list-item" t-on-click="trigger('select-table', table)">
                            <div class="order-row">
                                <div class="col">Table</div>
                                <div class="col end"><t t-esc="table.name"/></div>
                            </div>
                            <div class="order-row">
                                <div class="col">Order count</div>
                                <div class="col end"><t t-esc="orderCount(table)"/></div>
                            </div>
                            <div class="order-row">
                                <div class="col">Number of customer</div>
                                <div class="col end"><t t-esc="env.pos.get_customer_count(table)"/>/<t t-esc="table.seats"/></div>
                            </div>
                        </div>
                    </t>
                </div>
                <div t-if="state.view === 'floor-map'"
                     class="floor-map"
                     t-on-touchstart="_onPinchStart"
                     t-on-touchmove="_onPinchMove"
                     t-on-touchend="_onPinchEnd"
                     t-on-click="trigger('deselect-table')"
                     t-ref="floor-map-ref"
                     >
                    <div t-if="isFloorEmpty" class="empty-floor">
                        <span>This floor has no tables yet, use the </span>
                        <i class="fa fa-plus" role="img" aria-label="Add button" title="Add button"></i>
                        <span> button in the editing toolbar to create new tables.</span>
                    </div>
                    <div t-else="" class="tables">
                        <t t-foreach="activeTables" t-as="table" t-key="table.id">
                            <TableWidget t-if="table.id !== state.selectedTableId" table="table" />
                            <EditableTable t-else="" table="table" />
                        </t>
                    </div>
                    <span t-if="env.pos.user.role == 'manager'" class="edit-button editing" t-att-class="{ active: state.isEditMode }" t-on-click.stop="toggleEditMode"
                          t-attf-style="top:{{state.floorMapScrollTop}}px;">
                        <i class="fa fa-pencil" role="img" aria-label="Edit" title="Edit"></i>
                    </span>
                    <EditBar t-if="state.isEditMode" selectedTable="selectedTable" floorMapScrollTop="state.floorMapScrollTop"/>
                </div>
            </div>
        </div>
    </t>
</templates>
