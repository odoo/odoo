<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_restaurant.Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//ul[hasclass('info-list')]" position="inside">
            <t t-if="props.line.getNote()">
                <li class="info orderline-note p-2 my-1 rounded text-bg-info text-info bg-opacity-25 text-break">
                    <i class="fa fa-tag me-1" role="img" aria-label="Note" title="Note"/>
                    <t t-esc="props.line.getNote()" />
                </li>
            </t>
        </xpath>
    </t>

</templates>
