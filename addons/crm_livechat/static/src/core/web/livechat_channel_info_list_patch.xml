<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="crm_livechat.channelInfoList" t-inherit="im_livechat.channelInfoList" t-inherit-mode="extension">
        <xpath expr="//*[hasclass('o-livechat-channelInfoList-outcome')]" position="after">
            <div t-if="props.thread.crm_leads.length" class="d-flex flex-column bg-inherit gap-1">
                <h3 class="pt-3">Open leads</h3>
                <t t-foreach="props.thread.crm_leads" t-as="lead" t-key="lead.localId">
                    <a
                        class="btn btn-sm btn-secondary d-flex align-items-center justify-content-center gap-1 rounded-3"
                        t-att-href="this.stateToUrl({ model: 'crm.lead', resId: lead.id })"
                        t-att-data-oe-id="lead.id"
                        t-att-data-oe-model="'crm.lead'"
                        target="_blank"
                        contenteditable="false"
                    >
                        <i class="fa fa-external-link opacity-75"/>
                        <span class="fw-bold" t-esc="lead.name"/>
                    </a>
                </t>
            </div>
        </xpath>
    </t>
</templates>
