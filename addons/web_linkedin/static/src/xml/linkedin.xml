<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="FieldChar.linkedin">
        <img class="oe_linkedin_img" t-att-src='_s + "/web_linkedin/static/src/img/Linkedin_blue.png"'/>
        <div class="oe_linkedin_input"/>
    </t>
    <t t-name="FieldChar.linkedin_url">
        <a class="oe_linkedin_url" href="#" target="_blank"><img t-att-src='_s + "/web_linkedin/static/src/img/linkedin-profile.jpeg"'/></a>
    </t>
    <t t-name="Linkedin.popup">
        <div>
            <h2 class="oe_linkedin_popup">Contacts</h2>
            <div class="oe_linkedin_pop_p">
                <div class="oe_linkedin_people_entities"></div>
                <div class="oe_linkedin_show_more"></div>
            </div>
            <h2 class="oe_linkedin_popup">Companies</h2>
            <div class="oe_linkedin_pop_c">
                <div class="oe_linkedin_company_entities"></div>
                <div class="oe_linkedin_show_more"></div>
            </div>
        </div>
    </t>
    <t t-name="Linkedin.show_more">
        <button t-attf-class="#{class} oe_button">Show more... (<span class="oe_linkedin_remaining"><t t-esc="remaining"></t></span> remaining)</button>
    </t>
    <t t-name="Linkedin.EntityWidget">
        <div class="oe_linkedin_entity">
            <span class="oe_linkedin_thumb">
                <span>
                    <img t-att-src='_s + "/web_linkedin/static/src/img/ghost_profile_60x60_v1.png"'/>
                </span>
            </span>
            <h3/>
            <div class="oe_linkedin_entity_headline" />
        </div>
    </t>
    <t t-name="LinkedIn.DisabledWarning">
        <div>
            <img t-att-src='_s + "/web/static/src/img/warning.png"' style="float: left; margin: 5px"/>
            <p>LinkedIn access was not enabled on this server.</p>
            <p>Please ask your administrator to configure it in Settings > Configuration > Sales > Social Network Integration.</p>
            <p>LinkedIn: <t t-raw="error.name"/></p>
        </div>
    </t>
    <t t-name="LinkedIn.loginInformation">
        <div class="oe_linkedin_authentified">If "<b><t t-raw="firstName"/> <t t-raw="lastName"/></b>" is not your account, <a class="oe_linkedin_logout">please click here to logout</a>.</div>
    </t>
    <t t-name="LinkedIn.AdvancedSearch">
        <div class="oe_linkedin_search_title">
            <img class="oe_linkedin_img_search" t-att-src='_s + "/web_linkedin/static/src/img/Linkedin_blue.png"' />
            <span>Search</span>
        </div>
        <div class="oe_linkedin_advanced_search input-group">
             <input name="search" placeholder="Search by url or keywords..." class="form-control"/>
             <span class="input-group-addon oe_linkedin_search" title="Search"></span>
        </div>
    </t>

    <t t-name="KanbanView.linkedinButton">
        <t t-if="widget.is_action_enabled('create')">
            <span class="oe_fade">or</span>
        </t>
        <div class="oe_kanban_import_contact">
            <a t-if="result.redirect_url" t-attf-href="#{result.redirect_url}" class="oe_bold">Import Contacts from Linkedin</a>
            <a t-if="!result.redirect_url" href="#" class="oe_bold">Import Contacts from Linkedin</a>
        </div>
    </t>

    <t t-name="LinkedIn.PeopleAccess">
        <div class="oe_linkedin_popup">
            <strong class="text-danger">You does not have access to People Search. </strong><strong><a href='https://help.linkedin.com/app/api-dvr' target='NEW'>Click Here</a> to access People search using <a href='https://developer.linkedin.com/blog/vetted-api-access' target='NEW'>Vetted API Access. </a></strong>
        </div>
    </t>
</templates>
