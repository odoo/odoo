<openerp>
    <data>
        <record id="view_general_configuration_linkedin" model="ir.ui.view">
            <field name="name">General Settings</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <xpath expr="/form/group/group[@string='External Accesses']" position='replace'>
                    <group string="External Accesses">
                        <field name="module_share"/>
                        <field name="module_portal"/>
                    </group>
                    <group colspan="4" col="8">
	                    <separator string="Linkedin Settings" colspan="4"/>
	                    <newline/>
	                    <field name="default_linkedin_api_key"/>
	                    <newline/>
	                    <field name="generate_key" nolabel="1" colspan="4" widget="text_html"/>
	                </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
