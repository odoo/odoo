<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_grid_view_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit.purchase.product.matrix</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='variants']/group[@name='product_add_mode']" position="inside">
                <group attrs="{'invisible': [('has_configurable_attributes', '=', False)]}" string="Purchase Variant Selection">
                    <field name="has_configurable_attributes" invisible="1"/>
                    <field name="purchase_add_mode" widget="radio" nolabel="1" colspan="2"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_matrix" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.matrix</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="grid" invisible="1"/>
                <field name="grid_product_tmpl_id" invisible="1"/>
                <field name="grid_update" invisible="1"/>
            </field>
            <xpath expr="//tree/field[@name='product_id']" position="after">
                <field name="purchase_add_mode" invisible="1"/>
            </xpath>
            <group name="other_info" position="inside">
                <field name="report_grids" groups="base.group_no_one"/>
            </group>
        </field>
    </record>

</odoo>
