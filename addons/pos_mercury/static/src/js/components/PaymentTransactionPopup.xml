<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_mercury.PaymentTransactionPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup">
                <p class="title">
                    <t t-esc="props.title"></t>
                </p>
                <p class="body">
                    <t t-raw="state.message"></t>
                </p>
                <div t-if="state.confirmButtonIsShown" class="footer">
                    <div class="button cancel" t-on-click="props.respondWith()">
                        <t t-esc="props.confirmText"></t>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
