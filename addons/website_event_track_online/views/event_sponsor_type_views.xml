<?xml version="1.0"?>
<odoo>
    <record id="event_sponsor_type_view_tree" model="ir.ui.view">
        <field name="name">event.sponsor.type.view.tree.inherit.online</field>
        <field name="model">event.sponsor.type</field>
        <field name="inherit_id" ref="website_event_track.event_sponsor_type_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="display_ribbon_style"/>
            </xpath>
        </field>
    </record>

    <record id="event_sponsor_type_view_form" model="ir.ui.view">
        <field name="name">event.sponsor.type.view.form.inherit.online</field>
        <field name="model">event.sponsor.type</field>
        <field name="inherit_id" ref="website_event_track.event_sponsor_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="display_ribbon_style"/>
            </xpath>
        </field>
    </record>
</odoo>
