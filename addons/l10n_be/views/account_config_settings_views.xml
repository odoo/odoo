<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_config_settings_view_form_inherit_l10n_be" model="ir.ui.view">
        <field name="name">account.config.settings.form.inherit.l10n.be</field>
        <field name="model">account.config.settings</field>
        <field name="inherit_id" ref="account.account_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_l10n_be_edi"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="E-Invoicing (Belgium)"/>
                        <div class="text-muted">
                            Generate invoices in XML format
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
