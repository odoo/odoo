<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n_be</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" id="struct_comm">
                    <div class="o_setting_left_pane">
                        <field name="module_l10n_be_invoice" class="oe_inline"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_l10n_be_invoice"/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                        <div class="text-muted">
                            Provide your customers with a structured communication on the invoices to ease the payment reconciliation
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
