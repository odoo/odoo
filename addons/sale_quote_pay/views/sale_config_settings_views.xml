<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_config_settings_view_form_inherit_sale_quote_pay" model="ir.ui.view">
        <field name="name">sale.config.settings.inherit.sale.quote.pay</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sale.sale_config_settings_view_form_inherit_sale"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_quote_pay']" position="replace">
                <div attrs="{'invisible': [('module_sale_quote_pay','=',False)]}" class='mt16'>
                    <field name="sale_quote_type" class="o_light_label" widget="radio"/>
                    <div attrs="{'invisible': [('sale_quote_type','!=', 'payment')]}">
                        <button name='%(payment.action_payment_acquirer)d' icon="fa-arrow-right" type="action" string="Payment Methods" class="btn-link"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
