<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="test_inline_template">
        <div t-attf-id="test-container_{{acquirer_id}}">
            <div class="row mt-8">
                <div class="form-group col-lg-12">
                    <input name="acquirer_id" type="hidden" id="acquirer_id" t-att-value="id"/>
                    <input name="partner_id" type="hidden" t-att-value="partner_id"/>
                </div>
                <div class="form-group col-lg-12">
                    <input type="number" name="cc_number" id="cc_number" class="form-control" placeholder="Card number"
                           data-is-required="true"/>
                </div>
                <div class="form-group col-lg-5">
                    <input type="text" name="cc_holder_name" id="cc_holder_name" class="form-control"
                           placeholder="Cardholder name" data-is-required="true"/>
                </div>
                <div class="form-group col-lg-3">
                    <input type="number" name="cc_expiry" id="cc_expiry" class="form-control" maxlength="7"
                           placeholder="Expires (MM / YY)" data-is-required="true"/>
                </div>
                <div class="form-group col-lg-4">
                    <input type="number" name="cvc" id="cc_cvc" class="form-control" maxlength="4" placeholder="CVC"
                           data-is-required="true"/>
                </div>
            </div>
        </div>
    </template>
</odoo>
