<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_acquirer_view_form_inherit_payment_wepay" model="ir.ui.view">
        <field name="name">payment.acquirer.view.form.inherit.payment.wepay</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'wepay')]}">
                    <field name="wepay_user_type" widget="radio"/>
                    <button type="object" name="create_account" string="Create Account" class="oe_highlight" attrs="{'invisible': [('wepay_user_type', '!=', 'newuser')]}"/>
                    <field name="wepay_account_id" attrs="{'invisible': [('wepay_user_type', '=', 'newuser')],'required': [('wepay_user_type', '=', 'existinguser')]}"/>
                    <field name="wepay_client_id" attrs="{'invisible': [('wepay_user_type', '=', 'newuser')],'required': [('wepay_user_type', '=', 'existinguser')]}"/>
                    <field name="wepay_access_token" attrs="{'invisible': [('wepay_user_type', '=', 'newuser')],'required': [('wepay_user_type', '=', 'existinguser')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
