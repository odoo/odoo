<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <form t-name="ShowAndHidePassword" name="change_password_form" method="POST" aria-atomic="true">
        <div class="o_form_view">
            <table class="o_group o_inner_group o_label_nowrap">
                <tr>
                    <td class="o_td_label">
                        <label for="old_pwd" class="o_form_label">Old Password</label>
                    </td>
                    <td width="100%">
                        <div class="d-flex align-items-center justify-content-center">
                            <input type="password" class="o_field_widget o_input" name="old_pwd" minlength="1" autofocus="autofocus" autocomplete="current-password"/>
                            <i class="fa fa-eye show__password o_field_widget" style="width: 28px; cursor: pointer; text-align: center;"></i>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="o_td_label">
                        <label for="new_password" class="o_form_label">New Password</label>
                    </td>
                    <td width="100%">
                        <div class="d-flex align-items-center justify-content-center">
                            <input type="password" class="o_field_widget o_input" name="new_password" minlength="1" autocomplete="new-password"/>
                            <i class="fa fa-eye show__password o_field_widget" style="width: 28px; cursor: pointer; text-align: center;"></i>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="o_td_label">
                        <label for="confirm_pwd" class="o_form_label">New Password (Confirmation)</label>
                    </td>
                    <td width="100%">
                        <div class="d-flex align-items-center justify-content-center">
                            <input type="password" class="o_field_widget o_input" name="confirm_pwd" minlength="1" autocomplete="new-password"/>
                            <i class="fa fa-eye show__password o_field_widget" style="width: 28px; cursor: pointer; text-align: center;"></i>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <button type="button" class="btn btn-primary oe_form_button">Change Password</button>
        <button type="button" class="btn btn-secondary oe_form_button oe_form_button_cancel" href="javascript:void(0)">Cancel</button>
    </form>

</templates>
