<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="hide_or_show_password.CharFieldPasswordEye" owl="1">
        <t t-if="props.readonly">
            <span
                class="field_readonly"
                t-att-field-name="props.name"
                t-att-class="{
                    'o_password_eye': props.showOrHidePassword
                }"
                t-att-type="props.isPassword ? 'password' : 'text'"
                t-esc="formattedValue"
            />
            <!-- SHOW BUTTON EYE -->
            <t t-if="props.showOrHidePassword and props.isPassword">
                <PasswordEyeButton
                    fieldName="props.name"
                    fieldReadonly="props.readonly"
                    fieldValue="props.value"
                />
            </t>
        </t>
        <t t-else="">
            <input
                class="o_input"
                t-att-field-name="props.name"
                t-att-class="{
                    'o_field_translate': props.isTranslatable, 
                    'o_password_eye': props.showOrHidePassword
                }"
                t-att-id="props.id"
                t-att-type="props.isPassword ? 'password' : 'text'"
                t-att-autocomplete="props.autocomplete or (props.isPassword ? 'new-password' : 'off')"
                t-att-maxlength="props.maxLength > 0 and props.maxLength"
                t-att-placeholder="props.placeholder"
                t-ref="input"
            />
            <!-- SHOW BUTTON EYE -->
            <t t-if="props.showOrHidePassword and props.isPassword">
                <PasswordEyeButton
                    fieldName="props.name"
                    isTranslatable="props.isTranslatable"
                    fieldReadonly="props.readonly"
                />
            </t>
            <t t-if="props.isTranslatable">
                <TranslationButton
                    fieldName="props.name"
                    record="props.record"
                    updateField="props.update"
                />
            </t>
        </t>
    </t>

</templates>
