<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order.IncrementCounter" owl="1">
        <div class="o_self_order_incr_button btn-group text-center border-light mb-1" role="group" aria-label="Quantity select">
            <button type="button"
                    t-on-click = "() => props.onClick(false)" 
                    class="btn btn-light rounded-circle"> - </button>
            <div class="d-flex align-items-center px-4 fw-bold" t-esc="props.value"/>
            <button type="button" 
                    t-on-click = "() => props.onClick(true)" 
                    class="btn btn-light rounded-circle"> + </button>
        </div>
    </t>
</templates>
