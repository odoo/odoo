<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order.AttributeSelection" owl="1">
        <div class="o_kiosk-attribute_selection">
            <div class="attribute_name py-1 mt-3 mb-4 fw-bold">
                <t t-if="!state.showResume">
                    <h1>Choose your <span t-esc="attribute.name" /></h1>
                </t>
                <t t-else="">
                    <h1>Your resume</h1>
                </t>
            </div>
            <div t-if="!state.showResume" class="attribute-selection-content align-items-center justify-content-start">
                <div class="row row-cols-3 g-3">
                    <t t-foreach="attribute.values" t-as="value" t-key="value.id">
                        <div class="col">
                            <label t-attf-for="{{ attribute.id }}_{{ value.id }}" t-attf-class="{{ this.props.productState.selectedVariants[attribute.name] == value.name ? 'border-2 border-primary' : '' }} o_kiosk-card d-flex btn btn-light flex-column align-items-center justify-content-center p-0 rounded border overflow-hidden">
                                <div class="name position-relative d-flex flex-column justify-content-center align-items-center flex-grow-1 w-100 py-2 text-center">
                                    <h2 class="m-0" t-esc="value.name" />
                                    <span t-if="value.price_extra.list_price">
                                        + <t t-esc="selfOrder.formatMonetary(value.price_extra.list_price)" />
                                    </span>
                                    <span t-if="this.props.productState.selectedVariants[attribute.name] == value.name" class="selected-badge position-absolute top-0 start-50 translate-middle-x px-3 rounded-bottom text-bg-primary">
                                        Selected
                                    </span>

                                </div>
                            </label>
                        </div>
                        <input
                            type="radio"
                            class="d-none"
                            t-att-value="value.id"
                            t-on-click="attributeClicked"
                            t-attf-id="{{ attribute.id }}_{{ value.id }}"
                            t-model="this.props.productState.selectedVariants[attribute.id]" />
                    </t>
                </div>
            </div>
            <div t-else="" class="attribute-selection-content d-flex flex-column gap-3">
                <t t-foreach="attributeSelected" t-as="value" t-key="value.name">
                    <div class="d-flex flex-row overflow-hidden rounded shadow-sm">
                        <div class="name position-relative d-flex flex-row justify-content-center align-items-center w-100 flex-grow-1 p-3 bg-view text-center">
                            <div class="d-flex flex-column flex-grow-1 align-items-start">
                                <h2 class="m-0" t-esc="value.name" />
                                <span class="px-1" t-esc="value.value" />
                            </div>
                            <button class="btn btn-secondary btn-lg px-5 py-2" t-on-click="() => this.editAttribute(value.name)">
                                EDIT
                            </button>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
