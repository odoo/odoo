<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order.OrderWidget">
        <div
            class="page-buttons bg-view z-1"
            t-att-class="{
                'border-top' : !this.props.removeTopClasses

            }">
            <div class="o_self_footer container o_self_container px-kiosk-p-4 d-flex flex-nowrap py-3">
                <button t-attf-class="btn btn-secondary btn-lg h-auto w-auto opacity-75 py-2 px-3 d-sm-none" t-att-class="this.leftButton.icon" t-on-click="this.onClickleftButton" />
                <button t-attf-class="btn btn-secondary btn-lg d-none d-sm-inline text-nowrap btn-back btn-cancel" t-on-click="this.onClickleftButton" t-esc="this.leftButton.name" />
                <div class="d-flex flex-nowrap ms-2 ms-sm-4 w-100 justify-content-end">
                    <div class="d-flex align-items-center flex-shrink-0 me-2 me-sm-4" >
                        <div class="to-order d-flex flex-column align-items-start justify-content-center h-100 rounded-4" t-if="this.selfOrder.router.activeSlot === 'product_list'" t-on-click="this.props.action">
                            <h4 class="d-none d-sm-block text-muted opacity-75">Total</h4>
                            <div class="d-flex align-items-center">
                                <t t-set="orderLineNotSend" t-value="this.lineNotSend"/>
                                <div class="fs-4 fw-bold o-so-tabular-nums rounded-pill py-1 px-3 px-md-4 text-bg-secondary" t-esc="orderLineNotSend.count"/>
                                <div class="fs-2 fw-bold o-so-tabular-nums mx-2 text-primary">
                                    <t t-if="this.selfOrder.config.iface_tax_included === 'total'" t-esc="this.selfOrder.formatMonetary(orderLineNotSend.priceWithTax)"/>
                                    <t t-else="" t-esc="this.selfOrder.formatMonetary(orderLineNotSend.priceWithoutTax)"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button t-if="this.buttonToShow.label" t-attf-class="cart btn btn-primary btn-lg text-truncate {{ this.buttonToShow.disabled ? 'disabled' : '' }}" t-on-click="this.props.action" t-esc="this.buttonToShow.label"/>
                </div>
            </div>
        </div>
    </t>
</templates>
