<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_self_view_pos_config_tree" model="ir.ui.view">
        <field name="name">pos.self.pos.config.tree.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="status" />
            </xpath>
        </field>
    </record>

    <record id="pos_self_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='restaurant_on_create']//setting" position="after">
                <setting>
                        <field name="self_order_kiosk" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
