<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_preset_form" model="ir.ui.view">
        <field name="name">pos.preset.form</field>
        <field name="model">pos.preset</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_preset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='resource']" position="after">
                <page string="Self Ordering" name="self_ordering">
                    <group>
                        <group>
                            <field name="available_in_self" />
                            <field name="service_at" invisible="not available_in_self" />
                            <field
                                name="delivery_from_address"
                                widget="google_address_autocomplete"
                                invisible="not available_in_self or service_at != 'delivery'"
                                options="{'street': 'delivery_from_address', 'city': 'delivery_from_city', 'zip': 'delivery_from_zip', 'state_id': 'delivery_from_state_id', 'country_id': 'delivery_from_country_id'}"
                            />
                            <field name="delivery_from_city" invisible="1" />
                            <field name="delivery_from_zip" invisible="1" />
                            <field name="delivery_from_country_id" invisible="1" />
                            <field name="delivery_from_state_id" invisible="1" />
                            <field name="delivery_product_price" invisible="not available_in_self or service_at != 'delivery'" />
                            <field name="free_delivery_min_amount" invisible="not available_in_self or service_at != 'delivery'" />
                            <field name="delivery_max_distance_km" invisible="not available_in_self or service_at != 'delivery'" />
                        </group>
                        <group>
                            <field name="mail_template_id" invisible="not available_in_self" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_pos_preset_tree" model="ir.ui.view">
        <field name="name">pos.preset.list</field>
        <field name="model">pos.preset</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_preset_tree"/>
        <field name="arch" type="xml">
            <field name="color" position="before">
                <field name="available_in_self"/>
            </field>
        </field>
    </record>
</odoo>
