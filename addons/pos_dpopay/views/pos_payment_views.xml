<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_payment_form_inherited_pos_dpopay" model="ir.ui.view">
        <field name="name">pos.payment.form.inherit.pos.dpopay</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='transaction_id']" position='after'>
                <field name="dpopay_rrn" invisible="not dpopay_rrn"/>
                <field name="dpopay_transaction_ref" invisible="not dpopay_transaction_ref"/>
                <field name="dpopay_mobile_money_phone" invisible="not dpopay_mobile_money_phone"/>
            </xpath>
        </field>
    </record>
</odoo>
