<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="im_livechat_channel_form_view" model="ir.ui.view">
            <field name="name">im_livechat.channel.form.with.website_published</field>
            <field name="model">im_livechat.channel</field>
            <field name="inherit_id" ref="im_livechat.support_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button class="oe_inline oe_stat_button" name="open_website_url"
                        type="object" icon="fa-globe">
                        <field name="website_published" widget="website_button"/>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
