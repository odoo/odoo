<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="website_config_settings_view_form" model="ir.ui.view">
        <field name="name">Website livechat settings</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website.view_website_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='live_chat_install_setting']/div/div/div[@class='content-group']" position="replace">
                <div class="content-group">
                    <hr class="mt8 mb8" />
                    <div class="row">
                        <label class="col-md-4 oe_light_label" for="channel_id"/>
                        <field name="channel_id" class="col-md-8 oe_inline"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    </data>
</odoo>
