<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="im_livechat.LivechatButton" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o-livechat-LivechatButton')]" position="attributes">
            <attribute name="class" remove="rounded-top-2 pt-3 pb-2 px-3" add="d-flex justify-content-center align-items-center shadow rounded-circle mb-5 fa fa-commenting" separator=" "/>
            <attribute name="t-attf-style" add="font-size: 24px; width: 56px; height: 56px; min-width: 56px;"  separator=" "/>
        </xpath>
    </t>
</templates>
