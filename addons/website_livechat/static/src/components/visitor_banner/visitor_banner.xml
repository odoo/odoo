<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="website_livechat.VisitorBannerView" owl="1">
        <div class="o_VisitorBannerView" t-attf-class="{{ className }}" t-ref="root">
            <div class="o_VisitorBannerView_sidebar">
                <div class="o_VisitorBannerView_avatarContainer">
                    <img class="o_VisitorBannerView_avatar rounded-circle" t-att-src="visitorBannerView.visitor.avatarUrl" alt="Avatar"/>
                    <t t-if="visitorBannerView.visitor.is_connected">
                        <i class="o_VisitorBannerView_onlineStatusIcon fa fa-circle" title="Online" role="img" aria-label="Visitor is online"/>
                    </t>
                </div>
            </div>
            <div class="o_VisitorBannerView_content">
                <t t-if="visitorBannerView.visitor.country">
                    <img class="o_VisitorBannerView_country o_country_flag" t-att-src="visitorBannerView.visitor.country.flagUrl" t-att-alt="visitorBannerView.visitor.country.code or visitorBannerView.visitor.country.name"/>
                </t>
                <span class="o_VisitorBannerView_visitor" t-esc="visitorBannerView.visitor.nameOrDisplayName"/>
                <span class="o_VisitorBannerView_language">
                    <i class="o_VisitorBannerView_languageIcon fa fa-comment-o" aria-label="Lang"/>
                    <t t-esc="visitorBannerView.visitor.lang_name"/>
                </span>
                <t t-if="visitorBannerView.visitor.website_name">
                    <span class="o_VisitorBannerView_website">
                        <i class="o_VisitorBannerView_websiteIcon fa fa-globe" aria-label="Website"/>
                        <span t-esc="visitorBannerView.visitor.website_name"/>
                    </span>
                </t>
                <div class="o_VisitorBannerView_history">
                    <i class="o_VisitorBannerView_historyIcon fa fa-history" aria-label="History"/>
                    <span t-esc="visitorBannerView.visitor.history"/>
                </div>
            </div>
        </div>
    </t>

</templates>
