<odoo>
    <record id="view_res_config_settings_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invite_users']" position="after">
                <div class="app_settings_block">
                    <h2>Google API</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">                          
                            <div class="o_setting_right_pane">
                                <label for="api_key">API Key</label>
                                <div class="text-muted">
                                    Set your API key for external integrations.
                                </div>
                                <field name="api_key" class="o_field_char o_field_widget o_input"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>