<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_dsfinvk_export_view_form" model="ir.ui.view">
        <field name="name">pos.dsfinvk_export.form.view</field>
        <field name="model">pos.dsfinvk_export</field>
        <field name="arch" type="xml">
            <form string="DSFinV-K export form">
                <sheet>
                    <div class="oe_button_box" name="buttons">
                        <field name="state" invisible="1"/>
                        <button name="action_refresh_state" string="Refresh state" class="oe_highlight" type="object"
                                attrs="{'invisible':[('state', '!=', 'pending')]}"
                        />
                        <button name="action_download_export" string="Download export" class="oe_highlight" type="object"
                                attrs="{'invisible':[('state', '!=', 'completed')]} " icon="fa-download"
                        />
                        <span class="text-warning mb4 mt16" attrs="{'invisible': ['|',('state','=',False),('state','=','completed')]}">
                            The export is not available, please create a new one.
                        </span>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="start_datetime" attrs="{'readonly':[('state','!=',False)]}"/>
                            <field name="end_datetime" attrs="{'readonly':[('state','!=',False)]}"/>
                            <field name="config_id" attrs="{'readonly':[('state','!=',False)]}"/>
                        </group>
                        <group>
                            <field name="fiskaly_export_uuid"/>
                            <field name="state"/>
                            <field name="error_message" attrs="{'invisible':[('state','!=','error')]}"/>
                            <field name="expiration_datetime"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_dsfinvk_export_view_search" model="ir.ui.view">
        <field name="name">pos.dsfinvk_export.search.view</field>
        <field name="model">pos.dsfinvk_export</field>
        <field name="arch" type="xml">
            <search string="DSFinV-K export">
                <field name="name"/>
                <field name="config_id"/>
            </search>
        </field>
    </record>

    <record id="pos_dsfinvk_export_view_list" model="ir.ui.view">
        <field name="name">pos.dsfinvk_export.tree.view</field>
        <field name="model">pos.dsfinvk_export</field>
        <field name="arch" type="xml">
            <tree string="DSFinV-K export">
                <field name="name"/>
                <field name="state"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="expiration_datetime"/>
                <field name="config_id"/>
            </tree>
        </field>
    </record>

    <record id="action_pos_dsfinvk_export" model="ir.actions.act_window">
        <field name="name">DSFinV-K exports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.dsfinvk_export</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pos_dsfinvk_export" parent="point_of_sale.menu_point_of_sale"
              action="action_pos_dsfinvk_export" sequence="80"
              groups="point_of_sale.group_pos_manager,point_of_sale.group_pos_user"
    />
</odoo>