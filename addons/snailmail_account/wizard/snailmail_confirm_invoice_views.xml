<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="snailmail_confirm_invoice_view_form" model="ir.ui.view">
        <field name="name">snailmail.confirm.invoice.view.form</field>
        <field name="model">snailmail.confirm.invoice</field>
        <field name="arch" type="xml">
            <form string="Snailmail Confirmation">
                <field name="invoice_send_id" invisible="1"/>
                <p>You are about to send this Invoice by post. Are you sure you want to continue?</p>
                <footer>  
                    <button string="Confirm" name="action_confirm" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" name="action_cancel" type="object" class="btn-secondary" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
