<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_iot_config_view_form" model="ir.ui.view">
        <field name="name">pos.iot.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='session_restaurant_printers']" position="replace">
                <div class="o_setting_right_pane" name="session_restaurant_printers">
                    <label for="module_pos_restaurant_iot"/>
                    <span class="fa fa-lg fa-cutlery" title="For bars and restaurants" role="img" aria-label="For bars and restaurants"/>
                    <div class="text-muted">
                        Print orders at the kitchen, at the bar, etc.
                    </div>
                    <div class="content-group" attrs="{'invisible': [('module_pos_restaurant_iot', '=', False)]}">
                        <div class="mt16">
                            <label string="Printers" for="printer_ids" class="o_light_label"/>
                            <field name="printer_ids" widget="many2many_tags"/>
                        </div>
                        <div>
                            <button name="%(pos_restaurant_iot.action_restaurant_printer_form)d" icon="fa-arrow-right" type="action" string="Printers" class="btn-link"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
