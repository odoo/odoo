<?xml version="1.0"?>
<odoo>
    <data noupdate="r01">
        <!-- ******  Basic Restaurant Setup ***** -->

        <!-- Kitchen Printer -->

        <record id="kitchen_printer" model="restaurant.printer">
            <field name="name">Kitchen Printer</field>
            <field name="proxy_ip">localhost</field>
            <field name="product_categories_ids" eval="[(6, 0, [ref('point_of_sale.pos_category_miscellaneous')])]" />
        </record>

        <!-- Pos Config -->
        <record model="pos.config" id="pos_restaurant.pos_config_restaurant">
            <field name="module_pos_restaurant_iot">True</field>
            <field name="printer_ids" eval="[(6, 0, [ref('pos_restaurant_iot.kitchen_printer')])]" />
        </record>
    </data>
</odoo>
