<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Remove Manage Databases option and change Powered by Odoo from login layout -->
    <template id="login_layout_camtel" inherit_id="web.login_layout">
        <xpath expr="//t[@t-if='not disable_database_manager']" position="replace">
            <!-- Remove the manage databases link -->
        </xpath>
        <xpath expr="//a[@href='https://www.odoo.com?utm_source=db&amp;utm_medium=auth']/span" position="replace">
            <span style="font-weight: bold; color: #007bff;">Blue</span>
        </xpath>
    </template>
</odoo>