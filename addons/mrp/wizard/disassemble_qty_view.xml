<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--  Change Product Quantity for Disassemble Order-->
        <record id="view_change_disassemble_qty_wizard" model="ir.ui.view">
            <field name="name">Change Disassemble Order Qty</field>
            <field name="model">change.disassemble.qty</field>
            <field name="arch" type="xml">
                <form string="Change Disassemble Order Quantity in Negative" version="7.0">
                    <newline/>
                    <group col="7">
                        <field name="product_qty" />
                        <label string="Use negative quantity for disassemble order" colspan="5" class="oe_left oe_grey" style="margin-top: 5px;"/>
                    </group>
                    <footer>
                        <button name="change_disassemble_qty" string="Create"
                            colspan="1" type="object" class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />    
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_change_disassemble_qty" model="ir.actions.act_window">
            <field name="name">Select Quantity to Disassemble</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">change.disassemble.qty</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>