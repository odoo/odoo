<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="mrp.CalendarCommonRenderer.event" t-inherit="web.CalendarCommonRenderer.event" t-inherit-mode="primary">
    <xpath expr="//div[hasclass('o_event_title')]" position="after">
      <t t-if="this.rawRecord.product_id">
        <span class="d-block">
          <t t-out="this.rawRecord.product_id[1]"/>
          <t t-if="this.rawRecord.product_qty">
            <span> (<t t-out="this.rawRecord.product_qty"/> <t t-if="this.rawRecord.uom_id" t-out="this.rawRecord.uom_id[1]"/>)</span>
          </t>
        </span>
      </t>
    </xpath>
  </t>

</templates>
