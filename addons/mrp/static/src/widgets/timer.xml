<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="mrp.MrpTimer">
        <span t-esc="this.durationFormatted"/>
    </t>

    <t t-name="mrp.MrpTimerField">
        <MrpTimer t-if="this.props.readonly" value="this.duration" ongoing="this.ongoing"/>
        <input t-else="" t-att-id="this.props.id" t-ref="numpadDecimal" t-att-placeholder="this.props.placeholder" inputmode="numeric" class="o_input" />
    </t>
</templates>
