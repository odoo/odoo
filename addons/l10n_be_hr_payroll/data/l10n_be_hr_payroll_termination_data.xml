if bool(inputs.TIME_OFF_TAKEN.amount) &amp; bool(inputs.ALLOCATION.amount):
    if inputs.TIME_OFF_TAKEN.amount &lt; (inputs.ALLOCATION.amount / 2):
        result_qty = 1
    else:
        result_qty = 0
result_rate = 6.8
result = inputs.GROSS_REF.amount
