<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payroll_employee_departure_notice" model="ir.ui.view">
        <field name="name">hr_payroll_employee_departure_notice</field>
        <field name="model">hr.payslip.employee.depature.notice</field>
        <field name="arch" type="xml">
            <form string="Employee Departure">
                <group class="o_label_nowrap">
                    <!-- <span colspan="4" nolabel="1">This wizard will generate benefits for all selected employee(s) based on attendances.</span> -->
                    <group>
                        <field name="employee_id" readonly="1"/>
                        <field name="oldest_contract_id"/>
                    </group>
                    <group>
                        <field name="leaving_type" widget="radio"/>
                        <field name="salary_visibility" invisible="1"/>
                    </group>
                </group>
                <group>
                    <group class="o_label_nowrap">
                        <field name="first_contract"/>
                        <field name="start_notice_period"/>
                        <label for="notice_duration_month_before_2014" string="Notice duration" help="Computed value base on leaving type, arrival of the employee in the company, ..."/>
                        <div>
                            <field name="notice_duration_month_before_2014" nolabel="1" class="oe_inline" attrs="{'invisible': [('notice_duration_month_before_2014','=',0)]}"/>
                            <span attrs="{'invisible': [('notice_duration_month_before_2014','=',0)]}"> months and </span>
                            <field name="notice_duration_week_after_2014" nolabel="1" class="oe_inline"/>
                            <span> weeks</span>
                        </div>
                        <field name="end_notice_period"/>
                    </group>
                    <group>
                        <field name="salary_december_2013" attrs="{'invisible': [('salary_visibility','=',False)]}"/>
                    </group>
                </group>
                <!-- <group> -->
                <group class="o_label_nowrap">
                    <field name="notice_respect"/>
                </group>
                <!-- </div>
                <div attrs="{'invisible': [('status','!=','termination_fees')]}">
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                        </group>
                        <group>

                        </group>
                    </group>
                </div> -->
                <footer>
                    <button name="validate" string="Validate" type="object" class="oe_highlight" attrs="{'invisible': [('notice_respect','=','without')]}"/>
                    <button name="compute_termination_fee" string="Validate &amp; Compute termination fees" type="object" class="oe_highlight" attrs="{'invisible': [('notice_respect','=','with')]}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
                <!-- <footer attrs="{'invisible': [('status','in',['nd_with_salary','nd'])]}">
                    <button name="validate" string="Validate" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer> -->
            </form>
        </field>
    </record>

    <record id="departure_notice_wizard_action" model="ir.actions.act_window">
        <field name="name">Employee Departure</field>
        <field name="res_model">hr.payslip.employee.depature.notice</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
