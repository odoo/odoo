<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="website_slides.search_items_slide_channels_view">
    <t t-foreach="bucket['data']" t-as="result">
        <div t-attf-class="#{row_classes}">
            <a t-att-href="result['website_url']" class="h-100 p-2 text-decoration-none d-flex align-items-center">
                <t t-call="website.search_image_item_view"/>
                <div class="o_search_result_item_content">
                    <div class="d-flex p-2">
                        <div class="flex-grow-1">
                            <div class="fs-6 fw-bold" t-out="result['name']"/>
                            <t t-if="result.get('rating_avg_stars')"
                                t-call="portal_rating.rating_widget_stars_static">
                                <t t-set="rating_avg" t-value="float(result['rating_avg_stars'])"/>
                                <t t-set="inline_mode" t-value="True"/>
                                <t t-set="hide_rating_count" t-value="True"/>
                            </t>
                        </div>
                        <div class="small align-items-center flex-shrink-0 m-auto">
                            <span t-if="result.get('total_time')" t-out="result['total_time']"
                            class="fw-bold bg-secondary p-1 rounded"/>
                        </div>
                    </div>
                    <div id="o_search_item_matching_content">
                        <div t-if="result.get('tags')" t-out="result['tags']" class="my-1"/>
                    </div>
                </div>
            </a>
        </div>
    </t>
</template>

<template id="website_slides.search_items_slide_slides_view">
    <t t-foreach="bucket['data']" t-as="result">
        <div t-attf-class="#{row_classes}">
            <a t-att-href="result['website_url']" class="h-100 p-2 text-decoration-none d-flex align-items-center">
                <t t-call="website.search_image_item_view"/>
                <div class="o_search_result_item_content p-2">
                    <div class="fs-6 fw-bold" t-out="result['name']"/>
                    <button t-if="result.get('extra_link')"
                         class="btn btn-link btn-sm text-start p-0"
                         t-att-data-target="result['extra_link_url']"
                         t-out="result['extra_link']"/>
                    <div t-if="result.get('tags')" t-out="result['tags']" class="mt-1"/>
                </div>
            </a>
        </div>
    </t>
</template>

</odoo>
