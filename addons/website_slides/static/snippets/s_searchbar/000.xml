<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="website_slides.search_items_slides">
        <div
            class="o_before_search_result_item_detail d-flex align-items-center justify-content-baseline flex-column flex-shrink-0">
            <t t-call="website.search_image_item"/>
        </div>
        <div class="o_search_result_item_detail px-3" style="max-width: 100%; width: 60%;">
            <div class="h6 fw-bold mb-0" t-out="result['name']"/>
            <t t-if="result['rating_avg_stars']">
                <t t-call="portal_rating.rating_stars_static">
                    <t t-set="val" t-value="result['rating_avg_stars']"/>
                    <t t-set="inline_mode" t-value="True"/>
                </t>
            </t>
        </div>
        <div class="o_after_search_result_item_detail flex-shrink-0 ms-auto align-items-center">
            <!-- <b t-if="result['course_price']" class="text-nowrap">
                <t t-out="result['course_price']"/>
            </b> -->
            <!-- <br/> -->
            <b t-if="result['total_time']" class="text-nowrap bg-secondary p-1 rounded">
                <t t-out="result['total_time']"/>
            </b>
        </div>
    </t>

    <t t-inherit="website.s_searchbar.autocomplete" t-inherit-mode="extension">
        <xpath expr="//t[@t-call='website.search_items']" position="replace">
            <t t-set="isCourse" t-value="bucket.model == 'slide.slides' or bucket.model == 'slide.channel'"/>
            <t t-if="isCourse">
                <t t-call="website_slides.search_items_slides"/>
            </t>
            <t t-else="">
                <t t-call="website.search_items"/>
            </t>
        </xpath>
    </t>

</templates>
