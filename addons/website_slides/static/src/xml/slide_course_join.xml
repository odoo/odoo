<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="slide.course.join">
        <div>
            <a role="button"
                class="btn btn-primary text-uppercase fw-bold o_wslides_js_course_join_link" title="Join the Course"
                aria-label="Join the Course" t-att-data-channel-id="channel.id" data-join-after-quiz="true"
                href="#">
                <t t-if="channel.enroll == 'public'" t-out="joinMessage"/>
                <t t-if="channel.enroll == 'invite' and channel.isMemberOrInvited" t-out="joinMessage"/>
            </a>
        </div>
    </t>

    <t t-name="slide.course.join.popupContent">
        <div class="p-3">
            <t t-if="props.text">
                <t t-out="props.text" />
            </t>
            <t t-else="">
                <div t-if="props.invitePreview">
                    Please <a t-attf-href="/slides/#{props.channelId}/identify?invite_partner_id=#{props.invitePartnerId}&amp;invite_hash=#{props.inviteHash}">
                    <t t-if="props.isPartnerWithoutUser">create an account</t><t t-else="">login</t>
                    </a> to join this course
                </div>
                <div t-else="">
                    <t t-if="props.errorSignupAllowed">
                        Please <a t-attf-href="/web/login?redirect=#{props.courseUrl}">login</a> or <a t-attf-href="/web/signup?redirect=#{props.courseUrl}">create an account</a> to join this course
                    </t>
                    <t t-else="">
                        Please <a t-attf-href="/web/login?redirect=#{props.courseUrl}">login</a> to join this course
                    </t>
                </div>
            </t>
        </div>
    </t>
</templates>
