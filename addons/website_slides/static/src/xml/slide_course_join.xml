<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="slide.course.join">
        <div>
            <a role="button"
                class="btn btn-primary text-uppercase fw-bold o_wslides_js_course_join_link" title="Join the Course"
                aria-label="Join the Course" t-att-data-channel-id="this.channel.id" data-join-after-quiz="true"
                href="#">
                <t t-if="this.channel.enroll == 'public'" t-out="this.joinMessage"/>
                <t t-if="this.channel.enroll == 'invite' and this.channel.isMemberOrInvited" t-out="this.joinMessage"/>
            </a>
        </div>
    </t>
</templates>
