<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- JS Equivalent of the Python template "slide_sidebar_done_button" -->
    <t t-name="website.slides.sidebar.done.button">
        <div class="o_wslides_sidebar_done_button"
            t-att-data-id="this.slideId"
            t-att-data-uncompleted-icon="this.uncompletedIcon"
            t-att-data-completed="this.slideCompleted"
            t-att-data-can-self-mark-completed="this.canSelfMarkCompleted"
            t-att-data-can-self-mark-uncompleted="this.canSelfMarkUncompleted"
            t-att-data-is-member="this.isMember"> <!-- The template is only used for members -->
            <button class="o_wslides_button_complete btn btn-sm" t-if="this.slideCompleted and this.canSelfMarkUncompleted or !this.slideCompleted and this.canSelfMarkCompleted">
                <i t-if="this.slideCompleted" class="o_wslides_slide_completed fa fa-check-circle fa-fw text-success fa-lg" t-att-data-slide-id="this.slideId" title="Mark as not done"/>
                <i t-else="" t-attf-class="fa #{this.uncompletedIcon or 'fa-circle-thin'} fa-fw fa-lg" t-att-data-slide-id="this.slideId" title="Mark as done"/>
            </button>
            <button class="o_wslides_button_complete btn btn-sm border-0" t-else="" disabled="1">
                <i t-if="this.slideCompleted" class="o_wslides_slide_completed fa fa-check fa-fw text-success fa-lg" t-att-data-slide-id="this.slideId" title="Can not be marked as not done"/>
                <i t-else="" t-attf-class="fa #{this.uncompletedIcon or 'fa-circle-thin'} fa-fw fa-lg" t-att-data-slide-id="this.slideId" title="Can not be marked as done"/>
            </button>
        </div>
    </t>
</templates>
