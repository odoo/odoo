<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="website_slides.Activity" t-inherit="mail.Activity" t-inherit-mode="extension">
        <xpath expr="//div[@name='tools']" position="replace">
            <t t-if="activity.type and activity.type.displayName === 'Access Request'">
                <div name="tools" class="o_ActivityList">
                    <button role="button" class="o_Activity_toolButton o_Activity_GrantAccessButton btn btn-link" t-att-data-partner-id="activity.creatorPartner.id" t-on-click="_onGrantAccess">
                        <i class="fa fa-check"/> Grant Access
                    </button>
                    <button role="button" class="o_Activity_toolButton o_Activity_RefuseAccessButton btn btn-link" t-att-data-partner-id="activity.creatorPartner.id" t-on-click="_onRefuseAccess">
                        <i class="fa fa-times"/> Refuse Access
                    </button>
                </div>
            </t>
            <t t-else="">$0</t>
        </xpath>
    </t>

</templates>
