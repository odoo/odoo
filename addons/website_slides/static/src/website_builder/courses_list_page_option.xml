<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website_slides.CoursesListPageOption">
    <BuilderContext action="'websiteConfig'">
        <BuilderRow label.translate="Layout">
            <BuilderSelect>
                <BuilderSelectItem actionParam="{views: []}">Grid</BuilderSelectItem>
                <BuilderSelectItem actionParam="{views: ['website_slides.opt_list_view']}">List</BuilderSelectItem>
            </BuilderSelect>
        </BuilderRow>
        <BuilderRow label.translate="New Content Badge">
            <BuilderCheckbox actionParam="{views: ['website_slides.course_card_information_badge']}"/>
        </BuilderRow>
    </BuilderContext>
</t>

<t t-name="website_slides.CoursesListAsidePageOption">
    <BuilderRow label.translate="Achievements">
        <BuilderCheckbox action="'websiteConfig'" actionParam="{views: ['website_slides.toggle_latest_achievements']}"/>
    </BuilderRow>
    <BuilderRow label.translate="Leaderboard">
        <BuilderCheckbox action="'websiteConfig'" actionParam="{views: ['website_slides.toggle_leaderboard']}"/>
    </BuilderRow>

</t>

</templates>
