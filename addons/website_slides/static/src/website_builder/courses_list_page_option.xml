<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website_slides.CoursesListPageOption">
    <BuilderRow label.translate="New Content Badge">
        <BuilderCheckbox action="'websiteConfig'" actionParam="{views: ['website_slides.course_card_information_badge']}"/>
    </BuilderRow>
</t>

<t t-name="website_slides.CoursesListAsidePageOption">
    <BuilderRow label.translate="Achievements">
        <BuilderCheckbox action="'websiteConfig'" actionParam="{views: ['website_slides.toggle_latest_achievements']}"/>
    </BuilderRow>
    <BuilderRow label.translate="Leaderboard">
        <BuilderCheckbox action="'websiteConfig'" actionParam="{views: ['website_slides.toggle_leaderboard']}"/>
    </BuilderRow>
</t>

<t t-inherit="website.BuilderOptions" t-inherit-mode="extension">
    <xpath expr="//switchable_views" position="after">
        <courses_list_page_option
            template="website_slides.CoursesListPageOption"
            selector="main:has(.o_wslides_home_main)"
            title="Courses Page"
            groups='["website.group_website_designer"]'
            editableOnly="false"/>
        <courses_list_aside_page_option
            template="website_slides.CoursesListAsidePageOption"
            selector="main:has(.o_wslides_home_aside_loggedin)"
            groups='["website.group_website_designer"]'
            editableOnly="false"/>
    </xpath>
</t>

</templates>
