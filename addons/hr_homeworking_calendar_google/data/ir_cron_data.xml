<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="sunday_sync_cron" model="ir.cron">
            <field name="name">HR Homeworking Calendar Google: sync working locations</field>
            <field name="model_id" ref="hr_homeworking_calendar_google.model_res_users"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_working_locations()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=(7-DateTime.now().weekday()-1) % 7 + 1)).strftime('%Y-%m-%d 00:00:00')" />
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
