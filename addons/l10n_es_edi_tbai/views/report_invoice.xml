<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="l10n_es_tbai_external_layout_standard" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='qrcode']" position="after">
            <img t-if="o.l10n_es_tbai_is_required" style="display:block;margin:10% auto 0 auto;border: 10px solid white" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_es_tbai_qr_escaped, 125, 125)"/>
            <t t-if="o.l10n_es_tbai_is_required" t-out="o.l10n_es_tbai_qr"/>
            <!-- TODO! use error correction level "M" -->
            <!-- TODO? Sizes assume a 90 dpi resolution to meet requirements (between 30 and 40 mm) -->
        </xpath>
    </template>
</odoo>
