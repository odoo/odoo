<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="contactus_form" name="Contactus Form" inherit_id="website.contactus" customize_show="True">
        <xpath expr="//div[@name='mail_button']" position="replace">
            <div name="website_form_contactus">
                <t t-call="website_form.default_contactus_form"></t>
            </div>
        </xpath>
    </template>

    <template id="default_contactus_form">
        <span class="hidden" id="default_form_data"  t-attf-default_data='{"Name": "#{request.params.get("contact_name", "")}","Phone": "#{request.params.get("phone", "")}","From": "#{request.params.get("email_from", "")}","Partner Name": "#{request.params.get("partner_name", "")}","subject": "#{request.params.get("name", "")}","Description": "#{request.params.get("description", "")}"}'/>
        <div>
            <form name="contactus_form" action="/website_form/" method="post" data-success_page="" data-model_name="mail.mail" class="s_website_form form-horizontal container-fluid mt32" enctype="multipart/form-data" data-editable-form="false">
                <div class="form-group form-field o_website_form_required_custom">
                    <label class="col-md-3 col-sm-4 control-label" for="Name">Your Name</label>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control o_website_form_input" name="Name" required=""/>
                    </div>
                </div>
                <div class="form-group form-field">
                    <label class="col-md-3 col-sm-4 control-label" for="Phone">Phone Number</label>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control o_website_form_input" name="Phone"/>
                    </div>
                </div>
                <div class="form-group form-field o_website_form_required_custom">
                    <label class="col-md-3 col-sm-4 control-label" for="From">Email</label>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control o_website_form_input" name="From" required=""/>
                    </div>
                </div>
                <div class="form-group form-field">
                    <label class="col-md-3 col-sm-4 control-label" for="Partner Name">Your Company</label>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control o_website_form_input" name="Partner Name"/>
                    </div>
                </div>
                <div class="form-group form-field o_website_form_required">
                    <label class="col-md-3 col-sm-4 control-label" for="subject">Subject</label>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control o_website_form_input" name="subject" required=""/>
                    </div>
                </div>
                <div class="form-group form-field o_website_form_required_custom">
                    <label class="col-md-3 col-sm-4 control-label" for="Description">Your Question</label>
                    <div class="col-md-7 col-sm-8">
                        <textarea class="form-control o_website_form_input" name="Description" required=""></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div id="contactus_form_send" class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                        <button class="btn btn-primary btn-lg o_website_form_send">Send</button>
                        <span id="o_website_form_result"></span>
                    </div>
                </div>
            </form>
        </div>
    </template>
</odoo>