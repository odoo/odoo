<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="google_analytics_dashboard_setting" position="after">
                <div class="col-12 col-lg-6 o_setting_box" groups="base.group_no_one">
                    <div class="o_setting_left_pane">
                        <field name="website_form_enable_metadata"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="website_form_enable_metadata"/>
                        <span class="fa fa-lg fa-globe" title="Values set here are website-specific." groups="website.group_multi_website"/>
                        <div class="text-muted">
                            Track metadata (IP, User Agent, ...) on your Website Forms
                        </div>
                    </div>
                </div>
            </div>
            <div id="webmaster_settings" position="after">
                <h2>Communication</h2>
                <div class="row mt16 o_settings_container" id="communication_settings">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="contact_form_install_setting">
                        <div class="o_setting_right_pane">
                            <label for="id" string="Default Contact Form"/>
                            <div class="text-muted" id="msg_contact_form_install_setting">
                                When user submit contact us form mail received on this email address
                            </div>
                            <div class="row mt16">
                                <label class="col-md-3 o_light_label" string="Recipient Email" for="contact_form_recipient_email"/>
                                <field name="contact_form_recipient_email"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
