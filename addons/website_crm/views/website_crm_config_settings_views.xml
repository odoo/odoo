<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_website_config_settings_form_inherit_website_crm" model="ir.ui.view">
        <field name="name">website.config.settings.form.inherit</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website.view_website_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contact_form_install_setting']/div/div/div[@class='content-group']" position="replace">
                <div class="content-group">
                    <hr class="mt8 mb8" />
                    <div class="row">
                        <label class="col-md-4 oe_light_label" string="Default Sales Team" for="crm_default_team_id"/>
                        <field name="crm_default_team_id" class="col-md-8 oe_inline"/>
                    </div>
                    <div class="row">
                        <label class="col-md-4 oe_light_label" string="Default Salesperson" for="crm_default_user_id"/>
                        <field name="crm_default_user_id" class="col-md-8 oe_inline"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
