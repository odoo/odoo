<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="web_clearbit.res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.web_clearbit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="web_clearbit_settings" position="inside">
                <div class="content-group" attrs="{'invisible': [('module_web_clearbit', '=', False)]}">
                    <label for="clearbit_api_key" class="o_light_label"/>
                    <field name="clearbit_api_key"/>
                </div>
                <div attrs="{'invisible': [('module_web_clearbit', '=', False)]}">
                    <a href="https://dashboard.clearbit.com/signup" class="oe_link" target="_blank">
                        <i class="fa fa-arrow-right"/> Create a Clearbit account
                    </a>
                </div>
            </div>
        </field>
    </record>
</odoo>
