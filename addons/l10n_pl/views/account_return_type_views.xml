<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_return_type_for_poland">
            <field name="name">account.return.type.for.poland</field>
            <field name="model">account.return.type</field>
            <field name="inherit_id" ref="account_reports.account_return_type_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='deadline_periodicity']" position="after">
                    <field name="l10n_pl_repayment_timeframe" invisible="country_id != %(base.pl)d"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>