                        <field name="price"/>
                        <field name="call"/>
                    </tree>
                    <form string="Bids Lines">
                        <field name="lot_id" domain="[('auction_id','=',parent.auction_id)]"/>
                        <field name="price"/>
                        <field name="call"/>
