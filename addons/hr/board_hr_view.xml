        <menuitem
            action="open_board_hr"
            icon="terp-graph"
            id="menu_hr_project"
            parent="menu_hr_dasboard"
            sequence="4"/>
        <menuitem id="menu_hr_root" icon="terp-hr" name="Human Resources" sequence="15" action="open_board_hr"/>
