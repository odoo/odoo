<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.AvatarCardPopover" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_avatar_card_buttons')]" position="inside">
            <button class="btn btn-secondary btn-sm" t-if="employee" t-on-click.stop="onClickViewEmployee">View profile</button>
        </xpath>
    </t>

    <t t-name="hr.avatarCardEmployeeInfos">
        <small class="text-muted" t-if="employee?.job_title" t-esc="employee.job_title"/>
        <span class="text-muted" t-if="employee?.department_id" data-tooltip="Department" t-esc="employee.department_id.display_name"/>
    </t>
</templates>
