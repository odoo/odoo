<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="web.tip" id="hr_tip_1">
            <field name="title">Awesome</field>
            <field name="description">Here is your job position. Click here to track your applications and plan meetings with them. Let the recruitment begin !</field>
            <field name="model">hr.job</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.oe_form_buttons_view:visible,div.oe_right > .oe_button_box > button</field>
            <field name="highlight_selector">div.oe_right > .oe_button_box:visible > #total_application</field>
            <field name="placement">bottom</field>
        </record>

        <record model="web.tip" id="hr_tip_2">
            <field name="title">Great</field>
            <field name="description">Here is your applicant information. You can plan and start an interview. If it is positif, don't forget to create your new employee !</field>
            <field name="model">hr.applicant</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.oe_form_buttons_view:visible,div.oe_right.oe_button_box > button</field>
            <field name="highlight_selector">.oe_form_sheet:visible</field>
            <field name="placement">auto top</field>
        </record>

        <record model="web.tip" id="hr_tip_3">
            <field name="title">Your employee</field>
            <field name="description">Here is the employee information. Modify his personal information or even add a picture.</field>
            <field name="model">hr.employee</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.oe_form_buttons_view:visible,div.oe_right.oe_button_box</field>
            <field name="highlight_selector">.oe_form_sheet:visible</field>
            <field name="placement">auto top</field>
        </record>
    </data>
</openerp>
