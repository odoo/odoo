<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="mail_channel_view_form_department" model="ir.ui.view">
            <field name="name">mail.channel.view.form.department</field>
            <field name="model">mail.channel</field>
            <field name="inherit_id" ref="mail.mail_channel_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='public']" position="after">
                    <field name="department_id"
                           attrs="{'invisible': [('public','!=','department')], 'required': [('public','=','department')]}"
                    />
                </xpath>
                <xpath expr="//field[@name='group_ids']" position="replace">
                    <field name="group_ids" widget="many2many_tags"
                           attrs="{'invisible': [('public','==','department')]}"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>