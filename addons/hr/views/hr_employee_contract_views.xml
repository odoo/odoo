<?xml version="1.0"?>
<odoo>
    <record id="hr_employee_contract_list_view" model="ir.ui.view">
        <field name="name">hr.employee.contract.list</field>
        <field name="model">hr.employee.contract</field>
        <field name="arch" type="xml">
            <list string="Contracts">
                <field name="name"/>
                <field name="reference"/>
                <field name="contract_type_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </list>
        </field>
    </record>

    <record id="hr_employee_contract_search_view" model="ir.ui.view">
        <field name="name">hr.employee.contract.search</field>
        <field name="model">hr.employee.contract</field>
        <field name="arch" type="xml">
            <search string="Contracts">
                <field name="name"/>
                <field name="reference"/>
                <field name="contract_type_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <filter string="Date From" name="date_from" date="date_from"/>
                <filter string="Date To" name="date_to" date="date_to"/>
            </search>
        </field>
    </record>

    <record id="open_view_employee_contract_list" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">hr.employee.contract</field>
        <field name="view_mode">list</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="hr_employee_contract_search_view"/>
    </record>
</odoo>
