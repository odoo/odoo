<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="hr_tip_1" model="web.tip">
            <field name="title"></field>
            <field name="description">Get all applications related to this job position.</field>
            <field name="action_id" ref="hr.action_hr_job"/>
            <field name="model">hr.job</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.o_form_buttons_view:visible,div.oe_button_box > button</field>
            <field name="highlight_selector">div.oe_button_box:visible > button:nth-child(1)</field>
            <field name="placement">bottom</field>
        </record>

        <record id="hr_tip_2" model="web.tip">
            <field name="title"></field>
            <field name="description">Use the breadcrumb to easily go back to preceeding screens.</field>
            <field name="model">hr.applicant</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.o_form_buttons_view:visible, ol.breadcrumb:visible</field>
            <field name="highlight_selector">ol.breadcrumb a:nth-child(1)</field>
            <field name="placement">bottom</field>
        </record>

</odoo>
