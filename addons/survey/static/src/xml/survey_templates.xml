<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<t t-name="survey.survey_breadcrumb_template">
    <ol class="breadcrumb justify-content-end">
        <t t-set="canGoBack" t-value="widget.canGoBack"/>
        <t t-foreach='widget.pageIds' t-as='breadcrumbPageId'>
            <li t-att-class="'breadcrumb-item' + (breadcrumbPageId === widget.currentPageId ? ' active' : '')"
                t-att-data-page-id="breadcrumbPageId"
                t-att-data-page-title="widget.pageTitles[breadcrumbPageId]">
                <t t-if="widget.currentPageId === breadcrumbPageId">
                    <!-- Users can only go back and not forward -->
                    <!-- As soon as we reach the current page, set "can_go_back" to False -->
                    <t t-set="canGoBack" t-value="false" />
                </t>
                <t t-if="canGoBack">
                    <a href="#">
                        <span t-esc='widget.pageTitles[breadcrumbPageId]' />
                    </a>
                </t>
                <t t-else="">
                    <span t-esc='widget.pageTitles[breadcrumbPageId]' />
                </t>
            </li>
        </t>
    </ol>
</t>

</templates>
