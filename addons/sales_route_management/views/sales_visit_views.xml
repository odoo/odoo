<record id="view_sales_visit_form" model="ir.ui.view">
    <field name="name">sales.visit.form</field>
    <field name="model">sales.visit</field>
    <field name="arch" type="xml">
        <form string="Sales Visit">
            <group>
                <field name="customer_id"/>
                <field name="sales_rep_id"/>
                <field name="scheduled_date"/>
                <field name="check_in_time"/>
                <field name="check_out_time"/>
                <field name="visit_notes"/>
            </group>
            <footer>
                <button string="Check-in" type="object" name="check_in" class="btn-primary"/>
                <button string="Check-out" type="object" name="check_out" class="btn-secondary"/>
            </footer>
        </form>
    </field>
</record>