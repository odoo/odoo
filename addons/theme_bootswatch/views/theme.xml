<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- Deactivate default website options before adding the theme ones -->
<template id="reset_default_options" inherit_id="website.default_options">
  <xpath expr="//t[@id='default_options']" position="attributes">
    <attribute name="t-if">False</attribute>
  </xpath>
</template>

<template id="theme_customize" inherit_id="website.theme_customize" name="theme_customize Bootswatch">
    <xpath expr="div" position="replace">

      <div id="theme_customize_modal" class="modal fade bs-example-modal-sm">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="loading_backdrop"></div>
            <div class="modal-header">
              <button type="button" class="close">Ã—</button>
              <h4 class="modal-title">Customize your theme</h4>
            </div>
            <div class="modal-body">
              <table>
                <tr>
                  <td>
                    <label class="checked">
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/img/bootswatch_default_thumbnail.png" alt="Default Theme"/>
                      <input name="theme" type="radio" data-xmlid="" checked="checked"/>
                    </label>
                  </td>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/amelia/thumbnail.png" alt="Amelia"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_amelia"/>
                    </label>
                  </td>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/cerulean/thumbnail.png" alt="Cerulean"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_cerulean"/>
                    </label>
                  </td>
                </tr>
                <tr>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/cosmo/thumbnail.png" alt="Cosmo"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_cosmo" data-disable="ee"/>
                    </label>
                  </td>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/cyborg/thumbnail.png" alt="Cyborg"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_cyborg"/>
                    </label>
                  </td>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/flatly/thumbnail.png" alt="Flatly"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_flatly"/>
                    </label>
                  </td>
                </tr>
                <tr>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/journal/thumbnail.png" alt="Journal"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_journal"/>
                    </label>
                  </td>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/readable/thumbnail.png" alt="Readable"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_readable"/>
                    </label>
                  </td>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/simplex/thumbnail.png" alt="Simplex"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_simplex"/>
                    </label>
                  </td>
                </tr>
                <tr>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/slate/thumbnail.png" alt="Slate"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_slate"/>
                    </label>
                  </td>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/spacelab/thumbnail.png" alt="Spacelab"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_spacelab"/>
                    </label>
                  </td>
                  <td>
                    <label>
                      <img style="width: 120px; height: 70px;" src="/theme_bootswatch/static/src/less/united/thumbnail.png" alt="United"/>
                      <input name="theme" type="radio" data-xmlid="theme_bootswatch.theme_united"/>
                    </label>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

    </xpath>
</template>

