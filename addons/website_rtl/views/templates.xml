<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <template id="website_rtl.layout" inherit_id="website.layout" name="RTL Layout">
            <xpath expr="//html/head/t[@name='layout_head']" position="after">
                
                <link t-if="website_lang_dir == 'rtl'" rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-rtl/3.1.1/css/bootstrap-rtl.min.css"/>
                <link t-if="website_lang_dir == 'rtl'" href="/website_rtl/static/src/css/rtl.css" rel="stylesheet"/>
            </xpath>
            <xpath expr="//html" position="before">
                <t t-set="body_classname" t-value="website_lang_dir or ''"/>
            </xpath>
            <xpath expr="//html/body" position="attributes">
                <attribute name="t-att-class">website_lang_dir+' container'</attribute>
            </xpath>
                   
        </template>
    </data>
</openerp>
