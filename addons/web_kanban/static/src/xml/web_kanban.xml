<template>
<t t-name="KanbanView">
    <div class="oe_kanban_header">
        <button type="button" class="oe_kanban_button_new">New</button>
    </div>
    <table style="width:100%;" class="oe_kanban_groups">
    <tr class="oe_kanban_groups_headers">
    </tr>
    <tr class="oe_kanban_groups_records">
    </tr>
    </table>
</t>
<t t-name="KanbanView.group_header">
    <td class="oe_table_column" t-att-id="'column_' + widget.value">
        <img t-if="widget.foldable" t-att-id="widget.value" class="fold-columns-icon"  src="/web_kanban/static/src/img/minus-icon.png"/>
        <div class="oe_fold_column" t-att-id="'column_' + widget.value">
            <div class="oe_column_heading" t-if="widget.title">
                <t t-esc="widget.title"/>
            </div>
            <div t-foreach="widget.aggregates" t-as="aggregate">
                <i><u><t t-esc="aggregate"/>:</u> <t t-esc="aggregate_value"/></i>
            </div>
        </div>
    </td>
</t>
<t t-name="KanbanView.group_records_container">
    <td class="oe_column oe_table_column" t-att-id="'column_' + widget.value" t-attf-style="width: #{Math.round(99 / widget.view.groups.length)}%">
        <p t-if="widget.title" class="oe_vertical_text" t-att-id="'column_' + widget.value"><t t-esc="widget.title"/></p>
    </td>
</t>
<t t-name="KanbanView.record">
    <div class="oe_fold_column oe_kanban_record" t-att-id="'main_' + widget.record.id">
        <t t-raw="content"/>
    </div>
</t>
<t t-name="KanbanColorPicker">
    <table cellspacing="0" cellpadding="0" border="0" class="oe_kanban_color_picker">
    <tr>
        <t t-foreach="colors" t-as="color">
            <td t-att-bgcolor="color">
                <a href="#" t-att-data-color="color_index"/>
            </td>
            <t t-if="((color_index + 1) % Math.round(colors.length / columns)) == 0">&lt;/tr&gt;&lt;tr&gt;</t>
        </t>
    </tr>
    </table>
</t>
</template>
