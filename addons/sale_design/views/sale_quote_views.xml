<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_quote_template_form_design" model="ir.ui.view">
        <field name="name">sale.quote.template.form.design</field>
        <field name="inherit_id" ref="sale_management.view_sale_quote_template_form"/>
        <field name="model">sale.quote.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button string="Edit Template" type="object" name="open_template" class="oe_stat_button" icon="fa-pencil"/>
            </xpath>

            <xpath expr="//notebook[@name='description']" position="inside">
                <page string="Website Description">
                    <field name="website_description" />
                </page>
            </xpath>

            <xpath expr="//tree/field[@name='price_unit']" position="after">
                <field name="website_description" invisible="1"/>
            </xpath>

            <xpath expr="//notebook[@name='main_book']" position="inside">
                <field name="website_description" invisible="1"/>
            </xpath>

        </field>
    </record>

</odoo>
