<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_account_intrastat_export_file" model="ir.ui.view">
        <field name="name">Export Intrastat File</field>
        <field name="model">account.intrastat.export.file</field>
        <field name="arch" type="xml">
            <form string="Export Intrastat File">
                <field invisible="1" name="state"/>
                <field name="name" invisible="1"/>
                <div states="get">
                	<h2>Export Complete</h2>
                	<p>Here is the exported file: <field name="data" readonly="1" filename="name"/></p>
                </div>
                <footer states="choose">
                    <button name="act_getfile" string="Export file invio" type="object" class="oe_highlight"
                        context="{'export_without_head': 0, 'purchase': True, 'sale': True}"/> or
                    <button name="act_getfile" string="Export acquisti.cee" type="object" class="oe_highlight"
                    	context="{'export_without_head': 1, 'export_filename': 'SCAMBI.CEE', 'purchase': True, 'sale': False}" /> or
                    <button name="act_getfile" string="Export cessioni.cee" type="object" class="oe_highlight"
                    	context="{'export_without_head': 1, 'export_filename': 'SCAMBI.CEE', 'purchase': False, 'sale': True}" /> or
                    <button special="cancel" string="Cancel" type="object" class="oe_link"/>
                </footer>
                <footer states="get">
                    <button special="cancel" string="Close" type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_wizard_account_intrastat_export_file" model="ir.actions.act_window">
        <field name="name">Export Intrastat File</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.intrastat.export.file</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_account_intrastat_export_file"/>
        <field name="target">new</field>
    </record>

</odoo>
