<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

<t t-name="web_editor.background_columns">
    <div class="o_we_background_columns" style="width: 100%; height: 100%;">
        <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
            <defs>
                <pattern id="cell" t-attf-width="#{columnSize}px" height="100%" patternUnits="userSpaceOnUse">
                    <rect class="o_we_cell" x="2" y="2" rx="4" t-attf-width="#{columnSize - 4}px" height="100%"/>
                </pattern>
            </defs>

            <rect fill="url(#cell)" width="100%" height="100%"></rect>
        </svg>
    </div>
</t>

</templates>
