<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_leave_type_view_form" model="ir.ui.view">
        <field name="name">hr.leave.type.view.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <label for="support_document" position="after">
                <label for="allow_cash_out_request" class="fw-bold me-4" invisible="not requires_allocation"/>
                <label for="allow_employee_request" class="fw-bold me-4" invisible="not requires_allocation"/>
            </label>
            <field name="support_document" nolabel="1" position="after">
                <field name="allow_cash_out_request" nolabel="1" invisible="not requires_allocation"/>
                <field name="allow_employee_request" nolabel="1" invisible="not allow_cash_out_request"/>
            </field>
        </field>
    </record>
</odoo>
