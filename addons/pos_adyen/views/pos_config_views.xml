<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.form.view.inherit.pos_adyen</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iface_tipproduct']//div[hasclass('content-group')]" position="inside">
                <field name="module_pos_adyen" invisible="1"/>
                <div class="mt16" attrs="{'invisible': [('module_pos_adyen', '=', False)]}">
                    <div class="row">
                        <field name="adyen_ask_customer_for_tip" class="col-lg-1 ml16"/>
                        <label class="o_light_label" for="adyen_ask_customer_for_tip" string="Add tip through payment terminal (Adyen)"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
