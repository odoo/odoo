<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- replace the standard tax fields in the view by the new "combined" field -->
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <!-- for both type we keep the original fields as they may be targeted by inherits -->
            <field name="arch" type="xml">
                <!-- Sale -->
                <field name="taxes_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'color_field': 'color'}</attribute>
                </field>
                <!-- Purchase -->
                <field name="supplier_taxes_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'color_field': 'color'}</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
