<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_document_type_tree" model="ir.ui.view">
        <field name="name">l10n_latam.document.type.tree.editable</field>
        <field name="model">l10n_latam.document.type</field>
        <field name="inherit_id" ref="l10n_latam_invoice_document.view_document_type_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="edit">1</attribute>
                <attribute name="editable">bottom</attribute>
            </xpath>

            <xpath expr="//tree/field[@name='code']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='doc_code_prefix']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='report_name']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='internal_type']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='country_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

        </field>
    </record>
</odoo>