<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="currency_update">
        <field name="name">res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='account_grp']" position="after">
                <separator string="Currency Rate Exchange Services" colspan="4"/>
                <group>
                    <field name="currency_interval_unit"></field>
                    <field name="currency_next_execution_date"></field>
                </group>
                <group>
                    <button name="button_currency_update" class="oe_button" string="Update Now" type='object'/>
                </group>
                    <field name="currency_provider_ids" colspan="4" nolabel="1" ></field>
            </xpath>
        </field>
    </record>
</odoo>
