<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kpi_stock_delivery_count" model="digest.kpi" forcecreate="True">
        <field name="name">Deliveries</field>
        <field name="res_model_id" ref="model_stock_picking"/>
        <field name="date_field" ref="stock.field_stock_picking__date_done"/>
        <field name="domain">[('state', '=', 'done'), ('location_id.usage', 'in', ('internal', 'transit')), ('location_dest_id.usage', 'not in', ('internal', 'transit'))]</field>
        <field name="group_ids" eval="[Command.link(ref('stock.group_stock_manager'))]"/>
        <field name="action_id" ref="stock.stock_move_action_outgoing"/>
        <field name="action_menu_root_id" ref="stock.menu_stock_root"/>
        <field name="module_id" ref="base.module_stock"/>
        <field name="sequence" eval="3500"/>
    </record>

    <record id="kpi_stock_receipt_count" model="digest.kpi" forcecreate="True">
        <field name="name">Receipts</field>
        <field name="res_model_id" ref="model_stock_picking"/>
        <field name="date_field" ref="stock.field_stock_picking__date_done"/>
        <field name="domain">[('state', '=', 'done'), ('location_id.usage', 'not in', ('internal', 'transit')), ('location_dest_id.usage', 'in', ('internal', 'transit'))]</field>
        <field name="group_ids" eval="[Command.link(ref('stock.group_stock_manager'))]"/>
        <field name="action_id" ref="stock.stock_move_action_incoming"/>
        <field name="action_menu_root_id" ref="stock.menu_stock_root"/>
        <field name="module_id" ref="base.module_stock"/>
        <field name="sequence" eval="3600"/>
    </record>
</odoo>
