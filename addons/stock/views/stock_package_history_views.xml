<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="package_history_search_view" model="ir.ui.view">
        <field name="name">stock.package.history.search</field>
        <field name="model">stock.package.history</field>
        <field name="arch" type="xml">
            <search string="Package">
                <field name="package_name"/>
                <field name="location_id" groups="stock.group_stock_multi_locations"/>
                <field name="package_type_id"/>
                <filter string="In internal locations" name="internal" domain="['|', ('location_id.usage', '=', 'internal'), ('location_id', '=', False)]" groups="stock.group_stock_multi_locations"/>
                <filter string="Main Packages" name="main_packages" domain="[('parent_dest_id', '=', False)]"/>
                <group>
                   <filter string='Location' name="location" domain="[]" context="{'group_by' : 'location_id'}" groups="stock.group_stock_multi_locations"/>
                   <filter string='Package Type' name="package_type" domain="[]" context="{'group_by' : 'package_type_id'}"/>
               </group>
            </search>
        </field>
    </record>

    <record id="view_stock_package_history_list" model="ir.ui.view" >
        <field name="name">stock.package.history.list</field>
        <field name="model">stock.package.history</field>
        <field eval="15" name="priority"/>
        <field name="arch" type="xml">
            <list string="Packages" create="0">
                <field name="package_name" string="Package"/>
                <field name="package_type_id"/>
                <field name="location_id"/>
                <field name="parent_orig_id"/>
                <field name="location_dest_id"/>
                <field name="parent_dest_id"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <button name="action_show_package" type="object" width="50px" string="View"/>
            </list>
        </field>
    </record>
</odoo>
