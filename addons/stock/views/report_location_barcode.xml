<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_location_barcode">
    <t t-call="report.html_container">
        <t t-foreach="[docs[x:x+5] for x in xrange(0, len(docs), 5)]" t-as="page_docs">
            <t>
                <div class="page text-center">
                    <div class="oe_structure"/>
                    <t t-foreach="page_docs" t-as="o">
                        <div class="row" style="margin-bottom: 100px;">
                            <t t-if="o.barcode"><t t-set="content" t-value="o.barcode"/></t>
                            <t t-if="not o.barcode"><t t-set="content" t-value="o.name"/></t>
                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', content, 600, 100)" style="width:300px;height:50px"/>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>
