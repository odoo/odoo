<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_enterprise_config_settings" model="ir.ui.view">
        <field name="name">stock enterprise settings</field>
        <field name="model">stock.config.settings</field>
        <field name="inherit_id" ref="stock.view_stock_config_settings"/>
        <field name="arch" type="xml">
            <group name="traceability" position="after">
                <group>
                    <field name="module_stock_barcode" class="oe_inline" widget="upgrade_boolean"/>
                    <field name="module_delivery_fedex" class="oe_inline" widget="upgrade_boolean"/>
                    <field name="module_delivery_ups" class="oe_inline" widget="upgrade_boolean"/>
                    <field name="module_delivery_usps" class="oe_inline" widget="upgrade_boolean"/>
                    <field name="module_inter_company_rules" class="oe_inline" widget="upgrade_boolean"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
