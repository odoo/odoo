<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_picking">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-6">
                                    <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                                        <span><strong>Delivery Address:</strong></span>
                                        <div t-field="o.move_lines[0].partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                    <div t-if="o.picking_type_id.code != 'internal' and (not o.move_lines or not o.move_lines[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                </div>
                                <div class="col-xs-5 col-xs-offset-1">
                                    <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                                        <span><strong>Partner Address:</strong></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                                        <span><strong>Customer Address:</strong></span>
                                    </div>
                                    <div t-if="o.partner_id" name="partner_header">
                                        <div t-field="o.partner_id"
                                           t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                        <p t-if="o.sudo().partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.sudo().partner_id.vat"/></p>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <img
                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)"
                                style="width:300px;height:50px" class="pull-right mb16"
                                />
                            <h1 t-field="o.name" class="mt0 pull-left"/>
                            <div class="clearfix"/>
                            <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th t-if="o.origin"><strong>Order (Origin)</strong></th>
                                    <th><strong>State</strong></th>
                                    <th><strong>Commitment Date</strong></th>
                                    <th name="td_sched_date_h"><strong>Scheduled Date</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-if="o.origin">
                                        <span t-field="o.origin"/>
                                    </td>
                                    <td>
                                        <span t-field="o.state"/>
                                    </td>
                                    <td>
                                        <span t-field="o.date"/>
                                    </td>
                                    <td name="td_sched_date">
                                        <span t-field="o.scheduled_date"/>
                                    </td>
                                </tr>
                            </tbody>
                            </table>
                            <br/>
                            <br/>
                            <table class="table table-condensed" t-if="o.move_line_ids" style="width:100%;">
                              <t t-set="has_barcode" t-value="any([move_lines.product_id and move_lines.product_id.sudo().barcode or move_lines.package_id for move_lines in o.move_line_ids])"/>
                              <t t-set="has_serial_number" t-value="o.move_line_ids.filtered('lot_id')" groups="stock.group_production_lot"/>
                              <thead>
                                <tr>
                                    <th style="width:20%;"><strong>Product</strong></th>
                                    <th style="width:5%;"><strong>Quantity</strong></th>
                                    <th style="width:20%;" t-if="has_barcode" class="text-center">
                                        <strong>Barcode</strong>
                                    </th>
                                    <t t-if="o.picking_type_id.code != 'incoming'">
                                        <th style="width:20%;"><strong>Source</strong></th>
                                    </t>
                                    <th style="width:20%;" t-if="has_serial_number">
                                        <span>Lot/Serial Number</span>
                                    </th>
                                    <t>
                                        <th style="width:25%;padding-left:55px;"><strong>Destination</strong></th>
                                    </t>
                                </tr>
                              </thead>
                              <tbody>
                                <t t-set="line_products" t-value="o.move_lines.mapped('product_id')"/>
                                    <tr t-foreach="line_products" t-as="move_product">
                                        <t t-set="product_moves" t-value="o.move_lines.filtered(lambda l: l.product_id.id == move_product.id)"/>
                                        <t t-set="locations" t-value="product_moves.mapped('move_line_ids').mapped('location_id')"/>
                                        <td><span t-field="move_product.display_name"/><br/>
                                            <span t-field="move_product.description_picking"/>
                                        </td>
                                        <td>
                                            <span t-esc="sum(product_moves.mapped('product_qty'))"/>
                                            <span t-field="move_product.uom_id" groups="product.group_uom"/>
                                        </td>
                                        <td t-if="has_barcode">
                                            <span t-if="move_product and move_product.barcode">
                                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_product.barcode, 600, 100)" style="width:300px;height:50px"/>
                                            </span>
                                        </td>
                                        <td colspan="3">
                                            <table class="table table-condensed">
                                                <tr t-foreach="locations" t-as="location">
                                                    <t t-set="lines" t-value="product_moves.mapped('move_line_ids').filtered(lambda l: l.location_id.id == location.id)"/>
                                                    <td t-if="product_moves[0].picking_type_id.code != 'incoming'" style="border-top: none !important;">
                                                        <t t-if="product_moves[0].picking_type_id.code != 'incoming'">
                                                            <span t-esc="location.display_name"/>
                                                        </t>
                                                    </td>
                                                    <td style="border-top: none !important;">
                                                        <table class="table table-condensed">
                                                            <t t-if="lines">
                                                                <tr t-foreach="lines" t-as="ml">
                                                                    <td t-if="has_serial_number" style="border-top: none !important;">
                                                                        <span t-field="ml.lot_id"/>
                                                                    </td>
                                                                    <td t-if="has_serial_number" style="border-top: none !important;">
                                                                        <span t-field="ml.qty_done"/>
                                                                        <t t-if="o.picking_type_id.use_existing_lots and o.state!='done'">
                                                                            / <span t-field="ml.ordered_qty"/>
                                                                        </t>
                                                                    </td>
                                                                    <td style="border-top: none !important;">
                                                                        <span t-field="ml.package_id"/>
                                                                    </td>
                                                                    <t>
                                                                        <td style="border-top: none !important;">
                                                                            <span class="text-right" t-field="product_moves.location_dest_id"/>
                                                                            <span t-if="ml.result_package_id">:</span>
                                                                            <span t-field="ml.result_package_id"/>
                                                                        </td>
                                                                    </t>
                                                                </tr>
                                                            </t>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                              </tbody>
                            </table>

                            <p t-if="o.state in ['draft', 'waiting', 'confirmed']">
                                You do not have any products reserved for this picking.  Please click the 'Reserve' button
                                to check if products are available.
                            </p>
                            <p t-field="o.note"/>
                        </div>
                    </t>
                 </t>
             </t>
        </template>
    </data>
</odoo>
