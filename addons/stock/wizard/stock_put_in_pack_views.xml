<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_put_in_pack_form" model="ir.ui.view">
        <field name="name">stock.put.in.pack.form</field>
        <field name="model">stock.put.in.pack</field>
        <field name="arch" type="xml">
            <form string="Put in Pack">
                <group>
                    <field name="package_type_id" placeholder="Select a Package Type" options="{'no_create': True}"/>
                    <field name="result_package_id"
                           domain="[('package_type_id', '=?', package_type_id), '|', '|', ('location_id', '=', False), ('location_id', '=', location_dest_id), ('id', 'in', origin_package_ids)]"
                           context="{'default_package_type_id': package_type_id, 'show_src_package': 1}"
                           widget="package_m2o"
                           placeholder="Leave empty to create new"/>
                </group>
                <footer>
                    <button name="action_put_in_pack" type="object" string="Put in Pack" class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" special="cancel" data-hotkey="x" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_put_in_pack_wizard" model="ir.actions.act_window">
        <field name="name">Put in Pack</field>
        <field name="res_model">stock.put.in.pack</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'dialog_size': 'medium'}</field>
    </record>
</odoo>
