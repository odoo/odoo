<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_stock_duplicate_warning" model="ir.ui.view">
        <field name="name">stock.duplicate.warning.view.form</field>
        <field name="model">stock.duplicate.warning</field>
        <field name="arch" type="xml">
            <form string="Duplicated serial numbers">
                <field name="inventory_id" invisible="1"/>
                <p>The serial numbers below are already in other locations. Do you want to create some correction lines?</p>
                <field name="tracking_line_ids">
                    <tree editable="top" create="0" delete="0">
                        <field name="product_id" readonly="1"/>
                        <field name="location_id" readonly="1"/>
                        <field name="lot_id" readonly="1"/>
                        <field name="to_correct"/>
                        <field name="product_qty"/>
                    </tree>
                </field>
                <footer>
                    <button name="action_confirm" string="Correct" type="object" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
