<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="website.slides.fullscreen.certification">
        <div class="o_wslides_fs_certification">
            <a t-if="!widget.get('slide').done" class="btn btn-primary" t-att-href="widget.get('slide').certificationUrl" target="new"><i class="fa fa-trophy"/>
                <t t-if="widget.get('slide').isMember">Pass Certification</t>
                <t t-else="">Test Certification</t>
            </a>
            <a t-else="" role="button" t-att-data-survey_id="widget.get('slide').certificationId" class="btn btn-primary o_wslides_survey_download_certification" href="#">
                <i class="fa fa-fw fa-trophy" role="img" aria-label="Download certification" title="Download certification"/> Download certification
            </a>
        </div>
    </t>

    <t t-extend="website.slides.fullscreen.title">
        <t t-jquery=".o_wslides_fs_slide_title_span" t-operation="before">
            <i t-if="widget.get('slide').type === 'certification'" class="fa fa-trophy mr-2 text"></i>
        </t>
    </t>
</templates>
