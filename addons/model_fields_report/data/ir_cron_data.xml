<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to refresh model fields count materialized view daily -->
        <record id="ir_cron_refresh_model_fields_count" model="ir.cron">
            <field name="name">Refresh Model Fields Count</field>
            <field name="model_id" ref="model_model_fields_count"/>
            <field name="state">code</field>
            <field name="code">model.refresh()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>


