<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payu_acquirer_button">
        <form t-if="acquirer.merchant_id" t-att-action="tx_url" method="post" target="_self">
            <input type="hidden" name="key" t-att-value="tx_values['key']" />
            <input type="hidden" name="txnid" t-att-value="tx_values['txnid']" />
            <input type="hidden" name="amount" t-att-value="tx_values['amount']" />
            <input type="hidden" name="productinfo" t-att-value="tx_values['productinfo']" />
            <input type="hidden" name="firstname" t-att-value="tx_values['firstname']" />     
            <input type="hidden" name="email" t-att-value="tx_values['email']" />
            <input type="hidden" name="phone" t-att-value="tx_values['phone']"/>
            <input type="hidden" name="service_provider" t-att-value="tx_values['service_provider']" />
            <input type="hidden" name="hash" t-att-value="tx_values['hash']" />
            <input type="hidden" name="surl" t-att-value="tx_values['surl']" />
            <input type="hidden" name="furl" t-att-value="tx_values['furl']" />
            <input type="hidden" name="curl" t-att-value="tx_values['curl']" />
            <input type="hidden" name="udf1" t-att-value="tx_values['udf1']"/>
            <!-- submit -->
            <button t-if="tx_values['currency'] == tx_values['currency_inr']" t-att-class="submit_class" type="submit" width="100px">
                <img t-if="not submit_txt" src="/payment_payumoney/static/src/img/payumoney_icon.png"/>
                <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
            </button>
            <div t-if="tx_values['currency'] != tx_values['currency_inr']" title="PayuMoney accepts only INR(Indian rupees).">
                <button type="submit" width="100px" disabled="disabled" t-att-class="submit_class">
                    <img t-if="not submit_txt" src="/payment_payumoney/static/src/img/payumoney_icon.png"/>
                    <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
                </button>
            </div>
        </form>
    </template>
</odoo>
