<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="crm.ForecastKanbanRenderer" t-inherit="web.KanbanRenderer" t-inherit-mode="primary">
        <KanbanColumnQuickCreate position="this.replace">
            <t t-if="this.isGroupedByForecastField()">
                <ForecastKanbanColumnQuickCreate
                    folded="true"
                    onFoldChange="() => {}"
                    onValidate.bind="this.addForecastColumn"
                    groupByField="this.props.list.groupByField"
                />
            </t>
            <t t-else="">$0</t>
        </KanbanColumnQuickCreate>
    </t>
</templates>
