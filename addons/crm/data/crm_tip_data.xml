<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="crm_tip_1" model="web.tip">
            <field name="title">Import from LinkedIn</field>
            <field name="description">Import your contacts directly from LinkedIn. It is much easier than creating them manually</field>
            <field name="action_id" ref="base.action_partner_form"/>
            <field name="model">res.partner</field>
            <field name="mode">kanban</field>
            <!-- TODO Add relevant selectors when linkedin button is implemented -->
            <field name="trigger_selector"></field>
            <field name="highlight_selector"></field>
            <field name="placement">bottom</field>
        </record>

        <record id="crm_tip_2" model="web.tip">
            <field name="title"></field>
            <field name="description">By clicking here, you can keep track of your sales opportunities for this customer. You will be able to plan meetings and calls.</field>
            <field name="action_id" ref="base.action_partner_form"/>
            <field name="model">res.partner</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.oe_form_buttons_view:visible:not(.modal-dialog .oe_form_buttons_view:visible), div.oe_right.oe_button_box > button</field>
            <field name="highlight_selector">div.oe_right.oe_button_box:visible > button.o_res_partner_tip_opp</field>
            <field name="placement">bottom</field>
        </record>

        <record id="crm_tip_3" model="web.tip">
            <field name="title"></field>
            <field name="description">This is where you navigate through your process. Click here to go back to where you came from.</field>
            <field name="model">crm.lead</field>
            <field name="type">opportunity</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.oe_form_buttons_view:visible,ol.breadcrumb a</field>
            <field name="highlight_selector">ol.breadcrumb:visible a:last</field>
            <field name="placement">bottom</field>
        </record>

        <record id="crm_tip_4" model="web.tip">
            <field name="title"></field>
            <field name="description"><![CDATA[You can change the stage of your opportunities by simply <b>drag and dropping</b> the opportunity in another column.]]></field>
            <field name="model">crm.lead</field>
            <field name="mode">kanban</field>
            <field name="trigger_selector">.oe_kanban_record:visible</field>
            <field name="highlight_selector">.oe_kanban_record:visible</field>
            <field name="end_event">mousedown</field>
            <field name="placement">auto top</field>
        </record>

</odoo>
