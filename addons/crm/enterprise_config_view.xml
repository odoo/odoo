<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_enterprise_config_settings" model="ir.ui.view">
        <field name="name">crm enterprise settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="crm.view_sale_config_settings"/>
        <field name="priority" eval="32"/>
        <field name="arch" type="xml">
            <group name="config_alias" position="after">
                <group>
                    <field name="module_crm_voip" class="oe_inline" widget="upgrade_radio"/>
                    <field name="module_sale_contract" class="oe_inline" widget="upgrade_radio"/>
                    <field name="module_website_sign" class="oe_inline" widget="upgrade_radio"/>
                    <field name="module_website_sale_digital" class="oe_inline"/>
                    <field name="module_website_portal" class="oe_inline"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
