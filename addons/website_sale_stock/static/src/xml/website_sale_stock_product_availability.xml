<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="website_sale_stock.product_availability">
        <div
            t-if="this.is_storable and !this.prevent_sale"
            id="product_stock_availability"
        >
            <div t-if="this.free_qty lte 0 and !this.cart_qty" t-attf-class="availability_message_#{this.product_template} d-flex flex-column gap-2">
                <div id="out_of_stock_message" class="mb-3">
                    <t t-if="this.has_out_of_stock_message">
                        <div class="d-flex align-items-center badge text-start text-bg-danger text-wrap">
                            <i class="fa fa-circle text-danger me-2"/>
                            <span>
                                <t t-out="this.out_of_stock_message"/>
                            </span>
                        </div>
                    </t>
                    <t t-elif="!this.allow_out_of_stock_order">
                        <div class="badge text-bg-danger">
                            <i class="fa fa-circle text-danger me-2"/>Out of Stock
                        </div>
                    </t>
                </div>
                <div id="stock_notification_div" t-if="!this.allow_out_of_stock_order">
                    <div class="btn btn-link px-0" t-if="!this.has_stock_notification"
                         id="product_stock_notification_message">
                        <i class="fa fa-envelope-o me-2"/>Get notified when back in stock
                    </div>
                    <div id="stock_notification_form" class="d-none">
                        <div class="input-group">
                            <input class="form-control"
                                   id="stock_notification_input" name="email"
                                   type="text" placeholder="youremail@gmail.com" t-att-value="this.stock_notification_email? this.stock_notification_email: ''"/>
                            <button
                                id="product_stock_notification_form_submit_button"
                                class="btn btn-primary"
                                t-att-data-product-id="this.product_id"
                            >
                                <i class="fa fa-paper-plane"/>
                            </button>
                        </div>
                        <div id="stock_notification_input_incorrect" class="d-none form-text text-danger">
                            Invalid email
                        </div>

                    </div>
                    <div id="stock_notification_success_message"
                         t-att-class="this.has_stock_notification ? '' : 'd-none'">
                        <div class="py-2 small text-muted">
                            <i class="fa fa-bell me-2"/>We'll notify you once the product is back in stock
                        </div>
                    </div>
                </div>
            </div>
            <div
                id="threshold_message"
                t-elif="this.show_availability and this.free_qty lte this.available_threshold"
                t-attf-class="availability_message_#{this.product_template} my-3 badge text-bg-warning"
            >
                <i class="fa fa-circle text-warning me-2" role="presentation"/>
                <t t-out="this.formatQuantity(this.free_qty)"/> <t t-out="this.uom_name" /> in stock
                <span
                    id="already_in_cart_message"
                    t-if="!this.allow_out_of_stock_order and this.show_availability and this.cart_qty"
                    t-attf-class="availability_message_#{this.product_template}"
                >
                    <t t-if="!this.free_qty">
                        You already added all the available product in your cart
                    </t>
                    <t t-else="">
                        (<t t-out="this.cart_qty" /> in your cart)
                    </t>
                </span>
            </div>
        </div>
    </t>
    <t t-name="website_sale_stock.product_availability_wishlist">
        <div
            t-if="this.is_storable and !this.free_qty and !this.allow_out_of_stock_order and !this.prevent_sale"
            id="stock_wishlist_message"
            t-attf-class="availability_message_#{this.product_template} my-2 d-flex align-items-center flex-column flex-md-row"
        >
            <button
                t-if="!this.is_in_wishlist"
                id="wsale_save_for_later_button"
                class="btn btn-outline-primary text-nowrap o_add_wishlist_dyn"
                t-att-data-product-id="this.product_id"
                t-att-data-product-template-id="this.product_id"
            >
                <i class="fa fa-heart-o me-2"/>Add to wishlist
            </button>
            <div id="wsale_added_to_your_wishlist_alert" t-att-class="this.is_in_wishlist ? '' : 'd-none'">
                <div class="btn btn-outline-primary disabled">
                    <i class="fa fa-heart me-2"/>Added to your wishlist
                </div>
            </div>

        </div>
    </t>
</templates>
