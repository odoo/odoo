<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="snippet_options" inherit_id="website.snippet_options" name="Partners Snippet Options">
    <xpath expr="." position="inside">
        <div data-selector="main:has(#oe_structure_website_partner_layout_1)" data-page-options="true" groups="website.group_website_designer" data-no-check="true" string="Partners Page">
            <we-checkbox string="Address"
                        data-customize-website-views="website_partner.o_wcrm_partner_address"
                        data-no-preview="true"
                        data-reload="/"/>
            <we-checkbox string="Companies only"
                        data-customize-website-views="website_partner.companies_only_setting"
                        data-no-preview="true"
                        data-reload="/"/>
            <we-checkbox string="Search"
                        data-customize-website-views="website_partner.search_setting"
                        data-no-preview="true"
                        data-reload="/"/> 
            <we-checkbox string="Countries"
                        data-customize-website-views="website_partner.countries_setting"
                        data-no-preview="true"
                        data-reload="/"/> 
            <we-checkbox string="Partner page"
                        data-customize-website-views="website_partner.linked_partner_page_setting"
                        data-no-preview="true"
                        data-reload="/"/>
            <we-select string="Image Format" data-attribute-name="image_format" data-attribute-default-value="one_one_opt">
                <we-button data-select-data-attribute="one_one" data-name="one_one_opt">1:1</we-button>
                <we-button data-select-data-attribute="six_five" data-name="six_five_opt">6:5</we-button>
                <we-button data-select-data-attribute="four_five" data-name="four_five_opt">4:5</we-button>
            </we-select>
        </div>
    </xpath>
</template>

</odoo>
