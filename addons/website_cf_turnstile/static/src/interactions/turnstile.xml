<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="website_cf_turnstile.turnstile_container">
        <div
            t-attf-class="s_turnstile s_turnstile_container cf-turnstile {{this.additionalClasses}}"
            t-att-data-action="this.action"
            t-att-data-appearance="this.appeareance || 'interaction-only'"
            t-att-data-before-interactive-callback="this.beforeInteractiveGlobalCallback || '() => {}'"
            t-att-data-callback="this.executeGlobalCallback || '() => {}'"
            t-att-data-error-callback="this.errorGlobalCallback || '() => {}'"
            data-response-field-name="turnstile_captcha"
            t-att-data-sitekey="this.sitekey"
            t-att-style="this.style"
        ></div>
    </t>
    <t t-name="website_cf_turnstile.turnstile_remote_script">
        <script id="s_turnstile_remote_script" class="s_turnstile" t-att-src="this.remoteScriptUrl"></script>
    </t>
</templates>
