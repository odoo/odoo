<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="base.ARS" model="res.currency">
        <field name="active" eval="True"/>
    </record>

    <!-- Common trading partner currencies in AR -->

    <record id="base.USD" model="res.currency">
        <field name="symbol">USD</field>
        <field name="position">before</field>
        <!-- Update symbol to common use in argentina, this way we do not confuse with ARS symbol -->
    </record>

    <record id="base.EUR" model="res.currency">
        <field name="symbol">EUR</field>
        <field name="position">before</field>
    </record>

</odoo>
