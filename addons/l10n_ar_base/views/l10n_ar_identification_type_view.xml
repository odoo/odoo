<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_l10n_ar_identification_type_form" model="ir.ui.view">
        <field name="name">l10n_ar.identification.type.form</field>
        <field name="model">l10n_ar.identification.type</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Identification Type" create="0" edit="0">
                <group>
                    <field name="sequence"/>
                    <field name="afip_code"/>
                    <field name="name"/>
                    <field name="code"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_l10n_ar_identification_type_tree" model="ir.ui.view">
        <field name="name">l10n_ar.identification.type.tree</field>
        <field name="model">l10n_ar.identification.type</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Identification Types" decoration-muted="(not active)" create="0" edit="0">
                <field name="afip_code"/>
                <field name="name"/>
                <field name="code"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_l10n_ar_identification_type_search" model="ir.ui.view">
        <field name="name">l10n_ar.identification.type.search</field>
        <field name="model">l10n_ar.identification.type</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Name"/>
                <field name="code" string="Short Name"/>
                <field name="afip_code" string="AFIP Code"/>
                <field name="active"/>
                <filter name="active" string="Active" domain="[('active','=',True)]" help="Show active identification types"/>
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]" help="Show inactive identification types"/>
            </search>
        </field>
    </record>

    <record id="action_l10n_ar_identification_type" model="ir.actions.act_window">
        <field name="name">Identification Type</field>
        <field name="res_model">l10n_ar.identification.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_l10n_ar_identification_type_search"/>
        <field name="domain">['|', ('active', '=', True), ('active', '=', False)]</field>
        <field name="context">{"search_default_active":1}</field>
    </record>

    <menuitem action="action_l10n_ar_identification_type"
            id="menu_l10n_ar_identification_type"
            parent="contacts.res_partner_menu_config"/>

</odoo>
