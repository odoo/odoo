<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">view_partner_form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="model">res.partner</field>
        <field type="xml" name="arch">
            <form>
                <field name="l10n_ar_cuit" invisible="1"/>
            </form>
            <sheet position="before">
                <div class="alert alert-warning oe_edit_only" role="alert" attrs="{'invisible': [('same_id_number_partner', '=', False)]}">
                    A partner with the same Identification Number already exists (<field name="same_id_number_partner" widget="html" class="d-inline-block"/>), are you sure to create a new one?
                </div>
            </sheet>
            <field name="vat" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <field name="vat" position="after">
                <label for="l10n_ar_id_number" string="Identification"/>
                <div class="o_address_format">
                    <field class="o_address_state" name="l10n_ar_identification_type_id" options="{'no_open': True, 'no_create': True}" placeholder="Type"/>
                    <span class="oe_read_only">-</span>
                    <field name="l10n_ar_id_number" placeholder="Number" class="oe_inline"/>
                </div>
            </field>

        </field>
    </record>
</odoo>
