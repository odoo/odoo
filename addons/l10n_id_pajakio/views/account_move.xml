<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_form_view" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Pajak.io Information" invisible="move_type != 'out_invoice'">
                    <group>
                        <group>
                            <field name="l10n_id_pajakio_transaction_id"/>
                            <field name="l10n_id_pajakio_trx_url"/>
                            <field name="l10n_id_pajakio_nofa"/>
                            <field name="l10n_id_pajakio_failure_reason" invisible="not l10n_id_pajakio_failure_reason"/>
                            <field name="l10n_id_pajakio_status"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//button[@name='button_request_cancel']" position="attributes">
                <attribute name="confirm">Cancelling invoice is an irreversible action. Please maek sure you want to cancel the following invoice</attribute>
            </xpath>
        </field>
    </record>


    <!-- Server action to run the update -->
    <record id="action_print_ecpay_invoice" model="ir.actions.server">
        <field name="name">Pajak.io: Update status</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
action = records._l10n_id_pajakio_update_status()
        </field>
    </record> 

</odoo>
