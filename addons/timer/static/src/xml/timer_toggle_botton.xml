<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <div t-name="timerToggleButton" owl="1">
        <button class="o_icon_button o-timer-button"
            t-att-title="value ? env._t('Stop') : env._t('Play')"
            t-att-name="value ? 'action_timer_stop' : 'action_timer_start'"
            t-att-aria-label="value ? env._t('Stop') : env._t('Start')"
            t-att-aria-pressed="value"
            type="button"
            role="button"
            t-on-click.stop="_onToggleButton">
                <i t-attf-class="fa {{ value ? 'fa-stop-circle o-timer-stop-button': 'fa-play-circle o-timer-play-button' }}" t-att-title="title"/>
        </button>
    </div>
</templates>
