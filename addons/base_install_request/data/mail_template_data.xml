<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mail_installation_request_template">
        <div style="margin: 0px; padding: 0px;">
            <p style="margin: 0px; padding: 0px; font-size: 13px;">
                Dear <t t-out="partner.name"/>,
                <br/><br/>
                <span style="font-weight: bold;" t-out="user_id.name"/> has requested access to <span style="font-weight: bold;" t-out="module_id.shortdesc"/>.
                <br/><br/>
                <t t-if="show_body">
                    <span> They added the following comment: </span>
                    <div style="border-left: 4px solid #dee2e6; padding: 8px 0 8px 16px; margin: 1rem 0 2rem 0;">
                        <div class="quoted-comment">
                            <t t-out="body_html"/>
                        </div>
                    </div>
                </t>
                <a t-attf-style="background-color: {{user_id.company_id.email_secondary_color or '#875A7B'}}; padding:8px 16px 8px 16px; text-decoration:none; color: {{user_id.company_id.email_primary_color or '#FFFFFF'}}; border-radius:5px"
                   t-attf-href="/odoo/{{ module_id.id }}/action-base_install_request.action_base_module_install_review?menu_id={{ menu_id }}">
                    Review Request
                </a>
                <br/><br/>
            </p>
        </div>
     </template>
</odoo>
