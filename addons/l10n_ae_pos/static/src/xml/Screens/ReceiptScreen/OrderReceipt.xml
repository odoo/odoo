<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceiptVAT" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@id='post_receipt_taxes_container']" position="replace">
            <div id='post_receipt_taxes_container'>
                <t t-if="env.pos.company.country.code == 'AE'">VAT</t>
                <t t-else="">Total Taxes</t>
                <span t-esc="env.utils.formatCurrency(receipt.total_tax)" class="pos-receipt-right-align"/>
            </div>
        </xpath>
    </t>
</templates>
