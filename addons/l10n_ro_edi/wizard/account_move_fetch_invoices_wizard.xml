<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="account_move_fetch_invoices_wizard_form" model="ir.ui.view">
            <field name="name">l10n_ro_edi.account_move_fetch_invoices.wizard.form</field>
            <field name="model">l10n_ro_edi.account_move_fetch_invoices.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="mb-2">
                        Select the date from which you want to synchronize with ANAF (up to 60 days)
                    </div>
                    <group class="w-50">
                        <field name="start_date"/>
                    </group>
                    <footer>
                        <button string="Synchronize"
                                name="action_l10n_ro_edi_fetch_invoices_from_date"
                                type="object"
                                class="btn-primary"/>
                        <button string="Discard"
                                special="cancel"
                                class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
