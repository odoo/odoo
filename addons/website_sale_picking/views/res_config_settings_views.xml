<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale.onsite</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='click_and_collect_setting']" position="inside">
                <div class="mt8">
                    <button
                        name="%(website_sale_picking.action_view_onsite_dms)d"
                        icon="oi-arrow-right"
                        type="action"
                        string="Configure Pickup Locations"
                        class="btn-link"
                    />
                </div>
            </xpath>
        </field>
    </record>

</odoo>
