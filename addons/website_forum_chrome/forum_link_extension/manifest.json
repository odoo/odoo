{
    "manifest_version": 2,
    "name": "Odoo extension for submit link to forum",
    "version": "1.0",
    "description": "This extension will allows users to submit current URL to odoo forum",
    "icons": {
        "16": "static/src/img/logo.png",
        "19": "static/src/img/logo.png",
        "38": "static/src/img/logo.png",
        "48": "static/src/img/logo.png",
        "128": "static/src/img/logo.png"
    },
    "background": {
        "scripts": [
            "static/src/js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "static/src/img/logo.png",
        "default_popup": "index.html"
    },
    "permissions": [
        "http://*/",
        "https://*/",
        "activeTab",
        "tabs"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
