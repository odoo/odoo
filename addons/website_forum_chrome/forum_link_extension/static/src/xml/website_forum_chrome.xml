<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1:
-->
<templates id="template" xml:space="preserve">
    <t t-name="WebsiteForumChrome">
        <div class="container-fluid">
            <div class="row screens">
            </div>
        </div>
    </t>

    <t t-name="LinkSubmitScreen">
        <div class="o_forum">
            <div class="container-fluid o_header">
                <div class="row">
                    <h4 class="ml5 text-center">Submit link to <t t-esc="widget.forum_name"></t></h4>
                    <h6 class="text-center">(<t t-esc="widget.forum_url"></t>)</h6>
                </div>
            </div>
            <div class="mt5 ml5">
                <button t-if="!widget.is_session()" class="btn btn-primary o_login">Login</button>
                <button t-if="widget.is_session()" class="btn btn-primary o_submit_link">Submit</button>
            </div>
        </div>
    </t>

    <t t-name="KarmaWarning">
        <div class="modal-header alert alert-danger mt5">
            <button type="button" class="close notification_close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&amp;times;</span>
            </button>
            <h4 class="modal-title"><t t-esc="widget.required_karma"></t> karma is required to perform this action. You can earn karma by having your answers upvoted by the community.</h4>
        </div>
    </t>

    <t t-name="LinkSubmitPostScreen">
        <div class="o_forum">
            <div class="container-fluid o_header">
                <div class="row">
                    <h4 class="ml5">Link successfully submitted to forum</h4>
                </div>
            </div>
            <div class="mt5 ml5">
                <button class="btn btn-primary o_jump_page">Jump to the page</button> or
                <button class="btn btn-link o_cancel">Cancel</button>
            </div>
        </div>
    </t>

    <t t-name="Crash.warning">
        <div class="modal" tabindex="-1" data-backdrop="static" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3 class="modal-title"><t t-raw="title"/></h3>
                    </div>
                    <div class="modal-body">
                        <table cellspacing="0" cellpadding="0" border="0" class="oe_dialog_warning">
                            <tr>
                                <td>
                                    <p>
                                        <t t-js="d">
                                            var message = d.message ? d.message : d.error.data.message;
                                            d.html_error = context.engine.tools.html_escape(message)
                                                .replace(/\n/g, '<br/>');
                                        </t>
                                        <t t-raw="html_error"/>
                                    </p>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="Crash.error">
        <div class="modal" tabindex="-1" data-backdrop="static" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3 class="modal-title"><t t-raw="title"/></h3>
                    </div>
                    <div class="modal-body">
                        <div class="oe_error_detail">
                            <pre><t t-esc="error.message"/></pre>
                            <hr/>
                            <pre><t t-esc="error.data.debug"/></pre>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>