<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="event_report_template_a4_ticket_inherit_sale" inherit_id="event.event_report_template_a4_ticket">
        <xpath expr="//div[hasclass('o_event_a4_ticket_side_info')]" position="inside">
            <div t-if="attendee and attendee.sale_order_id" class="mb-2">
                <div class="o_event_a4_ticket_font_faded o_event_a4_ticket_small_caps font-weight-bold">Order Ref</div>
                <div class="o_event_a4_ticket_small" t-field="attendee.sale_order_id"/>
            </div>
            <div t-if="attendee and attendee.sale_order_id" class="mb-2">
                <div class="o_event_a4_ticket_font_faded o_event_a4_ticket_small_caps font-weight-bold">Order Date</div>
                <div class="o_event_a4_ticket_small" t-field="attendee.sale_order_id.date_order"/>
            </div>
            <div t-if="attendee and attendee.event_ticket_id.price" class="mb-2">
                <div class="o_event_a4_ticket_font_faded o_event_a4_ticket_small_caps font-weight-bold">Price</div>
                <div class="o_event_a4_ticket_small" t-field="attendee.event_ticket_id.price"
                        t-options="{'widget': 'monetary', 'display_currency': attendee.event_ticket_id.product_id.currency_id}"/>
            </div>
        </xpath>
    </template>
</odoo>
