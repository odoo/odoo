<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="module_category_mrp_repair" model="ir.module.category">
            <field name="name">Repairs Management</field>
            <field name="sequence">16</field>
        </record>

        <record id="group_mrp_repair_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="mrp_repair.module_category_mrp_repair"/>
        </record>
        <record id="group_mrp_repair_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="mrp_repair.module_category_mrp_repair"/>
            <field name="implied_ids" eval="[(4, ref('mrp_repair.group_mrp_repair_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

    </data>
    <data noupdate="1">

<!-- Multi -->
    <record model="ir.rule" id="mrp_repair_rule">
        <field name="name">mrp_repair multi-company</field>
        <field name="model_id" search="[('model','=','mrp.repair')]" model="ir.model"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','child_of',[user.company_id.id]),('company_id','=',False)]</field>
    </record>

    <record id="account_invoice_rule" model="ir.rule">
        <field name="name">Mrp Repair Invoice</field>
        <field ref="account.model_account_invoice" name="model_id"/>
        <field name="domain_force">[('repair_id','!=',False)]</field>
        <field name="groups" eval="[(4, ref('mrp_repair.group_mrp_repair_user'))]"/>
    </record>
    <record id="account_invoice_line_rule" model="ir.rule">
        <field name="name">Mrp Repair Invoice Line</field>
        <field ref="account.model_account_invoice_line" name="model_id"/>
        <field name="domain_force">[('repair_id','!=',False)]</field>
        <field name="groups" eval="[(4, ref('mrp_repair.group_mrp_repair_user'))]"/>
    </record>
    <record id="account_invoice_tax_rule" model="ir.rule">
        <field name="name">Mrp Repair Invoice Tax</field>
        <field ref="account.model_account_invoice_tax" name="model_id"/>
        <field name="domain_force">[('repair_id','!=',False)]</field>
        <field name="groups" eval="[(4, ref('mrp_repair.group_mrp_repair_user'))]"/>
    </record>
    <record id="stock_move_rule" model="ir.rule">
        <field name="name">Mrp Repair Stock Move</field>
        <field ref="stock.model_stock_move" name="model_id"/>
        <field name="domain_force">[('repair_id','!=',False)]</field>
        <field name="groups" eval="[(4, ref('mrp_repair.group_mrp_repair_user'))]"/>
    </record>
    <record id="stock_move_line_rule" model="ir.rule">
        <field name="name">Mrp Repair Stock Move Line</field>
        <field ref="stock.model_stock_move_line" name="model_id"/>
        <field name="domain_force">[('mov_id.repair_id','!=',False)]</field>
        <field name="groups" eval="[(4, ref('mrp_repair.group_mrp_repair_user'))]"/>
    </record>

    </data>
</odoo>
