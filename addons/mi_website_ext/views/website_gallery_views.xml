<odoo>
    <data>
        <record id="view_website_gallery_album_form" model="ir.ui.view">
            <field name="name">website.gallery.album.form</field>
            <field name="model">website.gallery.album</field>
            <field name="arch" type="xml">
                <form string="Álbum de Galería">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" string="Imagen de Portada"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Título del Álbum..."/>
                            </h1>
                        </div>
                        <group>
                            <field name="description" placeholder="Pequeña descripción del álbum..."/>
                            <field name="is_published" widget="boolean_toggle"/>
                        </group>
                        <notebook>
                            <page string="Fotos">
                                <field name="photo_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="image_1920" widget="image" string="Miniatura" class="oe_avatar"/>
                                        <field name="name" string="Descripción de la Foto"/>
                                        <field name="video_file" filename="video_filename" widget="binary"/>
                                        <field name="video_filename" invisible="1"/>
                                        <field name="name" string="Descripción"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_website_gallery_album_list" model="ir.ui.view">
            <field name="name">website.gallery.album.list</field>
            <field name="model">website.gallery.album</field>
            <field name="arch" type="xml">
                <list string="Álbumes de Galería">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="is_published"/>
                </list>
            </field>
        </record>
        <record id="action_website_gallery_album" model="ir.actions.act_window">
            <field name="name">Álbumes de Galería</field>
            <field name="res_model">website.gallery.album</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_website_gallery_album_action"
                  name="Gestionar Galería"
                  parent="mi_website_ext.menu_website_publication_root"
                  action="action_website_gallery_album"
                  sequence="20"/>
    </data>
</odoo>