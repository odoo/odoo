<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_profile" name="Mi Perfil">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <h2 class="profile-title">Mi Perfil</h2>
                        <div class="card">
                            <div class="card-body text-center">
                                <img t-att-src="image_data_uri(user.image_1920)"
                                     class="img-fluid rounded-circle mb-3"
                                     style="width: 150px; height: 150px; object-fit: cover;"
                                     alt="Avatar"/>
                                <h4 class="card-title">
                                    <t t-esc="user.name"/>
                                </h4>
                                <p class="profile-email">
                                    <t t-esc="user.email"/>
                                </p>
                                <hr class="profile-hr"/>
                                <h5 class="mt-4">Cambiar Foto de Perfil</h5>
                                <form action="/my/account/update_avatar" method="post" enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="mb-3">
                                        <input type="file" name="avatar" class="form-control" required="1" accept="image/*"/>
                                    </div>
                                    <button type="submit" class="profile-button">Subir nueva imagen</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>