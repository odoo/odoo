<odoo>
    <template id="news_template" name="News View">
        <div id="splash-loader">
            <div class="splash-wrapper">
                <div class="splash-spinner"></div>
            </div>
        </div>
        <t t-call="website.layout">
            <t t-call-assets="mi_website_ext.assets_news" />
            <div class="content_container">
                <div class="news_container">
                    <h1 class="news_title">Noticias</h1>
                    <p class="news_subtitle">Lee las últimas noticias</p>
                    <div class="news_section">
                        <div class="album_list">
                            <t t-if="news_articles">
                                <t t-foreach="news_articles" t-as="post">
                                    <a class="album_item" t-att-href="post.link" target="_blank">
                                        <t t-if="post.image_url">
                                            <img t-att-src="post.image_url" t-att-alt="post.title"/>
                                        </t>
                                        <t t-else="">
                                            <img src="/mi_website_ext/static/src/img/newsimage.jpg" t-att-alt="post.title"/>
                                        </t>
                                        <h3 class="title-truncate">
                                            <t t-esc="post.title"/>
                                        </h3>
                                        <p>
                                            <t t-esc="post.source"/> —
                                            <t t-esc="post.published_date.strftime('%d/%m/%Y')"/>
                                        </p>
                                    </a>
                                </t>
                            </t>
                            <t t-else="">
                                <p class="text-muted">No hay noticias disponibles.</p>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>