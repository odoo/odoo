<odoo>
    <data noupdate="1">
        <record id="mail_template_notify_absence" model="mail.template">
            <field name="name">Notificación de Ausencia de Empleado</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">Notificación de Ausencia: ${ctx.get('employee_name')}</field>
            <field name="email_from">"${object.company_id.name}" &lt;${object.company_id.email or user.email}&gt;</field>
            <field name="body_html" type="html">
                <div style="font-family: sans-serif; font-size: 14px; color: #333;">
                    <p>Estimado equipo de Recursos Humanos,</p>
                    <p>
                        Se notifica que el empleado <strong>${ctx.get('employee_name')}</strong> (${ctx.get('employee_email')}) no podrá asistir a trabajar el día de hoy.
                    </p>
                    <p>
                        <strong>Motivo proporcionado:</strong><br/>
                        <em style="padding-left: 15px; display: block;">
                            ${ctx.get('reason')}
                        </em>
                    </p>
                    <p>
                        Se le ha recordado al empleado que debe presentar la justificación o incapacidad correspondiente.
                    </p>
                    <p>
                        <br/>
                        Saludos,<br/>
                        Sistema de Portal Interno
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>