<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Privilege -->
        <record model="res.groups.privilege" id="res_groups_privilege_audit">
            <field name="name">Audit</field>
            <field name="category_id" ref="base.module_category_administration"/>
        </record>

        <!-- Security Groups -->
        <record id="group_audit_user" model="res.groups">
            <field name="name">User</field>
            <field name="sequence">10</field>
            <field name="privilege_id" ref="res_groups_privilege_audit"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view audit logs</field>
        </record>

        <record id="group_audit_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="sequence">20</field>
            <field name="privilege_id" ref="res_groups_privilege_audit"/>
            <field name="implied_ids" eval="[(4, ref('group_audit_user'))]"/>
            <field name="comment">Full access to audit logs and reports</field>
        </record>

        <!-- Record Rules -->
        <!-- Audit Users can see all logs (read-only) -->
        <record id="audit_log_rule_user" model="ir.rule">
            <field name="name">Audit Log: User - Read All</field>
            <field name="model_id" ref="model_camtel_audit_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_audit_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- System users can create logs but cannot modify/delete -->
        <record id="audit_log_rule_system" model="ir.rule">
            <field name="name">Audit Log: System - Create Only</field>
            <field name="model_id" ref="model_camtel_audit_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
