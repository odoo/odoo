<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

    <record id="enable_portal_payment" model="ir.config_parameter" forcecreate="0">
        <field name="key">account_payment.enable_portal_payment</field>
        <field name="value">True</field>
    </record>

        <record id="portal_entry_overdue_invoices" model="portal.entry">
            <field name="name">Invoices to pay</field>
            <field name="url">/my/invoices?filterby=overdue_invoices</field>
            <field name="placeholder_count">overdue_invoice_count</field>
        </record>
        
    </data>
</odoo>
