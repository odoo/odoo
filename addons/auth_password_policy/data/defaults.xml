<odoo>
    <record model="ir.config_parameter" id="minlength">
        <field name="key">auth_password_policy.minlength</field>
        <field name="value" type="int">8</field>
    </record>

    <record model="ir.config_parameter" id="leak_check_enabled" forcecreate="False">
        <field name="key">auth_password_policy.leak_check_enabled</field>
        <field name="value">True</field>
    </record>

    <record model="ir.config_parameter" id="leak_check_frequency_count" forcecreate="False">
        <field name="key">auth_password_policy.leak_check_frequency_count</field>
        <field name="value" type="int">1</field>
    </record>

    <record model="ir.config_parameter" id="leak_check_frequency_unit" forcecreate="False">
        <field name="key">auth_password_policy.leak_check_frequency_unit</field>
        <field name="value">months</field>
    </record>
</odoo>
