<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.auth_password_policy</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- add before the Access Rights section -->
            <xpath expr="//div[@id='access_rights']" position="before">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <div class="row">
                            <label for="minlength" class="col-xs-3"/>
                            <field name="minlength" class="col-xs-9"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
