<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sale_order_form_quote" model="ir.ui.view">
            <field name="name">sale.order.form.payment.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_confirm'][1]" position="after">
                    <button attrs="{'invisible': [('template_id', '=', False)]}" class="o_open_quotation" name="action_open_quotation" string="Preview" type="object"/>
                </xpath>
                <xpath expr="//page/field[@name='order_line']/.." position="after">
                    <page string="Suggested Products">
                        <field invisible="1" name="quote_viewed"/>
                        <field name="options">
                            <tree editable="bottom" string="Sales Quotation Template Lines">
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field groups="product.group_uom" name="uom_id"/>
                                <field name="price_unit"/>
                                <field groups="sale.group_discount_per_so_line" name="discount"/>
                                <field invisible="1" name="website_description"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='project_id']" position="before">
                    <label for="template_id"/>
                    <div>
                        <field context="{'company_id': company_id}" name="template_id" options="{'no_create': True, 'no_open': True}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='client_order_ref']" position="after">
                    <field name="require_payment" widget="radio"/>
                    <field invisible="1" name="website_description"/>
                </xpath>
            </field>
        </record>
</odoo>
