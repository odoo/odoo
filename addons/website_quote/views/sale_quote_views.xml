<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="website_quote_inherits_view_sale_quote_template_form" model="ir.ui.view">
        <field name="name">sale.quote.template.form</field>
        <field name="model">sale.quote.template</field>
        <field name="inherit_id" ref="sale.view_sale_quote_template_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Website Description">
                    <field name="website_description" />
                </page>
            </xpath>

            <xpath expr="//tree" position="inside">
                <field name="website_description" invisible="1"/>
            </xpath>

            <xpath expr="//form/sheet" position="inside">
                <field name="website_description" invisible="1"/>
            </xpath>

        </field>
    </record>
</odoo>
