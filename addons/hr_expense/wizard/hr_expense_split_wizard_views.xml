<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_expense_split" model="ir.ui.view">
            <field name="name">Expense split</field>
            <field name="model">hr.expense.split.wizard</field>
            <field name="arch" type="xml">
                <form class="o_expense_split_form">
                    <field name="total_amount_currency_original" invisible="1"/>
                    <field name="expense_id" invisible="1"/>
                    <field name="expense_split_line_ids" widget="one2many" context="{'default_expense_id': expense_id}">
                        <list editable="bottom">
                            <field name="currency_id" column_invisible="True"/>
                            <field name="expense_id" column_invisible="True"/>
                            <field name="company_id" column_invisible="True"/>
                            <field name="product_has_cost" column_invisible="True"/>
                            <field name="name" optional="hide"/>
                            <field name="product_id"
                                context="{
                                    'default_type': 'service',
                                    'default_can_be_expensed': 1,
                                    'list_view_ref': 'hr_expense.product_product_expense_tree_view',
                                    'form_view_ref': 'hr_expense.product_product_expense_form_view',
                                }"
                            />
                            <field name="employee_id" widget="many2one_avatar_user"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                            <field name="tax_amount_currency" string="Tax"/>
                            <field name="analytic_distribution"
                                string="Analytic"
                                widget="analytic_distribution"
                                optional="show"
                                groups="analytic.group_analytic_accounting"/>
                            <field name="total_amount_currency" string="Total" force_save="1" readonly="product_has_cost"/>
                        </list>
                    </field>
                    <field name="currency_id" invisible="1"/>
                    <group class="oe_subtotal_footer border-top-0 me-2" colspan="2" name="expense_total">
                        <label for="total_amount_currency"/>
                        <div class="d-flex">
                            <field name="total_amount_currency" nolabel="1" class="text-danger" invisible="split_possible"/>
                            <field name="total_amount_currency" nolabel="1" invisible="not split_possible"/>
                            <span class="mx-1" invisible="split_possible">/</span>
                            <field name="total_amount_currency_original" widget='monetary' nolabel="1" invisible="split_possible"/>
                        </div>
                        <field name="tax_amount_currency" widget='monetary' string="Taxes"/>
                    </group>
                    <field name="split_possible" invisible="1"/>
                    <footer>
                        <button name="action_split_expense" invisible="split_possible" string="Split" type="object" class="oe_highlight" disabled="disabled"  data-hotkey="q"/>
                        <button name="action_split_expense" string="Split" invisible="not split_possible" type="object" class="oe_highlight"  data-hotkey="q"/>
                        <button class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
