<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_expense_sheet_tree" model="ir.ui.view">
        <field name="name">hr.expense.sheet.tree</field>
        <field name="model">hr.expense.sheet</field>
        <field name="arch" type="xml">
            <tree string="Employess Expenses" colors="blue:state=='draft'" fonts="bold: message_unread == True" create="false">
                <field name="employee_id"/>
                <field name="department_id" invisible="1"/>
                <field name="date"/>
                <field name="name" string="Expense Sheet"/>
                <field name="currency_id" groups="base.group_multi_currency"/>
                <field name="amount" sum="Total Amount"/>
                <field name="state"/>
                <field name="message_unread" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_expense_sheet_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form</field>
        <field name="model">hr.expense.sheet</field>
        <field name="arch" type="xml">
            <form string="Employess Expenses" create="false">
            <header>
                <button name="validate" states="confirm" string="Approve" type="workflow" groups="base.group_hr_user" class="oe_highlight"/>
                <button name="refuse" states="confirm,accepted" string="Refuse" type="workflow" groups="account.group_account_user" />
                <button name="draft" states="confirm,cancel" string="Set to Draft" type="workflow" groups="base.group_hr_user" />
                <button name="done" states="accepted" string="Generate Accounting Entries" type="workflow" groups="account.group_account_invoice,account.group_account_user" class="oe_highlight"/>
                <button name="action_view_move" states="done" string="Open Accounting Entries" type="object" groups="account.group_account_invoice,account.group_account_user"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,accepted,done,paid" statusbar_colors='{"confirm":"blue","cancel":"red"}'/>
            </header>
            <sheet>
            <div class="oe_right oe_button_box">
                <button name="action_get_attachment_view" 
                    class="oe_stat_button"
                    icon="fa-book"
                    type="object">
                    <field name="attachment_ids" widget="x2many_counter" string="Documents"/>
                </button>
            </div>
            <div class="oe_title">
            <label for="employee_id" class="oe_edit_only"/>
                <h1>
                    <field name="employee_id" class="oe_inline"/>
                </h1>
            </div>
                <group>
                    <group>
                        <field name="date"/>
                        <field name="department_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="user_valid" attrs="{'invisible': [('state','=','draft')]}" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'base.group_hr_user']}"/>
                        <field name="currency_id" groups="base.group_multi_currency"/>
                    </group>
                    <group>
                        <field name="journal_id" widget="selection" domain="[('type', '=', 'purchase')]" string="Journal" groups="account.group_account_user"/>
                        <field name="employee_payable_account_id" widget="selection" domain="[('type', '=', 'payable')]" groups="account.group_account_user"/>
                    </group>
                    <group>
                        <label class="oe_grey" groups="account.group_account_user" string="If this field is empty, entries will be generated in the purchase journal."/>
                    </group>
                </group>
                <separator string="Expense Lines"/>    
                <field name="line_ids" context="{'currency_id': currency_id, 'default_analytic_account_id': context.get('analytic_account_id', '')}" options="{'reload_on_button': True}">
                    <form string="Expense Lines">
                        <group>
                            <group>
                                <field name="product_id" context="{'default_can_be_expensed':1}"/>
                                <field name="name"/>
                                <field domain="[('type','=','normal')]" name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                            </group>
                            <group>
                                <field name="unit_amount"/>
                                <field name="unit_quantity" /> 
                                <field name="uom_id"/>
                                <field name="date" />
                            </group>
                        </group>
                    </form>
                    <tree string="Expense Lines" editable="bottom">
                        <field name="sequence" invisible="1"/>
                        <field name="product_id" context="{'default_can_be_expensed':1}"/>
                        <field name="date" string="Expense Date"/>
                        <field name="name" string="Description"/>
                        <field domain="[('type','in',['normal','contract'])]" name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                        <field name="uom_id"/>
                        <field name="unit_amount"/>
                        <field name="unit_quantity"/>
                        <field name="expense_tax_id" widget="many2many_tags" groups="account.group_account_user"/>
                        <field name="amount_untaxed"/>
                        <field name="state"/>
                        <button name="%(hr_expense.action_expense_cancel_reason)d" states="accepted" string="Cancelled by accountant" type="action" icon="gtk-cancel" groups="account.group_account_user"/>
                    </tree>
                </field>
                <group>
                    <div>
                        <separator string="Description"/>
                        <field name="note" placeholder="Free Notes"/>
                    </div>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_footer_separator"/>
                    </group>
                </group>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
    </record>

    <record id="view_expense_sheet_filter" model="ir.ui.view">
        <field name="name">hr.expense.sheet.filter</field>
        <field name="model">hr.expense.sheet</field>
        <field name="arch" type="xml">
            <search string="Employess Expenses">
                <field name="name" string="Expenses"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="department_id" string="Department" context="{'invisible_department': False}"/>
                <filter domain="[('state','=','accepted')]" string="To Pay" name="approved" help="Expenses to Invoice"/>
                <separator />
                <filter domain="[('employee_id.user_id', '=', uid)]" string="My Expenses"/>
                <separator />
                <filter string="New Mail" name="message_unread" domain="[('message_unread','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" domain="[]" context="{'group_by':'employee_id'}"/>
                    <filter string="Department" domain="[]" context="{'group_by':'department_id'}"/>
                    <filter string="Expenses Month" domain="[]" context="{'group_by':'date'}" help="Expenses by Month"/>
                </group>
                <separator />
                <filter domain="[('employee_id.active','=',False)]" string="Former Employees" name="inactive" groups="base.group_hr_user,base.group_hr_manager"/>
            </search>
        </field>
    </record>

    <record id="view_product_hr_expense_form" model="ir.ui.view">
        <field name="name">product.template.expense.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="can_be_expensed"/>
                    <label for="can_be_expensed"/>
                </div>
            </div>
        </field>
    </record>
    
    <record id="hr_expense_product" model="ir.actions.act_window">
        <field name="name">Expense Products</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{"default_can_be_expensed":1}</field>
        <field name="domain">[('can_be_expensed','=',True)]</field>
        <field name="search_view_id" ref="product.product_search_form_view"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to create a new expense category. 
         </p>
        </field>
    </record>

    <record id="action_expense_sheet" model="ir.actions.act_window">
        <field name="name">Employess Expenses</field>
        <field name="res_model">hr.expense.sheet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_expense_sheet_tree"/>
        <field name="domain">[('state','in', ['accepted', 'done', 'paid'])]</field> 
        <field name="context">{"search_default_approved": 1}</field>
        <field name="help" type="html">
            <p>
                From here the accountant will be able to approve as well as refuse the expense sheets (which contains expenses) which are verified by the HR Manager.
            </p>
        </field>

    </record>
    
    <record id="act_hr_employee_sheet" model="ir.actions.act_window">
        <field name="name">Sheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.expense.sheet</field>
        <field name="src_model">hr.employee</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="view_expense_sheet_tree"/>
        <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
        <field name="domain">[('state','=','confirm')]</field>
    </record>

    <record id="view_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(act_hr_employee_sheet)d"
                        icon="fa-pencil-square-o"
                        class="oe_stat_button"
                        type="action"
                        groups="base.group_hr_user">
                        <div><strong><field name="expenses_amount" widget="monetary"/></strong><br/>Expenses</div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="hr_expense_action_from_department" model="ir.actions.act_window">
        <field name="name">Expenses To Approve</field>
        <field name="res_model">hr.expense.sheet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_expense_sheet_filter"/>
        <field name="context">{
            'search_default_confirm': 1,
            'search_default_employee': 1,
            'search_default_department_id': [active_id],
            'default_department_id': active_id}
        </field>
    </record>

    <!--Hr Department Inherit Kanban view-->
    <record id="hr_department_view_kanban" model="ir.ui.view">
        <field name="name">hr.department.kanban.inherit</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.hr_department_view_kanban"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//templates" position="before">
                    <field name="expense_to_approve_ids"/>
                </xpath>
                <xpath expr="//div[@name='to_approve']" position="attributes">
                    <attribute name="class">col-md-6 col-xs-6</attribute>
                </xpath>
                <xpath expr="//div[@name='to_approve']" position="inside">
                    <div>
                        <a name="%(hr_expense_action_from_department)d" type="action"> <t t-esc="record.expense_to_approve_ids.raw_value.length"/>Expenses</a>
                    </div>
                </xpath>
            </data>
        </field>
    </record>

    <record id="action_run_hr_expense_line" model="ir.actions.server">
        <field name="name">Submit Expenses</field>
        <field name="condition">True</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_hr_expense"/>
        <field name="state">code</field>
        <field name="code">
            self.submit_expenses(cr, uid, context.get('active_ids', []), context=context)
        </field>
    </record>

    <record model="ir.values" id="action_module_hr_expense_line">
        <field name="name">action_module_hr_expense_line</field>
        <field name="action_id" ref="action_run_hr_expense_line" />
        <field name="value" eval="'ir.actions.server,' + str(ref('action_run_hr_expense_line'))" />
        <field name="key">action</field>
        <field name="model_id" ref="model_hr_expense" />
        <field name="model">hr.expense</field>
        <field name="key2">client_action_multi</field>
    </record>
    
    <record id="view_hr_expenses_filter" model="ir.ui.view">
        <field name="name">hr.expenses.expense.filter</field>
        <field name="model">hr.expense</field>
        <field name="arch" type="xml">
            <search string="My Expenses">
                <field name="name" string="Expenses"/>
                <field name="date"/>
                <field name="employee_id"/>
                <filter domain="[('state','=','draft')]" string="To Submit" name="new_expense" help="To Submit Expense"/>
                <filter domain="[('state','=','confirm')]" string="Submitted" name="submitted_expense" help="Submitted Expense"/>
                <filter domain="[('state','=','accepted')]" string="Approved" name="accepted_expense" help="Approved Expense"/>
                <filter domain="[('state','=','done')]" string="Waiting Payment" name="done_expense" help="Waiting Payment Expense"/>
                <filter domain="[('state','=','paid')]" string="Paid" name="paid_expense" help="Paid Expense"/>
                <filter domain="[('state','=','cancel')]" string="Cancelled" name="cancelled_expense" help="Cancelled Expense"/>
                <separator />
                <filter domain="[('employee_id.user_id', '=', uid)]" string="My Expenses"/>
                <filter string="New Mail" name="message_unread" domain="[('message_unread','=',True)]"/>
                <separator />
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" domain="[]" context="{'group_by':'employee_id'}"/>
                    <filter string="Expenses Month" domain="[]" context="{'group_by':'date'}" help="Expenses by Month"/>
                </group>
            </search>
        </field>
    </record>  

    <record id="view_hr_expenses_tree" model="ir.ui.view">
        <field name="name">hr.expenses.expense.tree</field>
        <field name="model">hr.expense</field>
        <field name="arch" type="xml">
            <tree string="My Expenses" colors="blue:state=='draft';gery:state=='cancel';black:state in ('confirm','accepted','done','paid')" fonts="bold: message_unread == True">
                <field name="name" string="Description"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="analytic_account_id"/>
                <field name="product_id" string="Expense Product"/>
                <field name="unit_amount"/>
                <field name="unit_quantity"/>
                <field name="amount" sum="Total Amount"/>
                <field name="state"/>
                <field name="message_unread" invisible="1"/>
                <button name="submit_expenses" states="draft" string="Submit to Manager" type="object" icon="gtk-apply"/>
                <button name="approve_expenses" states="confirm" string="Approved by hr manager" type="object" icon="gtk-apply" groups="base.group_hr_manager"/>
                <button name="%(hr_expense.action_expense_cancel_reason)d" states="confirm" string="Cancelled by hr manager" type="action" icon="gtk-cancel" groups="base.group_hr_manager"/>
            </tree>
        </field>
    </record>
    
    <record id="view_hr_expenses_form" model="ir.ui.view">
        <field name="name">hr.expenses.expemses.form</field>
        <field name="model">hr.expense</field>
        <field name="arch" type="xml">
            <form string="My Expenses">
            <header>
                <button name="submit_expenses" states="draft" string="Submit" type="object" class="oe_highlight"/>
                <button name="approve_expenses" states="confirm" string="Approve" type="object" class="oe_highlight"  groups="base.group_hr_manager"/>
                <button name="cancel_expenses" states="draft,confirm" string="Cancel" type="object" class="oe_highlight"/>
                <button name="reset_expenses" states="cancel" string="Set to Draft" type="object" class="oe_highlight"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,accepted,done,paid,cancel" statusbar_colors='{"draft":"blue"}' />
            </header>
            <sheet>
                <form string="Expense Lines">
                    <div class="oe_title">
                    <label for="name"  string="Description" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="employee_id"/>
                            <field name="analytic_account_id" string="Contract"/>
                        </group>
                        <group>
                            <field name="product_id" string="Expense Product" context="{'default_can_be_expensed':1}"/>
                            <field name="unit_amount" required="1"/>
                            <label for="unit_quantity"/>
                            <div>
                                <field name="unit_quantity" class="oe_inline"/> 
                                <field name="uom_id" widget="selection" class="oe_inline"/>
                            </div>
                            <label for="expense_tax_id" groups="account.group_account_user"/>
                            <div>
                                <field name="expense_tax_id" widget="many2many_tags" groups="account.group_account_user"/>
                            </div>
                        </group>
                    </group>
                    <group class="oe_subtotal_footer oe_right">
                        <label for="amount"  class="oe_subtotal_footer_separator" style="padding-top: 6px !important;"/>
                        <div>
                            <field name="amount" nolabel="1" class="oe_subtotal_footer_separator "/>
                        </div>
                    </group>
                    <div attrs="{'invisible' : [('state', '!=', 'cancel')]}">
                        <separator string="Cancel Reason"/>
                        <field name="note" placeholder="Reason" style="width: 65%"/>
                    </div>
                    <group>
                        <div id="alertbox" class="alert alert-warning">Use the messaging tool here under to log a note about your expense or attach a receipt (save the document).
                            <a class="close" data-dismiss="alert" href="#" aria-hidden="True">x</a>
                        </div>
                    </group>
                </form>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
    </record>

    <record id="action_my_expenses" model="ir.actions.act_window">
        <field name="name">My Expenses</field>
        <field name="res_model">hr.expense</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hr_expenses_tree"/>
        <field name="search_view_id" ref="view_hr_expenses_filter"/>
        <field name="domain">[('employee_id.user_id','=',uid)]</field>
        <field name="context">{'search_default_new_expense':1,
            'needaction_menu_ref': 'hr_expense.menu_my_expenses'
            }</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to register new expenses. 
          </p><p>
            Odoo will ensure the whole process is followed;The employee will be creating a expense's and submitted expense's to the HR manager.
          </p>
        </field>
    </record>

    <record id="action_expense_to_approve" model="ir.actions.act_window">
        <field name="name">Expenses to Approve</field>
        <field name="res_model">hr.expense</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hr_expenses_tree"/>
        <field name="search_view_id" ref="view_hr_expenses_filter"/>
        <field name="domain">[('state','not in', ['cancel', 'draft'])
            ]</field>
        <field name="context">{'search_default_submitted_expense':1,
            'search_default_employee':1}</field>
    </record>

    <menuitem id="menu_expense_approved" name="Employees Expenses" parent="account.menu_finance_payables" action="action_expense_sheet" sequence="8"/>
    <menuitem id="menu_hr_product" name="Expense Products" parent="hr.menu_hr_configuration_expenses" action="hr_expense_product" groups="base.group_hr_manager"/>
    <menuitem id="next_id_49" name="Expenses" sequence="15" parent="hr.menu_hr_root"/>
    <menuitem action="action_my_expenses" id="menu_my_expenses" name="My Expenses" parent="next_id_49" sequence="1"/>
    <menuitem action="action_expense_to_approve" id="menu_expense_to_approve" name="Expenses to Approve" parent="next_id_49" groups="base.group_hr_user" sequence="2"/>
        
</odoo>
