<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_expense_report_view_pivot" model="ir.ui.view">
        <field name="name">hr.expense.report.pivot</field>
        <field name="model">hr.expense.report</field>
        <field name="arch" type="xml">
            <pivot string="Expenses Analysis" disable_linking="True">
                <field name="employee_id" type="row"/>
                <field name="create_date" interval="month" type="col"/>
                <field name="price_total" type="measure"/>
                <field name="price_average" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="hr_expense_report_view_graph" model="ir.ui.view">
        <field name="name">hr.expense.report.graph</field>
        <field name="model">hr.expense.report</field>
        <field name="arch" type="xml">
            <graph string="Expenses Analysis">
                <field name="employee_id" type="row"/>
                <field name="create_date" interval="month" type="col"/>
                <field name="price_total" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="hr_expense_report_view_search" model="ir.ui.view">
        <field name="name">hr.expense.report.search</field>
        <field name="model">hr.expense.report</field>
        <field name="arch" type="xml">
            <search string="Expenses Analysis">
                <filter string="Submitted" domain="[('state', '=', 'submit')]" help="Submitted Expenses"/>
                <filter string="Approved" domain="[('state', '=', 'approve')]" help="Approved Expenses"/>
                <filter string="Post" domain="[('state', '=', 'post')]" help="posted Expenses"/>
                <filter string="Paid" domain="[('state', '=', 'done')]" help="Paid Expenses"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="analytic_account_id"/>
                <group expand="0" string="Extended Filters...">
                    <field name="product_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="date" string="Creation Date"/>
                </group>
                <group expand="1" string="Group By">
                    <filter string="Employee" name="Employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Department" context="{'group_by': 'department_id'}"/>
                    <filter string="Product" context="{'group_by': 'product_id'}"/>
                    <filter string="Status" context="{'group_by': 'state'}"/>
                    <filter string="Contract" context="{'group_by': 'analytic_account_id'}"/>
                    <filter string="Company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    <separator/>
                    <filter string="Date" context="{'group_by': 'date:day'}" help="Date"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hr_expense_report_action" model="ir.actions.act_window">
        <field name="name">Expenses Analysis</field>
        <field name="res_model">hr.expense.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{'search_default_year':1, 'search_default_month':1, 'search_default_employee':1}</field>
        <field name="search_view_id" ref="hr_expense_report_view_search"/>
    </record>

    <record id="action_hr_expense_report_filtered" model="ir.actions.act_window">
        <field name="name">Expenses Analysis</field>
        <field name="res_model">hr.expense.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{
            'search_default_year': 1,
            'search_default_month': 1,
            'search_default_employee': 1,
            'search_default_department_id': [active_id],
            'default_department_id': active_id}
        </field>
        <field name="search_view_id" ref="hr_expense_report_view_search"/>
    </record>

    <menuitem id="menu_hr_expense_report" name="Reports" sequence="99" parent="menu_hr_expense_root" action="hr_expense_report_action"/>

</odoo>
