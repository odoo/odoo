<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_expense_sheet">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Expenses Report</h2>
                        <div class="oe_structure"></div> 

                        <div class="row mt32 mb32">
                            <div class="col-2">
                                <strong>Employee:</strong>
                                <span t-field="o.employee_id.name">Marc Demo</span>
                            </div>
                            <div class="col-2">
                                <strong>Date:</strong>
                                <span t-field="o.accounting_date">2023-08-11</span>
                            </div>
                            <div class="col-3">
                                <strong>Description:</strong>
                                <span t-field="o.name">Business Trip</span>
                            </div>
                            <div class="col-2">
                                <strong>Validated By:</strong>
                                <span t-field="o.user_id.name">Mitchell Admin</span>
                            </div>
                            <div class="col-3">
                                <strong>Payment By:</strong>
                                <span t-field="o.payment_mode">Credit Card</span>
                            </div>
                        </div>
                        <div class="oe_structure"></div>

                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Name</th>
                                    <th class="text-center">Ref.</th>
                                    <th>Unit Price</th>
                                    <th>Taxes</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Price</th>
                                    <th t-if="o.is_multiple_currency" class="text-end">Price in Company Currency</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.expense_line_ids" t-as="line">
                                    <td><span t-field="line.date"></span></td>
                                    <td>
                                        <span t-field="line.name">Flight Ticket</span>
                                        <span t-field="line.description">Economy Class</span><br/>
                                        <t t-foreach="line.analytic_distribution" t-as="distribution">
                                            <span t-out="line.env['account.analytic.account'].browse(int(distribution))[0].name">Business</span>:
                                            <span t-out="line.analytic_distribution.get(distribution)">50%</span>
                                        </t>
                                    </td>
                                    <td style="text-center">
                                        <span t-field="line.reference">12345</span>
                                    </td>
                                    <td>
                                        <span t-field="line.unit_amount">$100.00</span>
                                    </td>
                                    <td>
                                        <t t-foreach="line.tax_ids" t-as="tax">
                                          <t t-if="tax.description">
                                            <span t-field="tax.description">VAT</span>
                                          </t>
                                          <t t-if="not tax.description">
                                            <span t-field="tax.name">Tax Name</span>
                                          </t>
                                        </t>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.quantity">1</span>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.total_amount"
                                            t-options='{"widget": "monetary", "display_currency": line.currency_id}'>$120.00</span>
                                    </td>
                                    <td t-if="o.is_multiple_currency" class="text-end">
                                        <span t-field="line.total_amount_company">$100.00</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="oe_structure"></div>

                        <div class="row justify-content-end">
                            <div class="col-4">
                                <table class="table table-sm">
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-end">
                                            <span t-field="o.total_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'>$1000.00</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="oe_structure"></div>

                        <p>Certified honest and conform,<br/>(Date and signature).<br/><br/></p>
                        <div class="oe_structure"></div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_hr_expense_sheet" model="ir.actions.report">
        <field name="name">Expenses Report</field>
        <field name="model">hr.expense.sheet</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_expense.report_expense_sheet</field>
        <field name="report_file">hr_expense.report_expense_sheet</field>
        <field name="print_report_name">'Expenses - %s - %s' % (object.employee_id.name, (object.name).replace('/', ''))</field>
        <field name="binding_model_id" ref="model_hr_expense_sheet"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
