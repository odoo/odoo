<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_intrastatinvoice_document" inherit_id="account.report_invoice_document" primary="True">
    <xpath expr="." position="attributes">
        <attribute name="t-name">report_intrastat.report_intrastatinvoice_document</attribute>
    </xpath>
    
    <xpath expr="//span[@t-field='l.quantity']/.." position="before">
        <td><span t-field="l.product_id.intrastat_id"/></td>
        <td class="text-right"><span t-field="l.product_id.weight"/></td>
    </xpath>
    
    <xpath expr="//th[text()='Quantity']" position="before">
        <th>Intrastat</th>
        <th class="text-right">Weight</th>
    </xpath>
</template>

<template id="report_intrastatinvoice">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'report_intrastat.report_intrastatinvoice_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
