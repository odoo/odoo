<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="card_dimension_view_form" model="ir.ui.view">
        <field name="name">card.dimension.view.form</field>
        <field name="model">card.dimension</field>
        <field name="arch" type="xml">
            <form string="Card Dimension">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="width"/>
                            <field name="height"/>
                            <field name="ratio" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="card_dimension_action" model="ir.actions.act_window">
        <field name="name">Card Dimension</field>
        <field name="res_model">card.dimension</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a dimension to use in Card Campaigns
            </p>
        </field>
    </record>

</odoo>
