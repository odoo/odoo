<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mail_template_data_portal_welcome" model="mail.template">
            <field name="name">Portal: new user</field>
            <field name="model_id" ref="website_portal.model_portal_wizard_user"/>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Your Odoo account at ${user.company_id.name}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="True"/>
            <field name="body_html"><![CDATA[
<p>
    Dear <t t-esc="record.user_id.name"/>,
</p>
<p>
    You have been given access to <t t-esc="user.company_id.name"/>'s <t t-esc="record.wizard_id.portal_id.name"/>.
</p>
<p>
    Your login account data is:
</p>
<ul>
    <li>Username: <t t-esc="record.user_id.login or ''"/></li>
    <li>Portal: <a t-att-href="'portal_url' in ctx and ctx['portal_url'] or ''" t-esc="'portal_url' in ctx and ctx['portal_url'] or ''"/></li>
    <li>Database: <t t-esc="'dbname' in ctx and ctx['dbname'] or ''"/></li>
</ul>
<p>
    You can set or change your password via the following url:
</p>
<ul>
    <li><a t-att-href="record.user_id.signup_url" t-esc="record.user_id.signup_url"/></li>
</ul>
<p>
<t t-esc="record.wizard_id.welcome_message or ''"/>]]></field>
        </record>
    </data>
</odoo>
