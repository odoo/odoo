<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">

    <record id="purchase_order_stock_user_rule" model="ir.rule" forcecreate="1">
        <field name="name">Stock User Purchase Orders</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="purchase_order_line_stock_user_rule" model="ir.rule" forcecreate="1">
        <field name="name">Stock User Purchase Order Lines</field>
        <field name="model_id" ref="purchase.model_purchase_order_line"/>
        <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

</data>
</odoo>
