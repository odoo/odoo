<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_departure_view_form" model="ir.ui.view">
        <field name="name">hr.employee.departure.view.form.extend</field>
        <field name="model">hr.employee.departure</field>
        <field name="inherit_id" ref="hr.hr_employee_departure_view_form"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="first_contract_date"/>
            </field>
            <group name="planned_actions_left" position="inside">
                <label for="do_set_date_end" string="Contracts"/>
                <div class="o_row">
                    <field name="do_set_date_end" nolabel="1" readonly="state == 'done'"/>
                    <span>Set contracts end date</span>
                </div>
            </group>
        </field>
    </record>
</odoo>
