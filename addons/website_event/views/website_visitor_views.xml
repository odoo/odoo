<?xml version="1.0" encoding="utf-8"?>
<odoo><data>

    <record id="website_visitor_view_tree" model="ir.ui.view">
        <field name="name">website.visitor.view.list.inherit.event</field>
        <field name="model">website.visitor</field>
        <field name="inherit_id" ref="website.website_visitor_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='page_ids']" position="after">
                <field name="event_registration_count" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!--event history-->
    <record id="website_event_visitor_page_view_tree" model="ir.ui.view">
        <field name="name">website.track.view.list</field>
        <field name="model">website.track</field>
        <field name="arch" type="xml">
            <list string="Visitor Event Views History" create="0" sample="1">
                <field name="visitor_id"/>
                <field name="event_id"/>
                <field name="visit_datetime"/>
            </list>
        </field>
    </record>

    <record id="website_event_visitor_page_view_graph" model="ir.ui.view">
        <field name="name">website.track.view.graph</field>
        <field name="model">website.track</field>
        <field name="arch" type="xml">
            <graph string="Visitor Event Views" sample="1">
                <field name="event_id"/>
            </graph>
        </field>
    </record>

    <record id="website_event_visitor_event_action" model="ir.actions.act_window">
        <field name="name">Event Views History</field>
        <field name="res_model">website.track</field>
        <field name="view_mode">list</field>
        <field name="view_ids" eval="[
            (0, 0, {'view_mode': 'list', 'view_id': ref('website_event_visitor_page_view_tree')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('website_event_visitor_page_view_graph')}),
        ]"/>
        <field name="domain">[('visitor_id', '=', active_id), ('event_id', '!=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No event views yet for this visitor
            </p>
        </field>
    </record>

    <!-- website visitor views -->
    <record id="website_visitor_view_form" model="ir.ui.view">
        <field name="name">website.visitor.view.form.inherit.event</field>
        <field name="model">website.visitor</field>
        <field name="inherit_id" ref="website.website_visitor_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='w_visitor_visit_counter']" position="before">
                <button name="%(website_event.event_registration_action_from_visitor)d"
                    type="action"
                    class="oe_stat_button" icon="fa-ticket"
                    groups="event.group_event_user"
                    invisible="event_registration_count == 0">
                    <field name="event_registration_count" widget="statinfo" string="Registrations"/>
                </button>
            </xpath>

            <!-- Add stat button near product views -->
            <xpath expr="//button[@name='%(website.website_visitor_page_action)d']" position="after">
                <button name="%(website_event.website_event_visitor_event_action)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-calendar-o">
                    <field name="visitor_event_count" widget="statinfo" string="Event Views"/>
                </button>
            </xpath>

            <!-- Show viewed events in tag list -->
            <xpath expr="//group[@id='visits']/field[@name='page_ids']" position="after">
                <field name="event_ids" string="Events" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="website_event_visitor_view_tree" model="ir.ui.view">
        <field name="name">website.visitor.view.list</field>
        <field name="model">website.visitor</field>
        <field name="inherit_id" ref="website.website_visitor_view_tree"/>
        <field name="arch" type="xml">
            <field name="page_ids" position="after">
                <field name="event_ids" widget="many2many_tags" string="Events"/>
            </field>
        </field>
    </record>

    <record id="website_event_visitor_view_kanban" model="ir.ui.view">
        <field name="name">website.visitor.view.kanban</field>
        <field name="model">website.visitor</field>
        <field name="inherit_id" ref="website.website_visitor_view_kanban"/>
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="event_ids"/>
            </field>
        </field>
    </record>
</data></odoo>
