<?xml version="1.0"?>
<odoo><data>
    <!-- Website.track list view: Event views -->
    <record id="website_event_visitor_page_view_list" model="ir.ui.view">
        <field name="name">website.track.view.list</field>
        <field name="model">website.track</field>
        <field name="arch" type="xml">
            <list string="Visitor Event Views History" create="0">
                <field name="visitor_id"/>
                <field name="event_id"/>
                <field name="visit_datetime"/>
            </list>
        </field>
    </record>

    <!-- Website.track graph view: Event views -->
    <record id="website_event_visitor_page_view_graph" model="ir.ui.view">
        <field name="name">website.track.view.graph</field>
        <field name="model">website.track</field>
        <field name="arch" type="xml">
            <graph string="Visitor Event Views" sample="1">
                <field name="event_id"/>
            </graph>
        </field>
    </record>

    <!-- Action for viewing event views for a visitor -->
    <record id="website_event_visitor_event_view_action" model="ir.actions.act_window">
        <field name="name">Event Views History</field>
        <field name="res_model">website.track</field>
        <field name="view_mode">list,graph</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('website_event_visitor_page_view_list')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('website_event_visitor_page_view_graph')}),
        ]"/>
        <field name="domain">[('visitor_id', '=', active_id), ('event_id', '!=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
              No event views yet for this visitor
            </p>
        </field>
    </record>

</data></odoo>
