<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="event_type_view_form_inherit_website" model="ir.ui.view">
        <field name="name">event.type.view.form.inherit.website</field>
        <field name="model">event.type</field>
        <field name="inherit_id" ref="event.view_event_type_form"/>
        <field name="arch" type="xml">
            <div name="event_type_visibility_seats" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" name="event_type_visibility_website">
                    <div class="o_setting_left_pane">
                        <field name="website_menu"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="website_menu"/>
                        <div class="row">
                            <div class="col-md-8 mt16 text-muted">
                                Check this option to have menus for your event on the
                                website: registrations, schedule, map, ...
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

    <!-- Source Tree View -->
    <record id="event_registration_source_tree" model="ir.ui.view">
        <field name="name">event.registration.source.tree</field>
        <field name="model">event.registration.source</field>
        <field name="arch" type="xml">
            <tree string="Sources of Attendees" editable="top">
                <field name="source_id"/>
                <field name="url"/>
            </tree>
        </field>
    </record>

    <record id="view_event_registration_form_inherit" model="ir.ui.view">
        <field name="name">event.registration.form.inherit</field>
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='attendee']" position="inside">
                <field name="source_id"/>
            </xpath>
        </field>
    </record>

    <record id="action_event_registration_sources" model="ir.actions.act_window">
        <field name="name">Event Sources</field>
        <field name="res_model">event.registration.source</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('event_id', '=', active_id)]</field>
        <field name="context">{'default_event_id': active_id}</field>
        <field name="help" type="html">
              <p>
                Generate some URLs that will allow you to track where attendees come from.
              </p>
              <p>
                When the attendee arrives here through one of these URLs, you'll know where he came from.
              </p>
        </field>
    </record>

    <record id="event_event_view_form_inherit_website" model="ir.ui.view">
        <field name="name">event.event.view.form.inherit.website</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <button class="oe_stat_button" type="action"
                    name="%(action_event_registration_sources)d" icon="fa-share"
                    context="{'default_event_id': active_id}">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Trackers</span>
                    </div>
                </button>
                <field name="website_url" invisible="1"/>
                <button name="website_publish_button"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-globe">
                    <field name="website_published" widget="website_button"/>
                </button>
            </button>
            <label for="is_online" position="after">
                <field name="website_menu"/>
                <label for="website_menu" string="Website Menu"/>
            </label>
            <xpath expr="//button[@name='button_done']" position="before">
                <button name="action_open_badge_editor"
                    type="object"
                    states="confirm"
                    string="Edit Badges"
                    class="oe_highlight"/>
                <button name="action_open_badge_editor"
                    type="object"
                    states="done"
                    string="Edit Badges"/>
            </xpath>
        </field>
    </record>

</odoo>
