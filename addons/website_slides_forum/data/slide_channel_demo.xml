    <!-- Removing karma.tracking from odoobot as self.env.user is used in create -->
    <function model="gamification.karma.tracking" name="unlink">
        <value model="gamification.karma.tracking" search="[
                    ('user_id', 'in', [ref('base.user_root')]),
                    ('originated_by_post_id', 'in', [ref('website_slides_forum.forum_post_2_0')])
                ]"/>
    </function>
    <!-- Generating karma.tracking to user_admin as self.env.user is used in create -->
    <function model="res.users" name="add_karma">
        <value model="res.users" eval="[ref('base.user_demo')]"/>
        <value eval="2"/>
        <value model="forum.post" eval="obj().env.ref('website_slides_forum.forum_post_2_0')"/>
        <value>Asking a question</value>
    </function>

</data></odoo>
