<?xml version="1.0" ?>
<odoo><data>
    <template id='course_main' inherit_id="website_slides.course_main">
        <!-- Channel main template: add link to forum -->
        <xpath expr="//li[hasclass('o_wlides_course_header_nav_home')]" position="after">
            <li class="nav-item" t-if="channel.forum_id">
                <a t-att-href="'/forum/%s' % (slug(channel.forum_id))"
                    t-att-class="'nav-link'" target="new">Forum</a>
            </li>
        </xpath>
    </template>

    <template id="slide_fullscreen" inherit_id="website_slides.slide_fullscreen">
        <!-- Fullscreen template: add link to forum -->
        <xpath expr="//div[hasclass('o_wslides_fs_slide_title')]" position="before">
            <a t-if="slide.channel_id.forum_id" class="p-3 h-100 d-inline-block text-uppercase" t-att-href="'/forum/%s' % (slug(slide.channel_id.forum_id))" target="new">
                <i class="fa fa-comments"></i>Ask a question
            </a>
        </xpath>
    </template>

</data></odoo>
