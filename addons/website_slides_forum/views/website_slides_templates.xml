<?xml version="1.0" ?>
<odoo><data>
    <template id='course_main' inherit_id="website_slides.course_main">
        <!-- Channel main template: add link to forum -->
        <xpath expr="//li[hasclass('o_wslides_nav_tabs_item_home')]" position="after">
            <li class="nav-item" t-if="channel.forum_id">
                <a t-att-href="'/forum/%s' % (slug(channel.forum_id))"
                    t-att-class="'nav-link o_wslides_navlink'" target="new">Forum</a>
            </li>
        </xpath>
    </template>

    <template id="slide_fullscreen" inherit_id="website_slides.slide_fullscreen">
        <!-- Fullscreen template: add link to forum -->
        <xpath expr="//a[@id='fullscreen_sidebar_button']" position="after">
            <a t-if="slide.channel_id.forum_id" id="fullscreen_forum_button" t-attf-href="/forum/#{slug(slide.channel_id.forum_id)}" target="new"><i class="fa fa-comments"></i>Ask a question</a>
        </xpath>
    </template>


</data></odoo>
