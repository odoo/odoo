<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_crm_lead_form_inherit_sale_crm" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.sale.crm</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="before">
                <button name="action_new_quotation_handle_partner"
                        type="object"
                        class="oe_highlight"
                        string="New Quotation"
                        attrs="{'invisible': ['|', ('type', '=', 'lead'), '&amp;', ('probability', '=', 0), ('active', '=', False)]}"
                        invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_schedule_meeting']" position="after">
                <button id="view_quotation_button"
                        name="action_view_order"
                        type="object"
                        context="{'order_status': 'quotation'}"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': [('type', '=', 'lead')]}"
                        invisible="1">
                    <field name="quotation_count" widget="statinfo" string="Quotations"/>
                </button>
                <button id="view_order_button"
                        name="action_view_order"
                        type="object"
                        context="{'order_status': 'order'}"
                        class="oe_stat_button"
                        icon="fa-usd"
                        attrs="{'invisible': ['|', ('sale_order_count', '=', 0), ('type', '=', 'lead')]}"
                        invisible="1">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="sale_amount_total" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                        </span>
                        <span class="o_stat_text"> Orders</span>
                        <field name="sale_order_count" invisible="1"/>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
