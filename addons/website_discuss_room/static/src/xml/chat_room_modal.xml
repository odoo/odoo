<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="chat_room_modal">
        <div class="o_wdiscuss_room_modal modal fade show d-block" role="dialog" aria-hidden="false">
            <div class="modal-dialog modal-fullscreen mh-100 mw-100 m-auto">
                <div class="modal-content border-0">
                    <main class="modal-body overflow-hidden p-0 m-0">
                        <div class="o_wdiscuss_chat_room_loading position-absolute text-center text-muted">
                            <i class="fa fa-spin fa-circle-o-notch me-3"/>
                            <span>Loading your room...</span>
                        </div>
                    </main>
                    <footer class="modal-footer">
                        <button class="btn btn-primary" data-bs-dismiss="modal" type="button">Close</button>
                    </footer>
                </div>
            </div>
        </div>
    </t>
</templates>
