<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_accounting_section']" position="inside">
                <field name="pos_l10n_es_tbai_is_required" invisible="1" />
                <setting string="TicketBAI Simplified Invoice Limit" invisible="not pos_l10n_es_tbai_is_required">
                    <div class="text-muted">
                        Above this limit the simplified invoice won't be made
                    </div>
                    <field name="pos_l10n_es_tbai_simplified_invoice_limit" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
