<odoo>
    <data noupdate="1">
        <record model="discuss.channel" id="mail.illusorium">
            <field name="name">Illusorium</field>
            <field name="description">A channel that you can watch but not interact.</field>
            <field name="is_readonly" eval="True"/>
        </record>
        <record model="mail.message" id="mail.illusorium_message_0">
            <field name="model">discuss.channel</field>
            <field name="res_id" ref="mail.illusorium"/>
            <field name="message_type">comment</field>
            <field name="subtype_id" ref="mail.mt_comment"/>
            <field name="author_id" ref="base.partner_admin"/>
            <field name="body">Welcome to the Illusorium channel.</field>
        </record>
        <record model="mail.message" id="mail.illusorium_message_1">
            <field name="model">discuss.channel</field>
            <field name="res_id" ref="mail.illusorium"/>
            <field name="message_type">comment</field>
            <field name="subtype_id" ref="mail.mt_comment"/>
            <field name="author_id" ref="base.partner_demo"/>
            <field name="body">Message from a non-admin member when the channel was not readonly.</field>
        </record>
        <record model="mail.message" id="mail.illusorium_message_2">
            <field name="model">discuss.channel</field>
            <field name="res_id" ref="mail.illusorium"/>
            <field name="message_type">comment</field>
            <field name="subtype_id" ref="mail.mt_comment"/>
            <field name="author_id" ref="base.partner_admin"/>
            <field name="body">Feel free to browse through the previous messages.</field>
        </record>
        <record model="discuss.channel.member" id="mail.owner_member_illusorium">
            <field name="partner_id" ref="base.partner_admin"/>
            <field name="channel_id" ref="mail.illusorium"/>
            <field name="channel_role" eval="'owner'"/>
            <field name="seen_message_id" ref="mail.illusorium_message_2"/>
            <field name="new_message_separator" eval="ref('mail.illusorium_message_2') + 1"/>
        </record>
        <record model="discuss.channel.member" id="mail.demo_member_illusorium">
            <field name="partner_id" ref="base.partner_demo"/>
            <field name="channel_id" ref="mail.illusorium"/>
            <field name="seen_message_id" ref="mail.illusorium_message_2"/>
            <field name="new_message_separator" eval="ref('mail.illusorium_message_2') + 1"/>
        </record>
    </data>
</odoo>
