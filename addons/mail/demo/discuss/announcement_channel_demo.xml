<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="discuss.channel" id="mail.channel_announcement_demo">
            <field name="name">Global Announcements</field>
            <field name="channel_type">announcement</field>
            <field name="group_public_id" eval="False"/>
        </record>
        <record model="mail.message" id="mail.channel_announcement_message_0_demo">
            <field name="model">discuss.channel</field>
            <field name="res_id" ref="mail.channel_announcement_demo"/>
            <field name="message_type">comment</field>
            <field name="subtype_id" ref="mail.mt_comment"/>
            <field name="author_id" ref="base.partner_admin"/>
            <field name="date" eval="(DateTime.today() - timedelta(minutes=30)).strftime('%Y-%m-%d %H:%M')"/>
            <field name="body">
                Our firm had really good results this quarter, thanks to everyone's hard work!

                You will be receiving a bonus in your next paycheck as a token of appreciation.
                Let's keep up the great work and aim for even better results next quarter!
            </field>
        </record>
        <record model="mail.message.reaction" id="mail.channel_announcement_message_0_reaction_0_demo">
            <field name="content">❤️</field>
            <field name="message_id" ref="mail.channel_announcement_message_0_demo"/>
            <field name="partner_id" ref="base.partner_demo"/>
        </record>
        <record model="discuss.channel.member" id="mail.channel_announcement_member_partner_admin_demo">
            <field name="partner_id" ref="base.partner_admin"/>
            <field name="channel_id" ref="mail.channel_announcement_demo"/>
            <field name="fetched_message_id" ref="mail.channel_announcement_message_0_demo"/>
            <field name="seen_message_id" ref="mail.channel_announcement_message_0_demo"/>
            <field name="new_message_separator" eval="ref('mail.channel_announcement_message_0_demo') + 1"/>
            <field name="member_type">admin</field>
        </record>
        <record model="discuss.channel.member" id="mail.channel_announcement_member_partner_demo_demo">
            <field name="partner_id" ref="base.partner_demo"/>
            <field name="channel_id" ref="mail.channel_announcement_demo"/>
            <field name="fetched_message_id" ref="mail.channel_announcement_message_0_demo"/>
            <field name="seen_message_id" ref="mail.channel_announcement_message_0_demo"/>
            <field name="new_message_separator" eval="ref('mail.channel_announcement_message_0_demo') + 1"/>
        </record>
    </data>
</odoo>
