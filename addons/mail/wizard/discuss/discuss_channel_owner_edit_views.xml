<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="discuss_channel_owner_edit_form" model="ir.ui.view">
            <field name="name">discuss.channel.owner.edit.form</field>
            <field name="model">discuss.channel.owner.edit</field>
            <field name="arch" type="xml">
                <form string="Transfer Channel Owner">
                    <div>
                        You are transferring the ownership of <field name="channel_id" readonly="1"/> to
                        <field name="channel_owner_candidate_id" widget="res_partner_many2one" options="{'no_create': True}" domain="[('id', 'in', channel_partner_ids)]"/>. Are you sure?
                    </div>
                    <footer>
                        <button string="Transfer" type="object" name="transfer_owner" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
