<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ThreadIconView" owl="1">
        <t t-if="threadIconView">
            <div class="o_ThreadIconView d-flex justify-content-center flex-shrink-0" t-attf-class="{{ className }}" t-ref="root" name="root">
                <t t-if="threadIconView.thread.channel and threadIconView.thread.channel.channel_type === 'channel'">
                    <t t-if="threadIconView.thread.authorizedGroupFullName">
                        <div class="o_ThreadIconView_groupRestrictedChannel fa fa-fw fa-hashtag" t-att-title="threadIconView.thread.accessRestrictedToGroupText"/>
                    </t>
                    <t t-if="!threadIconView.thread.authorizedGroupFullName">
                        <div class="o_ThreadIconView_publicChannel fa fa-fw fa-globe" title="Public Channel"/>
                    </t>
                </t>
                <t t-elif="threadIconView.thread.channel and threadIconView.thread.channel.channel_type === 'chat' and threadIconView.thread.channel.correspondent">
                    <t t-if="threadIconView.threadTypingIconView">
                        <ThreadTypingIconView
                            className="'o_ThreadIconView_typing flex-grow-1'"
                            record="threadIconView.threadTypingIconView"
                        />
                    </t>
                    <t t-elif="threadIconView.thread.channel.correspondent.im_status === 'online'">
                        <div class="o_ThreadIconView_online fa fa-fw fa-circle" title="Online"/>
                    </t>
                    <t t-elif="threadIconView.thread.channel.correspondent.im_status === 'offline'">
                        <div class="o_ThreadIconView_offline fa fa-fw fa-circle-o" title="Offline"/>
                    </t>
                    <t t-elif="threadIconView.thread.channel.correspondent.im_status === 'away'">
                        <div class="o_ThreadIconView_away fa fa-fw fa-circle text-warning" title="Away"/>
                    </t>
                    <t t-elif="threadIconView.thread.channel.correspondent === messaging.partnerRoot">
                        <div class="o_ThreadIconView_online fa fa-fw fa-heart" title="Bot"/>
                    </t>
                    <t t-else="" name="noImStatusCondition">
                        <div class="o_ThreadIconView_noImStatus fa fa-fw fa-question-circle" title="No IM status available"/>
                    </t>
                </t>
                <t t-elif="threadIconView.thread.channel and threadIconView.thread.channel.channel_type === 'group'">
                    <div class="o_ThreadIconView fa fa-fw fa-users" title="Grouped Chat"/>
                </t>
                <t t-elif="threadIconView.thread.mailbox">
                    <t t-if="threadIconView.thread.mailbox === messaging.inbox">
                        <div class="o_ThreadIconView_mailboxInbox fa fa-fw fa-inbox"/>
                    </t>
                    <t t-elif="threadIconView.thread.mailbox === messaging.starred">
                        <div class="o_ThreadIconView_mailboxStarred fa fa-fw fa-star-o"/>
                    </t>
                    <t t-elif="threadIconView.thread.mailbox === messaging.history">
                        <div class="o_ThreadIconView_mailboxHistory fa fa-fw fa-history"/>
                    </t>
                </t>
            </div>
        </t>
    </t>

</templates>
