<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="discuss.fullscreenBanner">
    <span t-if="isVisible" class="o-discuss-fullscreenBanner alert alert-info px-2 py-1 m-0 rounded-0 cursor-pointer" t-on-click="openFullscreen">
        <div class="d-flex justify-content-between align-items-center">
            <span class="small" t-out="fullscreeenText"/>
            <button class="btn d-flex opacity-75 opacity-100-hover" title="Close banner" t-on-click.stop="onClickClose">
                <i class="fa fa-fw fa-close"/>
            </button>
        </div>
    </span>
</t>

</templates>
