<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="discuss.CallDropdown">
        <div class="o-discuss-CallDropdown" t-att-class="this.props.class">
            <div class="d-flex h-100" t-ref="trigger" t-on-click="this.handleClick">
                <t t-slot="default"/>
            </div>

            <div t-if="this.isOpen"
                 t-ref="menu"
                 t-on-click="this.onClickMenu"
                 class="o-discuss-CallDropdown-content o-dropdown--menu dropdown-menu"
                 t-att-class="this.props.menuClass">
                <t t-slot="content"/>
            </div>
        </div>
    </t>

</templates>
