<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="discuss.CallContextMenu" owl="1">
        <div class="d-flex flex-column p-3">
            <input type="range" min="0.0" max="1" step="0.01" t-att-value="volume" t-on-change="onChangeVolume" class="form-range"/>
            <t t-if="env.debug">
                <hr class="w-100 border-top"/>
                <div><span class="fw-bolder">Connection: </span><t t-esc="connectionState"/></div>
                <div><span class="fw-bolder">ICE: </span><t t-esc="state.iceState"/></div>
                <div><span class="fw-bolder">DTLS: </span><t t-esc="state.dtlsState"/></div>
                <div><span class="fw-bolder">Data channel: </span><t t-esc="state.dataChannelState"/></div>
                <div t-if="props.rtcSession.audioError"><span class="fw-bolder">Audio player: </span><t t-esc="props.rtcSession.audioError"/></div>
                <div t-if="props.rtcSession.videoError"><span class="fw-bolder">Video player: </span><t t-esc="props.rtcSession.videoError"/></div>
                <hr class="w-100 border-top"/>
                <div><span class="fw-bolder">ICE gathering: </span><t t-esc="state.iceGatheringState"/></div>
                <div><span class="fw-bolder">From peer: </span><t t-esc="inboundConnectionTypeText"/></div>
                <div><span class="fw-bolder">To peer: </span><t t-esc="outboundConnectionTypeText"/></div>
                <div><span class="fw-bolder">Packets sent: </span><t t-esc="state.packetsSent"/></div>
                <div><span class="fw-bolder">Packets received: </span><t t-esc="state.packetsReceived"/></div>
                <div><span class="fw-bolder">Log step: </span><t t-esc="state.logStep"/></div>
            </t>
        </div>
    </t>
</templates>
