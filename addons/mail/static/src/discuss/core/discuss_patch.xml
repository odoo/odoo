<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Discuss" t-inherit-mode="extension">
        <xpath expr="//*[@t-ref='mobileTopbar']" position="before">
            <t t-set="channel" t-value="getChannel()"/>
        </xpath>
        <xpath expr="//*[@t-ref='startCall']" position="after">
            <button t-if="thread.model === 'discuss.channel'" class="btn rounded px-2 shadow-none" t-att-class="{ 'o-isActive': state.isAddingUsers }" title="Add Users" t-on-click.stop="toggleInviteForm" t-ref="addUsers">
                <i class="fa fa-lg fa-user-plus text-700"/>
            </button>
            <button t-if="channel?.hasMemberList" class="btn rounded px-2 shadow-none" t-att-class="{ 'o-isActive': state.activeMode === MODES.MEMBER_LIST }" t-att-title="state.activeMode === MODES.MEMBER_LIST ? 'Hide Member List' : 'Show Member List'" t-on-click.stop="toggleMemberList">
                <i class="fa fa-lg fa-users text-700"/>
            </button>
            <button t-if="channel?.allowCalls" class="btn rounded px-2 shadow-none" t-att-class="{ 'o-isActive': state.activeMode === MODES.SETTINGS }" t-att-title="state.activeMode === MODES.SETTINGS ? 'Hide Call Settings' : 'Show Call Settings'" t-on-click="toggleSettings">
                <i class="fa fa-lg fa-gear text-700"/>
            </button>
        </xpath>
        <xpath expr="//*[@t-ref='core']" position="inside">
            <ChannelMemberList t-if="channel?.hasMemberList and state.activeMode === MODES.MEMBER_LIST" channel="channel" className="'o-mail-Discuss-channelMemberList flex-shrink-0 border-start'"/>
            <CallSettings t-if="channel?.allowCalls and state.activeMode === MODES.SETTINGS" channel="channel" className="'o-mail-Discuss-callSettings border-start'"/>
        </xpath>
        <xpath expr="//*[@t-ref='autoresizeInput']" position="before">
            <ImStatus t-if="channel?.type === 'chat' and channel.correspondent" className="'me-1'" persona="channel.correspondent"/>
        </xpath>
    </t>
</templates>
