<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Thread" t-inherit-mode="extension">
        <xpath expr="//div[@t-ref='banners']" position="inside">
            <span t-if="!env.inChatter and props.thread.showUnreadBanner" class="o-mail-Thread-banner bg-warning d-flex cursor-pointer shadow-sm smaller fw-bolder o-rounded-bubble border border-warning mx-auto o-my-0_5">
                <t t-set="alertClass" t-value="'alert m-0 border-start-0 o-mail-Thread-bannerHover py-1'"/>
                <span t-attf-class="{{ alertClass }} o-rounded-start-bubble rounded-end-0" t-on-click="onClickUnreadMessagesBanner" t-esc="newMessageBannerText"/>
                <span t-attf-class="{{ alertClass }} o-rounded-end-bubble rounded-start-0" t-on-click="() => props.thread.markAsRead()">Mark as Read<i class="ms-2 fa fa-check-square"/></span>
            </span>
        </xpath>
    </t>
</templates>
