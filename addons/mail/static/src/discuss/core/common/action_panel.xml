<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ActionPanel">
        <ResizablePanel t-if="this.props.resizable and !this.env.inChatWindow and !this.env.inChatter and !this.ui.isSmall" class="this.classNames" handleSide="'start'" initialWidth="this.initialWidth" minWidth="this.minWidth">
            <t t-call="mail.ActionPanel.content"/>
        </ResizablePanel>
        <div t-else="" t-att-class="this.classNames">
            <t t-call="mail.ActionPanel.content"/>
        </div>
    </t>

    <t t-name="mail.ActionPanel.content">
        <div class="o-mail-ActionPanel-header position-sticky top-0 pt-2 pb-1 d-flex flex-column bg-inherit smaller" t-att-class="{ 'px-1 pb-1': this.env.inChatWindow, 'ps-1 pe-2 pb-2': !this.env.inChatWindow and !this.env.inMeetingView, 'o-ps-2_5 pe-2': this.env.inMeetingChat, 'ps-1': this.env.inMeetingView and !this.env.inMeetingChat }">
            <div class="d-flex align-items-center gap-1">
                <button t-if="this.env.closeActionPanel and this.env.inChatWindow" class="btn p-1 opacity-75 opacity-100-hover" title="Close panel" t-on-click.stop="this.env.closeActionPanel">
                    <i class="oi oi-arrow-left fa-fw"/>
                </button>
                <i t-if="this.props.icon" class="text-muted fa-fw" t-att-class="this.props.icon"/>
                <p t-if="this.props.title" class="fw-bold text-uppercase m-0 flex-grow-1" t-esc="this.props.title"/>
                <button t-if="this.env.closeActionPanel and !this.env.inChatWindow" class="btn p-1 opacity-75 opacity-100-hover ms-auto" title="Close panel" t-on-click.stop="this.env.closeActionPanel">
                    <i class="oi oi-close fa-fw"/>
                </button>
            </div>
            <t t-slot="header"/>
        </div>
        <div class="px-1 d-flex flex-column flex-grow-1 bg-inherit o-min-height-0" t-ref="contentRef">
            <t t-slot="default"/>
        </div>
    </t>

</templates>
