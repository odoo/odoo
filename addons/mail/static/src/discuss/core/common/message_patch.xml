<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Message" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o-mail-Message-body')]" position="after">
            <div class="o-mail-Message-seenContainer position-absolute">
                <MessageSeenIndicator
                    t-if="props.message.showSeenIndicator(props.thread)"
                    message="props.message"
                    thread="props.thread"
                />
            </div>
        </xpath>
        <xpath expr="//AttachmentList" position="after">
            <div t-if="props.message.isBodyEmpty and message.attachment_ids.length > 0" class="o-mail-Message-seenContainer position-absolute ratio-1x1 rounded-circle p-1">
                <MessageSeenIndicator
                    t-if="props.message.showSeenIndicator(props.thread)"
                    message="props.message"
                    thread="props.thread"
                />
            </div>
        </xpath>
        <xpath expr="(//small[@name='starred'])" position="after">
            <small t-if="message.child_ids.length and env.repliesMenu and !env.repliesMenu.message" class="cursor-pointer" t-on-click="() => this.env.repliesMenu.open(message)">
                <small class="o-xsmaller text-muted" t-att-title="repliesIndicatorTitle"><t t-out="message.child_ids.length"/> <i class="fa fa-reply-all"/></small>
            </small>
        </xpath>
    </t>
</templates>
