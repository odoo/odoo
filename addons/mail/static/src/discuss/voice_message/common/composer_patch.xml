<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Composer" t-inherit-mode="extension" owl="1">
        <xpath expr="//FileUploader" position="after">
            <VoiceRecorder t-if="thread and thread.type !== 'chatter' and allowUpload"
                composer="this.props.composer"
                attachmentUploader="attachmentUploader"
                onchangeRecording="onchangeRecording"
                t-key="tempRecorderId" />
        </xpath>
    </t>
</templates>
