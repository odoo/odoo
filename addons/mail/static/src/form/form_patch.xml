<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="web.FormView" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_form_view_container')]" position="after">
            <t t-if="hasSideChatter()">
                <div class='o-mail-chatter-aside'>
                    <Chatter resId="model.root.resId" resModel="model.root.resModel" hasActivity="hasActivity" displayName="displayName()"/>
                <div>
            </t>
        </xpath>
    </t>

</templates>
