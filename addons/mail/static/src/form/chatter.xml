<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="mail.chatter" owl="1">
    <div class="o-mail-chatter h-100 d-flex flex-column">
        <div class="o-mail-chatter-topbar d-flex border-bottom flex-shrink-0 flex-grow-0">
            <button class="btn btn-odoo p-2 my-2 mx-3" t-on-click="toggleComposer">
                Send message
            </button>
            <button class="btn p-2 m-2">
                Log note
            </button>
            <button class="btn p-2 m-2" t-on-click="scheduleActivity">
                <i class="fa fa-clock-o me-1"/>
                Activities
            </button>
        </div>
        <t t-if="state.hasComposer">
            <Composer threadId="thread.id" autofocus="true" onPostCallback.bind="toggleComposer"/> 
        </t>
        <div class="overflow-auto">
            <t t-if="state.metadata and state.metadata.activities.length">
                <ActivityList activities="state.metadata.activities" reload.bind="load" />
            </t>
            <Thread id="thread.id" t-key="thread.id"/>
        </div>
    </div>


</t>

</templates>