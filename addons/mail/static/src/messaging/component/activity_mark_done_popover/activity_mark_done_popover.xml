<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.messaging.component.ActivityMarkDonePopover" owl="1">
        <div class="o_ActivityMarkDonePopover">
            <t t-if="activity">
                <textarea class="form-control o_ActivityMarkDonePopover_feedback" rows="3" placeholder="Write Feedback" t-ref="feedbackTextarea"/>
                <div class="o_ActivityMarkDonePopover_buttons">
                    <t t-if="!activity.forceNext">
                        <button type="button" class="btn btn-sm btn-primary" t-on-click="_onClickDoneAndScheduleNext" t-esc="DONE_AND_SCHEDULE_NEXT" t-att-data-previous-activity-type-id="previous_activity_type_id"/>
                        <button type="button" class="btn btn-sm btn-primary" t-on-click="_onClickDone">
                            Done
                        </button>
                        <button type="button" class="btn btn-sm btn-link" t-on-click="_onClickDiscard">
                            Discard
                        </button>
                    </t>
                    <t t-else="">
                        <button type="button" class="btn btn-sm btn-primary" t-esc="DONE_AND_SCHEDULE_NEXT"/>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
