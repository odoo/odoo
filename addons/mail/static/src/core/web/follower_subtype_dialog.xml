<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="mail.FollowerSubtypeDialog">
        <Dialog t-if="props.follower?.partner or props.thread" bodyClass="'d-flex flex-column'" contentClass="'o-mail-FollowerSubtypeDialog'" size="'sm'" title="title">
            <t t-set-slot="default">
                <div
                    t-foreach="state.subtypes"
                    t-as="subtype"
                    t-key="subtype.id"
                    class="o-mail-FollowerSubtypeDialog-subtype"
                    t-att-data-follower-subtype-id="subtype.id"
                >
                    <label class="flex-grow-1 align-items-center d-flex mb-0 p-2 cursor-pointer">
                        <input class="form-check-input m-0" type="checkbox" t-att-checked="subtype.followed ? 'checked': ''" t-on-change="(ev) => this.onChangeCheckbox(ev, subtype)"/>
                        <span class="ms-2" t-esc="subtype.name"/>
                    </label>
                </div>
            </t>
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="onClickApply">
                    Apply
                </button>
                <button t-if="props.follower?.partner.eq(store.self)" class="btn btn-primary" t-on-click="onClickApplyAll">
                    Apply to all
                </button>
                <button class="btn btn-secondary" t-on-click="props.close">
                    Cancel
                </button>
            </t>
        </Dialog>
    </t>
</templates>
