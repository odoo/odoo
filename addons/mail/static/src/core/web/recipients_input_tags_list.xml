<templates xml:splace="preserve">
    <t t-name="web.RecipientsInputTagsList" t-inherit="web.TagsList">
        <xpath expr="//span[hasclass('o_tag')]" position="attributes">
            <attribute name="t-ref">{{tagEquals(tag, state.tagToUpdate) ? "tagToUpdate" : `tag_${tag_index}`}}</attribute>
        </xpath>
    </t>
</templates>
