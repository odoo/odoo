<templates>
    <t t-name="mail.RecipientsInputTagsListPopover">
        <div class="d-flex flex-column p-2 o-mail-RecipientsInputTagsListPopover" t-ref="tagsListPopoverRef">
            <span class="pt-2">
                What's the email address of <span t-out="this.props.tagToUpdate.name" class="fw-bold text-primary"/>?
            </span>
            <input class="mt-2 w-auto me-3"
                   t-att-class="{ 'border-danger border rounded': this.state.error, 'mb-2': !this.state.error }"
                   type="text" placeholder="e.g. mail@example.com" t-model="this.state.value"
                   t-on-keydown="this.onKeydown" autocomplete="off"
            />
            <small t-if="this.state.error" class="text-danger o-xsmaller mb-2">Please provide a valid email</small>
            <div class="d-flex">
                <button class="btn btn-primary btn-sm me-2" t-on-click="this.updateTag">Set Email</button>
                <button class="btn btn-secondary btn-sm" t-on-click="this.discardTag">Discard</button>
            </div>
        </div>
    </t>
</templates>
