<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.ActivityListPopoverItem">
        <div class="o-mail-ActivityListPopoverItem d-flex flex-column border-bottom py-2">
            <div class="overflow-auto d-flex align-items-baseline ms-3 me-1">
                <t t-if="this.props.activity.summary">
                    <b class="text-900 me-2 text-truncate flex-grow-1 flex-basis-0" t-esc="this.props.activity.summary"/>
                </t>
                <t t-if="!this.props.activity.summary and this.props.activity.activity_type_id">
                    <b class="text-900 me-2 text-truncate flex-grow-1" t-esc="this.props.activity.activity_type_id[1]"/>
                </t>
                <t t-if="this.props.activity.can_write">
                    <FileUploader t-if="this.hasFileUploader" onUploaded.bind="this.onFileUploaded">
                        <t t-set-slot="toggler">
                            <button class="btn btn-sm btn-success btn-link" title="Upload file" aria-label="Upload File">
                                <i class="fa fa-upload"/>
                            </button>
                        </t>
                    </FileUploader>
                    <button t-if="this.hasMarkDoneButton" class="o-mail-ActivityListPopoverItem-markAsDone btn btn-sm btn-success btn-link" title="Mark as done" aria-label="Mark as done" t-on-click="this.onClickMarkAsDone">
                        <i class="fa fa-check"/>
                    </button>
                </t>
                <button t-if="this.hasEditButton" class="o-mail-ActivityListPopoverItem-editbtn btn btn-sm btn-success btn-link" title="Edit" aria-label="Edit" t-on-click="this.onClickEditActivityButton">
                    <i class="fa fa-pencil"/>
                </button>
                <button t-if="this.hasCancelButton" class="o-mail-ActivityListPopoverItem-cancel btn btn-sm btn-danger btn-link" title="Cancel" aria-label="Cancel" t-on-click="this.unlink">
                    <i class="fa fa-times"/>
                </button>
            </div>
            <div class="d-flex align-items-center flex-wrap mx-3">
                <img class="me-2 rounded object-fit-cover" t-if="this.props.activity.user_id?.partner_id" t-att-src="this.props.activity.user_id.partner_id.avatarUrl" style="max-width: 1.5rem; max-height: 1.5rem;"/>
                <div class="mt-1">
                    <small t-if="this.props.activity.user_id" class="text-truncate" t-esc="this.props.activity.user_id.name"/>
                    <small t-if="this.props.activity.state !== 'today'" class="mx-1">-</small>
                    <small t-if="['overdue', 'planned'].includes(this.props.activity.state)" class="fw-bold" t-att-title="this.props.activity.dateDeadlineFormatted" t-esc="this.delayLabel"/>
                    <small t-if="this.props.activity.state === 'done'" class="fw-bold" t-att-title="this.dateDoneFormatted" t-esc="this.props.activity.dateDoneFormatted"/>
                </div>
            </div>
            <div t-if="this.props.activity.attachment_ids?.length" class="mx-5">
                <t t-foreach="this.props.activity.attachment_ids" t-as="attachment" t-key="attachment.id">
                    <a t-attf-href="/web/content/#{attachment.id}?download=true"
                       t-on-click.stop="" t-out="attachment.name"
                       class="d-inline-block text-truncate" style="max-width: 120px;"/>
                    <br t-if="!attachment_last"/>
                </t>
            </div>
            <ActivityMarkAsDone t-if="this.state.hasMarkDoneView" activity="this.props.activity" close="this.closeMarkAsDone" onClickDoneAndScheduleNext="this.props.onClickDoneAndScheduleNext" onActivityChanged="this.props.onActivityChanged"/>
            <div t-if="this.props.activity.mail_template_ids.length > 0" class="mx-3 mt-2">
                <ActivityMailTemplate activity="this.props.activity" onClickButtons="this.props.onClickEditActivityButton" onActivityChanged="this.props.onActivityChanged"/>
            </div>
        </div>
    </t>
</templates>
