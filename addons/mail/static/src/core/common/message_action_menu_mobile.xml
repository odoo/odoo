<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="mail.MessageActionMenuMobile">
        <BottomSheet
            sheetClasses="'o-mail-MessageActionMenuMobile'"
            withBodyPadding="false"
            onClose="props.close"
        >
            <div class="list-group list-group-flush py-3">
                <t t-foreach="messageActions.actions" t-as="action" t-key="action.id">
                    <button class="list-group-item list-group-item-action d-flex align-items-center border-0"
                            t-on-click="() => this.onClickAction(action)"
                            t-att-class="action.btnClass">
                        <i class="fa-fw me-2" t-att-class="action.icon"/>
                        <span t-esc="action.title"/>
                        <i t-if="action.mobileSwitchOverlayAfterClick" class="oi oi-chevron-right ms-auto"/>
                    </button>
                </t>
            </div>
        </BottomSheet>
    </t>
</templates>
