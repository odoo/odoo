<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="mail.NotificationMessage">
        <div class="o-mail-NotificationMessage text-break mx-auto px-3 text-center text-muted opacity-75 smaller" t-on-click="onClickNotificationMessage" t-ref="root">
            <i t-if="message.notificationIcon" t-attf-class="{{ message.notificationIcon }} me-1"/>
            <t t-out="message.richBody"/>
        </div>
    </t>
</templates>
