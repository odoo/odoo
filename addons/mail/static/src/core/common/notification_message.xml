<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="mail.NotificationMessage">
        <div class="o-mail-NotificationMessage text-break mx-auto px-3 text-center smaller position-relative" t-on-click="this.onClickNotificationMessage" t-ref="root">
            <div class="o-mail-Message-jumpTarget position-absolute top-0 pe-none"/>
            <i t-if="this.message.notificationIcon" t-attf-class="{{ this.message.notificationIcon }} me-1 text-muted"/>
            <t t-if="this.message.notificationType === 'call'">
                <span class="text-muted" t-esc="this.callInformation"/>
            </t>
            <t t-elif="['channel_rename', 'thread_deletion'].includes(this.message.notificationType)">
                <span class="text-muted" t-out="this.message.inlineBody"/>
            </t>
            <t t-else="">
                <span class="o-mail-NotificationMessage-author d-inline text-muted" t-if="this.message.authorName and !this.message.richBody.includes(this.htmlEscape(this.message.authorName))" t-esc="this.message.authorName"/> <span class="text-muted" t-out="this.message.richBody"/>
            </t>
            <span class="o-mail-Message-date o-xsmaller ms-1" t-esc="this.message.dateSimpleWithDay"/>
        </div>
    </t>
</templates>
