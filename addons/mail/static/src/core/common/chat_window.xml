<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="mail.ChatWindow">
    <t t-if="this.props.chatWindow.exists() and this.channel.exists()">
    <t t-set="partitionedActions" t-value="this.threadActions.partition"/>
    <div class="o-mail-ChatWindow fixed-bottom overflow-hidden d-flex flex-column shadow bg-100"
        t-att-style="this.style"
        t-att-class="this.attClass"
        t-on-keydown="this.onKeydown"
        tabindex="1"
    >
        <div class="o-mail-ChatWindow-header d-flex align-items-center flex-shrink-0 bg-100 z-1 border-bottom border-dark o-border-opacity-15" t-on-click="this.onClickHeader" t-att-class="{ 'cursor-pointer': !this.ui.isSmall and !this.props.chatWindow.actionsDisabled }">
            <t t-if="this.hasActionsMenu">
                <div class="d-flex text-truncate bg-inherit">
                    <Dropdown position="this.ui.isSmall ? 'bottom-end' : 'left-start'" onStateChanged="isOpen => this.onActionsMenuStateChanged(isOpen)" menuClass="this.store.discussDropdownMenuClass(this)">
                        <button
                            t-if="this.props.chatWindow.exists()"
                            class="o-mail-ChatWindow-moreActions btn rounded-0 d-flex align-items-center o-ps-1_5 pe-0 py-1 my-0 w-100 rounded-end-0 bg-inherit"
                            t-att-class="{ 'rounded-top-3': !this.ui.isSmall, 'o-active': this.state.actionsMenuOpened, 'o-hover': this.actionsMenuButtonHover.isHover and !this.parentChannelHover.isHover }"
                            t-att-disabled="this.state.editingName or this.props.chatWindow.actionsDisabled"
                            t-att-title="this.actionsMenuTitleText"
                            t-ref="actionsMenuButton"
                        >
                            <t t-call="mail.ChatWindow.headerContent"/>
                            <i t-if="!this.state.editingName" class="fa fa-fw fa-caret-down"/>
                        </button>
                        <t t-set-slot="content">
                            <t t-if="this.props.chatWindow.exists()">
                                <t t-set="quickActionsInDropdown" t-value="this.partitionedActions.quick.slice(this.ui.isSmall ? 2 : 4)"/>
                                <ActionList actions="[quickActionsInDropdown, partitionedActions.other, ...partitionedActions.group]" dropdown="true"/>
                            </t>
                        </t>
                    </Dropdown>
                </div>
                <AutoresizeInput
                    t-if="this.state.editingName"
                    className="'text-truncate fw-bold flex-shrink-1 me-1 py-0 ' + (this.ui.isSmall ? 'fs-4' : 'fs-5')"
                    enabled="true"
                    autofocus="true"
                    onValidate.bind="this.renameChannel"
                    value="this.props.chatWindow.channel.displayName"
                />
                <i t-if="this.state.editingName" class="fa fa-fw fa-caret-down opacity-50"/>
            </t>
            <t t-else="">
                <t t-call="mail.ChatWindow.headerContent"/>
            </t>
            <div t-if="this.channel.importantCounter > 0" class="o-mail-ChatWindow-counter mx-1 badge rounded-pill fw-bold o-discuss-badge shadow-sm" t-ref="needactionCounter">
                <t t-out="this.channel.importantCounter"/>
            </div>
            <div class="ms-1 flex-grow-1"/>
            <div class="d-flex flex-shrink-0 me-1">
                <ActionList actions="partitionedActions.quick.slice(0, this.ui.isSmall ? 2 : 4).reverse()" inline="true"/>
            </div>
            <t t-if="this.store.inPublicPage and !this.store.self_user">
                <button class="btn ps-1" t-if="!this.state.editingGuestName">
                    <img class="o-mail-DiscussContent-selfAvatar rounded-circle object-fit-cover flex-shrink-0" alt="Avatar" t-att-src="this.store.self.avatarUrl" t-on-click="() => this.state.editingGuestName = true"/>
                </button>
                <AutoresizeInput
                    t-if="this.state.editingGuestName"
                    className="'py-1 me-2'"
                    autofocus="true"
                    onValidate.bind="this.renameGuest"
                    value="this.store.self_guest.name"
                />
            </t>
        </div>
        <div t-if="!this.props.chatWindow.folded or this.ui.isSmall" class="d-flex flex-column h-100 overflow-auto o-scrollbar-thin position-relative bg-inherit" t-att-class="{ 'opacity-50': this.state.editingName }" t-ref="content">
            <t name="thread content">
                <div t-if="this.threadActions.activeAction?.actionPanelComponentCondition" class="h-100" t-attf-class="{{ this.threadActions.activeAction.actionPanelOuterClass }}">
                    <t t-component="this.threadActions.activeAction.actionPanelComponent" t-props="this.threadActions.activeAction.actionPanelComponentProps"/>
                </div>
                <t t-else="">
                    <Thread autofocus="this.isMobileOS ? this.props.chatWindow.autofocus : undefined" thread="this.channel.thread" t-key="this.channel.thread.localId" jumpPresent="this.state.jumpThreadPresent" jumpToNewMessage="this.props.chatWindow.jumpToNewMessage"/>
                    <t t-call="mail.ChatWindow.memberTyping"/>
                    <Composer composer="this.channel.composer" autofocus="this.isMobileOS ? undefined : this.props.chatWindow.autofocus" mode="'compact'" onPostCallback.bind="() => this.state.jumpThreadPresent++" dropzoneRef="this.contentRef" type="this.composerType" disabled="this.channel.composerDisabled"/>
                </t>
            </t>
        </div>
    </div>
    </t>
</t>
<t t-name="mail.ChatWindow.headerContent">
    <div class="o-mail-ChatWindow-threadAvatar position-relative bg-inherit my-0 me-1 ms-1" t-att-class="{
        'py-1': !this.threadActions.actions.length gt 3,
        'py-2': this.threadActions.actions.length lte 3,
        'ps-2': !this.hasActionsMenu,
    }" name="threadAvatar">
        <DiscussAvatar channel="this.channel" size="24" typing="false"/>
    </div>
    <t t-if="this.channel.parent_channel_id">
        <span class="fw-bold small o-mx-0_5 opacity-75 opacity-100-hover cursor-pointer o-hover-text-underline rounded fs-6" t-esc="this.channel.parent_channel_id.displayName" title="Open Channel" t-ref="parentChannel" t-on-click.stop="() => this.channel.parent_channel_id.open({ focus: true })"/>
        <i class="fa fa-chevron-right o-xsmaller ms-1 mt-1 text-muted opacity-75"/>
    </t>
    <CountryFlag t-if="this.channel.showCorrespondentCountry" country="this.channel.correspondentCountry" class="'o-mail-ChatWindow-country border shadow-sm'"/>
    <div t-if="!this.state.editingName" class="o-mail-ChatWindow-displayName text-truncate fw-bold border border-transparent o-mx-0_5 my-0 py-1" t-att-title="this.props.chatWindow.channel.displayName" t-esc="this.props.chatWindow.channel.displayName" t-att-class="{ 'fs-4': this.ui.isSmall, 'fs-5': !this.ui.isSmall }"/>
</t>

<t t-name="mail.ChatWindow.memberTyping">
    <div t-if="this.channel.hasOtherMembersTyping" class="d-flex bg-inherit position-relative">
        <div class="o-mail-ChatWindow-typing d-flex px-3 position-absolute bottom-0 start-0 w-100 bg-inherit align-items-center">
            <Typing channel="this.channel" size="'medium'"/>
        </div>
    </div>
</t>

</templates>
