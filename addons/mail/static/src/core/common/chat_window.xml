<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="mail.ChatWindow.moreActionsDropdownContent">
    <t t-set="quickActionsInDropdown" t-value="partitionedActions.quick.slice(ui.isSmall ? 2 : 4)"/>
    <t t-call="mail.DiscussActions">
        <t t-set="dropdown" t-value="true"/>
        <t t-set="quick" t-value="quickActionsInDropdown"/>
        <t t-set="group" t-value="partitionedActions.group"/>
        <t t-set="other" t-value="partitionedActions.other"/>
    </t>
</t>

<t t-name="mail.ChatWindow">
    <t t-set="partitionedActions" t-value="threadActions.partition"/>
    <div class="o-mail-ChatWindow fixed-bottom overflow-hidden d-flex flex-column o-shadow-soft"
        t-att-style="style"
        t-att-class="attClass"
        t-on-keydown="onKeydown"
        tabindex="1"
    >
        <div class="o-mail-ChatWindow-header o-px-1_5 d-flex align-items-start flex-shrink-0 position-absolute w-100 pe-none" t-ref="header">
            <div class="d-flex align-items-center rounded-pill px-0 o-py-0_5 pe-auto text-truncate">
                <t t-if="hasActionsMenu">
                    <div class="d-flex text-truncate">
                        <Dropdown position="ui.isSmall ? 'bottom-end' : 'left-start'" state="moreActionsState" menuClass="'d-flex flex-column p-0 mx-2 my-0 o-mail-DiscussMenu-bgColor border-secondary rounded-4'">
                            <div class="o-mail-ChatWindow-moreActions o-mail-DiscussActions-actionStyle o-inline o-mail-DiscussPanel-bgColor d-flex align-items-center o-gap-0_5 px-1 o-py-0_5 m-1 o-mt-0_5 ms-0 rounded-pill border border-secondary o-shadow-soft text-truncate cursor-pointer" t-att-class="{ 'ps-2': ui.isSmall }">
                                <t t-call="mail.ChatWindow.headerContent"/>
                            </div>
                            <t t-set-slot="content">
                                <t t-set="quickActionsInDropdown" t-value="partitionedActions.quick.slice(ui.isSmall ? 2 : 4)"/>
                                <t t-call="mail.DiscussActions">
                                    <t t-set="dropdown" t-value="true"/>
                                    <t t-set="quick" t-value="quickActionsInDropdown"/>
                                    <t t-set="group" t-value="partitionedActions.group"/>
                                    <t t-set="other" t-value="partitionedActions.other"/>
                                </t>
                            </t>
                        </Dropdown>
                    </div>
                </t>
            </div>
            <div class="ms-1 flex-grow-1"/>
            <div class="d-flex flex-shrink-0 mt-2 pe-auto">
                <t t-call="mail.DiscussActions">
                    <t t-set="inline" t-value="true"/>
                    <!-- <t t-set="inlineSmall" t-value="true"/> -->
                    <t t-set="quick" t-value="partitionedActions.quick.slice(0, ui.isSmall ? 2 : 4).reverse()"/>
                </t>
            </div>
            <t t-if="this.store.inPublicPage and this.store.self.type === 'guest'">
                <button class="btn ps-1 pe-auto" t-if="!state.editingGuestName">
                    <img class="o-mail-Discuss-selfAvatar rounded-circle o_object_fit_cover flex-shrink-0" alt="Avatar" t-att-src="store.self.avatarUrl" t-on-click="() => state.editingGuestName = true"/>
                </button>
                <AutoresizeInput
                    t-if="state.editingGuestName"
                    className="'py-1 me-2 pe-auto'"
                    autofocus="true"
                    onValidate.bind="renameGuest"
                    value="store.self.name"
                />
            </t>
        </div>
        <div t-if="!props.chatWindow.folded or ui.isSmall" class="d-flex flex-column h-100 overflow-auto o-scrollbar-thin position-relative" t-att-class="{ 'opacity-50': state.editingName }" t-ref="content">
            <t name="thread content">
                <div t-if="threadActions.activeAction?.componentCondition" class="h-100" t-attf-class="{{ threadActions.activeAction.panelOuterClass }}">
                    <t t-component="threadActions.activeAction.component" t-props="{ ...threadActions.activeAction.componentProps, thread }"/>
                </div>
                <t t-elif="thread">
                    <Thread autofocus="isMobileOS ? props.chatWindow.autofocus : undefined" isInChatWindow="true" thread="thread" t-key="thread.localId" jumpPresent="state.jumpThreadPresent" jumpToNewMessage="props.chatWindow.jumpToNewMessage" paddingCompensation="threadPaddingCompensation.asContributee"/>
                    <div t-if="thread.hasOtherMembersTyping" class="d-flex bg-inherit position-relative">
                        <div class="o-mail-ChatWindow-typing d-flex px-3 position-absolute bottom-0 start-0 w-100 bg-inherit align-items-center">
                            <Typing channel="thread" size="'medium'"/>
                        </div>
                    </div>
                    <Composer composer="thread.composer" autofocus="isMobileOS ? undefined : props.chatWindow.autofocus" mode="'compact'" onPostCallback.bind="() => this.state.jumpThreadPresent++" dropzoneRef="contentRef" type="composerType" paddingCompensation="threadPaddingCompensation_asBottomContributor"/>
                </t>
            </t>
        </div>
    </div>
</t>

<t t-name="mail.ChatWindow.quickAction">
    <button class="o-mail-ChatWindow-command btn d-flex opacity-100-hover align-items-center p-0 o-quick rounded-3" style="aspect-ratio: 1;" t-att-class="{ 'o-small p-2 my-1': ui.isSmall }" t-attf-class="{{ itemClass }}" t-att-title="action.name" t-att-disabled="props.chatWindow.actionsDisabled" t-on-click.stop="() => action.onSelected()"><i class="fa-lg" t-attf-class="{{ action.icon }}"/></button>
</t>

<t t-name="mail.ChatWindow.headerContent">
    <div class="o-mail-ChatWindow-threadAvatar position-relative my-0 me-1" t-att-class="{
        'py-1': !thread or threadActions.actions.length gt 3,
        'py-2': thread and threadActions.actions.length lte 3,
        'ms-1': thread,
        'ms-3': !thread,
        'ps-2': !hasActionsMenu,
    }" name="threadAvatar">
        <img t-if="thread" class="o-rounded-bubble o_object_fit_cover" t-att-src="thread.parent_channel_id?.avatarUrl ?? thread.avatarUrl" alt="Thread Image"/>
        <ImStatus t-if="showImStatus" className="'o-mail-ChatWindow-imStatus position-absolute'" member="thread.correspondent" size="'sm'"/>
    </div>
    <t t-if="thread?.parent_channel_id">
        <span class="fw-bold small ms-1 p-1 opacity-75 opacity-100-hover cursor-pointer o-hover-text-underline rounded fs-6" t-esc="thread.parent_channel_id.displayName" title="Open Channel" t-ref="parentChannel" t-on-click.stop="() => this.thread.parent_channel_id.open({ focus: true })"/>
        <i class="fa fa-chevron-right o-xsmaller ms-1 text-muted opacity-50"/>
    </t>
    <CountryFlag t-if="thread?.showCorrespondentCountry" country="thread.correspondentCountry" class="'o-mail-ChatWindow-country border o-shadow-soft'"/>
    <div t-if="!state.editingName" class="text-truncate fw-bold border border-transparent mx-0 my-0 py-1" t-att-title="props.chatWindow.displayName" t-esc="props.chatWindow.displayName" t-att-class="{ 'fs-4': ui.isSmall, 'small': !ui.isSmall, 'opacity-75': !props.chatWindow.thread?.isFocused }"/>
    <div t-if="thread and thread.importantCounter > 0" class="o-mail-ChatWindow-counter mx-1 badge rounded-pill fw-bold o-discuss-badge o-shadow-soft" t-ref="needactionCounter">
        <t t-out="thread.importantCounter"/>
    </div>
    <i t-if="!state.editingName" class="fa fa-fw fa-caret-down" t-att-class="{ 'opacity-25': !moreActionsState.isOpen }"/>
</t>

</templates>
