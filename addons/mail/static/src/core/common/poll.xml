<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.Poll">
        <div class="o-mail-Poll card border-secondary rounded shadow-sm w-100" t-att-class="{'o-ongoing': !this.props.poll.end_message_id, 'o-isShowingResults': this.isShowingResults}">
            <div class="card-body d-flex flex-column gap-1 p-3">
                <p class="card-title text-start fw-bold mb-0" t-esc="this.props.poll.poll_question"/>
                <p class="card-subtitle mb-2 text-muted smaller">
                    <t t-if="this.props.poll.allow_multiple_options">Select one or more options</t>
                    <t t-else="">Select one option</t>
                </p>
                <div class="o-mail-PollOption rounded" t-foreach="this.props.poll.option_ids" t-as="option" t-key="option.id" t-att-style="this.percentageAttStyle(option)" t-att-class="{'o-selected': this.state.selectedOptionIds.has(option.id), 'o-winningOption': option.eq(this.props.poll.winning_option_id), 'o-hasVotes': option.number_of_votes > 0 }">
                    <div t-if="this.isShowingResults" class="d-flex justify-content-between p-2">
                        <span class="fw-bold me-1 text-truncate" t-esc="option.option_label"/>
                        <span class="flex-shrink-0">
                            <span class="fw-bold me-1 smaller" t-esc="this.props.poll.voteCountText(option.number_of_votes)"/>
                            <span class="fw-bold"><t t-esc="option.vote_percentage"/> %</span>
                            <i t-if="option.selected_by_self" class="ms-1 fa fa-lg fa-check-circle"/>
                        </span>
                    </div>
                    <label t-else="" class="d-flex justify-content-between p-2 cursor-pointer">
                        <span class="fw-bold me-1 text-truncate" t-esc="option.option_label"/>
                        <input class="form-check-input" t-att-disabled="this.state.voting" t-att-checked="this.state.selectedOptionIds.has(option.id)" t-on-change="(ev) => this.onOptionCheckboxToggle(option.id, ev.target.checked)" t-att-type="this.props.poll.allow_multiple_options ? 'checkbox' : 'radio'"/>
                    </label>
                </div>
                <div class="d-flex align-items-center mt-2">
                    <div class="small text-muted">
                        <a href="#" class="text-decoration-underline link-underline link-underline-opacity-0 link-underline-opacity-100-hover" t-on-click="this.onClickNumberOfVotes" t-esc="this.props.poll.voteCountText(this.props.poll.numberOfVotes)"/>
                        âˆ™
                        <t t-if="this.props.poll.end_message_id">Poll closed</t>
                        <t t-else="" t-esc="this.state.remainingTimeText"/>
                    </div>
                    <span class="flex-grow-1"/>
                    <t t-if="!this.props.poll.end_message_id">
                        <t t-if="!this.props.poll.selfAlreadyVoted">
                            <t t-if="this.isShowingResults">
                                <button class="btn btn-secondary" t-on-click="() => this.hideResults()">Go back to vote</button>
                            </t>
                            <t t-else="">
                                <a href="#" class="me-2" t-on-click="() => this.showResults()">View results</a>
                                <button class="btn btn-primary" t-att-disabled="this.voteButtonDisabled" t-on-click="this.onClickVote">Vote</button>
                            </t>
                        </t>
                        <button t-else="" class="btn btn-secondary" t-on-click="this.props.poll.removeVote">Remove Vote</button>
                    </t>
                </div>
            </div>
        </div>
    </t>
</templates>
