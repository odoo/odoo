<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="mail.DateSection">
    <div class="o-mail-DateSection d-flex align-items-center w-100 fw-bold z-1" t-attf-class="{{ props.className }}">
        <hr class="flex-grow-1 opacity-0"/>
        <span class="px-2 smaller border border-secondary shadow-sm rounded-pill" t-att-class="{ 'user-select-none': isMobileOS }"><t t-esc="props.date"/></span>
        <hr class="flex-grow-1 opacity-0"/>
    </div>
</t>
</templates>
