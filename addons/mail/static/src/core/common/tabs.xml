<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
<t t-name="mail.Tabs">
    <div t-attf-class="o-mail-Tabs d-flex border rounded shadow-sm bg-view h-100 w-100 {{props.direction === 'h' ? 'flex-column' : ''}}" t-ref="tabsRef">
        <nav class="position-relative d-flex bg-100 o-scrollbar-thin flex-shrink-0" t-att-class="{'border-bottom flex-row': props.direction === 'h', 'border-end flex-column': props.direction === 'v'}">
            <t t-slot="headers"/>
            <span
                class="o-mail-Tabs-indicator-slide position-absolute bg-primary opacity-75"
                t-att-class="{'bottom-0': props.direction === 'h', 'end-0': props.direction === 'v'}"
                t-attf-style="width: {{state.indicatorW}}px; height: {{state.indicatorH}}px; transform: translateX({{state.indicatorX}}px) translateY({{state.indicatorY}}px);"
            />
        </nav>
        <div class="o-mail-Tabs-content overflow-auto flex-grow-1 p-2 o-scrollbar-thin">
            <t t-slot="panels"/>
        </div>
    </div>
</t>

<t t-name="mail.InternalTabHeader">
    <button
        class="o-mail-Tabs-tab btn flex-shrink-0 py-2 px-3 border-0"
        t-att-class="{'text-primary': isActive, 'text-muted opacity-75': !isActive}"
        t-att-title="props.title"
        t-on-click="onClick"
        t-ref="root"
        t-att-data-index="props.index"
    >
        <t t-slot="default"/>
    </button>
</t>

<t t-name="mail.TabPanel">
    <div t-if="env.tabsContext.isActive(props.id)" class="p-2">
        <t t-slot="default"/>
    </div>
</t>

</templates>
