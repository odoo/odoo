<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.KanbanRottingField">
        <div class="badge rounded-pill d-flex align-items-center text-bg-danger" t-if="props.record.data.is_rotting"
            t-att-title="title">
            <t t-out="dayCount"/>
        </div>
    </t>

    <t t-name="mail.Many2OneFieldRotting">
        <div class="d-inline-flex">
            <Many2One t-props="m2oProps"/>
            <span class="badge rounded-pill text-bg-danger ms-2" t-if="props.record.data.is_rotting">
                <t t-out="dayCount"/>
            </span>

        </div>
    </t>
</templates>
