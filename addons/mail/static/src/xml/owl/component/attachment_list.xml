<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_AttachmentList"
        owl="1"
        t-name="mail.component.AttachmentList">
        <Attachment
            attachmentLocalId="attachmentLocalId"
            attachmentLocalIds="props.attachmentLocalIds"
            class="o_AttachmentList_attachment"
            hasLabelForCardLayout="props.haveAttachmentsLabelForCardLayout"
            imageSizeForBasicLayout="props.attachmentsImageSizeForBasicLayout"
            isDownloadable="props.areAttachmentsDownloadable"
            isEditable="props.areAttachmentsEditable"
            layout="props.attachmentsLayout"
            t-as="attachmentLocalId"
            t-foreach="props.attachmentLocalIds"
            t-key="attachmentLocalId"/>
    </div>

</templates>
