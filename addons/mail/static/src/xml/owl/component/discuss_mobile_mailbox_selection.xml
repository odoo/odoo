<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_DiscussMobileMailboxSelection"
        owl="1"
        t-name="mail.component.DiscussMobileMailboxSelection">
        <t t-foreach="storeProps.pinnedMailboxList" t-as="mailbox">
            <button
                class="
                    btn
                    o_DiscussMobileMailboxSelection_button"
                type="button"
                t-att-class="{
                    'btn-primary': props.activeThreadLocalId === mailbox.localId,
                    'btn-secondary': props.activeThreadLocalId !== mailbox.localId,
                    'o-active': props.activeThreadLocalId === mailbox.localId,
                }"
                t-att-data-mailbox-local-id="mailbox.localId"
                t-key="mailbox.localId"
                t-on-click="_onClick">
                <t t-esc="mailbox.name"/>
            </button>
        </t>
    </div>

</templates>
