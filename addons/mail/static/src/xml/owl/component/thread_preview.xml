<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!--
        The preview template is used by the discuss in mobile, and by the systray
        menu in order to show preview of threads.
    -->
    <div
        class="o_ThreadPreview"
        owl="1"
        t-att-class="{
            'o-unread': storeProps.thread.message_unread_counter > 0,
        }"
        t-att-data-thread-local-id="props.threadLocalId"
        t-name="mail.component.ThreadPreview"
        t-on-click="_onClick">
        <div class="o_ThreadPreview_sidebar">
            <div
                class="
                    o_ThreadPreview_imageContainer
                    o_ThreadPreview_sidebarItem">
                <img
                    alt=""
                    class="
                        o_ThreadPreview_image
                        rounded-circle"
                    t-att-src="image"/>
                <PartnerImStatusIcon
                    class="o_ThreadPreview_partnerImStatusIcon"
                    partnerLocalId="storeProps.threadDirectPartner.localId"
                    t-att-class="{
                        'o_ThreadPreview_partnerImStatusIcon-mobile': storeProps.isMobile,
                    }"
                    t-if="storeProps.threadDirectPartner and
                        storeProps.threadDirectPartner.im_status"/>
            </div>
        </div>
        <div class="o_ThreadPreview_content">
            <div
                class="o_ThreadPreview_header">
                <span
                    class="o_ThreadPreview_name"
                    t-att-class="{
                        'o-mobile': storeProps.isMobile,
                    }">
                    <t t-esc="storeProps.threadName"/>
                </span>
                <span
                    class="o_ThreadPreview_counter"
                    t-if="storeProps.thread.message_unread_counter > 0">
                    (<t t-esc="storeProps.thread.message_unread_counter"/>)
                </span>
                <span
                    class="o-autogrow"/>
                <span
                    class="o_ThreadPreview_date"
                    t-if="storeProps.lastMessage">
                    <t t-esc="storeProps.lastMessage.date.fromNow()"/>
                </span>
            </div>
            <div
                class="o_ThreadPreview_core">
                <span
                    class="
                        o_ThreadPreview_coreItem
                        o_ThreadPreview_inlineText"
                    t-att-class="{
                        'o-empty': inlineLastMessageBody.length === 0,
                    }">
                    <MessageAuthorPrefix
                        messageLocalId="storeProps.lastMessage.localId"
                        threadLocalId="props.threadLocalId"
                        t-if="storeProps.lastMessageAuthor"/>
                    <t t-raw="inlineLastMessageBody"/>
                </span>
                <span
                    class="o-autogrow"/>
                <span
                    class="
                        fa
                        fa-check
                        o_ThreadPreview_coreItem
                        o_ThreadPreview_markAsRead"
                    title="Mark as Read"
                    t-if="storeProps.thread.message_unread_counter > 0"
                    t-on-click.stop="_onClickMarkAsRead"/>
            </div>
        </div>
    </div>

</templates>
