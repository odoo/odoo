<?xml version="1.0" encoding="UTF-8"?>
<template>

    <!-- Groups placeholder in sidebar -->
    <t t-extend="TimelineSidebar">
        <t t-jquery=".o_timeline_sidebar" t-operation="append">
            <div class="oe_suggestions_groups"></div>
        </t>
    </t>

    <!-- Suggested groups -->
    <div t-name="TimelineSuggestionGroups" class="oe_sidebar_suggestion oe_suggestion_group">
        <div class="oe_suggest_title">
            <i class="oe_suggestion_remove oe_suggestion_group fa fa-times"/>
            <span>Suggested Groups</span>
        </div>
        <div class="oe_suggest_items">
            <t t-foreach="widget.groups" t-as="result">
                <div class="oe_suggested_item">
                    <div class="oe_suggested_item_image">
                        <a t-attf-href="#model=mail.group&amp;id=#{result.id}">
                            <img t-att-src="result.image" t-att-alt="result.name"/>
                        </a>
                    </div>
                    <div class="oe_suggested_item_content">
                        <a class="oe_suggestion_item_name" t-attf-href="#model=mail.group&amp;id=#{result.id}"><t t-esc="result.name"/></a>
                        <i class="oe_suggestion_remove_item oe_suggestion_group fa fa-times" t-att-id="result.id"/>
                        <br/>
                        <div class="btn-group btn-group-sm"> 
                            <button type="button" class="btn btn-default oe_suggestion_join" t-att-id="result.id">Join Group</button>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </div>

</template>
