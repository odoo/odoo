<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Discuss -->
    <t t-name="mail.discuss">
        <div class="o_mail_chat">
            <div class="o_mail_conversation_sidebar"/>
            <div class="o_mail_conversation_content">
                <t t-if="widget.displayNotificationBar">
                    <div class="o_mail_annoying_notification_bar">
                        <span class="o_mail_request_permission">Odoo needs your permission to <a href="#"> enable desktop notifications</a>.</span>
                        <span class="fa fa-close"></span>
                    </div>
                </t>
            </div>
        </div>
    </t>
    <t t-name="mail.conversation.Sidebar">
        <div class="o_mail_conversation_sidebar">
            <div t-attf-class="o_mail_chat_title_main o_mail_conversation_item #{(activeChannelID === 'mailbox_inbox') ? 'o_active': ''}"
                 data-conversation-id="mailbox_inbox">
                <span class="o_conversation_name"><i class="fa fa-inbox mr8"/>Inbox</span>
                <t t-set="counter" t-value="needactionCounter"/>
                <t t-call="mail.conversation.SidebarNeedaction"/>
            </div>
            <div t-attf-class="o_mail_chat_title_main o_mail_mailbox_title_starred o_mail_conversation_item #{(activeChannelID === 'mailbox_starred') ? 'o_active': ''}"
                 data-conversation-id="mailbox_starred">
                <span class="o_conversation_name"><i class="fa fa-star-o mr8"/>Starred</span>
                <t t-set="counter" t-value="starredCounter"/>
                <t t-call="mail.conversation.SidebarNeedaction"/>
            </div>
            <hr class="mb8"/>

            <t t-set="conversation_type" t-value="'public'"/>
            <t t-call="mail.conversation.SidebarTitle">
                <t t-set="conversation_title">Channels</t>
                <t t-set="conversation_icon" t-value="fa-users"/>
            </t>
            <t t-call="mail.conversation.SidebarItems">
                <t t-set="display_hash" t-value="true"/>
                <t t-set="input_placeholder">Add a channel</t>
            </t>

            <t t-set="conversation_type" t-value="'dm'"/>
            <t t-call="mail.conversation.SidebarTitle">
                <t t-set="conversation_title">Direct Messages</t>
                <t t-set="conversation_icon" t-value="fa-user"/>
            </t>
            <t t-call="mail.conversation.SidebarItems">
                <t t-set="display_status" t-value="true"/>
                <t t-set="input_placeholder">User name</t>
            </t>

            <t t-set="conversation_type" t-value="'private'"/>
            <t t-call="mail.conversation.SidebarTitle">
                <t t-set="conversation_title">Private Channels</t>
                <t t-set="conversation_icon" t-value="fa-eye-slash"/>
            </t>
            <t t-call="mail.conversation.SidebarItems">
                <t t-set="input_placeholder">Add a private channel</t>
                <t t-set="display_hash" t-value="true"/>
            </t>
        </div>
    </t>
    <t t-name="mail.conversation.SidebarNeedaction">
        <span t-attf-class="o_mail_sidebar_needaction badge #{(!counter ? 'hide' : '')}">
            <t t-esc="counter"/>
        </span>
    </t>
    <t t-name="mail.conversation.SidebarTitle">
        <!-- Don't display the conversation type if there is no conversation of such type
             and the 'add a channel' option is disabled for this type -->
        <t t-if="disable_add_channel">
            <t t-set="empty" t-value="true"/>
            <t t-foreach="conversations" t-as="conversation">
                <t t-if="conversation.getType() === conversation_type">
                    <t t-set="empty" t-value="false"/>
                </t>
            </t>
        </t>
        <t t-if="!disable_add_channel || !empty">
            <div class="o_mail_sidebar_title">
                <h4 t-att-class="conversation_type == 'public' ? 'o_mail_open_channels' : ''">
                    <i t-if="conversation_icon" t-attf-class="mr4 fa-fw fa #{conversation_icon}"></i>
                    <b><t t-esc="conversation_title"/></b>
                </h4>
                <span t-if="!disable_add_channel" class="fa fa-plus o_add" title="Add" t-attf-data-type="#{conversation_type}"/>
            </div>
        </t>
    </t>
    <t t-name="mail.conversation.SidebarItems">
        <div t-if="!disable_add_channel" class="o_mail_add_channel" t-attf-data-type="#{conversation_type}">
            <span t-if="display_hash">#</span>
            <input type="text" class="o_input" t-attf-placeholder="#{input_placeholder}"/>
        </div>
        <t t-foreach="conversations" t-as="conversation">
            <t t-set="counter" t-value="conversation.getType() === 'mailbox' ? conversation.getMailboxCounter() : conversation.isChat() ? conversation.getUnreadCounter() : conversation.getNeedactionCounter()"/>
            <div t-if="conversation.getType() === conversation_type" t-att-data-conversation-id="conversation.getID()" t-att-title="conversation.getName()"
                 t-attf-class="o_mail_conversation_item #{conversation.hasUnreadMessages() ? ' o_unread_message' : ''} #{(activeChannelID == conversation.getID()) ? 'o_active': ''}">
                <span class="o_conversation_name">
                    <span t-if="display_status">
                        <t t-call="mail.conversation.UserStatus">
                            <t t-set="status" t-value="conversation.getStatus()"/>
                        </t>
                    </span>
                    <span t-if="display_hash" class="o_mail_hash">#</span>
                    <t t-esc="conversation.getName()"/>
                    <i t-if="conversation.isMassMailing()" class="fa fa-envelope-o" title="Sends messages by email"/>
                </span>
                <span t-attf-class="fa fa-cog o_mail_channel_settings"
                      title="Channel settings" t-att-data-conversation-id="conversation.getID()"/>
                <t t-call="mail.conversation.SidebarNeedaction"/>
                <span t-if="! conversation.isGroupBasedSubscription()" t-attf-class="fa fa-times o_mail_partner_unpin #{counter ? 'hide' : ''}"
                      title="Leave this channel" t-att-data-conversation-id="conversation.getID()"/>
            </div>
        </t>
    </t>

    <t t-name="mail.conversation.UserStatus">
        <i t-if="status == 'online'" class="o_mail_user_status o_user_online fa fa-circle" title="Online"/>
        <i t-if="status == 'away'" class="o_mail_user_status o_user_idle fa fa-circle" title="Idle"/>
        <i t-if="status == 'offline'" class="o_mail_user_status fa fa-circle-o" title="Offline"/>
    </t>

    <t t-name="mail.conversation.MessageSentSnackbar">
        <div class="alert o_mail_snackbar" data-dismiss="alert" role="alert">
            Message sent in "<t t-esc="documentName"/>".
        </div>
    </t>


    <!-- Buttons of the Control Panel -->
    <t t-name="mail.conversation.ControlButtons">
        <div>
            <button type="button" class="btn btn-primary btn-sm o_mail_conversation_button_invite hidden-xs" title="Invite people">Invite</button>
            <button type="button" class="btn btn-default btn-sm o_mail_conversation_button_mark_read hidden-xs" title="Mark all as read">Mark all read</button>
            <button type="button" class="btn btn-default btn-sm o_mail_conversation_button_unstar_all" title="Unstar all messages">Unstar all</button>
            <button type="button" class="btn btn-default btn-sm o_mail_conversation_button_dm visible-xs" title="New Message">New Message</button>
            <button t-if="!disable_add_channel" type="button" class="btn btn-default btn-sm o_mail_conversation_button_public o_mail_conversation_button_private visible-xs" title="New Channel">New Channel</button>
        </div>
    </t>

    <!-- Invite dialog's content -->
    <div t-name="mail.PartnerInviteDialog">
        <input type="text" class="o_input o_mail_chat_partner_invite_input" id="mail_search_partners"/>
    </div>


    <!-- Mobile templates -->
    <t t-name="mail.discuss_mobile">
        <div class="o_mail_chat">
            <div class="o_mail_chat_mobile_mailboxes_buttons">
                <button type="button" class="btn btn-primary btn-sm visible-xs-inline o_mailbox_inbox_item" title="Inbox" data-type="mailbox_inbox">
                    Inbox
                </button>
                <button type="button" class="btn btn-default btn-sm visible-xs-inline o_mailbox_inbox_item" title="Starred" data-type="mailbox_starred">
                    Starred
                </button>
            </div>
            <div class="o_mail_conversation_content"/>
            <div class="o_mail_mobile_tabs">
                <div class="o_mail_mobile_tab" data-type="mailbox_inbox">
                    <span class="fa fa-inbox"/>
                    <span class="o_tab_title">Inbox</span>
                </div>
                <div class="o_mail_mobile_tab" data-type="dm">
                    <span class="fa fa-user"/>
                    <span class="o_tab_title">Chat</span>
                </div>
                <div class="o_mail_mobile_tab" data-type="public">
                    <span class="fa fa-users"/>
                    <span class="o_tab_title">Channels</span>
                </div>
                <div class="o_mail_mobile_tab" data-type="private">
                    <span class="fa fa-eye-slash"/>
                    <span class="o_tab_title">Private Channels</span>
                </div>
            </div>
        </div>
    </t>

    <t t-name="mail.conversation.MobileTabPane">
        <div class="o_mail_chat_tab_pane" t-att-data-type="type">
            <div t-if="!disable_add_channel" class="o_mail_add_channel" t-att-data-type="type">
                <span t-if="type == 'private' || type == 'public'">#</span>
                <t t-set="input_placeholder" t-if="type == 'private' || type == 'public'">Add a channel</t>
                <t t-set="input_placeholder" t-if="type == 'dm'">Open chat</t>
                <input type="text" t-attf-placeholder="#{input_placeholder}"/>
            </div>
            <t t-foreach="conversationPreviews" t-as="conversationPreview">
                <t t-call="mail.conversation.Preview"/>
            </t>
        </div>
    </t>

    <!-- The ConversationPreview template is used by the discuss in mobile, and by the systray menu -->
    <t t-name="mail.conversation.Preview">
        <div t-attf-class="o_mail_conversation_preview #{conversationPreview.hasUnreadMessages() ? 'o_conversation_unread' : ''}"
             t-att-data-conversation_id="conversationPreview.getID()" t-att-data-res_id="conversationPreview.getResID()" t-att-data-res_model="conversationPreview.getModel()">
            <div t-attf-class="o_mail_conversation_image #{conversationPreview.getModel() ? 'o_mail_conversation_app' : ''}">
                <img class="o_mail_conversation_image" t-att-src="conversationPreview.getImageSource()"/>
                <i t-if="conversationPreview.getStatus() === 'online'" class="o_mail_user_status o_user_online fa fa-circle" title="Online"/>
                <i t-if="conversationPreview.getStatus() === 'away'" class="o_mail_user_status o_user_idle fa fa-circle" title="Idle"/>
            </div>
            <div class="o_conversation_info">
                <div class="o_conversation_title">
                    <span class="o_conversation_name">
                        <t t-esc="conversationPreview.getName()"/>
                    </span>
                    <span class="o_conversation_counter">
                        <t t-if="conversationPreview.hasUnreadMessages()">&amp;nbsp;(<t t-esc="conversationPreview.getUnreadCounter()"/>)</t>
                    </span>
                    <span class="o_last_message_date"> <t t-esc="conversationPreview.hasLastMessage() ? conversationPreview.getLastMessageDate().fromNow() : ''"/> </span>
                </div>
                <div t-if="conversationPreview.hasLastMessage()" class="o_last_message_preview">
                    <t t-if="conversationPreview.isLastMessageAuthor()">
                        <span class="fa fa-mail-reply"/> You:
                    </t>
                    <t t-else="">
                        <t t-esc="conversationPreview.getLastMessageDisplayedAuthor()"/>:
                    </t>
                    <t t-raw="conversationPreview.getLastMessagePreview()"/>
                </div>
            </div>
        </div>
    </t>

</templates>
