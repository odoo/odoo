<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="mail.thread" owl="1">
    <t t-set="thread" t-value="messaging.threads[props.id]"/>
    <t t-set="isEmpty" t-value="thread.messages.length === 0"/>
    <div class="o-mail-thread overflow-auto pb-4 flex-grow-1 bg-view" t-ref="messages">
        <t t-if="!isEmpty">
            <div class="d-flex flex-column" t-att-class="{'justify-content-end': !env.inChatter}" style="min-height:100%">
                <t t-set="currentDay" t-value="0"/>
                <t t-set="prevMsg" t-value="0"/>
                <t t-foreach="thread.messages" t-as="messageId" t-key="messageId">
                    <t t-set="msg" t-value="messaging.messages[messageId]"/>
                    <t t-if="msg.dateDay !== currentDay">
                        <div class="d-flex fw-bolder pt-4">
                            <hr class="flex-grow-1 border-top"/>
                            <span class="px-3"><t t-esc="msg.dateDay"/></span>
                            <hr class="flex-grow-1 border-top"/>
                        </div>
                        <t t-set="currentDay" t-value="msg.dateDay"/>
                    </t>
                    <t t-if="msg.isNotification">
                        <t t-call="mail.notification_message"/>
                    </t>
                    <t t-else="">
                        <Message message="msg" squashed="isSquashed(msg, prevMsg)"/>
                    </t>
                    <t t-set="prevMsg" t-value="msg"/>
                </t>
            </div>
        </t>
        <t t-else="">
            <div class="d-flex flex-column align-items-center justify-content-center p-4 text-muted fst-italic h-100">
                <t t-if="thread.status !== 'loading'">
                    <t t-if="isEmpty and thread.type === 'mailbox'">
                        <t t-call="mail.empty.mailbox"/>
                    </t>
                    <t t-else="">
                        There are no messages in this conversation.
                    </t>
                </t>
            </div>
        </t>
    </div>
</t>

<t t-name="mail.notification_message" owl="1">
    <div class="d-flex justify-content-center text-500 small px-3">
        <span class="d-inline mx-1" t-esc="messaging.partners[msg.authorId].name"/> <t t-out="msg.body"/>
    </div>
</t>

<t t-name="mail.empty.mailbox" owl="1">
    <t t-if="thread.id === 'inbox'">
        <h4 class="mb-3 fw-bolder">
            Congratulations, your inbox is empty
        </h4>
        New messages appear here.
    </t>
    <t t-if="thread.id === 'starred'">
        <h4 class="mb-3 fw-bolder">
            No starred messages
        </h4>
        You can mark any message as 'starred', and it shows up in this mailbox.
    </t>
    <t t-if="thread.id === 'history'">
        <img src="/web/static/img/neutral_face.svg" alt="History"/>
        <h4 class="mb-3 fw-bolder">
            No history messages
        </h4>
        Messages marked as read will appear in the history.
    </t>
</t>

</templates>
