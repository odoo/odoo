<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.link_preview_card" owl="1">
        <div class="o-mail-link-preview-card card position-relative w-100 mb-2 rounded bg-view shadow-sm overflow-hidden" t-att-class="{ 'me-2': env.inChatter }" t-attf-class="{{ className }}">
            <div class="row g-0 flex-row-reverse h-100">
                <div class="col min-w-0" t-att-class="{ 'd-flex align-items-center': !props.linkPreview.og_description }">
                    <div class="o-mail-link-preview-card-content p-3">
                        <h6 class="o-mail-link-preview-card-title card-title mb-0 me-2" t-attf-class="{{ props.linkPreview.og_description ? 'text-truncate' : 'o-link-preview-card-hasMultineLines overflow-hidden' }}">
                            <a t-att-href="props.linkPreview.source_url" target="_blank" t-out="props.linkPreview.og_title"/>
                        </h6>
                        <p t-if="props.linkPreview.og_description" class="o-mail-link-preview-card-description o-link-preview-hasMultineLines card-text mb-0 mt-2 text-muted small overflow-hidden" t-out="props.linkPreview.og_description"/>
                    </div>
                </div>
                <div class="o-mail-link-preview-card-imageLinkWrap col-4 d-block">
                    <a t-att-href="props.linkPreview.source_url" class="o-link-preview-card-imageLink" target="_blank">
                        <img t-if="props.linkPreview.og_image" class="o-mail-link-preview-card-image w-100 h-100 o_object_fit_cover" t-att-src="props.linkPreview.og_image" t-att-alt="props.linkPreview.og_title"/>
                        <span t-else="" class="o-mail-link-preview-card-imageEmpty d-flex align-items-center justify-content-center w-100 h-100 bg-100 text-300">
                            <i class="fa fa-camera fa-2x"/>
                        </span>
                    </a>
                </div>
            </div>
            <div t-if="props.canBeDeleted" class="o-mail-link-preview-card-aside position-absolute top-0 end-0 small">
                <LinkPreviewAside className="'fa fa-stack p-0 opacity-75 opacity-100-hover'" linkPreview="props.linkPreview"/>
            </div>
        </div>
    </t>
</templates>
