<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ActivityCellView" owl="1">
        <div class="o_ActivityCellView h-100 cursor-pointer p-3" t-on-click="onClick" t-ref="root">
            <div class="o_ActivityCellView_content h-100 d-flex align-items-center justify-content-center position-relative" t-ref="content">
                <div class="o_ActivityCellView_closestDeadline text-white" t-out="closestDeadlineFormatted"/>
                <span t-if="filteredActivities.length > 1" class="o_ActivityCellView_activityCount badge bg-light rounded-pill border-0" t-out="filteredActivities.length"/>
            </div>
        </div>
    </t>

</templates>
