<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.Many2oneAvatarUser" owl="1">
        <div class="o_field_many2one_avatar cursor-pointer">
            <div class="o_m2o_avatar d-flex flex-row">
                <img t-if="props.value" t-att-src="url" t-att-alt="value" t-on-click="openChat" class="Many2oneAvatarUser rounded-circle o_object_fit_cover me-2" />
                <span t-if="!props.readonly and !props.value" class="o_m2o_avatar_empty"/>
                <span t-if="props.readonly" t-out="displayName"/>
                <Many2OneField t-if="!props.readonly" t-props="props" />
            </div>
        </div>
    </t>
</templates>
