<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.Avatar">
        <div class="o-mail-Avatar o_avatar d-flex align-items-center">
            <img class="rounded me-2"
                t-attf-src="/web/image/{{props.resModel}}/{{props.resId}}/avatar_128"
                t-on-click.stop.prevent="onClickAvatar"
            />
            <span class="text-truncate w-0 flex-grow-1" t-esc="props.displayName"/>
        </div>
    </t>

</templates>
