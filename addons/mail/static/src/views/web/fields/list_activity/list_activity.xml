<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.ListActivity">
        <ActivityButton record="this.props.record">
            <span class="o-mail-ListActivity-summary" t-out="this.summaryText"/>
        </ActivityButton>
    </t>
    <t t-name="mail.ListActivityButton" t-inherit="mail.ActivityButton">
        <xpath expr="//button[hasclass('o-mail-ActivityButton')]" position="replace">
            <button class="o-mail-ActivityButton btn btn-link btn-dark p-0 w-100 text-start text-truncate"
                t-on-click.prevent.stop="this.onClick" t-ref="button" t-att-aria-label="this.title" t-att-title="this.title">
                <i class="fa fa-fw fa-lg" t-att-class="this.buttonClass" role="img"/>
                <t t-slot="default"/>
            </button>
        </xpath>
    </t>
</templates>
