<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.ActivityController">
        <div t-att-class="this.props.className + (this.ui.isSmall ? ' o_action_delegate_scroll': '')">
            <Layout display="this.props.display">
                <t t-set-slot="control-panel-additional-actions">
                    <CogMenu/>
                </t>
                <t t-set-slot="control-panel-actions">
                    <SearchBar/>
                </t>
                <t t-component="this.props.Renderer" t-props="this.rendererProps" />
            </Layout>
        </div>
    </t>
</templates>
