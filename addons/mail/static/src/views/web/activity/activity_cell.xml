<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ActivityCell">
        <div class="h-100 cursor-pointer p-1 d-flex flex-column justify-content-between" t-on-click="this.onClick">
            <div class="d-flex position-relative" t-ref="content">
                <div class="position-absolute text-truncate px-2 w-100" t-out="this.displayedSummaries"/>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-4 px-2">
                <div class="o-mail-ActivityCell-deadline" t-out="this.reportingDateFormatted"/>
                <div class="d-flex justify-content-end">
                    <div t-if="this.props.userAssignedIds" class="d-flex justify-content-start">
                        <Avatar t-if="this.props.userAssignedIds.length > 0"
                                resModel="'res.users'" resId="this.props.userAssignedIds[0]"
                                displayName="''" noSpacing="true"/>
                        <Avatar t-if="this.props.userAssignedIds.length > 1"
                                resModel="'res.users'" resId="this.props.userAssignedIds[1]"
                                displayName="''" noSpacing="true"/>
                        <t t-set="nAdditionalAssignee"
                            t-value="this.props.userAssignedIds.length - 2"/>
                        <span t-if="nAdditionalAssignee > 0">+<t t-out="nAdditionalAssignee"/></span>
                    </div>
                    <div t-else=""/>
                    <div t-if="this.props.attachmentsInfo and this.ongoingActivityCount == 0"
                        class="d-flex w-100 justify-content-center gap-1 px-2">
                        <a t-attf-href="/web/content/#{this.props.attachmentsInfo.most_recent_id}?download=true" t-on-click.stop=""
                            t-out="this.props.attachmentsInfo.most_recent_name"
                            class="d-inline-block text-truncate" style="max-width: 120px;"/>
                        <div t-if="this.props.attachmentsInfo.count > 1" class="text-nowrap">
                            +<t t-out="this.props.attachmentsInfo.count - 1"/>
                        </div>
                    </div>
                    <div t-if="this.totalActivityCount > 1"
                        class="o-mail-ActivityCell-counter badge bg-light rounded-pill border-0 m-1 me-0">
                        <t t-if="this.totalActivityCount == this.ongoingActivityCount or this.ongoingActivityCount == 0"
                            t-out="this.totalActivityCount"/>
                        <t t-else="">
                            <t t-out="this.ongoingActivityCount"/> / <t t-out="this.totalActivityCount"/>
                        </t>
                    </div>
                    <div t-else=""/>
                </div>
            </div>
        </div>
    </t>

</templates>
