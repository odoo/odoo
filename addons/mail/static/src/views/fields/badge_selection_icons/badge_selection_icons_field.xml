<templates xml:space="preserve">

    <div t-name="mail.BadgeSelectionIconsField" class="d-flex flex-wrap gap-1 mb-3">
        <t t-if="this.props.readonly">
            <span t-esc="this.string" t-att-raw-value="this.value" />
        </t>
        <t t-else="">
            <t t-foreach="this.options" t-as="option" t-key="option[0]">
                <span
                    class="o_selection_badge btn btn-secondary mb-1"
                    t-att-class="{ 'active': this.value === option[0], 'btn-sm': this.props.size === 'sm', 'btn-lg': this.props.size === 'lg' }"
                    t-att-value="this.stringify(option[0])"
                    t-on-click="() => this.onChange(option[0])"
                >
                    <span t-att-class="`fa ${option[2]} pe-1`"/>
                    <span t-out="option[1]"/>
                </span>
            </t>
        </t>
    </div>
</templates>
