<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="mail.Many2OneAvatarUserField.Avatar" t-inherit="web.Many2OneAvatarField.Avatar" t-inherit-mode="primary" owl="1">
        <xpath expr="//span[hasclass('o_m2o_avatar')]" position="attributes">
            <attribute name="t-on-click.stop.prevent">onClickAvatar</attribute>
        </xpath>
    </t>

    <t t-name="mail.KanbanMany2OneAvatarUserField" owl="1">
        <t t-if="props.readonly and props.displayAvatarName">
            <Many2OneAvatarUserField t-props="m2oFieldProps"/>
        </t>
        <t t-else="">
            <t t-call="{{ constructor.avatarTemplate }}"/>
        </t>
    </t>
</templates>
