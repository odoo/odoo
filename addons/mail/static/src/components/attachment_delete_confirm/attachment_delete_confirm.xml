<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.AttachmentDeleteConfirm" owl="1">
        <t t-if="attachmentDeleteConfirmView">
            <div class="card bg-white" t-attf-class="{{ className() }}" t-ref="root">
                <h4 class="m-3">Confirmation</h4>
                <hr class="mt-0 mb-3"/>
                <p class="mx-3 mb-3"  t-attf-class="{{ className('mainText') }}" t-esc="attachmentDeleteConfirmView.body"/>
                <hr class="mt-0 mb-3"/>
                <div class="mx-3 mb-3"  t-attf-class="{{ className('buttons') }}">
                    <button class="btn btn-primary me-2"  t-attf-class="{{ className('confirmButton') }}" t-on-click="attachmentDeleteConfirmView.onClickOk">Ok</button>
                    <button class="btn btn-secondary me-2"  t-attf-class="{{ className('cancelButton') }}" t-on-click="attachmentDeleteConfirmView.onClickCancel">Cancel</button>
                </div>
            </div>
        </t>
    </t>
</templates>
