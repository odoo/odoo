<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.AttachmentDeleteConfirmView" owl="1">
        <div class="o_AttachmentDeleteConfirmView card bg-view" t-attf-class="{{ className }}" t-ref="root">
            <h4 class="m-3">Confirmation</h4>
            <hr class="mt-0 mb-3"/>
            <p class="o_AttachmentDeleteConfirmView_mainText mx-3 mb-3" t-esc="body"/>
            <hr class="mt-0 mb-3"/>
            <div class="o_AttachmentDeleteConfirmView_buttons mx-3 mb-3">
                <button class="o_AttachmentDeleteConfirmView_confirmButton btn btn-primary me-2" t-on-click="onClickOk">Ok</button>
                <button class="o_AttachmentDeleteConfirmView_cancelButton btn btn-secondary me-2" t-on-click="onClickCancel">Cancel</button>
            </div>
        </div>
    </t>
</templates>
