<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.Dialog" owl="1">
        <div class="o_Dialog modal" t-attf-class="{{ className }}" t-att-style="dialog and dialog.style" t-ref="root">
            <t t-if="dialog">
                <t
                    t-component="constructor.components[dialog.componentName]"
                    t-props="{
                        className: `o_Dialog_component ${dialog.componentClassName}`,
                        localId: dialog.record.localId,
                    }"
                />
            </t>
        </div>
    </t>

</templates>
