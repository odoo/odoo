<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ThreadPreview" owl="1">
        <!--
            The preview template is used by the discuss in mobile, and by the systray
            menu in order to show preview of threads.
        -->
        <div class="o_ThreadPreview" t-att-class="{ 'o-muted': thread and thread.__mfield_localMessageUnreadCounter(mself) === 0 }" t-on-click="_onClick" t-att-data-thread-local-id="thread ? thread.localId : undefined">
            <t t-if="thread">
                <div class="o_ThreadPreview_sidebar">
                    <div class="o_ThreadPreview_imageContainer o_ThreadPreview_sidebarItem">
                        <img class="o_ThreadPreview_image rounded-circle" t-att-src="image()" alt="Thread Image"/>
                        <t t-if="thread.__mfield_correspondent(mself) and thread.__mfield_correspondent(mself).__mfield_im_status(mself)">
                            <PartnerImStatusIcon
                                class="o_ThreadPreview_partnerImStatusIcon"
                                t-att-class="{
                                    'o-mobile': env.messaging.__mfield_device(mself).__mfield_isMobile(mself),
                                    'o-muted': thread.__mfield_localMessageUnreadCounter(mself) === 0,
                                }"
                                partnerLocalId="thread.__mfield_correspondent(mself).localId"
                            />
                        </t>
                    </div>
                </div>
                <div class="o_ThreadPreview_content">
                    <div class="o_ThreadPreview_header">
                        <span class="o_ThreadPreview_name" t-att-class="{ 'o-mobile': env.messaging.__mfield_device(mself).__mfield_isMobile(mself), 'o-muted': thread.__mfield_localMessageUnreadCounter(mself) === 0 }">
                            <t t-esc="thread.__mfield_displayName(mself)"/>
                        </span>
                        <t t-if="thread.__mfield_localMessageUnreadCounter(mself) > 0">
                            <span class="o_ThreadPreview_counter" t-att-class="{ 'o-muted': thread.__mfield_localMessageUnreadCounter(mself) === 0 }">
                                (<t t-esc="thread.__mfield_localMessageUnreadCounter(mself)"/>)
                            </span>
                        </t>
                        <span class="o-autogrow"/>
                        <t t-if="thread.__mfield_lastMessage(mself)">
                            <span class="o_ThreadPreview_date" t-att-class="{ 'o-muted': thread.__mfield_localMessageUnreadCounter(mself) === 0 }">
                                <t t-esc="thread.__mfield_lastMessage(mself).__mfield_date(mself).fromNow()"/>
                            </span>
                        </t>
                    </div>
                    <div class="o_ThreadPreview_core">
                        <span class="o_ThreadPreview_coreItem o_ThreadPreview_inlineText" t-att-class="{ 'o-empty': inlineLastMessageBody.length === 0 }">
                            <t t-if="thread.__mfield_lastMessage(mself) and thread.__mfield_lastMessage(mself).__mfield_author(mself)">
                                <MessageAuthorPrefix
                                    messageLocalId="thread.__mfield_lastMessage(mself).localId"
                                    threadLocalId="thread.localId"
                                />
                            </t>
                            <t t-esc="inlineLastMessageBody"/>
                        </span>
                        <span class="o-autogrow"/>
                        <t t-if="thread.__mfield_localMessageUnreadCounter(mself) > 0">
                            <span class="o_ThreadPreview_coreItem o_ThreadPreview_markAsRead fa fa-check" title="Mark as Read" t-on-click="_onClickMarkAsRead" t-ref="markAsRead"/>
                        </t>
                    </div>
                </div>
            </t>
        </div>
    </t>

</templates>
