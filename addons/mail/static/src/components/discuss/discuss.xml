<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.DiscussView" owl="1">
        <div class="o_DiscussView d-flex h-100" t-attf-class="{{ className }}"
            t-att-class="{ 'o-isDeviceSmall flex-column align-items-center bg-view': messaging.device.isSmall }"
            t-ref="root"
        >
            <DiscussSidebarView t-if="discussView.sidebar" className="'o_DiscussView_sidebar flex-shrink-0 h-100 pt-3 border-end bg-light'" record="discussView.sidebar"/>
            <t t-if="messaging.device.isSmall" t-call="mail.DiscussView.content"/>
            <div t-else="" class="o_DiscussView_content d-flex flex-column flex-grow-1 h-100 overflow-auto">
                <t t-call="mail.DiscussView.content"/>
            </div>
        </div>
    </t>

    <t t-name="mail.DiscussView.content" owl="1">
        <DiscussMobileMailboxSelectionView t-if="discussView.mobileMailboxSelectionView" className="'o_DiscussView_mobileMailboxSelection w-100 border-bottom'" record="discussView.mobileMailboxSelectionView"/>
        <div t-if="discussView.mobileAddItemHeaderAutocompleteInputView" class="o_DiscussView_mobileAddItemHeader d-flex justify-content-center w-100 p-3 border-bottom bg-light">
            <AutocompleteInputView
                className="'o_DiscussView_mobileAddItemHeaderInput flex-grow-1 mb-3 p-2 rounded border'"
                record="discussView.mobileAddItemHeaderAutocompleteInputView"
            />
        </div>
        <t t-if="discussView.discuss.threadView">
            <t name="beforeThread"/>
            <ThreadView
                className="'o_DiscussView_thread'"
                classNameObj="{ 'o-isDeviceSmall w-100': messaging.device.isSmall }"
                record="discussView.discuss.threadView"
            />
        </t>
        <div t-if="!discussView.discuss.activeThread and (!messaging.device.isSmall or discussView.discuss.activeMobileNavbarTabId === 'mailbox')" class="o_DiscussView_noThread d-flex flex-grow-1 align-items-center justify-content-center w-100 bg-view">
            <h4 class="text-muted"><b><i>No conversation selected.</i></b></h4>
        </div>
        <t t-if="messaging.device.isSmall and discussView.discuss.activeMobileNavbarTabId !== 'mailbox'">
            <button t-if="discussView.discuss.activeMobileNavbarTabId === 'chat'" class="o_DiscussView_mobileNewChatButton w-100 p-2 btn btn-secondary border-bottom bg-light" t-on-click="discussView.onClickMobileNewChatButton">
                Start a conversation
            </button>
            <button t-if="discussView.discuss.activeMobileNavbarTabId === 'channel'" class="o_DiscussView_mobileNewChannelButton w-100 p-2 btn btn-secondary border-bottom bg-light" t-on-click="discussView.onClickMobileNewChannelButton">
                New Channel
            </button>
        </t>
        <NotificationListView t-if="discussView.discuss.notificationListView" className="'o_DiscussView_notificationList flex-grow-1 w-100'" record="discussView.discuss.notificationListView"/>
        <MobileMessagingNavbarView t-if="discussView.discuss.mobileMessagingNavbarView"
            className="'o_DiscussView_mobileNavbar w-100'"
            record="discussView.discuss.mobileMessagingNavbarView"
        />
    </t>

</templates>
