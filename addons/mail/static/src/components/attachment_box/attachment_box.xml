<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.AttachmentBox" owl="1">
        <t t-if="attachmentBoxView">
            <div class="position-relative" t-attf-class="{{ className() }}" t-ref="root">
                <div class="d-flex align-items-center" t-attf-class="{{ className('title') }}">
                    <hr class="flex-grow-1" t-attf-class="{{ className('dashedLine') }}"/>
                    <span class="p-3 font-weight-bold" t-attf-class="{{ className('titleText') }}">
                        Attachments
                    </span>
                    <hr class="flex-grow-1" t-attf-class="{{ className('dashedLine') }}"/>
                </div>
                <div class="d-flex flex-column" t-attf-class="{{ className('content') }}">
                    <t t-if="isDropZoneVisible.value">
                        <DropZone
                            className="className('dropZone')"
                            onDropzoneFilesDropped="_onDropZoneFilesDropped"
                        />
                    </t>
                    <t t-if="attachmentBoxView.attachmentList">
                        <AttachmentList
                            className="className('attachmentList')"
                            localId="attachmentBoxView.attachmentList.localId"
                        />
                    </t>
                    <button class="btn btn-link" t-attf-class="{{ className('buttonAdd') }}" type="button" t-on-click="attachmentBoxView.onClickAddAttachment">
                        <i class="fa fa-plus-square"/>
                        Add attachments
                    </button>
                </div>
            </div>
        </t>
    </t>

</templates>
