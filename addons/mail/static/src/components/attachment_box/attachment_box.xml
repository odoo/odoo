<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.AttachmentBoxView" owl="1">
        <t t-if="attachmentBoxView">
            <div class="o_AttachmentBoxView position-relative" t-attf-class="{{ className }}" t-ref="root">
                <div class="o_AttachmentBoxView_title d-flex align-items-center">
                    <hr class="o_AttachmentBoxView_dashedLine flex-grow-1"/>
                    <span class="o_AttachmentBoxView_titleText p-3 fw-bold">
                        Files
                    </span>
                    <hr class="o_AttachmentBoxView_dashedLine flex-grow-1"/>
                </div>
                <div class="o_AttachmentBoxView_content d-flex flex-column">
                    <t t-if="attachmentBoxView.attachmentListView">
                        <AttachmentListView
                            className="'o_attachmentBoxView_attachmentListView'"
                            record="attachmentBoxView.attachmentListView"
                        />
                    </t>
                    <button class="o_AttachmentBoxView_buttonAdd btn btn-link" type="button" t-on-click="attachmentBoxView.onClickAddAttachment" t-att-disabled="!attachmentBoxView.chatter.hasWriteAccess">
                        <i class="fa fa-plus-square"/>
                        Attach files
                    </button>
                </div>
            </div>
        </t>
    </t>

</templates>
