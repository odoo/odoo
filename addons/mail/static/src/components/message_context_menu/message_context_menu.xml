<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.MessageContextMenu" owl="1">
        <div class="o_MessageContextMenu d-flex align-items-center justify-content-center w-100 h-100 " t-attf-class="{{ className }}" t-ref="root">
            <div class="o_MessageContextContainer d-flex bg-100 ">
                <div class="text-center w-25 m-2 overflow-auto">
                    <t t-foreach="messageContextMenu.messageContextReactionItems" t-as="messageReactionGroupItem" t-key="messageReactionGroupItem.localId">
                        <MessageReactionGroupItem record="messageReactionGroupItem" />
                    </t>
                </div>
                <div class="w-100 overflow-auto">
                    <t t-foreach="messageContextMenu.messageContextReactionPartners" t-as="messageContextReactionPartner" t-if="messageContextReactionPartner.messageReactionGroup === messageContextMenu.messageContextState" t-key="messageContextReactionPartner.localId">
                        <MessageReactionGroupPartner record="messageContextReactionPartner" />
                    </t>
                </div>
            </div>
        </div>
    </t>

</templates>