<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="mail.DiscussSidebarCategory" owl="1">
        <div class="o_DiscussSidebarCategory" t-att-data-category-local-id="category.localId" t-att-data-category-type="category.type">
            <div class="o_DiscussSidebarCategory_header">
                <div class="o_DiscussSidebarCategory_title o_DiscussSidebarCategory_headerItem" t-on-click="_toggleCategoryOpen">
                    <div class="o_DiscussSidebarCategory_titleIcon fa" t-att-class="category.isOpen ? 'fa-chevron-down' : 'fa-chevron-right'"/>
                    <span class="o_DiscussSidebarCategory_titleText"><t t-esc="category.displayName"/></span>
                </div>
                <div class="o-autogrow o_DiscussSidebarCategory_headerItem"/>
                <div class="o_DiscussSidebarCategory_commands o_DiscussSidebarCategory_headerItem">
                    <t t-if="category.hasViewCommand">
                        <div class="o_DiscussSidebarCategory_command o_DiscussSidebarCategory_commandView fa fa-cog" title="View or join channels" t-on-click="_onClickView" role="img"/>
                    </t>
                    <t t-if="category.hasAddCommand and category.isOpen">
                        <div class="o_DiscussSidebarCategory_command o_DiscussSidebarCategory_commandAdd fa fa-plus" t-on-click="_onClickAdd" t-att-title="category.commandAddTitleText" role="img"/>
                    </t>
                </div>
                <t t-if="!category.isOpen and category.counter > 0">
                    <div class="o_DiscussSidebarCategory_counter o_DiscussSidebarCategory_headerItem badge badge-pill">
                        <t t-esc="category.counter"/>
                    </div>
                </t>
            </div>
            <div class="o_DiscussSidebarCategory_content">
                <t t-if="category.isOpen">
                    <t t-if="category.isAddingItem">
                        <div class="o_DiscussSidebarCategory_newItem">
                            <AutocompleteInput
                                class="o_DiscussSidebarCategory_itemNewInput"
                                customClass="'o_DiscussSidebarCategory_newChannelAutocompleteSuggestions'"
                                isFocusOnMount="true"
                                isHtml="true"
                                placeholder="category.newItemPlaceholderText"
                                select="_onAddItemAutocompleteSelect"
                                source="_onAddItemAutocompleteSource"
                                t-on-o-hide="_onHideAddingItem"
                            />
                        </div>
                    </t>
                    <t t-foreach="category.categoryItems" t-as="item" t-key="item.localId">
                        <DiscussSidebarCategoryItem
                            class="o_DiscussSidebarCategory_item"
                            categoryItemLocalId="item.localId"
                        />
                    </t>
                </t>
                <t t-if="!category.isOpen">
                    <t t-if="category.activeItem">
                        <DiscussSidebarCategoryItem
                            class="o_DiscussSidebarCategory_item"
                            categoryItemLocalId="category.activeItem.localId"
                        />
                    </t>
                </t>
            </div>
        </div>
    </t>
</templates>
