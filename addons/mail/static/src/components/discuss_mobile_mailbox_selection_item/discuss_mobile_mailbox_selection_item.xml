            t-att-class="{
                'active o-active shadow-none': owner.owner.discuss.activeThread === mailbox.thread,
            }" t-attf-class="{{ className }}" t-on-click="onClick" t-att-data-mailbox-local-id="mailbox.localId" type="button" t-esc="mailbox.name" t-ref="root"
        />
    </t>

</templates>
