<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.RtcLayoutMenu" owl="1">
        <t t-if="layoutMenu">
            <div class="o_RtcLayoutMenu d-flex flex-column p-1" t-attf-class="{{ className }}" t-ref="root">
                <t t-if="layoutMenu.callViewer.threadView.thread.videoCount > 0">
                    <div class="btn btn-light p-0 rounded font-weight-normal">
                        <label class="o_RtcLayoutMenu_radio d-flex align-items-center justify-content-between m-0 rounded fs-4 o_cursor_pointer">
                            <div class="o_RtcLayoutMenu_radioInputContainer">
                                <input class="o_RtcLayoutMenu_radioInput m-3" type="radio" name="filter" value="all" t-on-click="layoutMenu.onClickFilter" t-att-checked="!layoutMenu.callViewer.filterVideoGrid"/>
                                <span class="o_RtcLayoutMenu_inputText text-truncate">Show All</span>
                            </div>
                        </label>
                    </div>
                    <div class="btn btn-light p-0 rounded font-weight-normal">
                        <label class="o_RtcLayoutMenu_radio d-flex align-items-center justify-content-between m-0 rounded fs-4 o_cursor_pointer">
                            <div class="o_RtcLayoutMenu_radioInputContainer">
                                <input class="o_RtcLayoutMenu_radioInput m-3" type="radio" name="filter" value="video" t-on-click="layoutMenu.onClickFilter" t-att-checked="layoutMenu.callViewer.filterVideoGrid"/>
                                <span class="o_RtcLayoutMenu_inputText text-truncate">Show only video</span>
                            </div>
                        </label>
                    </div>
                    <hr class="o_RtcLayoutMenu_separator w-100 bg-300"/>
                </t>
                <div class="btn btn-light p-0 rounded font-weight-normal">
                    <label class="o_RtcLayoutMenu_radio d-flex align-items-center justify-content-between m-0 rounded fs-4 o_cursor_pointer">
                        <div class="o_RtcLayoutMenu_radioInputContainer">
                            <input class="o_RtcLayoutMenu_radioInput m-3" type="radio" name="layout" value="tiled" t-on-click="layoutMenu.onClickLayout" t-att-checked="messaging.userSetting.rtcLayout === 'tiled'"/>
                            <span class="o_RtcLayoutMenu_inputText text-truncate">Tiled</span>
                        </div>
                        <span class="o_RtcLayoutMenu_radioIcon me-1">
                            <t t-call="mail.RtcLayoutMenu_gridSvg"/>
                        </span>
                    </label>
                </div>
                <div class="btn btn-light p-0 rounded font-weight-normal">
                    <label class="o_RtcLayoutMenu_radio d-flex align-items-center justify-content-between m-0 rounded fs-4 o_cursor_pointer">
                        <div class="o_RtcLayoutMenu_radioInputContainer">
                            <input class="o_RtcLayoutMenu_radioInput m-3" type="radio" name="layout" value="spotlight" t-on-click="layoutMenu.onClickLayout" t-att-checked="messaging.userSetting.rtcLayout === 'spotlight'"/>
                            <span class="o_RtcLayoutMenu_inputText text-truncate">Spotlight</span>
                        </div>
                        <span class="o_RtcLayoutMenu_radioIcon me-1">
                            <t t-call="mail.RtcLayoutMenu_spotlightSvg"/>
                        </span>
                    </label>
                </div>
                <div class="btn btn-light p-0 rounded font-weight-normal">
                    <label class="o_RtcLayoutMenu_radio d-flex align-items-center justify-content-between m-0 rounded fs-4 o_cursor_pointer">
                        <div class="o_RtcLayoutMenu_radioInputContainer">
                            <input class="o_RtcLayoutMenu_radioInput m-3" type="radio" name="layout" value="sidebar" t-on-click="layoutMenu.onClickLayout" t-att-checked="messaging.userSetting.rtcLayout === 'sidebar'"/>
                            <span class="o_RtcLayoutMenu_inputText text-truncate">Sidebar</span>
                        </div>
                        <span class="o_RtcLayoutMenu_radioIcon me-1">
                            <t t-call="mail.RtcLayoutMenu_sidebarSvg"/>
                        </span>
                    </label>
                </div>
            </div>
        </t>
    </t>

