<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.CallInviteRequestPopupView" owl="1">
        <t t-if="callInviteRequestPopupView">
            <div class="o_CallInviteRequestPopupView d-flex flex-column m-2 p-5 border border-dark rounded-1 bg-900" t-attf-class="{{ className }}" t-ref="root">
                <t t-if="callInviteRequestPopupView.thread.rtcInvitingSession">
                    <div class="o_CallInviteRequestPopupView_partnerInfo d-flex flex-column justify-content-around align-items-center text-nowrap">
                        <img class="o_CallInviteRequestPopupView_partnerInfoImage mb-2 rounded-circle cursor-pointer"
                            t-att-src="callInviteRequestPopupView.thread.rtcInvitingSession.channelMember.avatarUrl"
                            t-on-click="callInviteRequestPopupView.onClickAvatar"
                            alt="Avatar"/>
                        <span class="o_CallInviteRequestPopupView_partnerInfoName w-100 fw-bolder text-truncate text-center overflow-hidden" t-esc="callInviteRequestPopupView.thread.rtcInvitingSession.channelMember.persona.name"/>
                        <span class="o_CallInviteRequestPopupView_partnerInfoText fst-italic opacity-75">Incoming Call...</span>
                    </div>
                </t>
                <div class="o_CallInviteRequestPopupView_buttonList d-flex justify-content-around align-items-center w-100 mt-4">
                    <button class="o_CallInviteRequestPopupView_buttonListButton o_CallInviteRequestPopupView_buttonListRefuse p-2 rounded-circle border-0 bg-danger"
                        aria-label="Refuse"
                        title="Refuse"
                        t-on-click="callInviteRequestPopupView.onClickRefuse">
                        <i class="o_CallInviteRequestPopupView_buttonListButtonIcon fa fa-lg fa-times m-3"/>
                    </button>
                    <button class="o_CallInviteRequestPopupView_buttonListButton o_CallInviteRequestPopupView_buttonListAccept p-2 rounded-circle border-0 bg-success"
                        aria-label="Accept"
                        title="Accept"
                        t-on-click="callInviteRequestPopupView.onClickAccept">
                        <i class="o_CallInviteRequestPopupView_buttonListButtonIcon fa fa-lg fa-phone m-3"/>
                    </button>
                </div>
            </div>
        </t>
    </t>

</templates>
