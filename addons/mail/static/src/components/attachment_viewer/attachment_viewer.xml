<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.AttachmentViewer" owl="1">
        <t t-if="attachmentViewer">
            <div class="flex-column align-items-center d-flex w-100 h-100" t-attf-class="{{ className() }}" t-on-click="attachmentViewer.onClick" t-on-keydown="_onKeydown" tabindex="0" t-ref="root">
                <div class="d-flex w-100 bg-black-75 text-400" t-attf-class="{{ className('header') }}" t-on-click="attachmentViewer.onClickHeader">
                    <t t-if="attachmentViewer.attachment.isViewable">
                        <div class="d-flex align-items-center ms-4 me-2" t-attf-class="{{ className('headerItem', 'icon') }}">
                            <t t-if="attachmentViewer.attachment.isImage">
                                <i class="fa fa-picture-o" role="img" title="Image"/>
                            </t>
                            <t t-if="attachmentViewer.attachment.isPdf">
                                <i class="fa fa-file-text" role="img" title="PDF file"/>
                            </t>
                            <t t-if="attachmentViewer.attachment.isText">
                                <i class="fa fa-file-text" role="img" title="Text file"/>
                            </t>
                            <t t-if="attachmentViewer.attachment.isVideo">
                                <i class="fa fa-video-camera" role="img" title="Video"/>
                            </t>
                        </div>
                    </t>
                    <div class="d-flex align-items-center mx-2" t-attf-class="{{ className('headerItem', 'name') }}">
                        <span class="text-truncate" t-attf-class="{{ className('nameText') }}" t-esc="attachmentViewer.attachment.displayName"/>
                    </div>
                    <div class="o-autogrow"/>
                    <div class="d-flex align-items-center px-3 o_cursor_pointer" t-attf-class="{{ className('buttonDownload', 'headerItem', 'headerItemButton') }}" t-on-click="attachmentViewer.onClickDownload" role="button" title="Download">
                        <i class="fa fa-download fa-fw" t-attf-class="{{ className('headerItemButtonIcon') }}" t-att-class="{ 'o-hasLabel me-2': messaging.device.sizeClass > env.device.SIZES.MD }" role="img"/>
                        <t t-if="messaging.device.sizeClass > env.device.SIZES.MD">
                            <span>Download</span>
                        </t>
                    </div>
                    <div class="d-flex align-items-center mb-0 px-3 h4 text-reset o_cursor_pointer" t-attf-class="{{ className('headerItem', 'headerItemButton', 'headerItemButtonClose') }}" t-on-click="attachmentViewer.onClickClose" role="button" title="Close (Esc)" aria-label="Close">
                        <i class="fa fa-fw fa-times" role="img"/>
                    </div>
                </div>
                <div class="position-absolute top-0 bottom-0 start-0 end-0 align-items-center justify-content-center d-flex" t-attf-class="{{ className('main') }}" t-att-class="{ 'o_with_img overflow-hidden': attachmentViewer.attachment.isImage }" t-on-mousemove="_onMousemoveView">
                    <t t-if="attachmentViewer.attachment.isImage">
                        <div class="position-absolute align-items-center justify-content-center d-flex w-100 h-100" t-attf-class="{{ className('zoomer') }}" t-ref="zoomer">
                            <t t-if="attachmentViewer.isImageLoading">
                                <div class="position-absolute" t-attf-class="{{ className('loading') }}">
                                    <i class="fa fa-3x fa-circle-o-notch fa-fw fa-spin text-white" role="img" title="Loading"/>
                                </div>
                            </t>
                            <img class="mw-100 mh-100 bg-black" t-attf-class="{{ className('view', 'viewImage') }}" t-on-click="attachmentViewer.onClickImage" t-on-mousedown="_onMousedownImage" t-on-wheel="_onWheelImage" t-on-load="attachmentViewer.onLoadImage" t-att-src="attachmentViewer.imageUrl" t-att-style="attachmentViewer.imageStyle" draggable="false" alt="Viewer" t-key="'image_' + attachmentViewer.attachment.id" t-ref="image_{{ attachmentViewer.attachment.id }}"/>
                        </div>
                    </t>
                    <t t-if="attachmentViewer.attachment.isPdf">
                        <iframe class="w-75 h-100 bg-black border-0" t-attf-class="{{ className('view', 'viewIframe', 'viewPdf') }}" t-ref="iframeViewerPdf" t-att-class="{ 'o-isMobile w-100': messaging.device.isMobile }" t-att-src="attachmentViewer.attachment.defaultSource"/>
                    </t>
                    <t t-if="attachmentViewer.attachment.isText">
                        <iframe class="o_text w-75 h-100 bg-white border-0" t-attf-class="{{ className('view', 'viewIframe') }}" t-att-src="attachmentViewer.attachment.defaultSource"/>
                    </t>
                    <t t-if="attachmentViewer.attachment.isUrlYoutube">
                        <iframe allow="autoplay; encrypted-media" class="w-75 h-100 bg-black border-0" t-attf-class="{{ className('view', 'viewIframe', 'youtube') }}" t-att-src="attachmentViewer.attachment.defaultSource" height="315" width="560"/>
                    </t>
                    <t t-if="attachmentViewer.attachment.isVideo">
                        <video class="w-75 h-75 bg-black" t-attf-class="{{ className('view', 'viewVideo') }}" t-att-class="{ 'o-isMobile w-100 h-100': messaging.device.isMobile }" t-on-click="attachmentViewer.onClickVideo" controls="controls">
                            <source t-att-data-type="attachmentViewer.attachment.mimetype" t-att-src="attachmentViewer.attachment.defaultSource"/>
                        </video>
                    </t>
                </div>
                <t t-if="attachmentViewer.attachment.isImage">
                    <div class="position-absolute bottom-0 d-flex" t-attf-class="{{ className('toolbar') }}" role="toolbar">
                        <div class="btn btn-dark p-3 rounded-0" t-attf-class="{{ className('toolbarButton') }}" t-on-click="_onClickZoomIn" title="Zoom In (+)" role="button">
                            <i class="fa fa-fw fa-plus" role="img"/>
                        </div>
                        <div class="btn btn-dark p-3 rounded-0" t-attf-class="{{ className('toolbarButton') }}" t-att-class="{ o_disabled: attachmentViewer.scale === 1 }" t-on-click="_onClickZoomReset" role="button" title="Reset Zoom (0)">
                            <i class="fa fa-fw fa-search" role="img"/>
                        </div>
                        <div class="btn btn-dark p-3 rounded-0" t-attf-class="{{ className('toolbarButton') }}" t-att-class="{ o_disabled: attachmentViewer.scale === MIN_SCALE }" t-on-click="_onClickZoomOut" title="Zoom Out (-)" role="button">
                            <i class="fa fa-fw fa-minus" role="img"/>
                        </div>
                        <div class="btn btn-dark p-3 rounded-0" t-attf-class="{{ className('toolbarButton') }}" t-on-click="attachmentViewer.onClickRotate" title="Rotate (r)" role="button">
                            <i class="fa fa-fw fa-repeat" role="img"/>
                        </div>
                        <div class="btn btn-dark p-3 rounded-0" t-attf-class="{{ className('toolbarButton') }}" t-on-click="attachmentViewer.onClickPrint" title="Print" role="button">
                            <i class="fa fa-fw fa-print" role="img"/>
                        </div>
                        <div class="btn btn-dark p-3 rounded-0 o_cursor_pointer" t-attf-class="{{ className('buttonDownload', 'toolbarButton') }}" t-on-click="attachmentViewer.onClickDownload" title="Download" role="button">
                            <i class="fa fa-download fa-fw" role="img"/>
                        </div>
                    </div>
                </t>
                <t t-if="attachmentViewer.attachments.length > 1">
                    <div class="btn btn-dark position-absolute top-0 bottom-0 start-0 align-items-center justify-content-center d-flex my-auto ms-3 rounded-circle" t-attf-class="{{ className('buttonNavigation', 'buttonNavigationPrevious', 'buttonNavigationPreviousIcon') }}" t-on-click="attachmentViewer.onClickPrevious" title="Previous (Left-Arrow)" role="button">
                        <span class="fa fa-chevron-left" role="img"/>
                    </div>
                    <div class="btn btn-dark position-absolute top-0 bottom-0 end-0 align-items-center justify-content-center d-flex my-auto me-3 rounded-circle" t-attf-class="{{ className('buttonNavigation', 'buttonNavigationNext', 'buttonNavigationNextIcon') }}" t-on-click="attachmentViewer.onClickNext" title="Next (Right-Arrow)" role="button">
                        <span class="fa fa-chevron-right" role="img"/>
                    </div>
                </t>
            </div>
        </t>
    </t>

</templates>
