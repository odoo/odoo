<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.AttachmentDeleteConfirmDialog" owl="1">
        <div>
            <t t-if="attachmentDeleteConfirmDialogView">
                <Dialog contentClass="'o_AttachmentDeleteConfirmDialog'" title="attachmentDeleteConfirmDialogView.title" size="'medium'" onClosed="props.onClosed" t-ref="root">
                    <p class="o_AttachmentDeleteConfirmDialog_mainText" t-esc="attachmentDeleteConfirmDialogView.body"/>
                    <t t-set-slot="buttons">
                        <button class="o_AttachmentDeleteConfirmDialog_confirmButton btn btn-primary" t-on-click="attachmentDeleteConfirmDialogView.onClickOk">Ok</button>
                        <button class="o_AttachmentDeleteConfirmDialog_cancelButton btn btn-secondary" t-on-click="attachmentDeleteConfirmDialogView.onClickCancel">Cancel</button>
                    </t>
                </Dialog>
            </t>
        </div>
    </t>
</templates>
