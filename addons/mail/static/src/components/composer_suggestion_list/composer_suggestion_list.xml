<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ComposerSuggestionList" owl="1">
        <t t-if="composerView">
            <div class="o_ComposerSuggestionList" t-att-class="{ 'o-lowPosition': props.isBelow }" t-attf-class="{{ className }}" t-ref="root">
                <div class="o_ComposerSuggestionList_drop" t-att-class="{ 'dropdown': props.isBelow, 'dropup': !props.isBelow }">
                    <div class="o_ComposerSuggestionList_list dropdown-menu show">
                        <t t-foreach="composerView.mainSuggestions" t-as="suggestion" t-key="suggestion.localId">
                            <ComposerSuggestion
                                composerViewLocalId="composerView.localId"
                                isActive="suggestion.record === composerView.activeSuggestedRecord"
                                modelName="composerView.suggestionModelName"
                                recordLocalId="suggestion.record.localId"
                            />
                        </t>
                        <t t-if="composerView.mainSuggestions.length > 0 and composerView.extraSuggestions.length > 0">
                            <div role="separator" class="dropdown-divider"/>
                        </t>
                        <t t-foreach="composerView.extraSuggestions" t-as="suggestion" t-key="suggestion.localId">
                            <ComposerSuggestion
                                composerViewLocalId="composerView.localId"
                                isActive="suggestion.record === composerView.activeSuggestedRecord"
                                modelName="composerView.suggestionModelName"
                                recordLocalId="suggestion.record.localId"
                            />
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </t>

</templates>
