<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.DiscussSidebarView" owl="1">
        <t t-if="discussSidebarView">
            <div name="root" class="o_DiscussSidebarView d-flex flex-column overflow-auto" t-attf-class="{{ className }}" t-ref="root">
                <div class="d-flex justify-content-center">
                    <button class="o_DiscussSidebarView_startAMeetingButton btn btn-primary rounded" title="Start a meeting" t-on-click="discussSidebarView.owner.onClickStartAMeetingButton">
                        Start a meeting
                    </button>
                </div>
                <hr class="o_DiscussSidebarView_separator w-100 border-top"/>
                <div class="o_DiscussSidebarView_category o_DiscussSidebarView_categoryMailbox d-flex flex-column flex-grow-0">
                    <DiscussSidebarMailboxView record="discussSidebarView.owner.inboxView"/>
                    <DiscussSidebarMailboxView record="discussSidebarView.owner.starredView"/>
                    <DiscussSidebarMailboxView record="discussSidebarView.owner.historyView"/>
                </div>
                <hr class="o_DiscussSidebarView_separator w-100 border-top"/>
                <t t-if="messaging.models['Thread'].all(thread => thread.isPinned and thread.model === 'mail.channel').length > 19">
                    <input class="o_DiscussSidebarView_quickSearch form-control mx-4 mb-2 rounded-3 w-auto" t-on-input="discussSidebarView.owner.onInputQuickSearch" placeholder="Quick search..." t-ref="quickSearchInput" t-esc="discussSidebarView.owner.discuss.sidebarQuickSearchValue"/>
                </t>
                <DiscussSidebarCategory
                    t-if="discussSidebarView.owner.discuss.categoryChannel"
                    className="'o_DiscussSidebarView_category o_DiscussSidebarView_categoryChannel'"
                    record="discussSidebarView.owner.discuss.categoryChannel"
                />
                <t name="beforeCategoryChat"/>
                <DiscussSidebarCategory
                    t-if="discussSidebarView.owner.discuss.categoryChat"
                    className="'o_DiscussSidebarView_category o_DiscussSidebarView_categoryChat'"
                    record="discussSidebarView.owner.discuss.categoryChat"
                />
            </div>
        </t>
    </t>

</templates>
