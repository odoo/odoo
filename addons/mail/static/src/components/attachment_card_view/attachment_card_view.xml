<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.AttachmentCardView" owl="1">
        <t t-if="attachmentCardView">
            <div t-attf-class="{{ className }}" t-ref="root">
                <div class="o_AttachmentCardView o-has-card-details d-flex rounded bg-300"
                    t-att-class="{
                        'o-isUploading': attachmentCardView.attachment.isUploading,
                        'o-viewable': attachmentCardView.attachment.isViewable,
                    }" t-att-title="attachmentCardView.attachment.displayName ? attachmentCardView.attachment.displayName : undefined" role="menu" t-att-aria-label="attachmentCardView.attachment.displayName" t-att-data-id="attachmentCardView.attachment.localId"
                >
                    <!-- Image style-->
                    <!-- o_image from mimetype.scss -->
                    <div class="o_AttachmentCardView_image o_image flex-shrink-0 m-1" t-on-click="attachmentCardView.onClickImage" t-att-class="{'o-attachment-viewable opacity-75-hover': attachmentCardView.attachment.isViewable,}" role="menuitem" aria-label="Preview" t-att-tabindex="attachmentCardView.attachment.isViewable ? 0 : -1" t-att-aria-disabled="!attachmentCardView.attachment.isViewable" t-att-data-mimetype="attachmentCardView.attachment.mimetype">
                    </div>
                    <!-- Attachment details -->
                    <div class="o_AttachmentCardView_details d-flex justify-content-center flex-column px-1">
                        <t t-if="attachmentCardView.attachment.displayName">
                            <div class="o_AttachmentCardView_filename text-truncate">
                                <t t-esc="attachmentCardView.attachment.displayName"/>
                            </div>
                        </t>
                        <t t-if="attachmentCardView.attachment.extension">
                            <small class="o_AttachmentCardView_extension text-uppercase">
                                <t t-esc="attachmentCardView.attachment.extension"/>
                            </small>
                        </t>
                    </div>
                    <!-- Attachment aside -->
                    <div class="o_AttachmentCardView_aside position-relative rounded-end overflow-hidden" t-att-class="{ 'o-hasMultipleActions d-flex flex-column': attachmentCardView.hasMultipleActions }">
                        <!-- Uploading icon -->
                        <t t-if="attachmentCardView.attachment.isUploading and attachmentCardView.attachmentListView.composerViewOwner">
                            <div class="o_AttachmentCardView_asideItem o_AttachmentCardView_asideItemUploading d-flex justify-content-center align-items-center w-100 h-100" title="Uploading">
                                <i class="fa fa-spin fa-spinner"/>
                            </div>
                        </t>
                        <!-- Uploaded icon -->
                        <t t-if="!attachmentCardView.attachment.isUploading and attachmentCardView.attachmentListView.composerViewOwner">
                            <div class="o_AttachmentCardView_asideItem o_AttachmentCardView_asideItemUploaded d-flex justify-content-center align-items-center w-100 h-100 text-primary" title="Uploaded">
                                <i class="fa fa-check"/>
                            </div>
                        </t>
                        <!-- Remove button -->
                        <t t-if="attachmentCardView.attachment.isDeletable">
                            <button class="o_AttachmentCardView_asideItem o_AttachmentCardView_asideItemUnlink btn top-0 justify-content-center align-items-center d-flex w-100 h-100 rounded-0" t-attf-class="{{ attachmentCardView.attachmentListView.composerViewOwner ? 'o-pretty position-absolute btn-primary transition-base' : 'bg-300' }}" t-on-click="attachmentCardView.onClickUnlink" title="Remove">
                                <i class="fa fa-trash" role="img" aria-label="Remove"/>
                            </button>
                        </t>
                        <!-- Download button -->
                        <t t-if="!attachmentCardView.attachmentListView.composerViewOwner and !attachmentCardView.attachment.isUploading">
                            <button class="o_AttachmentCardView_asideItem o_AttachmentCardView_asideItemDownload btn d-flex justify-content-center align-items-center w-100 h-100 rounded-0 bg-300" t-on-click="attachmentCardView.attachment.onClickDownload" title="Download">
                                <i class="fa fa-download" role="img" aria-label="Download"/>
                            </button>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </t>
</templates>
