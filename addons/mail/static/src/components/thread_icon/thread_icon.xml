<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ThreadIcon" owl="1">
        <div class="o_ThreadIcon">
            <t t-if="thread" name="rootCondition">
                <t t-if="thread.__mfield_channel_type(mself) === 'channel'">
                    <t t-if="thread.__mfield_public(mself) === 'private'">
                        <!-- AKU TODO: channel of type 'groups' should maybe also have lock icon -->
                        <div class="o_ThreadIcon_channelPrivate fa fa-lock" title="Private channel"/>
                    </t>
                    <t t-else="">
                        <div class="o_ThreadIcon_channelPublic fa fa-hashtag" title="Public channel"/>
                    </t>
                </t>
                <t t-elif="thread.__mfield_channel_type(mself) === 'chat' and thread.__mfield_correspondent(mself)">
                    <t t-if="thread.__mfield_orderedOtherTypingMembers(mself).length > 0">
                        <ThreadTypingIcon
                            class="o_ThreadIcon_typing"
                            animation="'pulse'"
                            title="thread.__mfield_typingStatusText(mself)"
                        />
                    </t>
                    <t t-elif="thread.__mfield_correspondent(mself).__mfield_im_status(mself) === 'online'">
                        <div class="o_ThreadIcon_online fa fa-circle" title="Online"/>
                    </t>
                    <t t-elif="thread.__mfield_correspondent(mself).__mfield_im_status(mself) === 'offline'">
                        <div class="o_ThreadIcon_offline fa fa-circle-o" title="Offline"/>
                    </t>
                    <t t-elif="thread.__mfield_correspondent(mself).__mfield_im_status(mself) === 'away'">
                        <div class="o_ThreadIcon_away fa fa-circle" title="Away"/>
                    </t>
                    <t t-elif="thread.__mfield_correspondent(mself) === env.messaging.__mfield_partnerRoot(mself)">
                        <div class="o_ThreadIcon_online fa fa-heart" title="Bot"/>
                    </t>
                    <t t-else="" name="noImStatusCondition">
                        <div class="o_ThreadIcon_noImStatus fa fa-question-circle" title="No IM status available"/>
                    </t>
                </t>
                <t t-elif="thread.__mfield_model(mself) === 'mail.box'">
                    <t t-if="thread === env.messaging.__mfield_inbox(mself)">
                        <div class="o_ThreadIcon_mailboxInbox fa fa-inbox"/>
                    </t>
                    <t t-elif="thread === env.messaging.__mfield_starred(mself)">
                        <div class="o_ThreadIcon_mailboxStarred fa fa-star-o"/>
                    </t>
                    <t t-elif="thread === env.messaging.__mfield_history(mself)">
                        <div class="o_ThreadIcon_mailboxHistory fa fa-history"/>
                    </t>
                    <t t-elif="thread === env.messaging.__mfield_moderation(mself)">
                        <div class="o_ThreadIcon_mailboxModeration fa fa-envelope"/>
                    </t>
                </t>
            </t>
        </div>
    </t>

</templates>
