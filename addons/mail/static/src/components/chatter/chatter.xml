<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.Chatter" owl="1">
        <t t-if="chatter">
            <div class="position-relative flex-grow-1 flex-column d-flex w-100 bg-white" t-attf-class="{{ className() }}" t-ref="root">
                <div t-attf-class="{{ className('fixedPanel') }}">
                    <ChatterTopbar
                        className="className('topbar')"
                        chatterLocalId="chatter.localId"
                    />
                    <t t-if="chatter.composerView">
                        <Composer
                            className="className('composer') + ' border-bottom'"
                            classNameObj="{ 'o-bordered border-left border-right': chatter.hasExternalBorder }"
                            localId="chatter.composerView.localId"
                            hasMentionSuggestionsBelowPosition="true"
                            isExpandable="true"
                        />
                    </t>
                </div>
                <div class="overflow-auto" t-attf-class="{{ className('scrollPanel') }}" t-on-scroll="chatter.onScrollScrollPanel" t-ref="scrollPanel">
                    <t t-if="chatter.attachmentBoxView">
                        <AttachmentBox
                            className="className('attachmentBox')"
                            localId="chatter.attachmentBoxView.localId"
                        />
                    </t>
                    <t t-if="chatter.activityBoxView">
                        <ActivityBox
                            className="className('activityBox')"
                            localId="chatter.activityBoxView.localId"
                        />
                    </t>
                    <t t-if="chatter.threadView">
                        <ThreadView
                            className="className('thread')"
                            hasScrollAdjust="chatter.hasMessageListScrollAdjust"
                            localId="chatter.threadView.localId"
                        />
                    </t>
                </div>
            </div>
        </t>
    </t>

</templates>
