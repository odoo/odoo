<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.Chatter" owl="1">
        <div class="o_Chatter">
            <t t-if="chatter">
                <ChatterTopbar
                    class="o_Chatter_topbar"
                    chatterLocalId="chatter.localId"
                />
                <t t-if="chatter.__mfield_threadView(mself) and chatter.__mfield_isComposerVisible(mself)">
                    <Composer
                        class="o_Chatter_composer"
                        t-att-class="{ 'o-bordered': chatter.__mfield_hasExternalBorder(mself) }"
                        composerLocalId="chatter.__mfield_thread(mself).__mfield_composer(mself).localId"
                        hasFollowers="true"
                        hasMentionSuggestionsBelowPosition="true"
                        isCompact="false"
                        isExpandable="true"
                        textInputSendShortcuts="['ctrl-enter', 'meta-enter']"
                        t-on-o-message-posted="_onComposerMessagePosted"
                        t-ref="composer"
                    />
                </t>
                <t t-if="chatter.__mfield_isAttachmentBoxVisible(mself)">
                    <AttachmentBox
                        class="o_Chatter_attachmentBox"
                        threadLocalId="chatter.__mfield_thread(mself).localId"
                    />
                </t>
                <t t-if="chatter.__mfield_thread(mself) and chatter.__mfield_hasActivities(mself) and chatter.__mfield_activities(mself).length > 0">
                    <ActivityBox
                        class="o_Chatter_activityBox"
                        chatterLocalId="chatter.localId"
                    />
                </t>
                <t t-if="chatter.__mfield_threadView(mself)">
                    <ThreadView
                        class="o_Chatter_thread"
                        hasComposer="false"
                        hasScrollAdjust="chatter.__mfield_hasMessageListScrollAdjust(mself)"
                        order="'desc'"
                        threadViewLocalId="chatter.__mfield_threadView(mself).localId"
                        t-ref="thread"
                    />
                </t>
            </t>
        </div>
    </t>

</templates>
