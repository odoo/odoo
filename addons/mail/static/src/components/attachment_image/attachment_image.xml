<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.AttachmentImage" owl="1">
        <div t-attf-class="{{ className }}" t-ref="root">
            <t t-if="attachmentImage">
                <div class="o_AttachmentImage d-flex o-details-overlay position-relative m-1 flex-shrink-0"
                    t-att-class="{
                        'o-isUploading': attachmentImage.attachment.isUploading,
                    }"
                    t-att-title="attachmentImage.attachment.displayName ? attachmentImage.attachment.displayName : undefined"
                    t-att-data-id="attachmentImage.attachment.localId"
                    t-on-click="attachmentImage.onClickImage"
                    t-att-data-mimetype="attachmentImage.attachment.mimetype"
                >
                    <t t-if="!attachmentImage.attachment.isUploading">
                        <img class="img img-fluid my-0 mx-auto" t-att-src="attachmentImage.imageUrl" t-att-alt="attachmentImage.attachment.name" t-attf-style="max-width: min(100%, {{ attachmentImage.width }}px); max-height: {{ attachmentImage.height }}px;"/>
                    </t>
                    <t t-if="attachmentImage.attachment.isUploading">
                        <div class="o_AttachmentImageUploading d-flex align-items-center justify-content-center" title="Uploading">
                            <i class="fa fa-spin fa-spinner"/>
                        </div>
                    </t>
                    <div class="o_AttachmentImage_imageOverlay d-flex flex-row justify-content-end p-2 text-white opacity-0 opacity-100-hover">
                        <div class="o_AttachmentImage_actions d-flex flex-column justify-content-between">
                            <t t-if="attachmentImage.attachment.isEditable">
                                <div class="o_AttachmentImage_action o_AttachmentImage_actionUnlink btn btn-dark opacity-75 opacity-100-hover"
                                     t-att-class="{'o-pretty': attachmentImage.attachmentList.composerView}" t-on-click="attachmentImage.onClickUnlink" title="Remove"
                                >
                                    <i class="fa fa-trash"/>
                                </div>
                            </t>
                        </div>
                    </div>
                    <t t-if="attachmentImage.hasDeleteConfirmDialog">
                        <AttachmentDeleteConfirm
                            attachmentLocalId="attachmentImage.attachment.localId"
                            onAttachmentRemoved="props.onAttachmentRemoved"
                            onClosed="attachmentImage.onDeleteConfirmDialogClosed"
                        />
                    </t>
                </div>
            </t>
        </div>
    </t>
</templates>
