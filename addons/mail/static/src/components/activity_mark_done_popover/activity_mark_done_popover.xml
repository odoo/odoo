<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ActivityMarkDonePopover" owl="1">
        <t t-if="activityMarkDonePopoverView">
            <div t-attf-class="{{ className() }}" t-on-keydown="activityMarkDonePopoverView.onKeydown" t-ref="root">
                <textarea class="form-control mb-2" t-attf-class="{{ className('feedback') }}" rows="3" placeholder="Write Feedback" t-on-blur="activityMarkDonePopoverView.onBlur" t-ref="feedbackTextarea"/>
                <div t-attf-class="{{ className('buttons') }}">
                    <button type="button" class="btn btn-sm btn-primary" t-attf-class="{{ className('doneScheduleNextButton') }}" t-on-click="activityMarkDonePopoverView.onClickDoneAndScheduleNext">
                        Done &amp; Schedule Next
                    </button>
                    <t t-if="activityMarkDonePopoverView.activityViewOwner.activity.chaining_type === 'suggest'">
                        <button type="button" class="btn btn-sm btn-primary mx-2" t-attf-class="{{ className('doneButton') }}" t-on-click="activityMarkDonePopoverView.onClickDone">
                            Done
                        </button>
                    </t>
                    <button type="button" class="btn btn-sm btn-link" t-attf-class="{{ className('discardButton') }}" t-on-click="activityMarkDonePopoverView.onClickDiscard">
                        Discard
                    </button>
                </div>
            </div>
        </t>
    </t>

</templates>
