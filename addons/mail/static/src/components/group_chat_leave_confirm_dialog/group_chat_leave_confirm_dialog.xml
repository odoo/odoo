<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.GroupChatLeaveConfirmDialog" owl="1">
        <Dialog contentClass="'o_GroupChatLeaveConfirmDialog'" title="getTitle()" size="'medium'" t-ref="dialog">
            <p class="o_GroupChatLeaveConfirmDialog_mainText" t-esc="getBody()"/>
            <t t-set-slot="buttons">
                <button class="o_GroupChatLeaveConfirmDialog_confirmButton btn btn-primary" t-on-click="_onClickOk">Ok</button>
                <button class="o_GroupChatLeaveConfirmDialog_cancelButton btn btn-secondary" t-on-click="_onClickCancel">Cancel</button>
            </t>
        </Dialog>
    </t>
</templates>
