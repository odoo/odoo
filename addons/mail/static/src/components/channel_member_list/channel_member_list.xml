<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ChannelMemberList" owl="1">
        <t t-if="channelMemberListView">
            <div class="o_ChannelMemberList d-flex flex-column overflow-auto bg-light" t-attf-class="{{ className }}" t-on-scroll="channelMemberListView.onScroll" t-ref="root">
                <t t-if="channelMemberListView.channel.channelPartners.length > 0">
                    <h6 class="m-2">Members - <t t-esc="channelMemberListView.channel.memberCount"/></h6>
                    <t t-foreach="channelMemberListView.channel.channelPartners" t-as="channelPartner" t-key="channelPartner.localId">
                        <ChannelMember record="channelPartner"></ChannelMember>
                    </t>
                </t>
            </div>
        </t>
    </t>

</templates>
