<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ChannelMemberListView" owl="1">
            <div class="o_ChannelMemberListView d-flex flex-column overflow-auto bg-light" t-attf-class="{{ className }}" t-ref="root">
                <t t-if="onlineCategoryView">
                    <ChannelMemberListCategoryView record="onlineCategoryView"/>
                </t>
                <t t-if="offlineCategoryView">
                    <ChannelMemberListCategoryView record="offlineCategoryView"/>
                </t>
                <t t-if="channel.unknownMemberCount === 1">
                    <span class="mx-2 mt-2">And 1 other member.</span>
                </t>
                <t t-if="channel.unknownMemberCount > 1">
                    <span class="mx-2 mt-2">And <t t-esc="channel.unknownMemberCount"/> other members.</span>
                </t>
                <t t-if="!channel.areAllMembersLoaded">
                    <div class="mx-2 my-1">
                        <button class="o_ChannelMemberListView_loadMoreButton btn btn-secondary" t-on-click="onClickLoadMoreMembers">Load more</button>
                    </div>
                </t>
            </div>
    </t>

</templates>
