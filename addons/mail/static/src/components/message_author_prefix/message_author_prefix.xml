<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.MessageAuthorPrefix" owl="1">
        <span class="o_MessageAuthorPrefix">
            <t t-if="message">
                <t t-if="message.__mfield_author(mself) and message.__mfield_author(mself) === env.messaging.__mfield_currentPartner(mself)">
                    <i class="o_MessageAuthorPrefixIcon fa fa-mail-reply"/>You:
                </t>
                <t t-elif="thread and thread.__mfield_channel_type(mself) === 'channel'">
                    <t t-esc="message.__mfield_author(mself).__mfield_nameOrDisplayName(mself)"/>:
                </t>
            </t>
        </span>
    </t>

</templates>
