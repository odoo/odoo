<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.MessageReactionGroupPartner" owl="1">
        <div class="o_MessageReactionGroupPartner" t-attf-class="{{ className }}" t-ref="root">
            <div class="d-flex flex-column">
                <t t-foreach="messageReactionGroupPartner.messageReactionGroup.partners" t-as='partner' t-key="partner">
                    <div class="text-center m-3 d-flex">
                        <img class="o_Follower_avatar me-2 rounded-circle" t-att-src="partner.avatarUrl" alt=""/>
                        <t t-esc="partner.nameOrDisplayName" />
                    </div>
                </t>
            </div>
        </div>
    </t>

</templates>