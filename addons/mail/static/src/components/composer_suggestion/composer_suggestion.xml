<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ComposerSuggestion" owl="1">
        <t t-if="composerSuggestion">
            <a class="o_ComposerSuggestion dropdown-item d-flex w-100 py-2 px-4" t-att-class="{ 'active bg-300': composerSuggestion.isActive }" t-attf-class="{{ className }}" href="#" t-att-title="composerSuggestion.title" role="menuitem" t-on-click="composerSuggestion.onClick" t-ref="root">
                <t t-if="composerSuggestion.suggestable.cannedResponse">
                    <strong class="o_ComposerSuggestion_part1 flex-shrink-0 mw-100 pr-2 text-truncate"><t t-esc="composerSuggestion.suggestable.cannedResponse.source"/></strong>
                    <em class="o_ComposerSuggestion_part2 text-600 text-truncate"><t t-esc="composerSuggestion.suggestable.cannedResponse.substitution"/></em>
                </t>
                <t t-if="composerSuggestion.suggestable.thread">
                    <strong class="o_ComposerSuggestion_part1 flex-shrink-0 mw-100 pr-2 text-truncate"><t t-esc="composerSuggestion.suggestable.thread.name"/></strong>
                </t>
                <t t-if="composerSuggestion.suggestable.channelCommand">
                    <strong class="o_ComposerSuggestion_part1 flex-shrink-0 mw-100 pr-2 text-truncate"><t t-esc="composerSuggestion.suggestable.channelCommand.name"/></strong>
                    <em class="o_ComposerSuggestion_part2 text-600 text-truncate"><t t-esc="composerSuggestion.suggestable.channelCommand.help"/></em>
                </t>
                <t t-if="composerSuggestion.suggestable.partner">
                    <PersonaImStatusIcon
                        t-if="composerSuggestion.personaImStatusIconView"
                        className="'o_ComposerSuggestion_personaImStatusIcon flex-shrink-0 mr-1'"
                        hasBackground="false"
                        record="composerSuggestion.personaImStatusIconView"
                    />
                    <strong class="o_ComposerSuggestion_part1 flex-shrink-0 mw-100 pr-2 text-truncate"><t t-esc="composerSuggestion.suggestable.partner.nameOrDisplayName"/></strong>
                    <t t-if="composerSuggestion.suggestable.partner.email">
                        <em class="o_ComposerSuggestion_part2 text-600 text-truncate">(<t t-esc="composerSuggestion.suggestable.partner.email"/>)</em>
                    </t>
                </t>
            </a>
        </t>
    </t>

</templates>
