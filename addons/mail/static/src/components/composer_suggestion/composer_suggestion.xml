<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ComposerSuggestion" owl="1">
        <a class="o_ComposerSuggestion dropdown-item" t-att-class="{ 'active': props.isActive }" href="#" role="menuitem" t-on-click="_onClick" t-on-mouseover="_onMouseOver">
            <t t-if="record">
                <t t-if="isCannedResponse">
                    <span class="o_ComposerSuggestion_part1"><t t-esc="record.__mfield_source(mself)"/></span>
                    <span class="o_ComposerSuggestion_part2"><t t-esc="record.__mfield_substitution(mself)"/></span>
                </t>
                <t t-if="isChannel">
                    <span class="o_ComposerSuggestion_part1"><t t-esc="record.__mfield_name(mself)"/></span>
                </t>
                <t t-if="isCommand">
                    <span class="o_ComposerSuggestion_part1"><t t-esc="record.__mfield_name(mself)"/></span>
                    <span class="o_ComposerSuggestion_part2"><t t-esc="record.__mfield_help(mself)"/></span>
                </t>
                <t t-if="isPartner">
                    <PartnerImStatusIcon
                        hasBackground="false"
                        partnerLocalId="record.localId"
                    />
                    <span class="o_ComposerSuggestion_part1"><t t-esc="record.__mfield_nameOrDisplayName(mself)"/></span>
                    <t t-if="record.__mfield_email(mself)">
                        <span class="o_ComposerSuggestion_part2">(<t t-esc="record.__mfield_email(mself)"/>)</span>
                    </t>
                </t>
            </t>
        </a>
    </t>

</templates>
