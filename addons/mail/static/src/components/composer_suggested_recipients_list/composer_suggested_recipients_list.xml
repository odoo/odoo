<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.ComposerSuggestedRecipientsList" owl="1">
        <!-- List of followers -->
        <div class="o_ComposerSuggestedRecipientsList">
            <t t-foreach="state.isShowMore ? thread.suggestedRecipientInfoList : thread.suggestedRecipientInfoList.slice(0,3)" t-as="recipient" t-key="recipient.localId">
                <ComposerSuggestedRecipient
                    recipientLocalId="recipient.localId"
                    threadLocalId="thread.localId"
                />
            </t>
            <t t-if="thread.suggestedRecipientInfoList.length > 3">
                <t t-if="!state.isShowMore" >
                    <button t-on-click="_onClickShowMore" class="btn btn-sm btn-link o_ComposerSuggestedRecipientList_showLess">
                        Show more
                    </button>
                </t>
                <t t-else="">
                    <button t-on-click="_onClickShowLess" class="btn btn-sm btn-link o_ComposerSuggestedRecipientList_showLess">
                        Show less
                    </button>
                </t>
            </t>
        </div>
    </t>
</templates>
