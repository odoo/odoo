<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.SelectablePartnersList" owl="1">
        <div class="o_SelectablePartnersList">
            <t t-foreach="partners" t-as="partner" t-key="partner.id">
                <t t-if="!partner.isInitialMember">
                    <SelectablePartner
                        isSelected="partner.isSelected"
                        partnerLocalId="partner.localId"
                        t-on-o-selected-partner="_onSelectedPartner"
                    />
                </t>
            </t>
            <button t-on-click="_onClickCreateGroupChat">
                <t t-if="props.initialMembers.length > 2">
                    Invite in Group Chat
                </t>
                <t t-else="">
                   Create Group Chat
                </t>
            </button>
        </div>
    </t>

</templates>
