<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.MessagingMenuContainer" owl="1">
        <div class="MessagingMenuContainer">
            <t t-if="isLoaded and messaging and messaging.messagingMenu">
                <MessagingMenu record="messaging.messagingMenu"/>
            </t>
            <i t-else="" class="o_MessagingMenuContainer_spinner fa fa-circle-o-notch fa-spin mx-2" title="Please wait..."/>
        </div>
    </t>
</templates>
