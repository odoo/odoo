<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ThreadViewTopbar" owl="1">
            <div class="o_ThreadViewTopbar d-flex flex-shrink-0 w-100 px-3 bg-100" t-attf-class="{{ className }}" t-ref="root">
                <t t-if="threadIconView">
                    <ThreadIconView className="'o_ThreadViewTopbar_threadIcon me-2 align-self-center'" record="threadIconView"/>
                </t>
                <div class="o_ThreadViewTopbar_title d-flex flex-grow-1 align-self-center align-items-center">
                    <t t-if="thread">
                        <t t-if="!isEditingThreadName">
                            <div class="o_ThreadViewTopbar_threadName o_ThreadViewTopbar_editableItem lead flex-shrink-0 px-1 border text-truncate fw-bold" t-att-title="thread.displayName" t-on-click="onClickTopbarThreadName" t-on-mouseenter="onMouseEnterTopbarThreadName" t-on-mouseleave="onMouseLeaveTopbarThreadName" t-attf-class="{{ isMouseOverThreadName and !messaging.isCurrentUserGuest ? 'o-threadNameEditable bg-view' : 'border-light' }}">
                                <t t-esc="thread.displayName"/>
                            </div>
                        </t>
                        <t t-if="isEditingThreadName">
                            <input class="o_ThreadViewTopbar_threadNameInput form-control lead fw-bold" type="text" t-att-value="pendingThreadName" t-on-input="onInputThreadNameInput" t-on-keydown="onKeyDownThreadNameInput" t-ref="threadNameInput"/>
                        </t>
                    </t>
                    <t t-if="!thread">
                        <div class="o_ThreadViewTopbar_threadName lead flex-shrink-0 px-1 text-truncate fw-bold">
                            Discuss
                        </div>
                    </t>
                    <t t-if="hasDescriptionArea">
                        <div class="o_ThreadViewTopbar_threadDescriptionSeparator flex-shrink-0 mx-2 py-2 border-start"/>
                        <t t-if="!isEditingThreadDescription">
                            <t t-if="thread.description">
                                <div class="o_ThreadViewTopbar_threadDescription o_ThreadViewTopbar_editableItem px-1 border text-truncate" t-att-title="thread.description" t-on-click="onClickTopbarThreadDescription" t-on-mouseenter="onMouseEnterTopbarThreadDescription" t-on-mouseleave="onMouseLeaveTopbarThreadDescription" t-attf-class="{{ isDescriptionHighlighted ? 'o-threadDescriptionEditable bg-view' : 'border-light' }}">
                                    <t t-esc="thread.description"/>
                                </div>
                            </t>
                            <t t-if="!thread.description">
                                <div class="o_ThreadViewTopbar_threadAddDescriptionEmptyLabel text-truncate text-900 opacity-50 opacity-100-hover cursor-pointer" t-on-click="onClickTopbarThreadDescription">
                                    Add a description
                                </div>
                            </t>
                        </t>
                        <t t-if="isEditingThreadDescription">
                            <input class="o_ThreadViewTopbar_threadDescriptionInput form-control" type="text" t-att-value="pendingThreadDescription" t-on-input="onInputThreadDescriptionInput" t-on-keydown="onKeyDownThreadDescriptionInput" t-ref="threadDescriptionInput"/>
                        </t>
                    </t>
                </div>
                <div class="o_ThreadViewTopbar_actions d-flex align-items-center ms-1">
                    <t t-if="thread and thread === messaging.inbox.thread">
                        <button class="o_ThreadViewTopbar_markAllReadButton btn btn-secondary" t-att-disabled="threadView.messages.length === 0" t-on-click="onClickInboxMarkAllAsRead">Mark all read</button>
                    </t>
                    <t t-if="thread and thread === messaging.starred.thread">
                        <button class="o_ThreadViewTopbar_unstarAllButton btn btn-secondary" t-att-disabled="threadView.messages.length === 0" t-on-click="onClickUnstarAll">Unstar all</button>
                    </t>
                    <t t-if="thread and thread.hasCallFeature and thread.rtcSessions.length === 0">
                        <button class="o_ThreadViewTopbar_callButton o_ThreadViewTopbar_button btn px-2 border-none rounded shadow-none" t-att-disabled="thread.hasPendingRtcRequest" title="Start a Call" t-on-click="onClickPhone">
                            <i class="fa fa-lg fa-phone text-700"/>
                        </button>
                        <button class="o_ThreadViewTopbar_callButton o_ThreadViewTopbar_button btn px-2 border-none rounded shadow-none" t-att-disabled="thread.hasPendingRtcRequest" title="Start a Video Call" t-on-click="onClickCamera">
                            <i class="fa fa-lg fa-video-camera text-700"/>
                        </button>
                    </t>
                    <t t-if="thread and thread.hasInviteFeature">
                        <button class="o_ThreadViewTopbar_inviteButton o_ThreadViewTopbar_button btn px-2 border-none rounded shadow-none"  t-attf-class="{{ invitePopoverView ? 'o-isActive' : '' }}" title="Add users" t-on-click="onClickInviteButton" t-ref="inviteButton">
                            <i class="fa fa-lg fa-user-plus text-700"/>
                        </button>
                    </t>
                    <!-- FIXME: guests should be able to see members but there currently is no route for it, so hide it for now -->
                    <t t-if="!messaging.isCurrentUserGuest and thread and thread.hasMemberListFeature and threadView.hasMemberList and !threadView.isMemberListOpened">
                        <button class="o_ThreadViewTopbar_showMemberListButton o_ThreadViewTopbar_button btn px-2 border-none rounded shadow-none" title="Show Member List" t-on-click="onClickShowMemberList">
                            <i class="fa fa-lg fa-users text-700"/>
                        </button>
                    </t>
                    <t t-if="thread and thread.hasMemberListFeature and threadView.hasMemberList and threadView.isMemberListOpened">
                        <button class="o_ThreadViewTopbar_hideMemberListButton o_ThreadViewTopbar_button o-isActive btn px-2 border-none rounded shadow-none" title="Hide Member List" t-on-click="onClickHideMemberList">
                            <i class="fa fa-lg fa-users text-700"/>
                        </button>
                    </t>
                    <t t-if="thread and thread.hasCallFeature and !threadView.isCallSettingsMenuOpen">
                        <button class="o_ThreadViewTopbar_openCallSettingsButton o_ThreadViewTopbar_button btn px-2 border-none rounded shadow-none" title="Show Call Settings" t-on-click="onClickShowCallSettingsMenu">
                            <i class="fa fa-lg fa-gear text-700"/>
                        </button>
                    </t>
                    <t t-if="thread and thread.hasCallFeature and threadView.isCallSettingsMenuOpen">
                        <button class="o_ThreadViewTopbar_button o-isActive btn px-2 border-none rounded shadow-none" title="Hide Call Settings" t-on-click="onClickHideCallSettingsMenu">
                            <i class="fa fa-lg fa-gear text-700"/>
                        </button>
                    </t>
                </div>
                <!-- FIXME: handle display on mobile -->
                <t t-if="threadView.threadViewer.discussPublicView and !messaging.device.isSmall">
                    <div class="o_ThreadViewTopbar_userInfo d-flex align-items-center">
                        <img class="o_ThreadViewTopbar_avatar mx-1 rounded-circle o_object_fit_cover" t-att-src="avatarUrl" alt="Avatar"/>
                        <t t-if="!isEditingGuestName">
                            <span class="o_ThreadViewTopbar_userName o_ThreadViewTopbar_editableItem px-1 border fw-bold text-truncate" t-attf-class="{{ isMouseOverUserName and messaging.isCurrentUserGuest ? 'o-userNameEditable bg-view' : 'border-light' }}" t-on-click="onClickUserName" t-on-mouseenter="onMouseEnterUserName" t-on-mouseleave="onMouseLeaveUserName">
                                <t t-esc="messaging.isCurrentUserGuest ? messaging.currentGuest.name : messaging.currentUser.nameOrDisplayName"/>
                            </span>
                        </t>
                        <t t-if="isEditingGuestName">
                            <input class="o_ThreadViewTopbar_guestNameInput form-control" type="text" t-att-value="messaging.currentGuest.name" t-on-input="onInputGuestNameInput" t-on-keydown="onKeyDownGuestNameInput" t-ref="guestNameInput"/>
                        </t>
                    </div>
                </t>
            </div>
    </t>
</templates>
