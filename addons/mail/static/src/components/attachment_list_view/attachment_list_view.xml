<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.AttachmentListView" owl="1">
        <t t-if="attachmentListView">
            <div class="o_AttachmentListView d-flex flex-column mt-1" t-att-class="{ 'me-5 pe-5': attachmentListView.isInChatWindowAndIsAlignedLeft and !attachmentListView.composerViewOwner, 'ms-5 ps-5': attachmentListView.isInChatWindowAndIsAlignedRight and !attachmentListView.composerViewOwner }" t-attf-class="{{ className }}" t-ref="root">
                <div t-if="attachmentListView.attachmentImageViews.length > 0" class="o_AttachmentListView_partialList o_AttachmentListView_partialListImages d-flex flex-grow-1 flex-wrap" t-att-class="{ 'justify-content-end': attachmentListView.isInChatWindowAndIsAlignedRight and !attachmentListView.composerViewOwner }">
                    <t t-foreach="attachmentListView.attachmentImageViews" t-as="attachmentImageView" t-key="attachmentImageView.localId">
                        <AttachmentImageView className="'o_AttachmentListView_attachment mw-100 mb-1'" classNameObj="{ 'ms-1': attachmentListView.isInChatWindowAndIsAlignedRight, 'me-1': !attachmentListView.isInChatWindowAndIsAlignedRight }" record="attachmentImageView"/>
                    </t>
                </div>
                <div t-if="attachmentListView.attachmentCardViews.length > 0" class="o_AttachmentListView_partialList o_AttachmentListView_partialListNonImages d-flex flex-grow-1 flex-wrap mt-1" t-att-class="{ 'justify-content-end': attachmentListView.isInChatWindowAndIsAlignedRight and !attachmentListView.composerViewOwner }">
                    <t t-foreach="attachmentListView.attachmentCardViews" t-as="attachmentCardView" t-key="attachmentCardView.localId">
                        <AttachmentCardView className="'o_AttachmentListView_attachment mw-100 mb-1'" classNameObj="{ 'ms-1': attachmentListView.isInChatWindowAndIsAlignedRight, 'me-1': !attachmentListView.isInChatWindowAndIsAlignedRight }" record="attachmentCardView"/>
                    </t>
                </div>
            </div>
        </t>
    </t>

</templates>
