<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ThreadTypingIconView" owl="1">
        <div class="o_ThreadTypingIconView d-flex align-items-center" t-attf-class="{{ className }}" t-att-title="title" t-ref="root">
            <span class="o_ThreadTypingIconView_dot o_ThreadTypingIconView_dot1 d-flex flex-shrink-0 rounded-pill bg-500" t-att-class="{
                'o-sizeMedium': size === 'medium',
                'o-sizeSmall': size === 'small',
            }"/>
            <span class="o_ThreadTypingIconView_separator flex-grow-1 flex-shrink-0"/>
            <span class="o_ThreadTypingIconView_dot o_ThreadTypingIconView_dot2 d-flex flex-shrink-0 rounded-pill bg-500" t-att-class="{
                'o-sizeMedium': size === 'medium',
                'o-sizeSmall': size === 'small',
            }"/>
            <span class="o_ThreadTypingIconView_separator flex-grow-1 flex-shrink-0"/>
            <span class="o_ThreadTypingIconView_dot o_ThreadTypingIconView_dot3 d-flex flex-shrink-0 rounded-pill bg-500" t-att-class="{
                'o-sizeMedium': size === 'medium',
                'o-sizeSmall': size === 'small',
            }"/>
        </div>
    </t>

</templates>
