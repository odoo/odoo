<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="mail_darkmode_style" name="Mail Dark Mode Style">
            <style>
                /* Needed to enable Dark Mode in email client user agents */
                :root {
                    color-scheme: light dark;
                    supported-color-schemes: light dark;
                }

                /* Dark Mode media queries to target Apple and iOS */
                @media (prefers-color-scheme: dark ) {
                    .o-email-darkmode-bg {
                        background-color: #1B1D26 !important;
                    }
                    .o-email-darkmode-bg-and-text {
                        background-color: #1B1D26 !important;
                        color: #FFFFF0 !important;
                    }
                    .o-email-darkmode-text {
                        color: #FFFFF0 !important;
                    }
                }

                /* Dark Mode rules to target some Android and Outlook.com */
                [data-ogsc] .o-email-darkmode-bg {
                    background-color: #1B1D26 !important;
                }
                [data-ogsc] .o-email-darkmode-bg-and-text {
                    background-color: #1B1D26 !important;
                    color: #FFFFF0 !important;
                }
                [data-ogsc] .o-email-darkmode-text {
                    color: #FFFFF0 !important;
                }

                /* Dark Mode hack to keep white text white in Gmail. Uses color blends ala Remi Parmentier: https://www.hteumeuleu.com/2021/fixing-gmail-dark-mode-css-blend-modes */
                u + .body {
                    background:#1B1D26;
                    mix-blend-mode:screen;
                }
                u + .body {
                    background:#1B1D26;
                    mix-blend-mode:difference;
                }
            </style>
        </template>
    </data>
</odoo>
