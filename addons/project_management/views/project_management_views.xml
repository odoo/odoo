<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project.menu_main_pm" model="ir.ui.menu">
        <field name="active" eval="True"/>
    </record>

    <record id="res_config_settings_view_form_inherit_project_management" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.project.management</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project_management']" position="attributes">
                <attribute name="class">app_settings_block</attribute>
            </xpath>
        </field>
    </record>
</odoo>