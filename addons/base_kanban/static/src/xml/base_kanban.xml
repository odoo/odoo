<template>
<t t-name="KanbanBiew">
    <table style="width:100%;">
        <tr>
            <t t-foreach="datas" t-as="columns">
                <td class="oe_column oe_column_heading" t-att-id="'column_' + columns.value">
                    <t t-if="columns.value">
                        <t t-esc="columns.header"/> (<t t-esc="columns.records.length"/>)
                    </t>
                </td>
            </t>
        </tr>
        <tr>
            <t t-foreach="datas" t-as="columns">
                <td class="oe_column" t-att-id="'column_' + columns.value">
                    <t t-foreach="columns.records" t-as="record">
                        <div class="record" t-att-id="'main_' + record.id">
                            <div class="record-header" t-att-id="'header_' + record.id"><t t-esc="record.id"/></div>
                            <div class="record-content" t-att-id="'data_' + record.id"></div>
                        </div>
                    </t>
                </td>
            </t>
        </tr>
    </table>
</t>
</template>