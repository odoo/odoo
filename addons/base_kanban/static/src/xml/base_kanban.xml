<template>
<t t-name="KanbanBiew">
    <table style="width:100%;" id="kanbanview">
        <tr>
            <td>
                <div class="oe_form_header">
                    <button type="button" class="oe_kanban_button_new">New</button>
                </div>
            </td>
        </tr>
        <tr>
            <t t-foreach="datas" t-as="columns">
                <td class="oe_table_column oe_column_heading" t-att-id="'column_' + columns.value">
                    <t t-if="columns.value">
                        <t t-esc="columns.header"/>
                    </t>
                </td>
            </t>
        </tr>
        <tr>
            <t t-foreach="datas" t-as="columns">
                <td class="oe_table_column" t-att-id="'column_' + columns.value">
                    <div class="oe_column" t-att-id="'column_' + columns.value">
                        <t t-foreach="columns.records" t-as="record">
                            <div class="record" t-att-id="'main_' + record.id">
                                <div class="record-header" t-att-id="'header_' + record.id"><t t-esc="record.id"/></div>
                                <div class="record-content" t-att-id="'data_' + record.id"></div>
                            </div>
                        </t>
                    </div>
                </td>
            </t>
        </tr>
    </table>
</t>
</template>