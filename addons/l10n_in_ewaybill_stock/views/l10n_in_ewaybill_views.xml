<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ewaybill_stock_action" model="ir.actions.act_window">
        <field name="name">Ewaybill Stock</field>
        <field name="res_model">l10n.in.ewaybill</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add
            </p>
        </field>
    </record>

    <record id="ewaybill_stock_tree_view" model="ir.ui.view">
        <field name="name">ewaybill.stock.tree.view</field>
        <field name="model">l10n.in.ewaybill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="stock_picking_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="ewaybill_stock_form_view" model="ir.ui.view">
        <field name="name">ewaybill.stock.form.view</field>
        <field name="model">l10n.in.ewaybill</field>
        <field name="arch" type="xml">
            <form string="Stock Picking">
                <header>
                    <button name="ewaybill_send" string="Send E-waybill" class="oe_highlight" type="object" attrs="{'invisible': [('state','!=','pending')]}"/>
                    <button name="ewaybill_cancel" string="Cancel" class="oe_highlight" type="object" attrs="{'invisible': [('state','!=','sent')]}"/>
                    <button name="ewaybill_update_part_b" string="Update Part B" type="object" data-hotkey="k" attrs="{'invisible': [('state','!=','sent')]}"/>
                    <button name="ewaybill_update_transporter" string="Update Transporter" type="object" data-hotkey="k" attrs="{'invisible': [('state','!=','sent')]}"/>
                    <button name="ewaybill_extend_validity" string="Extend Validity" type="object" data-hotkey="k" attrs="{'invisible': [('state','!=','sent')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,sent"/>
                </header>
                <sheet>
                    <group>
                     <group>
                        <field string="Stock Transfer" name="stock_picking_id"/>
                        <field name="date"/>
                     </group>
                     <group>
                        <field name="partner_id" string="Customer"/>
                        <field name="state_id"/>
                        <field name="ewaybill_number" attrs="{'invisible': [('state','!=','sent')]}"/>
                     </group>
                    </group>
                    <notebook>
                        <page string="Item Details">
                            <field name="ewaybill_line_ids">
                                <tree editable="bottom" create="0">
                                    <field name="currency_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="stock_move_id" invisible="1"/>
                                    <field name="product_id" attrs="{'readonly':[('stock_move_id','!=',False)]}"/>
                                    <field name="quantity" string="Quantity" attrs="{'readonly':[('stock_move_id','!=',False)]}"/>
                                    <field name="price_unit" />
                                    <field name="tax_ids" widget="many2many_tags" />
                                    <field name="igst_rate" optional="hide"/>
                                    <field name="igst_amount" optional="hide"/>
                                    <field name="cgst_rate" optional="hide"/>
                                    <field name="cgst_amount" optional="hide"/>
                                    <field name="sgst_rate" optional="hide"/>
                                    <field name="sgst_amount" optional="hide"/>
                                    <field name="cess_rate" optional="hide"/>
                                    <field name="cess_amount" optional="hide"/>
                                    <field name="cess_non_advol_amount" optional="hide"/>
                                    <field name="other_amount" optional="hide"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="currency_id" invisible="1"/>
                                    <field name="tax_totals" widget="account-tax-totals-field" nolabel="1" colspan="2" readonly="1"/>
                                </group>
                                <div class="clearfix"/>
                            </group>
                        </page>
                        <page string="Ewaybill" name="edi_ewaybill_page">
                            <group>  
                                <group>
                                    <field name="type_id"/>
                                    <field name="transporter_id"/>
                                    <label for="distance"/>
                                    <div class="o_row" name="distance">
                                        <field name="distance"/>
                                        <span>km</span>
                                    </div>
                                </group>
                                <group>
                                </group>
                            </group>
                            <group string="Part B">
                                <group>
                                    <field name="mode"/>
                                    <field name="vehicle_type" attrs="{'invisible': [('mode','!=','1')], 'required': [('mode','=','1')]}"/>
                                    <field name="vehicle_no" attrs="{'invisible': [('mode','!=','1')], 'required': [('mode','=','1')]}"/> 
                                </group>
                                <group>
                                    <field name="transportation_doc_no" attrs="{'required': [('mode','in',('2','3','4'))]}"/>
                                    <field name="transportation_doc_date" attrs="{'required': [('mode','in',('2','3','4'))]}"/>
                                </group>
                            </group>
                            <group>
                                <group string="Cancel Ewaybill" attrs="{'invisible': [('state','=','pending')]}">
                                    <field name="cancel_reason" />
                                    <field name="cancel_remarks"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
