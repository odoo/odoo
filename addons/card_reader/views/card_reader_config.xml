<?xml version="1.0"?>
<openerp>
    <data>
        <!--     BARCODE NOMENCLATURES     -->
        <record model="ir.ui.view" id="view_card_reader_configuration_form">
            <field name="name">Card Readers</field>
            <field name="model">card_reader.configuration</field>
            <field name="arch" type="xml">
                <form string="Card Reader">
                    <sheet>
                        <group col="2">
                            <field name="merchant_id" />
                            <field name="merchant_pwd" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_card_reader_configuration_tree">
            <field name="name">Card Readers</field>
            <field name="model">card_reader.configuration</field>
            <field name="arch" type="xml">
                <tree string="Card Reader">
                    <field name="merchant_id" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_configuration_form">
            <field name="name">Card Readers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">card_reader.configuration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to configure your card reader.
              </p>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_journal_pos_user_form">
            <field name="name">POS Journal</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="point_of_sale.view_account_journal_pos_user_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_authorized_diff']" position="after">
                    <field name="card_reader_config_id" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_bank_statements_pos_tree">
          <field name="name">POS bank statements</field>
          <field name="model">account.bank.statement</field>
          <field name="inherit_id" ref="account.view_bank_statement_form"/>
          <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="before">
              <field name="prefixed_card_number"/>
              <field name="card_brand"/>
              <field name="card_owner_name"/>
            </xpath>
          </field>
        </record>

        <record model="ir.ui.view" id="view_pos_order">
          <field name="name">POS orders</field>
          <field name="model">pos.order</field>
          <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
          <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="before">
              <field name="prefixed_card_number"/>
              <field name="card_brand"/>
              <field name="card_owner_name"/>
            </xpath>
          </field>
        </record>

        <!-- Cron job to delete mercury tokens older than 6 months -->
        <record forcecreate="True" id="ir_cron_amazon_sync" model="ir.cron">
            <field name="name">Mercury token cleaning</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field eval="'card_reader.mercury_transaction'" name="model" />
            <field eval="'cleanup_old_tokens'" name="function" />
            <field eval="'()'" name="args" />
        </record>

        <menuitem parent="point_of_sale.menu_point_config_product" action="card_reader.action_configuration_form" id="menu_pos_card_reader_config"
            sequence="35"/>
    </data>
</openerp>
