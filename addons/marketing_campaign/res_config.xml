<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_marketing_campaign_configuration" model="ir.ui.view">
            <field name="name">Configure Marketing Campaign</field>
            <field name="model">marketing.campaign.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Marketing Campaign" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="Marketing Campaigns"/>
                    <group>
                        <label for="id" string="Settings"/>
                        <div>
                            <field name="module_marketing_campaign_crm_demo" class="oe_inline"/>
                            <label for="module_marketing_campaign_crm_demo"/>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_marketing_campaign_configuration" model="ir.actions.act_window">
            <field name="name">Configure Marketing Campaign</field>
            <field name="res_model">marketing.campaign.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem name="Lead Automation" id="menu_marketing_campaign_root" groups="marketing.group_marketing_user,marketing.group_marketing_manager" sequence="10"/>
        <menuitem id="menu_marketing_campaign_configuration" name="Configuration" parent="menu_marketing_campaign_root"
            sequence="100" groups="base.group_configuration"/>
        <menuitem id="menu_marketing_campaign_settings" name="Settings" 
            parent="menu_marketing_campaign_configuration" sequence="0" action="action_marketing_campaign_configuration"/>

    </data>
</openerp>
