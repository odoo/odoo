<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <!-- colonne custom -->
            <xpath expr="//field[@name='order_line']/list" position="inside">
                <field name="custom_price_1"/>
                <field name="custom_price_2"/>
            </xpath>

            <!-- nascondo campo template standard -->
            <xpath expr="//field[@name='sale_order_template_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- campi custom -->
            <xpath expr="//sheet/group" position="after">
                <group string="Campi custom">
                    <field name="custom_sale_order_template_id" string="Aggiungi da modello" widget="many2one" options="{'no_create': True}"/>
                    <field name="total_custom_price_1" readonly="1"/>
                    <field name="total_custom_price_2" readonly="1"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
