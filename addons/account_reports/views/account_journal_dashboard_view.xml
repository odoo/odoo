<openerp>
    <data>
        <record model="ir.ui.view" id="account_reports_journal_dashboard_kanban_view">
            <field name="name">account.journal.dashboard.kanban.reports</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view" />
            <field name="arch" type="xml">
                <xpath expr="//a[@name='open_collect_money']/.." position="after">
                    <td><a type="action" name="%(action_account_report_bank_reconciliation_with_journal)d" groups="account.group_account_manager">Reconciliation Report</a></td>
                </xpath>
                <xpath expr="//a[@name='action_create_new']/.." position="after">
                    <td>
                        <t t-if="journal_type == 'sale'">
                            <a type="action" name="%(action_account_report_ar)d">Aged Receivables</a>
                        </t>
                        <t t-if="journal_type == 'purchase'">
                            <a type="action" name="%(action_account_report_ap)d">Aged Payables</a>
                        </t>
                    </td>
                </xpath>
                <xpath expr="//span[@t-esc='dashboard.last_balance']" position="replace">
                    <t t-if="dashboard.account_balance != dashboard.last_balance">
                        <a type="action" name="%(action_account_report_bank_reconciliation_with_journal)d" groups="account.group_account_manager">
                            <span t-esc="dashboard.last_balance"></span>
                        </a>
                    </t>
                    <t t-if="dashboard.account_balance == dashboard.last_balance">
                        <span t-esc="dashboard.last_balance"></span>
                    </t>
                </xpath>
                <xpath expr="//td[@name='customer-statement']" position='inside'>
                    <t t-if="journal_type == 'sale'">
                        <a type="action" name="%(action_account_followup_all)d">Customer Statement</a>
                    </t>
                </xpath>
            </field>
        </record>
    </data>
</openerp>