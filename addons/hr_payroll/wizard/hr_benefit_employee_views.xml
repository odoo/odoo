<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_benefit_by_employees" model="ir.ui.view">
        <field name="name">hr_benefit_employees</field>
        <field name="model">hr.benefit.employees</field>
        <field name="arch" type="xml">
            <form string="Benefits by Employees">
                <header>
                    <button icon="fa-cogs" string="Generate" name="generate_benefit" type="object" class="oe_highlight"  />
                </header>
                <group>
                    <span colspan="4" nolabel="1">This wizard will generate benefits for all selected employee(s) based on attendances.</span>
                </group>
                <group colspan="4" >
                    <separator string="Employees" colspan="4"/>
                    <newline/>
                    <field name="employee_ids" nolabel="1"/>
                </group>
                <footer></footer>
            </form>
        </field>
    </record>
</odoo>
