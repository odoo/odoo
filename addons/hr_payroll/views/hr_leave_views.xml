<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <!-- Benefit type on hr leave -->
    <record id="benefit_type_leave_form_inherit" model="ir.ui.view">
        <field name="name">benefit.type.leave.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='calendar']" position="after">
                <group name="benefit" string="Benefits">
                    <field name="benefit_type_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
