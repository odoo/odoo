<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_view_form_normalized_inherit_pos_stock" model="ir.ui.view">
        <field name="name">product.template.view.form.normalized.inherit.pos.stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_view_form_normalized_pos"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_storable']" position="after">
                <field name="tracking" invisible="not is_storable" groups="stock.group_production_lot"/>
            </xpath>
        </field>
    </record>

</odoo>
