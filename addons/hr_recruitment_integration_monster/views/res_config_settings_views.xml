<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.recruitment</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="75"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <block name="hr_recruitment_job_board" position="inside">
                    <setting id="monster_credentials" string="Monster Credentials" company_dependent="1" title="Monster Credentials">
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="sfu_server_url" string="Username" class="col-lg-3"/>
                                <field name="hr_recruitment_monster_username"/>
                            </div>
                            <div class="row mt16">
                                <label for="sfu_server_key" string="Password" class="col-lg-3"/>
                                <field name="hr_recruitment_monster_password" password="True"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </field>
        </record>
    </data>
</odoo>
