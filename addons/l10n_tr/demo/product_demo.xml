<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="product_category_advertisement" model="product.category">
            <field name="parent_id" ref="product.cat_expense"/>
            <field name="name">ads</field>
        </record>

        <record id="product_foreign_ads" model="product.product">
            <field name="name">Online ads</field>
            <field name="categ_id" ref="product_category_advertisement"/>
            <field name="list_price" eval="100.0"/>
            <field name="standard_price" eval="100.0"/>
            <field name="detailed_type">service</field>
            <field name="sale_ok" eval="False"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="supplier_taxes_id" search="[
                    ('type_tax_use', '=', 'purchase'),
                    '|',
                        ('name', '=', 'G.V. STOPAJ 15% (Alım)'),
                        ('name', '=', 'KDV2 %18'),
            ]"/>
        </record>
        <record id="product_domestic_ads" model="product.product">
            <field name="name">Gazete ads</field>
            <field name="categ_id" ref="product_category_advertisement"/>
            <field name="list_price" eval="100.0"/>
            <field name="standard_price" eval="100.0"/>
            <field name="detailed_type">service</field>
            <field name="sale_ok" eval="False"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="supplier_taxes_id" search="[
                    ('type_tax_use', '=', 'purchase'),
                    ('name', '=', 'KDV 18% Tevkifat (3/10) (Satış)-625 - TİCARİ REKLAM HİZMETLERİ [KDVGUT-(I/C-2.1.3.2.15)]'),
            ]"/>
        </record>
    </data>
</odoo>
