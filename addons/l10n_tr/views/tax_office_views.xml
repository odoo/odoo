<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="l10n_tr.tax_office_view_form" model="ir.ui.view">
            <field name="name">l10n_tr.tax_office.view.form</field>
            <field name="model">l10n_tr.tax_office</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="state_id"/>
                                <field name="type"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="l10n_tr.tax_office_view_tree" model="ir.ui.view">
            <field name="name">l10n_tr.tax_office.view.tree</field>
            <field name="model">l10n_tr.tax_office</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>
        <record id="l10n_tr.tax_office_action" model="ir.actions.act_window">
            <field name="name">Tax Offices</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n_tr.tax_office</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="l10n_tr.tax_office_menu"
                  name="Tax Offices"
                  parent="account.account_account_menu"
                  action="l10n_tr.tax_office_action"
                  sequence="16"
        />
    </data>
</odoo>