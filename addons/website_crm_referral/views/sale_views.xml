<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_to_reward_view_search_extend" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="website_sale_referral.sale_order_to_reward_view_search" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='to_reward']" position="replace" >
                <separator />
                <filter name="filter_to_reward"
                        string="To Reward"
                        domain="[('deserve_reward', '=', True), ('reward_done', '=', False)]"
                        groups="!website_crm_referral.group_lead_referral" />
            </xpath>
        </field>
    </record>
</odoo>
