<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_crm_case_opportunities_filter_extend" model="ir.ui.view">
        <field name="name">crm.lead.search.opportunity</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="after" >
                <separator />
                <filter name="filter_to_reward"
                        string="To Reward"
                        domain="[('deserve_reward', '=', True), ('reward_done', '=', False)]" 
                        groups="website_crm_referral.group_lead_referral"/>
            </xpath>
        </field>
    </record>
</odoo>
