<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="snippet_options" inherit_id="website.snippet_options" name="e-commerce wishlist snippet options">
    <xpath expr="." position="inside">
        <div data-selector="#wrapwrap > header"
            data-no-check="true"
            groups="website.group_website_designer">
            <we-checkbox string="Always Show Whishlist"
                        data-customize-website-views="website_sale_wishlist.show_wishlist|"
                        data-no-preview="true"
                        data-reload="/"/>
        </div>
    </xpath>
</template>

</odoo>