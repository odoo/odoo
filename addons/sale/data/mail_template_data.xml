<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--Email template -->
        <record id="email_template_edi_sale" model="mail.template">
            <field name="name">Sales Order - Send by Email</field>
            <field name="email_from">${object.user_id.name} ${('&lt;%s&gt;' % ((object.user_id.email) if object.user_id.email else '')|safe)}</field>
            <field name="subject">${object.company_id.name} ${object.state in ('draft', 'sent') and 'Quotation' or 'Order'} (Ref ${object.name or 'n/a' })</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="report_sale_order"/>
            <field name="report_name">${(object.name or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="xml">
<p>Dear <t t-esc="record.partner_id.name"/>
<t t-set="access_action" t-value="record.with_context(force_website=True).get_access_action()"/>
<t t-set="is_online"  t-value="access_action and access_action['type'] == 'ir.actions.act_url'"/>
<t t-set="doc_name" t-value="'quotation' if record.state in ('draft', 'sent') else 'order confirmation'"/>
<t t-set="access_name" t-value="is_online and record.template_id and 'Accept and pay %s online' % doc_name or 'View %s' % doc_name"/>
<t t-set="access_url" t-value="is_online and '/mail/view?model=sale.order&amp;res_id=%d' % (record.id) or ''"/>

<t t-if="record.partner_id.parent_id">
    (<i t-esc="record.partner_id.parent_id.name"/>) 
</t>
,</p>
<p>
Here is
<t t-if="ctx.get('proforma')">
in attachment, your pro-forma
</t>
<t t-else="">
the <t t-esc="doc_name"/> <strong t-esc="record.name"/>
</t>
<t t-if="record.origin">
(with reference: <t t-esc="record.origin"/> )
</t>
amounting in<strong t-esc="'%s %s' % (record.amount_total, record.pricelist_id.currency_id.name)"/>
from <t t-esc="record.company_id.name"/>.
</p>

<t t-if="is_online and not ctx.get('proforma')">
    <br/><br/>
    <center>
        <a t-att-href="access_url" style="background-color: #1abc9c; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;" class="o_default_snippet_text" t-esc="access_name"/>
        <br/><br/><br/>
        <span style="color:#888888">(or view attached PDF)</span>
    </center>
    <br/>
</t>

<p>You can reply to this email if you have any questions.</p>
<p>Thank you,</p>

<p style="color:#888888;">
<t t-if="record.user_id and record.user_id.signature" t-raw="record.user_id.signature"/>
</p>
</field>
        </record>

        <!--Default Notification Email template for invoices-->
        <record id="sale.mail_template_data_notification_email_sale_order" model="mail.template">
            <field name="name">Sales Order Notification Email</field>
            <field name="subject">${object.subject}</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="xml">
              <html>
                <head></head>
                <t t-set="company" t-value="ctx.get('record') and ctx.get('record').company_id or user.company_id"/>
                <body style="margin: 0; padding: 0;">
                <table border="0" width="100%" cellpadding="0" bgcolor="#ededed" style="padding: 20px; background-color: #ededed" summary="o_mail_notification">
                    <tbody>

                      <!-- HEADER -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#875A7B" style="min-width: 590px; background-color: rgb(135,90,123); padding: 20px;">
                            <tr>
                              <td valign="middle">
                                  <span style="font-size:20px; color:white; font-weight: bold;">
                                      <t t-esc="record.record_name"/>
                                  </span>
                              </td>
                              <td valign="middle" align="right">
                                  <img t-attf-src="/logo.png?company=#{company.id}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="company.name"/>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>

                      <!-- CONTENT -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#ffffff" style="min-width: 590px; background-color: rgb(255, 255, 255); padding: 20px;">
                            <tbody>
                              <td valign="top" style="font-family:Arial,Helvetica,sans-serif; color: #555; font-size: 14px;">
                                  <t t-raw="record.body"/>
                              </td>
                            </tbody>
                          </table>
                        </td>
                      </tr>

                      <!-- FOOTER -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#875A7B" style="min-width: 590px; background-color: rgb(135,90,123); padding: 20px;">
                            <tr>
                              <td valign="middle" align="left" style="color: #fff; padding-top: 10px; padding-bottom: 10px; font-size: 12px;">
                                <t t-esc="company.name"/><br/>
                                <t t-esc="company.phone or ''"/>
                              </td>
                              <td valign="middle" align="right" style="color: #fff; padding-top: 10px; padding-bottom: 10px; font-size: 12px;">
                                <a t-if="company.email" t-attf-href="mailto:#{company.email}" style="text-decoration:none; color: white;" t-esc="company.email"/><br/>
                                <a t-if="company.website" t-att-href="company.website" style="text-decoration:none; color: white;" t-esc="company.website"/>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                      <tr>
                        <td align="center">
                            Powered by <a target="_blank" href="https://www.odoo.com">Odoo</a>.
                        </td>
                      </tr>
                    </tbody>
                </table>
                </body>
                </html>
            </field>
        </record>


    </data>
</odoo>
