<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="sale_product_configurator.configuratorDialog" t-inherit="product.product_configurator.configuratorDialog" t-inherit-mode="primary">
        <xpath expr="//Dialog" position="attributes">
            <attribute name="contentClass">this.state.optionalProducts.length ? 'h-75' : ''</attribute>
        </xpath>
        <xpath expr="//table" position="replace">
            <ProductList
                t-if="this.state.products.length"
                products="this.state.products"/>
            <ProductList
                t-if="this.state.optionalProducts.length"
                products="this.state.optionalProducts"
                areProductsOptional="true"/>
        </xpath>
    </t>
</templates>
