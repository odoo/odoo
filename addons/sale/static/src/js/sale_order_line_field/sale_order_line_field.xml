<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t
        t-name="sale.ListRenderer.RecordRow"
        t-inherit="account.SectionAndNoteListRenderer.RecordRow"
        t-inherit-mode="primary"
    >
        <!-- Remove the drag-and-drop handle for combo lines and combo item lines. -->
        <Field position="attributes">
            <attribute name="t-if">
                !((isCombo(record) || isComboItem(record)) &amp;&amp; column.widget === 'handle')
            </attribute>
        </Field>
    </t>

    <t
        t-name="sale.SectionListRenderer.Row"
        t-inherit="web.SectionListRenderer.Row"
        t-inherit-mode="primary"
    >
        <t t-elif="hierarchyItem.isNote" position="after">
            <t t-elif="isCombo(record)">
                <t t-call="sale.SectionListRenderer.ComboRow"/>
            </t>
        </t>
    </t>

    <t
        t-name="sale.SectionListRenderer.ComboRow"
        t-inherit="web.SectionListRenderer.NoteRow"
        t-inherit-mode="primary"
    >
        <t t-foreach="this.getNoteColumns(record)" position="attributes">
            <attribute name="t-foreach">this.getComboColumns(record)</attribute>       
        </t>
    </t>
</templates>
