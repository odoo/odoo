<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="product.product_configurator.ptav-radio" t-inherit-mode="extension">
        <xpath expr="//span[@t-out='ptav.name']" position="after">
            <BadgeExtraPrice
                t-if="ptav.price_extra"
                price="ptav.price_extra"
                currencyId="this.env.currencyId"/>
        </xpath>
    </t>

    <t t-inherit="product.product_configurator.ptav-pills" t-inherit-mode="extension">
        <xpath expr="//span[@t-out='ptav.name']" position="after">
            <BadgeExtraPrice
                t-if="ptav.price_extra"
                price="ptav.price_extra"
                currencyId="this.env.currencyId"/>
        </xpath>
    </t>

    <t t-inherit="product.product_configurator.ptav-multi" t-inherit-mode="extension">
        <xpath expr="//span[@t-out='ptav.name']" position="after">
            <BadgeExtraPrice
                t-if="ptav.price_extra"
                price="ptav.price_extra"
                currencyId="this.env.currencyId"/>
        </xpath>
    </t>
</templates>
