<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_activity_report_view_graph" model="ir.ui.view">
        <field name="name">sale.activity.report.graph</field>
        <field name="model">sale.activity.report</field>
        <field name="arch" type="xml">
            <graph string="Activities Analysis" stacked="True">
                <field name="mail_activity_type_id" type="col"/>
                <field name="date" interval="month" type="row"/>
            </graph>
        </field>
    </record>

    <record id="sale_activity_report_view_pivot" model="ir.ui.view">
        <field name="name">sale.activity.report.pivot</field>
        <field name="model">sale.activity.report</field>
        <field name="arch" type="xml">
            <pivot string="Activities Analysis" disable_linking="True">
                <field name="mail_activity_type_id" type="col"/>
                <field name="date" interval="month" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="sale_activity_report_view_search" model="ir.ui.view">
        <field name="name">sale.activity.report.search</field>
        <field name="model">sale.activity.report</field>
        <field name="arch" type="xml">
            <search string="Activities Analysis">
                <filter string="My Activities" name="activities_my" domain="[('create_uid', '=', uid)]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter string="Last Month" name="last_month" domain="['&amp;', ('date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('date', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <field name="team_id" invisible="1"/>
                <field name="create_uid" invisible="1"/>
                <group expand="1" string="Group By">
                    <filter string="Created By" name="group_by_salesperson" context="{'group_by':'create_uid'}"/>
                    <filter string="Sales Channel" name="saleschannel" context="{'group_by':'team_id'}"/>
                    <filter string="Country" name="country" context="{'group_by':'country_id'}" />
                    <filter string="Company" name="company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    <filter string="Stage" name="stage" context="{'group_by':'state'}"/>
                    <filter string="Month" context="{'group_by':'date:month'}" name="month"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sale_activity_report_action" model="ir.actions.act_window">
        <field name="name">Activities Analysis</field>
        <field name="res_model">sale.activity.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph,pivot</field>
        <field name="search_view_id" ref="sale_activity_report_view_search"/>
        <field name="context">{'search_default_activities_my': True}</field>
    </record>

    <menuitem
        id="sale_activity_report_menu"
        name="Activities"
        groups="sales_team.group_sale_manager"
        parent="menu_sale_report"
        action="sale_activity_report_action"
        sequence="6"/>

</odoo>
