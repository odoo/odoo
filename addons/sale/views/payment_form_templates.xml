<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Include sale-related values to the payment form to pass them to the client. -->
    <template id="payment_form_inherit" inherit_id="payment.form">
        <xpath expr="//form[@id='o_payment_form']" position="attributes">
            <attribute name="t-att-data-sale-order-id">sale_order_id</attribute>
        </xpath>
    </template>

</odoo>
