<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" inherit_id="sales_team.assets_backend" name="Sale backend assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/sale/static/src/js/sale.js"></script>
            <script type="text/javascript" src="/sale/static/src/js/sale_section.js"></script>
            <link rel="stylesheet" href="/sale/static/src/scss/sale_section.scss"/>
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="web.assets_frontend" name="Sale frontend assets">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/sale/static/src/scss/sale_portal.scss"/>
        </xpath>
    </template>
</odoo>
