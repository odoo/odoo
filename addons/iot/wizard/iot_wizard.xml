<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_add_iot_box" model="ir.ui.view">
        <field name="name">Add IoT box</field>
        <field name="model">add.iot.box</field>
        <field name="arch" type="xml">
            <form string="Add IoT Box">
                <p><h2>
                    1. Power on the IoT Box <br/>

                    2. If you connected the network cable, use the 
                    "Scan" button to detect connected IoT Boxes. <br/>

                    3. If it does not work or you want to connect wirelessly: <br/>
                    
                    4. Power on the IoT Box without ethernet cable if not already done so.<br/>

                    5. Copy this token in your clipboard.<br/>

                    6. Connect to the "IoT Box" wifi network.<br/>

                    7. Paste the token into the "server token" field.<br/>
                </h2></p>
                <group>
                    <field name="token" widget="CopyClipboardChar"/>
                    <field name="view_token" invisible="1"/>
                </group>
                <footer>
                    <widget name='iot_detect_button' string="Detect and Add IoT devices in the network"/>
                    <button name="Ok" string="Ok" special="cancel"/>
                </footer> 
            </form>
        </field>
    </record>
    <record id="action_add_iot_box" model="ir.actions.act_window">
        <field name="name">Add IoT box...</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">add.iot.box</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_add_iot_box"/>
        <field name="target">new</field>
    </record>
</odoo>