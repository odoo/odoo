                    <field name="quantity"/>
                </tree>
            </field>
        </record>
        <record id="view_timesheet_account_graph" model="ir.ui.view">
            <field name="name">report_timesheet.account.graph</field>
            <field name="model">report_timesheet.account</field>
            <field name="arch" type="xml">
