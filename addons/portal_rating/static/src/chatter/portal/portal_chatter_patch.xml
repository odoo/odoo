<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="portal.Chatter" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o-mail-Chatter-top')]/*[1]" position="before">
            <div t-if="this.env.displayRating and this.ratingStats and this.ratingStats.total" class="my-2" t-att-class="{ 'mb-4':this.props.twoColumns }">
                <t t-call="portal_rating.rating_card">
                    <t t-set="two_columns" t-value="this.props.twoColumns"/>
                    <t t-set="rating_stats" t-value="this.ratingStats"/>
                    <t t-set="selected_rating" t-value="this.state.thread?.selectedRating"/>
                </t>
            </div>
        </xpath>
    </t>
</templates>
