<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_portal_content_inherit_sale_mrp" name="Orders MOs" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//div[@id='informations']" position="inside">
            <t t-if="mrp_production_ids">
                <div>
                    <strong>Manufacturing Orders</strong>
                </div>
                <div>
                    <t t-foreach="mrp_production_ids" t-as="mo">
                        <div class="d-flex flex-wrap align-items-center justify-content-between o_sale_stock_picking">
                            <div>
                                <span t-out="mo.name"/>
                                <div class="small d-lg-inline-block ml-3">Date:
                                    <span class="text-muted" t-field="mo.date_finished" t-options="{'date_only': True}"/>
                                    <span t-if="mo.state in ['draft', 'confirmed', 'progress', 'to_close']" class="text-muted" t-field="mo.date_planned_finished" t-options="{'date_only': True}"/>
                                </div>
                            </div>
                            <span t-if="mo.state in ['to_close', 'done']" class="small badge badge-success orders_label_text_align"><i class="fa fa-fw fa-check"/> <b>Manufactured</b></span>
                            <span t-if="mo.state == 'cancel'" class="small badge badge-danger orders_label_text_align"><i class="fa fa-fw fa-times"/> <b>Cancelled</b></span>
                            <span t-if="mo.state in ['confirmed']" class="small badge badge-info orders_label_text_align"><i class="fa fa-fw fa-clock-o"/> <b>Confirmed</b></span>
                            <span t-if="mo.state in ['progress']" class="small badge badge-warning orders_label_text_align"><i class="fa fa-fw fa-clock-o"/> <b>In progress</b></span>
                        </div>
                    </t>
                </div>
            </t>
        </xpath>
  </template>
</odoo>
