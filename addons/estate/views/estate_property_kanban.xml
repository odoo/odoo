<odoo>
    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example"
                default_group_by="property_type_id"
                disable_drag_drop="1">

                <field name="name" />
                <field name="partner_id" />
                <field name="description" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="tag_ids" />
                <field name="offer_ids" />
                <field name="state" />
                <field name="property_type_id" />

                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click p-2 shadow-sm rounded bg-white">
                            <strong>
                                <t t-esc="record.name.value" />
                            </strong>
                            
                            <div>Description: <t t-esc="record.description.value" /></div>

                            <div> Expected Price: <t t-esc="record.expected_price.value" />
                            </div>

                            <t t-if="['accepted', 'sold'].includes(record.state.raw_value)">
                                <div> Selling Price: <t t-esc="record.selling_price.value" />
                                </div>
                            </t>

                            <div class="mt-2">
                                <field name="tag_ids" widget="many2many_tags" />
                            </div>

                            <div class="mt-2">
                                <span class="badge badge-primary">
                                    <t t-esc="record.state.value" />
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>
</odoo>