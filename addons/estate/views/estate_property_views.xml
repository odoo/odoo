<odoo>

    <!-- Custom List View for Estate Property -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'offer_received'"
                decoration-bf="state == 'offer_accepted'"
                decoration-muted="state == 'sold'"
                string="Properties"
                editable="bottom">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" invisible="1" />
            </list>
        </field>
    </record>

    <!-- Form View for Estate Property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold,cancelled" />
                    <button name="action_cancel" type="object" string="Cancel"
                        class="btn btn-secondary" invisible="state == 'cancelled'" />
                    <button name="action_sold" type="object" string="Mark as Sold"
                        class="btn btn-primary" invisible="state == 'sold'" />
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1 class="text-3xl font-weight-bold">
                            <field name="name" />
                        </h1>
                        <field name="partner_id" />
                        <field name="description" />
                    </div>

                    <div class="mt16" />

                    <group col="2">
                        <group>
                            <field name="property_type_id"
                                options="{'no_create': True, 'no_open': True}" />
                            <field name="tag_ids" widget="many2many_tags"
                                options="{'color_field': 'color'}" />
                            <field name="postcode" />
                            <field name="expected_price" />
                        </group>
                        <group>
                            <field name="selling_price" readonly="1" />
                            <field name="date_availability" />
                            <field name="best_price" readonly="1" />
                            <field name="state" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" />
                            <group string="Property Details" col="4">
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                            </group>
                            <group string="Garden Info" col="2">
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" />
                                <field name="total_area" readonly="1" />
                            </group>
                        </page>

                        <page string="Offers Info">
                            <group col="2">
                                <field name="salesperson_id" />
                                <field name="buyer_id" />
                            </group>
                        </page>

                        <page string="Offers">
                            <field name="offer_ids"
                                modifiers="{'readonly': [['state', 'in', ['accepted', 'sold', 'cancelled']]]}">
                                <list editable="bottom">
                                    <field name="partner_id" />
                                    <field name="price" />
                                    <field name="validity" />
                                    <field name="date_deadline" />
                                    <field name="status" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View for Estate Property -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" />
                <field name="expected_price" />
                <field name="garden" />
                <field name="state" />
                <field name="living_area" filter_domain="[('living_area', '>=', self)]" />

                <!-- Custom Filter -->
                <filter string="Available" name="filter_available" domain="[('state', '=', 'new')]" />

                <!-- Group By -->
                <filter string="Group by Postcode" name="group_by_postcode"
                    context="{'group_by': 'postcode'}" />
            </search>
        </field>
    </record>

</odoo>