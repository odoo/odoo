<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_leave_type_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.type.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='configuration']" position="inside">
                <field name="l10n_in_is_sandwich_leave" invisible="country_code != 'IN'" nolabel="1"/>
                <label for="l10n_in_is_sandwich_leave" string="Sandwich Leaves" invisible="country_code != 'IN'"/>
            </xpath>
        </field>
    </record>

</odoo>
