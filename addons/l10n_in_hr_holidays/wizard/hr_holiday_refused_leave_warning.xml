<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_holidays_refuse_leave_warning_form" model="ir.ui.view">
        <field name="model">hr.holidays.refuse.leave.warning</field>
        <field name="arch" type="xml">
            <form string="Refuse Time Off">
                <p class="test-prewrap fs-5">
                    Refusing this leave will also refuse the linked sandwich leave.
                </p>
                <footer>
                    <button name="action_refuse_leave"
                            type="object"
                            class="btn-primary"
                            string="Refuse Time Off"
                            accesskey="c" />
                    <button special="cancel" string="Discard" close="1" accesskey="j" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
