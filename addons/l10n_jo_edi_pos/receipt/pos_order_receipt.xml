<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="l10n_jo_edi_pos.pos_order_receipt_header" inherit_id="point_of_sale.pos_order_receipt_header">
            <div name="header" position="before">
                <div class="text-center" t-if="order['l10n_jo_edi_pos_error']">RECEIPT WITHOUT FISCAL VALUE</div>
            </div>
        </template>

        <template id="l10n_jo_edi_pos.pos_order_receipt_footer" inherit_id="point_of_sale.pos_order_receipt_footer">
            <div name="footer" position="after">
                <t t-if="order['l10n_jo_edi_pos_qr']">
                    <div class="text-center">--------------------------------</div>
                    <div class="pos-receipt-order-data mb-2">
                        JoFotara QR code
                    </div>
                    <div class="mt-3 l10n-jo-edi-pos-qr">
                        <img t-att-src="extra_data['l10n_jo_edi_pos_qr']" class="pos-receipt-qrcode"/>
                    </div>
                </t>
            </div>
        </template>
    </data>
</odoo>
