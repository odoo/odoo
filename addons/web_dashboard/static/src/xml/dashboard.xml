<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="DashboardMain">
        <div class="dashboard">
            <div class="row">
                <div class="col-md-12 title">
                    <div class="pull-right loader hidden"><i class="fa fa-spinner fa-spin text-primary"></i> <span class="text">Working</span></div>
                </div>
                <div class="col-md-3 col-xs-6 col">
                    <div id="apps">

                    </div>
                    <ul class="nav nav-pills pills">
                      <li role="presentation"><a href="https://www.odoo.com/apps/modules" target="_blank"><i class="fa fa-rocket fa-2x text-muted"/> App store </a></li>
                      <li role="presentation"><a href="https://www.odoo.com/apps/themes" target="_blank"><i class="fa fa-picture-o fa-2x text-muted"/> Theme store</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-xs-6 col">
                    <div id="invitations">
                    </div>
                </div>
                <div class="col-md-3 col-xs-6 col">
                    <div id="planner">
                    </div>
                </div>
                <div class="col-md-3 col-xs-6 col">
                    <div id="videos">
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="DashboardApps">
        <i class="fa fa-cog fa-4x text-muted"></i>

        <div class="header">
            <t t-if="installed_apps">
                <t t-esc="installed_apps"></t> Installed App<t t-if="installed_apps > 1">s</t>
            </t>
            <t t-if="! installed_apps">
                No app installed 
            </t>
        </div>
        <div>
            <a class="btn btn-primary btn-block install_new_apps" href="#" role="button"><strong>Install New Apps</strong></a>
        </div>
    </t>
    <t t-name="DashboardInvitations">
        <i class="fa fa-users fa-4x text-muted"></i>

        <div class="header">
            <t t-set="active_users" t-value="widget.data.active_users"></t>
            <t t-set="users" t-value="widget.data.users"></t>
            <t t-if="active_users">
                <t t-esc="active_users"></t> Active User<t t-if="active_users > 1">s</t>
            </t>
        </div>
        <div class="text-center">
            <a class="access_rights user" t-att-data-user-id="widget.data.template_user_id"> Manage access rights</a>
            <hr/>
        </div>
        <div class="invitation-form">
            <strong>Invite new users</strong> <small class="text-muted">(with default rights)</small>
            <textarea rows="3" id="user_emails" placeholder="Email addresses (one per line)"></textarea>
            <a href="javaScript:void(0);" class="optional_message_toggler"> Add optional message</a>
            <textarea class="optional_message" id="optional_message" rows="6" placeholder="Optional message" style="display: none;"></textarea>
            <button class="btn btn-primary btn-block send_invitations" role="button"> <strong><i class="fa fa-cog fa-spin hidden"/> Send Invitations</strong></button>
        </div>
        <div>
            <small class="text-muted text-center">
                <t t-if="users.pending.length != 0">
                    <strong>Pending invitations:</strong><br/>
                    <t t-foreach="users.pending" t-as="pending">
                        <a><div class="user" t-att-data-user-id="pending[0]"> <t t-esc="pending[1]"/></div></a>
                    </t>
                    <br/>
                </t>
                <t t-if="users.expired.length != 0">
                    <strong>Expired invitations: </strong><br/>
                    <t t-foreach="users.expired" t-as="expired">
                        <a><div class="user" t-att-data-user-id="expired[0]" >  <t t-esc="expired[1]"/></div></a>
                    </t>
                </t>
            </small>
            
        </div>
    </t>
    <t t-name="DashboardPlanner">
        <i class="fa fa-info-circle fa-4x text-muted"></i>
        <div class="header">
            <t t-esc="widget.data.planner_data.overall_progress"></t>%
             Implementation
        </div>
        <div>
            <small class="text-muted text-center compact_subtitle">
                Follow these Implementation Guides to get the maximum value for your business.
            </small>
            <hr/>
        </div>
        <t t-set="planners" t-value="widget.data.planner_data.planners"/>

        <div class="row">
            <t t-foreach="planners" t-as="p">
                <div t-attf-class="col-xs-2 planner_progress progress_#{p[1]}">
                    <t t-esc="p[1]"/>%
                </div>
                <div t-attf-class="col-xs-10 progress_#{p[1]}">
                    <div class="proress_title text-left text-primary" t-att-data-menu-id="p[2]">
                        <t t-esc="p[0]"></t> <i class="fa fa-arrow-right pull-right"/>
                    </div>
                    <div class="progress" t-att-data-menu-id="p[2]">
                      <div class="progress-bar" role="progressbar" t-attf-style="width:#{p[1]}%">
                      </div>
                    </div>
                </div>
            </t>
        </div>
    </t>

    <t t-name="DashboardVideos">
        <i class="fa fa-bullhorn fa-4x text-muted"></i>
        <t t-set="videos" t-value="widget.data.videos"/>
        <t t-set="videos_url" t-value="widget.video_urls"/>
        <div class="header">
            <t t-esc="videos.twitter + videos.facebook + videos.linkedin"></t>/9 Free Videos
        </div>
        <div>
            <small class="text-muted text-center compact_subtitle">
                Share Odoo's awesomeness and unlock access to 10 training videos (value: 250 â‚¬).
            </small>
            <hr/>
        </div>
        <div class="row">
            <div class="col-xs-4"><a><i t-attf-class="fa fa-twitter-square fa-3x tw_share #{videos.twitter &amp;&amp; 'text-muted'}"/></a></div>
            <div class="col-xs-4"><a><i t-attf-class="fa fa-facebook-square fa-3x fb_share #{videos.facebook &amp;&amp; 'text-muted'}"/></a></div>
            <div class="col-xs-4"><a><i t-attf-class="fa fa-linkedin-square fa-3x li_share #{videos.linkedin &amp;&amp; 'text-muted'}"/></a></div>
        </div>
        <div class="row mt16">
            <div class="col-md-2 video_lock"><i t-attf-class="fa #{(videos.twitter > 0) ? 'fa-unlock text-primary' : 'fa-lock text-muted'} fa-2x"/></div>
            <ul class="col-md-10 text-left video_urls">
                <li t-foreach="videos_url.tw" t-as="v">
                    <a t-attf-class="#{! videos.twitter  &amp;&amp; 'text-muted'}" t-attf-href="#{(videos.twitter > 0) ? v.url : 'javaScript:void(0);'}" target="_blank"><t t-esc="v.name"></t></a>
                </li>
            </ul>
        </div>
        <div class="row mt16">
            <div class="col-md-2 video_lock"><i t-attf-class="fa #{(videos.facebook > 0) ? 'fa-unlock text-primary' : 'fa-lock text-muted'} fa-2x"/></div>
            <ul class="col-md-10 text-left video_urls">
                <li t-foreach="videos_url.fb" t-as="v">
                    <a t-attf-class="#{! videos.facebook  &amp;&amp; 'text-muted'}" t-attf-href="#{(videos.facebook > 0) ? v.url : 'javaScript:void(0);'}" target="_blank"><t t-esc="v.name"></t></a>
                </li>
            </ul>
        </div>
        <div class="row mt16">
            <div class="col-md-2 video_lock"><i t-attf-class="fa #{(videos.linkedin > 0) ? 'fa-unlock text-primary' : 'fa-lock text-muted'} fa-2x"/></div>
            <ul class="col-md-10 text-left video_urls">
                <li t-foreach="videos_url.li" t-as="v">
                    <a t-attf-class="#{! videos.linkedin  &amp;&amp; 'text-muted'}" t-attf-href="#{(videos.linkedin > 0) ? v.url : 'javaScript:void(0);'}" target="_blank"><t t-esc="v.name"></t></a>
                </li>
            </ul>
        </div>
        <div class="mt16">
            <small> <a href="http://odoo.com/pricing">Get the 150+ training videos </a></small>
        </div>
    </t>

</templates>