<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_l10n_pt_tax_authority_series_form" model="ir.ui.view">
        <field name="name">tax.authority.series.form</field>
        <field name="model">l10n_pt_account.tax.authority.series</field>
        <field name="arch" type="xml">
            <form string="Tax Authority Series">
                <group>
                    <field name='code'/>
                    <field name='end_date'/>
                    <field name='active'/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_l10n_pt_tax_authority_series_tree" model="ir.ui.view">
        <field name="name">tax.authority.series.tree</field>
        <field name="model">l10n_pt_account.tax.authority.series</field>
        <field name="arch" type="xml">
            <tree string="Tax Authority Series" editable="bottom">
                <field name='code'/>
                <field name='end_date'/>
                <field name='active'/>
            </tree>
        </field>
    </record>

</odoo>
