<!--
    Customize Themes

    Use input type 'checkbox' or 'radio'
    Use 'data-unable' to checked one or more HTML id, or list separate by comma
    Use 'data-disable' to un checked one or more HTML id, or list separate by comma
    
    The HTML class 'checked' is automatically apply to the parent label of the checked inputs
-->

    <template id="website.theme_customize" name="Customize Theme">
        <div id="theme_customize_modal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="loading_backdrop"></div>
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title" id="mySmallModalLabel">Customize your theme</h4>
              </div>
              <div class="modal-body">
                <table>
                  <tr>
                    <td>
                      <label class="checked">
                        <img src="/website/static/src/img/bootswatch_default_thumbnail.png" alt="Default Theme"/>
                        <input id="t0" name="theme" type="radio" data-xmlid="" checked="checked"/>
                      </label>
                    </td>
                    <td>
                      <label>
                        <img src="http://bootswatch.com/amelia/thumbnail.png" alt="Amelia"/>
                        <input id="t1" name="theme" type="radio" data-xmlid="website.theme_amelia"/>
                      </label>
                    </td>
