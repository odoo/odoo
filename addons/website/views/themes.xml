                  <div class="image">
                    <img src="/website/static/src/img/bootswatch_default_thumbnail.png" class="img-responsive" alt="Default Theme"/>
                  </div>
                  <div class="options">
                    <h3>Default</h3>
                    <p>Pure Bootstrap</p>
                    <a class="btn btn-info" href="/website/theme_change">Apply</a>
                  </div>
                </div>
              </div>

