<?xml version="1.0"?>
<odoo>
    <record id="res_users_view_form" model="ir.ui.view">
        <field name="name">res.users.form.website.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="priority">135</field>
        <field name="arch" type="xml">
            <group name="applications" position="inside">
                <field name="group_website_user"/>
            </group>
            <group name="messaging" position="before">
                <group name="multi_website" string="Multi-website">
                    <field name="registered_on_website_id"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
