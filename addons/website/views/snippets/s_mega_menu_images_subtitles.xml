<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_mega_menu_images_subtitles" name="Menu - images &amp; subtitles">
    <section class="s_mega_menu_images_subtitles">
        <div class="container">
            <div class="row py-3">
                <t t-set="item_1" t-value="['About us', 'Discover our culture and our values']"/>
                <t t-set="item_2" t-value="['Customers', 'They trust us since years']"/>
                <t t-set="item_3" t-value="['Services', 'Find the perfect solution for you']"/>
                <t t-set="item_4" t-value="['Blog', 'Latests news and case studies']"/>
                <t t-set="item_5" t-value="['Events', 'Our seminars and trainings for you']"/>
                <t t-set="item_6" t-value="['Help center', 'Contact us for any issue or question']"/>
                <div class="col-12 col-sm-6 col-lg py-2">
                    <nav class="nav flex-column w-100">
                        <t t-foreach="[item_1, item_2, item_3]" t-as="item">
                            <a href="#" class="nav-link o_default_snippet_text px-2 rounded text-wrap" data-name="Menu Item">
                                <div class="media">
                                    <img t-attf-src="/web/image/website.s_mega_menu_images_subtitles_default_image_{{item_index + 1}}" class="mr-3 rounded shadow" alt=""/>
                                    <div class="media-body">
                                        <h4 class="mt-0 mb-0" t-esc="item[0]"/>
                                        <span><font style="font-size: 14px;" t-esc="item[1]"/></span>
                                    </div>
                                </div>
                            </a>
                        </t>
                    </nav>
                </div>
                <div class="col-12 col-sm-6 col-lg py-2">
                    <nav class="nav flex-column w-100">
                        <t t-foreach="[item_4, item_5, item_6]" t-as="item">
                            <a href="#" class="nav-link o_default_snippet_text px-2 rounded text-wrap" data-name="Menu Item">
                                <div class="media">
                                    <img t-attf-src="/web/image/website.s_mega_menu_images_subtitles_default_image_{{item_index + 4}}" class="mr-3 rounded shadow" alt=""/>
                                    <div class="media-body">
                                        <h4 class="mt-0 mb-0" t-esc="item[0]"/>
                                        <span><font style="font-size: 14px;" t-esc="item[1]"/></span>
                                    </div>
                                </div>
                            </a>
                        </t>
                    </nav>
                </div>
                <div class="col col-md-6 col-lg py-2">
                    <img src="/web/image/website.s_mega_menu_images_subtitles_default_image_7" class="mb-3 rounded shadow img-fluid" alt=""/>
                    <h4 class="o_default_snippet_text">The team</h4>
                    <p class="text-muted o_default_snippet_text">
                        <font style="font-size: 14px;">Created in 2021, the company is young and dynamic. Discover the composition of the team and their skills.</font>
                    </p>
                    <a href="#" class="btn btn-primary o_default_snippet_text">Discover our team</a>
                </div>
            </div>
        </div>
    </section>
</template>

<record id="website.s_mega_menu_images_subtitles_css_000" model="ir.asset">
    <field name="name">References 000 SCSS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">website/static/src/snippets/s_mega_menu_images_subtitles/000.scss</field>
</record>

</odoo>
