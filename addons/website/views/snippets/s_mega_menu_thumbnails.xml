                            </t>

                            <div class="w-100 d-none d-lg-block"/>

                            <t t-call="website.s_mega_menu_thumbnails_item">
                                <t t-set="_img_src" t-valuef="/web/image/website.s_mega_menu_thumbnails_default_image_6"/>
                                <t t-set="_text">Tablets</t>
                            </t>
                            <t t-call="website.s_mega_menu_thumbnails_item">
