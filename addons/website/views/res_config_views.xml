<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="view_website_config_settings" model="ir.ui.view">
            <field name="name">Website settings</field>
            <field name="model">website.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Website" class="oe_form_configuration">
                    <header class="o_header_sticky">
                        <button string="Save" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <sheet>
                        <div>
                            <field name="website_id" invisible="1"/>
                            <h2 class="mt32">Webmaster</h2>
                            <div class="row mt16 o_settings_container" id="webmaster_settings">
                                <div class="col-md-6 o_setting_box" id="domain_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane" />
                                        <div class="form-control">
                                            <label string="Browser Thumbnail"/>
                                            <div class="text-muted">
                                                Name and favicon of your website
                                            </div>
                                            <div class="content-group">
                                                <hr class="mt8 mb8" />
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="website_name"/>
                                                    <field name="website_name" class="col-md-8 oe_inline"/>
                                                </div>
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="favicon" />
                                                    <field name="favicon" widget="image" class="col-md-8 oe_inline"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="languages_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane" />
                                        <div class="form-control">
                                            <label for="language_ids"/>
                                            <div class="text-muted">
                                                Languages available on your website
                                            </div>
                                            <div class="content-group">
                                                <hr class="mt8 mb8" />
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="language_ids"/>
                                                    <field name="language_ids" widget="many2many_tags" class="col-md-8 oe_inline"/>
                                                </div>
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="default_lang_id"/>
                                                    <field name="default_lang_id" widget="selection" class="col-md-8 oe_inline"/>
                                                </div>
                                            </div>
                                            <div>
                                                <button type="action" name="%(base.action_view_base_language_install)d" string="Download New Languages" class="btn-link" icon="fa-arrow-right"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="google_analytics_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="has_google_analytics"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="has_google_analytics"/>
                                            <div class="text-muted">
                                                Track visits in Google Analytics
                                            </div>
                                            <div class="content-group" attrs="{'invisible': [('has_google_analytics', '=', False)]}">
                                                <hr class="mt8 mb8" />
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="google_analytics_key"/>
                                                    <field name="google_analytics_key" placeholder="UA-XXXXXXXX-Y" class="col-md-8 oe_inline"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="google_analytics_dashboard_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="has_google_analytics_dashboard"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="has_google_analytics_dashboard"/>
                                            <div class="text-muted">
                                                See Google Analytics data on your Website Dashboard
                                            </div>
                                            <div class="content-group" attrs="{'invisible': [('has_google_analytics_dashboard', '=', False)]}">
                                                <hr class="mt8 mb8" />
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="google_management_client_id"/>
                                                    <field name="google_management_client_id" class="col-md-8 oe_inline"/>
                                                </div>
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="google_management_client_secret"/>
                                                    <field name="google_management_client_secret" class="col-md-8 oe_inline"/>
                                                </div>
                                            </div>
                                            <div attrs="{'invisible': [('has_google_analytics_dashboard', '=', False)]}">
                                                <a href="https://www.odoo.com/documentation/user/9.0/website/google_analytics.html"
                                                    class="oe_link fa fa-arrow-right" target="_blank">
                                                    Tutorial
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="google_maps_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="has_google_maps"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="has_google_maps"/>
                                            <div class="text-muted">
                                                Show your company location on Google Maps in Contact Us page
                                            </div>
                                            <div class="content-group" attrs="{'invisible': [('has_google_maps', '=', False)]}">
                                                <hr class="mt8 mb8" />
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="google_maps_api_key"/>
                                                    <field name="google_maps_api_key" class="col-md-8 oe_inline"/>
                                                </div>
                                            </div>
                                            <div attrs="{'invisible': [('has_google_maps', '=', False)]}">
                                                <a class="btn-link fa fa-arrow-right" target="_blank"
                                                   href="https://console.developers.google.com/flows/enableapi?apiid=maps_backend,static_maps_backend&amp;keyType=CLIENT_SIDE&amp;reusekey=true">
                                                    Create a Google Project and Get a Key
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h2 class="mt32">Social Media</h2>
                            <div class="row mt16 o_settings_container" id="social_media_settings">
                                <div class="col-md-6 o_setting_box" id="social_media_links_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane" />
                                        <div class="form-control">
                                            <label string="Social Media Links"/>
                                            <div class="text-muted">
                                                Social media links in your website footer
                                            </div>
                                            <div class="content-group">
                                                <hr class="mt8 mb8" />
                                                <div name="social_facebook" class="row">
                                                    <label class="col-md-4 oe_light_label" for="social_facebook"/>
                                                    <field name="social_facebook" placeholder="https://www.facebook.com/Odoo" class="col-md-8 oe_inline"/>
                                                </div>
                                                <div name="social_twitter" class="row">
                                                    <label class="col-md-4 oe_light_label" for="social_twitter"/>
                                                    <field name="social_twitter" placeholder="https://twitter.com/Odoo" class="col-md-8 oe_inline"/>
                                                </div>
                                                <div name="social_youtube" class="row">
                                                    <label class="col-md-4 oe_light_label" for="social_youtube"/>
                                                    <field name="social_youtube" placeholder="https://www.youtube.com/user/OpenERPonline" class="col-md-8 oe_inline"/>
                                                </div>
                                                <div name="social_googleplus" class="row">
                                                    <label class="col-md-4 oe_light_label" for="social_googleplus"/>
                                                    <field name="social_googleplus" placeholder="https://plus.google.com/+Odooapps" class="col-md-8 oe_inline"/>
                                                </div>
                                                <div name="social_linkedin" class="row">
                                                    <label class="col-md-4 oe_light_label" for="social_linkedin"/>
                                                    <field name="social_linkedin" placeholder="https://www.linkedin.com/company/odoo" class="oe_inline col-md-8"/>
                                                </div>
                                                <div name="social_github" class="row">
                                                    <label class="col-md-4 oe_light_label" for="social_github"/>
                                                    <field name="social_github" placeholder="https://youraccount.github.io" class="oe_inline col-md-8"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="twitter_roller_install_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_twitter"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_twitter"/>
                                            <div class="text-muted">
                                                Display a Twitter wall on your website
                                            </div>
                                            <div class="content-group" attrs="{'invisible': [('module_website_twitter', '=', False)]}">
                                                <hr class="mt8 mb8" />
                                                <div class="text-warning">Save this page and come back here to set up the feature.</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h2 class="mt32">Features</h2>
                            <div class="row mt16 o_settings_container" id="features_settings">
                                <div class="col-md-6 o_setting_box" id="ecommerce_install_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_sale"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_sale"/>
                                            <div class="text-muted">
                                                Boost your online sales with sleek product pages
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="jobs_install_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_hr_recruitment"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_hr_recruitment"/>
                                            <div class="text-muted">
                                                Promote your job announces and attract new talents
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="blog_install_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_blog"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_blog"/>
                                            <div class="text-muted">
                                                Build up a community with an efficient content strategy
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="slides_install_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_slides"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_slides"/>
                                            <div class="text-muted">
                                                Share videos, presentations and documents
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="subscriptions_install_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_contract" widget="upgrade_boolean"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_contract"/>
                                            <div class="text-muted">
                                                Sell recurring services with automated billing and payments
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="event_ticket_install_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_event_sale"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_event_sale"/>
                                            <div class="text-muted">
                                                Organize events and sell tickets online
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h2 class="mt32">Communication</h2>
                            <div class="row mt16 o_settings_container" id="communication_settings">
                                <div class="col-md-6 o_setting_box" id="contact_form_install_setting">
                                    <div class="input-group" title="The contact form is added to the Contact Us page of your website.">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_crm"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_crm"/>
                                            <div class="text-muted">
                                                Fill in your CRM Pipeline from a contact form
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="custom_forms_install_setting" groups="base.group_no_one">
                                    <div class="input-group" title="Build up your own forms and get requests as emails, leads or issues.
You can also edit the fields of the Extra Step page in eCommerce checkout.">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_form_editor" widget="upgrade_boolean"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_form_editor"/>
                                            <div class="text-muted">
                                                Build up customized forms on your website
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="live_chat_install_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_livechat"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_livechat"/>
                                            <div class="text-muted">
                                                Chat with your visitors in real time
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" id="forum_install_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_forum"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_forum"/>
                                            <div class="text-muted">
                                                Reduce resources spent on support with a website forum
                                            </div>
                                            <div class="content-group"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h2 class="mt32" groups="base.group_no_one">Slides</h2>
                            <div class="row mt16 o_settings_container" id="slides_settings" groups="base.group_no_one">
                                <div class="col-md-6 o_setting_box" id="slides_google_content_setting">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_slides"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="module_website_slides"/>
                                            <div class="text-muted">
                                                Use your own credential to embed Google content
                                            </div>
                                            <div class="content-group">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h2 class="mt32" groups="base.group_no_one">Performance Optimization</h2>
                            <div class="row mt16 o_settings_container" id="performance_settings" groups="base.group_no_one">
                                <div class="col-md-6 o_setting_box" id="cdn_setting">
                                    <div class="input-group" title="A CDN helps you serve your websiteâ€™s content with high availability and high performance to any visitor.">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="cdn_activated"/>
                                        </span>
                                        <div class="form-control">
                                            <label for="cdn_activated"/>
                                            <div class="text-muted">
                                                Use a CDN to serve your website's content with high availability and high performance from anywhere
                                            </div>
                                            <div class="content-group" attrs="{'invisible': [('cdn_activated', '=', False)]}">
                                                <hr class="mt8 mb8" />
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="cdn_url"/>
                                                    <field name="cdn_url" class="col-md-8 oe_inline"
                                                           attrs="{'required': [('cdn_activated', '=', True)]}"
                                                           placeholder="//mycompany.mycdn.com/"
                                                           t-translation="off"/>
                                                </div>
                                                <div class="row">
                                                    <label class="col-md-4 oe_light_label" for="cdn_filters"/>
                                                    <field name="cdn_filters" class="col-md-8 oe_inline"
                                                           attrs="{'required': [('cdn_activated', '=', True)]}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_website_configuration" model="ir.actions.act_window">
            <field name="name">Website Settings</field>
            <field name="res_model">website.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <record id="backend_dashboard" model="ir.actions.client">
            <field name="name">Website Dashboard</field>
            <field name="tag">backend_dashboard</field>
        </record>

        <menuitem id="menu_website_configuration" sequence="215" name="Website Admin"
            groups="website.group_website_designer" web_icon="website,static/description/icon_admin.png"/>

        <menuitem id="menu_dashboard" name="Dashboard" action="website.backend_dashboard" parent="website.menu_website_configuration" sequence="1"/>

        <menuitem id="menu_website_global_configuration" parent="menu_website_configuration"
            sequence="100" name="Configuration" groups="base.group_system"/>
        <menuitem id="menu_website_website_settings" parent="menu_website_global_configuration" name="Settings" action="action_website_configuration"/>

</odoo>
