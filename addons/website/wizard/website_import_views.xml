<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_website_import_wizard" model="ir.ui.view">
        <field name="name">website.import.wizard.form</field>
        <field name="model">website.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Website" groups="base.group_system">
                <group>
                    <field name="import_file" filename="import_filename" required="1"/>
                </group>
                <group string="New Website">
                    <field name="website_name" required="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
                <footer>
                    <button string="Import" type="object" name="action_import"
                        class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_website_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Website</field>
        <field name="res_model">website.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_website_import_wizard"/>
        <field name="target">new</field>
    </record>

    <record id="view_website_import_summary_wizard" model="ir.ui.view">
        <field name="name">website.import.summary.wizard.form</field>
        <field name="model">website.import.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Summary">
                <group>
                    <field name="website_name" readonly="1"/>
                </group>
                <group string="Imported Records">
                    <field name="pages_count" readonly="1"/>
                    <field name="menus_count" readonly="1"/>
                    <field name="attachments_count" readonly="1"/>
                </group>
                <footer>
                    <button string="Go to Homepage" type="object" name="action_go_homepage" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="menu_website_import_wizard"
        name="Import Website"
        parent="website.menu_website_global_configuration"
        action="action_website_import_wizard"
        groups="base.group_system"
        sequence="50"/>

</odoo>
