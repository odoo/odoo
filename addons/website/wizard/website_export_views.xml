<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_website_export_wizard" model="ir.ui.view">
        <field name="name">website.export.wizard.form</field>
        <field name="model">website.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Website">
                <group>
                    <field name="website_id" groups="website.group_website_designer"/>
                    <field name="page_scope" widget="radio"
                        options="{'horizontal': true}"
                        groups="website.group_website_designer"
                        required="1"/>
                    <field name="page_ids" groups="website.group_website_designer"
                        invisible="page_scope != 'selection'"
                        options="{'no_create': True, 'no_create_edit': True}">
                        <list create="0" edit="0" delete="0">
                            <field name="name" string="Page Title"/>
                            <field name="url" string="Page URL"/>
                        </list>
                    </field>
                    <field name="include_assets" groups="website.group_website_designer"/>
                </group>
                <footer>
                    <button string="Export" type="object" name="action_export" class="btn-primary" groups="website.group_website_designer"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_website_export_wizard" model="ir.actions.act_window">
        <field name="name">Export Website</field>
        <field name="res_model">website.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_website_export_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_website_export_wizard"
        name="Export Website"
        parent="website.menu_website_global_configuration"
        action="action_website_export_wizard"
        groups="website.group_website_designer,base.group_system"
        sequence="50"/>

</odoo>
