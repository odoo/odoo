    <WeCollapse>
        <t t-set-slot="first">
            <WeRow title.translate="Paddings">
                <WeInput tooltip="'Y'" customizeWebsiteVariable="''" variable="'input-padding-y'" unit="'px'" saveUnit="'rem'"/>
                <WeInput tooltip="'X'" customizeWebsiteVariable="''" variable="'input-padding-x'" unit="'px'" saveUnit="'rem'"/>
            </WeRow>
        </t>
