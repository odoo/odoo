    <WeCollapse>
        <t t-set-slot="first">
            <WeRow title.translate="Border Radius">
                <WeInput customizeWebsiteVariable="''" variable="'input-border-radius'" unit="'px'" saveUnit="'rem'"/>
            </WeRow>
        </t>
        <WeRow class="'o_we_sublevel_1'" title.translate="Small">
            <WeInput customizeWebsiteVariable="''" variable="'input-border-radius-sm'" unit="'px'" saveUnit="'rem'"/>
        </WeRow>
        <WeRow class="'o_we_sublevel_1'" title.translate="Large">
            <WeInput customizeWebsiteVariable="''" variable="'input-border-radius-lg'" unit="'px'" saveUnit="'rem'"/>
