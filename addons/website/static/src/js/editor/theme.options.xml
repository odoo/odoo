    </WeCollapse>
    <WeRow title.translate="Background">
        <WeColorpicker tooltip.translate="Background"
            noTransparency="'true'"
            customizeWebsiteColor="''"
            color="'input'"/>
    </WeRow>
</t>
<t t-name="website.theme_advanced_option">
    <WeRow title.translate="Show Header">
        <WeCheckbox
                     customizeWebsiteViews="'website.option_layout_hide_header|'"
                     reload="'/'"/>
    </WeRow>
    <WeRow title.translate="Code Injection" tooltip.translate="Enter code that will be added into every page of your site">
        <WeButton noPreview="'true'" openCustomCodeDialog="'head'">&lt;head&gt; and &lt;/body&gt;</WeButton>
    </WeRow>
    <WeRow title.translate="Google Map">
        <WeButton configureApiKey="''" noPreview="'true'">Custom Key</WeButton>
    </WeRow>
    <WeRow title.translate="Status Colors">
        <WeColorpicker tooltip.translate="Success" customizeWebsiteColor="''" colorType="'theme'" color="'success'" selectedTab="'custom-colors'"/>
        <WeColorpicker tooltip.translate="Info" customizeWebsiteColor="''" colorType="'theme'" color="'info'" selectedTab="'custom-colors'"/>
        <WeColorpicker tooltip.translate="Warning" customizeWebsiteColor="''" colorType="'theme'" color="'warning'" selectedTab="'custom-colors'"/>
        <WeColorpicker tooltip.translate="Error" customizeWebsiteColor="''" colorType="'theme'" color="'danger'" selectedTab="'custom-colors'"/>
    </WeRow>
    <WeCollapse>
        <t t-set-slot="first">
            <we-row class="o_we_gray_preview o_we_collapse_toggler">
                <we-title>Grays</we-title>
                <div>
                    <t t-set="gray_header">Gray</t>
                    <t t-foreach="['900', '800', '700', '600', '500', '400', '300', '200', '100']" t-as="grayCode" t-key="grayCode">
                        <span t-attf-title="#{gray_header} #{grayCode}"
                              t-attf-variable="#{grayCode}"
                              t-attf-style="background-color: #{renderContext.grays[grayCode]} !important;"
                              t-attf-class="o_we_user_value_widget o_we_gray_preview bg-#{grayCode}"/>
                    </t>
                </div>
            </we-row>
        </t>
        <WeRow class="'o_we_sublevel_1'" title.translate="Hue">
            <WeRange class="'o_we_slider_tint'" customizeGray="''" param="'gray-hue'" min="'0'" max="'359.9'" step="'0.1'"/>
        </WeRow>
        <WeRow class="'o_we_sublevel_1'" title.translate="Saturation">
            <WeRange customizeGray="''" param="'gray-extra-saturation'" step="'0.1'"
                min="renderContext.extraSaturationRangeMin.toString()"
                max="renderContext.extraSaturationRangeMax.toString()"
            />
        </WeRow>
    </WeCollapse>
</t>
</templates>
