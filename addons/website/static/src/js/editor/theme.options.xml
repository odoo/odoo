            <WeInput tooltip="'Y'" customizeWebsiteVariable="''" variable="'input-padding-y-lg'" unit="'px'" saveUnit="'rem'"/>
            <WeInput tooltip="'X'" customizeWebsiteVariable="''" variable="'input-padding-x-lg'" unit="'px'" saveUnit="'rem'"/>
        </WeRow>
    </WeCollapse>
    <WeCollapse>
        <t t-set-slot="first">
            <WeRow title.translate="Font Size">
                <WeInput customizeWebsiteVariable="''" variable="'input-font-size'" unit="'px'" saveUnit="'rem'"/>
            </WeRow>
        </t>
        <WeRow class="'o_we_sublevel_1'" title.translate="Small">
            <WeInput customizeWebsiteVariable="''" variable="'input-font-size-sm'" unit="'px'" saveUnit="'rem'"/>
        </WeRow>
        <WeRow class="'o_we_sublevel_1'" title.translate="Large">
            <WeInput customizeWebsiteVariable="''" variable="'input-font-size-lg'" unit="'px'" saveUnit="'rem'"/>
