<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
<t t-name="website.WebsiteDialog">
    <Dialog contentClass="this.contentClasses"
        footer="this.props.showFooter ? undefined : false"
        size="this.props.size"
        title="this.props.title"
        modalRef="this.modalRef">
        <t t-set-slot="default">
            <t t-if="this.props.slots and this.props.slots.default" t-slot="default"/>
            <t t-else="" t-esc="this.props.body"/>
        </t>
        <t t-if="this.props.showFooter" t-set-slot="footer">
            <t t-if="this.props.slots and this.props.slots.footer" t-slot="footer"/>
            <t t-else="">
                <button class="btn btn-primary" t-on-click="this.protectedClick(this.props.primaryClick)" t-att-disabled="this.state.disabled" data-hotkey="q">
                    <t t-esc="this.props.primaryTitle"/>
                </button>
                <button t-if="this.props.showSecondaryButton" class="btn btn-secondary" t-on-click="this.protectedClick(this.props.secondaryClick)" t-att-disabled="this.state.disabled" data-hotkey="x">
                    <t t-esc="this.props.secondaryTitle"/>
                </button>
            </t>
        </t>
    </Dialog>
</t>

</templates>
