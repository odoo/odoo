<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website.RedirectField" owl="1">
    <button type="button" class="oe_stat_button btn btn-light w-100 mb-0 py-0 border-0 border-start border-bottom rounded-0 text-start text-nowrap text-capitalize"
        t-on-click="onClick"
        t-att-aria-label="info"
        t-att-title="info">
        <i class="fa fa-fw o_button_icon fa-globe" t-att-class="this.props.record.data[this.props.name] ? 'text-success' : 'text-danger'"/>
        <div class="o_stat_info">
            <span class="o_stat_text">Go to<br/>Website</span>
        </div>
    </button>
</t>

</templates>
