<?xml version="1.0" encoding="UTF-8"?>
<templates>

<t t-name="website.PageUrlField" t-inherit="web.UrlField" t-inherit-mode="primary">
    <xpath expr="//input" position="before">
        <t t-set="slicingLength" t-value="this.env.isSmall ? 30 : 45"/>
        <div
            class="input-group-text rounded-start text-lowercase border-0"
            t-esc="this.serverUrl.length > this.slicingLength ? this.serverUrl.slice(0, (this.slicingLength / 2) - 1) + '..' + this.serverUrl.slice((-this.slicingLength / 2) + 1) : this.serverUrl"
        />
    </xpath>
</t>

<t t-name="website.FieldImageRadio">
    <fieldset class="o_image_radio d-flex">
        <t t-foreach="this.values" t-as="option" t-key="this.option">
            <div class="flex-fill text-center">
                <label t-att-for="option[0]" class="d-inline">
                    <img t-attf-class="o_image_radio_option w-50 {{option[0] === this.props.record.data[this.props.name] ? 'active' : ''}}" t-att-src="option[2]"/>
                </label>
                <input type="radio" name="field_image_radio"
                        class="o_image_radio_option_checkbox visually-hidden"
                        t-att-id="option[0]"
                        t-on-change="() => this.onSelectValue(option[0])"/>
            </div>
        </t>
    </fieldset>
</t>

<t t-name="website.UrlWarningBannerVisibilityCharField" t-inherit="web.CharField" t-inherit-mode="primary">
    <xpath expr="//input" position="attributes">
        <attribute name="t-on-focus">this.onFocus</attribute>
    </xpath>
</t>

</templates>
