<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="website.BuilderOptions" t-inherit="html_builder.BuilderOptions">
        <!-- To add t-set if needed -->
        <xpath expr="//t[@t-set][last()]" position="after">
        </xpath>

        <xpath expr="//replace_media_option" position="before">
            <portal_option
                template="website.PortalOption"
                selector=".o_portal_index_card > a"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <portal_card_visibility_option
                selector=".o_portal_wrap"
                editableOnly="false"
                reloadTarget="true"
                groups='["website.group_website_designer"]'/>
            <floating_blocks_block_mobile_option selector=".s_floating_blocks .s_floating_blocks_block" applyTo=".container-fluid"/>
            <embed_code_option template="website.EmbedCodeOption" selector=".s_embed_code"/>
            <faq_horizontal_option template="website.FaqHorizontalOption" selector=".s_faq_horizontal"/>
            <media_list_option template="website.MediaListOption" selector=".s_media_list"/>
            <add_product_option
                selector=".s_pricelist_boxed"
                props='{ "buttonApplyTo": ":scope > :has(.s_pricelist_boxed_item):not(:has(.row > div .s_pricelist_boxed_item))", "productSelector": ".s_pricelist_boxed_item" }'/>
            <add_product_option
                selector=".s_pricelist_boxed_section"
                props='{ "buttonApplyTo": ":scope > :has(.s_pricelist_boxed_item)", "productSelector": ".s_pricelist_boxed_item" }'/>
            <add_product_option
                selector=".s_pricelist_cafe"
                props='{ "buttonApplyTo": ":scope > :has(.s_pricelist_cafe_item):not(:has(.row > div .s_pricelist_cafe_item))", "productSelector": ".s_pricelist_cafe_item" }'/>
            <vertical_alignment_option
                selector=".s_pricelist_cafe"
                applyTo=".row:has(.s_pricelist_cafe_col)"
                props='{ "level": 0 }'/>
            <add_product_option
                selector=".s_pricelist_cafe .row > div"
                props='{ "buttonApplyTo": ":scope > :has(.s_pricelist_cafe_item)", "productSelector": ".s_pricelist_cafe_item" }'/>
            <add_product_option
                selector=".s_product_catalog"
                props='{ "buttonApplyTo": ":scope > :has(.s_product_catalog_dish):not(:has(.row > div .s_product_catalog_dish))", "productSelector": ".s_product_catalog_dish" }'/>
            <add_product_option
                selector=".s_product_catalog .row > div"
                props='{ "buttonApplyTo": ":scope > :has(.s_product_catalog_dish)", "productSelector": ".s_product_catalog_dish" }'/>
            <timeline_list_option template="website.TimelineListOption" selector=".s_timeline_list"/>
            <dot_color_option template="website.DotColorOption" selector=".s_timeline_list .s_timeline_list_row"/>
            <timeline_images_option template="website.TimelineImagesOption" selector=".s_timeline_images"/>
        </xpath>

        <xpath expr="//replace_media_option" position="after">
            <font_awesome_option selector="span.fa, i.fa, .social_media_img" exclude="[data-oe-xpath]"/>
        </xpath>

        <xpath expr="//image_tool_option" position="after">
            <image_pop_up_option template="website.ImagePopUpOption" selector="img" exclude="a img, header img, footer img, .s_image_gallery img"/>
        </xpath>

        <xpath expr="//image_and_fa_option" position="after">
            <dynamic_svg_option t-att-selector="dynamicSVGSelector"/>
        </xpath>

        <xpath expr="//text_alignment_option" position="after">
            <social_media_option
                template="website.SocialMediaOption"
                selector=".s_share, .s_social_media"/>
        </xpath>

        <xpath expr="//block_alignment_option" position="after">
            <size_option template="website.SizeOption" selector=".s_alert"/>
            <ecomm_categories_showcase_option
                template="website.EcommCategoriesShowcaseOption"
                selector=".s_ecomm_categories_showcase"/>
            <website_background_option
                t-att-selector="blockquoteParentHandlers"
                t-att-applyTo="blockquoteDisableWidthApplyTo"
                props='{ "withColors": true,"withImages": true, "withShapes": true, "withColorCombinations": true }'/>
            <website_background_option
                selector="section"
                applyTo=":scope > .carousel:not(.s_carousel_cards)"
                props='{ "withColors": true, "withImages": true, "withVideos": true, "withShapes": true, "withColorCombinations": true }'/>
            <website_background_option
                selector=".s_process_step .s_process_step_number"
                props='{ "withColors": true, "withImages": false, "withColorCombinations": false }'/>
            <website_background_option
                t-att-selector="cardParentHandlers"
                t-att-applyTo="websiteBgApplyTo"
                props='{ "withColors": true, "withImages": true, "withShapes": true, "withColorCombinations": true }'/>
            <website_background_option
                t-att-selector="websiteBackgroundBgColorImageOptionSelector"
                t-att-exclude="websiteBackgroundBgColorImageOptionExclude"
                props='{ "withColors": true, "withImages": true, "withVideos": true, "withShapes": true, "withColorCombinations": true }'/>
            <website_background_option
                t-att-selector="websiteBackgroundBgColorOptionSelector"
                t-att-exclude="websiteBackgroundBgColorOptionExclude"
                props='{ "withColors": true, "withImages": false, "withColorCombinations": true }'/>
            <website_background_option
                t-att-selector="baseOnlyBgImageSelector"
                props='{ "withColors": false, "withImages": true, "withVideos": true, "withShapes": true, "withColorCombinations": false }'/>
        </xpath>

        <xpath expr="//many2one_option" position="after">
            <carousel_option
                template="website.CarouselOption"
                selector="section"
                exclude=".s_carousel_intro_wrapper, .s_carousel_cards_wrapper, .s_quotes_carousel_wrapper:has(>.s_quotes_carousel_compact)"
                applyTo=":scope > .carousel"/>
            <carousel_bottom_controllers_option
                template="website.CarouselBottomControllersOption"
                selector="section"
                applyTo=".s_carousel_intro, .s_quotes_carousel_compact"/>
            <floating_blocks_cards_option
                template="website.FloatingBlocksCardsOption"
                selector=".s_floating_blocks"/>
            <form_option
                selector=".s_website_form"
                applyTo="form"/>
            <form_field_option_redraw
                selector=".s_website_form_field"
                exclude=".s_website_form_dnone"/>
            <website_form_submit_option
                template="website.s_website_form_submit_option"
                selector=".s_website_form_submit"
                exclude=".s_website_form_no_submit_options"/>
            <accordion_option template="website.AccordionOption" selector=".s_accordion"/>
            <accordion_item_option template="website.AccordionItemOption" selector=".s_accordion .accordion-item"/>
            <chart_option selector=".s_chart"/>
            <controller_page_listing_layout_option
                template="website.ControllerPageListingLayoutOption"
                selector=".listing_layout_switcher"
                title="Layout"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <cookies_bar_option template="website.CookiesBarOption" selector="#website_cookies_bar" applyTo=".modal"/>
            <facebook_option template="website.FacebookOption" selector=".o_facebook_page"/>
            <footer_copyright_option
                selector="#wrapwrap > footer .o_footer_copyright"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <gallery_element_option
                selector=".s_image_gallery img, .s_carousel .carousel-item, .s_quotes_carousel .carousel-item, .s_carousel_intro .carousel-item, .s_carousel_cards .carousel-item"/>
            <google_maps_option selector=".s_google_map"/>
            <image_gallery_images_option template="website.ImageGalleryImagesOption" selector=".s_image_gallery"/>
            <map_option template="website.mapOption" selector=".s_map"/>
            <blockquote_option selector=".s_blockquote" t-att-exclude="specialBlockquoteSelector"/>
            <blockquote_option
                t-att-selector="blockquoteParentHandlers"
                t-att-applyTo="blockquoteDisableWidthApplyTo"
                props='{ "disableWidth": true }'/>
            <progress_bar_option selector=".s_progress_bar"/>
            <searchbar_option
                selector=".s_searchbar_input"
                applyTo=".search-query"/>
            <breadcrumb_option
                selector=".o_page_breadcrumb"
                groups='["website.group_website_designer"]'
                editableOnly="false"/>
            <table_of_content_option template="website.TableOfContentOption" selector=".s_table_of_content"/>
            <table_of_content_navbar_option template="website.TableOfContentNavbarOption" selector=".s_table_of_content_navbar_wrap"/>
            <card_option selector=".s_card" t-attf-exclude="div:is({{cardParentHandlers}}) > .s_card"/>
            <card_option
                t-att-selector="cardParentHandlers"
                t-att-applyTo="cardDisableWidthApplyTo"
                props='{ "disableWidth": true }'/>
            <carousel_cards_item_option selector=".s_carousel_cards_item" applyTo=":scope > .s_carousel_cards_card"/>
            <info_page_option
                template="website.InfoPageOption"
                selector="main:has(.o_website_info)"
                title="Info Page"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <avatars_option
                template="website.AvatarsOption"
                selector=".s_avatars"/>
            <popup_option template="website.PopupOption" selector=".s_popup"/>
            <switchable_views
                selector=".o_portal_wrap"
                groups='["website.group_website_designer"]'
                editableOnly="false"/>
            <dot_color_option template="website.DotColorOption" selector=".s_timeline_images .s_timeline_images_row"/>
            <!-- TODO DUAU: all modules specific options were between those two, should I add a "hook" there? -->
            <layout_option
                selector="section, section.s_carousel_wrapper .carousel-item, .s_carousel_intro_item"
                exclude=".s_dynamic, .s_dynamic_snippet_content, .s_dynamic_snippet_title, .s_masonry_block, .s_framed_intro, .s_features_grid, .s_media_list, .s_table_of_content, .s_process_steps, .s_image_gallery, .s_pricelist_boxed, .s_quadrant, .s_pricelist_cafe, .s_faq_horizontal, .s_image_frame, .s_card_offset, .s_contact_info, .s_tabs, .s_tabs_images, .s_floating_blocks .s_floating_blocks_block, .s_banner_categories, .s_splash_intro"
                applyTo=":scope > *:has(> .row), :scope > .s_allow_columns"/>
        </xpath>

        <xpath expr="//layout_column_option" position="after">
            <floating_blocks_block_option selector=".s_floating_blocks .s_floating_blocks_block"/>
            <layout_grid_option
                selector="section.s_masonry_block, section.s_quadrant, section.s_image_frame, section.s_card_offset, section.s_contact_info, section.s_framed_intro, section.s_banner_categories"
                applyTo=":scope > *:has(> .row)"/>
        </xpath>

        <xpath expr="//vertical_justify_option" position="before">
            <ecomm_categories_showcase_block_design
                template="website.EcommCategoriesShowcaseBlockDesign"
                selector=".s_ecomm_categories_showcase_block"/>
            <timeline_option template="website.TimelineOption" selector=".s_timeline"/>
            <bento_border_option template="html_builder.BentoBorderOption" selector=".s_bento_banner section[data-name='Card'], .s_bento_block_card"/>
            <announcement_scroll_option
                template="website.AnnouncementScrollOption"
                selector="section.s_announcement_scroll"/>
            <carousel_cards_option
                template="website.CarouselCardsOption"
                selector="section"
                applyTo=".s_carousel_cards"/>
            <grid_columns_option selector=".row:not(.s_col_no_resize) > div"/>
            <border_option
                template="website.BorderOption"
                selector="section .row > div, section:has(.s_carousel_cards)"
                t-attf-exclude=".s_col_no_bgcolor, .s_col_no_bgcolor.row > div, .s_image_gallery .row > div, .s_masonry_block .s_col_no_resize, .s_text_cover .row > .o_not_editable, {{cardParentHandlers}}, {{blockquoteParentHandlers}}"/>
            <vertical_alignment_option
                selector=".s_attributes_vertical_col"
                applyTo=":scope > .row"
                props='{ "level": 0, "justify": false }'/>
            <mega_menu_option selector=".o_mega_menu"/>
            <navbar_logo_option
                template="website.NavbarLogoOption"
                selector="#wrapwrap > header nav.navbar .navbar-brand"
                title="Navbar Logo"
                groups='["website.group_website_designer"]'
                editableOnly="false"/>
            <header_template_option
                selector="#wrapwrap > header"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <top_menu_visibility_option
                selector="[data-main-object]:has(input.o_page_option_data[name='header_visible']) #wrapwrap > header"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <header_font_option
                template="website.HeaderFontOption"
                selector="#wrapwrap > header"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <header_box_option
                selector="#wrapwrap > header"
                applyTo=".navbar:not(.d-none)"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <language_selector_option
                template="website.LanguageSelectorOption"
                selector="#wrapwrap > header nav.navbar .o_header_language_selector"
                groups='["website.group_website_designer"]'
                reloadTarget="true"
                editableOnly="false"/>
            <header_navigation_option
                selector="#wrapwrap > header"
                editableOnly="false"
                reloadTarget="true"
                groups='["website.group_website_designer"]'/>
            <header_elements_option
                selector="#wrapwrap > header"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <header_icon_background_option
                template="website.HeaderIconBackgroundOption"
                selector="#wrapwrap > header"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <footer_template_option
                selector="#wrapwrap > footer"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <footer_colors_option
                template="website.FooterColorsOption"
                selector="#wrapwrap > footer"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <footer_width_option
                template="website.FooterWidthOption"
                selector="#wrapwrap > footer"
                applyTo=":is(:scope > #footer > section, .o_footer_copyright) > :is(.container, .container-fluid, .o_container_small)"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <footer_slideout_option
                template="website.FooterSlideoutOption"
                selector="#wrapwrap > footer"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <footer_scroll_to_top_option
                template="website.FooterScrollToTopOption"
                selector="#wrapwrap > footer"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <toggle_footer_copyright_option
                template="website.ToggleFooterCopyrightOption"
                selector="#wrapwrap > footer"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <toggle_footer_cookies_policy_link_option
                template="website.ToggleFooterCookiePolicyLinkOption"
                selector="#wrapwrap:has(#website_cookies_bar) > footer"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <hide_footer_option
                template="website.HideFooterOption"
                selector="[data-main-object]:has(input.o_page_option_data[name='footer_visible']) #wrapwrap > footer"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <footer_border_option
                template="website.FooterBorder"
                selector="#wrapwrap > footer"
                applyTo="#footer"
                editableOnly="false"
                groups='["website.group_website_designer"]'/>
            <content_width_option
                template="website.ContentWidthOption"
                selector="section, .s_carousel .carousel-item, .s_carousel_intro_item"
                exclude="[data-snippet] :not(.oe_structure) > [data-snippet],#footer > *,#o_wblog_post_content *, .s_bento_banner section[data-name='Card'],.s_floating_blocks .s_floating_blocks_block, .s_bento_block_card"
                applyTo=":scope > .container, :scope > .container-fluid, :scope > .o_container_small"/>
            <process_steps_option selector=".s_process_steps"/>
            <scroll_button_option
                selector="section"
                exclude="[data-snippet] :not(.oe_structure) > [data-snippet], .s_instagram_page, .o_facebook_page, .o_mega_menu > section, .s_appointments .s_dynamic_snippet_content, .s_bento_banner section[data-name='Card'], .s_floating_blocks, .s_floating_blocks .s_floating_blocks_block, .s_bento_block_card, .s_dynamic_category, .s_dynamic_category .s_dynamic_snippet_title, .s_announcement_scroll"/>
            <countdown_option selector=".s_countdown"/>
            <carousel_slides_option
                template="website.CarouselSlidesOption"
                selector=".carousel .carousel-item"
                exclude=".s_image_gallery .carousel-item"/>
            <dynamic_snippet_option selector=".s_dynamic_snippet"/>
            <dynamic_snippet_carousel_option selector=".s_dynamic_snippet_carousel"/>
            <image_gallery_option selector=".s_image_gallery"/>
            <instagram_option template="website.InstagramOption" selector=".s_instagram_page"/>
            <nav_tabs_style_option
                template="website.NavTabsStyleOption"
                selector=".s_tabs"
                applyTo=".s_tabs_main"/>
            <nav_tabs_images_style_option
                template="website.NavTabsImagesStyleOption"
                selector=".s_tabs_images"
                applyTo=".s_tabs_main"/>
            <price_list_boxed_description_option template="website.PriceListBoxedDescriptionOption" selector=".s_pricelist_boxed"/>
            <price_list_cafe_description_option template="website.PriceListCafeDescriptionOption" selector=".s_pricelist_cafe"/>
            <product_catalog_description_option template="website.ProductCatalogDescriptionOption" selector=".s_product_catalog"/>
            <dot_lines_color_option
                template="website.DotLinesColorOption"
                selector=".s_timeline_list"/>
            <dot_lines_color_option
                template="website.DotLinesColorOption"
                selector=".s_timeline_images"/>
            <dot_lines_color_option
                template="website.DotLinesColorOption"
                selector=".s_timeline"/>
            <dot_color_option template="website.DotColorOption" selector=".s_timeline .s_timeline_row"/>
            <popup_cookies_option
                template="website.PopupCookiesOption"
                selector=".s_popup#website_cookies_bar"
                applyTo=".modal"/>
            <grid_image_option selector="img"/>
        </xpath>

        <xpath expr="//badge_option" position="after">
            <animate_option
                selector=".o_animable, section .row > div, img, .fa, .btn"
                t-attf-exclude="[data-oe-xpath], .o_not-animable, .s_col_no_resize.row > div, .s_col_no_resize, .s_social_media i.fa, .s_share i.fa, {{socialMediaElementsSelector}}, {{specialBlockquoteSelector}}"/>
            <animate_option selector=".s_social_media, .s_share" t-att-applyTo="socialMediaElementsSelector"/>
            <visibility_option selector="section, .s_hr"/>
            <device_visibility_option
                template="website.DeviceVisibilityOption"
                t-att-selector="deviceVisibilityOptionSelector"
                exclude=".s_col_no_resize.row > div, .s_masonry_block .s_col_no_resize"/>
            <floating_blocks_design_option
                template="website.FloatingBlocksDesignOption"
                selector=".s_floating_blocks"/>
            <ecomm_categories_showcase_blocks_design
                template="website.EcommCategoriesShowcaseBlocksDesign"
                selector=".s_ecomm_categories_showcase"/>
            <media_list_item_option selector=".s_media_list_item" shouldHaveColor="true"/>
        </xpath>
    </t>
</templates>
