<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website.ListGroupOption" >
    <BuilderRow label.translate="Color">
        <BuilderColorPicker enabledTabs = "['solid', 'custom']" action="'iconColor'" />
    </BuilderRow>
    <BuilderRow label.translate="Background">
        <BuilderColorPicker enabledTabs = "['custom', 'gradient']" action="'iconBackgroundColor'" />
    </BuilderRow>
    <BuilderRow label.translate="Replace Icons" tooltip.translate="Replace all icons at once">
        <BuilderButton action="'replaceListIcon'" preview="false"><i class="fa fa-fw fa-refresh me-1"/>Replace</BuilderButton>
    </BuilderRow>
</t>

</templates>
