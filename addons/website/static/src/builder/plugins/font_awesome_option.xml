<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website.WebsiteFontAwesomeOption" t-inherit="html_builder.FontAwesomeOption" t-inherit-mode="primary">
    <xpath expr="//BuilderRow[@label.translate='Background Color']" position="attributes">
        <attribute name="t-if">state.showBackground</attribute>
    </xpath>
    <xpath expr="//BuilderRow[@label.translate='Size']" position="attributes">
        <attribute name="t-if">state.showSize</attribute>
    </xpath>
    <xpath expr="//BorderConfigurator" position="attributes">
        <attribute name="withRoundCorner">false</attribute>
        <attribute name="t-if">state.showBorder</attribute>
    </xpath>
</t>

</templates>
