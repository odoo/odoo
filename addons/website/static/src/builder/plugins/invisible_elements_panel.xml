<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">


<t t-name="html_builder.InvisibleElementsPanel">
    <div class="o_we_invisible_el_panel d-contents" t-if="getEntries().length">
        <div class="o_panel_header">
            Invisible Elements
        </div>
        <t t-foreach="getEntries()" t-as="invisibleEntry" t-key="invisibleEntry_index">
            <t t-call="html_builder.invisibleSnippetEntry" t-call-context="{ entry: invisibleEntry, isRoot: true, getSnippetName }"/>
        </t>
    </div>
</t>

<t t-name="html_builder.invisibleSnippetEntry">
    <div class="o_we_invisible_entry d-flex py-1 align-items-center justify-content-between"
        t-att-class="{'o_we_invisible_root_parent': isRoot and entry.children.length > 0, 'o_we_sublevel_1': !isRoot}"
        t-on-click="entry.toggleInvisibleEntry">
        <div class="o_title" t-out="getSnippetName(entry.el)"/>
        <i class="fa ms-2" t-att-class="entry.visible ? 'fa-eye' : 'fa-eye-slash'"></i>
    </div>
    <ul t-if="entry.visible and entry.children.length > 0">
        <t t-foreach="entry.children" t-as="child" t-key="child_index">
            <li>
                <t t-call="html_builder.invisibleSnippetEntry" t-call-context="{ entry: child, getSnippetName }"/>
            </li>
        </t>
    </ul>
</t>

</templates>
