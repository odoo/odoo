<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website.AvatarsOption">
    <BuilderRow label.translate="Size">
        <BuilderRange
            styleAction="'--avatars-size'"
            min="2"
            max="6"
            step="0.1"
            displayRangeValue="false"
            unit="'rem'"
        />
    </BuilderRow>
    <BuilderRow label.translate="Order">
        <BuilderSelect>
            <BuilderSelectItem classAction="''">Last on top</BuilderSelectItem>
            <BuilderSelectItem classAction="'o_first_on_top'">First on top</BuilderSelectItem>
        </BuilderSelect>
    </BuilderRow>

    <BuilderRow label.translate="Alignment">
        <BuilderButtonGroup>
            <BuilderButton
                className="'fa fa-fw fa-align-left'"
                title.translate="Left"
                classAction="''"
            />
            <BuilderButton
                className="'fa fa-fw fa-align-center'"
                title.translate="Center"
                classAction="'o_avatars_center'"
            />
            <BuilderButton
                className="'fa fa-fw fa-align-right'"
                title.translate="Right"
                classAction="'o_avatars_end'"
            />
        </BuilderButtonGroup>
    </BuilderRow>
    
    <BuilderRow label.translate="Direction" t-if="isActiveItem('avatars_has_label_opt')">
        <BuilderButtonGroup>
            <BuilderButton
                className="'oi oi-fw oi-arrows-h'"
                title.translate="Row"
                classAction="'flex-row'"
            />
            <BuilderButton
                className="'oi oi-fw oi-arrows-v'"
                title.translate="Column"
                classAction="'flex-column'"
            />
        </BuilderButtonGroup>
    </BuilderRow>

    <BuilderRow label.translate="Extra Content">
        <BuilderButton
            className="'flex-basis-50'"
            title.translate="Show 'More'"
            action="'avatarsAddContent'"
            actionParam="{
                elSelector: '.s_avatars_more',
                elView: 'website.s_avatars.more',
                elParent: '.s_avatars_rules_collector',
            }"
        >
            More
        </BuilderButton>
        <BuilderButton
            id="'avatars_has_label_opt'"
            className="'flex-basis-50'"
            title.translate="Text"
            action="'avatarsAddContent'"
            actionParam="{
                elSelector: ['.s_avatars_label'],
                elView: ['website.s_avatars.label'],
            }"
        >
            Label
        </BuilderButton>
    </BuilderRow>

    <BuilderContext applyTo="'.s_avatars_rules_collector'">
        <BorderConfigurator withRoundCorner="false" label.translate="Border"/>
        <BuilderRow label.translate="Roundness" tooltip.translate="Applies to all avatars and count">
            <BuilderRange
                action="'setClassRange'"
                actionParam="['rounded-0','rounded-1','rounded-2','rounded-3','rounded-4','rounded-5', 'rounded-circle']"
                max="6"
                displayRangeValue="false"
            />
        </BuilderRow>
    </BuilderContext>
</t>

</templates>
