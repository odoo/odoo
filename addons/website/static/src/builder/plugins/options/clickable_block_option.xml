<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website.ClickableBlockOption">
    <BuilderRow label.translate="Make it clickable" tooltip.translate="Enable to add a link to the element">
        <BuilderCheckbox id="'is_clickable_opt'" action="'setBlockClickable'"/>
    </BuilderRow>

    <BuilderRow t-if="isActiveItem('is_clickable_opt')" label.translate="Your URL" level="1">
        <BuilderUrlPicker action="'setBlockAnchorUrl'" placeholder.translate="e.g. /page or URL" preview="false"/>
    </BuilderRow>

    <BuilderRow t-if="state.hasHref" label.translate="Open in New Tab" tooltip.translate="Enable this to open the link in a new browser tab" level="1">
        <BuilderCheckbox applyTo="'.stretched-link'" attributeAction="'target'" attributeActionValue="'_blank'" preview="false"/>
    </BuilderRow>
</t>

</templates>
