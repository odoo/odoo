<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="website.PortalOption">
        <BuilderRow label.translate="Background Color">
            <BuilderColorPicker
            defaultColor="''"
            action="'customizeWebsiteColor'"
            actionParam="{
                mainParam: 'menu-portal-card-custom',
                gradientColor: 'menu-portal-gradient',
                combinationColor: 'menu-portal-card',
            }"/>
        </BuilderRow>
        <BorderConfigurator label.translate="Border" withBSClass="false" action="'styleActionPortal'"/>
    </t>
</templates>
