<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website.AvatarsHeaderMiddleButtons">
    <button class="btn btn-success-color-hover ms-0 py-0 px-1 me-1"
            title.translate="Add Avatar"
            aria-label="Add Avatar"
            t-on-click="addAvatar">
        <span class="oi oi-fw oi-plus"/>
        <span class="oi oi-user"/>
    </button>
    <button class="btn btn-danger-color-hover py-0 px-1 me-3"
            t-att-class="state.avatarEls.length lt 2 ? 'disabled' : ''"
            title="Remove Avatar"
            aria-label="Remove Avatar"
            t-on-click="removeAvatar">
        <span class="oi oi-fw oi-minus"/>
        <span class="oi oi-user"/>
    </button>
</t>

</templates>
