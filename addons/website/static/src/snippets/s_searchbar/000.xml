<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<!-- Search Bar autocomplete templates -->
<div t-name="website.s_searchbar.autocomplete_layout"
     class="o_dropdown_menu show position-absolute w-100" style="scrollbar-width: none;">
    <t t-if="fuzzySearch and results.length">
        <span class="dropdown-item-text">
            <span class="text-muted">No results found for '<t t-esc="search"/>'. Showing results for
                '<a href="#" class="s_searchbar_fuzzy_submit" t-esc="fuzzySearch"/>'.
            </span>
        </span>
    </t>
    <t t-elif="!results.length">
        <span class="dropdown-item-text">
            <span class="text-muted">No results found. Please try another search.</span>
        </span>
    </t>
    <t t-out="0"/>
    <t t-if="hasMoreResults">
        <button type="submit" class="dropdown-item text-center text-primary-emphasis">
            All results
        </button>
    </t>
</div>

<!--    Default Template-->
<t t-name="website.s_searchbar.autocomplete">
    <t t-call="website.s_searchbar.autocomplete_layout">
        <a t-foreach="results" t-as="result" t-key="result_index"
           t-att-href="result['website_url']" class="dropdown-item p-2 text-wrap">
            <div class="d-flex align-items-center flex-wrap o_search_result_item">
                <t t-if="widget.displayImage">
                    <img id="displayImage" t-if="result['image_url']"
                         t-att-src="result['image_url']"
                         class="flex-shrink-0 o_image_64_contain"/>
                    <i t-else=""
                       t-attf-class="o_image_64_contain text-center pt16 fa #{result['_fa']}"
                       style="font-size: 34px;"/>
                </t>
                <div class="o_search_result_item_detail px-3">
                    <t t-set="description"
                       t-value="parts['description'] and widget.displayDescription and result['description']"/>
                    <t t-set="extra_link"
                       t-value="parts['extra_link'] and widget.displayExtraLink and result['extra_link_url'] and result['extra_link']"/>
                    <t t-set="extra_link_html"
                       t-value="parts['extra_link'] and widget.displayExtraLink and !result['extra_link_url'] and result['extra_link']"/>
                    <t t-set="extra_info"
                       t-value="parts['extra_info'] and widget.displayExtraInfo and result['extra_info']"/>

                    <div t-attf-class="h6 fw-bold #{description ? '' : 'mb-0'}"
                         t-out="result['name']"/>
                    <p t-if="description" class="mb-0" t-out="description"/>
                    <t t-if="extra_info" t-out="extra_info"/>
                    <button t-if="extra_link" class="extra_link btn btn-link btn-sm"
                            t-att-data-target="result['extra_link_url']" t-out="extra_link"/>
                    <t t-if="extra_link_html" t-out="extra_link_html"/>
                </div>
                <div t-if="parts['detail'] and widget.displayDetail" class="flex-shrink-0 ms-auto">
                    <t t-if="result['detail_strike']">
                        <span class="text-muted text-nowrap" style="text-decoration: line-through;">
                            <t t-out="result['detail_strike']"/>
                        </span>
                        <br/>
                    </t>
                    <b t-if="result['detail']" class="text-nowrap">
                        <t t-out="result['detail']"/>
                    </b>
                    <t t-if="result['detail_extra']">
                        <br/>
                        <span class="text-nowrap" t-out="result['detail_extra']"/>
                    </t>
                </div>
            </div>
        </a>
    </t>
</t>

<!--    Second Template-->
<t t-name="website.s_searchbar.autocomplete_second">
    <t t-call="website.s_searchbar.autocomplete_layout">
        <a t-foreach="results" t-as="result" t-key="result_index"
           t-att-href="result['website_url']" class="dropdown-item p-2 text-wrap">
            <div class="d-flex align-items-start o_search_result_item rounded bg-light border p-2">
                <t t-if="widget.displayImage">
                    <div class="flex-shrink-0 me-2">
                        <img id="displayImage" t-if="result['image_url']"
                             t-att-src="result['image_url']"
                             class="o_image_32_contain rounded-circle" alt="Result Image"
                             onerror="this.src='/path/to/placeholder.jpg'"/>
                        <i t-else=""
                           t-attf-class="o_image_32_contain text-center rounded-circle d-flex align-items-center justify-content-center fa #{result['_fa']}"
                           style="font-size: 18px; height: 32px; width: 32px;"/>
                    </div>
                </t>

                <div class="flex-grow-1">
                    <div class="d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start"> <h6
                                class="fw-bold mb-0 me-2" t-out="result['name']"/>
                            <div t-if="parts['detail'] and widget.displayDetail"
                                 class="text-nowrap ms-auto">
                                <span t-if="result['detail_strike']" class="text-muted me-2 small"
                                      style="text-decoration: line-through;">
                                    <t t-out="result['detail_strike']"/>
                                </span>
                                <b t-if="result['detail']" class="small">
                                    <t t-out="result['detail']"/>
                                </b>
                                <span t-if="result['detail_extra']" class="text-muted small">
                                    <br/>
                                    <t t-out="result['detail_extra']"/>
                                </span>
                            </div>
                        </div>
                        <t t-set="description"
                           t-value="parts['description'] and widget.displayDescription and result['description']"/>
                        <p t-if="description" class="mb-1 small text-muted" t-out="description"/>

                        <div class="d-flex align-items-center flex-wrap mt-1">
                            <t t-set="extra_link"
                               t-value="parts['extra_link'] and widget.displayExtraLink and result['extra_link_url'] and result['extra_link']"/>
                            <t t-set="extra_link_html"
                               t-value="parts['extra_link'] and widget.displayExtraLink and !result['extra_link_url'] and result['extra_link']"/>
                            <t t-set="extra_info"
                               t-value="parts['extra_info'] and widget.displayExtraInfo and result['extra_info']"/>
                            <span t-if="extra_info" class="me-2 small" t-out="extra_info"/>
                            <button t-if="extra_link"
                                    class="extra_link btn btn-link btn-sm me-2 small"
                                    t-att-data-target="result['extra_link_url']"
                                    t-out="extra_link"/>
                            <span t-if="extra_link_html" class="small" t-out="extra_link_html"/>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </t>
</t>

</templates>
