<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="website.s_dynamic_snippet.carousel.arrows">
        <a t-attf-href="##{unique_id}" t-attf-class="carousel-control-prev #{scrollingMode === 'single'? 'o_carousel_control_prev': ''} position-md-absolute w-auto"
           t-attf-style="#{scrollingMode === 'single'? 'display: None;': ''}" data-bs-slide="prev" role="button" aria-label="Previous" title="Previous">
            <span class="oi oi-chevron-left ms-md-n4 rounded-pill p-3 bg-700"/>
            <span class="visually-hidden">Previous</span>
        </a>
        <a t-attf-href="##{unique_id}" t-attf-class="carousel-control-next #{scrollingMode === 'single'? 'o_carousel_control_next': ''} position-md-absolute w-auto" data-bs-slide="next" role="button" aria-label="Next" title="Next">
            <span class="oi oi-chevron-right me-md-n4 rounded-pill p-3 bg-700"/>
            <span class="visually-hidden">Next</span>
        </a>
    </t>
    <t t-name="website.s_dynamic_snippet.carousel">
        <t t-set="scrollMode" t-value=" 'single' "/>

        <div t-att-id="unique_id" t-attf-class="carousel slide #{scrollMode === 'single' ? 'o_slide_single' : '' }" t-att-data-bs-interval="interval" data-bs-ride="carousel">

            <t t-set="chunkSize" t-value="chunkSize"/>
            <t t-if="scrollMode === 'single'">
                <t t-set="rowSize" t-value="1"/>
                <t t-set="colClass" t-value="'d-flex flex-grow-0 flex-shrink-0 col-12'"/>
            </t>
            <t t-else="">
                <t t-set="rowSize" t-value="chunkSize"/>
                <t t-set="colClass" t-value="'d-flex flex-grow-0 flex-shrink-0 col-' + Math.trunc(12 / rowSize).toString()"/>
            </t>
            <t t-set="slideSize" t-value="rowSize * rowPerSlide"/>
            <t t-set="slideIndexGenerator" t-value="Array.from(Array(Math.ceil(data.length/slideSize)).keys())"/>
            <t t-set="rowIndexGenerator" t-value="Array.from(Array(rowPerSlide).keys())"/>
            <t t-set="colIndexGenerator" t-value="Array.from(Array(rowSize).keys())"/>


            <!-- Content -->
            <div t-attf-class="carousel-inner row w-100 mx-auto o_carousel_chunksize_#{+chunkSize}" role="listbox" aria-label="Carousel">
                <t t-foreach="slideIndexGenerator" t-as="slideIndex" t-key="slideIndex_index">
                    <t t-set="slideOffset" t-value="slideIndex * slideSize"/>
                    <div t-attf-class="carousel-item #{extraClasses} #{slideIndex_first ? 'active' : ''}" role="option">
                        <t t-foreach="rowIndexGenerator" t-as="rowIndex" t-key="rowIndex_index">
                            <t t-set="rowOffset" t-value="slideOffset + (rowIndex * rowSize)"/>
                            <t t-if="rowOffset &lt; data.length">
                                <div t-attf-class="s_dynamic_snippet_row row #{scrollMode === 'single' ? 'mx-0' : 'g-3'}">
                                    <t t-foreach="colIndexGenerator" t-as="colIndex" t-key="colIndex_index">
                                        <t t-set="itemIndex" t-value="rowOffset + colIndex"/>
                                        <t t-if="itemIndex &lt; data.length">
                                            <div t-attf-class="#{colClass}">
                                                <t t-out="data[itemIndex]"/>
                                            </div>
                                        </t>
                                    </t>
                                </div>
                            </t>
                        </t>
                    </div>
                </t>
            </div>

            <!-- Controls -->
            <t t-if='slideIndexGenerator.length > 1'>
                    <t t-if="arrowPosition === 'bottom'">
                        <div class="s_dynamic_snippet_arrow_bottom px-3 px-md-0 pt-2 d-flex justify-content-between">
                            <t t-call="website.s_dynamic_snippet.carousel.arrows">
                                <t t-set="unique_id" t-value="unique_id"/>
                            </t>
                        </div>
                    </t>
                <t t-else="">
                        <t t-call="website.s_dynamic_snippet.carousel.arrows">
                            <t t-set="unique_id" t-value="unique_id"/>
                        </t>
                    </t>
                </t>
            </div>
    </t>
    <t t-name="website.s_dynamic_snippet.carousel.single">
        <div t-att-id="unique_id" t-attf-class="carousel " t-att-data-bs-interval="interval" data-bs-ride="carousel">
            <t t-set="rowSize" t-value="chunkSize" />
            <t t-set="slideSize" t-value="rowPerSlide" />
            <t t-set="slideIndexGenerator" t-value="Array.from(Array(Math.ceil(data.length/slideSize)).keys())"/>
            <t t-set="rowIndexGenerator" t-value="Array.from(Array(rowPerSlide).keys())"/>
            <!-- Content -->
            Custom Template for single
            <div class="carousel-inner o_carousel_inner w-100 mx-auto" role="listbox" aria-label="Carousel">
                <t t-foreach="slideIndexGenerator" t-as="slideIndex" t-key="slideIndex_index">
                    <div t-attf-class="carousel-item o_carousel_item o_carousel_col_#{rowSize} #{extraClasses} #{colIndex_first ? 'active' : ''}" role="option">
                        <t t-foreach="rowIndexGenerator" t-as="rowIndex" t-key="rowIndex_index">
                            <t t-set="itemIndex" t-value="rowIndex + rowPerSlide * slideIndex"/>
                            <div class="s_dynamic_snippet_row row g-3">
                                <div class="d-flex flex-grow-0 flex-shrink-0">
                                    <t t-out="data[itemIndex]"/>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
            </div>
            <!-- Controls -->
            <t t-if='slideIndexGenerator.length > 1'>
                <t t-if="arrowPosition === 'bottom'">
                    <div class="s_dynamic_snippet_arrow_bottom px-3 px-md-0 pt-2 d-flex justify-content-between">
                        <t t-call="website.s_dynamic_snippet.carousel.arrows">
                            <t t-set="unique_id" t-value="unique_id" />
                        </t>
                    </div>
                </t>
                <t t-else="">
                    <t t-call="website.s_dynamic_snippet.carousel.arrows">
                        <t t-set="unique_id" t-value="unique_id" />
                    </t>
                </t>
            </t>
        </div>
    </t>

</templates>
