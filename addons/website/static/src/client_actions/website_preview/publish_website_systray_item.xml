<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website.PublishSystrayItem">
    <div class="o_menu_systray_item o_website_publish_container d-flex ms-auto" t-on-click.prevent="this.onContainerClick" t-att-data-processing="this.state.processing and 1">
        <a t-if="this.state.scheduled" href="#" class="o_nav_entry d-flex align-items-center mx-1" t-on-click.prevent="this.editInBackend" t-att-data-tooltip="this.state.formattedPublishAt">
            <span class="d-none d-md-block mx-0 pe-1">
                <RelativePublishTime datetime="this.state.publishOn" negativeDeltaCallback.bind="this.triggerPublish"/>
            </span>
            <CheckBox disabled="true" value="this.state.published" className="'form-switch d-flex justify-content-center m-0 pe-none'"/>
        </a>
        <a t-else="" href="#" class="o_nav_entry d-flex align-items-center mx-1" data-hotkey="p">
            <span class="d-none d-md-block mx-0 pe-1" t-esc="this.label"/>
            <CheckBox value="this.state.published" className="'form-switch d-flex justify-content-center m-0 pe-none'"/>
        </a>
    </div>
</t>

</templates>
