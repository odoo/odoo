<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
<t t-name="website.WebsiteSwitcherSystray" owl="1">
    <Dropdown class="'o_menu_systray_item o_website_switcher_container'">
        <t t-set-slot="toggler">
            <span><t t-esc="websiteService.currentWebsite.name"/><i class="fa fa-caret-down ml-2"/></span>
        </t>
        <t t-foreach="getElements()" t-as="element" t-key="element_index">
            <DropdownItem
                t-esc="element.name"
                onSelected="element.callback"
            />
        </t>
    </Dropdown>
</t>
</templates>
