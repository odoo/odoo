<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record model="ir.ui.view" id="view_delivery_carrier_form">
        <field name="name">delivery.carrier.website.form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="after">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" name="website_publish_button"
                        type="object" icon="fa-globe">
                        <field name="website_published" widget="website_button"/>
                    </button>
                </div>
            </xpath>
            <xpath expr="//group[@name='general']" position="after">
                <group name="website">
                    <field name="website_description" attrs="{'invisible':[('website_published', '=', False)]}"/>
                </group>
                <group string="Destinations" attrs="{'invisible':[('use_detailed_pricelist','=',True)]}">
                    <field name="country_ids" widget="many2many_tags" style="width: 35%"/>
                    <field name="state_ids" widget="many2many_tags" style="width: 35%"/>
                </group>
            </xpath>
        </field>
    </record>

 </data>
</openerp>
