<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale.delivery</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="msg_delivery_method_setting" position="after">
                <button type="action"
                    name="%(delivery.action_delivery_carrier_form)d"
                    string="Shipping Methods"
                    icon="fa-arrow-right"
                    class="btn-link mt16"
                    attrs="{'invisible': [('module_website_sale_delivery', '=', False)]}"/>
            </div>
            <div id="website_delivery_dhl" position="after">
                <button type="action"
                    name="%(delivery.action_delivery_carrier_form)d"
                    string="DHL Shipping Methods"
                    icon="fa-arrow-right"
                    class="btn-link mt8"
                    context="{'search_default_delivery_type': 'dhl'}"
                    attrs="{'invisible': [('module_delivery_dhl', '=', False)]}"/>
            </div>
            <div id="website_delivery_fedex" position="after">
                <button type="action"
                    name="%(delivery.action_delivery_carrier_form)d"
                    string="FedEx Shipping Methods"
                    icon="fa-arrow-right"
                    class="btn-link mt8"
                    context="{'search_default_delivery_type': 'fedex'}"
                    attrs="{'invisible': [('module_delivery_fedex', '=', False)]}"/>
            </div>
            <div id="website_delivery_usps" position="after">
                <button type="action"
                    name="%(delivery.action_delivery_carrier_form)d"
                    string="USPS Shipping Methods"
                    icon="fa-arrow-right"
                    class="btn-link mt8"
                    context="{'search_default_delivery_type': 'usps'}"
                    attrs="{'invisible': [('module_delivery_usps', '=', False)]}"/>
            </div>
            <div id="website_delivery_bpost" position="after">
                <button type="action"
                    name="%(delivery.action_delivery_carrier_form)d"
                    string="bpost Shipping Methods"
                    icon="fa-arrow-right"
                    class="btn-link mt8"
                    context="{'search_default_delivery_type': 'bpost'}"
                    attrs="{'invisible': [('module_delivery_bpost', '=', False)]}"/>
            </div>
            <div id="website_delivery_easypost" position="after">
                <button type="action"
                    name="%(delivery.action_delivery_carrier_form)d"
                    string="Easypost Shipping Methods"
                    icon="fa-arrow-right"
                    class="btn-link mt8"
                    context="{'search_default_delivery_type': 'easypost'}"
                    attrs="{'invisible': [('module_delivery_easypost', '=', False)]}"/>
            </div>
        </field>
    </record>
</odoo>
