<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="website_config_settings_view_form" model="ir.ui.view">
        <field name="name">Website sale delivery settings</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website_sale.website_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='delivery_method_setting']/div/div/div[@class='content-group']" position="replace">
                <div class="content-group">
                    <hr class="mt8 mb8" />
                    <div>
                        <button type="action" name="%(delivery.action_delivery_carrier_form)d" string="Delivery Methods" class="btn-link" icon="fa-arrow-right"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    </data>
</odoo>

