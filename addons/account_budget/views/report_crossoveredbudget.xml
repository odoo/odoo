<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_crossoveredbudget">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.internal_layout">
                <div class="page">
                    <h2>Budget</h2>
                    <div class="row mt32">
                        <div class="col-xs-4">
                            <strong>Analysis from:</strong>
                            <p><span t-esc="date_from"/> to
                            <span t-esc="date_to"/></p>
                        </div>
                        <div class="col-xs-3">
                            <strong>Budget:</strong>
                            <p t-esc="o.name"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Currency:</strong>
                            <p t-esc="res_company.currency_id.name"/>
                        </div>
                    </div>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th class="text-right">Theoretical Amt</th>
                                <th class="text-right">Planned Amt</th>
                                <th class="text-right">Practical Amt</th>
                                <th class="text-center">Perc(%)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="crossoveredbudgets[o.id]['lines']" t-as="line">
                                <tr>
                                    <td>
                                        <span style="color: white;" t-esc="'... '*(line['status'] - 1)"/>
                                        <span t-esc="line['name']"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line['theo']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line['pln']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line['prac']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line['perc']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/> %
                                    </td>
                                </tr>
                            </t>
                            <tr>
                                <td>
                                  <strong>Total:</strong>
                                </td>
                                <t t-set="budget_total" t-value="crossoveredbudgets[o.id]['budget_total']" />
                                <td class="text-right">
                                    <strong t-esc="budget_total['tot_theo']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                                </td>
                                <td class="text-right">
                                    <strong t-esc="budget_total['tot_pln']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                                </td>
                                <td class="text-right">
                                    <strong t-esc="budget_total['tot_prac']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
                                </td>
                                <td class="text-center">
                                    <strong t-esc="budget_total['tot_perc']" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/> %
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>
