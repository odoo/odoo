<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <form>
                <field name="available_check_ids" invisible="1"/>
                <field name="check_type" invisible="1"/>
                <field name="payment_method_code" invisible="1"/>
            </form>
            <xpath expr="//div[@name='amount_div']//field[@name='amount']" position="attributes">
                <attribute name="attrs">{'readonly': [('check_type', '!=', False)]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <field name="payment_method_id" position="after">
                <label for="select_check_ids" colspan="2" attrs="{'invisible': [('payment_method_code', 'not in', ['in_own_checks', 'in_third_checks', 'out_third_checks'])]}"/>
                <field
                    name="select_check_ids" nolabel="1" colspan="2"
                    attrs="{'invisible': [('payment_method_code', 'not in', ['in_own_checks', 'in_third_checks', 'out_third_checks'])]}"
                    options="{'no_create': True}"
                    domain="[('id', 'in', available_check_ids)]"
                >
                    <tree >
                    <!-- <tree edit="false"> -->
                        <field name="name"/>
                        <field name="payment_date"/>
                        <field name="amount" sum="Total"/>
                        <field name="state" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                    </tree>
                </field>
                <field context="{'default_company_id': company_id, 'default_first_partner_id': partner_id, 'default_journal_id': journal_id, 'default_currency_id': currency_id, 'default_type': check_type}" name="new_check_ids" widget="one2many" attrs="{'invisible': [('payment_method_code', 'not in', ['new_third_checks', 'new_own_checks'])]}" colspan="2" nolabel="1">
                    <!-- <tree editable="bottom"> -->
                    <!-- the tree editable dont work because two many fields -->
                    <tree>
                        <field name="checkbook_id" attrs="{'required': [('parent.check_type', '=', 'own_check')], 'column_invisible': [('parent.check_type', '!=', 'own_check')]}" domain="[('journal_id', '=', journal_id), ('state', '=', 'active')]"/>
                        <!-- <field name="number"/> -->
                        <field name="name"/>
                        <!-- <field name="issue_date"/> -->
                        <field name="payment_date"/>
                        <!-- <field name="bank_id" attrs="{'required': [('parent.check_type', '=', 'third_check')], 'column_invisible': [('parent.check_type', '!=', 'third_check')]}"/>
                        <field name="issuer_vat" attrs="{'required': [('parent.check_type', '=', 'third_check')],'column_invisible': [('parent.check_type', '!=', 'third_check')]}"/>
                        <field name="issuer_name" attrs="{'required': [('parent.check_type', '=', 'third_check')],'column_invisible': [('parent.check_type', '!=', 'third_check')]}"/> -->
                        <!-- <field name="amount"/>
                        <field name="type" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="state" invisible="1"/>
                        <field name="journal_id" invisible="1"/>
                        <field name="first_partner_id" invisible="1" force_save="1"/>
                        <field name="company_id" invisible="1" force_save="1"/> -->
                    </tree>
                    <form>
                        <group>
                            <group>
                                <field name="checkbook_id" attrs="{'required': [('type', '=', 'own_check')], 'invisible': [('type', '!=', 'own_check')]}" domain="[('journal_id', '=', journal_id), ('state', '=', 'active')]"/>
                                <field name="number"/>
                                <field name="name"/>
                                <field name="issue_date"/>
                                <field name="payment_date"/>
                            </group>
                            <group>
                                <field name="bank_id" attrs="{'required': [('type', '=', 'third_check')], 'invisible': [('type', '!=', 'third_check')]}"/>
                                <field name="issuer_vat" attrs="{'required': [('type', '=', 'third_check')],'invisible': [('type', '!=', 'third_check')]}"/>
                                <field name="issuer_name" attrs="{'required': [('type', '=', 'third_check')],'invisible': [('type', '!=', 'third_check')]}"/>
                                <field name="amount"/>
                                <field name="type" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="state" invisible="1"/>
                                <field name="journal_id" invisible="1"/>
                                <field name="first_partner_id" invisible="1" force_save="1"/>
                                <field name="company_id" invisible="1" force_save="1"/>
                            </group>
                        </group>
                    </form>
                </field>
            </field>
                <!-- <label for="check_ids" colspan="2"/>
                <field name="withholding_ids" nolabel="1" colspan="2">
                    <tree editable="bottom">
                        <field name="tax_id" domain="[('type_tax_use', '=', parent.partner_type), ('company_id', '=', parent.company_id)]"/>
                        <field name="name"/>
                        <field name="base_amount"/>
                        <field name="amount"/>
                        <field name="currency_id" invisible="True"/>
                    </tree>
                </field>
                <field name="net_amount"/>
            </group> -->
        </field>
    </record>

</odoo>
