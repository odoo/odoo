<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <form>
                <field name="available_check_ids" invisible="1"/>
                <field name="check_type" invisible="1"/>
                <field name="payment_method_code" invisible="1"/>
            </form>
            <xpath expr="//div[@name='amount_div']//field[@name='amount']" position="attributes">
                <attribute name="attrs">{'readonly': [('check_type', '!=', False)]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <field name="payment_method_id" position="after">
                <field
                    name="check_id"
                    attrs="{'invisible': [('check_type', '=', False)]}"
                    domain="[('id', 'in', available_check_ids)]"
                    context="{'default_company_id': company_id, 'default_first_partner_id': partner_id, 'default_journal_id': journal_id, 'default_currency_id': currency_id, 'default_type': check_type}"
                />
            </field>
        </field>
    </record>

</odoo>
