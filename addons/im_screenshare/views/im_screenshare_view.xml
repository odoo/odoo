<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Screen Record Actions -->
        <record model="ir.actions.act_window" id="action_screen_record_form">
                <field name="name">Screen Records</field>
                <field name="res_model">im_screenshare.record</field>
                <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_screen_record_event_list">
            <field name="name">Screen Record Events</field>
            <field name="res_model">im_screenshare.record.event</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Menu items -->
        <!-- FP don't this for now, so recording screen option is disabled
        <menuitem id="screen_record_menu" name="Screen Record" parent="mail.mail_feeds_main" sequence="22"/>
        <menuitem name="Recordings" parent="screen_record_menu" id="screen_record_form" action="action_screen_record_form" />
        <menuitem name="Record Events" parent="screen_record_menu" id="screen_record_event_list" action="action_screen_record_event_list" />
        -->

        <!-- Screen Record Form view -->
        <record model="ir.ui.view" id="im_screenshare_record_form_view">
            <field name="name">im_screenshare.record.form.view</field>
            <field name="model">im_screenshare.record</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Screen Record" version="7.0">
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button class="oe_inline oe_stat_button" name="play_screen_record" string="Play" type="object" icon="fa-play"/>
                            <button class="oe_inline oe_stat_button" type="action" context="{'default_screen_record_id': active_id, 'search_default_screen_record_id': active_id}" name="%(im_screenshare.action_screen_record_event_list)d" icon="fa-film">
                                <field string="Record Events" name="event_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Describe the Record ..."/></h1>
                        </div>
                        <div class="oe_right oe_button_box">
                        </div>
                        <group>
                            <field name="user_id" />
                            <field name="starttime" />
                            <field name="duration" />
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" style="min-height: 50px;" />
                            </page>
                            <page string="Events">
                                <field name="event_ids" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Screen Record List view -->
        <record model="ir.ui.view" id="screen_record_list_view">
            <field name="name">im_screenshare.record.list.view</field>
            <field name="model">im_screenshare.record</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Screen Records" version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="starttime" />
                    <field name="duration" />
                    <field name="user_id" />
                </tree>
            </field>
        </record>

        <!-- Screen Record Event Form view -->
        <record model="ir.ui.view" id="screen_record_event_form_view">
            <field name="name">im_screenshare.record.event.form.view</field>
            <field name="model">im_screenshare.record.event</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Screen Record" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="screen_record_id" placeholder="Describe the Record ..."/></h1>
                        </div>
                        <group>
                            <field name="timestamp" />
                        </group>
                        <label for="mutations" />
                        <field name="mutations" />
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Screen Record Event List view -->
        <record model="ir.ui.view" id="screen_record_event_list_view">
            <field name="name">im_screenshare.record.event.list.view</field>
            <field name="model">im_screenshare.record.event</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Screen Record Events" version="7.0">
                    <field name="id" />
                    <field name="screen_record_id" />
                    <field name="create_date" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
