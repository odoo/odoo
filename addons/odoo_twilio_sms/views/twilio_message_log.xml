<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="form_view_message_log">
            <field name="name">twilio.message.log.form</field>
            <field name="model">twilio.message.log</field>
            <field name="arch" type="xml">
                <form string="Message Log">
                    <sheet>
                        <group>
                            <field name="account_sid"/>
                            <field name="body"/>
                            <field name="date_sent"/>
                            <field name="direction"/>
                            <field name="error_code"/>
                            <field name="error_message"/>
                            <field name="from_phone"/>
                            <field name="to_phone"/>
                            <field name="messaging_service_sid"/>
                            <field name="sid"/>
                            <field name="uri"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                            <field name="res_name" />
                            <field name="user_id" />
                            <field name="company_id" />
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tree_view_message_log">
            <field name="name">twilio.message.log.tree</field>
            <field name="model">twilio.message.log</field>
            <field name="arch" type="xml">
                <tree string="Message Log">
                    <field name="res_model"/>
                    <field name="res_id"/>
                    <field name="res_name" />
                    <field name="date_sent"/>
                    <field name="direction"/>
                    <field name="from_phone"/>
                    <field name="to_phone"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="search_view_message_log">
            <field name="name">twilio.message.log.search</field>
            <field name="model">twilio.message.log</field>
            <field name="arch" type="xml">
                <search string="Message Log">
                    <field name="res_model"/>
                    <field name="res_name" />
                    <separator/>
                    <filter string="Creation Date" name="filter_creation_date" date="create_date"/>
                    <filter string="Sent Date" name="filter_date_sent" date="date_sent"/>
                    <group expand="0" string="Group By">
                        <filter string="User" name="gb_user_id" context="{'group_by':'user_id'}"/>
                        <filter name="gb_status" string="Status" context="{'group_by':'status'}"/>
                        <filter name="gb_res_model" string="Res Model" context="{'group_by':'res_model'}"/>
                        <filter string="Company" name="company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                        <separator orientation="vertical"/>
                        <filter string="Creation Date" name="gb_create_date_month" context="{'group_by':'create_date:month'}" />
                        <filter string="Sent Date" name="gb_date_sent_month" context="{'group_by':'date_sent:month'}"/>
                        <separator/>
                        <filter name="gb_direction" string="Direction" context="{'group_by':'direction'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_message_log">
            <field name="name">Message Log</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">twilio.message.log</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_message_log"
                  name="Message Log" parent="odoo_twilio_sms.twilio_menu_root"
                  action="action_message_log" sequence="5"/>
    </data>
</odoo>

