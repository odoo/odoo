<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="product.badge_extra_price" owl="1">
        <span class="badge rounded-pill text-bg-light border ms-1 ps-1">
            <span t-out="this.props.price > 0 ? '+' : '-'" class="o_product_badge_extra_price"/>
            <span t-out="getFormattedPrice()" class="text-muted fst-italic"/>
        </span>
    </t>
</templates>
