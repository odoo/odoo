{
  "manifest_version": 2,
  "name": "Odoo extension for Project Timesheet",
  "version": "9.0",
  //"default_locale": "en",
  "description": "This extension will allows users to create Project Timesheet entries in speedy way, user can do entries offline also, once they done with their entries they can sync their data with their Odoo instance",
  "icons": {
    "48" : "static/src/img/logo.png"
  },
  "background": {
     "scripts": ["static/src/js/background.js"],
     "persistent": false
  },
  "browser_action": {
    "default_icon": "static/src/img/logo.png"
    //"default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],
