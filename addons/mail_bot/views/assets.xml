<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="assets_backend" name="mailbot assets" inherit_id="web.assets_backend">
            <xpath expr="script[last()]" position="after">
                <script type="text/javascript" src="/mail_bot/static/src/messaging/component/messaging_menu/messaging_menu.js"></script>
                <script type="text/javascript" src="/mail_bot/static/src/messaging/component/notification_alert/notification_alert.js"></script>
                <script type="text/javascript" src="/mail_bot/static/src/messaging/component/notification_list/notification_list.js"></script>
                <script type="text/javascript" src="/mail_bot/static/src/messaging/component/notification_request/notification_request.js"></script>
                <script type="text/javascript" src="/mail_bot/static/src/messaging/entity/messaging/messaging.js"></script>
                <script type="text/javascript" src="/mail_bot/static/src/messaging/entity/messaging_initializer/messaging_initializer.js"></script>
                <script type="text/javascript" src="/mail_bot/static/src/messaging/entity/messaging_menu/messaging_menu.js"></script>
                <script type="text/javascript" src="/mail_bot/static/src/messaging/widget/notification_alert/notification_alert.js"></script>
            </xpath>
            <xpath expr="link[last()]" position="after">
                <link rel="stylesheet" type="text/scss" href="/mail_bot/static/src/messaging/component/notification_request/notification_request.scss"/>
            </xpath>
        </template>
        <template id="qunit_suite" name="mail_tests" inherit_id="web.qunit_suite_tests">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/mail_bot/static/src/messaging/component/messaging_menu/messaging_menu_tests.js"></script>
                <script type="text/javascript" src="/mail_bot/static/src/messaging/widget/notification_alert/notification_alert_tests.js"></script>
            </xpath>
        </template>
    </data>
</odoo>
