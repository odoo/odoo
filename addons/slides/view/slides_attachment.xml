            <field name="view_mode">form</field>
            <field name="view_id" ref="view_slides_attachment_form"/>
            <field name="act_window_id" ref="action_slides_document"/>
        </record>
        <menuitem action="action_slides_document" id="submenu_slides_document" parent="main_slides"/>

        <record id="action_slides_video" model="ir.actions.act_window">
            <field name="name">Videos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.attachment</field>
            <field name="view_type">form</field>
