        <record id="view_slides_attachment_form" model="ir.ui.view">
            <field name="model">ir.attachment</field>
            <field name="arch" type="xml">
                <form string="Attachments">
                   <sheet>
                    <field name="image" widget="image" class="oe_left oe_avatar" options="{'preview_image': 'image_medium', 'size': [90, 90]}"/>
                    <div class="oe_title oe_left">
                        <div class="oe_edit_only">
                            <label for="name" string="Name"/>
                        </div>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" placeholder="Tags..."/>
                    </div>
                    <div class="oe_right oe_button_box" name="buttons">
                        <field name="website_published" class="pull-right" widget="website_button"/>
                    </div>
                    <group>
                        <group string="Data">                            
                            <field name="datas" filename="datas_fname" attrs="{'invisible':[('slide_type','=','video')]}"/>
                            <field name="datas_fname" invisible="1" class="oe_inline oe_right" />
                            <field name="url" widget="url" />
                        </group>
                        <group string="Categorization">
                            <field name="parent_id" string="Directory"/>
                        </group>
                        <group string="Others" invisible="1">
                            <field name="is_slide"/>
                            <field name="slide_type"/>
                        </group>
                    </group>
                    <group name="description_group" string="Description" colspan="4">
                        <field name="description" nolabel="1"/>
                    </group>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="view_slides_attachment_tree" model="ir.ui.view">
            <field name="model">ir.attachment</field>
            <field name="arch" type="xml">
                <tree string="Attachments">
                    <field name="name" string="Name"/>
                    <field name="datas_fname"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="action_slides_attachment" model="ir.actions.act_window">
            <field name="name">Presentations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.attachment</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="domain">[('is_slide','=',True), ('slide_type','=','ppt')]</field>
            <field name="context">{'is_slide':True, 'slide_type':'ppt'}</field>
            <field name="search_view_id" ref="base.view_attachment_search"/>
        </record>
        <record id="action_slides_attachment_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_slides_attachment_tree"/>
            <field name="act_window_id" ref="action_slides_attachment"/>
        </record>
        <record id="action_slides_attachment_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_slides_attachment_form"/>
            <field name="act_window_id" ref="action_slides_attachment"/>
        </record>
        <menuitem action="action_slides_attachment" id="submenu_slides_attachment" parent="main_slides"/>


