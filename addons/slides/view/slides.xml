<?xml version="1.0" ?>
<openerp>
	<data>

		<template id="sidebar" name="sidebar">
			<div class="col-sm-3 pull-right">
				<form action="/slides" role="search" method="post">
					<div class="input-group">
						<input type="text" class="form-control" name="search"
							placeholder="Search Presentation" />
						<span class="input-group-btn">
							<button class="btn btn-primary" type="submit">
								<span class="glyphicon glyphicon-search"></span>
							</button>
						</span>
					</div>
				</form>
			</div>
		</template>

		<template id="thumbnail" name="sidebar">
			<div class="thumbnail" style="max-height: 350px;">
				<a t-attf-href="/slides/view/#{file.id}">
					<img t-attf-src="/slides/#{file.id}/thumb" class="img-responsive" style="margin-top: 5px;"/>
				</a>
				<div class="caption">
					<a t-attf-href="/slides/view/#{file.id}">
						<p class="group inner list-group-item-heading">
							<t t-esc="file.name" />
						</p>
					</a>
					<div>
						<p class="group inner list-group-item-text">
							<small class="text-muted"><t t-esc="file.create_date" /></small>
							<br/><small class="text-muted">5000 Views</small>
						</p>
					</div>
				</div>
			</div>
		</template>


		<template id='home' name="slide">
			<t t-set="head">
				<link href="/slides/static/src/css/slides.css" rel="stylesheet" />
				<script type="text/javascript" src="/slides/static/src/js/slides.js"></script>
			</t>
			<t t-call="website.layout">
				<br/>
				<div class="container">
					<div class="col-sm-12">
						<h1 class="page-header mt0">
							<t t-esc="len(attachment)" />
							<span>Presentations</span>
							<small class="dropdown">
								<a class="dropdown-toggle" href="#" data-toggle="dropdown">
									All
									by activity date
									<b class="caret"></b>
								</a>
								<ul class="dropdown-menu">
									<li class="dropdown-header">Filter on</li>
									<li class="active">
										<a href="?filters=all">All</a>
									</li>
									<li>
										<a href="?filters=unanswered">Presentations</a>
									</li>
									<li>
										<a href="?filters=followed">Videos</a>
									</li>
									<li>
										<a href="?filters=followed">Documents</a>
									</li>

									<li class="dropdown-header">Sort by</li>
									<li class="active">
										<a href="?sorting=date">Latest Published</a>
									</li>
									<li>
										<a href="?sorting=creation">Most Viewed</a>
									</li>
								</ul>
								<t t-call="slides.sidebar" class="pull-right"/>
							</small>
						</h1>

						<div id="products" class="row list-group">
							<div class="item  col-md-3" t-foreach="attachment" t-as="file">
								<t t-call="slides.thumbnail"/>
							</div>
						</div>
					</div>
				</div>
			</t>
		</template>

		<template id='view' name="slide">
			<t t-call="website.layout">
				<br/>
				<div class="container">
					<div class="row">
						<div class="col-sm-9">
							<iframe id="viewer"
								t-attf-src="/slides/static/src/viewerjs/index.html&#35;#{slide.url}"
								width='100%' height='500' allowfullscreen="true"
								webkitallowfullscreen="true">
							</iframe>
							<h1 class="page-header mt0">
								<t t-esc="slide.name" />
								<small class="pull-right">
									<p>Viewed 5000</p>
								</small>
							</h1>
						</div>
					</div>
				</div>
			</t>
		</template>
	</data>
</openerp>