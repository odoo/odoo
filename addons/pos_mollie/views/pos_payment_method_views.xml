<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_pos_mollie" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.mollie</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_provider']" position="after">
                <field name="mollie_payment_provider_id" invisible="payment_provider != 'mollie'" required="payment_provider == 'mollie'"/>
                <field name="mollie_terminal_id" invisible="payment_provider != 'mollie'" required="payment_provider == 'mollie'"/>
            </xpath>
        </field>
    </record>
</odoo>
