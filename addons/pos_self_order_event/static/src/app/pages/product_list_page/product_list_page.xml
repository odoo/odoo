<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order_event.ProductListPage" t-inherit="pos_self_order.ProductListPage" t-inherit-mode="extension">
        <xpath expr="//span[hasclass('o-so-tabular-nums')]" position="replace">
            <t t-if="product?.event_id">
                <span class="o-so-tabular-nums fs-4 fw-bold text-primary" t-out="ticketAvailabilityText(product)"/>
            </t>
            <t t-else="">$0</t>
        </xpath>
        <xpath expr="//div[hasclass('product_img')]/img" position="replace">
            <t t-if="product?.event_id">
                <img class="object-fit-cover rounded-4" t-att-src="selfOrder.eventImageUrl(product.event_id)" loading="lazy" alt="Event Image"/>
            </t>
            <t t-else="">$0</t>
        </xpath>
    </t>
</templates>
