<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="website_sale_comparison.ProductComparisonButton">
        <button
            t-if="state.productCount"
            t-on-click="togglePopover"
            class="btn btn-outline-primary bg-white border-bottom-0 rounded-bottom-0 bottom-centered"
            name="product_comparison_button"
        >
            <i class="fa fa-exchange me-2"/>
            <span>Compare</span>
            <span
                t-out="state.productCount"
                class="badge rounded-pill bg-primary ms-2 o_animate_blink"
            />
        </button>
    </t>
</templates>
