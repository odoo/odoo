<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="action_send_mail_claimer" model="ir.actions.server">
            <field name="name">Send mail to claimer</field>
            <field name="model_id" ref="model_crm_claim"/>
            <field name="condition">True</field>
            <field name="type">ir.actions.server</field>
            <field name="state">email</field>
            <field name="template_id" ref="email_template_crm_claim_send_mail"/>
        </record>

        <record id="rule_set_followers_claim" model="base.action.rule">
            <field name="name">Send Email to Claimer on creation of new claim</field>
            <field name="model_id" ref="model_crm_claim"/>
            <field name="kind">on_create</field>
            <field name="act_user_id" ref="base.user_root"/>
            <field name="server_action_ids" eval="[(6, 0, [ref('action_send_mail_claimer')])]"/>
        </record>

    </data>
</odoo>
