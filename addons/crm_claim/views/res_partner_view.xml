<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Partners inherited form -->
    <record id="res_partner_view_form_inherit_crm_claim" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="50"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='buttons']" position="inside">
                <button class="oe_inline oe_stat_button" type="action" 
                    context="{'search_default_partner_id': active_id, 'default_partner_id': active_id}"
                    name="%(crm_claim_category_claim0)d" icon="fa-comments" groups="base.group_sale_salesman">
                    <field string="Claims" name="claim_ids" widget="x2many_counter"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
