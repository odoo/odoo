<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_project_view_form" model="ir.ui.view">
        <field name="name">project.project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="priority">40</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_analytic_account_entries']" position="after">
                <button name="action_open_project_expenses" type="object" class="oe_stat_button" icon="fa-money" groups="hr_expense.group_hr_expense_team_approver">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="expenses_count" nolabel="1"/>
                        </span>
                        <span class="o_stat_text">
                            Expenses
                        </span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
