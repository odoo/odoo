<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<template id="assets_backend" name="account assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/l10n_ro/static/src/css/ro.css"/>                
            </xpath>
        </template>
		
		<record model="ir.ui.view" id="res_partner_form_ro">
            <field name="name">res.partner.form.ro</field>
            <field name="inherit_id" ref="base.view_partner_form"/>   <!-- included from base_vat.view_partner_form -->
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
             <data>                                            	
                <xpath expr="//div[@name='vat_info']" position="replace" >
                	<div name="vat_info">                        
                        <button colspan="2" name="button_check_vat" string="Check Validity" 
                        	type="object" icon="gtk-execute" class="oe_inline"/>                        
                    </div>
                </xpath>                
             </data>                                            
            </field>
        </record>
                
        <record model="ir.ui.view" id="res_partner_form2_ro">
            <field name="name">res.partner.form2.ro</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
              <data>
              	<xpath expr="//sheet/div[@class='oe_title oe_left']" position="replace">
              	  <div class="oe_title">              		 
              		<div class="oe_edit_only"> 
              			<label for="name"/>
              		</div>              		
              		<h1>
                    	<field name="name" default_focus="1" placeholder="Name" />
                	</h1>                	     		
              		<field name="is_company" on_change="onchange_type(is_company)" class="oe_inline oe_edit_only"/>
					<label for="is_company" string="Legal person" class="oe_edit_only"/>
					<label for="is_company" string="Legal person" attrs="{'invisible':[('is_company','!=',True)]}" class="oe_save_only oe_grey"/>
            		<label for="is_company" string="Contact or Phisical person" attrs="{'invisible':[('is_company','=',True)]}" class="oe_save_only oe_grey"/>              	    
              	    <field name="parent_id"
                    	placeholder="Company"
                    	domain="[('is_company', '=', True)]" context="{'default_is_company': True}"
                    	attrs="{'invisible': [('is_company','=', True)]}"
                    	on_change="onchange_address(use_parent_address, parent_id)"/>
                	<field name="category_id" widget="many2many_tags" placeholder="Tags..."/>
                  </div>
              	</xpath>                      	
           	    <xpath expr="//sheet/group" position="replace">
           	    	<group>
                	  <group>
                	  	<label for="type" attrs="{'invisible': [('parent_id','=', False)]}"/>
                    	<div attrs="{'invisible': [('parent_id','=', False)]}" name="div_type">
                        	<field class="oe_inline"
                            	name="type"/>
                        	<label for="use_parent_address" class="oe_edit_only"/>
                        	<field name="use_parent_address" class="oe_edit_only oe_inline"
                            	on_change="onchange_address(use_parent_address, parent_id)"/>
                    	</div>

                        <label for="street" string="Address"/>
                        <div>
                            <field name="street" placeholder="Street..."/>
                            <field name="street2"/>
                            <div class="address_format">
                                <field name="city" placeholder="City" style="width: 40%%"/>
                                <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' on_change="onchange_state(state_id)"/>
                                <field name="zip" placeholder="ZIP" style="width: 20%%"/>
                            </div>
                            <field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True}'/>
                        </div>	                            
                      </group>
                      <group>
                        <field name="function" placeholder="e.g. Sales Director"
                            attrs="{'invisible': [('is_company','=', True)]}"/>
                        <field name="phone" placeholder="e.g. +32.81.81.37.00"/>
                        <field name="mobile"/>
                        <field name="fax"/>
                        <field name="email" widget="email"/>	                            
                        <field name="website" widget="url" placeholder="e.g. www.openerp.com"/>
                        <field name="partn_title_type" invisible="1"/>
                        <field name="title" options='{"no_open": True}' domain="[('domain', '=', partn_title_type)]" />                                                		
                	  </group>
                	  <h4 colspan="2" >
                              <label  string="Identification" style="font-size: 110%%" />
                      </h4>     	  	
                	  <group>
                    	    <field name="id_nr" placeholder="AB123456" 
                    	    	attrs="{'invisible': [('is_company','=', True)]}"/>
                    	    <field name="id_issued_by" placeholder="SPCLEP .." attrs="{'invisible': [('is_company','=', True)]}"/>
                    	    <field name="cnp_enable" invisible="1"/>
                    	    <field name="cnp" attrs="{'invisible': ['|',('is_company','=', True),('cnp_enable','=',False)]}"/>
                    	    <field name="vat" placeholder="ex. RO1234567" on_change="vat_change(vat)" class="oe_inline" 
                    	    	attrs="{'invisible': [('is_company','=', False)], 'required':[('is_company','=', True)]}"/>
                    	    <field name="nrc" placeholder="J11-1234-2000" attrs="{'invisible': [('is_company','=', False)]}"/>
                	  </group>
                	  <group>
                	        <field name="skip_verify"	attrs="{'invisible': [('is_company','=', False)]}"
                	        	groups="base.group_partner_manager"/>
                		    <field name="vat_subjected" class="oe_inline" 
                		    	attrs="{'invisible': [('is_company','=', False)]}"/>
                	  </group>
                    </group>
              	</xpath>                      	
              </data>
            </field>
        </record>
		
	</data>
</openerp>
