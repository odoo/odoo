                            <t t-if="txt_position == 'body'">
                                <div t-if="body_txt_position == 'br'"  style="font-size:25px; text-align:right;">
                                    <span>Sample Name</span>
                                </div>
                                <div t-if="body_txt_position == 'bl'"  style="font-size:25px; text-align:left;">
