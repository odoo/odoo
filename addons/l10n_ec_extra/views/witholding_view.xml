<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_account_l10n_ec_witholding_tree" model="ir.actions.act_window">
            <field name="name">Retenciones</field>
            <field name="res_model">l10n_ec.witholding</field>
            <field name="view_mode">tree,form</field>
        </record>

    <record id="account_witholding_form_view" model="ir.ui.view">
		<field name="name">account.witholding.form</field>
		<field name="model">l10n_ec.witholding</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="valid_wth" string="Validate"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="invoice_id"/>
                        </group>
                        <group>
                            <field name="witholding_move_id" readonly="1"/>
                            <field name="amount_total"/>
                        </group>
                    </group>
                    <field name="witholding_line_ids" readonly="1">
                        <tree>
                            <field name="name" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
        </record>
    <menuitem id="menu_action_account_l10n_ec_witholding" action="action_account_l10n_ec_witholding_tree" groups="account.group_account_manager" parent="account.menu_finance_receivables" sequence="3"/>
</odoo>
