<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_co_edi_uvt_view_tree" model="ir.ui.view">
        <field name="name">l10n_co_edi.uvt.list</field>
        <field name="model">l10n_co_edi.uvt</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="year"/>
                <field name="value" widget="monetary"/>
                <field name="resolution"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="l10n_co_edi_uvt_view_form" model="ir.ui.view">
        <field name="name">l10n_co_edi.uvt.form</field>
        <field name="model">l10n_co_edi.uvt</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="year"/>
                            <field name="value"/>
                        </group>
                        <group>
                            <field name="resolution"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_l10n_co_edi_uvt" model="ir.actions.act_window">
        <field name="name">UVT Values</field>
        <field name="res_model">l10n_co_edi.uvt</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure UVT values
            </p>
            <p>
                The UVT (Unidad de Valor Tributario) is updated annually by DIAN.
                Configure the value for each year to enable threshold-based tax computations.
            </p>
        </field>
    </record>

    <menuitem id="menu_l10n_co_edi_uvt"
              name="UVT Values"
              parent="account.account_management_menu"
              action="action_l10n_co_edi_uvt"
              sequence="90"/>

</odoo>
