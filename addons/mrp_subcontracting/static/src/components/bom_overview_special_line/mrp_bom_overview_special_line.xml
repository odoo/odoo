<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mrp_subcontracting.BomOverviewSpecialLine" t-inherit="mrp.BomOverviewSpecialLine" t-inherit-mode="extension">
        <xpath expr="//td[@name='td_mrp_bom']" position="inside">
            <t t-if="this.props.type == 'subcontracting'">Subcontracting: <a href="#" t-on-click.prevent="this.goToSubcontractor" t-esc="this.subcontracting.name"/></t>
        </xpath>

        <xpath expr="//td[@name='quantity']" position="inside">
            <span t-if="this.props.type == 'subcontracting'" t-esc="this.formatFloat(this.subcontracting.quantity, {'digits': [false, this.precision]})"/>
        </xpath>

        <xpath expr="//td[@name='uom']" position="inside">
            <span t-if="this.showUom &amp;&amp; this.props.type == 'subcontracting'" t-esc="this.subcontracting.uom"/>
        </xpath>

        <xpath expr="//td[@name='bom_cost']" position="inside">
            <span t-if="this.props.type == 'subcontracting'" t-esc="this.formatMonetary(this.subcontracting.bom_cost)"/>
        </xpath>
    </t>

</templates>
