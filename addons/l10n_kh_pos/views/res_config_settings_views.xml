<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_l10n_kh_pos" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.kh.pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='order_reference']" position="after">
                <field name="company_country_code" invisible="1"/>
                <setting help="Print receipts that conform to regulations in Cambodia" invisible="company_country_code != 'KH'">
                    <field name="khmer_receipt" readonly="False"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
