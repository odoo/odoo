<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_shop_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@name='total']" position="after">
            <t t-set="tx_id" t-value="doc.get_portal_last_transaction()"/>
            <t t-if="tx_id.acquirer_id.name">
                <table class="table table-condensed mt32 mb32">
                    <thead>
                        <tr>
                            <th>Payment Information</th>
                            <th class="text-right">Total</th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">
                        <tr>
                            <td>
                                <strong>Payment Acquirer:</strong> <t t-esc="tx_id.acquirer_id.name"/><br />
                                <strong>Payment Status:</strong>
                                <t t-if="tx_id.acquirer_id.journal_id">
                                    <t t-if="tx_id.state == 'posted' or (tx_id.state == 'draft' and tx_id.capture)">
                                        <t t-raw="tx_id.acquirer_id.done_msg"/>
                                    </t>
                                    <t t-elif="tx_id.pending">
                                        <t t-raw="tx_id.acquirer_id.pending_msg"/>
                                    </t>
                                    <t t-elif="tx_id.state == 'cancelled'">
                                        <t t-raw="tx_id.acquirer_id.cancel_msg"/>
                                    </t>
                                    <t t-if="tx_id.state_message">
                                        <br/>
                                        <t t-esc="tx_id.state_message"/>
                                    </t>
                                </t>
                            </td>
                            <td class="text-right">
                                <span t-field="doc.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </xpath>
    </template>
</odoo>
