                    <div class="row">
                        <div class="s_dynamic_snippet_row row g3">
                            <div class="col-3">
                                <!-- website_sale.dynamic_filter_newest_products -->
                                <t t-set="templateData" t-value="request.env['website.snippet.filter'].get_dummy_product_records(snippet_preview_template)"/>
