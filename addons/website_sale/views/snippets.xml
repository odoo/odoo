<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="website_sale" inherit_id="website.snippets" name="Snippet Ecommerce">

    <xpath expr="//div[@id='snippet_options']" position="inside">
        <div data-js='website_sale'
            data-selector=".oe_product.oe_grid"
            data-no-check="true">

          <li class='dropdown-submenu'>
            <a tabindex="-1" href="#">Size</a>
            <div class="dropdown-menu" role="menu" name="size">
              <a href="#" role="menuitem" class="dropdown-item">
                <table>
                  <tr><td class="selected"></td><td></td><td></td><td></td></tr>
                  <tr><td></td><td></td><td></td><td></td></tr>
                  <tr><td></td><td></td><td></td><td></td></tr>
                  <tr><td></td><td></td><td></td><td></td></tr>
                </table>
              </a>
            </div>
          </li>
          <li class='dropdown-submenu' role="menuitem" aria-haspopup="true">
            <a tabindex="-1" href="#">Styles</a>
            <div class="dropdown-menu" role="menu" name="style">
            </div>
          </li>
          <li class='dropdown-submenu' role="menuitem" aria-haspopup="true">
              <a tabindex="-1" href="#">Promote</a>
              <div class="dropdown-menu" role="menu" data-no-preview="true">
                  <a href="#" class="dropdown-item" role="menuitem" data-go_to="top">Push to top</a>
                  <a href="#" class="dropdown-item" role="menuitem" data-go_to="up">Push up</a>
                  <a href="#" class="dropdown-item" role="menuitem" data-go_to="down">Push down</a>
                  <a href="#" class="dropdown-item" role="menuitem" data-go_to="bottom">Push to bottom</a>
              </div>
          </li>
        </div>
    </xpath>

</template>
</odoo>
