<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t
        t-name="website_sale.DynamicSnippetCategoryOptions"
        name="Category List"
        t-inherit="website.DynamicSnippetOption"
    >
        <BuilderRow id="template_opt_row" position="replace"/>
        <BuilderRow id="number_of_records_opt_row" position="replace"/>
        <BuilderRow id="filter_opt_row" position="replace"/>
        <BuilderRow id="section_title" position="after">
            <BuilderRow label.translate="Filters" preview="false">
                <BuilderSelect dataAttributeAction="'parentCategoryId'">
                    <BuilderSelectItem
                        dataAttributeActionValue=""
                        title.translate="All Categories"
                    >
                        All Categories
                    </BuilderSelectItem>
                    <t
                        t-foreach="this.categories"
                        t-as="category"
                        t-key="category.id"
                    >
                        <BuilderSelectItem
                            dataAttributeActionValue="category.id"
                            label="category.name"
                            t-out="category.name"
                        />
                    </t>
                </BuilderSelect>
            </BuilderRow>
            <BuilderRow label.translate="Size">
                <BuilderSelect action="'setCategoryGridSize'" >
                    <BuilderSelectItem actionValue="'small'">Small</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'medium'">
                        Medium
                    </BuilderSelectItem>
                    <BuilderSelectItem actionValue="'large'">Large</BuilderSelectItem>
                </BuilderSelect>
            </BuilderRow>
            <BuilderRow label.translate="Columns">
                <BuilderRange min="2" max="5" action="'setCategoryGridColumns'"/>
            </BuilderRow>
            <BuilderRow label.translate="Spacing">
                <BuilderRange min="0" max="5" action="'setCategoryGridGap'"/>
            </BuilderRow>
            <BuilderRow label.translate="Roundness">
                <BuilderRange min="0" max="5" action="'setCategoryGridRoundness'"/>
            </BuilderRow>
            <BuilderRow label.translate="Alignment" preview="false">
                <BuilderButtonGroup dataAttributeAction="'alignment'">
                    <BuilderButton dataAttributeActionValue="'left'">
                        <i class="fa fa-fw fa-align-left"/>
                    </BuilderButton>
                    <BuilderButton dataAttributeActionValue="'center'">
                        <i class="fa fa-fw fa-align-center"/>
                    </BuilderButton>
                    <BuilderButton dataAttributeActionValue="'right'">
                        <i class="fa fa-fw fa-align-right"/>
                    </BuilderButton>
                </BuilderButtonGroup>
            </BuilderRow>
            <BuilderRow
                t-if="this.dynamicOptionParams.domState.parentCategoryId"
                label.translate="Parent Category"
                dataAttributeAction="'showParent'"
                preview="false"
            >
                <BuilderCheckbox dataAttributeActionValue="'true'"/>
            </BuilderRow>
            <BuilderRow label.translate="Clickable items">
                <BuilderCheckbox
                    id="'clickable_items_opt'"
                    action="'toggleClickable'"
                    classAction="'s_dynamic_category_clickable_items'"
                    preview="false"
                />
            </BuilderRow>
            <BuilderRow
                t-if="!isActiveItem('clickable_items_opt')"
                label.translate="Label"
                level="1"
            >
                <BuilderTextInput dataAttributeAction="'button'" preview="false"/>
            </BuilderRow>
        </BuilderRow>
    </t>
    <t t-name="website_sale.dynamicSnippetCategoryItemOptions" name="Category">
        <BuilderRow label.translate="Media">
            <BuilderButton
                label.translate="Replace"
                className="'w-100'"
                type="'success'"
                action="'setCategoryImage'"
                preview="false"
            />
        </BuilderRow>
    </t>
</templates>
