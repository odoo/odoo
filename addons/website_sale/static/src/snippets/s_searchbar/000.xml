<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="website_sale.search_items_product">
        <t t-foreach="bucket.data" t-as="result" t-key="result_index">
            <t t-call="website.search_result_item">
                <t t-set="search_item_metadata" t-value="result['list_price']"/>
            </t>
        </t>
    </t>

    <t t-name="website_sale.search_items_product_category">
        <t t-foreach="bucket.data" t-as="result" t-key="result_index">
            <t t-call="website.search_result_item">
                <t t-set="search_item_metadata" t-value="result['breadcrumb']"/>
            </t>
        </t>
    </t>
</templates>
