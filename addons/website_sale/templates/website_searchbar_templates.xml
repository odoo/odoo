<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="website_sale.search_items_product_view">
    <t t-foreach="bucket['data']" t-as="result">
        <t t-call="website.search_result_item" search_item_metadata="result['list_price']"/>
    </t>
</template>

<template id="website_sale.search_items_product_category_view">
    <t t-foreach="bucket['data']" t-as="result">
        <t t-call="website.search_result_item" search_item_metadata="result['breadcrumb']"/>
    </t>
</template>

</odoo>
