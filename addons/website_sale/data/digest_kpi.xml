<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kpi_website_sale_total" model="digest.kpi" forcecreate="True">
        <field name="name">eCommerce Sales</field>
        <field name="res_model_id" ref="model_sale_report"/>
        <field name="agg_mode">sum</field>
        <field name="agg_field" ref="sale.field_sale_report__price_subtotal"/>
        <field name="date_field" ref="sale.field_sale_report__date"/>
        <field name="domain">[('state', 'not in', ['draft', 'cancel', 'sent']), ('website_id', '!=', False)]</field>
        <field name="group_ids" eval="[Command.link(ref('sales_team.group_sale_salesman_all_leads'))]"/>
        <field name="action_id" ref="website.backend_dashboard"/>
        <field name="action_menu_root_id" ref="website.menu_website_configuration"/>
        <field name="module_id" ref="base.module_website_sale"/>
        <field name="sequence" eval="12000"/>
    </record>
</odoo>
