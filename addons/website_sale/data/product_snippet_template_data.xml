        <template id="dynamic_filter_template_product_product_card_group" name="Card group">
            <t t-foreach="records" t-as="data"
                data-row-per-slide="2"
                data-number-of-elements="2"
                data-number-of-elements-sm="1"
                data-arrow-position="top"
                data-extra-classes="o_card_group"
                data-thumb="/website_sale/static/src/img/snippets_options/product_card_group.svg"
            >
                <t t-set="record" t-value="data['_record']"/>
                <t t-set="product_template_id" t-value="record.id if not record.is_product_variant else record.product_tmpl_id.id"/>
                <t t-set="product_id" t-value="record.id if record.is_product_variant else record.product_variant_id.id"/>
                <div class="o_carousel_product_card card w-100 rounded-0 border-top-0 border-start-0 opacity-trigger-hover">
                    <button
                        t-if="data.get('_latest_viewed')"
                        type="button"
                        class="btn btn-secondary position-absolute end-0 top-0 mt-2 me-2 rounded-circle p-0 opacity-0 opacity-100-hover z-2 js_remove"
                        t-att-data-product-id="product_id"
                        t-att-data-product-template-id="product_template_id"
                        t-att-data-product-selected="record.is_product_variant">
                            <i class="fa fa-trash fa-stack" role="img"/>
                    </button>
                    <div t-if="is_sample" class="o_ribbon_right fs-5 text-uppercase z-1 bg-o-color-1">Sample</div>
                    <input type="hidden" name="product-id" t-att-data-product-id="record.id"/>
                    <div class="card-body d-flex p-0">
                        <div class="d-flex flex-column flex-grow-1 p-3">
                            <p class="card-title text-reset" t-field="record.display_name"/>
                            <t t-call="website_sale.price_dynamic_filter_template_product_product">
                                <t t-set="priceClasses" t-value="'fs-5 fw-bold'"/>
                                <t t-set="preventZeroClasses" t-value="'fs-6 opacity-50'"/>
                            </t>
                            <t t-if="is_view_active('website_sale.product_comment')" t-call="portal_rating.rating_widget_stars_static">
                                <t t-set="customClass" t-value="'mt-auto pt-3'"/>
                                <t t-set="rating_avg" t-value="record.rating_avg"/>
                                <t t-set="rating_count" t-value="record.rating_count"/>
                            </t>
                        </div>
                        <div class="flex-shrink-0 w-50 w-lg-25">
                            <a class="o_carousel_product_img_link stretched-link d-block h-100 overflow-hidden o_dynamic_product_hovered" t-att-href="record.website_url">
                                <div class="position-relative h-100 o_minimum_squared_height">
                                    <img class="position-absolute start-0 top-0 w-100 h-100 object-fit-cover transition-base" loading="lazy" t-att-src="data['image_512']" t-att-alt="record.display_name"/>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="price_dynamic_filter_template_product_product" name="Dynamic Product Filter Price">
            <t t-if="data.get('prevent_zero_price_sale')">
                <span t-attf-class="#{preventZeroClasses}" t-field="website.prevent_zero_price_sale_text"/>
            </t>
            <t t-elif="not data.get('is_sample')">
                <div t-attf-class="#{wrapPriceClasses}">
                    <span t-out="data['price']"
                        t-attf-class="#{priceClasses or 'fw-bold'}"
                        name="product_price"
                        t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                    <del t-if="data.get('has_discounted_price')" t-attf-class="#{discountClasses or 'p ms-1 text-nowrap text-danger'}"
                        t-out="data['list_price']"
                        t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                </div>
            </t>
            <t t-elif="data.get('is_sample')">
                <span t-attf-class="#{priceClasses or 'fw-bold'}" t-if="is_sample">$ 99.99</span>
            </t>
        </template>

