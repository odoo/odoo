                    </button>
                    <div class="w-md-50 rounded-4 overflow-hidden">
                        <img class="card-img-top h-100 object-fit-cover o_img_ratio_4x3" loading="lazy" t-att-src="data['image_512']" t-att-alt="record.display_name"/>
                    </div>
                    <div class="d-flex flex-column justify-content-center gap-3 w-md-50 p-3 p-md-5">
                        <h2 class="card-title mb-0" t-field="record.display_name"/>
                        <t t-call="website_sale.price_dynamic_filter_template_product_product">
                            <t t-set="priceClasses" t-value="'fs-3 fw-bold lh-1'"/>
                            <t t-set="wrapPriceClasses" t-value="'d-flex gap-2 align-items-center'"/>
                            <t t-set="preventZeroClasses" t-value="'fs-4 opacity-50'"/>
                            <t t-set="discountClasses" t-value="'text-danger'"/>
