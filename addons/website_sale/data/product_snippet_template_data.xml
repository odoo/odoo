                    <div class="row h-100 p-0">
                        <div class="col-lg-4 pe-lg-0">
                            <a class="o_carousel_product_img_link stretched-link d-block rounded overflow-hidden o_dynamic_product_hovered" t-att-href="record.website_url">
                                <div class="position-relative o_img_ratio_1x1">
                                    <img class="position-absolute start-0 top-0 w-100 h-100 transition-base object-fit-cover" loading="lazy" t-att-src="data['image_512']" t-att-alt="record.display_name"/>
                                </div>
                            </a>
                        </div>
                        <div class="col-lg-8">
                            <div class="card-body d-flex flex-column h-100 p-0">
                                <button
                                t-if="data.get('_latest_viewed')"
                                    type="button"
                                    class="btn btn-secondary position-absolute end-0 top-0 mt-2 me-2 rounded-circle p-0 opacity-0 opacity-100-hover z-1 js_remove"
                                    t-att-data-product-id="product_id"
                                    t-att-data-product-template-id="product_template_id"
                                    t-att-data-product-selected="record.is_product_variant">
                                        <i class="fa fa-trash fa-stack" role="img"/>
                                </button>
                                <p class="card-title mt-3 mt-lg-0 text-reset" t-field="record.display_name"/>
                                <t t-call="website_sale.price_dynamic_filter_template_product_product">
                                    <t t-set="wrapPriceClasses" t-value="'d-flex align-items-center gap-2'"/>
                                    <t t-set="priceClasses" t-value="'fs-4 fw-bold'"/>
                                    <t t-set="preventZeroClasses" t-value="'fs-6 opacity-50'"/>
                                    <t t-set="discountClasses" t-value="'fs-6 text-danger'"/>
                                </t>
                                <div class="mt-lg-auto ms-lg-auto">
                                    <t t-if="is_view_active('website_sale.product_comment')" t-call="portal_rating.rating_widget_stars_static">
                                        <t t-set="rating_style_compressed" t-value="true"/>
                                        <t t-set="rating_avg" t-value="record.rating_avg"/>
                                        <t t-set="rating_count" t-value="record.rating_count"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="dynamic_filter_template_product_product_horizontal_card_2" name="Horizontal Card width covered image">
            <t t-foreach="records" t-as="data"
                data-row-per-slide="2"
                data-arrow-position="top"
                data-number-of-elements="2"
                data-number-of-elements-sm="1"
                data-extra-classes="o_carousel_multiple_rows"
                data-thumb="/website_sale/static/src/img/snippets_options/product_horizontal_card_2.svg"
            >
                <t t-set="record" t-value="data['_record']"/>
                <t t-set="product_template_id" t-value="record.id if not record.is_product_variant else record.product_tmpl_id.id"/>
                <t t-set="product_id" t-value="record.id if record.is_product_variant else record.product_variant_id.id"/>
                <div class="o_carousel_product_card card w-100 border-0 opacity-trigger-hover o_cc o_cc5 o_dynamic_product_hovered">
                    <div t-if="is_sample" class="o_ribbon_right fs-5 text-uppercase z-1 bg-o-color-1">Sample</div>
                    <button
                        t-if="data.get('_latest_viewed')"
                        type="button"
                        class="btn btn-secondary position-absolute end-0 top-0 mt-2 me-2 rounded-circle p-0 opacity-0 opacity-100-hover z-2 js_remove"
                        t-att-data-product-id="product_id"
                        t-att-data-product-template-id="product_template_id"
                        t-att-data-product-selected="record.is_product_variant">
                            <i class="fa fa-trash fa-stack" role="img"/>
                    </button>
                    <a class="o_carousel_product_img_link stretched-link" t-att-href="record.website_url">
                        <img class="img img-fluid position-absolute w-100 h-100 object-fit-cover opacity-25 transition-base" loading="lazy" t-att-src="data['image_512']" t-att-alt="record.display_name"/>
                    </a>
                    <div class="position-relative d-flex flex-column gap-3 h-100 p-3">
                        <div class="d-flex align-items-center align-items-md-start align-items-lg-center gap-3 gap-md-1 gap-lg-3 flex-md-column flex-lg-row">
                            <h4 class="card-title flex-grow-1" t-field="record.display_name"/>
                            <t t-call="website_sale.price_dynamic_filter_template_product_product">
                                <t t-set="priceClasses" t-value="'fs-4 fw-bold'"/>
                                <t t-set="preventZeroClasses" t-value="'text-muted'"/>
                                <t t-set="wrapPriceClasses" t-value="'d-flex flex-column'"/>
                                <t t-set="discountClasses" t-value="'badge bg-danger'"/>
                            </t>
                        </div>
                        <p class="card-text" t-field="record.description_sale"/>
                        <div class="d-flex align-items-center gap-3 mt-auto">
                            <t t-if="is_view_active('website_sale.product_comment')" t-call="portal_rating.rating_widget_stars_static">
                                <t t-set="customClass" t-value="'flex-grow-1'"/>
                                <t t-set="rating_avg" t-value="record.rating_avg"/>
                                <t t-set="rating_count" t-value="record.rating_count"/>
                            </t>
                            <button
                                t-if="record._website_show_quick_add()"
                                type="button"
                                role="button"
                                class="btn btn-secondary mt-auto z-2 js_add_cart"
