<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_work_entry_type_view_form" model="ir.ui.view">
        <field name="name">hr.work.entry.type.view.form.inherit</field>
        <field name="model">hr.work.entry.type</field>
        <field name="inherit_id" ref="hr_holidays.hr_work_entry_type_view_form"/>
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <label for="support_document" position="after">
                <label for="overtime_deductible" class="fw-bold me-4"/>
            </label>
            <field name="support_document" nolabel="1" position="after">
                <field name="overtime_deductible" nolabel="1"/>
            </field>
            <group name="negative_cap" position="attributes">
                <attribute name="invisible">not requires_allocation and not overtime_deductible</attribute>
            </group>
        </field>
    </record>
</odoo>
