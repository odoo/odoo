<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_move_send_inherit_l10n_dk_nemhandel">
            <field name="name">account.move.send.form.inherit.l10n.dk.nemhandel</field>
            <field name="model">account.move.send</field>
            <field name="inherit_id" ref="account.account_move_send_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='warnings']" position="inside">
                    <field name="enable_nemhandel" invisible="1"/>
                    <div class="m-0" invisible="not checkbox_send_nemhandel or not nemhandel_warning">
                        <field name="nemhandel_warning" class="o_field_html" widget="actionable_errors"/>
                    </div>
                </xpath>
                <xpath expr="//div[@name='option_send_mail']" position='after'>
                    <div name="option_nemhandel"
                         invisible="not enable_nemhandel">
                        <field name="checkbox_send_nemhandel"/>
                        <label for="checkbox_send_nemhandel" class="fw-bold"/>
                        <field name="nemhandel_mode_info" class="oe_inline o_form_label"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
