<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_journal_dashboard_kanban_view" model="ir.ui.view">
        <field name="name">account.journal.dashboard.kanban</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//kanban" position="inside">
                    <field name="is_nemhandel_journal"/>
                    <field name="l10n_dk_nemhandel_proxy_state"/>
                </xpath>

                <xpath expr="//t[@id='account.JournalBodySalePurchase']//div" position="inside">
                    <t t-if="record.l10n_dk_nemhandel_proxy_state and record.l10n_dk_nemhandel_proxy_state.raw_value === 'receiver'">
                        <t t-if="journal_type == 'sale'">
                            <div class="w-100">
                                <a type="object" name="nemhandel_get_message_status" groups="account.group_account_invoice">Fetch Nemhandel invoice status</a>
                            </div>
                        </t>
                        <t t-elif="journal_type == 'purchase'">
                            <t t-if="record.is_nemhandel_journal.raw_value">
                                <div class="w-100">
                                    <a type="object" name="nemhandel_get_new_documents" groups="account.group_account_invoice">Fetch from Nemhandel</a>
                                </div>
                            </t>
                        </t>
                    </t>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
