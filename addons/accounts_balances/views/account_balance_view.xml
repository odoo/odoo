<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_balance_form" model="ir.ui.view">
            <field name="name">account.balance.form</field>
            <field name="model">account.balance</field>
            <field name="arch" type="xml">
                <form string="Calculate Account Balance">
                    <group>
                        <field name="account_ids" widget="many2many_tags"/>
                        <field name="balance" readonly="1"/>
                        <field name="currency_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_account_balance_form" model="ir.actions.act_window">
            <field name="name">Calculate Account Balance</field>
            <field name="res_model">account.balance</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_balance_form"/>
            <field name="target">new</field>
            <field name="type">ir.actions.act_window</field>
        </record>

        <menuitem id="menu_custom_account_balance" name="Account Balance" sequence="10" />

        <menuitem id="menu_account_balance" name="Calculate Balance" parent="menu_custom_account_balance" action="action_account_balance_form" sequence="10" />
    </data>
</odoo>
