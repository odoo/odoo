            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Analytic Lines to Invoice">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="account_id"/>
                    <field name="amount"/>
                    <field name="sale_price"/>
                    <field name="unit_amount"/>
                    <field name="product_uom_id"/>
