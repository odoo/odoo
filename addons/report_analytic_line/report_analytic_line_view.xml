                    <field name="account_id" select="1"/>
                    <newline/>
                    <field name="product_id" select="1"/>
                    <field name="product_uom_id"/>
                    <newline/>
                    <field colspan="1" name="amount"/>
                    <field colspan="1" name="unit_amount"/>
