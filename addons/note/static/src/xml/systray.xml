<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-extend="mail.systray.ActivityMenuPreview">
        <t t-jquery="t[t-foreach*='activities'][t-as*='activity']" t-operation="after">
            <div class="o_note_show">
                <a class="btn btn-block text-center">Add new note</a>
            </div>
            <div class="o_note o_mail_conversation_preview hidden">
                <div class="o_mail_conversation_image o_mail_conversation_app">
                    <img src="/note/static/description/icon.png"/>
                </div>
                <div class="o_conversation_info">
                    <div class="o_conversation_title">
                        <span class="o_conversation_name"><strong>Add a note</strong></span>
                        <div class="o_note_datetime"/>
                        <span class="ml4">
                            <a class="o_note_set_datetime text-muted">
                                <span class="fa fa-clock-o"/>
                            </a>
                        </span>
                    </div>
                    <div class="o_note_input_box">
                        <p><input class="o_note_input" type="text" placeholder="Remember..." /></p>
                        <span class="ml8 mr4">
                            <a class="o_note_save">SAVE</a>
                        </span>
                    </div>
                </div>
            </div>
        </t>
    </t>
</templates>