<?xml version="1.0"?>
<openerp>
    <data noupdate="1">
        <!-- After installation of the module, open the related menu -->
        <record id="action_client_note" model="ir.actions.client">
            <field name="name">Open Notes Menu</field>
            <field name="tag">reload</field>
            <field name="params" eval="{'menu_id': ref('menu_note_notes')}"/>
        </record>
        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="action_client_note"/>
            <field name="state">open</field>
        </record>
    </data>
</openerp>
