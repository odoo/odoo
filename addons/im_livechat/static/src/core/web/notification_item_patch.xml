<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.NotificationItem" t-inherit-mode="extension">
        <xpath expr="//*[hasclass('o-mail-NotificationItem-avatarContainer')]" position="inside">
            <t t-if="this.props.thread?.channel?.channel_type === 'livechat'" t-call="im_livechat.LivechatStatusLabelOfThread">
                <t t-set="templateParams" t-value="{ livechatThread: this.props.thread, small: true }"/>
            </t>
        </xpath>
    </t>
</templates>
