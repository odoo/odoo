<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.discuss.channel_member" t-inherit-mode="extension">
        <xpath expr="//*[@t-ref='displayName']" position="replace">
            <div class="d-flex flex-column">
                <t>$0</t>
                <div class="ms-2 d-flex">
                    <span t-if="member.persona?.lang_name" class="me-2">
                        <i class="fa fa-comment-o me-1" aria-label="Lang"/>
                        <t t-esc="member.persona.lang_name"/>
                    </span>
                    <span t-if="member.persona?.country or props.thread.channel?.anonymous_country">
                        <i class="fa fa-globe me-1" aria-label="country"/>
                        <t t-esc="member.persona?.country?.name ?? props.thread.channel.anonymous_country.name"/>
                    </span>
                </div>
            </div>
        </xpath>
    </t>
</templates>
