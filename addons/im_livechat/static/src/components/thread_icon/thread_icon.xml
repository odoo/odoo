<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ThreadIcon" t-inherit-mode="extension">
        <xpath expr="//*[@name='rootCondition']" position="inside">
            <t t-elif="thread.__mfield_channel_type(mself) === 'livechat'">
                <t t-if="thread.__mfield_orderedOtherTypingMembers(mself).length > 0">
                    <ThreadTypingIcon
                        class="o_ThreadIcon_typing"
                        animation="'pulse'"
                        title="thread.__mfield_typingStatusText(mself)"
                    />
                </t>
                <t t-else="">
                    <div class="fa fa-comments" title="Livechat"/>
                </t>
            </t>
        </xpath>
    </t>
</templates>
