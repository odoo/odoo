<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ThreadIcon" t-inherit-mode="extension">
        <xpath expr="//*[@name='root']" position="inside">
            <t t-elif="threadIconView.thread.channel and threadIconView.thread.channel.channel_type === 'livechat'">
                <t t-if="threadIconView.thread.orderedOtherTypingMembers.length > 0">
                    <ThreadTypingIcon
                        className="'o_ThreadIcon_typing'"
                        animation="'pulse'"
                        title="threadIconView.thread.typingStatusText"
                    />
                </t>
                <t t-else="">
                    <div class="fa fa-fw fa-comments" title="Livechat"/>
                </t>
            </t>
        </xpath>
    </t>
</templates>
