<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1:
-->
<templates xml:space="preserve">
<t t-name="crm_wardialing.PhonecallWidget">
    <div rel='popover' data-trigger="hover" data-placement='right' class="oe_dial_phonecall ui-draggable">
         <table class="oe_form_group">
            <tr class="oe_form_group_row">
                <td class="oe_form_group_cell oe_form_group_cell_label">
                    <span class="phonecall_id" style="display:none"><t t-esc="widget.get('id')"/></span>
                    <t t-if="widget.get('partner')">
                        <span class="oe_dial_phonecall_clip">
                            <img t-att-src="'data:image/jpg;base64,'+widget.get('image_small')" class="oe_dial_phonecall_avatar"/>
                        </span>
                    </t>
                    <t t-if="widget.get('partner') == false">
                        <span class="oe_dial_phonecall_clip">
                            <img t-att-src='_s + "/base/static/src/img/avatar.png"' class="oe_dial_phonecall_avatar"/>
                        </span>
                    </t>
                </td>
                <td class="oe_form_group_cell">
                    <t t-if="widget.get('partner')">
                        <span class="oe_dial_phonecall_name"><t t-esc="widget.get('partner')"/></span><br/>
                    </t>
                    <t t-if="widget.get('partner') == false">
                        <span class="oe_dial_phonecall_name">Unknow</span><br/>
                    </t>
                    <span><t t-esc="widget.get('opportunity')"/></span>
                </td>
            </tr>
        </table>       
    </div>
</t>

<t t-name="crm_wardialing.DialingPanel">
    <div class="oe_dial">
        <div class="oe_dial_frame_header">
            <button class="oe_e oe_dial_search_icon" title="Refresh the Panel">Ã´</button>
            <input class="oe_dial_searchbox" t-att-placeholder="_t('Search phonecalls...')"/>
            <span class="oe_e oe_dial_search_clear">[</span>
            <div style="float:right;">
                <a href="#">
                        <i title="Refresh the Panel" class="oe_dial_refresh_icon fa fa-refresh"></i>
                </a>
                <a href="#">
                        <i title="Close the Panel" class="oe_dial_close_icon fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="oe_dial_phonecalls"></div>
        <div class="oe_dial_content">
            <div class="oe_dial_callingbuttons">
                <button type="button" class="btn btn-success btn-sm oe_dial_buttons oe_dial_callbutton">Call</button>
                <button type="button" class="btn btn-success btn-sm btn-sm oe_dial_buttons oe_dial_nextcallbutton">Next Call/Change priority</button>
                <button type="button" class="btn btn-danger btn-sm oe_dial_buttons oe_dial_hangupbutton">Hang Up</button>
                <button type="button" class="btn btn-info btn-sm oe_dial_buttons oe_dial_transferbutton">Transfer</button>
            </div>
            <div class="oe_dial_optionalbuttons">
                <button type="button" class="btn btn-info btn-sm oe_dial_buttons oe_dial_changelog">Log Call</button>
                <button type="button" class="btn btn-info btn-sm oe_dial_buttons oe_dial_email">Send Email</button>
            </div>
            <div class="oe_dial_redirectbuttons">
                <button type="button" class="btn btn-info btn-sm oe_dial_buttons oe_dial_to_client"><i class="fa fa-arrow-circle-o-right"></i> Customer</button>
                <button type="button" class="btn btn-info btn-sm oe_dial_buttons oe_dial_to_lead"><i class="fa fa-arrow-circle-o-right"></i> Opp.</button>
            </div>
        </div>
    </div>
</t>

<t t-name="crm_wardialing_Tooltip">
    <t t-if="partner_name">
        <div style="font-weight: bold;">
            <span class="oe_form_field oe_form_field_char"><t t-esc="partner_name"/></span>
        </div>
    </t>
    <t t-if="partner_name == false">
        <div style="font-weight: bold;">
            <span class="oe_form_field oe_form_field_char">Unknow</span>
        </div>
    </t>
    <div style="font-style: italic;">
        <t t-if="phone">
            <span class="oe_form_field oe_form_field_char"><t t-esc="phone"/></span><br/>
        </t>
        <t t-if="mobile">
            <span class="oe_form_field oe_form_field_char"><t t-esc="mobile"/></span>
        </t>
    </div>
    <t t-if="email">
        <div>
            <span class="oe_form_field oe_form_field_char"><t t-esc="email"/></span>
        </div>
    </t>
    <t t-if="description">
        <div style="margin-top:5px;margin-bottom:5px;">
            <span class=" oe_form_label oe_align_right"> Description: </span><br/>
            <span class="oe_form_field oe_form_field_char"><t t-esc="description"/></span>
        </div>
    </t>
    <t t-if="title_action">
        <div style="margin-top:5px;margin-bottom:5px;">
            <span class=" oe_form_label oe_align_right"> Next Action: </span><br/>
            <span class="oe_form_field oe_form_field_char"><t t-esc="title_action"/></span>
        </div>
    </t>
    <t t-if="planned_revenue">
        <div>
            <span class=" oe_form_label oe_align_right"> Expected Revenue: </span><br/>
            <t t-esc="planned_revenue"/> at <t t-esc="probability"/> %
        </div>
    </t>
</t>

<t t-name="crm_wardialing_Tooltip_title">
    <div>
        <span><t t-esc="opportunity"/></span>
        <div>
            <t t-foreach="priority" t-as="prior">
                <i class="fa fa-star"></i>
            </t>
            <t t-foreach="empty_star" t-as="empty">
                <i class="fa fa-star-o"></i>
            </t>
        </div>
    </div>
</t>
</templates>
