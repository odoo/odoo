<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="product assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/product/static/src/js/weight_widget.js"></script>
            <script type="text/javascript" src="/product/static/src/js/volume_widget.js"></script>
        </xpath>
    </template>

    <template id="qunit_suite" inherit_id="web.qunit_suite">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/product/static/tests/widget_tests.js"/>
        </xpath>
    </template>

</odoo>
