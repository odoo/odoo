<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_pricelist">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2><span t-esc="pricelist"/></h2>

                <div class="row">
                    <div class="col-xs-3">
                        <strong>Currency</strong>:
                        <div t-esc="currency"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Print date</strong>:
                        <div t-esc="time.strftime('%Y-%m-%d')"/>
                    </div>
                </div>
                <br/>
                
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th colspan="3">
                                <strong>Description</strong>
                            </th>
                            <t t-if="titles">
                                <t t-foreach="titles" t-as="title">
                                    <th><strong t-esc="title"/></th>
                                </t>
                            </t>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="categories">
                            <t t-foreach="categories" t-as="cat">
                                <tr>
                                    <td t-att-colspan="len(titles) + 3">
                                        <strong t-esc="cat['name']"/>
                                    </td>
                                </tr>
                                <tr t-foreach="cat['products']" t-as="product">
                                    <t t-if="product.get('variants')">
                                        <tr>
                                           <td t-att-colspan="len(titles) + 3">
                                               <i t-esc="product['name']"/>
                                           </td>
                                        </tr>
                                        <tr t-foreach="product['variants']" t-as="p">
                                            <t t-call="product.pricelist_line"></t>
                                        </tr>
                                    </t>
                                    <t t-if="not product.get('variants', False)">
                                        <tr t-foreach="[product]" t-as="p">
                                            <t t-call="product.pricelist_line"></t>
                                        </tr>
                                    </t>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
<template id="pricelist_line">
    <td colspan="3">
        <t t-if="p.get('code')">
            [<span t-esc="p['code']"/>]
        </t> 
        <span t-esc="p['name']"/>
        <t t-if="p.get('attribute')">
            (<t t-esc="p['attribute']"/>)
        </t>
    </td>
    <td t-if="p.has_key('qty1')"><strong t-esc="p['qty1']"/></td>
    <td t-if="p.has_key('qty2')"><strong t-esc="p['qty2']"/></td>
    <td t-if="p.has_key('qty3')"><strong t-esc="p['qty3']"/></td>
    <td t-if="p.has_key('qty4')"><strong t-esc="p['qty4']"/></td>
    <td t-if="p.has_key('qty5')"><strong t-esc="p['qty5']"/></td>
</template>
</data>
</openerp>
