            groups="product.group_product_variant"
        />
        <menuitem
            id="menu_pricelists"
            name="Pricelists"
            sequence="50"
        >
            <menuitem
                id="menu_product_pricelist"
                name="Sale pricelists"
                action="product.product_pricelist_action2"
                sequence="10"
                groups="product.group_product_pricelist"
