        <template id="report_simple_label4x12">
            <t t-set="barcode_size" t-value="'width:33mm;height:4mm'"/>
            <t t-set="table_style" t-value="'width:43mm;height:19mm;' + table_style"/>
            <t t-set="currency" t-value="pricelist.currency_id or product.currency_id"/>
            <t t-set="base_unit_price" t-value="product.base_unit_price if product.base_unit_count and product.base_unit_name else 0"/>
            <t t-set="with_price" t-value="env['product.label.layout'].browse(layout_wizard).with_price"/>
            <td t-att-style="make_invisible and 'visibility:hidden;'" >
                <div class="o_label_full o_label_small_text" t-att-style="table_style">
                    <div class="o_label_name">
                        <strong t-field="product.display_name"/>
                    </div>
                    <div class="o_label_left_column">
                        <span class="text-nowrap" t-field="product.default_code"/>
                    </div>
                    <t t-if="with_price">
                        <div class="o_label_price_medium text-end">
                            <strong t-out="pricelist._get_product_price(product, 1, currency=currency)"
                                    t-options="{'widget': 'monetary', 'display_currency': currency, 'label_price': True}"/>
