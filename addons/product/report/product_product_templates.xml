                        </t>
                    </div>
                </div>
            </td>
        </template>

        <template id="report_simple_label_dymo">
            <t t-set="base_unit_price" t-value="product.base_unit_price if product.base_unit_count and product.base_unit_name else 0"/>
            <t t-set="with_price" t-value="env['product.label.layout'].browse(layout_wizard).with_price"/>
            <t t-set="currency" t-value="pricelist.currency_id or product.currency_id"/>
            <div class="o_label_sheet o_label_dymo" t-att-style="padding_page">
                <div class="o_label_full" t-att-style="table_style">
                    <div class= "text-start o_label_small_barcode">
                        <t t-if="barcode">
                            <!-- `quiet=0` to remove the left and right margins on the barcode -->
                            <div t-out="barcode" style="padding:0" t-options="{'widget': 'barcode', 'quiet': 0, 'symbology': 'auto', 'img_style': barcode_size}"/>
                            <div class="o_label_name" style="height:1.7em;background-color: transparent;">
                                <span t-out="barcode"/>
                            </div>
                        </t>
                    </div>
                    <div class="o_label_name" style="line-height: 100%;background-color: transparent;padding-top: 1px;">
                        <span t-if="product.is_product_variant" t-field="product.display_name"/>
                        <span t-else="" t-field="product.name"/>
                    </div>
                    <div class="o_label_left_column">
                        <small class="text-nowrap" t-field="product.default_code" style="font-size: 0.875em;"/>
                    </div>
                    <t t-if="with_price">
                        <div class="text-end" style="padding: 0 4px; line-height: 80%;">
                            <strong class="o_label_price_small" t-out="pricelist._get_product_price(product, 1, currency=currency)"
                                    t-options="{'widget': 'monetary', 'display_currency': currency, 'label_price': True}"/>
                            <t t-if="base_unit_price">
                                <br/>
                                <strong class="o_label_unit_small">
                                    (<t t-esc="base_unit_price" t-options="{'widget': 'monetary', 'display_currency': currency}"/>/<t t-esc="product.base_unit_name"/>)
                                </strong>
                            </t>
                        </div>
                    </t>
                </div>
            </div>
        </template>

        <template id="report_productlabel">
            <t t-call="web.html_container">
                <t t-if="columns and rows">
                    <t t-if="columns == 2 and rows == 7">
                        <t t-set="padding_page" t-value="'padding: 14mm 3mm'"/>
                        <t t-set="report_to_call" t-value="'2x7'"/>
                    </t>
                    <t t-if="columns == 4 and rows == 7">
                        <t t-set="padding_page" t-value="'padding: 14mm 3mm'"/>
                        <t t-set="report_to_call" t-value="'4x7'"/>
                    </t>
                    <t t-if="columns == 4 and rows == 12">
                        <t t-set="padding_page" t-value="'padding: 20mm 8mm'"/>
                        <t t-set="report_to_call" t-value="'4x12'"/>
                    </t>
                    <t t-foreach="range(page_numbers)" t-as="page">
                        <div class="o_label_sheet" t-att-style="padding_page">
                            <table class="my-0 table table-sm table-borderless">
                                <t t-foreach="range(rows)" t-as="row">
                                    <tr>
                                        <t t-foreach="range(columns)" t-as="column">
                                            <t t-if="not current_quantity and quantity and not (current_data and current_data[1])">
                                                <t t-set="current_data" t-value="quantity.popitem()"/>
                                                <t t-set="product" t-value="current_data[0]"/>
                                                <t t-set="barcode_and_qty" t-value="current_data[1].pop()"/>
                                                <t t-set="barcode" t-value="barcode_and_qty[0]"/>
                                                <t t-set="current_quantity" t-value="barcode_and_qty[1]"/>
                                            </t>
                                            <t t-if="current_quantity">
                                                <t t-set="make_invisible" t-value="False"/>
                                                <t t-set="current_quantity" t-value="current_quantity - 1"/>
                                            </t>
                                            <t t-elif="current_data and current_data[1]">
                                                <t t-set="barcode_and_qty" t-value="current_data[1].pop()"/>
                                                <t t-set="barcode" t-value="barcode_and_qty[0]"/>
                                                <t t-set="current_quantity" t-value="barcode_and_qty[1] - 1"/>
                                            </t>
                                            <t t-else="">
                                                <t t-set="make_invisible" t-value="True"/>
                                            </t>
                                            <t t-set="table_style" t-value="'border: 1px solid %s;' % (product.env.user.company_id.primary_color or 'black')"/>
                                            <!-- IMPORTANT: explictly call templates in place of {{template}} otherwise studio won't load report correctly -->
                                            <t t-if="report_to_call == '2x7'">
                                                <t t-call="product.report_simple_label2x7"/>
                                            </t>
                                            <t t-elif="report_to_call == '4x7'">
                                                <t t-call="product.report_simple_label4x7"/>
                                            </t>
                                            <t t-elif="report_to_call == '4x12'">
                                                <t t-call="product.report_simple_label4x12"/>
                                            </t>
                                        </t>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="report_normal_label_zpl">
<t t-if="product._name == 'product.product'">
^FT35,40^A0N,25^FD<t t-out="f'[{product.default_code}] {product.name}' if product.default_code else product.name"/>^FS
^FT35,65^A0N,20^FD<t t-out="product.product_template_attribute_value_ids._get_combination_name()"/>^FS
</t>
<t t-else="">
^FT35,40^A0N,25^FD<t name="display_name" t-out="product.display_name"/>^FS
</t>
<t t-if="barcode">
^FO35,77^BY2 ^BCN,100,Y,N,N ^FD<t t-out="barcode"/>^FS
</t>
<t t-if="with_price">
<t t-if="base_unit_price">
^FO150,210 ^A0N,25^FH ^FD(<t t-if="currency.position == 'before'"><t t-esc="currency.symbol"/></t>
<t t-esc="base_unit_price" t-options="{'widget': 'float', 'precision': 2}"/>
<t t-if="currency.position == 'after'"><t t-esc="currency.symbol"/></t>
/<t t-esc="product.base_unit_name"/>)^FS
</t>
^FO300,200 ^A0N,40^FH ^FD<t t-if="currency.position == 'before'"><t t-esc="currency.symbol"/></t>
<t t-esc="price" t-options="{'widget': 'float', 'precision': 2}"/>
<t t-if="currency.position == 'after'"><t t-esc="currency.symbol"/></t>^FS
</t>
        </template>

        <template id="report_alternative_label_zpl">
<t t-if="product._name == 'product.product'">
^FT35,30^A0N,20^FD<t t-out="f'[{product.default_code}] {product.name}' if product.default_code else product.name"/>^FS
^FT35,48^A0N,15^FD<t t-out="product.product_template_attribute_value_ids._get_combination_name()"/>^FS
</t>
<t t-else="">
^FT35,30^A0N,20^FD<t name="display_name" t-out="product.display_name"/>^FS
</t>
<t t-if="barcode">
^FO35,55^BY2 ^BCN,100,Y,N,N ^FD<t t-out="barcode"/>^FS
</t>
<t t-if="with_price">
<t t-if="base_unit_price">
^FO160,185 ^A0N,18^FH ^FD(<t t-if="currency.position == 'before'"><t t-esc="currency.symbol"/></t>
<t t-esc="base_unit_price" t-options="{'widget': 'float', 'precision': 2}"/>
<t t-if="currency.position == 'after'"><t t-esc="currency.symbol"/></t>
/<t t-esc="product.base_unit_name"/>)^FS
</t>
^FO290,165 ^A0N,30^FH ^FD<t t-if="currency.position == 'before'"><t t-esc="currency.symbol"/></t>
<t t-esc="price" t-options="{'widget': 'float', 'precision': 2}"/>
<t t-if="currency.position == 'after'"><t t-esc="currency.symbol"/></t>^FS
</t>
        </template>

        <template id="report_small_label_zpl">
^FT35,30^A0N,20^FD<t t-out="product.name"/>^FS
<t t-if="barcode">
^FO35,50^BY1 ^BCN,80,Y,N,N ^FD<t t-out="barcode"/>^FS
</t>
<t t-if="with_price">
^FO150,165 ^A0N,25^FH ^FD<t t-if="currency.position == 'before'"><t t-esc="currency.symbol"/></t>
<t t-esc="price" t-options="{'widget': 'float', 'precision': 2}"/>
<t t-if="currency.position == 'after'"><t t-esc="currency.symbol"/></t>^FS
</t>
        </template>

        <template id="report_jewelry_label_zpl">
^FT210,30^A0N,25^FD<t t-out="product.name"/>^FS
<t t-if="barcode">
^FO35,5^BY1 ^BCN,80,Y,N,N ^FD<t t-out="barcode"/>^FS
</t>
<t t-if="with_price">
^FO290,50 ^A0N,30^FH ^FD<t t-if="currency.position == 'before'"><t t-esc="currency.symbol"/></t>
<t t-esc="price" t-options="{'widget': 'float', 'precision': 2}"/>
<t t-if="currency.position == 'after'"><t t-esc="currency.symbol"/></t>^FS
</t>
        </template>

        <template id="report_productlabel_zpl">
            <t t-foreach="quantity.items()" t-as="barcode_and_qty_by_product">
                <t t-set="product" t-value="barcode_and_qty_by_product[0]"/>
                <t t-foreach="barcode_and_qty_by_product[1]" t-as="product_info">
                    <t t-set="barcode" t-value="product_info[0]"/>
                    <t t-set="currency" t-value="pricelist.currency_id or product.currency_id"/>
                    <t t-set="base_unit_price" t-value="product.base_unit_price if product.base_unit_count and product.base_unit_name else 0"/>
                    <t t-set="with_price" t-value="env['product.label.layout'].browse(layout_wizard).with_price"/>
                    <t t-set="zpl_template" t-value="env['product.label.layout'].browse(layout_wizard).zpl_template"/>
                    <t t-foreach="range(product_info[1])" t-as="qty">
                        <t t-set="price" t-value="pricelist._get_product_price(product, 1, currency=currency)"/>
                        <t t-translation="off">
                            ^XA^CI28
                            <t t-if="zpl_template == 'normal'" t-call="product.report_normal_label_zpl"/>
                            <t t-elif="zpl_template == 'small'" t-call="product.report_small_label_zpl"/>
                            <t t-elif="zpl_template == 'alternative'" t-call="product.report_alternative_label_zpl"/>
                            <t t-elif="zpl_template == 'jewelry'" t-call="product.report_jewelry_label_zpl"/>
                            <t t-else="" t-call="product.report_normal_label_zpl"/>
                            ^XZj
                        </t>
                    </t>
                </t>
            </t>
        </template>

        <template id="report_productlabel_dymo">
            <t t-call="web.html_container">
                <t t-set="barcode_size" t-value="'width:45.5mm;height:7.5mm'"/>
                <t t-set="table_style" t-value="'width:100%;height:32mm;'"/>
                <t t-set="padding_page" t-value="'padding: 2mm'"/>
                <t t-foreach="quantity.items()" t-as="barcode_and_qty_by_product">
                    <t t-set="product" t-value="barcode_and_qty_by_product[0]"/>
                    <t t-foreach="barcode_and_qty_by_product[1]" t-as="barcode_and_qty">
                        <t t-set="barcode" t-value="barcode_and_qty[0]"/>
                        <t t-foreach="range(barcode_and_qty[1])" t-as="qty">
                            <t t-call="product.report_simple_label_dymo"/>
                        </t>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
