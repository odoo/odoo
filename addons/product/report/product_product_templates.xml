<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_simple_label2x7">
            <t t-set="barcode_size" t-value="'width:33mm;height:14mm'"/>
            <t t-set="table_style" t-value="'width:97mm;height:37.1mm;' + table_style"/>
            <t t-set="currency" t-value="pricelist.currency_id or product.currency_id"/>
            <t t-set="base_unit_price" t-value="product.base_unit_price if product.base_unit_count and product.base_unit_name else 0"/>
            <t t-set="with_price" t-value="env['product.label.layout'].browse(layout_wizard).with_price"/>
            <td t-att-style="make_invisible and 'visibility:hidden;'" >
                <div class="o_label_full" t-att-style="table_style">
                    <div class="o_label_name">
                        <strong t-field="product.display_name"/>
                    </div>
                    <div class="o_label_data">
                        <div class="text-center o_label_left_column">
                            <span class="text-nowrap" t-field="product.default_code"/>
                            <t t-if="barcode">
                                <div t-out="barcode" t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                <span class="text-center" t-out="barcode"/>
                            </t>
                        </div>
                        <div class="text-end" style="line-height: normal;">
                            <div class="o_label_extra_data">
                                <t t-out="extra_html"/>
                            </div>
                            <t t-if="with_price">
                                <t t-if="base_unit_price">
                                    <strong class="o_label_unit_medium">
                                        (<t t-esc="base_unit_price"
                                            t-options="{'widget': 'monetary', 'display_currency': currency}"/>/<t t-esc="product.base_unit_name"/>)
                                    </strong>
                                </t>
                                <strong class="o_label_price" t-out="pricelist._get_product_price(product, 1, currency=currency)"
                                        t-options="{'widget': 'monetary', 'display_currency': currency, 'label_price': True}"/>
                            </t>
                        </div>
                        <div class="o_label_clear"></div>
                    </div>
                </div>
            </td>
        </template>

