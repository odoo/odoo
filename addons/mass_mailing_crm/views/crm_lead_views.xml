<odoo>
    <record id="crm.action_lead_mass_mail" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
    </record>

    <record id="crm_case_tree_view_oppor_mass_mailing_inherit" model="ir.ui.view">
        <field name="name">crm.lead.list.opportunity.mass_mailing.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id">crm.crm_case_tree_view_oppor</field>
        <field name="arch" type="xml">
            <xpath expr="//header button[@string='Email']" position="attributes">
                <attribute name="name">%(mass_mailing.action_client_toolbar_mass_mailing)d</attribute>
            </xpath>
        </field>
    </record>
</odoo>
