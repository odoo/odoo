<?xml version="1.0" encoding="utf-8"?>
<templates>

    <t
        t-name="sale_management.ListRenderer.RecordRow"
        t-inherit="account.SectionAndNoteListRenderer.RecordRow"
        t-inherit-mode="primary"
    >
        <xpath expr="//t[@t-name='composition_button']" position="inside">
            <DropdownItem
                t-if="showOptionalButton"
                onSelected="() => this.toggleIsOptional(record)"
            >
                <i class="me-1 fa fa-fw fa-list"/>
                <span t-out="record.data.is_optional ? 'Unset Optional' : 'Set Optional'"/>
            </DropdownItem>
        </xpath>
    </t>

</templates>
