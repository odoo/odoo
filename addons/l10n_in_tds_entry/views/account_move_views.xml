<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_move_view_form" model="ir.ui.view">
            <field name="name">account.move.form.inherit.l10n.in.reports.tds</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']" position="after">
                    <button name="%(tds_entry_wizard_form_action)d" string="TDS Entry" type="action"
                        invisible="move_type not in ('in_invoice') or state != 'posted' or payment_state == 'in_payment' or amount_residual == 0"
                    class="btn btn-secondary float-end mb-2"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
