<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="menu_jobs" model="website.menu">
            <field name="name">Jobs</field>
            <field name="url">/jobs</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">50</field>
        </record>
        <record id="action_open_website" model="ir.actions.act_url">
            <field name="name">Website Recruitment Form</field>
            <field name="target">self</field>
            <field name="url">/jobs</field>
        </record>
        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="action_open_website"/>
            <field name="state">open</field>
        </record>
        <record id="id_form_lead" model="website.form">
            <field name="model_id" ref="hr_recruitment.model_hr_applicant" />
            <field name="blacklist_field_ids" eval="" />
            <field name="name">Create an applicant</field>
            <field name="metadata_field_id" ref="hr_recruitment.field_hr_applicant_description" />
        </record>
    </data>
</openerp>
