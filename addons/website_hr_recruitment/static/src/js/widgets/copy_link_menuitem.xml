<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="website_hr_recruitment.CopyJobLinkButton">
        <CopyButtonJob
            content="this.props.record.data[this.props.name]"
            copyText="this.copyText"
            successText="this.successText"/>
    </t>

    <t t-name="website_hr_recruitment.CopyButtonJob">
        <a
            t-ref="button"
            role="button"
            class="oe_kanban_action"
            t-on-click.stop="this.onClick">
            <span t-esc="this.props.copyText"/>
        </a>
    </t>
</templates>
