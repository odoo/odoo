<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--blog history-->
    <record id="website_blog_visitor_page_view_tree" model="ir.ui.view">
        <field name="name">website.track.view.list</field>
        <field name="model">website.track</field>
        <field name="arch" type="xml">
            <list string="Visitor Blog Views History" create="0" sample="1">
                <field name="visitor_id"/>
                <field name="blog_post_id"/>
                <field name="visit_datetime"/>
            </list>
        </field>
    </record>

    <record id="website_blog_visitor_page_view_graph" model="ir.ui.view">
        <field name="name">website.track.view.graph</field>
        <field name="model">website.track</field>
        <field name="arch" type="xml">
            <graph string="Visitor Blog Views" sample="1">
                <field name="blog_post_id"/>
            </graph>
        </field>
    </record>

    <record id="website_blog_visitor_blog_action" model="ir.actions.act_window">
        <field name="name">Blog Views History</field>
        <field name="res_model">website.track</field>
        <field name="view_ids" eval="[
            (0, 0, {'view_mode': 'list', 'view_id': ref('website_blog_visitor_page_view_tree')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('website_blog_visitor_page_view_graph')}),
        ]"/>
        <field name="domain">[('visitor_id', '=', active_id), ('blog_post_id', '!=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No blog views yet for this visitor
            </p>
        </field>
    </record>

    <!-- website visitor views -->
    <record id="website_visitor_view_form" model="ir.ui.view">
        <field name="name">website.visitor.view.form.inherit.blog</field>
        <field name="model">website.visitor</field>
        <field name="inherit_id" ref="website.website_visitor_view_form"/>
        <field name="arch" type="xml">
            <!-- Add stat button near product views -->
            <xpath expr="//button[@name='%(website.website_visitor_page_action)d']" position="after">
                <button name="%(website_blog.website_blog_visitor_blog_action)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-file-text">
                    <field name="visitor_blog_count" widget="statinfo" string="Blog Views"/>
                </button>
            </xpath>

            <!-- Show viewed blogs in tag list -->
            <xpath expr="//group[@id='visits']/field[@name='page_ids']" position="after">
                <field name="blog_post_ids" string="Blogs" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="website_blog_visitor_view_tree" model="ir.ui.view">
        <field name="name">website.visitor.view.list</field>
        <field name="model">website.visitor</field>
        <field name="inherit_id" ref="website.website_visitor_view_tree"/>
        <field name="arch" type="xml">
            <field name="page_ids" position="after">
                <field name="blog_post_ids" widget="many2many_tags" string="Blogs"/>
            </field>
        </field>
    </record>

    <record id="website_blog_visitor_view_kanban" model="ir.ui.view">
        <field name="name">website.visitor.view.kanban</field>
        <field name="model">website.visitor</field>
        <field name="inherit_id" ref="website.website_visitor_view_kanban"/>
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="blog_post_ids"/>
            </field>
        </field>
    </record>

</odoo>
