<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="website_blog.BlogPostTagsOption">
    <BuilderRow label.translate="Tags" preview="false">
        <ModelMany2Many baseModel="'blog.post'"
            applyTo="'.o_wblog_post_name'"
            createAction="'createTag'"
            m2oField="'tag_ids'"
            recordId="domState.blogId"
        />
    </BuilderRow>
</t>

<t t-inherit="website.BuilderOptions" t-inherit-mode="extension">
    <xpath expr="//switchable_views" position="after">
        <blog_post_tags_option
            selector=".o_wblog_post_page_cover[data-res-model='blog.post']"
            editableOnly="false"/>
    </xpath>
</t>

</templates>
