<?xml version="1.0"?>
<odoo>
    <record id="maintenance_employee" model="ir.rule">
        <field name="name">Employee Maintenance request</field>
        <field name="model_id" ref="model_hr_material_request"/>
        <field name="domain_force">['|',('user_id.id','=',user.id),('employee_id.user_id.id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
    <record id="material_employee" model="ir.rule">
        <field name="name">Employee Material</field>
        <field name="model_id" ref="model_hr_material"/>
        <field name="domain_force">[('employee_id.user_id.id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
    <record id="maintenance_admin_user" model="ir.rule">
        <field name="name">Maintenance Request Administrator</field>
        <field name="model_id" ref="model_hr_material_request"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('base.group_admin_user'))]"/>
    </record>
    <record id="material_admin_user" model="ir.rule">
        <field name="name">Material Administrator</field>
        <field name="model_id" ref="model_hr_material"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('base.group_admin_user'))]"/>
    </record>
</odoo>
