<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">

    <!-- LAYOUT TEMPLATES -->
    <div t-name="iap.redirect_to_odoo_credit">
        <t t-if="data.body">
            <div t-raw="data.body"/>
        </t>
        <t t-if="!data.body">
            <t t-if="data.message">
                <span t-esc="data.message"/>
            </t>
            <t t-if="!data.message">
                <span>Insufficient credit to perform this service.</span>
            </t>
        </t>
    </div>

    <t t-extend="DashboardMain">
        <t t-jquery=".o_web_settings_apps" t-operation="after">
            <div class="o_web_settings_iap"></div>
        </t>
    </t>

    <button t-name="iap.buy_more_credits" class="btn btn-link buy_credits"><i class="fa fa-arrow-right"/> Buy credits</button>
</template>
