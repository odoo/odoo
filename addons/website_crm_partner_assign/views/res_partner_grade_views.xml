<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="partner_grade_view" model="ir.ui.view">
        <field name="name">res.partner.grade.form.inherit</field>
        <field name="model">res.partner.grade</field>
        <field name="inherit_id" ref="crm_partner_assign.view_partner_grade_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="before">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" name="website_publish_button"
                            type="object" icon="fa-globe">
                        <field name="website_published" widget="website_button"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
