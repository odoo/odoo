<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="mass_sms_test_view_form">
        <field name="name">mass.sms.test.view.form</field>
        <field name="model">mass.sms.test</field>
        <field name="arch" type="xml">
            <form string="Send a Sample SMS">
                <p class="text-muted">
                    Send a sample email for testing purpose to the numbers below.
                </p>
                <group>
                    <field name="numbers"/>
                    <field name="sanitized_numbers" invisible="0"/>
                </group>
                <footer>
                    <button string="Send" name="action_send_sms" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="mass_sms_test_action" model="ir.actions.act_window">
        <field name="name">Mailing Test</field>
        <field name="res_model">mass.sms.test</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
