<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_ir_module_category_list" model="ir.actions.act_window">
        <field name="name">Application Access Category</field>
        <field name="res_model">ir.module.category</field>
        <field name="view_mode">list,kanban,form</field>
<!--        <field name="context">{'create': 0, 'edit':0, 'delete': 0}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>
        </field>
    </record>
	<!-- ir.module.category Tree View -->
	<record id='app_view_ir_module_category_tree' model='ir.ui.view'>
		<field name='name'>app.view.ir.module.category.tree</field>
		<field name='model'>ir.module.category</field>
		<field name='priority'>16</field>
		<field name='arch' type='xml'>
			<list create="0" editable="bottom" multi_edit="1">
				<field name='sequence'/>
				<field name='name'/>
				<field name='parent_id'/>
			</list>
		</field>
	</record>

    <record id="app_view_module_category_form" model="ir.ui.view">
        <field name="name">app.ir.module.category.form</field>
        <field name="model">ir.module.category</field>
        <field name="inherit_id" ref="base.view_module_category_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="after">
				<field name='visible'/>
            </xpath>
            <xpath expr="//field[@name='sequence']/.." position="after">
				<group col="4">
				    <field name='module_ids' widget="many2many_tags" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
