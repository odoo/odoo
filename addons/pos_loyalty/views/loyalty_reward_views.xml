<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_reward_view_form_inherit_pos_loyalty" model="ir.ui.view">
        <field name="name">loyalty.reward.view.form.inherit.pos.loyalty</field>
        <field name="model">loyalty.reward</field>
        <field name="inherit_id" ref="loyalty.loyalty_reward_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='discount_product_category_id']" position="after">
                <field name="discount_pos_category_id" invisible="discount_applicability == 'order'"/>
            </xpath>
        </field>
    </record>
</odoo>
