<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="loyalty_card_view_form_inherit_sale_loyalty" model="ir.ui.view">
        <field name="name">loyalty.card.view.form.inherit.sale.loyalty</field>
        <field name="model">loyalty.card</field>
        <field name="inherit_id" ref="loyalty.loyalty_card_view_form"/>
        <field name="arch" type="xml">
            <label for="points" position="replace">
                <label string="Balance" for="points_display"/>
            </label>
            <span class="d-inline-block" position="replace">
                <a
                    name="%(sale_loyalty_update_balance_wizard_action)d"
                    class="w-auto oe_inline me-1"
                    type="action"
                >
                    <field name="points_display" nolabel="1"/>
                </a>
            </span>
            <field name="partner_id"  position="after">
                <field name="order_id" invisible="not order_id"/>
            </field>
            <group name="loyalty_card_form" position="after">
                <notebook>
                    <page name="history" string="History">
                        <field name="history_ids" widget="one2many" nolabel="1">
                            <tree create="False" edit="False" delete="False" no_open="1">
                                <field name="description" string="Description" readonly="1"/>
                                <field name="sale_order_name" string="Order" readonly="1"/>
                                <field name="date" string="Date" readonly="1"/>
                                <field name="issued" string="Issued" readonly="1"/>
                                <field name="used" string="Used" readonly="1"/>
                                <field name="new_balance" string="New Balance" readonly="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </group>
        </field>
    </record>

</odoo>
