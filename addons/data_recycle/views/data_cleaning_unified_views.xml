        <record id="view_data_cleaning_unified_list" model="ir.ui.view">
            <field name="name">Data Cleaning Unified List</field>
            <field name="model">data_cleaning.unified</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="res_model_id"/>
                    <field name="cleaning_mode"/>
                    <field name="recycle_ids" string="Recycle Rules"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

