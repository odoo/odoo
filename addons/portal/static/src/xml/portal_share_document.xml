<templates id="template" xml:space="preserve">
    <t t-name="portal.portal_share_document">
        <div class="container">
            <form>
                <div class="form-group form-field">
                    <label class="col-md-3 col-sm-4 control-label text-right" for="name">Recipients</label>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control o_website_email partner_ids"/>
                    </div>
                </div>
                <div class="form-group form-field">
                    <label class="col-md-3 col-sm-4 control-label text-right" for="description">Link</label>
                    <div class="col-md-7 col-sm-8 mt8">
                        <input type="text" t-att-value="url" class="form-control" name="name"/>
                    </div>
                </div>
                <div class="form-group form-field hidden">
                    <div class="col-md-9 col-sm-8 col-off-set-md-3 mt8">
                        <textarea name="content" id="content" class="form-control mt8" >
                        </textarea>
                    </div>
                </div>
            </form>
        </div>
    </t>
</templates>