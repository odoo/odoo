<templates id="template" xml:space="preserve">

    <t t-name="portal.chatter_attachment_summary">
        <t t-set="attachment_count" t-value="widget.get('attachment_ids').length"/>
        <t t-set="attachments" t-value="widget.get('attachment_ids')"/>
        <div class="o_attachment_summary">
            <t t-call="portal.chatter_attachments_link"/>
        </div>
    </t>

    <t t-name="portal.chatter_attachments_link">
        <div class="o_attachment_counter">
            <t t-if="attachment_count">
                <a href="#" class="o_portal_chatter_attachments_link">
                    <span class="fa fa-paperclip" />
                    <span class="o_attachment_count"> <t t-esc="attachment_count"/></span>
                    <t t-if="attachment_count == 1">attachment</t>
                    <t t-else="">attachments</t>
                </a>
            </t>
            <t t-else="">
                There is no attachment for now.
            </t>
        </div>
        <div class="o_portal_chatter_attachments" style="display:none">
            <t t-call="portal.Chatter.Attachments"/>
        </div>
    </t>

    <!--
        Widget PortalComposer (standalone)

        required many options: token, res_model, res_id, ...
    -->
    <t t-name="portal.Composer">
        <div class="o_portal_chatter_composer" t-if="widget.options['allow_composer']">
            <t t-set="discussion_url" t-value="window.encodeURI(window.location.href.split('#')[0] + '#discussion')"/>
            <t t-if="!widget.options['display_composer']">
                <h4>Leave a comment</h4>
                <p>You must be <a t-attf-href="/web/login?redirect=#{discussion_url}">logged in</a> to post a comment.</p>
            </t>
            <t t-if="widget.options['display_composer']">
                <div class="alert alert-danger mb8 d-none o_portal_chatter_composer_error" role="alert">
                    Oops! Something went wrong. Try to reload the page and log in.
                </div>
                <div class="media">
                    <img alt="Avatar" class="o_portal_chatter_avatar" t-attf-src="/web/image/res.partner/#{widget.options['partner_id']}/avatar_128/50x50"
                         t-if="!widget.options['is_user_public'] or !widget.options['token']"/>
                    <div class="media-body">
                        <div class="o_portal_chatter_composer_input">
                            <div class="o_portal_chatter_composer_body mb32">
                                <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column rounded o_portal_outline">
                                    <li class="list-group-item flex-grow-1 p-0 rounded-top border-bottom-0">
                                        <textarea rows="4" name="message" class="form-control border-0 o_portal_border" placeholder="Write a message..."></textarea>
                                    </li>
                                    <li class="list-group-item flex-grow-1 p-1 rounded-bottom col-12">
                                        <div class="d-flex justify-content-between">
                                            <div class="o_portal_chatter_attachments flex-fill"/>
                                            <div class="ml-1">
                                                <button class="o_portal_chatter_attachment_btn btn btn-secondary rounded-circle py-0 px-2" type="button" title="Add attachment">
                                                    <i class="fa fa-paperclip"/>
                                                </button>
                                            </div>
                                            <div class="ml-1">
                                                <button t-attf-data-action="/mail/chatter_post" class="o_portal_chatter_composer_btn btn btn-primary py-0 px-2" type="submit">Send</button>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="d-none">
                            <input type="file" class="o_portal_chatter_file_input" multiple="multiple"/>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>

    <t t-name="portal.Chatter.Attachments">
        <div t-if="attachments.length" class="row m-0">
            <div t-foreach="attachments" t-as="attachment" t-attf-class="p-2 #{(attachment.name.length &gt; 25) ? 'col-lg-6 col-md-8 col-12' : 'col-lg-3 col-md-4 col-6'}">
                <div class="o_portal_chatter_attachment position-relative text-center" t-att-data-id="attachment.id">
                    <button t-if="showDelete and attachment.state == 'pending'" class="o_portal_chatter_attachment_delete btn btn-sm btn-outline-danger" title="Delete">
                        <i class="fa fa-times"/>
                    </button>
                    <a t-attf-href="/web/content/#{attachment.id}?download=true&amp;access_token=#{attachment.access_token}" target="_blank">
                        <div class='oe_attachment_embedded o_image' t-att-title="attachment.name" t-att-data-mimetype="attachment.mimetype"/>
                        <div class='o_portal_chatter_attachment_name'><t t-esc='attachment.name'/></div>
                    </a>
                </div>
            </div>
        </div>
    </t>

    <!--
        Widget PortalChatter, and subtemplates
    -->

    <t t-name="portal.chatter_messages">
        <div class="o_portal_chatter_messages">
            <t t-foreach="widget.get('grouped_messages') || []" t-as="msg_group">
                <div class="o_portal_chatter_separator py-4">
                    <hr class="o_portal_chatter_separator_line"/>
                    <span class="o_portal_chatter_separator_label" t-att-title="msg_group['date']"><t t-esc="msg_group['label']"/></span>
                    <hr class="o_portal_chatter_separator_line"/>
                </div>
                <t t-foreach="msg_group['messages'] || []" t-as="message">
                    <div class="media o_portal_chatter_message mt-2" t-att-id="'message-' + message.id">
                        <img class="o_portal_chatter_avatar" t-att-src="message.author_avatar_url" alt="avatar"/>
                        <div class="media-body">
                            <div class="o_portal_chatter_message_title row mb-1 mx-0">
                                <h5 class='mb-0'><t t-esc="message.author_id[1]"/></h5>
                                <p class="mx-2 pt-1">-</p>
                                <p class="o_portal_chatter_published_date pt-1" t-att-title="message.published_date_str"><t t-esc="message.date_ago"/></p>
                                <t t-call="portal.chatter_internal_toggle" t-if="widget.options['is_user_employee']"/>
                            </div>
                            <t t-out="message.body"/>
                            <div t-if="message.attachment_ids.length" class="o_portal_chatter_attachments">
                                <t t-call="portal.chatter_attachments_link">
                                    <t t-set="attachments" t-value="message.attachment_ids"/>
                                    <t t-set="attachment_count" t-value="message.attachment_ids.length"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </div>
    </t>

    <!-- Chatter: internal toggle widget -->
    <t t-name="portal.chatter_internal_toggle">
        <div t-attf-class="float-right o_boolean_toggle custom-control custom-checkbox ml-auto #{!message.internal ? 'o_portal_chatter_js_is_internal' : ''}"
                t-att-data-message-id="message.id"
                t-att-data-is-internal="message.is_internal">
            <input type="checkbox" t-att-id="'message_' + message.id" class="custom-control-input"
                t-att-checked="(!message.is_internal and !message.internal and 'checked') or undefined"
                t-att-disabled="message.internal or undefined"/>
            <label t-att-for="'message_' + message.id" class="custom-control-label">
                &#8203;
                <i t-att-class="'fa fa-times-circle'"
                    t-att-title="message.internal and 'Log note, only available to internal employees.'
                                 or 'Currently restricted to internal employees, click to make it available to everyone viewing this document.'"></i>
                <i t-att-class="'fa fa-check-circle'"
                    title="Currently available to everyone viewing this document, click to restrict to internal employees."></i>
            </label>
        </div>
    </t>

    <t t-name="portal.pager">
        <div class="o_portal_chatter_pager">
            <t t-if="!_.isEmpty(widget.get('pager'))">
                <ul class="pagination" t-if="widget.get('pager')['pages'].length &gt; 1">
                    <li t-if="widget.get('pager')['page'] != widget.get('pager')['page_previous']" t-att-data-page="widget.get('pager')['page_previous']" class="page-item o_portal_chatter_pager_btn">
                        <a href="#" class="page-link"><i class="fa fa-chevron-left" role="img" aria-label="Previous" title="Previous"/></a>
                    </li>
                    <t t-foreach="widget.get('pager')['pages']" t-as="page">
                        <li t-att-data-page="page" t-attf-class="page-item #{page == widget.get('pager')['page'] ? 'o_portal_chatter_pager_btn active' : 'o_portal_chatter_pager_btn'}">
                            <a href="#" class="page-link"><t t-esc="page"/></a>
                        </li>
                    </t>
                    <li t-if="widget.get('pager')['page'] != widget.get('pager')['page_next']" t-att-data-page="widget.get('pager')['page_next']" class="page-item o_portal_chatter_pager_btn">
                        <a href="#" class="page-link"><i class="fa fa-chevron-right" role="img" aria-label="Next" title="Next"/></a>
                    </li>
                </ul>
            </t>
        </div>
    </t>

    <t t-name="portal.Chatter">
        <t t-set="two_columns" t-value="widget.options['two_columns']"/>
        <div t-attf-class="o_portal_chatter p-0 #{two_columns and 'row' or ''}">
            <div t-attf-class="#{two_columns and 'col-lg-5' or ''}">
                <div class="o_portal_chatter_header">
                    <t t-call="portal.chatter_attachment_summary"/>
                </div>
                <hr t-if="widget.options['allow_composer']"/>
                <div class="o_portal_chatter_composer"/>
            </div>
            <div t-attf-class="#{two_columns and 'offset-lg-1 col-lg-6' or ''}">
                <t t-call="portal.chatter_messages"/>
                <div class="o_portal_chatter_footer">
                    <t t-call="portal.pager"/>
                </div>
            </div>
        </div>
    </t>

</templates>
