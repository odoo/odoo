<?xml version="1.0" encoding="utf-8"?>
<odoo><data noupdate="1">

    <record id="portal_entry_addresses" model="portal.entry">
            <field name="name">Addresses</field>
            <field name="description">Add, remove or modify your addresses</field>
            <field name="url">/my/addresses</field>
            <field name="image" type="base64" file="portal/static/src/img/portal-addresses.svg"/>
        </record>
        <record id="portal_entry_base" model="portal.entry">
            <field name="name">Connection &amp; Security</field>
            <field name="description">Configure your connection parameters</field>
            <field name="url">/my/security</field>
            <field name="image" type="base64" file="portal/static/src/img/portal-connection.svg"/>
        </record>

    <template id="portal_share_template">
        <div>
            <br/>
            <p>Dear <span t-out="partner.name"/>,</p>
            <p><span t-out="user.name"/> has invited you to access the following <span t-out="model_description"/>:</p>
            <br/>
            <a t-attf-href="#{share_link}" style="background-color: #875A7B; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 12px;"><strong>Open </strong><strong t-out="record.display_name"/></a><br/>
            <br/>
            <p t-if="note" style="white-space: pre-wrap;" t-out="note"/>
        </div>
    </template>

</data></odoo>
