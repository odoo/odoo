<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="l10n_gcc_report_invoice_document_with_snln" inherit_id="l10n_gcc_invoice.l10n_gcc_report_invoice_document">
        <xpath expr="//table[@name='invoice_snln_table']//th" position="inside">
            <span t-if="display_in_ar" t-translation="off"><br/>المنتج</span>
            <span t-if="display_in_en" t-translation="off"><br/>Product</span>
        </xpath>
        <xpath expr="//table[@name='invoice_snln_table']//th[2]" position="inside">
            <span t-if="display_in_ar" t-translation="off"><br/>الكمية</span>
            <span t-if="display_in_en" t-translation="off"><br/>Quantity</span>
        </xpath>
        <xpath expr="//table[@name='invoice_snln_table']//th[3]" position="inside">
            <span t-if="display_in_ar" t-translation="off"><br/>الرقم التسلسلي/رقم الدفعة</span>
            <span t-if="display_in_en" t-translation="off"><br/>SN/LN</span>
        </xpath>
    </template>
</odoo>
