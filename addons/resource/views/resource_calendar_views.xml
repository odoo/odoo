<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_resource_calendar_search" model="ir.ui.view">
        <field name="name">resource.calendar.search</field>
        <field name="model">resource.calendar</field>
        <field name="arch" type="xml">
            <search string="Search Working Time">
               <field name="name" string="Working Time"/>
               <field name="company_id" groups="base.group_multi_company"/>
               <separator/>
               <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
               <filter string="Partial working schedules" name="partial_working_schedules" domain="[('work_time_rate', '&lt;', 100)]"/>
               <group expand='0'>
                    <filter string="Flexible" name="groupby_flexible_hours" context="{'group_by': 'flexible_hours'}"/>
                    <filter name="groupby_company" context="{'group_by': 'company_id'}"/>
                </group>
           </search>
        </field>
    </record>

    <record id="resource_calendar_form" model="ir.ui.view">
        <field name="name">resource.calendar.form</field>
        <field name="model">resource.calendar</field>
        <field name="arch" type="xml">
            <form string="Working Time">
                <field name="two_weeks_calendar" invisible="1"/>
                <header>
                </header>
                <sheet string="Working Time">
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(resource_calendar_leaves_action_from_calendar)d" type="action"
                                icon="fa-plane"
                                class="oe_stat_button"
                                groups="base.group_no_one">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Time Off</span>
                                </div>
                        </button>
                        <button name="%(resource_resource_action_from_calendar)d" type="action"
                                icon="fa-cogs"
                                class="oe_stat_button"
                                groups="base.group_user">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">
                                        <field name="work_resources_count" string="Work Resources" widget="statinfo"/>
                                    </span>
                                </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="resource_details" col="2">
                        <group name="resource_working_hours">
                            <field name="schedule_type" widget="radio"/>
                            <field name="flexible_hours" invisible="1"/>
                            <label for="full_time_required_hours" invisible="not company_id"/>
                            <label for="full_time_required_hours" string="Required Full Time" invisible="company_id"/>

                            <div>
                                <field name="full_time_required_hours" style="width: 6ch;" widget="float_time" readonly="company_id"/>
                                <span>hours/week</span>
                            </div>
                            <label for="work_time_rate" string="Work Time Rate" invisible="schedule_type == 'fully_flexible'"/>
                            <div invisible="schedule_type == 'fully_flexible'">
                                <field name="work_time_rate" nolabel="1"  style="width: 5ch;"/>
                                <span class="ms-1">%</span>
                            </div>
                            <field name="is_fulltime" invisible="1"/>
                        </group>
                        <group name="resource_company">
                            <field name="active" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company" placeholder="Visible to all"/>
                            <field name="tz" widget="timezone_mismatch" options="{'tz_offset_field': 'tz_offset', 'mismatch_title': 'Timezone Mismatch : This timezone is different from that of your browser.\nPlease, be mindful of this when setting the working hours or the time off.'}" />
                            <field name="tz_offset" invisible="1"/>
                            <div invisible="flexible_hours" class="d-flex justify-content-end">
                                <button name="switch_calendar_type"
                                        type="object"
                                        string=""
                                        class="btn"
                                        confirm="Are you sure you want to switch to a 2-week calendar? All work entries will be lost."
                                        confirm-label="Switch"
                                        invisible="two_weeks_calendar">
                                    <i class="fa fa-square-o" title="Switch to 2 weeks calendar" />
                                </button>
                                <button name="switch_calendar_type"
                                        type="object"
                                        string=""
                                        class="btn"
                                        confirm="Are you sure you want to switch to a 1-week calendar? All work entries will be lost."
                                        confirm-label="Switch"
                                        invisible="not two_weeks_calendar">
                                    <i class="fa fa-check-square" title="Switch to 1 week calendar"/>
                                </button>
                            </div>
                            <div invisible="flexible_hours" class="d-flex justify-content-start">
                                <span class="btn btn-group">2 Weeks Calendar</span>
                            </div>
                            <field name="hours_per_day" widget="float_time" invisible="schedule_type != 'flexible'"/>
                            <label for="hours_per_week" string="Schedule total time" invisible="schedule_type != 'flexible'"/>
                            <div invisible="schedule_type != 'flexible'" class="d-flex" style="width: fit-content">
                                <field name="hours_per_week" widget="float_time" style="width: 40px"/>
                                <span class="ms-2"> hours/week</span>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Working Hours" name="working_hours" invisible="two_weeks_calendar or flexible_hours">
                            <group name="weekly_schedule">
                                <group>
                                    <field name="hours_per_day" widget="float_time" readonly="schedule_type != 'fixed_time' or fixed_time_with_hours"/>
                                </group>
                                <group>
                                    <label for="hours_per_week" string="Schedule total time"/>
                                    <div>
                                        <field name="hours_per_week" widget="float_time" style="width: 10%" readonly="1"/>
                                        <span> hours/week</span>
                                    </div>
                                </group>
                            </group>
                            <field name="attendance_ids" invisible="schedule_type == 'fixed_time'"/>
                            <div invisible="schedule_type != 'fixed_time'">
                                Check the days of the week the employee will be working 
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="monday"/> 
                                        <span class="me-2">Monday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="monday_hours" class="me-2">Amount of hours</label>
                                        <field name="monday_hours" string="Amount of hours" />
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="tuesday"/> 
                                        <span class="me-2">Tuesday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="tuesday_hours" class="me-2">Amount of hours</label>
                                        <field name="tuesday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="wednesday"/> 
                                        <span class="me-2">Wednesday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="wednesday_hours" class="me-2">Amount of hours</label>
                                        <field name="wednesday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="thursday"/> 
                                        <span class="me-2">Thursday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="thursday_hours" class="me-2">Amount of hours</label>
                                        <field name="thursday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="friday"/> 
                                        <span class="me-2">Friday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="friday_hours" class="me-2">Amount of hours</label>
                                        <field name="friday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="saturday"/> 
