                                    <div invisible="not fixed_time_with_hours">
                                        <label for="monday_hours" class="me-2">Amount of hours</label>
                                        <field name="monday_hours" string="Amount of hours" />
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="tuesday"/> 
                                        <span class="me-2">Tuesday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="tuesday_hours" class="me-2">Amount of hours</label>
                                        <field name="tuesday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="wednesday"/> 
                                        <span class="me-2">Wednesday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="wednesday_hours" class="me-2">Amount of hours</label>
                                        <field name="wednesday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="thursday"/> 
                                        <span class="me-2">Thursday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="thursday_hours" class="me-2">Amount of hours</label>
                                        <field name="thursday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="friday"/> 
                                        <span class="me-2">Friday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="friday_hours" class="me-2">Amount of hours</label>
                                        <field name="friday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="saturday"/> 
                                        <span class="me-2">Saturday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="saturday_hours" class="me-2">Amount of hours</label>
                                        <field name="saturday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="sunday"/> 
                                        <span class="me-2">Sunday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="sunday_hours" class="me-2">Amount of hours</label>
                                        <field name="sunday_hours" string="Amount of hours" />
                                    </div>

                                </div>
                            </div>
                            <div invisible="schedule_type != 'fixed_time'">
                                <label for="fixed_time_with_hours" class="me-2">I want to define specific amount of hours for the selected days</label>
                                <field name="fixed_time_with_hours" string="I want to define specific amount of hours for the selected days"/>
                            </div> 
                        </page>
                        <page string="Working Hours_2nd_week" name="working_hours_2nd_week" invisible="flexible_hours or not two_weeks_calendar">
                            <field name="two_weeks_explanation" invisible="not two_weeks_calendar"/>
                            <field name="attendance_ids_2nd_week" invisible="schedule_type == 'fixed_time'"/> 
                            <div invisible="schedule_type != 'fixed_time'">
                                Check the days of the week the employee will be working 
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="monday_2"/> 
                                        <span class="me-2">Monday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="monday_hours_2" class="me-2">Amount of hours</label>
                                        <field name="monday_hours_2" string="Amount of hours" />
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="tuesday_2"/> 
                                        <span class="me-2">Tuesday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="tuesday_hours_2" class="me-2">Amount of hours</label>
                                        <field name="tuesday_hours_2" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="wednesday_2"/> 
                                        <span class="me-2">Wednesday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="wednesday_hours_2" class="me-2">Amount of hours</label>
                                        <field name="wednesday_hours_2" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="thursday_2"/> 
                                        <span class="me-2">Thursday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
                                        <label for="thursday_hours_2" class="me-2">Amount of hours</label>
                                        <field name="thursday_hours_2" string="Amount of hours" />
                                    </div>

                                </div>
                                <div class="d-flex align-items-baseline">
                                    <div class="w-25">
                                        <field name="friday_2"/> 
                                        <span class="me-2">Friday</span>
                                    </div>
                                    <div invisible="not fixed_time_with_hours">
