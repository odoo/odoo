<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="resource_calendar_std_35h" model="resource.calendar">
            <field name="name">Standard 35 hours/week</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="attendance_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'dayofweek': '0', 'duration_hours': 7, 'hour_from': 0, 'hour_to': 0}),
                    (0, 0, {'dayofweek': '1', 'duration_hours': 7, 'hour_from': 0, 'hour_to': 0}),
                    (0, 0, {'dayofweek': '2', 'duration_hours': 7, 'hour_from': 0, 'hour_to': 0}),
                    (0, 0, {'dayofweek': '3', 'duration_hours': 7, 'hour_from': 0, 'hour_to': 0}),
                    (0, 0, {'dayofweek': '4', 'duration_hours': 7, 'hour_from': 0, 'hour_to': 0}),
                ]"
            />
        </record>

        <record id="resource_calendar_std_38h" model="resource.calendar">
            <field name="name">Standard 38 hours/week</field>
            <field name="company_id" eval="False"/>
            <field name="hours_per_day">7.6</field>
            <field name="attendance_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'dayofweek': '0', 'duration_hours': 7.6, 'hour_from': 0, 'hour_to': 0}),
                    (0, 0, {'dayofweek': '1', 'duration_hours': 7.6, 'hour_from': 0, 'hour_to': 0}),
                    (0, 0, {'dayofweek': '2', 'duration_hours': 7.6, 'hour_from': 0, 'hour_to': 0}),
                    (0, 0, {'dayofweek': '3', 'duration_hours': 7.6, 'hour_from': 0, 'hour_to': 0}),
                    (0, 0, {'dayofweek': '4', 'duration_hours': 7.6, 'hour_from': 0, 'hour_to': 0}),
                ]"
            />
            <field name="full_time_required_hours">38</field>
        </record>

        <record id="resource_calendar_variable_schedule" model="resource.calendar">
            <field name="name">Variable Schedule</field>
            <field name="schedule_type">variable</field>
            <field name="company_id" eval="False"/>
            <field name="attendance_ids"
                eval="[(5, 0, 0)]
                + [(0, 0, {'date': DateTime.today() + relativedelta(weekday=0) + relativedelta(days=d, weeks=3*w), 'hour_from': 8, 'hour_to': 15.6}) for d in range(5) for w in range(-10, +10)]
                + [(0, 0, {'date': DateTime.today() + relativedelta(weekday=0) + relativedelta(days=d+2, weeks=3*w+1), 'hour_from': 9, 'hour_to': 12}) for d in range(3) for w in range(-10, +10)]
                + [(0, 0, {'date': DateTime.today() + relativedelta(weekday=0) + relativedelta(days=d, weeks=3*w+2), 'hour_from': 9, 'hour_to': 15.6}) for d in range(2) for w in range(-10, +10)]"
            />
            <field name="full_time_required_hours">38</field>
        </record>
    </data>
</odoo>
