<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-extend="slide.course.join">
        <t t-jquery=".o_wslides_join_cours_button_message" t-operation="replace">
            <t t-if="widget.channel.channelEnroll == 'public'">
                <t t-if="widget.publicUser">
                    Sign in
                </t>
                <t t-else="">
                    Join and Submit
                </t>
            </t>
            <t t-if="widget.channel.channelEnroll == 'payment'">
                <t t-if="widget.publicUser">
                    Sign in
                </t>
                <t else="">
                    Buy course
                </t>
            </t>
        </t>
    </t>
</templates>
