<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_send_form" model="ir.ui.view">
        <field name="name">account.move.send.form</field>
        <field name="model">account.move.send</field>
        <field name="inherit_id" ref="account.account_move_send_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='advanced_options']" position="inside">
                <field name="enable_ubl_xml" invisible="1"/>
                <field name="enable_cii_xml" invisible="1"/>
                <div name="option_ubl_xml"
                     attrs="{'invisible': [('enable_ubl_xml', '=', False)]}">
                    <field name="checkbox_ubl_xml"/>
                    <b><label for="checkbox_ubl_xml"/></b>
                </div>
                <div name="option_cii_xml"
                     attrs="{'invisible': [('enable_cii_xml', '=', False)]}">
                    <field name="checkbox_cii_xml"/>
                    <b><label for="checkbox_cii_xml"/></b>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
