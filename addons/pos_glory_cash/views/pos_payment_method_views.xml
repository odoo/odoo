<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_pos_glory_cash" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.glory</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook invisible="payment_method_type != 'glory_cash'">
                    <page name="settings" string="Glory Settings">
                        <group>
                            <group>
                                <field name="glory_websocket_address" required="payment_method_type == 'glory_cash'"/>
                                <field name="glory_username"/>
                                <field name="glory_password" password="True"/>
                            </group>
                            <widget name="pos_glory_cash_admin_buttons" />
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
