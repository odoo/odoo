<odoo>
    <record id="hr_employee_departure_view_form" model="ir.ui.view">
        <field name="name">hr.employee.departure.view.form.inherit.hr.work.entry</field>
        <field name="model">hr.employee.departure</field>
        <field name="inherit_id" ref="hr.hr_employee_departure_view_form"/>
        <field name="arch" type="xml">
            <group name="header_group" position="after">
                <div class="alert alert-warning" role="alert" invisible="not work_entries_warning_date">
                    Some work entries are already validated up until <field name="work_entries_warning_date" nolabel="1"/>.
                    Those work entries will be deleted when the departure actions will be applied.
                </div>
            </group>
        </field>
    </record>
</odoo>
