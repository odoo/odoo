<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block name="work_organization_setting_container" position="inside">
                <setting company_dependent="1" help="How do employee record their attendances" id="default_tracking_method_setting">
                    <field name="work_entry_source" required="1" class="o_light_label"
                        context="{'default_company_id': company_id}"/>
                </setting>
            </block>
        </field>
    </record>
</odoo>
