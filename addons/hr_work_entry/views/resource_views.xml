<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_work_entry_resource_calendar_view_form" model="ir.ui.view">
        <field name="name">hr.work.entry.resource.calendar</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[@name='global_leaves']" position="inside">
                <field name="work_entry_type_id" required="1" options="{'no_quick_create': True}"/>
            </xpath>
            <xpath expr="//tree[@name='company_global_leaves']" position="inside">
                <field name="work_entry_type_id"/>
            </xpath>
        </field>
    </record>

</odoo>
