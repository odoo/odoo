<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="hr_work_entry.work_entry_button">
        <button t-if="this.disabled" disabled="" title="Solve conflicts first" t-attf-class="btn {{this.primary?'btn-primary':'btn-secondary'}} btn-work-entry {{ this.event_class }}" type="button" t-esc="this.button_text"/>
        <button t-else="" t-attf-class="btn {{this.primary?'btn-primary':'btn-secondary'}} btn-work-entry {{ this.event_class }}" type="button" t-esc="this.button_text"/>
    </t>
</templates>
