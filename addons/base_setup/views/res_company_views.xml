<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//sheet" position="before">
                    <field name="l10n_installed" invisible="1"/>
                    <div class="alert alert-info mb-0" role="alert" attrs="{'invisible': [('l10n_installed', '=', True)]}">
                        The localisation package for <field name="country_id" readonly="1" options="{'no_open': True}"/> is not installed yet.
                        <button name="install_l10n" type="object" string="Install it" class="btn btn-link p-0"/>
                    </div>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
