<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  MAILING LIST -->
    <record model="ir.ui.view" id="mailing_list_view_search">
        <field name="name">mailing.list.view.search</field>
        <field name="model">mailing.list</field>
        <field name="arch" type="xml">
            <search string="Mailing Lists">
                <field name="name"/>
                <field name="create_date"/>
                <filter name="inactive" string="Archived" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Creation Period" name="group_create_date"
                        context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="mailing_list_view_tree">
        <field name="name">mailing.list.view.tree</field>
        <field name="model">mailing.list</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Mailing Lists">
                <field name="name"/>
                <field name="create_date"/>
                <field name="is_public"/>
                <field name="contact_valid_email_count"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="mailing_list_view_form">
        <field name="name">mailing.list.form</field>
        <field name="model">mailing.list</field>
        <field name="arch" type="xml">
            <form string="Contact List">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_valid_contacts"
                                type="object" icon="fa-user" class="oe_stat_button">
                            <field name="contact_valid_count" string="Recipients" widget="statinfo"/>
                        </button>
                        <button name="action_view_mailing"
                                type="object" icon="fa-envelope-o" class="oe_stat_button">
                            <field name="mailing_list_count" string="Mailings" widget="statinfo"/>
                        </button>
                        <button name="action_view_message_bounce_contacts"
                                type="object" icon="fa-exchange" class="oe_stat_button">
                            <field name="contact_message_bounce_percentage_str" string="Bouncing" widget="statinfo"/>
                        </button>
                        <button name="action_view_opt_out_contacts"
                                type="object" icon="fa-bell-slash" class="oe_stat_button">
                            <field name="contact_opt_out_percentage_str" string="Opt-Out" widget="statinfo"/>
                        </button>
                        <button name="action_view_blacklisted_contacts"
                                type="object" icon="fa-ban" class="oe_stat_button">
                            <field name="contact_blacklist_percentage_str" string="BlackList" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Consumer Newsletter"/>
                        </h1>
                    </div>
                    <group>
                        <field name="active" invisible="1"/>
                        <field name="is_public"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mailing_list_view_form_simplified" model="ir.ui.view">
        <field name="name">mailing.list.form.simplified</field>
        <field name="model">mailing.list</field>
        <field name="arch" type="xml">
            <form string="Contact List">
                <group>
                    <group>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Consumer Newsletter"/>
                            </h1>
                        </div>
                    </group>
                </group>
                <group>
                    <field name="is_public"/>
                </group>
                <footer>
                    <button string="Create" name="close_dialog" type="object" class="btn-primary"/>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="open_create_mass_mailing_list" model="ir.actions.act_window">
        <field name="name">Create a Mailing List</field>
        <field name="res_model">mailing.list</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mailing_list_view_form_simplified"/>
        <field name="target">new</field>
    </record>

    <record id="mailing_list_view_kanban" model="ir.ui.view">
        <field name="name">Mailing list kanban view</field>
        <field name="model">mailing.list</field>
        <field name="arch" type="xml">
            <kanban js_class="mass_mailing_list_kanban" class="o_kanban_mobile" on_create="mass_mailing.open_create_mass_mailing_list">
                <field name="name"/>
                <field name="contact_count"/>
                <field name="contact_valid_email_count"/>
                <field name="contact_message_bounce_percentage"/>
                <field name="contact_blacklist_percentage"/>
                <field name="contact_opt_out_percentage"/>
                <field name="mailing_list_count"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div class="o_mass_mailing_kanban_main">
                                <div class="o_kanban_card_content">
                                    <div class="mb-3">
                                        <div class="o_primary mb-3">
                                            <h3><t t-esc="record.name.value"/></h3>
                                        </div>
                                        <div class="row">
                                            <div class="col-auto">
                                                <button name="action_view_full_contacts" type="object" class="btn btn-primary oe_kanban_global_click">
                                                <t t-esc="record.contact_count.value"/> Contacts</button>
                                            </div>
                                            <div class="kanban-right-content col">
                                                <div t-if="record.contact_valid_email_count.value > 0" class="row">
                                                    <div class="col-12 my-0 text-info">
                                                        <div class="row">
                                                            <small class="col-auto my-0 d-block">
                                                                <a type="object"
                                                                   name="action_view_valid_email_contacts">
                                                                    Valid email recipients
                                                                </a>
                                                            </small>
                                                            <small class="col-3 my-0 d-block p-0">
                                                                <a class="text-left"
                                                                   type="object"
                                                                   t-esc="record.contact_valid_email_count.value"
                                                                   name="action_view_valid_email_contacts">
                                                                </a>
                                                            </small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_manage_pane">
                                    <div class="o_kanban_card_manage_section o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" data-display="static" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                            <a role="menuitem" class="dropdown-item o_kanban_mailing_active" name="toggle_active" type="object">
                                                <t t-if="record.active.raw_value">Archive</t>
                                                <t t-if="!record.active.raw_value">Restore</t>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_mailing_list_kanban_boxes">
                                <t t-set="message_bounce_status"
                                   t-value="record.contact_message_bounce_percentage.value >= 8.0 ? 'text-danger': record.contact_message_bounce_percentage.value >= 3.0 ? 'text-warning' : 'text-black'" />
                                <t t-set="opt_out_status"
                                   t-value="record.contact_opt_out_percentage.value >= 0.5 ? 'text-danger': record.contact_opt_out_percentage.value >= 0.2 ? 'text-warning' : 'text-black'" />
                                <t t-set="blacklist_status"
                                   t-value="record.contact_blacklist_percentage.value >= 0.1 ? 'text-danger': record.contact_blacklist_percentage.value >= 0.05 ? 'text-warning' : 'text-black'" />
                                <div>
                                    <a role="button" class="mr-3 text-black" type="object" name="action_view_mailing" aria-label="Mailing list" title="Mailing list">
                                        <i class="fa fa-envelope-o" role="img"/>
                                        <t t-esc="record.mailing_list_count.value"/>
                                    </a>
                                    <a t-attf-class="mr-3 {{message_bounce_status}}"
                                       role="button" type="object" name="action_view_message_bounce_contacts" aria-label="Bounce" title="Bounce">
                                        <i class="fa fa-exchange" role="img"/>
                                        <t t-esc="record.contact_message_bounce_percentage.value"/>
                                    </a>
                                    <a t-attf-class="mr-3 {{opt_out_status}}"
                                       role="button" type="object" name="action_view_opt_out_contacts" aria-label="Opt-out" title="Opt out">
                                        <i class="fa fa-bell-slash" role="img"/>
                                        <t t-esc="record.contact_opt_out_percentage.value"/>%
                                    </a>
                                    <a t-attf-class="mr-3 {{blacklist_status}}"
                                       role="button" type="object" name="action_view_blacklisted_contacts" aria-label="Black list" title="Black List" >
                                        <i class="fa fa-ban" role="img"/>
                                        <t t-esc="record.contact_blacklist_percentage.value"/>%
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_view_mass_mailing_lists">
        <field name="name">Mailing Lists</field>
        <field name="res_model">mailing.list</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new mailing list
          </p><p>
            You don't need to import your mailing lists, you can easily
            send emails<br/> to any contact saved in other Odoo apps.
          </p>
        </field>
    </record>

    <menuitem name="Mailing Lists" id="menu_email_mass_mailing_lists"
        parent="mass_mailing_mailing_list_menu" sequence="3"
        action="action_view_mass_mailing_lists"/>
</odoo>
