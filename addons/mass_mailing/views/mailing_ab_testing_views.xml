<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mass_mailing_mailing_ab_testing_view_tree" model="ir.ui.view">
        <field name="name">mailing.ab.testing.tree</field>
        <field name="model">mailing.ab.testing</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="mailing_model_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="sample_size"/>
                <field name="state" widget="badge"
                    decoration-info="state == 'in_progress'"
                    decoration-success="state == 'done'"/>
                <field name="tag_ids" widget="many2many_tags"/>
            </tree>
        </field>    
    </record>

    <record id="mass_mailing_mailing_ab_testing_view_form" model="ir.ui.view">
        <field name="name">mailing.ab.testing.form</field>
        <field name="model">mailing.ab.testing</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_add_mailing" type="object" class="btn btn-primary" string="Add Mailing"
                        attrs="{'invisible': ['|', ('state', '!=', 'new'), ('mailing_type', '!=', 'mail')]}"/>
                    <button name="action_send_mailings" type="object" class="btn btn-secondary" string="Send Mailings"
                        attrs="{'invisible': ['|', '|', ('state', 'in', ('done')), ('mailing_count', '&lt;', 2), ('mailing_type', '!=', 'mail')]}"/>
                    <button name="action_send_winner_mailing" type="object" class="btn btn-secondary" string="Send Winner Mailing"
                        attrs="{'invisible': ['|', '|', ('state', 'in', ('new', 'done')), ('testing_mode', '=', 'manual'), ('mailing_type', '!=', 'mail')]}"/>
                    <field name="state" readonly="1" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="mailing_count" invisible="1"/>
                    <field name="mailing_type" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" string="Title" class="oe_read_only"/>
                        <h1>
                            <field name="name" class="o_text_overflow"
                                attrs="{'readonly': [('state', 'in', ('in_progress', 'done'))]}"/>
                        </h1>
                    </div>
                    <group>
                        <label for="mailing_model_id" string="Recipients"/>
                        <div name="mailing_model_id_container">
                            <div class="row">
                                <div class="col-xs-12 col-md-3">
                                    <field name="mailing_model_id" options="{'no_open': True, 'no_create': True}"
                                        attrs="{'readonly': [('state', 'in', ('in_progress', 'done'))]}"/>
                                </div>
                                <div attrs="{'invisible': [('mailing_model_name', '!=', 'mailing.list')]}" class="col-xs-12 col-md-9 pt-1">
                                    <label for="contact_list_ids" string="Select mailing lists:" class="oe_edit_only"/>
                                    <field name="contact_list_ids" widget="many2many_tags"
                                        placeholder="Select mailing lists..." class="oe_inline"
                                        attrs="{
                                            'required': [('mailing_model_name', '=', 'mailing.list')],
                                            'readonly': [('state', 'in', ('in_progress', 'done'))],
                                        }"/>
                                </div>
                            </div>
                            <field name="mailing_model_name" invisible="1"/>
                            <field name="mailing_model_real" invisible="1"/>
                            <div attrs="{'invisible': [('mailing_model_name', '=', 'mailing.list')]}">
                                <field name="mailing_domain" widget="domain" options="{'model': 'mailing_model_real'}"
                                    attrs="{'readonly': [('state', 'in', ('in_progress', 'done'))]}"/>
                            </div>
                        </div>
                    </group>
                    <group attrs="{'readonly': [('state', 'in', ('in_progress', 'done'))]}" class="mb-0">
                        <group>
                            <field name="sample_size" widget="selection_badge" attrs="{'readonly': [('state', 'in', ('in_progress', 'done'))]}"/>
                        </group>
                        <group>
                            <field name="user_id" widget="many2one_avatar_user" options="{'no_open': True}"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <group class="d-block col-6 my-0 p-0">
                        <label for="testing_mode" string="Winner Selection"/>
                        <div>
                            <div class="row ml-0">
                                <field name="testing_mode" class="col-3 mr-5"
                                    attrs="{'readonly': [('state', 'in', ('in_progress', 'done'))]}"/>
                                <field name="based_on" class="col"
                                    attrs="{'required': [('testing_mode', '=', 'based_on'), ('mailing_type', '=', 'mail')], 'readonly': [('state', '=', 'done')], 'invisible': ['|', ('testing_mode', '!=', 'based_on'), ('mailing_type', '!=', 'mail')]}"/>
                            </div>
                        </div>
                    </group>
                    <group class="d-block col-6 mt-0 p-0" attrs="{'invisible': [('testing_mode', '=', 'manual')]}">
                        <label for="duration" string="After"/>
                        <div>
                            <div class="row ml-0">
                                <field name="duration" class="col-3 mr-5 text-center"
                                    attrs="{'required': [('testing_mode', '=', 'based_on')], 'readonly': [('state', '!=', 'new')]}"/>
                                <field name="duration_type" class="col"
                                    attrs="{'required': [('testing_mode', '=', 'based_on')], 'readonly': [('state', '!=', 'new')]}"/>
                            </div>
                        </div>
                    </group>
                    <notebook>
                        <page name="mailings" string="Testing Content">
                            <field name="mailing_ids" nolabel="1" attrs="{'readonly': [('state', '!=', 'new')]}">
                                <tree editable="bottom" create="0">
                                    <field name="subject"/>
                                    <field name="version_id"/>
                                    <field name="state" readonly="1"/>
                                    <field name="total" string="Recipients"/>
                                    <field name="contact_ab_pc" readonly="1" widget="percentage"/>
                                    <field name="opened_ratio" string="Opened (%)" readonly="1" attrs="{'column_invisible': [('parent.mailing_type', '!=', 'mail')]}"/>
                                    <field name="replied_ratio" string="Replied (%)" readonly="1" attrs="{'column_invisible': [('parent.mailing_type', '!=', 'mail')]}"/>
                                    <field name="clicks_ratio" string="Clicked (%)" readonly="1"/>
                                    <button type="object" name="action_edit_mailing" class="btn btn-secondary ml-3" string="Edit"
                                        attrs="{'invisible': [('parent.state', '!=', 'new')]}"/>
                                    <button type="object" name="copy" class="btn btn-secondary" string="Duplicate"
                                        attrs="{'invisible': [('parent.state', '!=', 'new')]}"/>
                                    <button type="object" name="action_select_as_winner"
                                        class="btn btn-secondary" string="Select As Winner"
                                        attrs="{'invisible': ['|', '|', ('parent.testing_mode', '!=', 'manual'), ('parent.state', '!=', 'in_progress'), ('state', '!=', 'done')]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="mass_mailing_mailing_ab_testing_view_kanban" model="ir.ui.view">
        <field name="name">mailing.ab.testing.kanban</field>
        <field name="model">mailing.ab.testing</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" quick_create="false" sample="1">
                <field name="state" readonly="1"/>
                <field name="user_id"/>
                <field name="mailing_model_id"/>
                <field name="mailing_model_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <div class="row">
                                            <h3 class="my-1 col">
                                                <field name="name"/>
                                            </h3>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <h5>
                                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="oe_clear">
                                        <b><field name='total_recipients'/></b>
                                        <field name='mailing_model_id' attrs="{'invisible': [('mailing_model_name','=','mailing.list')]}"/>
                                        <span attrs="{'invisible': [('mailing_model_name','!=','mailing.list')]}">Mailing Contact</span>
                                    </span><br/>
                                    <span>
                                        <b><field name="sample_size"/></b> Sample Size
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span attrs="{'invisible': [('state', '=', 'done')]}">
                                        <field name="nbr_mailing_ids"/> Testing Mailings
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="mailing_mailing_action_ab_testing" model="ir.actions.act_window">
        <field name="name">A/B Tests</field>
        <field name="res_model">mailing.ab.testing</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('mailing_type', '=', 'mail')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new testing mailing campaign
            </p>
        </field>
    </record>

    <menuitem name="A/B Tests" id="mass_mailing_menu_ab_testing"
        parent="mass_mailing_menu"
        sequence="2"
        groups="group_mass_mailing_ab_testing"
        action="mailing_mailing_action_ab_testing"/>
</odoo>
