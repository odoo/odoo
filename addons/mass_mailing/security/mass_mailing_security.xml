<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_mass_mailing_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_mass_mailing"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_mass_mailing_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_mass_mailing"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="implied_ids" eval="[(4, ref('group_mass_mailing_user'))]"/>
    </record>

    <record id="mail_template_unlink_user_rule" model="ir.rule">
        <field name="name">Edit Own Templates Only</field>
        <field name="model_id" ref="mail.model_mail_template"/>
        <field name="domain_force">[('create_uid','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user')), (4, ref('group_mass_mailing_user'))]"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_read" eval="False"/>
    </record>

    <record id="mail_template_unlink_manager_rule" model="ir.rule">
        <field name="name">Edit All Templates</field>
        <field name="model_id" ref="mail.model_mail_template"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_mass_mailing_manager'))]"/>
    </record>

    <!-- Group to manage campaigns -->
    <record id="group_mass_mailing_campaign" model="res.groups">
        <field name="name">Manage Mass Mailing Campaigns</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('mass_mailing.group_mass_mailing_user'))]"/>
        </record>
    </data>
</odoo>
