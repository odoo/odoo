<?xml version="1.0"?>
<odoo>
    <data>
        <record id="mail_message_view_form_inherit_mail_tracking" model="ir.ui.view">
            <field name="name">mail.message.view.form.inherit.mail_tracking</field>
            <field name="model">mail.message</field>
            <field name="inherit_id" ref="mail.mail_message_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='recipients']" position="after">
                    <page string="Tracking" name="page_tracking">
                        <field name="tracking_value_ids"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
