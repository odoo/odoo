<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_lang_tree" model="ir.ui.view">
            <field name="name">res.lang.tree</field>
            <field name="model">res.lang</field>
            <field name="arch" type="xml">
                <tree string="Languages" limit="200" decoration-muted="active == False">
                    <field name="name" string="Language"/>
                    <field name="code" groups="base.group_no_one"/>
                    <field name="iso_code" groups="base.group_no_one"/>
                    <field name="url_code" groups="base.group_no_one" invisible="1"/>
                    <field name="direction" groups="base.group_no_one"/>
                    <field name="active"/>
                    <button name="%(base.action_view_base_language_install)d"
                        string="Activate/Update"
                        type="action"
                        icon="fa-refresh"/>
                </tree>
            </field>
        </record>

        <record id="res_lang_form" model="ir.ui.view">
            <field name="name">res.lang.form</field>
            <field name="model">res.lang</field>
            <field name="arch" type="xml">
                <form string="Languages">
                    <header>
                        <button name="%(base.action_view_base_language_install)d" type="action" string="Activate" class="oe_highlight" attrs="{'invisible': [('active', '=', True)]}"/>
                        <button name="%(base.action_view_base_language_install)d" type="action" string="Update" class="oe_highlight" attrs="{'invisible': [('active', '=', False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button
                                name="%(base.action_translation)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-exchange" context="{'search_default_lang': code, 'default_lang': code}" attrs="{'invisible': [('active', '=', False)]}">
                                    <field name="translation_count" widget="statinfo" string="Translations"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="direction"/>
                                <field name="decimal_point"/>
                                <field name="thousands_sep"/>
                                <field name="grouping"/>
                                <field name="code" groups="base.group_no_one"/>
                                <field name="iso_code" groups="base.group_no_one"/>
                                <field name="url_code" invisible="1" required="0" groups="base.group_no_one"/>
                            </group>
                            <group>
                                <field name="week_start"/>
                                <field name="date_format"/>
                                <field name="time_format"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group col="2">
                            <group string="Supported Date and Time Formats">
                                <div>%%a - Abbreviated weekday name.</div>
                                <div>%%A - Full weekday name.</div>
                                <div>%%b - Abbreviated month name.</div>
                                <div>%%B - Full month name."</div>
                                <div>%%d - Day of the month [01,31]."</div>
                                <div>%%j - Day of the year [001,366]."</div>
                                <div>%%H - Hour (24-hour clock) [00,23]."</div>
                                <div>%%I - Hour (12-hour clock) [01,12]."</div>
                                <div>%%M - Minute [00,59]."</div>
                                <div>%%p - Equivalent of either AM or PM."</div>
                                <div>%%S - Seconds [00,61]."</div>
                                <div>%%w - Weekday number [0(Sunday),6]."</div>
                                <div>%%y - Year without century [00,99]."</div>
                                <div>%%Y - Year with century."</div>
                                <div>%%m - Month number [01,12]."</div>
                            </group>
                            <group string="Examples">
                                <div>%%b, %%B         ==> Dec, December</div>
                                <div>%%a ,%%A         ==> Fri, Friday</div>
                                <div>%%y, %%Y         ==> 08, 2008</div>
                                <div>%%d, %%m         ==> 05, 12</div>
                                <div>%%H:%%M:%%S      ==> 18:25:20</div>
                                <div>%%I:%%M:%%S %%p  ==> 06:25:20 PM</div>
                                <div>%%j              ==> 340</div>
                                <div>%%S              ==> 20</div>
                                <div>%%w              ==> 5 ( Friday is the 6th day)</div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_lang_search" model="ir.ui.view">
            <field name="name">res.lang.search</field>
            <field name="model">res.lang</field>
            <field name="arch" type="xml">
                <search string="Languages">
                    <field name="name"
                        filter_domain="['|', '|', ('name', 'ilike', self), ('code', 'ilike', self), ('iso_code', 'ilike', self)]"
                        string="Language"/>
                    <field name="direction"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                </search>
            </field>
        </record>

        <record id="res_lang_act_window" model="ir.actions.act_window">
            <field name="name">Languages</field>
            <field name="res_model">res.lang</field>
            <field name="context">{'active_test': False}</field>
            <field name="search_view_id" ref="res_lang_search"/>
        </record>

        <menuitem id="menu_languages" name="Languages" parent="menu_administration" sequence="1"/>
        <menuitem action="res_lang_act_window" id="menu_res_lang_act_window" parent="menu_languages" sequence="2"/>
        <menuitem action="base.action_view_base_language_install" id="menu_res_lang_add_lang" parent="menu_languages" sequence="1"/>
    </data>
</odoo>
