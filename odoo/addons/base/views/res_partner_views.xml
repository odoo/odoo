<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="email" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_partner_simple_form" model="ir.ui.view">
            <field name="name">res.partner.simplified.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Contact">
                    <field name="type" invisible="1"/>
                    <div class="oe_title">
                        <h1 name="title_h1">
                            <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                        </h1>
                    </div>
                    <group>
                        <field name="user_ids" invisible="1"/>
                        <field name="email" widget="email" required="context.get('force_email', False)" attrs="{'required': [('user_ids','!=', [])]}"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Partners">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title" name="title_div">
                        <field name="active" invisible="1"/>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                        </h1>
                    </div>
                    <group name="main_info">
                        <group>
                            <field name="type" groups="base.group_no_one" attrs="{'readonly': [('user_ids', '!=', [])]}"/>
                        </group>
                        <group>
                            <field name="user_ids" invisible="1"/>
                            <field name="email" widget="email" attrs="{'required': [('user_ids','!=', [])]}"/>
                            <field name="active_lang_count" invisible="1"/>
                            <label for="lang" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}"/>
                            <div class="o_row" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}" name="div_lang">
                                <field name="lang"/>
                                <button
                                    type="action"
                                    name="%(base.res_lang_act_window)d"
                                    class="btn-sm btn-link mb4 fa fa-globe"
                                    aria-label="More languages"
                                    groups="base.group_system"
                                    title="More languages"
                                />
                            </div>
                        </group>
                    </group>
                </sheet>
                </form>
            </field>
        </record>

       <record id="view_res_partner_filter" model="ir.ui.view">
            <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Search Partner">
                    <field name="name" filter_domain="['|', ('display_name', 'ilike', self), ('email', 'ilike', self)]"/>
                    <field name="email" filter_domain="[('email', 'ilike', self)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>
