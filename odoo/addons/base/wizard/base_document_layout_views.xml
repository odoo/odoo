<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_base_document_layout" model="ir.ui.view">
            <field name="name">Document Layout</field>
            <field name="model">base.document.layout</field>
            <field name="arch" type="xml">
                <form class="o_document_layout">
                    <group>
                        <group class="o_document_layout_company">
                            <label for="external_report_layout_id" string="Layout" />
                            <div class="o_document_layout_layout">
                                <div class="o_document_layout_config">
                                    <field name="external_report_layout_id" invisible="1" />
                                    <field name="report_layout_id" widget="radio" />
                                </div>
                                <div class="o_document_layout_config">
                                    <field name="logo" widget="image" />
                                    <button name="detect_colors" string="Identify dominant colors" type="object" class="btn btn-link" icon="fa-arrow-right"
                                        attrs="{'invisible': [('logo', '=', False)]}" noclose="1"/>
                                </div>
                            </div>
                            <label for="primary_color" string="Colors" />
                            <div class="o_document_layout_colors">
                                <field name="custom_primary" invisible="1"/>
                                <field name="custom_secondary" invisible="1"/>
                                <field name="primary_color" widget="color" context="{'user_selected': True}" />
                                <field name="secondary_color" widget="color" context="{'user_selected': True}" />
                                <button name="reset_colors" string="Reset to default" type="object" class="btn btn-link" icon="fa-arrow-right" noclose="1"/>
                            </div>
                            <field name="font" widget="selection" />
                            <field name="report_header" string="Tagline" widget="char" placeholder="e.g. Global Business Solutions" />
                            <field name="report_footer" string="Footer" placeholder="e.g. Opening hours, bank accounts (one per line)" />
                            <field name="paperformat_id" widget="selection" />
                        </group>
                        <group>
                            <div class="o_document_layout_preview">
                                <field name="preview_logo" widget="image" readonly="1" nolabel="1" class="o_document_layout_preview_logo" />
                                <field name="preview" widget="html" class="o_document_layout_preview_html" />
                            </div>
                        </group>
                    </group>
                    <footer>
                        <button special="save" string="Save" class="btn btn-primary" type="object" />
                        <button name="download_preview" string="Preview" action="ir_action_report" invisible="1" />
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

