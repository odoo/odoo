<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_translation_field_wizard" model="ir.ui.view">
        <field name="name">translation.field.wizard</field>
        <field name="model">translation.field.wizard</field>
        <field name="arch" type="xml">
            <form string="Translations">
                <group colspan="2">
                    <field name="show_src" invisible="True" />
                </group>
                <field name="translation_lines" nolabel="1">
                    <tree string="Translations" editable="top" create="false" delete="false">
                        <field name="lang" readonly="True" />
                        <field name="src" readonly="True"
                               attrs="{'column_invisible': [('parent.show_src', '=', False)]}"/>
                        <field name="value" />
                    </tree>
                </field>
                <footer>
                    <button string="Save" class="btn btn-primary" special="save" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
