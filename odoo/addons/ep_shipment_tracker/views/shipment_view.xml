<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="shipment_form_view" model="ir.ui.view">
        <field name="name">shipment.form</field>
        <field name="model">shipment.shipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="new,in_transit,delivered,cancelled"
                            options="{'clickable': '1'}"
                        />
                    </header>
                    <group>
                        <field name="sequence_code" readonly="1" />
                        <field name="sender_id" />
                        <field name="receiver_name" />
                        <field name="location" />
                        <field name="parcel_type" />
                        <field name="parcel_value" />
                        <field name="shipment_category_id" />
                        <field name="price" />
                        <field name="currency_id" />
                        <field name="for_sale" />
                        <field name="date_availability" />
                        <field name="image" />
                    </group>
                    <notebook>
                        <page string="Description">
                            <field
                                name="description"
                                widget="html_composer_message"
                                force_save="1"
                                nolabel="1"
                                placeholder="Write your description here..."
                            />
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="shipment_list_view" model="ir.ui.view">
        <field name="name">shipment.list</field>
        <field name="model">shipment.shipment</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence_code"/>
                <field name="sender_id"/>
                <field name="receiver_name"/>
                <field name="location"/>
                <field name="parcel_type"/>
                <field name="parcel_value"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="shipment_kanban_view" model="ir.ui.view">
        <field name="name">shipment.kanban</field>
        <field name="model">shipment.shipment</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="sequence_code"/>
                <field name="sender_id"/>
                <field name="receiver_name"/>
                <field name="location"/>
                <field name="parcel_type"/>
                <field name="parcel_value"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="sequence_code"/>
                            </strong>
                            <div>
                                <field name="sender_id"/>
                            </div>
                            <div>
                                <field name="receiver_name"/>
                            </div>
                            <div>
                                <field name="location"/>
                            </div>
                            <div>
                                <field name="parcel_type"/>
                            </div>
                            <div>
                                <field name="parcel_value"/>
                            </div>
                            <div>
                                <field name="state"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="shipment_act_window" model="ir.actions.act_window">
        <field name="name">Shipments</field>
        <field name="res_model">shipment.shipment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('shipment_kanban_view')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('shipment_list_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('shipment_form_view')}),
        ]"/>
    </record>

    <menuitem name="Shipment" id="root_shipment_menu"/>
    <menuitem name="Shipments" id="shipment_menu" parent="root_shipment_menu" action="shipment_act_window"/>
</odoo>
