<openerp>
    <data>
<!--  Modify Product form to include 2 more images -->
     <record model="ir.ui.view" id="optima_product__form">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='image_medium']" position="after">
               <field name="image_medium2" widget="image" class="oe_avatar oe_left"/>
               <field name="image_medium3" widget="image" class="oe_avatar oe_left"/>
              </xpath>
            </field>
     </record>
    </data>
</openerp>

