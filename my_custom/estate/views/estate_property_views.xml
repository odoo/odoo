<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Kanban View -->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate_property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="status" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="name" />
                            </strong>
                            <div>
                                <span>Expected Price: </span>
                                <field name="expected_price" />
                            </div>
                            <div t-if="record.status.raw_value == 'offer_received'">
                                <!-- nếu không có raw_value, mặc định sẽ là value, in ra giá trị string=...-->
                                <span>Best Offer: </span>
                                <field name="best_price" />
                            </div>
                            <div t-if="record.status.raw_value == 'offer_accepted'">
                                <!-- nếu không có raw_value, mặc định sẽ là value, in ra giá trị string=...-->
                                <span>Selling Price: </span>
                                <field name="selling_price" />
                            </div>
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Estate property Form -->
    <record id="estate.estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <!-- Sold & Cancel button -->
                <header>
                    <button name="action_sold" type="object" string="Sold" invisible="status not in ['offer_accepted'] or salesperson_id != uid" groups="estate.group_real_estate_user"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="status in ['sold', 'canceled'] or salesperson_id != uid" groups="estate.group_real_estate_user"/>
                    <field name="status" widget="statusbar" />
                </header>
                <sheet>

                    <!-- Form header title -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="salesperson_id != uid" groups="estate.group_real_estate_user"/>
                        </h1>
                    </div>

                    <!-- Form header information -->
                    <group>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" readonly="salesperson_id != uid" groups="estate.group_real_estate_user"/>
                        <group>
                            <field name="property_type_id" widget="many2one" options="{'no_create': True, 'no_open': True}" readonly="salesperson_id != uid" groups="estate.group_real_estate_user"/>
                            <field name="postcode" readonly="salesperson_id != uid" groups="estate.group_real_estate_user"/>
                            <field name="date_availability" readonly="salesperson_id != uid" groups="estate.group_real_estate_user"/>
                        </group>
                        <group>
                            <field name="expected_price" readonly="salesperson_id != uid" groups="estate.group_real_estate_user"/>
                            <field name="best_price" readonly="salesperson_id != uid" groups="estate.group_real_estate_user"/>
                            <field name="selling_price" readonly="salesperson_id != uid" groups="estate.group_real_estate_user"/>
                        </group>
                    </group>

                    <!-- Form body -->
                    <notebook>
                        <!-- Form body page 1 -->
                        <page id="page_1" string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="active" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" />
                            </group>
                        </page>

                        <!-- Form body page 2 -->
                        <page id="page_2" string="Offers">
                            <field name="offer_ids" widget="one2many" readonly="status in ['offer_accepted', 'sold', 'canceled']" />
                        </page>
                        <!-- Form body page 3 -->
                        <page id="page_3" string="Other info">
                            <group>
                                <field name="salesperson_id" />
                                <field name="buyer_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Estate property Tree -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list decoration-success="status in ['offer_received', 'offer_accepted']" decoration-bf="status=='offer_accepted'" decoration-muted="status=='sold'" decoration-danger="status=='canceled'">
                <field name="name" width="auto" />
                <field name="property_type_id" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" optional="hidden" />
            </list>
        </field>
    </record>

    <!-- Search & Filter -->
    <record id="estate_property_view_search_filter" model="ir.ui.view">
        <field name="name">estate.property.search.filter</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <!-- Search -->
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="living_area" filter_domain="[('living_area', '>=', self)]" />

                <!-- Filter -->
                <filter name="status" string="Available" domain="[('status', 'in', ['new', 'offer_received'])]" />

                <!-- Group by -->
                <filter name="postcode" string="Postcode" context="{'group_by':'postcode'}" />
                <!--
                name ở đây là ID nội bộ của lọc-->
                <filter name="property_type_id" string="Property Type" context="{'group_by':'property_type_id'}" />
                <!-- còn trong context là trỏ tới 1
                trường-->
            </search>
        </field>
    </record>

    <!-- Estate property Action -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_status': 1, 'group_by': 'property_type_id'}</field>
    </record>
</odoo>