<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Action -->
  <record id="estate_property_offer_action" model="ir.actions.act_window">
    <field name="name">Property Offers</field>
    <field name="res_model">estate.property.offer</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('property_type_id', '=', active_id)]</field>
  </record>

  <!-- Tree -->
  <record id="estate_property_view_offer_tree" model="ir.ui.view">
    <field name="name">estate.property.view.offer.tree</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <list decoration-success="status=='accepted'" decoration-danger="status=='refused'" editable="bottom"> 
        <field name="price" />
        <field name="partner_id" />
        <field name="validity" />
        <field name="date_deadline" />
        <button name="action_accept" title="Accept" type="object" icon="fa-check"
          invisible="status or property_state in ['offer_accepted', 'sold', 'canceled']" />
        <button name="action_refuse" title="Refused" type="object" icon="fa-times"
          invisible="status or property_state in ['offer_accepted', 'sold', 'canceled']" />
        <field name="status" column_invisible="True"/>
      </list>
    </field>
  </record>

  <!-- Form -->
  <record id="estate_property_view_offer_form" model="ir.ui.view">
    <field name="name">estate.property.view.offer.form</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <form string="Estate Property">
        <sheet>
          <group>
            <field name="price" />
            <field name="partner_id" />
            <field name="validity" />
            <field name="date_deadline" />
            <field name="status" />
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>