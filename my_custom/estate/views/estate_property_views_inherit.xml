<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_view_form_readonly_user" model="ir.ui.view">
        <field name="name">estate.property.form.readonly.user</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_view_form"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <xpath expr="//form" position="attributes">
                    <attribute name="readonly">salesperson_id != uid</attribute>
                    <attribute name="groups">estate.group_real_estate_user</attribute>
                  </xpath>
            </form>
        </field>
    </record>
</odoo>
