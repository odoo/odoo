<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="real_estate_user_rule" model="ir.rule">
            <field name="name">User Own Real Estate</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="domain_force">[('salesperson_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('estate.group_real_estate_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="real_estate_user_read_all" model="ir.rule">
            <field name="name">Real Estate - Read All</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="domain_force">[(1, '=', 1)]</field>         
            <field name="groups" eval="[(4, ref('estate.group_real_estate_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>