<templates id="template" xml:space="preserve">
    
    <t t-name="minerva.options">
        <t t-if= "groups">
            <option data-parameter="null">Grupės</option>
            <t t-foreach="groups" t-as="group">
                <option t-att-data-groups-id="group.id"> <t t-esc="group.code"/></option>
            </t>
        </t>
        
        <t t-if="faculties">
            <option data-parameter="null">Dėstytojai</option>
             <t t-foreach="faculties" t-as="group">
                <option t-att-data-groups-id="group.id"> <t t-esc="group.name"/></option>
            </t>
        </t>
        
        <t t-if="subjects">
            <option data-parameter="null">Dalykai</option>
             <t t-foreach="subjects" t-as="group">
                <option t-att-data-groups-id="group.id"> <t t-esc="group.name"/></option>
            </t>
        </t>
        
        <t t-if= "classrooms">
            <option data-parameter="null">Auditorijos</option>
             <t t-foreach="classrooms" t-as="group">
                <option t-att-data-groups-id="group.id"> <t t-esc="group.code"/></option>
            </t>
        </t>
        
     <t t-if="days">
            <option data-parameter="null">Dienos</option>
             <t t-foreach="days" t-as="group">
                <option t-att-data-groups-id="group[0]"> <t t-esc="group[1]"/></option>
            </t>
        </t> 
    </t>
    
