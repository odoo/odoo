<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record rule: Users can only modify their own properties -->
        <record id="estate_property_user_rule" model="ir.rule">
            <field name="name">Estate Property: User-Specific Access</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="domain_force">
                ['|', ('user_id','=',False), ('user_id','=',user.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Record rule: Managers can access all properties -->
        <record id="estate_property_manager_rule" model="ir.rule">
            <field name="name">Estate Property: Manager Access</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="domain_force">[(1,'=',1)]</field> <!-- Always true -->
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>