                        string="Room Booking Line">
                        <form string=" Room line">
                            <group colspan='4' col='4'>
                                <field name="room_id" />
                                <field name="check_in" />
                                <field name="state" />
                                <field name="check_out" />
                                <field name="reservation_id" />
                                <field name="status" />
                            </group>
                        </form>
                        <tree>
                            <field name="room_id" />
                            <field name="check_in" />
                            <field name="check_out" />
                            <field name="state" />
                            <field name="reservation_id" />
                            <field name="status" />
                        </tree>
                    </field>
                </page>
