                <field name="o_date" />
                <field name="table_no" />
                <field name="room_no" />
                <field name="waiter_name" />
                <field name="state" />
                <field name="amount_total" sum="Table Order Total" />
            </tree>
        </field>
    </record>

    <!-- Search view of hotel restaurant order -->
    <record id="view_hotel_restaurant_order_search" model="ir.ui.view">
