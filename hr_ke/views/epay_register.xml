<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="report_epayment_register_document">
    		<!-- Multicompany -->
	    	<t t-if="o and 'company_id' in o">
        	    <t t-set="company" t-value="o.company_id"></t>
    	   	</t>
           	<t t-if="not o or not 'company_id' in o">
        	    <t t-set="company" t-value="res_company"></t>
           	</t>
	        <div class="header col-xs-12 epay-black epay-bg-grey" style="padding-bottom:28px;">
		  <!--<div class="epay-wrapper"> -->
		       <div class="col-xs-3">
			    <img src="/optima_custom_invoice/static/description/logo.png"/> 
		       </div>
		       <div class="col-xs-4 mb8 epay-black epay-right" >
		            <h5 class="epay-nomargin epay-green" t-field="company.name"/>
                            <p class="epay-nomargin"><span class="fa fa-envelope-square fa-lg"/>&#160;
					<span t-field="company.street"/>
			    </p>
                            <p class="epay-nomargin"><span class="fa fa-map-marker fa-lg"/>&#160;&#160;
					<span t-field="company.city"/>,&#160;
					<span t-field="company.country_id"/>
			    </p>
                            <p class="epay-nomargin">
					<span class="fa fa-phone-square fa-lg"/>&#160;
					<span t-field="company.phone"/>
			    </p>
                            <p class="epay-nomargin">
					<span class="fa fa-envelope-square fa-lg"/>&#160;
					<span t-field="company.email"/>
			    </p>
                            <p class="epay-nomargin">
					<span class="fa fa-globe fa-lg"/>&#160;
					<span t-field="company.website"/>
			    </p>
		       </div>
		  <!--</div>--> <!--end of wrapper-->
		  <div class="col-xs-8 epay-black epay-bg-green">
			 <span class="epay-social fa fa-twitter fa-lg"/>&#160;<span t-field="company.twitter"/>
			 <span class="epay-social fa fa-facebook-square fa-lg"/>&#160;<span t-field="company.facebook"/>
			 <span class="epay-social fa fa-google-plus fa-lg"/>&#160;<span t-field="company.googleplus" />
		  </div>
                </div> <!--end of Header-->
               <div class="page col-xs-12 epay-black epay-bg-grey" style="margin-top:0px; padding-top:0px;">  <!--start of PAGE-->
	         <div class="col-xs-4 mt32 epay-bg-green epay-nofloat" >
			<h4><span class="fa fa-file-text-o"/>&#160; <span t-field="o.name"/></h4>
		 </div>
		 <div><!--start of wrapper -->
		   <div class="col-xs-4 epay-black">
		            <p class="epay-nomargin"> <span t-if="o.date_from">From: <span t-field="o.date_to"/></span></p>
		            <p class="epay-nomargin"> <span t-if="o.date_to">To: <span t-field="o.date_to"/></span></p>
		   </div>
		   <div class="col-xs-5 mt8 mb8 epay-bg-green epay-right">
			   <h3>
				<span>E-Payment Register</span>
			   </h3>
	     	   </div>
		 </div> <!--end of wrapper2-->
		 <div class="col-xs-12 mt8 mb8 epay-bg-grey"> <!--start of DATA-->
                    <table class="table  table-condensed epay-black epay-tr-test">
                        <thead class="epay-bg-green" style="page-break-inside: avoid">
                            <tr>
                                <th>No.</th>
                                <th>Ref</th>
                                <th>Employee</th>
                                <th>Emp No</th>
                                <th>PIN</th>
                                <th>ID No</th>
                                <th>Bank</th>
                                <th>Branch</th>
                                <th>Account No</th>
                                <th class="text-right">Net Pay (<span t-esc="company.currency_id.name"/>)</th>
                            </tr>
                        </thead>
                        <tbody>
			  <t t-foreach="o.slip_ids" t-as="l">
	                    <tr t-attf-class="epay-{{l_parity}}">
        	                <td><span t-esc="l_index + 1"/></td>
        	                <td><span t-field="l.slip_no"/></td>
                	        <td><span t-field="l.employee_name"/></td>
                        	<td><span t-field="l.employee_no"/></td>
                        	<td><span t-field="l.pin_no"/></td>
                        	<td><span t-field="l.id_no"/></td>
                        	<td><span t-field="l.bank_id"/></td>
                        	<td><span t-field="l.bank_branch"/></td>
                        	<td><span t-field="l.bank_acc"/></td>
                        	<td class="text-right"><span t-field="l.net_pay"/></td>
                    	    </tr>
			  </t>
                        </tbody>
                    </table>
		 </div><!--End of DATA-->
	         <div class="row">
        	   <div class="col-xs-3 pull-right epay-nosplit">
                    <table class="table table-condensed epay-black epay-tr-test"><tbody>
                        <tr class="border-black">
                            <td><strong>Total (<span t-esc="company.currency_id.name"/>)</strong></td>
                            <td class="text-right">
                                 <strong><span  class="epay-last-True" t-field="o.total"/></strong>
                            </td>
                        </tr></tbody>
                    </table>
                   </div>
            	</div>

	       </div><!--End of PAGE-->
	       <div class="footer col-xs-12 epay-black epay-bg-green epay-nopad">
                 <div class="text-center" style="border-top: 1px solid black;">
                    <ul t-if="not company.custom_footer" class="list-inline">
                      <li t-if="company.phone"> <span class="fa fa-phone-square fa-lg"/> <span t-field="company.phone"/></li>
                      <li  t-if="company.fax and company.phone">&amp;bull;</li>
                      <li t-if="company.fax"><span class="fa fa-phone-square fa-lg"/> <span t-field="company.fax"/></li>
                      <li t-if="company.email">&amp;bull;</li>
                      <li t-if="company.email"><span class="fa fa-envelope-o fa-lg"/> <span t-field="company.email"/></li>
                      <li t-if="company.website">&amp;bull;</li>
                      <li t-if="company.website"><span class="fa fa-globe fa-lg"/> <span t-field="company.website"/></li>
                    </ul>
                    <t t-if="company.custom_footer">
                       <span t-raw="company.rml_footer"/>
                    </t>

                    <ul class="list-inline">
                      <li>Page:</li>
                      <li><span class="page"/></li>
                      <li>/</li>
                      <li><span class="topage"/></li>
                    </ul>
                 </div>
               </div><!--End of FOOTER-->
    </template>
<template id="report_epayment_register">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'env.lang', 'hr_ke.report_epayment_register_document')"/>
        </t>
    </t>
</template>

         <!--custome Styles for the report -->
    <template id="ke_hr_assets_backend" name="epayment_css" inherit_id="report.layout">
         <xpath expr="//style" position="after">
                <style type="text/css">
                .epay-odd {
                        background-color:#EBEAE9;
                }
                .epay-even {
                        background-color:#D8D8D8;
                }
                .epay-last-True {
                        font-weight:bold;
                        text-decoration:underline;
                        /*border-bottom: 1px solid #000;*/
                }
		.epay-bg-grey{
			background:#EBEAE9 ! important; padding-right:0px; padding-left:0px; margin-top:0px;
		}
		.epay-bg-green{
			background:#9ABE00;
		}
		.epay-bg-black{
			background:#545454;
		}
		.epay-wrapper{
			overflow:hidden;
		}
		.epay-black{
			color:#545454 !important;
		}
		.epay-right{
			float:right;
		}
		.epay-nofloat{
			float:none;
		}
		.epay-nomargin{
			margin:0px;
		}
		.epay-green{
			color:#9ABE00 !important;
		}
		.epay-social{
			padding-left:15px;
		}
		.epay-nopad{
			 padding-right:0px; padding-left:0px;
		}
		.epay-th-pad > th{
			 padding-top:15px ! important; padding-bottom: 5px ! important;
		}
		.table-condensed > thead > tr > th,
		.table-condensed > tbody > tr > th,
		.table-condensed > tfoot > tr > th,
		.table-condensed > thead > tr > td,
		.table-condensed > tbody > tr > td,
		.table-condensed > tfoot > tr > td {
		  padding: 2px;
		}
		.epay-td-pad > td{
			 padding-top:15px ! important; padding-bottom: 2px ! important;
		}
		.epay-tr-test > thead > tr,
		.epay-tr-test > tbody > tr {
		  page-break-inside: avoid ! important;
		}
		.table-condensed > thead > tr > th {
         		border-bottom: 1px solid black !important;
     		}
		.epay-nosplit {
		   page-break-inside: avoid ! important;
		}
                </style>
       </xpath>
    </template>
</data>
</openerp>
