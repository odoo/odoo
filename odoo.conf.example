[options]
; This is the password that allows database operations:
; Keep this secure! This is the master password for database management.
admin_passwd = admin

; Database settings
db_host = localhost
db_port = 5432
db_user = odoo
db_password = odoo

; Addons paths (comma-separated)
; Include both the main addons directory and any custom addons
addons_path = odoo/addons,addons

; Server settings
http_port = 8069
http_interface = 127.0.0.1

; Data directory (for sessions, attachments, etc.)
data_dir = ./data

; Logging
logfile = ./odoo.log
log_level = info
log_handler = :INFO

; Performance
workers = 0
max_cron_threads = 2

; Security (for production)
; list_db = False
; dbfilter = ^%d$

; Other useful options:
; limit_time_cpu = 600
; limit_time_real = 1200
; limit_memory_soft = 2147483648
; limit_memory_hard = 2684354560
